<paragraph id="FF1E406CB866E55863F1F80E629BF8EE" blockId="68.[151,1436,1942,2041]" box="[151,503,1942,1969]" pageId="68" pageNumber="69">
<typeStatus id="201AFECEB866E55863F1F80E6393F8EF" box="[151,255,1942,1968]" pageId="68" pageNumber="69">Holotype</typeStatus>
male: Length 
<quantity id="3859ED89B866E55862C4F80E629FF8EE" box="[418,499,1942,1969]" metricMagnitude="-2" metricUnit="m" metricValue="1.1" pageId="68" pageNumber="69" unit="mm" value="11.0">11 mm</quantity>
