and 
<taxonomicName authorityName="Breddin" authorityYear="1905" box="[639,786,659,682]" class="Insecta" family="Pentatomidae" genus="Brachystethus" higherTaxonomySource="GBIF" kingdom="Animalia" order="Hemiptera" pageId="25" pageNumber="438" phylum="Arthropoda" rank="species" species="improvisus">
