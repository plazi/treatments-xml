<subSubSection id="87720C01855E21E7D52F13B388CBD76C" pageId="5" pageNumber="109" type="distribution">
<paragraph id="BA5D42CD927C3ADB2AE9B02AF1E3F794" pageId="5" pageNumber="109" type="mainText">
<taxonomicName id="A31C19D906AD55C0A595AC5325024DB8" class="Arachnida" family="Theridiidae" genus="Pholcomma" kingdom="Animalia" order="Araneae" pageId="5" pageNumber="109" phylum="Arthropoda" rank="genus">Pholcomma</taxonomicName>
