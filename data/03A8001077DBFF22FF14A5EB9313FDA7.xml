<emphasis id="B9756D1477DAFF21FF14A7C8915DFB22" bold="true" box="[151,288,1187,1209]" pageId="141" pageNumber="142">FIGURE 88.</emphasis>
<taxonomicName id="4C01CA8577DAFF21FEA4A7C8932FFB23" authority="Duchassaing &amp; Michelotti, 1864" authorityName="Duchassaing &amp; Michelotti" authorityYear="1864" box="[295,850,1187,1209]" class="Demospongiae" family="Hymedesmiidae" genus="Phorbas" kingdom="Animalia" order="Poecilosclerida" pageId="141" pageNumber="142" phylum="Porifera" rank="species" species="amaranthus">
