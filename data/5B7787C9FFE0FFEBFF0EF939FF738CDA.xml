<taxonomicName id="14DE4D5CFFE0FFEAFD79F8A9FC5E8F3B" box="[736,974,1837,1862]" class="Insecta" family="Noctuidae" genus="Spragueia" kingdom="Animalia" order="Lepidoptera" pageId="4" pageNumber="5" phylum="Arthropoda" rank="species" species="apicalis">
