<paragraph id="D36136DFFFE1FFEBFF5DFC73FD2E8C21" blockId="5.[151,1437,863,1191]" pageId="5" pageNumber="6">
<emphasis id="E1AAEACDFFE1FFEBFF5DFC73FE4E8C6C" bold="true" box="[196,478,1015,1041]" pageId="5" pageNumber="6">General distribution:</emphasis>
