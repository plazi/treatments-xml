<paragraph id="47D36A6FA0CD9BABA920A7BBC3EC892E" pageId="10" pageNumber="93">
<taxonomicName id="4C77DA3D411A4FEEC6921897DEEC006A" class="Insecta" family="Tenthredinidae" genus="Heterarthrus" higherTaxonomySource="CoL" kingdom="Animalia" lsidName="Heterarthrus fasciatus" order="Hymenoptera" pageId="10" pageNumber="93" phylum="Arthropoda" rank="species" species="fasciatus">Heterarthrus fasciatus</taxonomicName>
