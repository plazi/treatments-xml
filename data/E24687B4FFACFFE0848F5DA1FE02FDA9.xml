&quot; 
<taxonomicName id="ADEF4D21FFACFFE384BF5DA1FEE4FCBA" box="[167,286,751,777]" class="Diplopoda" family="Parajulidae" genus="Parajulus" kingdom="Animalia" order="Julida" pageId="13" pageNumber="14" phylum="Arthropoda" rank="genus">
