<heading id="580AA90C4C7CFF8BFED9FBA96D58FBD9" bold="true" box="[264,552,1099,1125]" fontSize="11" level="1" pageId="26" pageNumber="27" reason="1">
<taxonomicName id="C4FD65E34C7CFF8BFED9FBA96D58FBD9" authority="Wiedemann" authorityName="Wiedemann" box="[264,552,1099,1125]" class="Insecta" family="Bombyliidae" genus="Tomomyza" kingdom="Animalia" order="Diptera" pageId="26" pageNumber="27" phylum="Arthropoda" rank="genus">
<emphasis id="3189C2724C7CFF8BFED9FBA96D58FBD9" bold="true" box="[264,552,1099,1125]" pageId="26" pageNumber="27">
