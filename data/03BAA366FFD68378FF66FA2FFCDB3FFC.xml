</taxonomicName>
<number id="3DDB0057FFD6837AFD16F951FD4539A6" box="[743,758,1685,1709]" pageId="0" pageNumber="1" value="2.0">2</number>
: 
<number id="3DDB0057FFD6837AFD08F951FC9439A6" box="[761,807,1685,1709]" pageId="0" pageNumber="1" value="221.0">221</number>
) for four species. 
<taxonomicName id="4C1369F3FFD6837AFC05F951FA2F39A6" authority="Christoph, 1887" authorityName="Christoph" authorityYear="1887" box="[1012,1436,1685,1709]" class="Insecta" family="Noctuidae" genus="Agrotis" kingdom="Animalia" order="Lepidoptera" pageId="0" pageNumber="1" phylum="Arthropoda" rank="species" species="junctimacula">
<emphasis id="B967CE62FFD6837AFC05F951FB6C39A6" box="[1012,1247,1685,1709]" italics="true" pageId="0" pageNumber="1">Agrotis junctimacula</emphasis>
<bibRefCitation id="EF826F81FFD6837AFB16F951FA2F39A6" author="Christoph" box="[1255,1436,1685,1709]" pageId="0" pageNumber="1" refString="Christoph, H. (1887) Lepidoptera aus dem Achal-Tekke-Gebiet. Memoires sur les lepidopteres / rediges par N. M. Romanoff, 3, 20 - 125." type="journal article" year="1887">
