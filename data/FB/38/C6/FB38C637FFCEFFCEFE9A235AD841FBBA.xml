<subSubSection pageId="26" pageNumber="27" type="etymology">
<paragraph blockId="26.[264,1327,283,1070]" pageId="26" pageNumber="27">
<emphasis bold="true" box="[312,445,963,989]" pageId="26" pageNumber="27">Etymology</emphasis>
