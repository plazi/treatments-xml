<collectingRegion country="United States of America" name="Kansas" pageId="6" pageNumber="376">Kansas</collectingRegion>
to 
<collectingRegion box="[221,286,1043,1069]" country="United States of America" name="Texas" pageId="6" pageNumber="376">Texas</collectingRegion>
