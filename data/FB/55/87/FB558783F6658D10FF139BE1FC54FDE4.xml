<taxonomicName authority="Zone" authorityName="Zone" box="[431,790,380,407]" class="Trilobita" family="Dimeropygidae" genus="Bearriverops" higherTaxonomySource="GBIF,CoL" kingdom="Animalia" order="Proetida" pageId="16" pageNumber="217" phylum="Arthropoda" rank="species" species="alsacharovi">
