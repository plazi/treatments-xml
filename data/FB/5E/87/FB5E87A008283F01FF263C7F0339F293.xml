<taxonomicName authorityName="Drake" authorityYear="1948" box="[1172,1410,836,861]" class="Insecta" family="Tingidae" genus="Physatocheila" higherTaxonomySource="GBIF" kingdom="Animalia" order="Hemiptera" pageId="7" pageNumber="281" phylum="Arthropoda" rank="species" species="enodis">
