<collectionCode box="[826,844,1543,1564]" country="Chile" name="Departamento de Geologia, Universidad de Chile" pageId="36" pageNumber="258">R</collectionCode>
<subScript attach="left" box="[844,852,1552,1564]" fontSize="5" pageId="36" pageNumber="258">5</subScript>
