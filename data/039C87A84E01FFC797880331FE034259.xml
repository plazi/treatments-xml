<subSubSection id="C32F65354E01FFC797D80453FB1D4331" pageId="38" pageNumber="239" type="etymology">
<paragraph id="8B8A36BE4E01FFC797D80453FB1D4331" blockId="38.[151,1436,541,1826]" pageId="38" pageNumber="239">
<emphasis id="B941EAAC4E01FFC797D80453FEDD435D" bold="true" box="[199,334,1549,1574]" pageId="38" pageNumber="239">Etymology.</emphasis>
