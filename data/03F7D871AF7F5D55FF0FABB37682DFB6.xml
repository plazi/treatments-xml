, 
<taxonomicName id="4C5E12E4AF7C5D55FD40AB487503DF15" authorityName="Bierig" authorityYear="1940" box="[728,879,1291,1314]" class="Insecta" family="Staphylinidae" genus="Megarthrus" kingdom="Animalia" order="Coleoptera" pageId="2" pageNumber="109" phylum="Arthropoda" rank="species" species="inaequalis">
<emphasis id="B92AB575AF7C5D55FD40AB487503DF15" box="[728,879,1291,1314]" italics="true" pageId="2" pageNumber="109">M. inaequalis</emphasis>
</taxonomicName>
, 
<taxonomicName id="4C5E12E4AF7C5D55FC19AB48759CDF15" authorityName="Cuccodoro &amp; C. &amp; P. &amp; Ch-" authorityYear="2011" box="[897,1008,1291,1314]" class="Insecta" family="Staphylinidae" genus="Megarthrus" kingdom="Animalia" order="Coleoptera" pageId="2" pageNumber="109" phylum="Arthropoda" rank="species" species="machu">
