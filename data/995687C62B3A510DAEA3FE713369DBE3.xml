<taxonomicName id="D6FF4D532B3A510DAB2CFD6436D0DF7B" authority="Stein" authorityName="Stein" class="Insecta" family="Anthomyiidae" genus="Delia" kingdom="Animalia" order="Diptera" pageId="1" pageNumber="52" phylum="Arthropoda" rank="species" species="pilitibia">
