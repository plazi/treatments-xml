<taxonomicName id="D6FF4D532B3A510DAA1CFD64333FDF53" authority="Hennig" authorityName="Hennig" box="[1064,1289,746,772]" class="Insecta" family="Anthomyiidae" genus="Delia" kingdom="Animalia" order="Diptera" pageId="1" pageNumber="52" phylum="Arthropoda" rank="species" species="persica">
