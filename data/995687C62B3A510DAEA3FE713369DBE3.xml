<taxonomicName id="D6FF4D532B3A510DAF2BFC0437C4DFF3" authority="Fan" authorityName="Fan" box="[287,498,906,932]" class="Insecta" family="Anthomyiidae" genus="Delia" kingdom="Animalia" order="Diptera" pageId="1" pageNumber="52" phylum="Arthropoda" rank="species" species="penicilella">
