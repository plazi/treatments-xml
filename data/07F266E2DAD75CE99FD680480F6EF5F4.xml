<taxonomicName id="5C2C157A4DBD47A2CDFD7E97BCB1613D" class="Magnoliopsida" family="Asteraceae" genus="Acilepis" higherTaxonomySource="GBIF,CoL" kingdom="Plantae" lsidName="" order="Asterales" pageId="18" pageNumber="43" phylum="Tracheophyta" rank="species" species="saligna">
