<taxonomicName id="6A18DE4145B452E4641E7086919047C0" class="Magnoliopsida" family="Asteraceae" genus="Acilepis" higherTaxonomySource="GBIF,CoL" kingdom="Plantae" lsidName="" order="Asterales" pageId="18" pageNumber="43" phylum="Tracheophyta" rank="species" species="kingii">
