<taxonomicName id="3CF54D09A858FFA854D5FE05206032F5" authorityName="Schoenherr" authorityYear="1825" box="[672,780,439,458]" class="Insecta" family="Erirhinidae" higherTaxonomySource="GBIF" kingdom="Animalia" order="Coleoptera" pageId="4" pageNumber="41" phylum="Arthropoda" rank="family">Erirhinidae</taxonomicName>
