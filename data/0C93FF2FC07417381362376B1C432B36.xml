/ 
<taxonomicName id="E26955BB7B047A596120179C947032BE" lsidName="ahulili" pageId="47" pageNumber="48" rank="species" species="ahulili">ahulili</taxonomicName>
/ ♂ #7 / det. J.K. Liebherr 2014 // HOLOTYPE / 
<taxonomicName id="23CDA4537F711F7708915BE3D82E83F9" class="Insecta" family="Carabidae" genus="Mecyclothorax" higherTaxonomySource="CoL" kingdom="Animalia" lsidName="Mecyclothorax" order="Coleoptera" pageId="47" pageNumber="48" phylum="Arthropoda" rank="genus">Mecyclothorax</taxonomicName>
