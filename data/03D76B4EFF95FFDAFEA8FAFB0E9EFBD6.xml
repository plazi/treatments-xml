<taxonomicName id="4C7EA1DBFF95FFD9FEFFFAFB0D81FA93" authority="Vachon, 1950" authorityName="Vachon" authorityYear="1950" box="[351,673,1313,1339]" class="Arachnida" family="Buthidae" genus="Mesobuthus" higherTaxonomySource="GBIF,CoL" kingdom="Animalia" order="Scorpiones" pageId="1" pageNumber="2" phylum="Arthropoda" rank="genus">
<emphasis id="B90A064AFF95FFD9FEFFFAFB0ED3FA93" bold="true" box="[351,499,1313,1339]" italics="true" pageId="1" pageNumber="2">Mesobuthus</emphasis>
