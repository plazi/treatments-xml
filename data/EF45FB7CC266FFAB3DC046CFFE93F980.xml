<taxonomicName id="A0EC31E9C264FFAB39BF46DAFA8EFA85" box="[1256,1352,1270,1294]" class="Actinopterygii" family="Diceratiidae" genus="Bufoceratias" kingdom="Animalia" order="Lophiiformes" pageId="6" pageNumber="273" phylum="Chordata" rank="species" species="wedli">
