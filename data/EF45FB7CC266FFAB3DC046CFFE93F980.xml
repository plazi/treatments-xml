<taxonomicName id="A0EC31E9C264FFAB39794736FB4AFAB8" box="[1070,1164,1307,1331]" class="Actinopterygii" family="Diceratiidae" genus="Bufoceratias" kingdom="Animalia" order="Lophiiformes" pageId="6" pageNumber="273" phylum="Chordata" rank="species" species="shaoi">
