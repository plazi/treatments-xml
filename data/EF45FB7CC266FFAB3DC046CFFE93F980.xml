(
<number id="D124584DC264FFAB380D46DAFF1FFAB8" pageId="6" pageNumber="273" value="123.55000000000001" valueMax="147.4" valueMin="99.7">99.7– 147.4</number>
% SL, n= 
<number id="D124584DC264FFAB3C124736FEA7FAB8" box="[325,353,1307,1331]" pageId="6" pageNumber="273" value="12.0">12</number>
) and 
<taxonomicName id="A0EC31E9C264FFAB3CF64736FE3FFAB8" box="[417,505,1307,1331]" class="Actinopterygii" family="Diceratiidae" genus="Bufoceratias" kingdom="Animalia" order="Lophiiformes" pageId="6" pageNumber="273" phylum="Chordata" rank="species" species="thele">
<emphasis id="55989678C264FFAB3CF64736FE3FFAB8" box="[417,505,1307,1331]" italics="true" pageId="6" pageNumber="273">B. thele</emphasis>
</taxonomicName>
(
<number id="D124584DC264FFAB3F5F4736FD5EFAB8" box="[520,664,1307,1331]" pageId="6" pageNumber="273" value="142.75" valueMax="174.4" valueMin="111.1">111.1–174.4</number>
% SL, n= 
