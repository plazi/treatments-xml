<taxonomicName id="4C1ECBB7EC61FF83FE693D6B9167F9BA" authorityName="Schmidt" authorityYear="2009" baseAuthorityName="Toulgoet" baseAuthorityYear="2009" box="[416,523,1622,1644]" class="Insecta" family="Arctiidae" genus="Pseudohemihyalea" higherTaxonomySource="GBIF" kingdom="Animalia" order="Lepidoptera" pageId="5" pageNumber="68" phylum="Arthropoda" rank="species" species="fallaciosa">
