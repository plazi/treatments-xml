<taxonomicName id="4C1ECBB7EC62FF80FF1A3B9B92FAFF10" baseAuthorityName="Toulgoet" baseAuthorityYear="1994" box="[211,406,167,193]" class="Insecta" family="Arctiidae" genus="Pseudohemihyalea" higherTaxonomySource="GBIF" kingdom="Animalia" order="Lepidoptera" pageId="6" pageNumber="69" phylum="Arthropoda" rank="genus">
