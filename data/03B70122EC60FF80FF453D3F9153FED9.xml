<taxonomicName id="4C1ECBB7EC61FF83FF253D4B925BF95D" authorityName="Schmidt" authorityYear="2009" box="[236,311,1655,1676]" class="Insecta" family="Arctiidae" genus="Pseudohemihyalea" higherTaxonomySource="GBIF" kingdom="Animalia" order="Lepidoptera" pageId="5" pageNumber="68" phylum="Arthropoda" rank="species" species="potosi">
