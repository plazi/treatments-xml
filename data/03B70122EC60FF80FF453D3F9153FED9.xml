<taxonomicName id="4C1ECBB7EC61FF83FCE53D6B90E3F9BD" authorityName="Schmidt" authorityYear="2009" box="[812,911,1623,1644]" class="Insecta" family="Arctiidae" genus="Pseudohemihyalea" higherTaxonomySource="GBIF" kingdom="Animalia" order="Lepidoptera" pageId="5" pageNumber="68" phylum="Arthropoda" rank="species" species="sonorosa">
