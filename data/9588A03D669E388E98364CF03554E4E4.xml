<taxonomicName id="21C8B9E1A24E9AAC4D51116686F346E6" class="Magnoliopsida" family="Urticaceae" genus="Pilea" higherTaxonomySource="CoL" kingdom="Plantae" lsidName="Pilea crugeriana" order="Rosales" pageId="2" pageNumber="59" phylum="Tracheophyta" rank="species" species="crugeriana">
