<paragraph id="5C43F04780190EA89965672DC7A43409" pageId="2" pageNumber="59">
<taxonomicName id="84678CAC429422BEF1CFB08685173401" authorityName="Dorr &amp; Stergios" authorityYear="2014" class="Magnoliopsida" family="Urticaceae" genus="Pilea" higherTaxonomySource="CoL" kingdom="Plantae" lsidName="Pilea matthewii" order="Rosales" pageId="2" pageNumber="59" phylum="Tracheophyta" rank="species" species="matthewii">
<emphasis id="B4177CBB58AEC71E93C73BBB1E02ED61" italics="true" pageId="2" pageNumber="59">Pilea matthewii</emphasis>
