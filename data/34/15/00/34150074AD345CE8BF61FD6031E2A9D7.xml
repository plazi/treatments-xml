<paragraph pageId="48" pageNumber="49">
<emphasis bold="true" pageId="48" pageNumber="49">Myanmar</emphasis>
: 
<emphasis italics="true" pageId="48" pageNumber="49">hroirwk</emphasis>
, 
<emphasis italics="true" pageId="48" pageNumber="49">mai-hen</emphasis>
, 
<emphasis italics="true" pageId="48" pageNumber="49">mai-mahen</emphasis>
, 
<emphasis italics="true" pageId="48" pageNumber="49">mai-naw</emphasis>
, 
<emphasis italics="true" pageId="48" pageNumber="49">makalaw</emphasis>
, 
<emphasis italics="true" pageId="48" pageNumber="49">tawitho</emphasis>
, 
<emphasis italics="true" pageId="48" pageNumber="49">thiag-riang</emphasis>
