<taxonomicName authority="I. Geoffroy, 1838" authorityName="I. Geoffroy" authorityYear="1838" class="Mammalia" family="Echimyidae" genus="Trinomys" higherTaxonomySource="CoL" kingdom="Animalia" lsidName="Trinomys albispinus" order="Rodentia" pageId="20" pageNumber="125" phylum="Chordata" rank="species" species="albispinus">
