<taxonomicName authority="Silvestri" authorityName="Silvestri" box="[294,630,1245,1267]" class="Insecta" family="Pseudococcidae" genus="Eumyrmococcus" kingdom="Animalia" order="Hemiptera" pageId="51" pageNumber="52" phylum="Arthropoda" rank="species" species="smithii">
