<taxonomicName id="4C064D081974FFB368BAA5D572DFFA5F" authorityName="Steenis &amp; Hippa &amp; Mutin" authorityYear="2018" box="[652,755,1458,1483]" class="Insecta" family="Syrphidae" genus="Sphegina" kingdom="Animalia" order="Diptera" pageId="84" pageNumber="85" phylum="Arthropoda" rank="species" species="gigantea">
