<taxonomicName id="B59BF6D03902FF8864D4662FF339FCA7" box="[1198,1322,844,869]" class="Malacostraca" family="Pinnotheridae" genus="Scleroplax" kingdom="Animalia" order="Decapoda" pageId="4" pageNumber="37" phylum="Arthropoda" rank="genus">
