<subSubSection pageId="21" pageNumber="114" type="nomenclature">
<paragraph pageId="21" pageNumber="114">
<taxonomicName LSID="MB828887" authority="H. Wang, Q. Lu &amp; Z. Zhang" class="Sordariomycetes" family="Ophiostomataceae" genus="Sporothrix" higherTaxonomySource="CoL" kingdom="Fungi" lsidName="Sporothrix pseudoabietina" order="Ophiostomatales" pageId="21" pageNumber="114" phylum="Ascomycota" rank="species" species="pseudoabietina">Sporothrix pseudoabietina H. Wang, Q. Lu &amp; Z. Zhang</taxonomicName>
