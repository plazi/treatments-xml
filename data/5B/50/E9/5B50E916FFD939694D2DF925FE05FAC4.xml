<emphasis bold="true" box="[264,480,1480,1504]" pageId="73" pageNumber="74">FIGURES 327­335</emphasis>
. Genitalia of 
<taxonomicName authority="Gusarov" authorityName="Gusarov" box="[638,939,1481,1504]" class="Insecta" family="Staphylinidae" genus="Geostiba" kingdom="Animalia" order="Coleoptera" pageId="73" pageNumber="74" phylum="Arthropoda" rank="species" species="silvigena" status="sp. n.">
<taxonomicName box="[638,838,1481,1504]" class="Insecta" family="Staphylinidae" genus="Geostiba" higherTaxonomySource="CoL" kingdom="Animalia" order="Coleoptera" pageId="73" pageNumber="74" phylum="Arthropoda" rank="species" species="silvigena">
<emphasis box="[638,838,1481,1504]" italics="true" pageId="73" pageNumber="74">
<taxonomicName box="[638,734,1481,1504]" class="Insecta" family="Staphylinidae" genus="Geostiba" higherTaxonomySource="CoL" kingdom="Animalia" order="Coleoptera" pageId="73" pageNumber="74" phylum="Arthropoda" rank="genus">Geostiba</taxonomicName>
<taxonomicName authority="Gusarov" authorityName="Gusarov" box="[742,838,1481,1504]" pageId="73" pageNumber="74" rank="species" species="silvigena" status="sp. n.">silvigena</taxonomicName>
</emphasis>
</taxonomicName>
Gusarov
</taxonomicName>
, 
<taxonomicNameLabel box="[950,1011,1480,1504]" pageId="73" pageNumber="74" rank="species">
<emphasis bold="true" box="[950,1011,1480,1504]" pageId="73" pageNumber="74">sp. n.</emphasis>
