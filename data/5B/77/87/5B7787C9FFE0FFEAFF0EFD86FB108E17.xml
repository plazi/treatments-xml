<taxonomicName box="[649,762,1616,1641]" class="Magnoliopsida" family="Asteraceae" genus="Ambrosia" kingdom="Plantae" order="Asterales" pageId="4" pageNumber="5" phylum="Tracheophyta" rank="genus">
<emphasis box="[649,762,1616,1641]" italics="true" pageId="4" pageNumber="5">Ambrosia</emphasis>
</taxonomicName>
spp., 
<taxonomicName box="[832,962,1616,1642]" class="Magnoliopsida" family="Asteraceae" kingdom="Plantae" order="Asterales" pageId="4" pageNumber="5" phylum="Tracheophyta" rank="family">Asteraceae</taxonomicName>
