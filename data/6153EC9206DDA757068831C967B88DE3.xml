<taxonomicName id="DA2CB44BE21D87EFE3601F4B060FE7F8" authorityName="Latreille" authorityYear="1809" class="Insecta" family="Apidae" genus="Xylocopa" higherTaxonomySource="CoL" kingdom="Animalia" lsidName="Xylocopa dimidiata" order="Hymenoptera" pageId="12" pageNumber="43" phylum="Arthropoda" rank="species" species="dimidiata">Xylocopa dimidiata</taxonomicName>
