<taxonomicName id="87AD317EE6CFFC09E0D98D6C5A7F8D3E" class="Insecta" family="Pantheidae" genus="Gaujonia" higherTaxonomySource="CoL" kingdom="Animalia" lsidName="Gaujonia vau-nigrum" order="Lepidoptera" pageId="0" pageNumber="71" phylum="Arthropoda" rank="species" species="vau-nigrum">
