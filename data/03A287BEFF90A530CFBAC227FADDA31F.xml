<collectingRegion id="49CFF84AFF90A530CD3CC482FDDFA2CF" box="[529,582,1234,1260]" country="Papua New Guinea" name="Gulf" pageId="41" pageNumber="42">Gulf</collectingRegion>
of 
<location id="8ED46073FF90A530CD43C482FD52A2CF" LSID="urn:lsid:plazi:treatment:03A287BEFF90A530CFBAC227FADDA31F:8ED46073FF90A530CD43C482FD52A2CF" box="[622,715,1234,1260]" name="Mannar" pageId="41" pageNumber="42" stateProvince="Gulf">Mannar</location>
