<elevation id="0026D19BFF90A530CFBAC482FF6BA2CF" box="[151,242,1234,1260]" metricMagnitude="1" metricUnit="m" metricValue="1.4" metricValueMax="2.0" metricValueMin="0.8" pageId="41" pageNumber="42" unit="m" value="14.0" valueMax="20.0" valueMin="8.0">8–20 m</elevation>
</quantity>
