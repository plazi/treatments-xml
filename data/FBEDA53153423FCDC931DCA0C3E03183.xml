<normalizedToken id="54455B019702EC35BC4ACDE6246EDB83" originalValue="Concepción">Concepcion</normalizedToken>
, 
<emphasis id="417EDB345DA1AFDA3BA775BA386E5814" italics="true" pageId="0" pageNumber="1">J.R.I. Wood &amp; D. Soto</emphasis>
