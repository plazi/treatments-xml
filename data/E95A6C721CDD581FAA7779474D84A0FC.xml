<taxonomicName id="B021BB8DFF22B79289C4CF51EC5B0214" class="Magnoliopsida" family="Convolvulaceae" genus="Ipomoea" kingdom="Plantae" order="Solanales" phylum="Tracheophyta" rank="species" species="microsepala">
