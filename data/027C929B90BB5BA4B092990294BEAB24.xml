<taxonomicName id="CFDBE90DA4873277674168605CEECAAE" class="Agaricomycetes" family="Fagaceae" genus="Sarcodon" higherTaxonomySource="CoL" kingdom="Fungi" lsidName="" order="Thelephorales" pageId="0" pageNumber="83" phylum="Basidiomycota" rank="family">Fagaceae</taxonomicName>
