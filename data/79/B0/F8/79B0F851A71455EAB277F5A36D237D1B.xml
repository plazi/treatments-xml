<emphasis italics="true" pageId="204" pageNumber="205">Conostegia friedmaniorum</emphasis>
</taxonomicName>
, 
<taxonomicName authority="Kriebel, 2016" authorityName="Kriebel" authorityYear="2016" baseAuthorityName="Kriebel &amp; Almeda" baseAuthorityYear="2016" class="Magnoliopsida" family="Melastomataceae" genus="Conostegia" higherTaxonomySource="GBIF" kingdom="Plantae" lsidName="Conostegia galdamesiae" order="Myrtales" pageId="204" pageNumber="205" phylum="Tracheophyta" rank="species" species="galdamesiae">
<emphasis italics="true" pageId="204" pageNumber="205">Conostegia galdamesiae</emphasis>
</taxonomicName>
, and 
<taxonomicName authority="Kriebel, 2016" authorityName="Kriebel" authorityYear="2016" baseAuthorityName="Umana &amp; Almeda" baseAuthorityYear="2016" class="Magnoliopsida" family="Melastomataceae" genus="Conostegia" higherTaxonomySource="GBIF" kingdom="Plantae" lsidName="Conostegia pendula" order="Myrtales" pageId="204" pageNumber="205" phylum="Tracheophyta" rank="species" species="pendula">
<emphasis italics="true" pageId="204" pageNumber="205">Conostegia pendula</emphasis>
</taxonomicName>
