<paragraph pageId="204" pageNumber="205">
<taxonomicName authority="Kriebel, 2016" authorityName="Kriebel" authorityYear="2016" baseAuthorityName="Kriebel &amp; Almeda" baseAuthorityYear="2016" class="Magnoliopsida" family="Melastomataceae" genus="Conostegia" higherTaxonomySource="GBIF" kingdom="Plantae" lsidName="Conostegia papillopetala" order="Myrtales" pageId="204" pageNumber="205" phylum="Tracheophyta" rank="species" species="papillopetala">
<emphasis italics="true" pageId="204" pageNumber="205">Conostegia papillopetala</emphasis>
</taxonomicName>
