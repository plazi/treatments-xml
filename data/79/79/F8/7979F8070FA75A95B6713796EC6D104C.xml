. 
<taxonomicName class="Sordariomycetes" family="Xylariaceae" genus="Nemania" higherTaxonomySource="CoL" kingdom="Fungi" lsidName="Nemania carbonacea" order="Xylariales" pageId="0" pageNumber="39" phylum="Ascomycota" rank="species" species="carbonacea">
