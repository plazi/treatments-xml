<collectionCode box="[764,870,1736,1763]" country="United Kingdom" httpUri="http://biocol.org/urn:lsid:biocol.org:col:34665" lsid="urn:lsid:biocol.org:col:34665" name="Natural History Museum, London" pageId="20" pageNumber="171" type="Museum">NHMUK</collectionCode>
010812625 in the 
<collectionCode box="[1073,1179,1737,1763]" country="United Kingdom" httpUri="http://biocol.org/urn:lsid:biocol.org:col:34665" lsid="urn:lsid:biocol.org:col:34665" name="Natural History Museum, London" pageId="20" pageNumber="171" type="Museum">NHMUK</collectionCode>
