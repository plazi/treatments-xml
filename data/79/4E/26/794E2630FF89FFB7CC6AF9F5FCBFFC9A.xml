<emphasis box="[787,819,1011,1040]" italics="true" pageId="2" pageNumber="131">1b</emphasis>
5, 
<emphasis box="[862,894,1011,1039]" italics="true" pageId="2" pageNumber="131">1a</emphasis>
9, 
