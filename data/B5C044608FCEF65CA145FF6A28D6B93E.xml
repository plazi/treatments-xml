/ 
<taxonomicName id="B62BAD331E91A08550F1027EDDC26421" authorityName="Liebherr" authorityYear="2018" class="Insecta" family="Carabidae" genus="Mecyclothorax" higherTaxonomySource="CoL" kingdom="Animalia" lsidName="Mecyclothorax megalovatulus" order="Coleoptera" pageId="29" pageNumber="30" phylum="Arthropoda" rank="species" species="megalovatulus">Mecyclothorax megalovatulus</taxonomicName>
