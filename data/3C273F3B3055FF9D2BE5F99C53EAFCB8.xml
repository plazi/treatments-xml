<taxonomicName id="738EF5AE3054FF9D2FD6FEFC5268FEC8" authority="Waldren" authorityName="Waldren" authorityYear="2020" box="[1188,1392,331,357]" class="Insecta" family="Hymenoptera (awaiting allocation)" genus="Invreiella" higherTaxonomySource="GBIF" kingdom="Animalia" order="Hymenoptera" pageId="43" pageNumber="194" phylum="Arthropoda" rank="species" species="tequila" status="sp. nov.">
<emphasis id="86FA523F3054FF9D2FD6FEFC5211FEC8" box="[1188,1289,331,357]" italics="true" pageId="43" pageNumber="194">I. tequila</emphasis>
