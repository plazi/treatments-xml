and 
<collectingCountry id="F30DB092FFD6FF99FCCE270C3BF4FAE6" box="[856,924,1292,1317]" name="Brazil" pageId="6" pageNumber="323">Brazil</collectingCountry>
(
<bibRefCitation id="EF8B8DF3FFD6FF99FC3A270C3C9EFAE7" author="Piacentino" box="[940,1270,1292,1317]" pageId="6" pageNumber="323" refString="Piacentino, G. L. M. &amp; Luzzatto, D. C. (2004) Hippocampus patagonicus sp. nov., nuevo caballito de mar para la Argentina (Pisces, Syngnathiformes). Revista del Museo Argentino de Ciencas Naturales, 6, 339 - 349." type="journal article" year="2004">
