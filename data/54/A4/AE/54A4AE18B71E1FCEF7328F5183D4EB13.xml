<subSubSection type="nomenclature">
<paragraph pageNumber="434">
<taxonomicName LSID-HNS="urn:lsid:biosci.ohio-state.edu:osuc_concepts:179275" authority="Forel (Atopogyne)" authorityName="Forel (Atopogyne)" class="Insecta" family="Formicidae" genus="Cremastogaster" higherTaxonomySource="GBIF" kingdom="Animalia" lsidName="Cremastogaster opaciceps defleta Forel" lsidName-HNS="Cremastogaster opaciceps defleta Forel" order="Hymenoptera" pageNumber="434" phylum="Arthropoda" rank="subSpecies" species="opaciceps" subSpecies="defleta">Cremastogaster opaciceps MAYR., subsp, defleta</taxonomicName>
<taxonomicNameLabel rank="subSpecies">n. subsp.</taxonomicNameLabel>
</paragraph>
