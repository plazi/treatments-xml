. 
<taxonomicName box="[333,484,1004,1025]" class="Arachnida" family="Oplitidae" genus="Oplitis" higherTaxonomySource="GBIF" kingdom="Animalia" order="Mesostigmata" pageId="3" pageNumber="397" phylum="Arthropoda" rank="species" species="ticumbi">
