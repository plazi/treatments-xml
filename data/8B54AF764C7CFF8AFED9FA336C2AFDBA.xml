<taxonomicName id="C4FD65E34C7CFF8BFEA0F8F26DE0F89B" authority="Bezz" authorityName="Bezz" box="[369,656,1808,1831]" class="Insecta" family="Bombyliidae" genus="Tomomyza" kingdom="Animalia" order="Diptera" pageId="26" pageNumber="27" phylum="Arthropoda" rank="species" species="barbatula">Tomomyza barbatula Bezz</taxonomicName>
