<taxonomicName id="EEB7F3E17445BF51CE36FB1AFAC9F8C7" authorityName="Hubner" authorityYear="1825" box="[1282,1400,1871,1893]" class="Insecta" family="Yponomeutidae" genus="Argyresthia" kingdom="Animalia" order="Lepidoptera" pageId="13" pageNumber="68" phylum="Arthropoda" rank="genus">
