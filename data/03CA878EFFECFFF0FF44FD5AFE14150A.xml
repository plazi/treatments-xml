<taxonomicName id="4C634D1BFFECFFF0FF45FA95FE941548" authorityName="Lepeletier" authorityYear="1841" box="[171,326,1292,1317]" class="Insecta" family="Apidae" genus="Centris" kingdom="Animalia" order="Hymenoptera" pageId="4" pageNumber="5" phylum="Arthropoda" rank="species" species="collaris">
