<taxonomicName id="4C634D1BFFECFFF0FE1CFB75FCC41568" authority="Lepeletier, 1841" authorityName="Lepeletier" authorityYear="1841" box="[498,790,1260,1285]" class="Insecta" family="Apidae" genus="Centris" kingdom="Animalia" order="Hymenoptera" pageId="4" pageNumber="5" phylum="Arthropoda" rank="species" species="dorsata">
