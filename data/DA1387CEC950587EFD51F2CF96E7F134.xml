and 
<taxonomicName id="95BA4D5BC950587FFB80F31893CCF32D" authorityName="Sanborn" authorityYear="1951" box="[1052,1220,258,281]" class="Mammalia" family="Didelphidae" genus="Caluromysiops" kingdom="Animalia" order="Didelphimorphia" pageId="90" pageNumber="91" phylum="Chordata" rank="genus">
