<quantity id="4CABAE94FFA7FFDAFEBBFA5EDA8BDA96" box="[305,418,1484,1507]" metricMagnitude="0" metricUnit="m" metricValue="3.6576" pageId="17" pageNumber="18" unit="ft" value="12.0">12,000 ft</quantity>
(UMMZ 155585); 6.2 km (by road) W Papallacta, 
<quantity id="4CABAE94FFA7FFDAFD91FA7BD9A2D975" box="[539,651,1513,1536]" metricMagnitude="0" metricUnit="m" metricValue="3.56616" pageId="17" pageNumber="18" unit="ft" value="11.7">11,700 ft</quantity>
