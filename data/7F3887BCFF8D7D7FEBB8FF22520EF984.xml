<taxonomicName id="30914D29FF8D7D7FEA16FEDC54EDFED1" authority="Cresson, 1878" authorityName="Cresson" authorityYear="1878" box="[313,710,291,315]" class="Insecta" family="Andrenidae" genus="Perdita" kingdom="Animalia" order="Hymenoptera" pageId="2" pageNumber="569" phylum="Arthropoda" rank="species" species="cephalotes">
