<collectingCountry id="B99151B5FF87FFB610F87925FD16F893" box="[661,733,1846,1870]" name="Oman" pageId="1" pageNumber="202">Oman</collectingCountry>
, Knight &amp; Nielson 
<number id="774E0302FF87FFB611D57925FC3FF893" box="[952,1012,1846,1870]" pageId="1" pageNumber="202" value="1990.0">1990</number>
