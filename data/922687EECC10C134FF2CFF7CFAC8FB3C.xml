<taxonomicName id="DD8F4D7BCC10C134FCD9FE0CFB8CFDE3" box="[866,1028,487,512]" class="Insecta" family="Arctiidae" genus="Miltochrista" kingdom="Animalia" order="Lepidoptera" pageId="18" pageNumber="45" phylum="Arthropoda" rank="species" species="hieroglyphica">
<emphasis id="28FBEAEACC10C134FCD9FE0CFB8CFDE3" box="[866,1028,487,512]" italics="true" pageId="18" pageNumber="45">hieroglyphica</emphasis>
</taxonomicName>
and 
<taxonomicName id="DD8F4D7BCC10C134FB87FE0CFB32FDE3" box="[1084,1210,487,512]" class="Insecta" family="Arctiidae" genus="Asura" kingdom="Animalia" order="Lepidoptera" pageId="18" pageNumber="45" phylum="Arthropoda" rank="species" species="hyporhoda">
<emphasis id="28FBEAEACC10C134FB87FE0CFB32FDE3" box="[1084,1210,487,512]" italics="true" pageId="18" pageNumber="45">hyporhoda</emphasis>
</taxonomicName>
