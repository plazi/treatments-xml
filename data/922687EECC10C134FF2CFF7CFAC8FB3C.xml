<subSubSection id="52956573CC10C134FF7EFE0DFB4AFDE3" box="[197,1218,486,512]" pageId="18" pageNumber="45" type="diagnosis">
<paragraph id="1A3036F8CC10C134FF7EFE0DFB4AFDE3" blockId="18.[151,1437,370,1247]" box="[197,1218,486,512]" pageId="18" pageNumber="45">
<emphasis id="28FBEAEACC10C134FF7EFE0DFECCFDE3" bold="true" box="[197,324,486,512]" pageId="18" pageNumber="45">Diagnosis.</emphasis>
