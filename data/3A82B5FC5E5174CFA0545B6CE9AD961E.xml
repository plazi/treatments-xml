<taxonomicName id="0E1ECCE481B75C2A6B9CD318371DEB31" LSID="3A82B5FC-5E51-74CF-A054-5B6CE9AD961E" authority="L." authorityName="L." class="Magnoliopsida" family="Papaveraceae" genus="Argemone" higherTaxonomySource="CoL" kingdom="Plantae" lsidName="Argemone mexicana" order="Ranunculales" pageId="131" pageNumber="132" phylum="Tracheophyta" rank="species" species="mexicana">Argemone mexicana L.</taxonomicName>
