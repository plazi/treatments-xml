<subSubSection box="[199,964,690,715]" pageId="9" pageNumber="368" type="etymology">
<paragraph blockId="9.[151,1437,258,931]" box="[199,964,690,715]" pageId="9" pageNumber="368">
<emphasis bold="true" box="[199,334,690,715]" pageId="9" pageNumber="368">Etymology.</emphasis>
