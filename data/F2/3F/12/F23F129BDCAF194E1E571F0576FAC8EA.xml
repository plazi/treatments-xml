<paragraph pageId="null" pageNumber="277">
<pageBreakToken pageId="null" pageNumber="277" start="start">Artengruppe</pageBreakToken>
der 
<taxonomicName authority="L." class="Magnoliopsida" family="Saxifragaceae" genus="Saxifraga" kingdom="Plantae" order="Saxifragales" pageId="null" pageNumber="277" phylum="Tracheophyta" rank="species" species="oppositifolia">
Saxifraga 
<normalizedToken originalValue="oppositifólia" pageId="null" pageNumber="277">oppositifolia</normalizedToken>
<authorityName pageId="null" pageNumber="277">L.</authorityName>
</taxonomicName>
</paragraph>
