<paragraph id="8B8B36A99E00FF85BEA7FE869FCD6C10" blockId="13.[140,1108,272,1672]" box="[140,749,272,299]" pageId="13" pageNumber="30">
<emphasis id="B940EABB9E00FF85BEA7FE869C076C10" bold="true" box="[140,295,272,298]" pageId="13" pageNumber="30">
<emphasis id="B940EABB9E00FF85BEA7FE869DE66C10" box="[140,198,272,298]" inLineHeading="true" pageId="13" pageNumber="30" reason="1">
