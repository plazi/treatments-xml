</emphasis>
<taxonomicName id="4C344D2A9E00FF85BF05FE869CC46C10" authority="Bruce, 2009" authorityName="Bruce" authorityYear="2009" box="[302,484,272,298]" class="Malacostraca" family="Serolidae" genus="Sedorolis" kingdom="Animalia" order="Isopoda" pageId="13" pageNumber="30" phylum="Arthropoda" rank="species" species="simplex" status="sp. n.">
