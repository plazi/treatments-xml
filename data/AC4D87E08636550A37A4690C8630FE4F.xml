<quantity id="E31C9B138636550D36D26D84862CFA47" box="[481,570,1445,1471]" metricMagnitude="3" metricUnit="m" metricValue="3.77" pageId="3" pageNumber="54" unit="m" value="3770.0">3770 m</quantity>
