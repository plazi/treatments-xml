<taxonomicName class="Hexapoda" family="Carabidae" genus="Cicindela" higherTaxonomySource="GBIF" kingdom="Animalia" lsidName="" order="Coleoptera" pageId="239" pageNumber="240" phylum="Arthropoda" rank="subSpecies" species="purpurea" subSpecies="mirabilis">
