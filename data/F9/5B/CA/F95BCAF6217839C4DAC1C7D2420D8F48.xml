<subSubSection pageId="15" pageNumber="16" type="nomenclature">
<paragraph pageId="15" pageNumber="16">
<taxonomicName LSID="http://zoobank.org/908D245E-2CF2-495B-B711-87CB4D6AB3EE" authority="Masner &amp; Talamas" class="Insecta" family="Platygastridae" genus="Helava" higherTaxonomySource="CoL" kingdom="Animalia" lsidName="Helava reducta" order="Hymenoptera" pageId="15" pageNumber="16" phylum="Arthropoda" rank="species" species="reducta">Helava reducta Masner &amp; Talamas</taxonomicName>
