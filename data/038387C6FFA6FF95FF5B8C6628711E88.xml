<taxonomicName id="4C2A4D53FFA6FF94FF5B8C662F3B1FA4" authority="' Pearl" authorityName="Pearl" box="[136,514,1905,1932]" class="Magnoliopsida" family="Crassulaceae" genus="Kalanchoe" kingdom="Plantae" order="Saxifragales" pageId="6" pageNumber="231" phylum="Tracheophyta" rank="species" species="porphyrocalyx">
