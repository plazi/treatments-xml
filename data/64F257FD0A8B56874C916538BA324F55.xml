<taxonomicName id="4F75F61616CE4F980287C4A21D912D8E" authorityName="Elmer" authorityYear="1908" class="Dicotyledoneae" family="Verbenaceae" genus="Clerodendrum" higherTaxonomySource="GBIF" kingdom="Plantae" lsidName="" order="Tubiflorae" pageId="4" pageNumber="5" phylum="Angiospermae" rank="species" species="klemmei">
