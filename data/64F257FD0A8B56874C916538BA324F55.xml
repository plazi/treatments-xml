<taxonomicName id="A0ED5EA5661D4F9B399C5E59327D96AC" authorityName="Fernando" authorityYear="2014" class="Dicotyledoneae" family="Violaceae" genus="Rinorea" higherTaxonomySource="GBIF" kingdom="Plantae" lsidName="" order="Violales" pageId="4" pageNumber="5" phylum="Angiospermae" rank="species" species="niccolifera">
<emphasis id="E4D4937935005C633D3069AAD2AD6E27" italics="true" pageId="4" pageNumber="5">Rinorea niccolifera</emphasis>
</taxonomicName>
