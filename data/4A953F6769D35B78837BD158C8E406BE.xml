<taxonomicName id="4472AC9299B866FAD29A3AC959B08095" authorityName="Balke &amp; Megna &amp; Zenteno &amp; Figueroa &amp; Hendrich" authorityYear="2020" class="Insecta" family="Dytiscidae" genus="Liodessus" higherTaxonomySource="CoL" kingdom="Animalia" lsidName="Liodessus caxamarca" order="Coleoptera" pageId="0" pageNumber="173" phylum="Arthropoda" rank="species" species="caxamarca">
<emphasis id="89BF1F1F93135E4D5B952C0132310756" italics="true" pageId="0" pageNumber="173">Liodessus caxamarca</emphasis>
</taxonomicName>
sp. nov. (
<emphasis id="2F0DD5C18027208DC8077B9CC05B0374" bold="true" pageId="0" pageNumber="173">A</emphasis>
); 
<taxonomicName id="27ED8242036685A7AEECDBA89B986DD5" authorityName="Balke &amp; Megna &amp; Zenteno &amp; Figueroa &amp; Hendrich" authorityYear="2020" class="Insecta" family="Dytiscidae" genus="Liodessus" higherTaxonomySource="CoL" kingdom="Animalia" lsidName="Liodessus altoperuensis" order="Coleoptera" pageId="0" pageNumber="173" phylum="Arthropoda" rank="species" species="altoperuensis">
