<taxonomicName id="4C3B1C80FF84CC463B2F2CE7FBAABAD6" authority="De Sousa &amp; Mermudes" authorityName="De Sousa &amp; Mermudes" authorityYear="2021" box="[523,1041,907,933]" class="Magnoliopsida" family="Fabaceae" genus="Pygidiapion" kingdom="Plantae" order="Fabales" pageId="3" pageNumber="578" phylum="Tracheophyta" rank="species" species="zeppelinii" status="sp. n.">
<emphasis id="B94FBB11FF84CC463B2F2CE7FCBCBAD6" box="[523,775,907,933]" italics="true" pageId="3" pageNumber="578">Pygidiapion zeppelinii</emphasis>
De Sousa &amp; Mermudes
</taxonomicName>
<taxonomicNameLabel id="A27C066AFF84CC463D332CE7FBEFBAD6" box="[1047,1108,907,933]" pageId="3" pageNumber="578" rank="species">
<emphasis id="B94FBB11FF84CC463D332CE7FB8ABAD6" bold="true" box="[1047,1073,907,933]" pageId="3" pageNumber="578">sp</emphasis>
. 
<emphasis id="B94FBB11FF84CC463D1A2CE7FBF5BAD6" bold="true" box="[1086,1102,907,933]" pageId="3" pageNumber="578">n</emphasis>
.
</taxonomicNameLabel>
, associated with 
<taxonomicName id="4C3B1C80FF84CC463C372CE7FEBABABA" authorityName="Vogel" authorityYear="1837" class="Magnoliopsida" family="Fabaceae" genus="Pterocarpus" kingdom="Plantae" order="Fabales" pageId="3" pageNumber="578" phylum="Tracheophyta" rank="species" species="violaceus">
