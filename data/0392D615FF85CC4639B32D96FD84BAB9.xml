<taxonomicName id="4C3B1C80FF84CC463A822C0BFB68BAF2" authority="Benth." authorityName="Benth." box="[934,1235,871,897]" class="Magnoliopsida" family="Fabaceae" genus="Dalbergia" kingdom="Plantae" order="Fabales" pageId="3" pageNumber="578" phylum="Tracheophyta" rank="species" species="foliolosa">
<emphasis id="B94FBB11FF84CC463A822C0BFB3ABAF2" box="[934,1153,871,897]" italics="true" pageId="3" pageNumber="578">Dalbergia foliolosa</emphasis>
