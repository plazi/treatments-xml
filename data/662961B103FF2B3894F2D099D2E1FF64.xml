<taxonomicName id="B909ADDB8D29196B86F1C427415A22D7" class="Actinopterygii" family="Bagridae" genus="Mystus" higherTaxonomySource="CoL" kingdom="Animalia" order="Siluriformes" pageNumber="1" phylum="Chordata" rank="genus">Mystus Scopoli</taxonomicName>
