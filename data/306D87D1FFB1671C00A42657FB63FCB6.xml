<taxonomicNameLabel id="918357AEFFB1671E03692268FC68F8DC" box="[858,965,1875,1901]" pageId="5" pageNumber="6" rank="species">n. comb.</taxonomicNameLabel>
</emphasis>
, 
<taxonomicName id="7FC44D44FFB1671E03E7226FFB5AF8DF" authority="(Gonzalez)" authorityName="Hodgson &amp; Miller" authorityYear="2010" baseAuthorityName="Hodgson &amp; Miller" baseAuthorityYear="2010" box="[980,1271,1876,1902]" class="Florideophyceae" family="Cystocloniaceae" genus="Acanthococcus" kingdom="Plantae" order="Gigartinales" pageId="5" pageNumber="6" phylum="Rhodophyta" rank="species" species="pituilensis" status="n. comb.">
