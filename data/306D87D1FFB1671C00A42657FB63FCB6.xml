and 
<taxonomicName id="7FC44D44FFB1671E00A42242FE3BF822" authority="(Leonardi)" authorityName="Hodgson &amp; Miller" authorityYear="2010" baseAuthorityName="Hodgson &amp; Miller" baseAuthorityYear="2010" box="[151,406,1913,1939]" class="Florideophyceae" family="Cystocloniaceae" genus="Acanthococcus" kingdom="Plantae" order="Gigartinales" pageId="5" pageNumber="6" phylum="Rhodophyta" rank="species" species="lahillei" status="n. comb.">
