<collectingCountry box="[1158,1263,872,898]" name="Vanuatu" pageId="7" pageNumber="50">Vanuatu</collectingCountry>
], 
<date box="[1282,1431,872,898]" pageId="7" pageNumber="50" value="1978-02-08" valueMax="1978-02-11" valueMin="1978-02-08">
<number box="[1282,1341,872,898]" pageId="7" pageNumber="50" value="9.5" valueMax="11.0" valueMin="8.0">8–11</number>
.ii. 
<number box="[1366,1431,872,898]" pageId="7" pageNumber="50" value="1978.0">1978</number>
