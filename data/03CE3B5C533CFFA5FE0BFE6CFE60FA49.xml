<collectingRegion id="49A344A8533CFFA5FD9DFC0EFD1CFBAF" box="[539,711,1013,1037]" country="Brazil" name="Rio de Janeiro" pageId="9" pageNumber="882">Rio de Janeiro</collectingRegion>
