<paragraph id="8BD88A4A533CFFA5FF16FC6DFE60FA49" blockId="9.[144,1104,879,1516]" pageId="9" pageNumber="882">
<taxonomicName id="4C67F1C9533CFFA5FF16FC6DFE75FC0C" baseAuthorityName="Mello-Leitao" baseAuthorityYear="1929" box="[144,430,918,942]" class="Arachnida" family="Theraphosidae" genus="Hapalotremus" higherTaxonomySource="GBIF" kingdom="Animalia" order="Araneae" pageId="9" pageNumber="882" phylum="Arthropoda" rank="species" species="scintillans">
