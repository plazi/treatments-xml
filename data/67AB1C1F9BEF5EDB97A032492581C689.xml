<taxonomicName id="FB6E34DBA4C03CAA1B1FE9A78888E2EB" class="Dicotyledoneae" family="Flacourtiaceae" genus="Xylosma" higherTaxonomySource="GBIF" kingdom="Plantae" lsidName="" order="Violales" pageId="13" pageNumber="46" phylum="Angiospermae" rank="genus">
<emphasis id="33ACD40971AB48FC17156620B112B826" italics="true" pageId="13" pageNumber="46">Xylosma</emphasis>
