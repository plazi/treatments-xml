<taxonomicName id="616EF8BC290234A284D3E23CE4DCEC04" authorityName="Forest Brown" authorityYear="1935" class="Magnoliopsida" family="Cunoniaceae" genus="Weinmannia" higherTaxonomySource="GBIF" kingdom="Plantae" lsidName="" order="Oxalidales" pageId="13" pageNumber="46" phylum="Magnoliophyta" rank="species" species="marquesana">
<emphasis id="28DEB1C9FFACBB894CF995559B0F1CD6" italics="true" pageId="13" pageNumber="46">Weinmannia marquesana</emphasis>
</taxonomicName>
forest with diverse fern understory and other shrubs and trees such as species of 
<taxonomicName id="AEE9EAC299164C7DAF19241764484957" class="Rosopsida" family="Rubiaceae" genus="Coprosma" higherTaxonomySource="GBIF" kingdom="Plantae" lsidName="" order="Gentianales" pageId="13" pageNumber="46" phylum="Magnoliophyta" rank="genus">
<emphasis id="7D0CF1A9EF670F947E92E6D4491B9576" italics="true" pageId="13" pageNumber="46">Coprosma</emphasis>
</taxonomicName>
, 
<taxonomicName id="290497E65A23530D6A8DD5CB0E06DF0C" class="Magnoliopsida" family="Rhizophoraceae" genus="Crossostylis" higherTaxonomySource="GBIF,CoL" kingdom="Plantae" lsidName="" order="Malpighiales" pageId="13" pageNumber="46" phylum="Tracheophyta" rank="genus">
<emphasis id="CDBBAE60F58AAC81D324346FFDCEB451" italics="true" pageId="13" pageNumber="46">Crossostylis</emphasis>
</taxonomicName>
, 
<taxonomicName id="D3E6505D1982A9ECE6D64E0F420C32E8" class="Monocotyledoneae" family="Pandanaceae" genus="Freycinetia" higherTaxonomySource="GBIF" kingdom="Plantae" lsidName="" order="Pandanales" pageId="13" pageNumber="46" phylum="Angiospermae" rank="genus">
<emphasis id="F681C98E596EAB64B1C64FCF85C3000E" italics="true" pageId="13" pageNumber="46">Freycinetia</emphasis>
</taxonomicName>
, 
<taxonomicName id="359B2DF5223F202555FC976E66B5153B" class="Magnoliopsida" family="Aquifoliaceae" genus="Ilex" higherTaxonomySource="CoL" kingdom="Plantae" lsidName="" order="Aquifoliales" pageId="13" pageNumber="46" phylum="Tracheophyta" rank="genus">
<emphasis id="6D62A2CC7C3651B33F73997D88F7ACFB" italics="true" pageId="13" pageNumber="46">Ilex</emphasis>
</taxonomicName>
, 
<taxonomicName id="BB39D7DCA46AFDA64CE4C8251B083AF2" class="Dicotyledoneae" family="Rutaceae" genus="Melicope" higherTaxonomySource="GBIF" kingdom="Plantae" lsidName="" order="Rutales" pageId="13" pageNumber="46" phylum="Angiospermae" rank="genus">
<emphasis id="4016943CB067A1F5FB7B17EA443419BA" italics="true" pageId="13" pageNumber="46">Melicope</emphasis>
</taxonomicName>
, 
<taxonomicName id="0497049CB0881A116E89476EBB5BC445" class="Dicotyledoneae" family="Araliaceae" genus="Polyscias" higherTaxonomySource="GBIF" kingdom="Plantae" lsidName="" order="Umbelliflorae" pageId="13" pageNumber="46" phylum="Angiospermae" rank="genus">
<emphasis id="3B5BEAC37533B141A242915CBC6309FD" italics="true" pageId="13" pageNumber="46">Polyscias</emphasis>
</taxonomicName>
, 
<taxonomicName id="BF80AF4738307BD79AFA4546995FFCE9" class="Magnoliopsida" family="Rubiaceae" genus="Psychotria" higherTaxonomySource="CoL" kingdom="Plantae" lsidName="" order="Gentianales" pageId="13" pageNumber="46" phylum="Tracheophyta" rank="genus">
<emphasis id="C54AAF0546579E946F364DE0ACC64C58" italics="true" pageId="13" pageNumber="46">Psychotria</emphasis>
