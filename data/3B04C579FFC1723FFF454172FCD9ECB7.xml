<taxonomicName id="74AD0FECFFC1723FFEC84421FDECEC97" authorityName=", Gordon and Gonzalez" authorityYear="2019" box="[333,525,1647,1671]" class="Insecta" family="Coccinellidae" genus="Pentilia" kingdom="Animalia" order="Coleoptera" pageId="14" pageNumber="13" phylum="Arthropoda" rank="species" species="krystal">
