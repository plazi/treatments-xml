<treatmentCitationGroup id="C9D50F42195B5874202A3F22A0C4F77E" box="[113,930,1351,1370]" pageId="23" pageNumber="280">
<treatmentCitation id="68640E7D195B5874202A3F22A232F77E" author="BALY J. S." box="[113,340,1351,1370]" page="33" pageId="23" pageNumber="280" year="1858">
