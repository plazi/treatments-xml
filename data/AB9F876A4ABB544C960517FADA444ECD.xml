<taxonomicName id="1F88BE19B4FBF1ACDB1B04E5EA548A46" authorityName="Y. Feng Huang, W. B. Xu &amp; L. N. Dong" authorityYear="2019" class="Magnoliopsida" family="Primulaceae" genus="Lysimachia" higherTaxonomySource="CoL" kingdom="Plantae" lsidName="Lysimachia fanii" order="Ericales" pageId="0" pageNumber="75" phylum="Tracheophyta" rank="species" species="fanii">
