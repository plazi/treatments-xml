<taxonomicName id="AD224D6ADB5707EF9FDAE204067F5EDE" class="Lecanoromycetes" family="Graphidaceae" genus="Graphina" higherTaxonomySource="CoL" kingdom="Fungi" lsidName="Graphina lecanactiformis" order="Ostropales" pageId="11" pageNumber="24" phylum="Ascomycota" rank="species" species="lecanactiformis">Graphina lecanactiformis</taxonomicName>
