<materialsCitation id="56C10E65FFA6214BFF66FD0DFC8B6F54" ID-GBIF-Occurrence="3382671301" collectionCode="PDA" country="Japan" location="Type" municipality="Sugadaira" pageId="7" pageNumber="218" specimenCode="NBRC 33105" specimenCount="1" stateProvince="Nagano" typeStatus="holotype">
