<taxonomicName id="4C02A0C7FFF95634FCDDD60EF8500147" authority="(SDEI)" baseAuthorityName="SDEI" box="[870,1083,1566,1590]" class="Insecta" family="Platystomatidae" genus="Xiria" kingdom="Animalia" order="Diptera" pageId="27" pageNumber="51" phylum="Arthropoda" rank="species" species="papuana">
