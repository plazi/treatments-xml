<geoCoordinate id="EE36BD83FFF95634FC0DD683FF9601DA" box="[950,1021,1683,1707]" degrees="5" direction="south" minutes="58" orientation="latitude" pageId="27" pageNumber="51" precision="925" value="-5.9666667">5°58'S</geoCoordinate>
