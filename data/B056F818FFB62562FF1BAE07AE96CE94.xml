<quantity id="FF07E4EBFFB62561FB8FACE3A851C899" box="[1027,1126,1928,1955]" metricMagnitude="-5" metricUnit="m" metricValue="7" pageId="41" pageNumber="42" unit="mm" value="0.07">0.07 mm</quantity>
