<quantity id="FF07E4EBFFB62561FAB4AC08A9AAC845" box="[1336,1437,1891,1919]" metricMagnitude="-3" metricUnit="m" metricValue="1.95" pageId="41" pageNumber="42" unit="mm" value="1.95">1.95 mm</quantity>
