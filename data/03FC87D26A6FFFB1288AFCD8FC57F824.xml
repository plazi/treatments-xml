<number id="3D9D24E36A6FFFB12AF7F8B8FD71F8CF" box="[746,760,1887,1911]" pageId="1" pageNumber="36" value="6.0">6</number>
and 
<number id="3D9D24E36A6FFFB12B2FF8B8FCC8F8CF" box="[818,833,1887,1911]" pageId="1" pageNumber="36" value="7.0">7</number>
