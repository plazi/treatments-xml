<emphasis box="[151,339,1642,1665]" italics="true" pageId="1" pageNumber="294">Nitops mexicanus</emphasis>
(
<bibRefCitation author="Reitter" box="[353,494,1642,1665]" pageId="1" pageNumber="294" refString="Reitter, E. (1873) Systematische Eintheilung der Nitidularian. Ferhandlungen des naturforschenden Fereines in Brunn, 12, 5 - 194." type="journal article" year="1873">Reitter, 1873</bibRefCitation>
)
</taxonomicName>
= 
<taxonomicName authority="Parsons 1943: 167" authorityName="Parsons" authorityPageNumber="167" authorityYear="1943" box="[531,965,1642,1665]" class="Insecta" family="Nitidulidae" genus="Nitops" higherTaxonomySource="GBIF" kingdom="Animalia" order="Coleoptera" pageId="1" pageNumber="294" phylum="Arthropoda" rank="species" species="nigrovittatus" status="new synonymy">
<emphasis box="[531,742,1642,1665]" italics="true" pageId="1" pageNumber="294">Nitops nigrovittatus</emphasis>
(
<treatmentCitation author="Parsons" box="[756,957,1642,1665]" page="167" pageId="1" pageNumber="294" year="1943">
<bibRefCitation author="Parsons" box="[756,957,1642,1665]" pageId="1" pageNumber="294" refString="Parsons, C. T. (1943) A revision of Nearctic Nitidulidae (Coleoptera). Bulletin of the Museum of Comparative Zoology, 92, 121 - 273." type="journal article" year="1943">Parsons 1943: 167</bibRefCitation>
</treatmentCitation>
)
</taxonomicName>
, 
<taxonomicNameLabel box="[977,1145,1642,1665]" pageId="1" pageNumber="294">
<emphasis bold="true" box="[977,1145,1642,1665]" pageId="1" pageNumber="294">new synonymy</emphasis>
</taxonomicNameLabel>
