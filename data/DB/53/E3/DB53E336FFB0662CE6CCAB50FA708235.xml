<location LSID="urn:lsid:plazi:treatment:DB53E336FFB0662CE6CCAB50FA708235:562504FBFFB0662DE2DFAB0FFB378627" box="[1179,1261,1620,1646]" county="Greiz" municipality="Professor" name="Botany" pageId="4" pageNumber="45" stateProvince="Thueringen">Botany</location>
, 
<location LSID="urn:lsid:plazi:treatment:DB53E336FFB0662CE6CCAB50FA708235:562504FBFFB0662DE2B3AB0FFAA78627" box="[1271,1405,1620,1646]" county="Greiz" municipality="Professor" name="Systematics" pageId="4" pageNumber="45" stateProvince="Thueringen">Systematics</location>
and 
<location LSID="urn:lsid:plazi:treatment:DB53E336FFB0662CE6CCAB50FA708235:562504FBFFB0662DE6CCAB23FF2C86DB" box="[136,246,1656,1682]" county="Greiz" municipality="Professor" name="Evolution" pageId="4" pageNumber="45" stateProvince="Thueringen">Evolution</location>
at 
<location LSID="urn:lsid:plazi:treatment:DB53E336FFB0662CE6CCAB50FA708235:562504FBFFB0662DE75DAB23FDCA86DB" box="[281,528,1656,1682]" county="Greiz" municipality="Professor" name="Osnabruck University" pageId="4" pageNumber="45" stateProvince="Thueringen">Osnabrück University</location>
