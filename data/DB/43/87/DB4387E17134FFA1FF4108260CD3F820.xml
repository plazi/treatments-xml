<taxonomicName authority="MacLeay, 1819" authorityName="MacLeay" authorityYear="1819" box="[192,285,580,604]" class="Insecta" family="Lucanidae" genus="Nigidius" kingdom="Animalia" order="Coleoptera" pageId="3" pageNumber="2" phylum="Arthropoda" rank="genus">obesus</taxonomicName>
