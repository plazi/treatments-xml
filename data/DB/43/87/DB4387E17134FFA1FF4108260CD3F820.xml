<caption ID-DOI="http://doi.org/10.5281/zenodo.3699467" ID-Zenodo-Dep="3699467" box="[192,944,1419,1442]" httpUri="https://zenodo.org/record/3699467/files/figure.png" pageId="4" pageNumber="3" startId="4.[192,275,1419,1441]" targetBox="[228,1407,238,1367]" targetPageId="4">
<paragraph blockId="4.[192,944,1419,1442]" box="[192,944,1419,1442]" pageId="4" pageNumber="3">
