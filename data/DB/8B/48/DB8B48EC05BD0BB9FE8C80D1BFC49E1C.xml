<taxonomicName class="Polychaeta" family="Hesionidae" genus="Podarkeopsis" higherTaxonomySource="CoL" kingdom="Animalia" lsidName="Podarkeopsis galangaui" order="Phyllodocida" pageId="0" pageNumber="20997" phylum="Annelida" rank="species" species="galangaui">Podarkeopsis galangaui</taxonomicName>
