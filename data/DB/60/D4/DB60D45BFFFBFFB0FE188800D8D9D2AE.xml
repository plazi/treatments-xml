<quantity box="[919,1018,915,939]" metricMagnitude="-1" metricUnit="m" metricValue="1.65" pageId="10" pageNumber="803" unit="mm" value="165.0">165 mm</quantity>
high and one incipient stem ca 
<quantity box="[346,430,948,972]" metricMagnitude="-2" metricUnit="m" metricValue="3.0" pageId="10" pageNumber="803" unit="mm" value="30.0">30 mm</quantity>
high (
<collectionCode box="[506,595,948,972]" country="USA" httpUri="http://biocol.org/urn:lsid:biocol.org:col:34871" lsid="urn:lsid:biocol.org:col:34871" name="Smithsonian Institution, National Museum of Natural History" pageId="10" pageNumber="803" type="Museum">USNM</collectionCode>
