<taxonomicName authorityName="de Meijere" authorityYear="1914" class="Insecta" family="Drosophilidae" genus="Colocasiomyia" higherTaxonomySource="CoL" kingdom="Animalia" lsidName="Colocasiomyia" order="Diptera" pageId="0" pageNumber="127" phylum="Arthropoda" rank="genus">
