<taxonomicName class="Insecta" family="Chrysomelidae" genus="Martinella" higherTaxonomySource="GBIF" kingdom="Animalia" lsidName="" order="Coleoptera" pageId="2" pageNumber="17" phylum="Arthropoda" rank="genus">
