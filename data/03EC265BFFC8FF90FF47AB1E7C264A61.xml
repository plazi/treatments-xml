<number id="3D8D856AFFC9FF96FB5EA8307AF84CB9" box="[1166,1176,1914,1940]" pageId="3" pageNumber="66" value="1.0">1</number>
Canga, 
<date id="FFFBB18DFFC9FF96FB2AA8307BF74CB9" box="[1274,1431,1914,1940]" pageId="3" pageNumber="66" value="1986-01-23" valueMax="1986-01-26" valueMin="1986-01-23">
