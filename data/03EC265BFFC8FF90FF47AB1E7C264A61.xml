<paragraph id="8BFA974DFFC8FF97FF47AB3C7F464FBD" blockId="2.[151,922,1107,1168]" box="[151,294,1142,1168]" pageId="2" pageNumber="65">
(
<figureCitation id="137E8BC8FFC8FF97FF4FAB3C7F7D4FBD" box="[159,285,1142,1168]" captionStart-0="FIGURES 1 – 7" captionStart-1="FIGURES 8 – 12" captionStartId-0="3.[151,272,1809,1833]" captionStartId-1="4.[151,269,1572,1596]" captionTargetBox-0="[265,1322,594,1784]" captionTargetBox-1="[269,1322,544,1547]" captionTargetId-0="figure@3.[264,1323,589,1784]" captionTargetId-1="figure@4.[264,1323,542,1548]" captionTargetPageId-0="3" captionTargetPageId-1="4" captionText-0="FIGURES 1 – 7. Ctenostylum fuscomaculatum, n. sp., holotype. 1, head, frontal view; 2, head, lateral view; 3, head, dorsal view; 4, antennae; 5, thorax, dorsal view; 6, thorax, lateral view; 7, wing." captionText-1="FIGURES 8 – 12. Ctenostylum fuscomaculatum, n. sp., holotype. 8, abdomen, dorsal view; 9, abdomen, ventral view; 10, distal abdominal segment, lateral view; 11, cerci, ventral view; 12, internal egg." httpUri-0="https://zenodo.org/record/186178/files/figure.png" httpUri-1="https://zenodo.org/record/186179/files/figure.png" pageId="2" pageNumber="65">
Figs. 
<number id="3D8D856AFFC8FF97FF32AB3C7F7D4FBD" box="[226,285,1142,1168]" pageId="2" pageNumber="65" value="6.5" valueMax="12.0" valueMin="1.0">1–12</number>
</figureCitation>
