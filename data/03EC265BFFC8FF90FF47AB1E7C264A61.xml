<taxonomicName id="4C45ECCEFFC9FF96FB26A8EB7F374CCD" class="Insecta" family="Ctenostylidae" genus="Ctenostylum" kingdom="Animalia" order="Diptera" pageId="3" pageNumber="66" phylum="Arthropoda" rank="species" species="fuscomaculatum">
