<quantity id="4CBD3AA8FFC9FF96FD0BA8EB7D7C4C96" box="[731,796,1953,1979]" metricMagnitude="1" metricUnit="m" metricValue="1.6" pageId="3" pageNumber="66" unit="m" value="16.0">16 m</quantity>
