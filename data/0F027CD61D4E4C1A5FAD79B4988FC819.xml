<taxonomicName id="553068D0D1603ABF8EDE5A04791CFE70" authorityName="Casey" authorityYear="1918" class="Insecta" family="Carabidae" genus="Lionepha" higherTaxonomySource="GBIF" kingdom="Animalia" lsidName="" order="Coleoptera" pageId="342" pageNumber="343" phylum="Arthropoda" rank="genus">
<emphasis id="71B470920FEDC19648062054518DEC09" italics="true" pageId="342" pageNumber="343">Lionepha</emphasis>
