<taxonomicName id="5D73D0CC2022F942F20F33FFF68DD199" authorityName="Latreille" authorityYear="1802" class="Hexapoda" family="Carabidae" genus="Bembidion" higherTaxonomySource="GBIF" kingdom="Animalia" lsidName="" order="Coleoptera" pageId="342" pageNumber="343" phylum="Arthropoda" rank="genus">
<emphasis id="BD2C2938E2E8125137F81B3878541C54" italics="true" pageId="342" pageNumber="343">Bembidion</emphasis>
</taxonomicName>
