<taxonomicName id="7C5EE7B5120B6E4AD1C23E16F2FAB373" authorityName="Kraatz" authorityYear="1888" class="Insecta" family="Carabidae" genus="Pseudolimnaeum" higherTaxonomySource="GBIF" kingdom="Animalia" lsidName="" order="Coleoptera" pageId="342" pageNumber="343" phylum="Arthropoda" rank="genus">
