<normalizedToken id="A694B15CA73980592B6BBE46B2FB15E3" originalValue="Çine">Cine</normalizedToken>
, river bank; 
<geoCoordinate id="7E687B381135A1D620BBE21DBD1BDA04" degrees="37.5428" direction="north" orientation="latitude" precision="5" value="37.5428">37.5428°N</geoCoordinate>
, 
<geoCoordinate id="299B9E53C5621D7C244DCD29AC80AEB0" degrees="28.0628" direction="east" orientation="longitude" precision="5" value="28.0628">28.0628°E</geoCoordinate>
; 68 m a.s.l.; 29 Apr.-1 May 2016; M. 
