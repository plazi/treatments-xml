<taxonomicName id="B9DB8FE492A3656AE372D56B8A8F6505" class="Liliopsida" family="Poaceae" genus="Calamagrostis" higherTaxonomySource="CoL" kingdom="Plantae" lsidName="Calamagrostis" order="Poales" pageId="0" pageNumber="107" phylum="Tracheophyta" rank="genus">
