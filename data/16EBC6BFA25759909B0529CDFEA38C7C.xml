<taxonomicName id="2EA56ABEFB0287D534633E07627E37DA" class="Liliopsida" family="Poaceae" genus="Peyritschia" higherTaxonomySource="CoL" kingdom="Plantae" lsidName="Peyritschia" order="Poales" pageId="0" pageNumber="107" phylum="Tracheophyta" rank="genus">
<emphasis id="9BC14BCF994E813E1505493BDC116FE1" italics="true" pageId="0" pageNumber="107">Peyritschia</emphasis>
