<taxonomicName id="4C6D138FD505FFA3164EFD2FFDBC95EA" authority="Muller, 1776" authorityName="Muller" authorityYear="1776" box="[294,625,686,709]" class="Polychaeta" family="Terebellidae" genus="Amphitrite" kingdom="Animalia" order="Terebellida" pageId="2" pageNumber="3" phylum="Annelida" rank="species" species="cristata">
