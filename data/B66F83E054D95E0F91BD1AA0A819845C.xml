(
<emphasis id="8B61B24F8E6D1D0F543A51C254255F43" bold="true" pageId="0" pageNumber="1">f-g</emphasis>
); 5 
<normalizedToken id="F733020A47BF5590DB21DEA09C06839F" originalValue="μm">μm</normalizedToken>
(
<emphasis id="224641155AB52330851DC8B44257528D" bold="true" pageId="0" pageNumber="1">h, i</emphasis>
); 10 
<normalizedToken id="7CB49B2E909FDCE44CA9188BA46313E9" originalValue="μm">μm</normalizedToken>
(
