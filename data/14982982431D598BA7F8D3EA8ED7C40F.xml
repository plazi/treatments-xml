<taxonomicName id="A17949EA9A7E3D857711426EBA2DF801" LSID="14982982-431D-598B-A7F8-D3EA8ED7C40F" authority="Simon, 1900" authorityName="Simon" authorityYear="1900" class="Arachnida" family="Salticidae" genus="Lapsias" higherTaxonomySource="CoL" kingdom="Animalia" lsidName="Lapsias" order="Araneae" pageId="0" pageNumber="17" phylum="Arthropoda" rank="genus">Lapsias Simon, 1900</taxonomicName>
