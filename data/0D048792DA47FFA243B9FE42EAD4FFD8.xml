<taxonomicName id="42AD4D07DA47FFA14514F9DFEAE9F905" box="[1138,1182,1641,1667]" class="Liliopsida" family="Asphodelaceae" genus="Aloe" kingdom="Plantae" order="Asparagales" pageId="5" pageNumber="18" phylum="Tracheophyta" rank="genus">
<emphasis id="B7D9EA96DA47FFA14514F9DFEAE9F905" box="[1138,1182,1641,1667]" italics="true" pageId="5" pageNumber="18">Aloe</emphasis>
</taxonomicName>
