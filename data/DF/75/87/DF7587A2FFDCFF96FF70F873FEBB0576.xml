<taxonomicName authorityName="Dufour" authorityYear="1834" box="[151,260,1972,1998]" class="Insecta" family="Pompilidae" genus="Anoplius" kingdom="Animalia" order="Hymenoptera" pageId="1" pageNumber="538" phylum="Arthropoda" rank="genus">
<emphasis bold="true" box="[151,260,1972,1998]" italics="true" pageId="1" pageNumber="538">Anoplius</emphasis>
</taxonomicName>
(
<taxonomicName authorityName="Haupt" authorityYear="1950" box="[277,435,1972,1998]" class="Insecta" family="Pompilidae" genus="Dicranoplius" kingdom="Animalia" order="Hymenoptera" pageId="1" pageNumber="538" phylum="Arthropoda" rank="genus">
