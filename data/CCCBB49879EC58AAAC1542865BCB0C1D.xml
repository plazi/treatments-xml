</taxonomicName>
sp. nov. 
<emphasis id="41C7C4A335D85F3A18E819C27500A911" bold="true" pageId="0" pageNumber="1">C</emphasis>
<taxonomicName id="A073A533FEE98F208C4EE75AC6930DDA" authority="Bigot, 1882" authorityName="Moran &amp; Thompson" authorityYear="2021" class="Insecta" family="Syrphidae" genus="Romaleosyrphus" higherTaxonomySource="GBIF" kingdom="Animalia" lsidName="Romaleosyrphus nephelaeus" order="Diptera" pageId="0" pageNumber="1" phylum="Arthropoda" rank="species" species="nephelaeus">
