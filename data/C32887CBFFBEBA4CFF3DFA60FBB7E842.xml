<taxonomicName id="8C814D5EFFBEBA4DFF3DFA60FD1AEF93" authority="(Thomas, 1918)" authorityName="Thomas" authorityYear="1918" baseAuthorityName="Thomas" baseAuthorityYear="1918" box="[151,759,1431,1457]" class="Mammalia" family="Muridae" genus="Gerbillus" higherTaxonomySource="GBIF" kingdom="Animalia" order="Rodentia" pageId="46" pageNumber="47" phylum="Chordata" rank="species" species="nanus" subGenus="Hendecapleura">
