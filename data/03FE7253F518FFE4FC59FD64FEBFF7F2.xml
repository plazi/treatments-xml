<taxonomicName id="4C57B8C6F518FFE4FC06FD64FACDFD3F" authority="Geoffroy, 1762" authorityName="Geoffroy" authorityYear="1762" box="[1016,1328,704,728]" class="Insecta" family="Naucoridae" genus="Naucoris" kingdom="Animalia" order="Hemiptera" pageId="1" pageNumber="666" phylum="Arthropoda" rank="genus">
