<taxonomicName id="80B04D6BE94EED7F41A8FB66C93970E7" authority="Grimaldi, 2016" authorityName="Grimaldi" authorityYear="2016" box="[463,612,1151,1175]" class="Insecta" family="Athericidae" genus="Atherhagiox" higherTaxonomySource="GBIF" kingdom="Animalia" order="Diptera" pageId="38" pageNumber="38" phylum="Arthropoda" rank="species" species="ambiguum" status="n. sp.">
