<subSubSection id="C35376F1324BFFE7FF66FAB73D76FF79" box="[198,1389,193,219]" pageId="4" pageNumber="33" type="distribution">
<paragraph id="8BF6257A324BFFE7FF66FAB73D76FF79" blockId="4.[151,1436,152,838]" box="[198,1389,193,219]" pageId="4" pageNumber="33">
<emphasis id="B93DF968324BFFE7FF66FAB7399DFF79" bold="true" box="[198,390,193,219]" pageId="4" pageNumber="33">Distribution:—</emphasis>
<collectingCountry id="F35E65EA324BFFE7FE26FAB739A5FF79" box="[390,446,193,219]" name="Peru" pageId="4" pageNumber="33">Peru</collectingCountry>
, Dept. 
<collectingRegion id="498DEB98324BFFE7FDB2FAB73A8EFF79" box="[530,661,193,219]" country="Peru" name="San Martin" pageId="4" pageNumber="33">San Martin</collectingRegion>
