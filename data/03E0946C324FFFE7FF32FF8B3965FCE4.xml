<superScript id="7C3C8832324BFFE7FD6EFAEE3ACDFF04" attach="none" box="[718,726,152,166]" fontSize="6" pageId="4" pageNumber="33">o</superScript>
) on stony places at about 
<quantity id="4CB1889F324BFFE7FBA8FAEC3C49FF16" box="[1032,1106,154,180]" metricMagnitude="2" metricUnit="m" metricValue="5.0" pageId="4" pageNumber="33" unit="m" value="500.0">500 m</quantity>
