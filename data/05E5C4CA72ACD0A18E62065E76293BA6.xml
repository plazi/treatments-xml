3. 
<taxonomicName id="185D5A35C2ADDF47F6ED5FD5DF4B631A" LSID-HNS="urn:lsid:biosci.ohio-state.edu:osuc_concepts:2418" class="Insecta" family="Formicidae" genus="Echinopla" kingdom="Animalia" lsidName-HNS="Echinopla Smith" order="Hymenoptera" pageNumber="80" phylum="Arthropoda" rank="genus">Echinopla</taxonomicName>
