<subSubSection pageId="0" pageNumber="157" type="diagnosis">
<paragraph pageId="0" pageNumber="157">Diagnosis.</paragraph>
<paragraph pageId="0" pageNumber="157">
Length 
<quantity metricMagnitude="-3" metricUnit="m" metricValue="3.55" metricValueMax="3.9" metricValueMin="3.2" unit="mm" value="3.55" valueMax="3.9" valueMin="3.2">3.2-3.9 mm</quantity>
. Width 
<quantity metricMagnitude="-3" metricUnit="m" metricValue="2.75" metricValueMax="2.9" metricValueMin="2.6" unit="mm" value="2.75" valueMax="2.9" valueMin="2.6">2.6-2.9 mm</quantity>
