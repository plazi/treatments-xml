</materialsCitation>
<materialsCitation box="[563,1226,1855,1884]" collectingDate="2018-08-09" country="Iran" location="Lorestan Province" pageId="3" pageNumber="114" specimenCount="1" stateProvince="Lorestan">
University, 
<date box="[715,907,1855,1884]" pageId="3" pageNumber="114" value="2018-08-09">
<collectingDate box="[715,907,1855,1884]" pageId="3" pageNumber="114" value="2018-08-09">9 August 2018</collectingDate>
</date>
; 
<collectingRegion box="[920,1157,1855,1884]" country="Iran" name="Lorestan" pageId="3" pageNumber="114">Lorestan Province</collectingRegion>
