<date box="[293,546,457,486]" pageId="4" pageNumber="115" value="2018-09-12">12 September 2018</date>
; 
<materialsCitation box="[559,865,457,486]" country="Iran" location="Lorestan Province" pageId="4" pageNumber="115" specimenCount="1" stateProvince="Lorestan">
