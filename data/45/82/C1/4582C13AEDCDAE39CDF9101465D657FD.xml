<subSubSection type="reference_group">
<paragraph pageId="58" pageNumber="59">
<taxonomicName class="Arachnida" family="Lohmanniidae" genus="Lohmannia" kingdom="Animalia" order="Sarcoptiformes" pageId="58" pageNumber="59" phylum="Arthropoda" rank="variety" species="murcioides" variety="aciculata">Lohmannia murcioides var. aciculata Berlese</taxonomicName>
