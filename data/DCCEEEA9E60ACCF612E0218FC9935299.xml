Diagnosis: Similar to 
<taxonomicName id="CB7C92D8645F07D70BB49D13E8D311A9" LSID-ZBK="urn:lsid:zoobank.org:act:F01B9379-2DA1-40AB-842B-F0DFC2CB2BD3" class="Actinopterygii" family="Rivulidae" genus="Rivulus" higherTaxonomySource="CoL" kingdom="Animalia" lsidName-ZBK="Rivulus altivelis Huber 1992:93" order="Cyprinodontiformes" pageNumber="8" phylum="Chordata" rank="species" species="altivelis">R. altivelis</taxonomicName>
, 
<taxonomicName id="5E502A01B49D4A12177EAEF72C58CA15" LSID-ZBK="urn:lsid:zoobank.org:act:3449F866-C045-4154-92A0-F9A956507FD5" class="Actinopterygii" family="Rivulidae" genus="Rivulus" higherTaxonomySource="CoL" kingdom="Animalia" lsidName-ZBK="Rivulus atratus Garman 1895:140" order="Cyprinodontiformes" pageNumber="8" phylum="Chordata" rank="species" species="atratus">R. atratus</taxonomicName>
, 
<taxonomicName id="0FFE96CD7420192B97FF03F902EDBDAB" LSID-ZBK="urn:lsid:zoobank.org:act:8750C858-4799-4685-9B2F-41CE4CA3B9B7" class="Actinopterygii" family="Rivulidae" genus="Rivulus" higherTaxonomySource="CoL" kingdom="Animalia" lsidName-ZBK="Rivulus ornatus Garman 1895:139" order="Cyprinodontiformes" pageNumber="8" phylum="Chordata" rank="species" species="ornatus">R. ornatus</taxonomicName>
