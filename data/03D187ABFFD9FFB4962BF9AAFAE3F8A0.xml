<taxonomicName id="4C784D3EFFD9FFB597A6F90DFDAFF92D" authority="Farzanpay, 1987: 161" authorityName="Farzanpay" authorityPageNumber="161" authorityYear="1987" box="[192,570,1754,1777]" class="Arachnida" family="Buthidae" genus="Sassanidotus" higherTaxonomySource="GBIF" kingdom="Animalia" order="Scorpiones" pageId="2" pageNumber="1" phylum="Arthropoda" rank="genus">
