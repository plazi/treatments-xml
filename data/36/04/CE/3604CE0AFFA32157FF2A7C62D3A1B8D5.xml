<taxonomicName authorityName="Kiss" authorityYear="2017" class="Insecta" family="Noctuidae" genus="Berionycta" higherTaxonomySource="GBIF" kingdom="Animalia" order="Lepidoptera" pageId="69" pageNumber="70" phylum="Arthropoda" rank="species" species="ponticamima">
