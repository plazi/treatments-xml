<subSubSection pageId="4" pageNumber="55" type="type">
<paragraph pageId="4" pageNumber="55">Type.</paragraph>
<paragraph pageId="4" pageNumber="55">
Based on 
<taxonomicName authorityName="Wilkin &amp; Muasya" authorityYear="2015" baseAuthorityName="Wilkin &amp; Muasya" baseAuthorityYear="2015" class="Liliopsida" family="Dioscoreaceae" genus="Dioscorea" higherTaxonomySource="CoL" kingdom="Plantae" lsidName="Dioscorea undatiloba" order="Dioscoreales" pageId="4" pageNumber="55" phylum="Tracheophyta" rank="species" species="undatiloba">
