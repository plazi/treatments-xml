<subSubSection type="nomenclature">
<paragraph pageNumber="552">
<taxonomicName LSID-HNS="urn:lsid:biosci.ohio-state.edu:osuc_concepts:181967" class="Insecta" family="Formicidae" genus="Pheidole" higherTaxonomySource="CoL" kingdom="Animalia" lsidName="Pheidole globularia Wilson" lsidName-HNS="Pheidole globularia Wilson" order="Hymenoptera" pageNumber="552" phylum="Arthropoda" rank="species" species="globularia">Pheidole globularia</taxonomicName>
