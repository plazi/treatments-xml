<geoCoordinate id="17D5502B2494BDCDFD6FDFC21819A29B" box="[719,806,384,410]" degrees="8" direction="north" minutes="45" orientation="latitude" pageId="138" pageNumber="139" precision="925" value="8.75">8°45’N</geoCoordinate>
and 83°06’– 
<geoCoordinate id="17D5502B2494BDCDFC70DFC21F03A29B" box="[976,1084,384,410]" degrees="83" direction="west" minutes="33" orientation="longitude" pageId="138" pageNumber="139" precision="925" value="-83.55">83°33’W</geoCoordinate>
