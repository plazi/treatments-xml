<taxonomicName id="2E15FDCFDCE6A812EAF98D23B15F9E09" class="Magnoliopsida" family="Malvaceae" genus="Durio" higherTaxonomySource="CoL" kingdom="Plantae" lsidName="" order="Malvales" pageId="0" pageNumber="1" phylum="Tracheophyta" rank="family">Malvaceae</taxonomicName>
