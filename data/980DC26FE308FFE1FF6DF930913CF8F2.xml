<taxonomicName id="D7A408FAE30FFFE1FDD2FA5391F1FA11" authorityName="Bates" authorityYear="1878" box="[639,925,1442,1466]" class="Insecta" family="Carabidae" genus="Bembidion" kingdom="Animalia" order="Coleoptera" pageId="36" pageNumber="35" phylum="Arthropoda" rank="species" species="callipeplum">
<emphasis id="22D0AF6BE30FFFE1FDD2FA5391F1FA11" box="[639,925,1442,1466]" italics="true" pageId="36" pageNumber="35">Bembidion callipeplum</emphasis>
