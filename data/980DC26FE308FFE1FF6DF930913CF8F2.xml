<taxonomicName id="D7A408FAE30FFFE1FC83FA739627FA31" authorityName="Bates" authorityYear="1878" box="[814,1099,1410,1434]" class="Insecta" family="Carabidae" genus="Bembidion" kingdom="Animalia" order="Coleoptera" pageId="36" pageNumber="35" phylum="Arthropoda" rank="species" species="callipeplum">
<emphasis id="22D0AF6BE30FFFE1FC83FA739627FA31" box="[814,1099,1410,1434]" italics="true" pageId="36" pageNumber="35">Bembidion callipeplum</emphasis>
</taxonomicName>
; taxonomy); 
<bibRefCitation id="74350E88E30FFFE1FB44FA7393CEFA11" author="Larochelle, A. &amp; M. - C. Lariviere" pageId="36" pageNumber="35" pagination="1 - 281" refId="ref33655" refString="Larochelle, A., and M. - C. Lariviere. 2001. Carabidae (Insecta: Coleoptera): catalogue. Fauna of New Zealand 43: 1 - 281." type="journal article" year="2001">Larochelle and Larivière 2001: 83</bibRefCitation>
