<taxonomicName id="4C384D5BC6047128FC26FDE311789942" authority="Scopoli, 1763" authorityName="Scopoli" authorityYear="1763" box="[992,1304,604,628]" class="Insecta" family="Haglotettigoniidae" genus="Gryllus" kingdom="Animalia" order="Orthoptera" pageId="37" pageNumber="442" phylum="Arthropoda" rank="species" species="pellucens">
