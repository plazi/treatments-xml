<quantity id="4CA89B79E40AFFA0F8C6648FFE7934ED" box="[424,495,439,463]" metricMagnitude="3" metricUnit="m" metricValue="2.0921472" pageId="12" pageNumber="13" unit="mi" value="1.3">1.3 mi</quantity>
