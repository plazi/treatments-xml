externally resembles 
<taxonomicName id="4C3ACCBBFFE4622DFCEBF861D525F806" authority="(Distant)" baseAuthorityName="Distant" box="[878,1126,2010,2037]" class="Insecta" family="Cicadellidae" genus="Parabolocratus" higherTaxonomySource="GBIF" kingdom="Animalia" order="Hemiptera" pageId="5" pageNumber="578" phylum="Arthropoda" rank="species" species="lutescens">
