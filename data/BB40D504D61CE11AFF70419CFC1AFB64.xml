<taxonomicName id="F4E91F91D61CE11AFC1D4795FB26FB00" box="[1018,1175,1185,1210]" class="Magnoliopsida" family="Fabaceae" genus="Lotus" kingdom="Plantae" order="Fabales" pageId="1" pageNumber="82" phylum="Tracheophyta" rank="species" species="creticus">
