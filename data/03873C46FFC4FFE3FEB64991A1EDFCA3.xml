<taxonomicName id="4C2EF6D3FFC6FFE3FCD348BCA74EFD37" box="[850,1041,668,694]" class="Bacillariophyceae" family="Achnanthidiaceae" genus="Psammothidium" higherTaxonomySource="GBIF" kingdom="Chromista" order="Achnanthales" pageId="10" pageNumber="11" phylum="Bacillariophyta" rank="genus">
<emphasis id="B95A5142FFC6FFE3FCD348BCA74EFD37" box="[850,1041,668,694]" italics="true" pageId="10" pageNumber="11">Psammothidium</emphasis>
</taxonomicName>
