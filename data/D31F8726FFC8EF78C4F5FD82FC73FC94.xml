<taxonomicName id="9CB64DB3FFC8EF78C4F5FD82FDF4FD9F" authority="Hood, 1954" authorityName="Hood" authorityYear="1954" box="[151,599,547,574]" class="Insecta" family="Heterothripidae" genus="Heterothrips" kingdom="Animalia" order="Thysanoptera" pageId="11" pageNumber="12" phylum="Arthropoda" rank="species" species="marginatus">
