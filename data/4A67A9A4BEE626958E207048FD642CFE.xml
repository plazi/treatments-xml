<taxonomicName id="1C005CD11671BD6E6D053AABAE2A5102" class="Arachnida" family="Sphaerochthoniidae" genus="Sphaerochthonius" kingdom="Animalia" order="Sarcoptiformes" pageId="25" pageNumber="26" phylum="Arthropoda" rank="species" species="gemma">Sphaerochthonius gemma</taxonomicName>
