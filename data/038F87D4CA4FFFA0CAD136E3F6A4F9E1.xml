<subSubSection id="C33C6549CA4FFFA0C97F377EFB3DF3E6" pageId="31" pageNumber="650" type="reference_group">
<paragraph id="8B9936C2CA4FFFA0C97F377EFC4AF42A" blockId="31.[794,1380,2934,3351]" pageId="31" pageNumber="650">
<emphasis id="B952EAD0CA4FFFA0C97F377EFC33F413" box="[794,949,2934,2959]" pageId="31" pageNumber="650">Taxonomy.</emphasis>
<taxonomicName id="4C264D41CA4FFFA0C9B0377EFBBCF413" authorityName="Linnaeus" authorityYear="1758" box="[981,1082,2934,2959]" class="Mammalia" family="Mustelidae" genus="Mustela" kingdom="Animalia" order="Carnivora" pageId="31" pageNumber="650" phylum="Chordata" rank="genus">Mustela</taxonomicName>
eversmanii Lesson, 1827, 
<materialsCitation id="3B4E3C9FCA4FFFA0C9153791FC4AF42A" ID-GBIF-Occurrence="3707806341" box="[880,972,2969,2998]" pageId="31" pageNumber="650">
<collectingCountry id="F3317652CA4FFFA0C9153791FC4FF42A" box="[880,969,2969,2998]" name="Russia" pageId="31" pageNumber="650">Russia</collectingCountry>
