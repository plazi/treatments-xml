<taxonomicName id="4C0D4D7CFFB7FFFDE2CE282879304F58" authority="Boisduval" authorityName="Boisduval" box="[151,590,1794,1820]" class="Insecta" family="Asterolecaniidae" genus="Bambusaspis" higherTaxonomySource="GBIF" kingdom="Animalia" order="Hemiptera" pageId="14" pageNumber="15" phylum="Arthropoda" rank="species" species="bambusae">
