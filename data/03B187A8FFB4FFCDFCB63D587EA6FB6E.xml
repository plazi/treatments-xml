<taxonomicName id="4C184D3DFFB4FFCCFCC43CBF7CA2F9F4" authority="Grimaldi, 2018" authorityName="Grimaldi" authorityYear="2018" box="[878,1003,1515,1539]" class="Insecta" family="Platypezidae" genus="Chandleromyia" kingdom="Animalia" order="Diptera" pageId="50" phylum="Arthropoda" rank="species" species="anomala" status="n. sp.">
