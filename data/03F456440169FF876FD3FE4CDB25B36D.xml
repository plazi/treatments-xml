<quantity id="4CA54AB70169FF876C21FD0BDBF5B6B3" box="[869,969,672,698]" metricMagnitude="-2" metricUnit="m" metricValue="1.26" pageId="82" pageNumber="83" unit="mm" value="12.6">12.6mm</quantity>
