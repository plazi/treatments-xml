<taxonomicName authority="Dahlbom, 1854" authorityName="Dahlbom" authorityYear="1854" class="Insecta" family="Chrysididae" genus="Holopyga" higherTaxonomySource="GBIF" kingdom="Animalia" lsidName="Holopyga ovata" order="Hymenoptera" pageId="33" pageNumber="112" phylum="Arthropoda" rank="species" species="ovata">
