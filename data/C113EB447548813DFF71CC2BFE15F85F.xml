<quantity id="8E42F7B77548813DFD0FCC55FC99FDE2" box="[745,847,612,635]" metricMagnitude="-3" metricUnit="m" metricValue="8.0" metricValueMax="10.0" metricValueMin="6.0" pageId="24" pageNumber="25" unit="cm" value="0.8" valueMax="1.0" valueMin="0.6">0.6–1 cm</quantity>
