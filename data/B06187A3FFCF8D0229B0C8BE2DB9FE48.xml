<typeStatus id="E7738817FFCF8D02299FC9DB2F50FC3C" box="[249,298,902,923]" pageId="2" pageNumber="58">type</typeStatus>
genus 
<taxonomicName id="FFC84D36FFCF8D0228E4C9DB2C62FC3C" authorityName="Saussure" authorityYear="1874" box="[386,536,902,923]" class="Insecta" family="Haglotettigoniidae" genus="Amphiacusta" kingdom="Animalia" order="Orthoptera" pageId="2" pageNumber="58" phylum="Arthropoda" rank="genus">
<emphasis id="0ABCEAA7FFCF8D0228E4C9DB2C62FC3C" box="[386,536,902,923]" italics="true" pageId="2" pageNumber="58">Amphiacusta</emphasis>
</taxonomicName>
dates from Amphiacustae 
<bibRefCitation id="5C594B44FFCF8D02299CC9F92FD8FC1E" author="Hubbell TH" box="[250,418,932,954]" pageId="2" pageNumber="58" pagination="191 - 233" refId="ref6412" refString="Hubbell TH. 1938. New cave-crickets from Yucatan, with a review of the Pentacentrinae, and studies on the genus Amphiacusta (Orthoptera: Gryllidae). Carnegie Institute of Washington Publication 491: 191 - 233." type="journal article" year="1938">Hubbell, 1938</bibRefCitation>
. This name has subsequently been used to refer to a group of genera comprising 
<taxonomicName id="FFC84D36FFCF8D0229C2C9BC2F40FC51" authorityName="Saussure" authorityYear="1874" box="[164,314,993,1014]" class="Insecta" family="Haglotettigoniidae" genus="Amphiacusta" kingdom="Animalia" order="Orthoptera" pageId="2" pageNumber="58" phylum="Arthropoda" rank="genus">
<emphasis id="0ABCEAA7FFCF8D0229C2C9BC2F40FC51" box="[164,314,993,1014]" italics="true" pageId="2" pageNumber="58">Amphiacusta</emphasis>
</taxonomicName>
, 
<taxonomicName id="FFC84D36FFCF8D02282EC9BC2F9AFC51" authorityName="Desutter-Grandcolas &amp; Hubbell" authorityYear="1993" box="[328,480,993,1014]" class="Insecta" family="Haglotettigoniidae" genus="Arachnopsita" kingdom="Animalia" order="Orthoptera" pageId="2" pageNumber="58" phylum="Arthropoda" rank="genus">
<emphasis id="0ABCEAA7FFCF8D02282EC9BC2F9AFC51" box="[328,480,993,1014]" italics="true" pageId="2" pageNumber="58">Arachnopsita</emphasis>
</taxonomicName>
, 
<taxonomicName id="FFC84D36FFCF8D022888C9BC2C1FFC51" authorityName="Desutter-Grandcolas" authorityYear="1994" box="[494,613,993,1014]" class="Insecta" family="Haglotettigoniidae" genus="Cantrallia" kingdom="Animalia" order="Orthoptera" pageId="2" pageNumber="58" phylum="Arthropoda" rank="genus">
<emphasis id="0ABCEAA7FFCF8D022888C9BC2C1FFC51" box="[494,613,993,1014]" italics="true" pageId="2" pageNumber="58">Cantrallia</emphasis>
</taxonomicName>
, 
<taxonomicName id="FFC84D36FFCF8D022B12C9BC2D7EFC51" authorityName="Desutter-Grandcolas" authorityYear="1994" box="[628,772,993,1014]" class="Insecta" family="Haglotettigoniidae" genus="Leptopedetes" kingdom="Animalia" order="Orthoptera" pageId="2" pageNumber="58" phylum="Arthropoda" rank="genus">
<emphasis id="0ABCEAA7FFCF8D022B12C9BC2D7EFC51" box="[628,772,993,1014]" italics="true" pageId="2" pageNumber="58">Leptopedetes</emphasis>
</taxonomicName>
, 
<taxonomicName id="FFC84D36FFCF8D0229C2CE5C2F59FBB1" authorityName="Desutter-Grandcolas &amp; Hubbell" authorityYear="1993" box="[164,291,1025,1046]" class="Insecta" family="Haglotettigoniidae" genus="Longuripes" kingdom="Animalia" order="Orthoptera" pageId="2" pageNumber="58" phylum="Arthropoda" rank="genus">
