, it grows at elevations of 
<quantity id="DE7D9B01FFB9046EEFA5FE35FBD88EA0" box="[922,1060,461,487]" metricMagnitude="2" metricUnit="m" metricValue="8.0" metricValueMax="9.0" metricValueMin="7.0" pageId="32" pageNumber="33" unit="m" value="800.0" valueMax="900.0" valueMin="700.0">700–900 m</quantity>
, associated with 
<taxonomicName id="DE854D67FFB9046EE8D0FE35FA608EA0" box="[1263,1436,461,487]" class="Liliopsida" family="Bromeliaceae" genus="Alcantarea" higherTaxonomySource="CoL" kingdom="Plantae" order="Poales" pageId="32" pageNumber="33" phylum="Tracheophyta" rank="species" species="undetermined">
<emphasis id="2BF1EAF6FFB9046EE8D0FE35FA8D8EA1" box="[1263,1393,461,486]" italics="true" pageId="32" pageNumber="33">Alcantarea</emphasis>
sp.
</taxonomicName>
(
<taxonomicName id="DE854D67FFB9046EECA0FE0CFEAE8D49" box="[159,338,500,526]" class="Liliopsida" family="Bromeliaceae" kingdom="Plantae" order="Poales" pageId="32" pageNumber="33" phylum="Tracheophyta" rank="family">Bromeliaceae</taxonomicName>
