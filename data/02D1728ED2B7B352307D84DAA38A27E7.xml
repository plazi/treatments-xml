<taxonomicName id="DE62F2347CB3FCF88C51C7ACBE3947D1" authorityName="Kilgallen &amp; Lowry" authorityYear="2015" class="Malacostraca" family="Scopelocheiridae" genus="Austrocallisoma" higherTaxonomySource="CoL" kingdom="Animalia" lsidName="Austrocallisoma jerryi" order="Amphipoda" pageId="7" pageNumber="8" phylum="Arthropoda" rank="species" species="jerryi">
