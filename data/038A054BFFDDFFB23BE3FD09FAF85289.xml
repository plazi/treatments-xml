<paragraph id="8B9CB45DFFDDFFB33BE3FD09FCDA51B3" blockId="2.[491,804,725,758]" box="[491,804,725,758]" pageId="2" pageNumber="92">
<heading id="D0D40331FFDDFFB33BE3FD09FCDA51B3" bold="true" box="[491,804,725,758]" centered="true" fontSize="14" level="1" pageId="2" pageNumber="92" reason="1">
<taxonomicName id="4C23CFDEFFDDFFB33BE3FD09FCDA51B3" authority="Berlese" authorityName="Berlese" authorityYear="1908" box="[491,804,725,758]" class="Arachnida" family="Ceratoppiidae" genus="Ceratoppia" kingdom="Animalia" order="Sarcoptiformes" pageId="2" pageNumber="92" phylum="Arthropoda" rank="genus">
