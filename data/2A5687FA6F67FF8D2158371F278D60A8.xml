<quantity id="65079B096F64FF8D21D834D7277367A0" box="[392,588,724,750]" metricMagnitude="-3" metricUnit="m" metricValue="3.135" metricValueMax="3.19" metricValueMin="3.08" pageId="2" pageNumber="3" unit="mm" value="3.135" valueMax="3.19" valueMin="3.08">3.08 to 3.19 mm</quantity>
long and 
<quantity id="65079B096F64FF8D229434D726B667A0" box="[708,905,724,750]" metricMagnitude="-4" metricUnit="m" metricValue="9.85" metricValueMax="10.4" metricValueMin="9.3" pageId="2" pageNumber="3" unit="mm" value="0.985" valueMax="1.04" valueMin="0.93">0.93 to 1.04 mm</quantity>
wide across eyes. Females 
<quantity id="65079B096F64FF8D248A34D7244A6658" metricMagnitude="-3" metricUnit="m" metricValue="3.19" metricValueMax="3.3" metricValueMin="3.08" pageId="2" pageNumber="3" unit="mm" value="3.19" valueMax="3.3" valueMin="3.08">3.08 to 3.30 mm</quantity>
long (
<quantity id="65079B096F64FF8D219734FF27A96658" box="[455,662,764,790]" metricMagnitude="-3" metricUnit="m" metricValue="3.38" metricValueMax="3.52" metricValueMin="3.24" pageId="2" pageNumber="3" unit="mm" value="3.38" valueMax="3.52" valueMin="3.24">3.24 to 3.52 mm</quantity>
long including ovipositor) and 
<quantity id="65079B096F64FF8D244B34FF21D66658" box="[1051,1257,764,790]" metricMagnitude="-3" metricUnit="m" metricValue="1.125" metricValueMax="1.15" metricValueMin="1.1" pageId="2" pageNumber="3" unit="mm" value="1.125" valueMax="1.15" valueMin="1.1">1.10 to 1.15 mm</quantity>
wide across eyes.
</paragraph>
