<paragraph id="8BA13698FFCFFFCCFEEAA3332FC6A963" blockId="8.[264,564,1524,1585]" box="[264,401,1559,1585]" pageId="8" pageNumber="9">
Figs 
<number id="3DD624BFFFCFFFCCFEA0A3332FDAA963" box="[322,397,1559,1585]" pageId="8" pageNumber="9" value="24.5" valueMax="29.0" valueMin="20.0">20–29</number>
