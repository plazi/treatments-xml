<heading id="C737147903350937FF7CB53CCAADCDB6" box="[177,748,1390,1414]" centered="true" fontSize="9" level="2" pageId="17" pageNumber="44" reason="2">
<taxonomicName id="5BC0D89603350937FF7CB53CCA63CDB4" authority="Pollet, 2005" authorityName="Pollet" authorityYear="2005" box="[177,546,1390,1414]" class="Insecta" family="Dolichopodidae" genus="Achalcus" kingdom="Animalia" order="Diptera" pageId="17" pageNumber="44" phylum="Arthropoda" rank="species" species="micromorphoides" status="SP. NOV.">ACHALCUS MICROMORPHOIDES</taxonomicName>
