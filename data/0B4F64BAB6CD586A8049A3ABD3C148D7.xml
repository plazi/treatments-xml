<taxonomicName id="260335B4722D38F13946B0C60620A355" authorityName="Maddison &amp; Beattie &amp; Marathe &amp; Ng &amp; Kanesharatnam &amp; Benjamin &amp; Kunte" authorityYear="2020" baseAuthorityName="Maddison &amp; Beattie &amp; Marathe &amp; Ng &amp; Kanesharatnam &amp; Benjamin &amp; Kunte" baseAuthorityYear="2020" class="Arachnida" family="Salticidae" genus="Bavirecta" higherTaxonomySource="CoL" kingdom="Animalia" lsidName="Bavirecta flavopuncta" order="Araneae" pageId="0" pageNumber="27" phylum="Arthropoda" rank="species" species="flavopuncta" status="comb. nov.">Bavirecta flavopuncta</taxonomicName>
