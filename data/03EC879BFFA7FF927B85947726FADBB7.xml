<taxonomicName id="4C454D0EFFA7FF917B8594EC2490DD81" authority="Simon, 1909: 198" authorityName="Simon" authorityPageNumber="198" authorityYear="1909" box="[151,483,1924,1946]" class="Arachnida" family="Salticidae" genus="Breda" kingdom="Animalia" order="Araneae" pageId="29" pageNumber="430" phylum="Arthropoda" rank="species" species="jovialis">
