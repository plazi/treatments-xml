<taxonomicName id="DBE70DF9A1732D743994DBC67C1233A0" LSID-ZBK="urn:lsid:zoobank.org:act:1FBBEB5D-AE2A-469D-8189-43AEF16A1C2A" class="Actinopterygii" family="Plesiopidae" genus="Acanthoplesiops" higherTaxonomySource="CoL" kingdom="Animalia" lsidName-ZBK="Acanthoplesiops Regan 1912:266" order="Perciformes" pageNumber="1" phylum="Chordata" rank="genus">Acanthoplesiops</taxonomicName>
