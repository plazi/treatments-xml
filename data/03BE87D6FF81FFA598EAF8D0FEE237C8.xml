<geoCoordinate id="EE235007FF81FFA598BBF899FB7E3780" box="[198,319,1899,1925]" degrees="23" direction="north" minutes="24.6" orientation="latitude" pageId="16" pageNumber="17" precision="92" value="23.41">23°24.6’N</geoCoordinate>
