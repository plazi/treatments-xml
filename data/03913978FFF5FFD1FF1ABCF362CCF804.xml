<emphasis id="B94C547CFFF5FFD1FF1ABCF360C5FB08" bold="true" box="[151,463,1220,1247]" pageId="85" pageNumber="86">
<taxonomicName id="4C38F3EDFFF5FFD1FF1ABCF3607DFB09" authorityName="Watson" authorityYear="1984" box="[151,375,1220,1247]" class="Insecta" family="Libellulidae" genus="Orthetrum" kingdom="Animalia" order="Odonata" pageId="85" pageNumber="86" phylum="Arthropoda" rank="species" species="serapia">
