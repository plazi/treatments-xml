</taxonomicName>
/ 
<taxonomicName id="4C38F3EDFFF5FFD1FEF2BCF360C5FB08" baseAuthorityName="Drury" baseAuthorityYear="1773" box="[383,463,1220,1247]" class="Insecta" family="Libellulidae" genus="Orthetrum" kingdom="Animalia" order="Odonata" pageId="85" pageNumber="86" phylum="Arthropoda" rank="species" species="sabina">
