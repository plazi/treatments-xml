<taxonomicName authority="Mychko" authorityName="Mychko &amp; Savchuk" authorityYear="2019" class="Trilobita" family="Brachymetopidae" genus="Brachymetopus" higherTaxonomySource="GBIF" kingdom="Animalia" order="Proetida" pageId="1" pageNumber="347" phylum="Arthropoda" rank="species" species="alekseevi" status="sp. nov." subGenus="Conimetopus">
