<paragraph pageId="372" pageNumber="373">
<taxonomicName authorityName="Dejean" authorityYear="1831" class="Insecta" family="Carabidae" genus="Bembidium" higherTaxonomySource="GBIF" kingdom="Animalia" lsidName="" order="Coleoptera" pageId="372" pageNumber="373" phylum="Arthropoda" rank="species" species="mexicanum">Bembidium mexicanum</taxonomicName>
