<taxonomicName class="Magnoliopsida" family="Myrtaceae" genus="Leptospermum" higherTaxonomySource="CoL" kingdom="Plantae" lsidName="Leptospermum scoparium" order="Myrtales" pageId="9" pageNumber="10" phylum="Tracheophyta" rank="species" species="scoparium">Leptospermum scoparium</taxonomicName>
