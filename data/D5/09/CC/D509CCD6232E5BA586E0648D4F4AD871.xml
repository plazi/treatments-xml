<taxonomicName authorityName="Nupponen" authorityYear="2022" class="Insecta" family="Scythrididae" genus="Scythris" higherTaxonomySource="CoL" kingdom="Animalia" lsidName="Scythris directiphallella" order="Lepidoptera" pageId="0" pageNumber="19" phylum="Arthropoda" rank="species" species="directiphallella">
<emphasis italics="true" pageId="0" pageNumber="19">Scythris directiphallella</emphasis>
</taxonomicName>
