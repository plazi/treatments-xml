<taxonomicName id="60CF4D0CBA36B929FECFF9B3FD17F914" authority="Newstead, 1897" authorityName="Newstead" authorityYear="1897" box="[298,690,1660,1685]" class="Insecta" family="Pseudococcidae" genus="Kermicus" kingdom="Animalia" order="Hemiptera" pageId="1" pageNumber="441" phylum="Arthropoda" rank="species" species="wroughtoni">
