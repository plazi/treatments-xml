<taxonomicName id="60CF4D0CBA35B92AFDF1FE15FCCDFE74" authority="(Tang)" baseAuthorityName="Tang" baseAuthorityYear="1977" box="[532,872,475,501]" class="Insecta" family="Pseudococcidae" genus="Tangicoccus" kingdom="Animalia" order="Hemiptera" pageId="2" pageNumber="442" phylum="Arthropoda" rank="species" species="elongatus">
