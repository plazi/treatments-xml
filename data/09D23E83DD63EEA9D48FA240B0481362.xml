<taxonomicName id="2A927EFC5494ADD9B78B9F7B591BFD31" authority="subg. Monochoria" family="Pontederiaceae" genus="P." infraspecific-rank="subg." kingdom="Plantae" lsidName="P." order="Commelinales" pageId="0" pageNumber="25" rank="genus" subGenus="Monochoria">P. subg. Monochoria</taxonomicName>
