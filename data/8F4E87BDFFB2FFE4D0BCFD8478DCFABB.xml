<subSubSection id="4FFD6520FFB2FFE4D0ECFB077BC5FB17" box="[199,973,1177,1203]" pageId="12" pageNumber="35" type="etymology">
<paragraph id="075836ABFFB2FFE4D0ECFB077BC5FB17" blockId="12.[151,1437,641,1311]" box="[199,973,1177,1203]" pageId="12" pageNumber="35">
<emphasis id="3593EAB9FFB2FFE4D0ECFB077946FB17" bold="true" box="[199,334,1177,1203]" pageId="12" pageNumber="35">Etymology.</emphasis>
