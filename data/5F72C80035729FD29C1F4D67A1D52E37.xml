<paragraph id="8C39F6BEC0AB674BEF10964BF5CE1199" pageId="33" pageNumber="44">
<taxonomicName id="61BE884381CB0D8B91B34D0A815FCA7E" class="Insecta" family="Chrysomelidae" genus="Cryptocephalus" higherTaxonomySource="CoL" kingdom="Animalia" lsidName="Cryptocephalus hemixanthus" order="Coleoptera" pageId="33" pageNumber="44" phylum="Arthropoda" rank="species" species="hemixanthus">Cryptocephalus hemixanthus</taxonomicName>
