<taxonomicName id="00B7D619806F7F93891D2351D1B83E89" LSID="5AC35411-F8A8-5070-947E-CA2522C5743D" authority="L. 1753" authorityName="L." authorityYear="1753" class="Magnoliopsida" family="Brassicaceae" genus="Bunias" kingdom="Plantae" lsidName="Bunias orientalis" order="Brassicales" pageId="0" pageNumber="75590" phylum="Tracheophyta" rank="species" species="orientalis">Bunias orientalis L. 1753</taxonomicName>
