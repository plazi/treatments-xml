<taxonomicName id="06BCE1C3FFFFBA3FFC01FA12FB11FA07" baseAuthorityName="Crosnier" baseAuthorityYear="1965" box="[988,1180,1441,1462]" class="Malacostraca" family="Sesarmidae" genus="Cristarma" kingdom="Animalia" order="Decapoda" pageId="30" pageNumber="921" phylum="Arthropoda" rank="species" species="ortmanni">
