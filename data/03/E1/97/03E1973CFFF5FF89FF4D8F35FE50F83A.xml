<taxonomicName authority="(Roxb.) Ridsdale" authorityName="Ridsdale" baseAuthorityName="Roxb." box="[352,759,1297,1324]" class="Magnoliopsida" family="Rubiaceae" genus="Haldina" higherTaxonomySource="GBIF" kingdom="Plantae" order="Gentianales" pageId="3" pageNumber="284" phylum="Tracheophyta" rank="species" species="cordifolia">
