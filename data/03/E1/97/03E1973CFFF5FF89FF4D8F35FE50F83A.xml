</taxonomicName>
(
<taxonomicName box="[776,894,1297,1323]" class="Magnoliopsida" family="Rubiaceae" kingdom="Plantae" order="Gentianales" pageId="3" pageNumber="284" phylum="Tracheophyta" rank="family">
