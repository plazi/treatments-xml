<collectingCountry box="[370,457,1025,1050]" name="Nigeria" pageId="11" pageNumber="12">Nigeria</collectingCountry>
, 
<collectingCountry box="[468,555,1025,1050]" name="Uganda" pageId="11" pageNumber="12">Uganda</collectingCountry>
