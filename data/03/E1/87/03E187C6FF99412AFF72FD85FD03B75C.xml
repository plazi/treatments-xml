<taxonomicName authorityName="Mlynarek &amp; Wheeler" authorityYear="2010" box="[625,752,989,1014]" class="Insecta" family="Chloropidae" genus="Allomedeia" higherTaxonomySource="GBIF" kingdom="Animalia" order="Diptera" pageId="11" pageNumber="12" phylum="Arthropoda" rank="genus">
<emphasis box="[625,752,989,1014]" italics="true" pageId="11" pageNumber="12">Allomedeia</emphasis>
</taxonomicName>
