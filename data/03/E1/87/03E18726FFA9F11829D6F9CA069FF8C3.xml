and 
<number box="[1181,1233,908,932]" pageId="7" pageNumber="197" value="0.2">0.20</number>
, middle leg: 
<number box="[1380,1432,908,932]" pageId="7" pageNumber="197" value="0.22">0.22</number>
, 
<number box="[151,203,944,968]" pageId="7" pageNumber="197" value="0.49">0.49</number>
, 
<number box="[218,267,944,968]" pageId="7" pageNumber="197" value="0.43">0.43</number>
and 
<number box="[330,379,944,968]" pageId="7" pageNumber="197" value="0.41">0.41</number>
(
<number box="[399,451,944,968]" pageId="7" pageNumber="197" value="0.18">0.18</number>
