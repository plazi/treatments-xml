<number box="[809,861,1664,1688]" pageId="7" pageNumber="197" value="0.18">0.18</number>
, 
<number box="[874,926,1664,1688]" pageId="7" pageNumber="197" value="0.44">0.44</number>
, 
<number box="[940,989,1664,1688]" pageId="7" pageNumber="197" value="0.34">0.34</number>
and 
<number box="[1047,1099,1664,1688]" pageId="7" pageNumber="197" value="0.21">0.21</number>
, middle leg: 
