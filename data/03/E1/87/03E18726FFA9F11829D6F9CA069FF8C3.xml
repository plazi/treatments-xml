<number box="[466,517,944,968]" pageId="7" pageNumber="197" value="0.23">0.23</number>
), hind leg: 
<number box="[656,708,943,968]" pageId="7" pageNumber="197" value="0.15">0.15</number>
, 
<number box="[723,775,943,968]" pageId="7" pageNumber="197" value="0.46">0.46</number>
, 
<number box="[791,840,943,968]" pageId="7" pageNumber="197" value="0.53">0.53</number>
and 
<number box="[903,952,944,968]" pageId="7" pageNumber="197" value="0.27">0.27</number>
(
