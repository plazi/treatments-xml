</emphasis>
<taxonomicName authority="Ng &amp; Forges, 2015" authorityName="Ng &amp; Forges" authorityYear="2015" box="[971,1124,1501,1525]" class="Malacostraca" family="Majidae" genus="Planaja" kingdom="Animalia" order="Decapoda" pageId="68" pageNumber="178" phylum="Arthropoda" rank="species" species="plana" status="n. sp.">
