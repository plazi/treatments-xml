<taxonomicName authorityName="Scarbrough &amp; Marascia" authorityYear="2003" box="[524,612,1820,1845]" class="Insecta" family="Asilidae" genus="Ommatius" kingdom="Animalia" order="Diptera" pageId="35" pageNumber="36" phylum="Arthropoda" rank="species" species="grossus">
<emphasis box="[524,612,1820,1845]" italics="true" pageId="35" pageNumber="36">grossus</emphasis>
