<typeStatus box="[632,680,695,721]" pageId="23" pageNumber="40">type</typeStatus>
species, 
<taxonomicName box="[787,1033,695,721]" class="Malacostraca" family="Serolidae" genus="Myopiarolis" kingdom="Animalia" order="Isopoda" pageId="23" pageNumber="40" phylum="Arthropoda" rank="species" species="antarctica">
