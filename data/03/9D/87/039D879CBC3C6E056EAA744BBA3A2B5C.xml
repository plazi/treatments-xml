<subSubSection box="[201,1315,1560,1585]" pageId="13" pageNumber="390" type="etymology">
<paragraph blockId="13.[151,1437,151,1585]" box="[201,1315,1560,1585]" pageId="13" pageNumber="390">
<emphasis bold="true" box="[201,328,1560,1584]" pageId="13" pageNumber="390">Etymology</emphasis>
