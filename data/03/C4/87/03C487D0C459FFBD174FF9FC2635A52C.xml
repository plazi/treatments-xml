<quantity metricMagnitude="3" metricUnit="m" metricValue="1.25" metricValueMax="1.7" metricValueMin="0.8" pageId="5" pageNumber="28" unit="m" value="1250.0" valueMax="1700.0" valueMin="800.0">800 to 1700 m</quantity>
