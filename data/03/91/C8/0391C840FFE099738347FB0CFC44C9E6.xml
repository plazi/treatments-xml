<paragraph blockId="10.[264,1325,284,1190]" pageId="10" pageNumber="11">
<emphasis bold="true" box="[312,518,644,670]" italics="true" pageId="10" pageNumber="11">
<collectingCountry box="[312,374,644,670]" name="Malta" pageId="10" pageNumber="11">Male</collectingCountry>
macroptera
</emphasis>
