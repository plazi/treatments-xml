<paragraph blockId="11.[160,642,725,750]" box="[160,642,725,750]" pageId="11" pageNumber="1610">
<taxonomicName authorityName="zur Strassen" authorityYear="1975" box="[160,350,725,750]" class="Insecta" family="Thripidae" genus="Ascirtothrips" higherTaxonomySource="GBIF" kingdom="Animalia" order="Thysanoptera" pageId="11" pageNumber="1610" phylum="Arthropoda" rank="species" species="arya">
