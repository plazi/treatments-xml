<taxonomicName authorityName="Heller" authorityYear="1878" box="[281,544,1996,2017]" class="Ascidiacea" family="Pyuridae" genus="Microcosmus" higherTaxonomySource="GBIF" kingdom="Animalia" order="Stolidobranchia" pageId="6" pageNumber="407" phylum="Chordata" rank="species" species="exasperatus">
