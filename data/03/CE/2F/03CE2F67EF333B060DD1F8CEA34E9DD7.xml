</emphasis>
; B, 
<taxonomicName box="[992,1165,783,807]" class="Insecta" family="Empididae" genus="Empis" kingdom="Animalia" order="Diptera" pageId="4" pageNumber="63" phylum="Arthropoda" rank="species" species="virgulata" status="sp. nov." subGenus="Xanthempis">
