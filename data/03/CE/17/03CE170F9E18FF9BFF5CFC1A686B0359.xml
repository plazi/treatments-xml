<collectingCountry box="[358,429,223,248]" name="Brazil" pageId="6" pageNumber="273">Brazil</collectingCountry>
, between 
<collectingCountry box="[540,651,224,248]" name="Sao Tome and Principe" pageId="6" pageNumber="273">São Tomé</collectingCountry>
Cape to 
<collectingCountry box="[750,794,223,248]" name="Iceland" pageId="6" pageNumber="273">Ilha</collectingCountry>
