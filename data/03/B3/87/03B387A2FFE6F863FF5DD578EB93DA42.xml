species. 
<taxonomicName box="[916,1125,1999,2021]" class="Insecta" family="Formicidae" genus="Rhopalothrix" kingdom="Animalia" order="Hymenoptera" pageId="21" pageNumber="322" phylum="Arthropoda" rank="species" species="weberi">
