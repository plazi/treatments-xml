<subSubSection box="[197,1075,696,722]" pageId="7" pageNumber="46" type="etymology">
<paragraph blockId="7.[151,1436,500,957]" box="[197,1075,696,722]" pageId="7" pageNumber="46">
<emphasis bold="true" box="[197,337,696,722]" pageId="7" pageNumber="46">Etymology.</emphasis>
