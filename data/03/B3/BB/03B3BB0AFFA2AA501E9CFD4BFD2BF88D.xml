<collectingRegion box="[498,644,1325,1351]" country="China" name="Heilongjiang" pageId="2" pageNumber="158">Heilongjiang</collectingRegion>
and 
<collectingRegion box="[729,777,1325,1351]" country="China" name="Jilin" pageId="2" pageNumber="158">Jilin</collectingRegion>
