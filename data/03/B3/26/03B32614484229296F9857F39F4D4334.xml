<subSubSection lastPageId="25" lastPageNumber="26" pageId="24" pageNumber="25" type="description">
<paragraph blockId="24.[151,1436,1820,2006]" box="[199,344,1820,1846]" pageId="24" pageNumber="25">
<emphasis bold="true" box="[199,344,1820,1846]" pageId="24" pageNumber="25">Description</emphasis>
</paragraph>
<paragraph blockId="24.[151,1436,1820,2006]" box="[199,930,1860,1886]" pageId="24" pageNumber="25">
<emphasis bold="true" box="[199,262,1860,1886]" pageId="24" pageNumber="25">Male</emphasis>
(
<materialsCitation box="[277,930,1860,1886]" collectorName="de Olivenca" country="Brazil" location="Sao Paulo" pageId="24" pageNumber="25" specimenCount="1" stateProvince="Sao Paulo" typeStatus="lectotype">
based on 
<typeStatus box="[390,497,1860,1886]" pageId="24" pageNumber="25">lectotype</typeStatus>
from 
<collectingRegion box="[569,687,1860,1886]" country="Brazil" name="Sao Paulo" pageId="24" pageNumber="25">São Paulo</collectingRegion>
