<quantity box="[785,880,1941,1967]" metricMagnitude="-3" metricUnit="m" metricValue="2.6" pageId="11" pageNumber="12" unit="mm" value="2.6">2.6 mm</quantity>
[
<number box="[895,934,1941,1967]" pageId="11" pageNumber="12" value="2.5">2.5</number>
