, 
<materialsCitation ID-GBIF-Occurrence="3784206301" location="Pacific Northwest" municipality="Columbia" pageId="1" pageNumber="647" specimenCount="1">
“neighborhood of the 
<collectingMunicipality box="[1164,1301,1825,1854]" pageId="1" pageNumber="647">Columbia</collectingMunicipality>
river,” 
<location LSID="urn:lsid:plazi:treatment:03C90D76FFF8FF98F13CAE6EF88A781C:8EBFEABBFFF8FF98F27DAF6EFBE17379" box="[802,1048,1868,1893]" municipality="Columbia" name="Pacific Northwest" pageId="1" pageNumber="647">Pacific Northwest</location>
, 
<location LSID="urn:lsid:plazi:treatment:03C90D76FFF8FF98F13CAE6EF88A781C:8EBFEABBFFF8FF98F576AF6EFB047379" box="[1065,1277,1868,1893]" municipality="Columbia" name="North America" pageId="1" pageNumber="647">North America</location>
</materialsCitation>
