<taxonomicName box="[676,802,1597,1620]" class="Magnoliopsida" family="Fouquieriaceae" genus="Fouquieria" kingdom="Plantae" order="Ericales" pageId="8" phylum="Tracheophyta" rank="genus">
<emphasis box="[676,802,1597,1620]" italics="true" pageId="8">Fouquieria</emphasis>
</taxonomicName>
(
<taxonomicName authority=", Violales" authorityName="Violales" box="[820,1105,1596,1621]" class="Magnoliopsida" family="Fouquieriaceae" kingdom="Plantae" order="Ericales" pageId="8" phylum="Tracheophyta" rank="family">Fouquieriaceae, Violales</taxonomicName>
