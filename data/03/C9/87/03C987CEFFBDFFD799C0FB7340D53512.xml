<taxonomicName authorityName="Williams" authorityYear="1969" box="[807,942,1306,1330]" class="Insecta" family="Rhizoecidae" higherTaxonomySource="GBIF" kingdom="Animalia" order="Hemiptera" pageId="1" pageNumber="144" phylum="Arthropoda" rank="family">Rhizoecidae</taxonomicName>
