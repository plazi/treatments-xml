<subSubSection pageId="19" pageNumber="20" type="etymology">
<paragraph blockId="19.[151,1437,151,463]" pageId="19" pageNumber="20">
<emphasis bold="true" box="[199,337,404,428]" pageId="19" pageNumber="20">Etymology:</emphasis>
