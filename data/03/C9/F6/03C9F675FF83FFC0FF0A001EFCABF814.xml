<quantity box="[848,956,1688,1715]" metricMagnitude="-3" metricUnit="m" metricValue="7.5" metricValueMax="10.0" metricValueMin="5.0" pageId="2" pageNumber="141" unit="cm" value="0.75" valueMax="1.0" valueMin="0.5">0.5–1 cm</quantity>
