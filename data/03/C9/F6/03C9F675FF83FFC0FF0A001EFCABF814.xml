<quantity box="[547,696,1616,1643]" metricMagnitude="-4" metricUnit="m" metricValue="1.75" metricValueMax="2.0" metricValueMin="1.5" pageId="2" pageNumber="141" unit="mm" value="0.175" valueMax="0.2" valueMin="0.15">0.15–0.2 mm</quantity>
