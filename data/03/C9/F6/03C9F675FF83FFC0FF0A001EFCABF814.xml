<quantity box="[965,1102,1652,1679]" metricMagnitude="-4" metricUnit="m" metricValue="1.5" metricValueMax="2.0" metricValueMin="1.0" pageId="2" pageNumber="141" unit="mm" value="0.15" valueMax="0.2" valueMin="0.1">0.1–0.2 mm</quantity>
