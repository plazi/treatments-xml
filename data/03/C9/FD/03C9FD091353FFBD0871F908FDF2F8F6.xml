<quantity box="[605,681,1588,1614]" metricMagnitude="0" metricUnit="m" metricValue="1.5" metricValueMax="2.0" metricValueMin="1.0" pageId="2" pageNumber="3" unit="m" value="1.5" valueMax="2.0" valueMin="1.0">1–2 m</quantity>
