, and 
<taxonomicName authority="Lee &amp; Forges &amp; Ng, 2019" authorityName="Lee &amp; Forges &amp; Ng" authorityYear="2019" box="[710,865,261,287]" class="Malacostraca" family="Epialtidae" genus="Crocydocinus" kingdom="Animalia" order="Decapoda" pageId="12" pageNumber="13" phylum="Arthropoda" rank="genus" status="n. gen.">
<emphasis box="[710,865,261,287]" italics="true" pageId="12" pageNumber="13">Crocydocinus</emphasis>
</taxonomicName>
<taxonomicNameLabel box="[873,953,261,287]" pageId="12" pageNumber="13" rank="genus">
