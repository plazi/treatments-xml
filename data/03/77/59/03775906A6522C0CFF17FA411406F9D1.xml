<typeStatus box="[828,878,1519,1540]" pageId="45" pageNumber="46">Type</typeStatus>
genus: 
<taxonomicName authority="Latreille, 1804: 179" authorityName="Latreille" authorityPageNumber="179" authorityYear="1804" box="[957,1241,1518,1540]" class="Insecta" family="Formicidae" genus="Ponera" kingdom="Animalia" order="Hymenoptera" pageId="45" pageNumber="46" phylum="Arthropoda" rank="genus">
