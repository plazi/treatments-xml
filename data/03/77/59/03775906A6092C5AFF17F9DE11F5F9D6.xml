<paragraph blockId="118.[151,1436,1796,2037]" pageId="118" pageNumber="119">
<taxonomicName box="[151,315,1796,1821]" class="Insecta" family="Formicidae" genus="Odontoponera" kingdom="Animalia" order="Hymenoptera" pageId="118" pageNumber="119" phylum="Arthropoda" rank="genus">
<emphasis box="[151,315,1796,1821]" italics="true" pageId="118" pageNumber="119">Odontoponera</emphasis>
