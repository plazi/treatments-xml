<subSubSection box="[199,1136,764,792]" pageId="36" pageNumber="37" type="biology_ecology">
<paragraph blockId="36.[151,1437,153,899]" box="[199,1136,764,792]" pageId="36" pageNumber="37">
<emphasis bold="true" box="[199,295,764,791]" pageId="36" pageNumber="37">Biology.</emphasis>
