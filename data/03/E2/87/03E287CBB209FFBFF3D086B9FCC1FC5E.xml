<taxonomicName authority="Liebm." authorityName="Liebm." box="[678,923,765,791]" class="Magnoliopsida" family="Fagaceae" genus="Quercus" kingdom="Plantae" order="Fagales" pageId="36" pageNumber="37" phylum="Tracheophyta" rank="species" species="laeta">
<emphasis box="[678,835,765,791]" italics="true" pageId="36" pageNumber="37">Quercus laeta</emphasis>
Liebm.
</taxonomicName>
(
<taxonomicName box="[938,1123,765,792]" class="Magnoliopsida" family="Fagaceae" genus="Quercus" kingdom="Plantae" order="Fagales" pageId="36" pageNumber="56" phylum="Tracheophyta" rank="species" species="section">
