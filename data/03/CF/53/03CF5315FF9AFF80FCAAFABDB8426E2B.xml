<emphasis bold="true" box="[1153,1167,1939,1957]" pageId="6" pageNumber="63">D</emphasis>
, male flower, side view; 
<emphasis bold="true" box="[1368,1380,1939,1957]" pageId="6" pageNumber="63">E</emphasis>
, androecium; 
<emphasis bold="true" box="[183,194,1962,1980]" pageId="6" pageNumber="63">F</emphasis>
, female flower, face view; 
<emphasis bold="true" box="[414,428,1962,1980]" pageId="6" pageNumber="63">G</emphasis>
, female flower, side view; 
<emphasis bold="true" box="[648,662,1962,1980]" pageId="6" pageNumber="63">H</emphasis>
, gynoecium; 
<emphasis bold="true" box="[774,780,1962,1980]" pageId="6" pageNumber="63">I</emphasis>
, styles and stigmas; 
<emphasis bold="true" box="[956,966,1962,1980]" pageId="6" pageNumber="63">J</emphasis>
, Ovary cross-section. 
<emphasis bold="true" box="[1155,1168,1962,1980]" pageId="6" pageNumber="63">A</emphasis>
, from a picture in the type locality, not collected; 
