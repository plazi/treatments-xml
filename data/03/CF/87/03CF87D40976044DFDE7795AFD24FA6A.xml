<paragraph blockId="25.[189,1398,1308,1409]" pageId="25" pageNumber="26">
<collectingCountry box="[189,298,1308,1334]" name="Germany" pageId="25" pageNumber="26">Germany</collectingCountry>
(
<collectingRegion box="[313,404,1308,1334]" country="Germany" name="Bayern" pageId="25" pageNumber="26">Bayern</collectingRegion>
