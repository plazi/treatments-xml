<typeStatus box="[151,210,757,783]" pageId="1" pageNumber="144">Type</typeStatus>
species:
</emphasis>
<taxonomicName authority="Walker, 1865" authorityName="Walker HOPE DEPT. OXFORD" authorityYear="1865" box="[316,665,757,784]" class="Insecta" family="Noctuidae" genus="Arcilasisa" kingdom="Animalia" order="Lepidoptera" pageId="1" pageNumber="144" phylum="Arthropoda" rank="species" species="sobria">
<emphasis box="[316,507,757,783]" italics="true" pageId="1" pageNumber="144">Arcilasisa sobria</emphasis>
<bibRefCitation author="Walker, F." box="[513,665,757,784]" pageId="1" pageNumber="144" refId="ref3873" refString="Walker, F. (1865) List of the Specimens of Lepidopterous Insects in the Collection of the British Museum, Part 32. Supplement. Part 2. Trustees of the British Museum, London, 323 - 706." type="book" year="1865">Walker, 1865</bibRefCitation>
