<subSubSection pageId="11" pageNumber="12" type="etymology">
<paragraph blockId="11.[151,1436,151,1074]" pageId="11" pageNumber="12">
<emphasis bold="true" box="[197,335,695,719]" pageId="11" pageNumber="12">Etymology:</emphasis>
