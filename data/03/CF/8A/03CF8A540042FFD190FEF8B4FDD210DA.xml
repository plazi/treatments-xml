<quantity metricMagnitude="2" metricUnit="m" metricValue="7.5" metricValueMax="10.0" metricValueMin="5.0" pageId="14" pageNumber="15" unit="m" value="750.0" valueMax="1000.0" valueMin="500.0">500– 1000 m</quantity>
