<number box="[447,459,1600,1621]" pageId="13" pageNumber="452" value="8.0">8</number>
B, 
<number box="[487,500,1600,1621]" pageId="13" pageNumber="452" value="9.0">9</number>
B:ab); inner processes of hypandrium settled in apical 
<number box="[1020,1028,1600,1621]" pageId="13" pageNumber="452" value="1.0">1</number>
/ 
<number box="[1037,1050,1600,1621]" pageId="13" pageNumber="452" value="4.0">4</number>
