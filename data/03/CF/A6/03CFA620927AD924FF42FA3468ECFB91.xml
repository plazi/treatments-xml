<taxonomicName authorityName="Lima" authorityYear="2018" box="[343,499,1087,1112]" class="Insecta" family="Leptophlebiidae" genus="Simothraulopsis" higherTaxonomySource="GBIF" kingdom="Animalia" order="Ephemeroptera" pageId="6" pageNumber="259" phylum="Arthropoda" rank="species" species="gracilianus">
