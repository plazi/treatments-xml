<taxonomicName authorityName="Mariano" authorityYear="2010" box="[151,349,1124,1149]" class="Insecta" family="Leptophlebiidae" genus="Simothraulopsis" higherTaxonomySource="GBIF" kingdom="Animalia" order="Ephemeroptera" pageId="6" pageNumber="259" phylum="Arthropoda" rank="species" species="diamantinensis">
