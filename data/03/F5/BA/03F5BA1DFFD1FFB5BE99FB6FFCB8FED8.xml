, 
<taxonomicName authority="Memon and Ahmad" authorityName="Memon and Ahmad" box="[1019,1428,187,214]" class="Insecta" family="Pentatomidae" genus="Neolodosocoris" higherTaxonomySource="GBIF" kingdom="Animalia" order="Hemiptera" pageId="19" pageNumber="302" phylum="Arthropoda" rank="genus">
