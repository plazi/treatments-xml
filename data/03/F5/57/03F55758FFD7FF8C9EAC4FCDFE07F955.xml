<quantity box="[349,509,1516,1543]" metricMagnitude="-4" metricUnit="m" metricValue="4.55" metricValueMax="5.0" metricValueMin="4.1" pageId="60" pageNumber="61" unit="mm" value="0.45499999999999996" valueMax="0.5" valueMin="0.41">0.41–0.50mm</quantity>
. VW 
<specimenCount box="[571,592,1517,1543]" pageId="60" pageNumber="61" type="male">♂</specimenCount>
<quantity box="[599,758,1516,1542]" metricMagnitude="-4" metricUnit="m" metricValue="7.95" metricValueMax="8.1" metricValueMin="7.8" pageId="60" pageNumber="61" unit="mm" value="0.795" valueMax="0.81" valueMin="0.78">0.78–0.81mm</quantity>
; 
