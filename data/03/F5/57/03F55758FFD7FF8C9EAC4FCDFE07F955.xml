<quantity box="[151,310,1516,1542]" metricMagnitude="-4" metricUnit="m" metricValue="4.449999999999999" metricValueMax="4.699999999999999" metricValueMin="4.2" pageId="60" pageNumber="61" unit="mm" value="0.44499999999999995" valueMax="0.47" valueMin="0.42">0.42–0.47mm</quantity>
; 
