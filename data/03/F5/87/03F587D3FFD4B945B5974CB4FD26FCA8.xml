and 
<taxonomicName box="[203,315,655,680]" class="Jungermanniopsida" family="Scapaniaceae" genus="Lophozia" kingdom="Plantae" order="Jungermanniales" pageId="11" pageNumber="249" phylum="Bryophyta" rank="genus">
