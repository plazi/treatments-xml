<taxonomicName authority="Bosmans &amp; Crespo" authorityName="Bosmans &amp; Cardoso &amp; Crespo" authorityYear="2010" box="[511,1001,1818,1841]" class="Arachnida" family="Linyphiidae" genus="Pelecopsis" kingdom="Animalia" order="Araneae" pageId="43" pageNumber="44" phylum="Arthropoda" rank="species" species="monsantensis" status="new species">
