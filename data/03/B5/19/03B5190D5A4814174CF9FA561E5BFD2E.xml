<collectingRegion box="[151,285,549,575]" country="China" name="Guangdong" pageId="9" pageNumber="571">Guangdong</collectingRegion>
, 
<collectingRegion box="[297,369,549,575]" country="China" name="Fujian" pageId="9" pageNumber="571">Fujian</collectingRegion>
and 
<collectingRegion box="[425,506,549,575]" country="China" name="Jiangxi" pageId="9" pageNumber="571">Jiangxi</collectingRegion>
