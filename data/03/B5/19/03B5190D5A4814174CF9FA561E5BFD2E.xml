, 
<collectingRegion box="[1219,1303,477,503]" country="China" name="Jiangxi" pageId="9" pageNumber="571">Jiangxi</collectingRegion>
, 
<collectingRegion box="[1314,1389,477,503]" country="China" name="Hunan" pageId="9" pageNumber="571">Hunan</collectingRegion>
