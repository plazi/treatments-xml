, 
<collectingRegion box="[798,932,477,503]" country="China" name="Guangdong" pageId="9" pageNumber="571">Guangdong</collectingRegion>
, 
<collectingRegion box="[943,1027,477,503]" country="China" name="Hainan" pageId="9" pageNumber="571">Hainan</collectingRegion>
, 
<collectingRegion box="[1038,1113,477,503]" country="China" name="Fujian" pageId="9" pageNumber="571">Fujian</collectingRegion>
, 
