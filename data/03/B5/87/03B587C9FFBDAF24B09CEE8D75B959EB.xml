<subSubSection pageId="14" pageNumber="545" type="etymology">
<paragraph blockId="14.[151,1437,295,1509]" pageId="14" pageNumber="545">
<emphasis bold="true" box="[199,328,1375,1401]" pageId="14" pageNumber="545">Etymology</emphasis>
