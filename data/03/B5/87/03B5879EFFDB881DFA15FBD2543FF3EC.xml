<taxonomicName authorityName="Shaw" authorityYear="1800" box="[2036,2175,1519,1548]" class="Mammalia" family="Canidae" genus="Canis" kingdom="Animalia" order="Carnivora" pageId="32" pageNumber="443" phylum="Chordata" rank="species" species="bengalensis">bengalensis</taxonomicName>
and V. 
<taxonomicName baseAuthorityName="A Smith" baseAuthorityYear="1833" box="[2298,2381,1519,1548]" class="Mammalia" family="Canidae" genus="Vulpes" kingdom="Animalia" order="Carnivora" pageId="32" pageNumber="443" phylum="Chordata" rank="species" species="chama">chama</taxonomicName>
