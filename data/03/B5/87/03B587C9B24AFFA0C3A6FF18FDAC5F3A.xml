longa, 
<quantity box="[1009,1123,356,379]" metricMagnitude="-2" metricUnit="m" metricValue="1.1" metricValueMax="1.2" metricValueMin="1.0" pageId="4" pageNumber="63" unit="mm" value="11.0" valueMax="12.0" valueMin="10.0">10–12 mm</quantity>
lata), filamenta 
<quantity box="[1309,1435,356,379]" metricMagnitude="-3" metricUnit="m" metricValue="5.95" metricValueMax="6.4" metricValueMin="5.5" pageId="4" pageNumber="63" unit="mm" value="5.95" valueMax="6.4" valueMin="5.5">5.5–6.4 mm</quantity>
longa (non 
<quantity box="[322,427,388,411]" metricMagnitude="-3" metricUnit="m" metricValue="3.25" metricValueMax="3.5" metricValueMin="3.0" pageId="4" pageNumber="63" unit="mm" value="3.25" valueMax="3.5" valueMin="3.0">3–3.5 mm</quantity>
