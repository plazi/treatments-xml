<emphasis bold="true" box="[857,946,151,176]" pageId="12">
<taxonomicNameLabel box="[857,946,151,176]" pageId="12" rank="species">sp. nov.</taxonomicNameLabel>
</emphasis>
and 
<taxonomicName box="[999,1168,152,175]" class="Insecta" family="Stathmopodidae" genus="Atkinsonia" higherTaxonomySource="GBIF,CoL" kingdom="Animalia" order="Lepidoptera" pageId="12" phylum="Arthropoda" rank="species" species="parignipicta" status="sp. nov.">
<emphasis box="[999,1168,152,175]" italics="true" pageId="12">A. parignipicta</emphasis>
</taxonomicName>
<emphasis bold="true" box="[1175,1264,151,176]" pageId="12">
<taxonomicNameLabel box="[1175,1264,151,176]" pageId="12" rank="species">sp. nov.</taxonomicNameLabel>
