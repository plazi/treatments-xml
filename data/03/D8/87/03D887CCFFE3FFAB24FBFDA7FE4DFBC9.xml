<heading bold="true" box="[151,560,560,586]" fontSize="11" level="1" pageId="25" pageNumber="26" reason="1">
<taxonomicName authority="Garsault, 1764" authorityName="Garsault" authorityYear="1764" box="[151,560,560,586]" class="Reptilia" family="Lacertidae" genus="Lacertus" higherTaxonomySource="GBIF" kingdom="Animalia" order="Squamata" pageId="25" pageNumber="26" phylum="Chordata" rank="species" species="aquatilis">
