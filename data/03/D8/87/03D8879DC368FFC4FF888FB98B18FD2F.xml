<paragraph blockId="3.[113,646,208,388]" pageId="3" pageNumber="36">
style head, 
<quantity box="[249,390,208,235]" metricMagnitude="-3" metricUnit="m" metricValue="1.2" metricValueMax="1.3" metricValueMin="1.1" pageId="3" pageNumber="36" unit="mm" value="1.2" valueMax="1.3" valueMin="1.1">1.1-1.3 mm</quantity>
high; style head 
<quantity metricMagnitude="-4" metricUnit="m" metricValue="5.5" metricValueMax="6.0" metricValueMin="5.0" pageId="3" pageNumber="36" unit="mm" value="0.55" valueMax="0.6" valueMin="0.5">0.5- 0.6 mm</quantity>
