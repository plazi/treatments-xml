<quantity box="[626,742,1379,1401]" metricMagnitude="-3" metricUnit="m" metricValue="2.1" metricValueMax="2.4" metricValueMin="1.8" pageId="93" pageNumber="706" unit="mm" value="2.1" valueMax="2.4" valueMin="1.8">1,8-2,4mm</quantity>
