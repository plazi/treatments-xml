<taxonomicName authorityName="Opitz" authorityYear="2014" box="[1039,1117,672,693]" class="Insecta" family="Cleridae" genus="Pujoliclerus" higherTaxonomySource="GBIF" kingdom="Animalia" order="Coleoptera" pageId="14" phylum="Arthropoda" rank="species" species="alajuela">
