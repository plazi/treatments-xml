<taxonomicName authorityName="Opitz" authorityYear="2014" box="[844,890,1469,1490]" class="Insecta" family="Cleridae" genus="Pujoliclerus" higherTaxonomySource="GBIF" kingdom="Animalia" order="Coleoptera" pageId="20" phylum="Arthropoda" rank="species" species="flora">
