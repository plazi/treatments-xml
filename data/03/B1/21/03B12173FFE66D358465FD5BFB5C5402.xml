Hedgpeth, 
<number box="[509,570,324,350]" pageId="5" pageNumber="6" value="1943.0">1943</number>
</taxonomicName>
, the 
<typeStatus box="[624,675,324,350]" pageId="5" pageNumber="6">type</typeStatus>
species, from one specimen collected off 
<collectingCountry box="[1165,1295,324,350]" name="Martinique" pageId="5" pageNumber="6">Martinique</collectingCountry>
at 
<quantity box="[264,363,364,390]" metricMagnitude="2" metricUnit="m" metricValue="8.705" pageId="5" pageNumber="6" unit="m" value="870.5">870.5 m</quantity>
; 
<taxonomicName authority="Stock, 1954" authorityName="Stock" authorityYear="1954" box="[375,628,364,390]" class="Pycnogonida" family="Ammotheidae" genus="Heterofragilia" higherTaxonomySource="CoL" kingdom="Animalia" order="Pantopoda" pageId="5" pageNumber="6" phylum="Arthropoda" rank="species" species="amica">
<emphasis box="[375,483,364,389]" italics="true" pageId="5" pageNumber="6">H. amica</emphasis>
<bibRefCitation author="Stock" box="[489,628,364,390]" pageId="5" pageNumber="12" refString="Stock, J. H. (1954) Pycnogonida from Indo-West-Pacific, Australian and New Zealand waters. Papers from Dr Th. Mortensen's Pacific Expedition 1914 - 1916. Videnskabelige Meddelelser fra Dansk Naturhistorisk Forening i Kjobenhavn, 116, 1 - 168." type="journal article" year="1954">
Stock, 
<number box="[569,628,364,390]" pageId="5" pageNumber="6" value="1954.0">1954</number>
