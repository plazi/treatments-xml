<taxonomicName authority="Stock, 1991" authorityName="Stock" authorityYear="1991" box="[618,950,444,470]" class="Pycnogonida" family="Ammotheidae" genus="Heterofragilia" higherTaxonomySource="CoL" kingdom="Animalia" order="Pantopoda" pageId="5" pageNumber="6" phylum="Arthropoda" rank="species" species="brevicauda">
