<paragraph blockId="19.[151,1436,844,1157]" pageId="19" pageNumber="170">
<emphasis bold="true" box="[199,315,1060,1085]" pageId="19" pageNumber="170">Remarks.</emphasis>
<taxonomicName box="[321,503,1060,1085]" class="Insecta" family="Psychodidae" genus="Trichopygomyia" higherTaxonomySource="GBIF" kingdom="Metazoa" order="Diptera" pageId="19" pageNumber="170" phylum="Arthropoda" rank="genus">
