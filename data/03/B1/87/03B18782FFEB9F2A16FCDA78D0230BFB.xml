</taxonomicName>
<emphasis bold="true" box="[928,1020,404,429]" pageId="4" pageNumber="119">
<taxonomicNameLabel box="[928,1020,404,429]" pageId="4" pageNumber="119" rank="species">sp. nov.</taxonomicNameLabel>
</emphasis>
, 
<taxonomicName authorityName="Kiriakoff" authorityYear="1958" box="[1036,1160,404,428]" class="Insecta" family="Erebidae" genus="Lophilema" higherTaxonomySource="GBIF" kingdom="Animalia" order="Lepidoptera" pageId="4" pageNumber="119" phylum="Arthropoda" rank="species" species="fletcheri">
<emphasis box="[1036,1160,404,428]" italics="true" pageId="4" pageNumber="119">L. fletcheri</emphasis>
