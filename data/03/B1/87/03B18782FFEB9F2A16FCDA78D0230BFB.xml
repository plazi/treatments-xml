and 
<taxonomicName authorityName="Hampson" authorityYear="1901" box="[1219,1384,404,428]" class="Insecta" family="Erebidae" genus="Ilema" higherTaxonomySource="GBIF" kingdom="Animalia" order="Lepidoptera" pageId="4" pageNumber="119" phylum="Arthropoda" rank="species" species="creatoplaga">
