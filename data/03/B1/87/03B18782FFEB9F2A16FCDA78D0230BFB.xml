, 
<taxonomicName authority="Volynkin, 2019" authorityName="Volynkin" authorityYear="2019" box="[824,920,405,428]" class="Insecta" family="Erebidae" genus="Lophilema" higherTaxonomySource="GBIF" kingdom="Animalia" order="Lepidoptera" pageId="4" pageNumber="119" phylum="Arthropoda" rank="species" species="curva" status="sp. nov.">
