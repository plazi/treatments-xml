<paragraph blockId="16.[151,402,831,857]" box="[151,402,831,857]" pageId="16" pageNumber="17">
<heading bold="true" box="[151,402,831,857]" fontSize="11" level="1" pageId="16" pageNumber="17" reason="1">
<emphasis bold="true" box="[151,402,831,857]" pageId="16" pageNumber="17">
<taxonomicName box="[151,320,831,857]" class="Insecta" family="Tettigoniidae" genus="Brachyamytta" kingdom="Animalia" order="Orthoptera" pageId="16" pageNumber="17" phylum="Arthropoda" rank="genus">
<emphasis bold="true" box="[151,320,831,857]" italics="true" pageId="16" pageNumber="17">Brachyamytta</emphasis>
</taxonomicName>
n. gen
</emphasis>
</heading>
</paragraph>
