<subSubSection pageId="3" pageNumber="369" type="distribution">
<paragraph blockId="3.[151,1437,151,1581]" box="[199,931,1087,1112]" pageId="3" pageNumber="369">
<emphasis bold="true" box="[199,352,1087,1112]" pageId="3" pageNumber="369">Distribution.</emphasis>
Indomalayan region: 
<collectingCountry box="[598,668,1087,1112]" name="China" pageId="3" pageNumber="369">China</collectingCountry>
, 
<collectingCountry box="[679,739,1087,1112]" name="India" pageId="3" pageNumber="369">India</collectingCountry>
, 
<collectingCountry box="[751,833,1087,1112]" name="Taiwan" pageId="3" pageNumber="369">Taiwan</collectingCountry>
