/ CFBaker Collection 
<number box="[602,664,1604,1630]" pageId="12" pageNumber="35" value="1927.0">1927</number>
; 
<number box="[677,691,1604,1630]" pageId="12" pageNumber="35" value="1.0">1</number>
ɗ, 
