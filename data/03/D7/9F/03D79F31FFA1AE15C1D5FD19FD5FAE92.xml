<taxonomicName authority="Kittel &amp; Kreichbaumer (1872: 78)" authorityName="Kittel &amp; Kreichbaumer" authorityPageNumber="78" authorityYear="1872" box="[524,1112,1370,1396]" class="Insecta" family="Syrphidae" genus="Eristalomyia" higherTaxonomySource="GBIF" kingdom="Animalia" order="Diptera" pageId="82" pageNumber="83" phylum="Arthropoda" rank="genus">
