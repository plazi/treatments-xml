<taxonomicName authorityName="Kittel &amp; Kreichbaumer" authorityYear="1872" box="[1117,1268,1331,1356]" class="Insecta" family="Syrphidae" genus="Eristalomyia" higherTaxonomySource="GBIF" kingdom="Animalia" order="Diptera" pageId="82" pageNumber="83" phylum="Arthropoda" rank="genus">
