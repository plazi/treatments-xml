<emphasis bold="true" box="[422,856,1106,1129]" pageId="2" pageNumber="537">
<taxonomicName baseAuthorityName="Linnaeus" baseAuthorityYear="1758" box="[422,781,1106,1129]" class="Insecta" family="Hydrophilidae" genus="Cercyon" kingdom="Animalia" order="Coleoptera" pageId="2" pageNumber="537" phylum="Arthropoda" rank="species" species="unipunctatus" subGenus="Cercyon">
<emphasis bold="true" box="[422,514,1106,1129]" italics="true" pageId="2" pageNumber="537">Cercyon</emphasis>
(
<emphasis bold="true" box="[529,621,1106,1129]" italics="true" pageId="2" pageNumber="537">Cercyon</emphasis>
) 
<emphasis bold="true" box="[636,781,1106,1129]" italics="true" pageId="2" pageNumber="537">unipunctatus</emphasis>
</taxonomicName>
group
</emphasis>
