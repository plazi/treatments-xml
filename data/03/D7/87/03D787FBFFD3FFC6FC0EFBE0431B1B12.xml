<taxonomicName baseAuthorityName="Walker" baseAuthorityYear="1850" box="[151,257,1110,1136]" class="Insecta" family="Cicadidae" genus="Pomponia" kingdom="Animalia" order="Hemiptera" pageId="11" pageNumber="108" phylum="Arthropoda" rank="species" species="linearis">
