................................................................................... 
<taxonomicName authority="Bates, 1881" authorityName="Bates" authorityYear="1881" box="[1223,1436,923,945]" class="Insecta" family="Cerambycidae" genus="Asemolea" higherTaxonomySource="GBIF" kingdom="Animalia" order="Coleoptera" pageId="12" pageNumber="519" phylum="Arthropoda" rank="genus">
