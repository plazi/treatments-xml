<taxonomicName box="[447,610,366,391]" class="Insecta" family="Tachinidae" genus="Houghia" kingdom="Animalia" order="Diptera" pageId="49" pageNumber="50" phylum="Arthropoda" rank="species" species="ochrofemur">
<emphasis box="[447,610,366,391]" italics="true" pageId="49" pageNumber="50">H. ochrofemur</emphasis>
</taxonomicName>
, and 
<taxonomicName box="[671,785,366,391]" class="Insecta" family="Tachinidae" genus="Houghia" kingdom="Animalia" order="Diptera" pageId="49" pageNumber="50" phylum="Arthropoda" rank="species" species="pallida">
<emphasis box="[671,785,366,391]" italics="true" pageId="49" pageNumber="50">H. pallida</emphasis>
