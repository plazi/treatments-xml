, 
<taxonomicName box="[1062,1168,1764,1787]" class="Insecta" family="Hesperiidae" genus="Astraptes" kingdom="Animalia" order="Lepidoptera" pageId="40" pageNumber="41" phylum="Arthropoda" rank="genus">
<emphasis box="[1062,1168,1764,1787]" italics="true" pageId="40" pageNumber="41">Astraptes</emphasis>
</taxonomicName>
and 
<taxonomicName box="[1227,1355,1764,1787]" class="Insecta" family="Hesperiidae" genus="Epargyreus" kingdom="Animalia" order="Lepidoptera" pageId="40" pageNumber="41" phylum="Arthropoda" rank="genus">
<emphasis box="[1227,1355,1764,1787]" italics="true" pageId="40" pageNumber="41">Epargyreus</emphasis>
</taxonomicName>
