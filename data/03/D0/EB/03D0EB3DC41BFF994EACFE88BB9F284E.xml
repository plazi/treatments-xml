; 
<collectionCode box="[697,776,1578,1601]" httpUri="http://grbio.org/cool/yjj8-is06" name="Museo di Zoologia, Instituto di Zoologia e Anatomia Comparata Universita di Torino" pageId="9" pageNumber="320">MZUT</collectionCode>
<number box="[783,838,1578,1602]" pageId="9" pageNumber="320" value="2119.0">2119</number>
