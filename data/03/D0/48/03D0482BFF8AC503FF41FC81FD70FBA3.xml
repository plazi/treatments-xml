<taxonomicName box="[748,964,952,977]" class="Insecta" family="Curculionidae" genus="Phillixus" higherTaxonomySource="GBIF" kingdom="Animalia" order="Coleoptera" pageId="6" pageNumber="7" phylum="Arthropoda" rank="species" species="fasciatus">
