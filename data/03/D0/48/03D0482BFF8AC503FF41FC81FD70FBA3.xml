<taxonomicName authority="Petri" authorityName="Petri" box="[223,593,989,1015]" class="Insecta" family="Curculionidae" genus="Lixus" kingdom="Animalia" order="Coleoptera" pageId="6" pageNumber="7" phylum="Arthropoda" rank="species" species="fasciatus" subGenus="Phillixus">
