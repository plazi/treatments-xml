<taxonomicName authority="Fst., Gultekin" authorityName="Fst., Gultekin" class="Insecta" family="Curculionidae" genus="Lixus" kingdom="Animalia" order="Coleoptera" pageId="6" pageNumber="7" phylum="Arthropoda" rank="species" species="lecontei">
