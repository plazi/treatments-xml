<quantity box="[1223,1325,1389,1413]" metricMagnitude="1" metricUnit="m" metricValue="1.5" metricValueMax="1.8" metricValueMin="1.2" pageId="121" pageNumber="122" unit="m" value="15.0" valueMax="18.0" valueMin="12.0">
