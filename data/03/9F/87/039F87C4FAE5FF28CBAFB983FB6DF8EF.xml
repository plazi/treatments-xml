<subSubSection pageId="128" pageNumber="129" type="nomenclature">
<paragraph blockId="128.[151,551,151,178]" box="[151,551,151,178]" pageId="128" pageNumber="129">
<heading bold="true" box="[151,551,151,178]" fontSize="11" level="1" pageId="128" pageNumber="129" reason="1">
<emphasis bold="true" box="[151,551,151,178]" pageId="128" pageNumber="129">
Genus 
<taxonomicName authority="Bartsch, 1934" authorityName="Bartsch" authorityYear="1934" box="[238,551,151,178]" class="Gastropoda" family="Drilliidae" genus="Douglassia" higherTaxonomySource="CoL" kingdom="Animalia" order="Neogastropoda" pageId="128" pageNumber="129" phylum="Mollusca" rank="genus">
<emphasis bold="true" box="[238,374,151,177]" italics="true" pageId="128" pageNumber="129">Douglassia</emphasis>
Bartsch, 
<number box="[492,551,152,178]" pageId="128" pageNumber="129" value="1934.0">1934</number>
</taxonomicName>
</emphasis>
</heading>
</paragraph>
<paragraph blockId="128.[151,1300,221,243]" box="[151,1300,221,243]" pageId="128" pageNumber="129">
<typeStatus box="[151,201,222,243]" pageId="128" pageNumber="129">Type</typeStatus>
species: 
<taxonomicName authority="Bartsch, 1934" authorityName="Bartsch" authorityYear="1934" box="[294,616,221,243]" class="Gastropoda" family="Drilliidae" genus="Douglassia" higherTaxonomySource="CoL" kingdom="Animalia" order="Neogastropoda" pageId="128" pageNumber="129" phylum="Mollusca" rank="species" species="enae">
<emphasis box="[294,463,221,243]" italics="true" pageId="128" pageNumber="129">Douglassia enae</emphasis>
, Bartsch, 
<number box="[565,616,221,243]" pageId="128" pageNumber="129" value="1934.0">1934</number>
</taxonomicName>
by original designation (Recent, off the north coast of 
<collectingCountry box="[1172,1293,221,243]" name="Puerto Rico" pageId="128" pageNumber="129">Puerto Rico</collectingCountry>
