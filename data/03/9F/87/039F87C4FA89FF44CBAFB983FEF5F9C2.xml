<paragraph blockId="236.[151,682,151,178]" box="[151,682,151,178]" pageId="236" pageNumber="237">
<heading bold="true" box="[151,682,151,178]" fontSize="11" level="1" pageId="236" pageNumber="237" reason="1">
<emphasis bold="true" box="[151,682,151,178]" pageId="236" pageNumber="237">
Genus 
<taxonomicName authority="Bartsch &amp; Rehder, 1939" authorityName="Bartsch &amp; Rehder" authorityYear="1939" box="[238,682,151,178]" class="Gastropoda" family="Drilliidae" genus="Lissodrillia" higherTaxonomySource="GBIF" kingdom="Animalia" order="Neogastropoda" pageId="236" pageNumber="237" phylum="Mollusca" rank="genus">
<emphasis bold="true" box="[238,375,151,177]" italics="true" pageId="236" pageNumber="237">Lissodrillia</emphasis>
Bartsch &amp; Rehder, 
<number box="[623,682,152,178]" pageId="236" pageNumber="237" value="1939.0">1939</number>
</taxonomicName>
</emphasis>
</heading>
</paragraph>
<paragraph blockId="236.[151,1436,222,275]" pageId="236" pageNumber="237">
<typeStatus box="[151,201,223,244]" pageId="236" pageNumber="237">Type</typeStatus>
species: 
<taxonomicName authority="Bartsch &amp; Rehder, 1939" authorityName="Bartsch &amp; Rehder" authorityYear="1939" box="[302,945,222,244]" class="Gastropoda" family="Drilliidae" genus="Cerodrillia" kingdom="Animalia" order="Neogastropoda" pageId="236" pageNumber="237" phylum="Mollusca" rank="species" species="schroederi" subGenus="Lissodrillia">
<emphasis box="[302,415,222,244]" italics="true" pageId="236" pageNumber="237">Cerodrillia</emphasis>
(
<emphasis box="[434,551,222,244]" italics="true" pageId="236" pageNumber="237">Lissodrillia</emphasis>
) 
<emphasis box="[569,677,222,244]" italics="true" pageId="236" pageNumber="237">schroederi</emphasis>
Bartsch &amp; Rehder, 
<number box="[894,945,222,244]" pageId="236" pageNumber="237" value="1939.0">1939</number>
</taxonomicName>
by original designation (Recent, off Charlotte Harbor, W Florida).
