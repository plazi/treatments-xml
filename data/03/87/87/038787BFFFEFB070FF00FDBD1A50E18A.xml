<subSubSection pageId="5" pageNumber="321" type="etymology">
<paragraph blockId="5.[151,1437,692,1763]" pageId="5" pageNumber="321">
<emphasis bold="true" box="[199,334,1701,1727]" pageId="5" pageNumber="321">Etymology.</emphasis>
