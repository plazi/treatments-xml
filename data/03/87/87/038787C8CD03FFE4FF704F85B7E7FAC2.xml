<paragraph blockId="10.[151,1436,950,1299]" pageId="10" pageNumber="11">
<emphasis bold="true" box="[199,352,1022,1047]" pageId="10" pageNumber="11">Distribution.</emphasis>
<collectingCountry box="[359,488,1022,1046]" name="Philippines" pageId="10" pageNumber="11">Philippines</collectingCountry>
