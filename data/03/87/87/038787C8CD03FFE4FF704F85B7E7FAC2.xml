<quantity box="[1236,1363,1022,1046]" metricMagnitude="2" metricUnit="m" metricValue="3.105" metricValueMax="4.84" metricValueMin="1.3699999999999999" pageId="10" pageNumber="11" unit="m" value="310.5" valueMax="484.0" valueMin="137.0">137–484 m</quantity>
