locality (
<collectingCounty box="[1085,1178,470,495]" pageId="3" pageNumber="261">Manaus</collectingCounty>
, 
<collectingMunicipality box="[1188,1363,470,495]" pageId="3" pageNumber="261">Reserva Ducke</collectingMunicipality>
