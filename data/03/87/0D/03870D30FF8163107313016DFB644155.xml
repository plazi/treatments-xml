<paragraph blockId="22.[264,1325,1197,1903]" pageId="22" pageNumber="23">
<emphasis bold="true" box="[312,677,1837,1863]" pageId="22" pageNumber="23">Derivation of specific epithet.</emphasis>
Latin 
<emphasis box="[753,823,1837,1862]" italics="true" pageId="22" pageNumber="23">flavus</emphasis>
and 
<emphasis box="[880,938,1837,1862]" italics="true" pageId="22" pageNumber="23">linea</emphasis>
