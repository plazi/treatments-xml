<emphasis bold="true" box="[151,394,1489,1515]" italics="true" pageId="13" pageNumber="14">Heteropsis antahala</emphasis>
</taxonomicName>
group (subgenera 
<taxonomicName box="[628,737,1489,1515]" class="Insecta" family="Curculionidae" genus="Heteropsis" kingdom="Animalia" order="Coleoptera" pageId="13" pageNumber="18" phylum="Arthropoda" rank="species" species="masoura">
<emphasis bold="true" box="[628,737,1489,1515]" italics="true" pageId="13" pageNumber="14">Masoura</emphasis>
</taxonomicName>
and 
<taxonomicName authority="Hemming, 1964" authorityName="Hemming" authorityYear="1964" box="[799,1127,1489,1515]" class="Insecta" family="Nymphalidae" genus="Admiratio" higherTaxonomySource="GBIF" kingdom="Metazoa" order="Lepidoptera" pageId="13" pageNumber="14" phylum="Arthropoda" rank="genus">
