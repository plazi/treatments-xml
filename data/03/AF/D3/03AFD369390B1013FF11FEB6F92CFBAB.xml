<paragraph blockId="1.[151,553,360,386]" box="[151,553,360,386]" pageId="1" pageNumber="170">
<heading bold="true" box="[151,553,360,386]" fontSize="11" level="1" pageId="1" pageNumber="170" reason="1">
<emphasis bold="true" box="[151,553,360,386]" pageId="1" pageNumber="170">
Genus 
<taxonomicName authority="Carl, 1932" authorityName="Carl" authorityYear="1932" box="[238,553,360,386]" class="Diplopoda" family="Paradoxosomatidae" genus="Polydrepanum" higherTaxonomySource="GBIF" kingdom="Animalia" order="Polydesmida" pageId="1" pageNumber="170" phylum="Arthropoda" rank="genus">
<emphasis bold="true" box="[238,416,360,386]" italics="true" pageId="1" pageNumber="170">Polydrepanum</emphasis>
<bibRefCitation box="[423,553,360,386]" pageId="1" pageNumber="170" refId="ref4047" refString="Carl, J. (1932) Diplopoden aus Sud-Indien und Ceylon. 1. Teil. Polydesmoidea. Revue suisse de Zoologie, 39, 411 - 529. https: // doi. org / 10.5962 / bhl. part. 118948" type="journal article">Carl, 1932</bibRefCitation>
