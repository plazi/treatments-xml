, wing 
<quantity box="[584,728,1753,1779]" metricMagnitude="-3" metricUnit="m" metricValue="5.5" metricValueMax="5.9" metricValueMin="5.1" pageId="127" pageNumber="128" unit="mm" value="5.5" valueMax="5.9" valueMin="5.1">5.1–5.9 mm</quantity>
