<paragraph blockId="168.[189,725,1646,1708]" box="[189,725,1682,1708]" pageId="168" pageNumber="169">
LENGTH. Body 
<quantity box="[362,506,1682,1708]" metricMagnitude="-3" metricUnit="m" metricValue="7.949999999999999" metricValueMax="8.1" metricValueMin="7.8" pageId="168" pageNumber="169" unit="mm" value="7.949999999999999" valueMax="8.1" valueMin="7.8">7.8–8.1 mm</quantity>
