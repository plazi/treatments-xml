<subSubSection pageId="144" pageNumber="145" type="diagnosis">
<paragraph blockId="144.[189,457,868,894]" box="[189,457,868,894]" pageId="144" pageNumber="145">
<heading bold="true" box="[189,457,868,894]" fontSize="11" level="3" pageId="144" pageNumber="145" reason="3">
