<quantity box="[584,728,1755,1781]" metricMagnitude="-3" metricUnit="m" metricValue="5.25" metricValueMax="5.4" metricValueMin="5.1" pageId="57" pageNumber="58" unit="mm" value="5.25" valueMax="5.4" valueMin="5.1">5.1–5.4 mm</quantity>
