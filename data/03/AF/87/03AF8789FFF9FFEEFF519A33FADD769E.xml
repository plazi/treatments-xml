and 
<taxonomicName authority="Martius (1832: 28)" authorityName="Martius" authorityPageNumber="28" authorityYear="1832" box="[1054,1415,1860,1886]" class="Liliopsida" family="Eriocaulaceae" genus="Eriocaulon" kingdom="Plantae" order="Poales" pageId="3" pageNumber="276" phylum="Tracheophyta" rank="species" species="cristatum">
