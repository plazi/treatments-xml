<taxonomicName authority="Martius (1832: 29)" authorityName="Martius" authorityPageNumber="29" authorityYear="1832" box="[136,555,1932,1958]" class="Liliopsida" family="Eriocaulaceae" genus="Eriocaulon" kingdom="Plantae" order="Poales" pageId="3" pageNumber="276" phylum="Tracheophyta" rank="species" species="hamiltonianum">
<emphasis box="[136,337,1932,1958]" italics="true" pageId="3" pageNumber="276">E. hamiltonianum</emphasis>
