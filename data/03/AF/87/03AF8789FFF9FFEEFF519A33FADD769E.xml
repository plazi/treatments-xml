(1832: n.7279), 
<taxonomicName authority="R. Ansari &amp; N. P. Balakrishnan (1994: 111)" authorityName="R. Ansari &amp; N. P. Balakrishnan" authorityPageNumber="111" authorityYear="1994" box="[416,1071,1824,1850]" class="Liliopsida" family="Eriocaulaceae" genus="Eriocaulon" kingdom="Plantae" order="Poales" pageId="3" pageNumber="276" phylum="Tracheophyta" rank="species" species="palghatense">
