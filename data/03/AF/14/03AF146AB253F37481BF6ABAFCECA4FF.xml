<paragraph blockId="4.[151,1437,1671,2019]" box="[199,844,1671,1696]" pageId="4" pageNumber="41">
<emphasis bold="true" box="[199,337,1671,1696]" pageId="4" pageNumber="41">Description</emphasis>
. Total length, 
<quantity box="[499,588,1671,1695]" metricMagnitude="-3" metricUnit="m" metricValue="4.5" pageId="4" pageNumber="41" unit="mm" value="4.5">4.5 mm</quantity>
