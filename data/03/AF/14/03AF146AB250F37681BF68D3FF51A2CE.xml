<quantity box="[501,590,1308,1332]" metricMagnitude="-3" metricUnit="m" metricValue="5.5" pageId="7" pageNumber="44" unit="mm" value="5.5">5.5 mm</quantity>
. Wing length, 
<quantity box="[753,842,1308,1332]" metricMagnitude="-3" metricUnit="m" metricValue="3.7" pageId="7" pageNumber="44" unit="mm" value="3.7">3.7 mm</quantity>
