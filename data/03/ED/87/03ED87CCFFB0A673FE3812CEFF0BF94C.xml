<taxonomicName authorityName="Burckhardt &amp; Basset" authorityYear="2000" box="[435,669,1388,1412]" class="Insecta" family="Psyllidae" genus="Calophya" higherTaxonomySource="GBIF" kingdom="Animalia" order="Hemiptera" pageId="74" pageNumber="129" phylum="Arthropoda" rank="species" species="clavuligera">
