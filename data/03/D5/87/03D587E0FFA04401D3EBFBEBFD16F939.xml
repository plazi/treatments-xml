<paragraph blockId="2.[151,476,1050,1077]" box="[151,476,1050,1077]" pageId="2" pageNumber="81">
<heading bold="true" box="[151,476,1050,1077]" fontSize="11" level="1" pageId="2" pageNumber="81" reason="1">
<emphasis bold="true" box="[151,476,1050,1077]" pageId="2" pageNumber="81">
<taxonomicName baseAuthorityName="Aurivillius" baseAuthorityYear="1922" box="[151,291,1050,1077]" class="Insecta" family="Cerambycidae" genus="Anhammus" kingdom="Animalia" order="Coleoptera" pageId="2" pageNumber="81" phylum="Arthropoda" rank="genus">
<emphasis bold="true" box="[151,291,1050,1077]" italics="true" pageId="2" pageNumber="81">Anhammus</emphasis>
</taxonomicName>
vs. 
<taxonomicName authorityName=", Pascoe" authorityYear="1866" box="[339,476,1050,1077]" class="Insecta" family="Cerambycidae" genus="Nephelotus" kingdom="Animalia" order="Coleoptera" pageId="2" pageNumber="81" phylum="Arthropoda" rank="genus">
<emphasis bold="true" box="[339,476,1050,1077]" italics="true" pageId="2" pageNumber="81">Nephelotus</emphasis>
</taxonomicName>
</emphasis>
