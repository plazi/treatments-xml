<taxonomicName authorityName="Temminck" authorityYear="1841" box="[2718,3151,824,863]" class="Mammalia" family="Emballonuridae" genus="Taphozous" kingdom="Animalia" order="Chiroptera" pageId="4" pageNumber="353" phylum="Chordata" rank="species" species="melanopogon">
