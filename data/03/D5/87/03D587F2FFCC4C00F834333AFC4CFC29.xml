<paragraph blockId="3.[2757,3558,1843,2411]" pageId="3" pageNumber="352">
<taxonomicName authorityName="Thomas" authorityYear="1909" box="[2764,3162,2001,2040]" class="Mammalia" family="Emballonuridae" genus="Taphozous" kingdom="Animalia" order="Chiroptera" pageId="3" pageNumber="352" phylum="Chordata" rank="species" species="hildegardeae">
