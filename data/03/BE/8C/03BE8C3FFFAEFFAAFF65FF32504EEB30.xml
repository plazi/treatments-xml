, 
<collectingCountry box="[648,713,523,549]" name="Israel" pageId="27" pageNumber="428">Israel</collectingCountry>
, 
<collectingCountry box="[726,778,523,549]" name="Italy" pageId="27" pageNumber="428">Italy</collectingCountry>
