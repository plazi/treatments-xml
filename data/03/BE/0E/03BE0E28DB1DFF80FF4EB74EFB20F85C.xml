<taxonomicName authorityName="Linnaeus" authorityYear="1758" box="[1023,1151,1746,1772]" class="Magnoliopsida" higherTaxonomySource="GBIF" kingdom="Plantae" order="Coleoptera" pageId="17" pageNumber="18" phylum="Tracheophyta" rank="order">Coleoptera</taxonomicName>
