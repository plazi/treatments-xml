<subSubSection pageId="20" pageNumber="21" type="etymology">
<paragraph blockId="20.[151,1436,152,1138]" box="[198,1085,991,1018]" pageId="20" pageNumber="21">
<emphasis bold="true" box="[198,331,991,1017]" pageId="20" pageNumber="21">Etymology</emphasis>
