<quantity box="[602,709,1986,2012]" metricMagnitude="-3" metricUnit="m" metricValue="3.58" pageId="64" pageNumber="65" unit="mm" value="3.58">3.58 mm</quantity>
; PW 
<quantity box="[773,881,1986,2012]" metricMagnitude="-3" metricUnit="m" metricValue="1.6" pageId="64" pageNumber="65" unit="mm" value="1.6">1.60 mm</quantity>
