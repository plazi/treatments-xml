<subSubSection pageId="34" pageNumber="35" type="etymology">
<paragraph blockId="34.[151,1436,152,418]" box="[198,1030,271,298]" pageId="34" pageNumber="35">
<emphasis bold="true" box="[198,331,271,297]" pageId="34" pageNumber="35">Etymology</emphasis>
