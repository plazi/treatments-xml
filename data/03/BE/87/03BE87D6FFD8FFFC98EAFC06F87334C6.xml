<quantity box="[1220,1306,1049,1075]" metricMagnitude="0" metricUnit="m" metricValue="1.83" pageId="73" pageNumber="74" unit="cm" value="183.0">183 cm</quantity>
(
<quantity box="[1324,1386,1048,1075]" metricMagnitude="0" metricUnit="m" metricValue="1.8288" pageId="73" pageNumber="74" unit="in" value="72.0">72 in</quantity>
