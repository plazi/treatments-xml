<quantity box="[428,527,1447,1474]" metricMagnitude="1" metricUnit="m" metricValue="5.5" metricValueMax="10.7" metricValueMin="0.3" pageId="44" pageNumber="45" unit="m" value="55.0" valueMax="107.0" valueMin="3.0">3–107 m</quantity>
