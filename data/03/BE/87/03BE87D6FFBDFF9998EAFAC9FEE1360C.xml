<emphasis box="[466,534,1519,1545]" italics="true" pageId="44" pageNumber="45">
<taxonomicName authorityName="Valenciennes in Cuvier &amp; Valenciennes" authorityYear="1840" box="[466,529,1519,1545]" class="Actinopterygii" family="Ariidae" genus="Arius" kingdom="Animalia" order="Siluriformes" pageId="44" pageNumber="45" phylum="Chordata" rank="genus">Arius</taxonomicName>
