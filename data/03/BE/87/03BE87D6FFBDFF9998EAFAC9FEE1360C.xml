<taxonomicName baseAuthorityName="Gunther" baseAuthorityYear="1864" box="[638,858,1483,1509]" class="Actinopterygii" family="Ariidae" genus="Netuma" kingdom="Animalia" order="Siluriformes" pageId="44" pageNumber="45" phylum="Chordata" rank="species" species="platypogon">
<emphasis box="[638,858,1483,1509]" italics="true" pageId="44" pageNumber="45">Netuma platypogon</emphasis>
