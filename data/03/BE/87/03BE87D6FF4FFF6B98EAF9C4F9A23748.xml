<collectingCountry box="[1200,1327,1663,1689]" name="Costa Rica" pageId="222" pageNumber="223">Costa Rica</collectingCountry>
, 
<collectingCountry box="[1341,1433,1663,1689]" name="Panama" pageId="222" pageNumber="223">Panama</collectingCountry>
, 
<collectingCountry box="[198,308,1699,1725]" name="Colombia" pageId="222" pageNumber="223">Colombia</collectingCountry>
(
<bibRefCitation author="Robertson and Allen" box="[324,626,1698,1725]" firstAuthor="Robertson" pageId="222" pageNumber="223" refId="ref316799" refString="Robertson, D. R. and Allen, G. R. (2015) Shorefishes of the Tropical Eastern Pacific: an Information System. Version 2.0 (2008). Smithsonian Tropical Research Institute, Balboa. http: // biogeodb. stri. si. edu / sftep / en / pages" type="url" year="2015">Robertson and Allen 2015</bibRefCitation>
), and 
<collectingCountry box="[695,790,1699,1725]" name="Ecuador" pageId="222" pageNumber="223">Ecuador</collectingCountry>
, including 
<collectingRegion box="[915,1093,1699,1725]" country="Ecuador" name="Galapagos" pageId="222" pageNumber="223">Islas Gal√°pagos</collectingRegion>
(
<bibRefCitation author="Grove and Lavenberg" box="[1108,1424,1699,1725]" firstAuthor="Grove" pageId="222" pageNumber="223" refId="ref284033" refString="Grove, J. S. &amp; Lavenberg, R. J. (1997) The Fishes of the Galapagos Islands. Stanford University Press, Stanford." type="book" year="1997">Grove and Lavenberg 1997</bibRefCitation>
