(
<quantity box="[300,357,1843,1870]" metricMagnitude="1" metricUnit="m" metricValue="1.3106399999999998" pageId="198" pageNumber="199" unit="ft" value="43.0">43 ft</quantity>
) (
<bibRefCitation author="Lin and Galland" box="[380,636,1843,1869]" firstAuthor="Lin" pageId="198" pageNumber="199" pagination="51 - 62" refId="ref295743" refString="Lin, H. - C. &amp; Galland, G. R. (2010) Molecular analysis of Acantheblemaria macrospilus (Teleostei: Chanopsidae) with description of a new species from the Gulf of California, Mexico. Zootaxa, 2525, 51 - 62. https: // doi. org / 10.11646 / zootaxa. 2525.1.3" type="journal article" year="2010">Lin and Galland 2010</bibRefCitation>
). Previously as 
<taxonomicName authorityName="Brock" authorityYear="1940" box="[815,983,1843,1869]" class="Actinopterygii" family="Chaenopsidae" genus="Acanthemblemaria" kingdom="Animalia" order="Perciformes" pageId="198" pageNumber="199" phylum="Chordata" rank="species" species="macrospilus">
<emphasis box="[815,983,1843,1869]" italics="true" pageId="198" pageNumber="199">A. macrospilus</emphasis>
</taxonomicName>
