<taxonomicName authority="Hayne" authorityName="Hayne" box="[851,1114,837,863]" class="Magnoliopsida" family="Fabaceae" genus="Hymenaea" kingdom="Plantae" order="Fabales" pageId="9" pageNumber="10" phylum="Tracheophyta" rank="species" species="stigonocarpa">
