<taxonomicName authority="Hayne" authorityName="Hayne" authorityYear="1830" box="[485,795,837,863]" class="Magnoliopsida" family="Fabaceae" genus="Hymenaea" kingdom="Plantae" order="Fabales" pageId="9" pageNumber="10" phylum="Tracheophyta" rank="species" species="martiana">
