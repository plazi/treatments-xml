<subSubSection pageId="9" pageNumber="10" type="biology_ecology">
<paragraph blockId="9.[151,1437,153,1259]" pageId="9" pageNumber="10">
<emphasis bold="true" box="[199,587,800,827]" pageId="9" pageNumber="10">Host plant, biology and habitat</emphasis>
. 
<taxonomicName authorityName="L. The" authorityYear="1990" box="[605,842,801,827]" class="Magnoliopsida" family="Fabaceae" genus="Hymenaea" kingdom="Plantae" order="Fabales" pageId="9" pageNumber="10" phylum="Tracheophyta" rank="species" species="courbaril">
<emphasis box="[605,842,801,827]" italics="true" pageId="9" pageNumber="10">Hymenaea courbaril</emphasis>
</taxonomicName>
L., 
<taxonomicName authority="Benth." authorityName="Benth." box="[895,1432,801,827]" class="Magnoliopsida" family="Fabaceae" genus="Hymenaea" kingdom="Plantae" order="Fabales" pageId="9" pageNumber="10" phylum="Tracheophyta" rank="variety" species="stigonocarpa" variety="pubescens">
<emphasis box="[895,1082,802,827]" italics="true" pageId="9" pageNumber="10">H. stigonocarpa</emphasis>
Hayne var. 
<emphasis box="[1229,1344,801,827]" italics="true" pageId="9" pageNumber="10">pubescens</emphasis>
Benth.
</taxonomicName>
