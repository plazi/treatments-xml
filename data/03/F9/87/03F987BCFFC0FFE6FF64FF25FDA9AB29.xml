<quantity box="[1267,1402,261,288]" metricMagnitude="-3" metricUnit="m" metricValue="2.3499999999999996" metricValueMax="2.4" metricValueMin="2.3" pageId="5" pageNumber="389" unit="mm" value="2.3499999999999996" valueMax="2.4" valueMin="2.3">2.3–2.4 mm</quantity>
