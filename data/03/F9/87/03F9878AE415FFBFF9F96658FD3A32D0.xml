. (
<quantity box="[570,714,1295,1319]" metricMagnitude="2" metricUnit="m" metricValue="9.605" metricValueMax="14.969999999999999" metricValueMin="4.24" pageId="19" pageNumber="20" unit="m" value="960.5" valueMax="1497.0" valueMin="424.0">424–1497 m</quantity>
