<subSubSection pageId="3" pageNumber="252" type="etymology">
<paragraph blockId="3.[136,1452,1612,1927]" box="[189,729,1684,1711]" pageId="3" pageNumber="252">
<emphasis bold="true" box="[189,328,1684,1710]" pageId="3" pageNumber="252">Etymology:</emphasis>
