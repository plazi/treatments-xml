<quantity box="[1136,1284,1164,1190]" metricMagnitude="2" metricUnit="m" metricValue="7.5" metricValueMax="8.0" metricValueMin="7.0" pageId="8" pageNumber="9" unit="m" value="750.0" valueMax="800.0" valueMin="700.0">700 ­ 800 m</quantity>
