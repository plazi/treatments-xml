<subSubSection pageId="15" pageNumber="16" type="nomenclature">
<paragraph blockId="15.[770,1156,292,315]" box="[770,1156,292,315]" pageId="15" pageNumber="16">
<heading box="[770,1156,292,315]" centered="true" fontSize="36" level="2" pageId="15" pageNumber="16" reason="8">
