<taxonomicName baseAuthorityName="Sars" baseAuthorityYear="1861" box="[1160,1327,189,212]" class="Malacostraca" family="Crangonidae" genus="Pontophilus" higherTaxonomySource="GBIF" kingdom="Animalia" order="Decapoda" pageId="9" phylum="Arthropoda" rank="species" species="norvegicus">
