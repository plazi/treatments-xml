<materialsCitation ID-GBIF-Occurrence="1499315716" collectionCode="HEAD" collectorName="Re-description. Male FW" county="Posterior" lastPageId="6" lastPageNumber="207" location="Antenna" municipality="Signa straight" pageId="5" pageNumber="206" specimenCount="1">
