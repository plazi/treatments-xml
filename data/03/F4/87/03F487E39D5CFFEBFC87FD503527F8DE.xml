<paragraph blockId="32.[813,1420,1584,1808]" pageId="32" pageNumber="683">
<emphasis bold="true" box="[813,1129,1584,1608]" pageId="32" pageNumber="683">Distribution and ecology.</emphasis>
<collectingCountry box="[1149,1257,1584,1608]" name="Colombia" pageId="32" pageNumber="683">Colombia</collectingCountry>
, 
<collectingCountry box="[1281,1416,1584,1608]" name="Costa Rica" pageId="32" pageNumber="683">Costa Rica</collectingCountry>
, 
<collectingCountry box="[813,905,1617,1641]" name="Ecuador" pageId="32" pageNumber="683">Ecuador</collectingCountry>
, 
<collectingCountry box="[921,1054,1617,1641]" name="El Salvador" pageId="32" pageNumber="683">El Salvador</collectingCountry>
, 
<collectingCountry box="[1070,1191,1617,1641]" name="Guatemala" pageId="32" pageNumber="683">Guatemala</collectingCountry>
, 
<collectingCountry box="[1207,1315,1617,1641]" name="Honduras" pageId="32" pageNumber="683">Honduras</collectingCountry>
, 
<collectingCountry box="[1331,1415,1617,1641]" name="Mexico" pageId="32" pageNumber="683">Mexico</collectingCountry>
, 
<collectingCountry box="[813,927,1651,1675]" name="Nicaragua" pageId="32" pageNumber="683">Nicaragua</collectingCountry>
, 
<collectingCountry box="[943,1031,1651,1674]" name="Panama" pageId="32" pageNumber="683">Panama</collectingCountry>
, and 
<collectingCountry box="[1098,1213,1651,1675]" name="Venezuela" pageId="32" pageNumber="683">Venezuela</collectingCountry>
