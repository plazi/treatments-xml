species 
<taxonomicName authority="Sowerby, 1825" authorityName="Sowerby" authorityYear="1825" box="[972,1353,1052,1077]" class="Bivalvia" family="Carditidae" genus="Cardita" kingdom="Animalia" order="Carditoida" pageId="17" pageNumber="68" phylum="Mollusca" rank="species" species="scalaris">
