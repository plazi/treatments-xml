<quantity box="[418,542,1618,1642]" metricMagnitude="2" metricUnit="m" metricValue="6.95" metricValueMax="13.0" metricValueMin="0.9" pageId="33" pageNumber="684" unit="m" value="695.0" valueMax="1300.0" valueMin="90.0">90–1300 m</quantity>
