<geoCoordinate box="[980,1088,1422,1447]" degrees="077" direction="west" minutes="46" orientation="longitude" pageId="21" pageNumber="672" precision="925" value="-77.76667">077°46′W</geoCoordinate>
; 
<quantity box="[1098,1220,1423,1447]" metricMagnitude="2" metricUnit="m" metricValue="6.55" metricValueMax="7.6" metricValueMin="5.5" pageId="21" pageNumber="672" unit="m" value="655.0" valueMax="760.0" valueMin="550.0">550–760 m</quantity>
; 
<date box="[1230,1366,1424,1448]" pageId="21" pageNumber="672" value="1988-06-28">28 Jun. 1988</date>
; 
<emphasis italics="true" pageId="21" pageNumber="672">
