<taxonomicName authorityName="Gerstmeier &amp; Eberle" authorityYear="2010" box="[595,688,1720,1745]" class="Insecta" family="Cleridae" genus="Xenorthrius" higherTaxonomySource="GBIF" kingdom="Animalia" order="Coleoptera" pageId="28" pageNumber="29" phylum="Arthropoda" rank="species" species="cruralis">
