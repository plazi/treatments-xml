<taxonomicName authorityName=", Schenkling" authorityYear="1912" box="[817,1052,1754,1777]" class="Insecta" family="Cleridae" genus="Xenorthrius" higherTaxonomySource="GBIF" kingdom="Animalia" order="Coleoptera" pageId="7" pageNumber="8" phylum="Arthropoda" rank="species" species="umbratus">
