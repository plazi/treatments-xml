<taxonomicName authorityName="Erichson" authorityYear="1848" box="[192,305,963,987]" class="Insecta" family="Glaresidae" genus="Glaresis" kingdom="Animalia" order="Coleoptera" pageId="21" pageNumber="20" phylum="Arthropoda" rank="genus">
