</taxonomicName>
, and 
<taxonomicName authority="Moriuti, 1969" authorityName="Moriuti" authorityYear="1969" box="[543,926,1555,1580]" class="Insecta" family="Yponomeutidae" genus="Argyresthia" kingdom="Animalia" order="Lepidoptera" pageId="13" pageNumber="14" phylum="Arthropoda" rank="species" species="nemorivaga" subGenus="Blastotere">
