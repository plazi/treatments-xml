<taxonomicName authorityName="Cotterill" authorityYear="2002" box="[1033,1320,445,471]" class="Mammalia" family="Rhinolophidae" genus="Rhinolophus" higherTaxonomySource="GBIF" kingdom="Animalia" order="Chiroptera" pageId="37" pageNumber="38" phylum="Chordata" rank="species" species="sakejiensis">
