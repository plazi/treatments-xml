<paragraph blockId="28.[151,283,654,681]" box="[151,283,654,681]" pageId="28" pageNumber="271">
<heading bold="true" box="[151,283,654,681]" fontSize="11" level="1" pageId="28" pageNumber="271" reason="1">
<taxonomicName authorityName="Mathews &amp; Iredale" authorityYear="1915" box="[151,283,654,681]" class="Aves" family="Procellariidae" genus="Calonectris" kingdom="Animalia" order="Procellariiformes" pageId="28" pageNumber="271" phylum="Chordata" rank="genus">
