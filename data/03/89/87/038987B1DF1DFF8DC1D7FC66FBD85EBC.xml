<emphasis bold="true" box="[151,609,1010,1036]" pageId="12" pageNumber="13">
Genus 
<taxonomicName authority="Light, 1939" authorityName="Light" authorityYear="1939" box="[238,609,1010,1036]" class="Maxillopoda" family="Diaptomidae" genus="Mastigodiaptomus" kingdom="Animalia" order="Calanoida" pageId="12" pageNumber="13" phylum="Arthropoda" rank="genus">
