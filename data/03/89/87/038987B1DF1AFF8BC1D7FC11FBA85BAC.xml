<heading bold="true" box="[151,513,901,927]" fontSize="11" level="1" pageId="11" pageNumber="12" reason="1">
<emphasis bold="true" box="[151,513,901,927]" pageId="11" pageNumber="12">
Genus 
<taxonomicName authority="Baird, 1843" authorityName="Baird" authorityYear="1843" box="[238,513,901,927]" class="Branchiopoda" family="Chydoridae" genus="Pleuroxus" kingdom="Animalia" order="Diplostraca" pageId="11" pageNumber="12" phylum="Arthropoda" rank="genus">
