<taxonomicName authority="Reitter, 1901" authorityName="Reitter" authorityYear="1901" box="[606,1075,692,719]" class="Insecta" family="Brentidae" genus="Loborhynchapion" higherTaxonomySource="GBIF" kingdom="Animalia" order="Coleoptera" pageId="15" pageNumber="166" phylum="Arthropoda" rank="species" species="lobirostre">
