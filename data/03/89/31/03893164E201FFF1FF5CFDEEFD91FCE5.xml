<collectingCountry box="[151,306,728,754]" name="Turkmenistan" pageId="15" pageNumber="166">Turkmenistan</collectingCountry>
just about 
<quantity box="[426,496,728,755]" metricMagnitude="4" metricUnit="m" metricValue="1.0" pageId="15" pageNumber="166" unit="km" value="10.0">10 km</quantity>
from 
<collectingCountry box="[562,607,729,755]" name="Iran" pageId="15" pageNumber="166">Iran</collectingCountry>
