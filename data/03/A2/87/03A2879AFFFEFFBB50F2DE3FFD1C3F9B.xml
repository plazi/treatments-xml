<paragraph blockId="14.[189,303,1280,1306]" box="[189,303,1280,1306]" pageId="14" pageNumber="15">
<heading bold="true" box="[189,303,1280,1306]" fontSize="11" level="3" pageId="14" pageNumber="15" reason="3">
