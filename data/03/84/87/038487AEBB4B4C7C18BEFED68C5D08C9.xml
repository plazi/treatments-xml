<taxonomicName authorityName="Mello-Leitao" authorityYear="1941" class="Arachnida" family="Cosmetidae" genus="Platymessa" higherTaxonomySource="GBIF" kingdom="Animalia" order="Opiliones" pageId="4" pageNumber="56" phylum="Arthropoda" rank="species" species="nigrolimbata">
