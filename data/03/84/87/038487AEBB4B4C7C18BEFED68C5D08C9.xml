<paragraph blockId="2.[151,1437,658,719]" pageId="2" pageNumber="54">
<emphasis bold="true" box="[151,286,658,683]" pageId="2" pageNumber="54">Etymology.</emphasis>
<taxonomicName authorityName="Mello-Leitao" authorityYear="1941" box="[298,446,658,683]" class="Arachnida" family="Cosmetidae" genus="Brachylibitia" higherTaxonomySource="GBIF" kingdom="Animalia" order="Opiliones" pageId="2" pageNumber="54" phylum="Arthropoda" rank="genus">
<emphasis box="[298,446,658,683]" italics="true" pageId="2" pageNumber="54">Brachylibitia</emphasis>
</taxonomicName>
