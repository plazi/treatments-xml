<taxonomicName authorityName="Mello-Leitao" authorityYear="1941" box="[962,1136,1896,1921]" class="Arachnida" family="Cosmetidae" genus="Brachylibitia" higherTaxonomySource="GBIF" kingdom="Animalia" order="Opiliones" pageId="4" pageNumber="56" phylum="Arthropoda" rank="species" species="ectroxantha">
