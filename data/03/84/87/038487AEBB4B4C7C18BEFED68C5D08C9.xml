<taxonomicName authorityName="Mello-Leitao" authorityYear="1941" box="[997,1125,1968,1993]" class="Arachnida" family="Cosmetidae" genus="Platymessa" higherTaxonomySource="GBIF" kingdom="Animalia" order="Opiliones" pageId="4" pageNumber="56" phylum="Arthropoda" rank="genus">
<emphasis box="[997,1125,1968,1993]" italics="true" pageId="4" pageNumber="56">Platymessa</emphasis>
</taxonomicName>
, 
<taxonomicName authorityName="Roewer" authorityYear="1963" box="[1140,1314,1968,1993]" class="Arachnida" family="Cosmetidae" genus="Platymessa" higherTaxonomySource="GBIF" kingdom="Animalia" order="Opiliones" pageId="4" pageNumber="56" phylum="Arthropoda" rank="species" species="transversalis">
