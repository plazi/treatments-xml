<subSubSection pageId="47" pageNumber="48" type="discussion">
<paragraph blockId="47.[151,1437,258,1147]" pageId="47" pageNumber="48">
<emphasis bold="true" box="[199,328,1050,1075]" pageId="47" pageNumber="48">
<emphasis bold="true" box="[199,322,1050,1075]" italics="true" pageId="47" pageNumber="48">Comments</emphasis>
.
</emphasis>
<taxonomicName authorityName="Luk &amp; Marshall" authorityYear="2014" box="[340,538,1051,1075]" class="Insecta" family="Sphaeroceridae" genus="Aptilotella" kingdom="Animalia" order="Diptera" pageId="47" pageNumber="48" phylum="Arthropoda" rank="species" species="macta">
<emphasis box="[340,538,1051,1075]" italics="true" pageId="47" pageNumber="48">Aptilotella macta</emphasis>
