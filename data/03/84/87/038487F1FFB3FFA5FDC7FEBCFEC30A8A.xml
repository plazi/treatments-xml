<taxonomicName authorityName="Luk &amp; Marshall" authorityYear="2014" box="[335,532,1843,1867]" class="Insecta" family="Sphaeroceridae" genus="Aptilotella" kingdom="Animalia" order="Diptera" pageId="22" pageNumber="23" phylum="Arthropoda" rank="species" species="gladia">
