<paragraph blockId="8.[151,1436,151,536]" pageId="8" pageNumber="342">
<emphasis bold="true" box="[199,335,151,176]" pageId="8" pageNumber="342">Comments.</emphasis>
<taxonomicName box="[343,584,152,176]" class="Insecta" family="Chrysomelidae" genus="Miritius" higherTaxonomySource="GBIF" kingdom="Animalia" order="Coleoptera" pageId="8" pageNumber="342" phylum="Arthropoda" rank="species" species="benevidensis">
