<emphasis bold="true" box="[94,197,1914,1939]" pageId="7" pageNumber="8">Content:</emphasis>
(two species) 
<taxonomicName authority="(Daudin, 1803)" baseAuthorityName="Daudin" baseAuthorityYear="1803" class="Reptilia" family="Colubridae" genus="Xenoxybelis" kingdom="Animalia" order="Squamata" pageId="7" pageNumber="8" phylum="Chordata" rank="species" species="argenteus">
<emphasis box="[370,613,1914,1939]" italics="true" pageId="7" pageNumber="8">Xenoxybelis argenteus</emphasis>
(Daudin, 1803)
</taxonomicName>
; 
<taxonomicName authority="(Procter, 1923)" baseAuthorityName="Procter" baseAuthorityYear="1923" box="[179,621,1946,1971]" class="Reptilia" family="Colubridae" genus="Xenoxybelis" kingdom="Animalia" order="Squamata" pageId="7" pageNumber="8" phylum="Chordata" rank="species" species="boulengeri">
<emphasis box="[179,434,1946,1971]" italics="true" pageId="7" pageNumber="8">Xenoxybelis boulengeri</emphasis>
(Procter, 1923)
</taxonomicName>
