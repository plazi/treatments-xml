<collectingCountry box="[1480,1611,1161,1200]" name="Eritrea" pageId="10" pageNumber="237">Eritrea</collectingCountry>
, 
<emphasis box="[1633,1787,1161,1200]" italics="true" pageId="10" pageNumber="237">
