<materialsCitation pageId="19" pageNumber="246">
“Mount Penrisen, 
<collectingCountry box="[3381,3538,2255,2294]" name="Malaysia" pageId="19" pageNumber="246">Sarawak</collectingCountry>
, Borneo [
<collectingCountry box="[2917,3092,2308,2347]" name="Malaysia" pageId="19" pageNumber="246">Malaysia</collectingCountry>
], 
<quantity box="[3122,3296,2308,2347]" metricMagnitude="3" metricUnit="m" metricValue="1.28016" pageId="19" pageNumber="246" unit="ft" value="4200.0">4200 feet</quantity>
[= 
<quantity box="[3362,3509,2308,2347]" metricMagnitude="3" metricUnit="m" metricValue="1.28" pageId="19" pageNumber="246" unit="m" value="1280.0">1280 m</quantity>
