<subSubSection pageId="19" pageNumber="246" type="discussion">
<taxonomicName authorityName="Shelford" authorityYear="1901" box="[2748,3065,2362,2401]" class="Mammalia" family="Hipposideridae" genus="Hipposideros" kingdom="Animalia" order="Chiroptera" pageId="19" pageNumber="246" phylum="Chordata" rank="species" species="coxi">
