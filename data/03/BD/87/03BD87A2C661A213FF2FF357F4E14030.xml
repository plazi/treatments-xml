<materialsCitation pageId="23" pageNumber="250">
“North Pagi [
<collectingCountry box="[1434,1562,3556,3595]" name="Iceland" pageId="23" pageNumber="250">Island</collectingCountry>
], Mentawi Islands, lowlands,” 
<collectingRegion box="[1361,1523,3609,3648]" country="Indonesia" name="Sumatera Utara" pageId="23" pageNumber="250">Sumatra</collectingRegion>
, 
<collectingCountry box="[1542,1733,3609,3648]" name="Indonesia" pageId="23" pageNumber="250">Indonesia</collectingCountry>
