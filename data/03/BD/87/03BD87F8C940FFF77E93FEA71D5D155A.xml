22. 
<taxonomicName authority="Uchida, 1978" authorityName="Uchida" authorityYear="1978" box="[195,525,383,409]" class="Polychaeta" family="Serpulidae" genus="Microprotula" kingdom="Animalia" order="Sabellida" pageId="63" pageNumber="64" phylum="Annelida" rank="genus">
