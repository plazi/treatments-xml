, 
<collectingCountry box="[1033,1171,3290,3329]" name="Liberia" pageId="21" pageNumber="248">Liberia</collectingCountry>
, 
<collectingCountry box="[1195,1413,3290,3329]" name="Ivory Coast" pageId="21" pageNumber="248">Ivory Coast</collectingCountry>
, 
<collectingCountry box="[1437,1565,3290,3329]" name="Ghana" pageId="21" pageNumber="248">Ghana</collectingCountry>
, extreme SE 
<collectingCountry box="[199,343,3342,3381]" name="Nigeria" pageId="21" pageNumber="248">Nigeria</collectingCountry>
, 
<collectingCountry box="[366,571,3342,3381]" name="Cameroon" pageId="21" pageNumber="248">Cameroon</collectingCountry>
, 
<collectingCountry box="[594,724,3342,3381]" name="Gabon" pageId="21" pageNumber="248">Gabon</collectingCountry>
, extreme S 
<collectingCountry box="[957,1440,3342,3381]" name="Central African Republic" pageId="21" pageNumber="248">Central African Republic</collectingCountry>
, N 
<collectingCountry box="[1511,1716,3342,3381]" name="Democratic Republic of the Congo" pageId="21" pageNumber="248">DR Congo</collectingCountry>
, and SW 
<collectingCountry box="[273,425,3395,3434]" name="Uganda" pageId="21" pageNumber="248">Uganda</collectingCountry>
