<paragraph blockId="20.[990,1786,2932,3497]" pageId="20" pageNumber="247">
<taxonomicName authorityName="J. A. Allen" authorityYear="1917" box="[992,1302,3090,3129]" class="Mammalia" family="Hipposideridae" genus="Hipposideros" kingdom="Animalia" order="Chiroptera" pageId="20" pageNumber="247" phylum="Chordata" rank="species" species="abae">Hipposideros abae</taxonomicName>
