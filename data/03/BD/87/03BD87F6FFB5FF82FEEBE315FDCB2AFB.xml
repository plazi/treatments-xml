<number box="[607,661,1130,1156]" pageId="3" pageNumber="54" value="2.65">2.65</number>
, 
<number box="[674,713,1130,1156]" pageId="3" pageNumber="54" value="2.5">2.5</number>
, 
<number box="[727,766,1130,1156]" pageId="3" pageNumber="54" value="0.2">0.2</number>
, 
<number box="[779,833,1130,1156]" pageId="3" pageNumber="54" value="0.55">0.55</number>
, mid, 
<number box="[908,962,1130,1156]" pageId="3" pageNumber="54" value="9.93">9.93</number>
, 
<number box="[975,1014,1130,1156]" pageId="3" pageNumber="54" value="6.1">6.1</number>
, 
<number box="[1027,1066,1130,1156]" pageId="3" pageNumber="54" value="2.9">2.9</number>
, 
<number box="[1080,1119,1130,1156]" pageId="3" pageNumber="54" value="0.8">0.8</number>
