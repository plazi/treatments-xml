8. 
<taxonomicName authority="Berkeley, 1835" authorityName="Berkeley" authorityYear="1835" box="[180,463,461,487]" class="Polychaeta" family="Serpulidae" genus="Ditrupa" kingdom="Animalia" order="Sabellida" pageId="38" pageNumber="39" phylum="Annelida" rank="genus">
