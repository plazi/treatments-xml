<number box="[1337,1367,1036,1060]" pageId="1" pageNumber="32" value="16.0">16</number>
), legs mainly brown except basal 
<number box="[470,480,1071,1095]" pageId="1" pageNumber="32" value="1.0">1</number>
/ 
<number box="[490,506,1071,1095]" pageId="1" pageNumber="32" value="4.0">4</number>
