<collectorName box="[275,325,1902,1927]" pageId="17" pageNumber="18">This</collectorName>
specimen resembles 
<taxonomicName box="[575,735,1902,1926]" class="Insecta" family="Elateridae" genus="Dima" higherTaxonomySource="GBIF" kingdom="Animalia" order="Coleoptera" pageId="17" pageNumber="18" phylum="Arthropoda" rank="species" species="hirtipennis">
<emphasis box="[575,735,1902,1926]" italics="true" pageId="17" pageNumber="18">D. hirtipennis</emphasis>
</taxonomicName>
