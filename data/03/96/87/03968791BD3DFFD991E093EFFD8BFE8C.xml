<subSubSection pageId="39" pageNumber="40" type="diagnosis">
<paragraph blockId="39.[189,310,1296,1322]" box="[189,310,1296,1322]" pageId="39" pageNumber="40">
<heading bold="true" box="[189,310,1296,1322]" fontSize="11" level="3" pageId="39" pageNumber="40" reason="3">
