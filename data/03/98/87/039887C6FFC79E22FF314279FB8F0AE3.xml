<collectingCountry box="[1222,1329,1866,1891]" name="Australia" pageId="45" pageNumber="529">Australia</collectingCountry>
: 
<taxonomicName authority="Wesenberg-Lund, 1950" authorityName="Wesenberg-Lund" authorityYear="1950" class="Polychaeta" family="Terebellidae" genus="Baffinia" kingdom="Animalia" order="Terebellida" pageId="45" pageNumber="529" phylum="Annelida" rank="genus">
<emphasis box="[1346,1436,1867,1891]" italics="true" pageId="45" pageNumber="529">Baffinia</emphasis>
<bibRefCitation author="Wesenberg-Lund" box="[151,413,1902,1927]" pageId="45" pageNumber="529" refString="Wesenberg-Lund, E. (1950) Polychaeta. The Danish Ingolf-Expedition, 4 (14), 1 - 92." type="journal article" year="1950">
Wesenberg-Lund, 
<number box="[357,413,1902,1927]" pageId="45" pageNumber="529" value="1950.0">1950</number>
</bibRefCitation>
</taxonomicName>
and 
<taxonomicName authority="Hessle, 1917" authorityName="Hessle" authorityYear="1917" box="[469,780,1902,1927]" class="Polychaeta" family="Terebellidae" genus="Spinosphaera" kingdom="Animalia" order="Terebellida" pageId="45" pageNumber="529" phylum="Annelida" rank="genus">
<emphasis box="[469,623,1902,1927]" italics="true" pageId="45" pageNumber="529">Spinosphaera</emphasis>
<bibRefCitation author="Hessle" box="[631,780,1902,1927]" pageId="45" pageNumber="529" refString="Hessle, C. (1917) Zur Kenntnis der terebellomorphen Polychaeten. Zoologiska Bidrag fran Uppsala, 5, 39 - 258." type="journal article" year="1917">
Hessle, 
<number box="[721,780,1903,1927]" pageId="45" pageNumber="529" value="1917.0">1917</number>
</bibRefCitation>
</taxonomicName>
, which have notopodia extending almost to the pygidium, 
<taxonomicName authority="Hutchings &amp; Glasby, 1988" authorityName="Hutchings &amp; Glasby" authorityYear="1988" box="[151,582,1938,1963]" class="Polychaeta" family="Terebellidae" genus="Arranooba" kingdom="Animalia" order="Terebellida" pageId="45" pageNumber="529" phylum="Annelida" rank="genus">
