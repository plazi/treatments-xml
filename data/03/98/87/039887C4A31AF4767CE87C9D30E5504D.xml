<taxonomicName authority="Distant, 1909" authorityName="Distant" authorityYear="1909" box="[237,490,654,673]" class="Insecta" family="Acanthosomatidae" genus="Mahea" higherTaxonomySource="CoL" kingdom="Animalia" order="Hemiptera" pageId="6" pageNumber="27" phylum="Arthropoda" rank="species" species="sexualis">
