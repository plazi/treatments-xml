<subSubSection box="[197,1191,502,529]" pageId="12" pageNumber="13" type="etymology">
<paragraph blockId="12.[151,1438,152,683]" box="[197,1191,502,529]" pageId="12" pageNumber="13">
<emphasis bold="true" box="[197,337,502,528]" pageId="12" pageNumber="13">Etymology.</emphasis>
Latin 
<taxonomicName authorityName="Scarbrough &amp; Perez-Gelabert" authorityYear="2009" box="[414,507,503,528]" class="Insecta" family="Asilidae" genus="Efferia" higherTaxonomySource="GBIF" kingdom="Animalia" order="Diptera" pageId="12" pageNumber="13" phylum="Arthropoda" rank="species" species="angusta">
<emphasis box="[414,507,503,528]" italics="true" pageId="12" pageNumber="13">angusta</emphasis>
</taxonomicName>
