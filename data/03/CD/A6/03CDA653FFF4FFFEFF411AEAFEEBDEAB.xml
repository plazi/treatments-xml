<paragraph blockId="29.[151,1436,1734,2013]" box="[151,1212,1843,1869]" pageId="29" pageNumber="30">
<taxonomicName baseAuthorityName="J. B. Ferussac" baseAuthorityYear="1807" box="[151,501,1843,1869]" class="Gastropoda" family="Planorbidae" genus="Gyraulus" kingdom="Animalia" order="Hygrophila" pageId="29" pageNumber="30" phylum="Mollusca" rank="species" species="acronicus" subGenus="Gyraulus">
