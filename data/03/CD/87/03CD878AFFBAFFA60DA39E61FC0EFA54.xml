<taxonomicName authorityName="Varga" authorityYear="2018" box="[842,1067,1984,2009]" class="Insecta" family="Ichneumonidae" genus="Afroanomalia" higherTaxonomySource="GBIF" kingdom="Animalia" order="Hymenoptera" pageId="0" pageNumber="146" phylum="Arthropoda" rank="species" species="pseudoclistopyga">
