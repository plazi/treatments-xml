, 
<taxonomicName box="[1032,1130,972,996]" class="Insecta" family="Perlidae" genus="Perlinella" kingdom="Animalia" order="Plecoptera" pageId="4" pageNumber="35" phylum="Arthropoda" rank="species" species="zwicki">P. zwicki</taxonomicName>
, 
<taxonomicName baseAuthorityName="Newman" baseAuthorityYear="1839" box="[1142,1261,972,996]" class="Insecta" family="Perlidae" genus="Neoperla" kingdom="Animalia" order="Plecoptera" pageId="4" pageNumber="35" phylum="Arthropoda" rank="species" species="clymene">N. clymene</taxonomicName>
</emphasis>
, 
