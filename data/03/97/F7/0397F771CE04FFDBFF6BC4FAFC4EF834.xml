<taxonomicName authorityName="Bondar" authorityYear="1923" box="[582,704,2011,2036]" class="Insecta" family="Aleyrodidae" genus="Aleurodicus" kingdom="Animalia" order="Hemiptera" pageId="34" pageNumber="35" phylum="Arthropoda" rank="species" species="capiangae">
<emphasis box="[582,704,2011,2036]" italics="true" pageId="34" pageNumber="35">capiangae</emphasis>
</taxonomicName>
/ 
<taxonomicName box="[727,812,2011,2036]" class="Insecta" family="Aleyrodidae" genus="Aleurodicus" kingdom="Animalia" order="Hemiptera" pageId="34" pageNumber="35" phylum="Arthropoda" rank="species" species="dugesii">
