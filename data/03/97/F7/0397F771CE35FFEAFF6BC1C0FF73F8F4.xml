<subSubSection pageId="19" pageNumber="20" type="description">
<paragraph blockId="19.[151,1436,338,1844]" box="[151,605,338,364]" pageId="19" pageNumber="20">
Redescription, from 
<typeStatus box="[392,485,338,364]" pageId="19" pageNumber="20">neotype</typeStatus>
