differs from 
<taxonomicName authority="H. Perrier" authorityName="H. Perrier" class="Magnoliopsida" family="Salicaceae" genus="Homalium" kingdom="Plantae" order="Malpighiales" pageId="17" pageNumber="50" phylum="Tracheophyta" rank="species" species="boinense">H. boinense H. Perrier</taxonomicName>
