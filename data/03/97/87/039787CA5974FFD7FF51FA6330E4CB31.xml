<collectingCountry box="[778,892,1726,1752]" name="Argentina" pageId="24" pageNumber="25">Argentina</collectingCountry>
, 
<collectingCountry box="[906,991,1726,1752]" name="Bolivia" pageId="24" pageNumber="25">Bolivia</collectingCountry>
, 
<collectingCountry box="[1005,1076,1726,1752]" name="Brazil" pageId="24" pageNumber="25">Brazil</collectingCountry>
, and 
<collectingCountry box="[1140,1244,1727,1753]" name="Paraguay" pageId="24" pageNumber="25">Paraguay</collectingCountry>
(
<bibRefCitation author="Metcalf, Z. P." box="[1261,1432,1726,1752]" pageId="24" pageNumber="25" pagination="1 - 585" refId="ref88793" refString="Metcalf, Z. P. (1963 a) General catalogue of the Homoptera, Fascicle VIII. Cicadoidea. Part 1. Cicadidae. Section I. Tibiceninae. North Carolina State College Contribution, 1502, i-vii, 1 - 585." type="journal article" year="1963">Metcalf 1963a</bibRefCitation>
; Sanborn 2011b; 2013; 2016c; 
<bibRefCitation author="Sanborn, A. F. &amp; Heath, M. S." box="[489,753,1762,1788]" pageId="24" pageNumber="25" pagination="1 - 94" refId="ref91517" refString="Sanborn, A. F. &amp; Heath, M. S. (2014) The cicadas of Argentina with new records, a new genus and fifteen new species (Hemiptera: Cicadoidea: Cicadidae). Zootaxa, 3883 (1), 1 - 94. https: // doi. org / 10.11646 / zootaxa. 3883.1. 1" type="journal article" year="2014">Sanborn &amp; Heath 2014</bibRefCitation>
