<emphasis bold="true" box="[199,352,367,392]" pageId="15" pageNumber="16">Distribution.</emphasis>
<collectingCountry box="[359,496,367,391]" name="Madagascar" pageId="15" pageNumber="16">Madagascar</collectingCountry>
