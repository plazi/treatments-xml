<subSubSection pageId="23" pageNumber="22" type="distribution">
<paragraph blockId="23.[192,1440,1179,1267]" pageId="23" pageNumber="22">
<emphasis bold="true" box="[192,423,1179,1203]" pageId="23" pageNumber="22">DISTRIBUTION.</emphasis>
<taxonomicName authorityName="Burmeister" authorityYear="1847" box="[429,718,1179,1203]" class="Insecta" family="Dynastidae" genus="Heterogomphus" kingdom="Animalia" order="Coleoptera" pageId="23" pageNumber="22" phylum="Arthropoda" rank="species" species="eteocles">
<emphasis box="[429,718,1179,1203]" italics="true" pageId="23" pageNumber="22">Heterogomphus eteocles</emphasis>
