<taxonomicName authority="Silvestri" authorityName="Silvestri" box="[582,991,543,568]" class="Insecta" family="Margarodidae" genus="Margarodes" kingdom="Animalia" order="Hemiptera" pageId="15" pageNumber="514" phylum="Arthropoda" rank="species" species="mediterraneus">
