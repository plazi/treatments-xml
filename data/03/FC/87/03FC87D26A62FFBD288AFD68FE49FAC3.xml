<taxonomicName box="[345,531,627,649]" class="Insecta" family="Hybotidae" genus="Platypalpus" higherTaxonomySource="CoL" kingdom="Animalia" order="Diptera" pageId="13" pageNumber="48" phylum="Arthropoda" rank="species" species="canus">
