, or 
<taxonomicName box="[1101,1317,1827,1851]" class="Insecta" family="Nymphalidae" genus="Speyeria" kingdom="Animalia" order="Lepidoptera" pageId="29" pageNumber="28" phylum="Arthropoda" rank="species" species="hesperis">
