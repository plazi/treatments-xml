</taxonomicName>
[
<taxonomicName box="[1335,1431,1827,1851]" class="Insecta" family="Nymphalidae" genus="Speyeria" kingdom="Animalia" order="Lepidoptera" pageId="29" pageNumber="28" phylum="Arthropoda" rank="species" species="atlantis">
