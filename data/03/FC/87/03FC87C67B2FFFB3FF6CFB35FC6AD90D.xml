<emphasis box="[1211,1279,1795,1819]" italics="true" pageId="29" pageNumber="28">electa</emphasis>
(Edwards)
</taxonomicName>
[= 
<taxonomicName authority="Edwards" authorityName="Edwards" authorityYear="1892" box="[192,543,1827,1851]" class="Insecta" family="Nymphalidae" genus="Argynnis" kingdom="Animalia" order="Lepidoptera" pageId="29" pageNumber="28" phylum="Arthropoda" rank="species" species="cornelia">
<emphasis box="[192,420,1827,1851]" italics="true" pageId="29" pageNumber="28">Argynnis Cornelia</emphasis>
Edwards
</taxonomicName>
], 
<taxonomicName box="[563,698,1827,1851]" class="Insecta" family="Nymphalidae" genus="Speyeria" kingdom="Animalia" order="Lepidoptera" pageId="29" pageNumber="28" phylum="Arthropoda" rank="species" species="hesperis">
<emphasis box="[563,698,1827,1851]" italics="true" pageId="29" pageNumber="28">S. hesperis</emphasis>
</taxonomicName>
[
<taxonomicName box="[715,811,1827,1851]" class="Insecta" family="Nymphalidae" genus="Speyeria" kingdom="Animalia" order="Lepidoptera" pageId="29" pageNumber="28" phylum="Arthropoda" rank="species" species="atlantis">
<emphasis box="[715,811,1827,1851]" italics="true" pageId="29" pageNumber="28">atlantis</emphasis>
