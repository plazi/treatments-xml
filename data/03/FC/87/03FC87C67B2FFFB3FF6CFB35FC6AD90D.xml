] 
<taxonomicName authority="(Hermann)" baseAuthorityName="Hermann" box="[829,1055,1827,1851]" class="Insecta" family="Nymphalidae" genus="Argynnis" kingdom="Animalia" order="Lepidoptera" pageId="29" pageNumber="28" phylum="Arthropoda" rank="species" species="nikias">
