“ 
<typeStatus box="[421,575,1603,1627]" pageId="29" pageNumber="28">HOLOTYPE</typeStatus>
[male] 
<taxonomicName authority="Scott" authorityName="Scott, Kondla, and Spomer" authorityYear="1998" box="[662,1034,1603,1627]" class="Insecta" family="Nymphalidae" genus="Speyeria" kingdom="Animalia" order="Lepidoptera" pageId="29" pageNumber="28" phylum="Arthropoda" rank="subSpecies" species="atlantis" subSpecies="sorocko">Speyeria atlantis sorocko Scott</taxonomicName>
