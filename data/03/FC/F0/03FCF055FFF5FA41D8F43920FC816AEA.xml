<subSubSection pageId="7" pageNumber="8" type="etymology">
<paragraph blockId="7.[189,324,267,293]" box="[189,324,267,293]" pageId="7" pageNumber="8">
<heading bold="true" box="[189,324,267,293]" fontSize="11" level="3" pageId="7" pageNumber="8" reason="3">
<emphasis bold="true" box="[189,324,267,293]" pageId="7" pageNumber="8">Etymology</emphasis>
</heading>
</paragraph>
<paragraph blockId="7.[189,1398,316,380]" pageId="7" pageNumber="8">
