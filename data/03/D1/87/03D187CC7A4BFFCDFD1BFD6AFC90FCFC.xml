<emphasis box="[518,843,823,853]" italics="true" pageId="8" pageNumber="9">
<taxonomicName authorityName="Karsch" authorityYear="1878" box="[518,632,823,853]" class="Arachnida" family="Salticidae" genus="Maratus" kingdom="Animalia" order="Araneae" pageId="8" pageNumber="9" phylum="Arthropoda" rank="genus">Maratus</taxonomicName>
