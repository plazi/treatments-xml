<subSubSection pageId="6" pageNumber="67" type="distribution">
<paragraph blockId="6.[264,1325,398,1785]" pageId="6" pageNumber="67">
<emphasis bold="true" box="[312,622,1638,1664]" pageId="6" pageNumber="67">Distribution and habitat</emphasis>
. 
<taxonomicName box="[639,874,1639,1664]" class="Insecta" family="Noctuidae" genus="Lithophane" kingdom="Animalia" order="Lepidoptera" pageId="6" pageNumber="67" phylum="Arthropoda" rank="species" species="boogeri">
<emphasis box="[639,874,1639,1664]" italics="true" pageId="6" pageNumber="67">Lithophane boogeri</emphasis>
