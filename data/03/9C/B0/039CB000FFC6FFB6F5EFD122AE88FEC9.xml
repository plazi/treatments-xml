<typeStatus box="[378,482,1529,1553]" pageId="17" pageNumber="18">Holotype</typeStatus>
<number box="[491,512,1530,1554]" pageId="17" pageNumber="18" value="3.0">3</number>
and allotype Ƥ, above Nu‘uanu Pali lookout, 
<quantity box="[1046,1132,1529,1553]" metricMagnitude="2" metricUnit="m" metricValue="4.2672" pageId="17" pageNumber="18" unit="ft" value="1400.0">1400 ft</quantity>
., 
<geoCoordinate box="[1150,1258,1529,1553]" direction="north" orientation="latitude" pageId="17" pageNumber="18" precision="55" value="21.365">
<number box="[1150,1229,1529,1553]" pageId="17" pageNumber="18" value="21.365">21.365</number>
°N
</geoCoordinate>
<geoCoordinate box="[1267,1395,1529,1553]" direction="west" orientation="longitude" pageId="17" pageNumber="18" precision="55" value="-157.761">
<number box="[1267,1359,1529,1553]" pageId="17" pageNumber="18" value="157.761">157.761</number>
°W
</geoCoordinate>
, on bait sponge, 
<date box="[293,417,1566,1590]" pageId="17" pageNumber="18" value="2009-08-02">
<number box="[293,307,1566,1590]" pageId="17" pageNumber="18" value="2.0">2</number>
.viii. 
<number box="[355,417,1566,1590]" pageId="17" pageNumber="18" value="2009.0">2009</number>
</date>
, K. Magnacca (
<collectionCode box="[593,674,1566,1590]" pageId="17" pageNumber="18">UHIM</collectionCode>
); 
<typeStatus box="[693,792,1567,1591]" pageId="17" pageNumber="18">paratype</typeStatus>
, 
<number box="[803,824,1566,1590]" pageId="17" pageNumber="18" value="3.0">3</number>
