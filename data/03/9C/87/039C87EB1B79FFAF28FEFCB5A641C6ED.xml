<collectingRegion box="[760,853,403,429]" country="China" name="Sichuan" pageId="7" pageNumber="325">Sichuan</collectingRegion>
, 
<collectingCountry box="[864,931,403,429]" name="China" pageId="7" pageNumber="325">China</collectingCountry>
(
<figureCitation box="[946,1014,403,429]" captionStart="FIGURE 8" captionStartId="9.[151,250,1968,1992]" captionTargetBox="[165,1425,971,1941]" captionTargetId="figure-87@9.[159,1428,966,1945]" captionTargetPageId="9" captionText="FIGURE 8. Distribution of the four new Pimoa species described here." figureDoi="http://doi.org/10.5281/zenodo.5881238" httpUri="https://zenodo.org/record/5881238/files/figure.png" pageId="7" pageNumber="325">Fig. 8</figureCitation>
