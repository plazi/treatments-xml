<subSubSection pageId="6" pageNumber="207" type="discussion">
<paragraph blockId="6.[151,1437,151,1400]" pageId="6" pageNumber="207">
<emphasis bold="true" box="[199,308,1124,1149]" pageId="6" pageNumber="207">Remarks</emphasis>
. 
<taxonomicName box="[321,424,1124,1148]" class="Insecta" family="Lampyridae" genus="Amydetes" kingdom="Animalia" order="Coleoptera" pageId="6" pageNumber="207" phylum="Arthropoda" rank="species" species="agnita">
<emphasis box="[321,424,1124,1148]" italics="true" pageId="6" pageNumber="207">A. agnita</emphasis>
</taxonomicName>
resembles 
<taxonomicName box="[549,784,1124,1148]" class="Insecta" family="Lampyridae" genus="Amydetes" kingdom="Animalia" order="Coleoptera" pageId="6" pageNumber="207" phylum="Arthropoda" rank="species" species="manezinha" status="sp. nov.">
<emphasis box="[549,784,1124,1148]" italics="true" pageId="6" pageNumber="207">Amydetes manezinha</emphasis>
</taxonomicName>
<emphasis bold="true" box="[791,881,1124,1149]" pageId="6" pageNumber="207">
<taxonomicNameLabel box="[791,881,1124,1149]" pageId="6" pageNumber="207" rank="species">sp. nov.</taxonomicNameLabel>
</emphasis>
(Fig. 
