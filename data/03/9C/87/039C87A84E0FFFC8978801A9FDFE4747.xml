<subSubSection pageId="41" pageNumber="242" type="discussion">
<paragraph blockId="41.[151,1436,151,573]" pageId="41" pageNumber="242">
<emphasis bold="true" box="[199,315,404,429]" pageId="41" pageNumber="242">Remarks.</emphasis>
<taxonomicName box="[325,552,404,428]" class="Insecta" family="Lampyridae" genus="Amydetes" kingdom="Animalia" order="Coleoptera" pageId="41" pageNumber="242" phylum="Arthropoda" rank="species" species="vagalume" status="sp. nov.">
<emphasis box="[325,552,404,428]" italics="true" pageId="41" pageNumber="242">Amydetes vagalume</emphasis>
