, 
<collectingRegion box="[237,320,360,383]" country="Brazil" name="Paraiba" pageId="2" pageNumber="63">Paraíba</collectingRegion>
, 
<collectingRegion box="[332,468,360,383]" country="Brazil" name="Pernambuco" pageId="2" pageNumber="63">Pernambuco</collectingRegion>
, 
<collectingRegion box="[480,570,360,383]" country="Brazil" name="Alagoas" pageId="2" pageNumber="63">Alagoas</collectingRegion>
, 
