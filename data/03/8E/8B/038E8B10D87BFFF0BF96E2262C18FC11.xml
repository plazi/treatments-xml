<paragraph blockId="112.[192,1440,835,924]" pageId="112" pageNumber="111">
<emphasis bold="true" box="[192,324,835,859]" pageId="112" pageNumber="111">Remarks.</emphasis>
<taxonomicName authorityName="Gordon and Hanley" authorityYear="2017" box="[333,546,835,859]" class="Magnoliopsida" family="Plantaginaceae" genus="Ponaria" higherTaxonomySource="GBIF" kingdom="Plantae" order="Lamiales" pageId="112" pageNumber="111" phylum="Tracheophyta" rank="species" species="hurtadoi">
<emphasis box="[333,546,835,859]" italics="true" pageId="112" pageNumber="111">Ponaria hurtadoi</emphasis>
</taxonomicName>
