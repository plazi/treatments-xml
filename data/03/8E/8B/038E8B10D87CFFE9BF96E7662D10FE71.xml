<paragraph blockId="105.[192,1440,323,443]" pageId="105" pageNumber="104">
<emphasis bold="true" box="[192,324,323,347]" pageId="105" pageNumber="104">Remarks.</emphasis>
<taxonomicName authorityName=": Korschefsky" authorityYear="1931" box="[331,557,323,347]" class="Insecta" family="Coccinellidae" genus="Prodilis" higherTaxonomySource="GBIF" kingdom="Animalia" order="Coleoptera" pageId="105" pageNumber="104" phylum="Arthropoda" rank="species" species="pubescens">
<emphasis box="[331,557,323,347]" italics="true" pageId="105" pageNumber="104">Prodilis pubescens</emphasis>
