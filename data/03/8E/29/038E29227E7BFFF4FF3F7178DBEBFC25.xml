</emphasis>
<taxonomicName authority="Moore, 1878" authorityName="Moore" authorityYear="1878" box="[382,827,692,717]" class="Insecta" family="Hesperiidae" genus="Plesioneura" higherTaxonomySource="GBIF" kingdom="Animalia" order="Lepidoptera" pageId="9" pageNumber="8" phylum="Arthropoda" rank="species" species="aurivittata">
