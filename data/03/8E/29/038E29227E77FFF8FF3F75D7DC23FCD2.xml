Butler, [1870]
</taxonomicName>
, 
<taxonomicName authority="Hemming, 1939" authorityName="Hemming" authorityYear="1939" box="[764,1032,558,582]" class="Insecta" family="Hesperiidae" genus="Meza" kingdom="Animalia" order="Lepidoptera" pageId="6" pageNumber="5" phylum="Arthropoda" rank="genus">
<emphasis box="[764,828,558,581]" italics="true" pageId="6" pageNumber="5">Meza</emphasis>
Hemming, 1939
</taxonomicName>
, 
<taxonomicName authority="Larsen and Collins, 2012" authorityName="Larsen and Collins" authorityYear="2012" box="[1043,1436,558,582]" class="Insecta" family="Hesperiidae" genus="Herila" higherTaxonomySource="GBIF" kingdom="Animalia" order="Lepidoptera" pageId="6" pageNumber="5" phylum="Arthropoda" rank="genus">
<emphasis box="[1043,1121,558,582]" italics="true" pageId="6" pageNumber="5">Herila</emphasis>
Larsen and Collins, 2012
</taxonomicName>
, 
<taxonomicName authority="Butler, 1870" authorityName="Butler" authorityYear="1870" box="[192,505,590,615]" class="Insecta" family="Hesperiidae" genus="Pardaleodes" kingdom="Animalia" order="Lepidoptera" pageId="6" pageNumber="5" phylum="Arthropoda" rank="genus">
<emphasis box="[192,342,590,614]" italics="true" pageId="6" pageNumber="5">Pardaleodes</emphasis>
Butler, 1870
</taxonomicName>
, 
<taxonomicName authority="Evans, 1937" authorityName="Evans" authorityYear="1937" box="[516,764,590,615]" class="Insecta" family="Hesperiidae" genus="Ankola" kingdom="Animalia" order="Lepidoptera" pageId="6" pageNumber="5" phylum="Arthropoda" rank="genus">
<emphasis box="[516,603,590,614]" italics="true" pageId="6" pageNumber="5">Ankola</emphasis>
<bibRefCitation author="Evans" box="[611,764,591,615]" firstAuthor="Evans" pageId="6" pageNumber="5" refId="ref27329" refString="Evans, W. H. 1937. A catalogue of the African Hesperiidae indicating the classification and nomenclature adopted in the British Museum. British Museum (Natural History); London. xii + 212 p., 30 pl." type="book" year="1937">Evans, 1937</bibRefCitation>
</taxonomicName>
