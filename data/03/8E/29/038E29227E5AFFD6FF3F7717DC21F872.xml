<taxonomicName authority="Godman, 1900" authorityName="Godman" authorityYear="1900" box="[764,1132,1792,1816]" class="Insecta" family="Hesperiidae" genus="Pamphila" higherTaxonomySource="GBIF" kingdom="Animalia" order="Lepidoptera" pageId="40" pageNumber="39" phylum="Arthropoda" rank="species" species="azin">
