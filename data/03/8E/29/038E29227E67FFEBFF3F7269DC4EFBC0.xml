species, 
<taxonomicName authority="Aurivillius, 1905" authorityName="Aurivillius" authorityYear="1905" box="[662,1297,950,974]" class="Insecta" family="Hesperiidae" genus="Cyclopides" higherTaxonomySource="GBIF" kingdom="Animalia" order="Lepidoptera" pageId="21" pageNumber="20" phylum="Arthropoda" rank="variety" species="formosus" variety="tsadicus">
<emphasis box="[662,911,950,974]" italics="true" pageId="21" pageNumber="20">Cyclopides formosus</emphasis>
var. 
<emphasis box="[977,1078,950,974]" italics="true" pageId="21" pageNumber="20">tsadicus</emphasis>
Aurivillius, 1905
</taxonomicName>
, 
<taxonomicName authority="Karsch, 1896" authorityName="Karsch" authorityYear="1896" class="Insecta" family="Hesperiidae" genus="Cyclopides" higherTaxonomySource="GBIF" kingdom="Animalia" order="Lepidoptera" pageId="21" pageNumber="20" phylum="Arthropoda" rank="species" species="angolana">
<emphasis italics="true" pageId="21" pageNumber="20">Cyclopides angolana</emphasis>
Karsch, 1896
</taxonomicName>
, 
<taxonomicName authority="Evans, 1937" authorityName="Evans" authorityYear="1937" box="[486,877,982,1006]" class="Insecta" family="Hesperiidae" genus="Metisella" kingdom="Animalia" order="Lepidoptera" pageId="21" pageNumber="20" phylum="Arthropoda" rank="species" species="kumbona">
<emphasis box="[486,718,982,1006]" italics="true" pageId="21" pageNumber="20">Metisella kumbona</emphasis>
<bibRefCitation author="Evans" box="[724,877,982,1006]" firstAuthor="Evans" pageId="21" pageNumber="20" refId="ref27329" refString="Evans, W. H. 1937. A catalogue of the African Hesperiidae indicating the classification and nomenclature adopted in the British Museum. British Museum (Natural History); London. xii + 212 p., 30 pl." type="book" year="1937">Evans, 1937</bibRefCitation>
</taxonomicName>
, 
<taxonomicName authority="Butler, 1898" authorityName="Butler" authorityYear="1898" box="[887,1273,982,1006]" class="Insecta" family="Hesperiidae" genus="Cyclopides" higherTaxonomySource="GBIF" kingdom="Animalia" order="Lepidoptera" pageId="21" pageNumber="20" phylum="Arthropoda" rank="species" species="carsoni">
<emphasis box="[887,1113,982,1006]" italics="true" pageId="21" pageNumber="20">Cyclopides carsoni</emphasis>
Butler, 1898
</taxonomicName>
, 
<taxonomicName authority="Butler, 1894" authorityName="Butler" authorityYear="1894" class="Insecta" family="Hesperiidae" genus="Heteropterus" kingdom="Animalia" order="Lepidoptera" pageId="21" pageNumber="20" phylum="Arthropoda" rank="species" species="formosus">
<emphasis italics="true" pageId="21" pageNumber="20">Heteropterus formosus</emphasis>
Butler, 1894
</taxonomicName>
, and 
<taxonomicName authority="Butler, 1896" authorityName="Butler" authorityYear="1896" box="[531,977,1014,1038]" class="Insecta" family="Hesperiidae" genus="Cyclopides" higherTaxonomySource="GBIF" kingdom="Animalia" order="Lepidoptera" pageId="21" pageNumber="20" phylum="Arthropoda" rank="species" species="perexcellens">
<emphasis box="[531,813,1014,1038]" italics="true" pageId="21" pageNumber="20">Cyclopides perexcellens</emphasis>
Butler, 1896
</taxonomicName>
.
</paragraph>
<paragraph blockId="21.[192,848,1059,1084]" box="[192,848,1059,1084]" pageId="21" pageNumber="20">
