<taxonomicName baseAuthorityName="Hardwicke &amp; Gray" baseAuthorityYear="1827" class="Reptilia" family="Agamidae" genus="Calotes" higherTaxonomySource="GBIF" kingdom="Animalia" order="Squamata" pageId="18" pageNumber="419" phylum="Chordata" rank="species" species="minor">C. minor</taxonomicName>
