<taxonomicName authorityName="Gray" authorityYear="1845" box="[230,334,1216,1239]" class="Reptilia" family="Agamidae" genus="Calotes" higherTaxonomySource="GBIF" kingdom="Animalia" order="Squamata" pageId="18" pageNumber="419" phylum="Chordata" rank="species" species="maria">C. maria</taxonomicName>
, 
<taxonomicName authorityName="Gunther" authorityYear="1870" box="[347,464,1215,1239]" class="Reptilia" family="Agamidae" genus="Calotes" higherTaxonomySource="GBIF" kingdom="Animalia" order="Squamata" pageId="18" pageNumber="419" phylum="Chordata" rank="species" species="jerdoni">C. jerdoni</taxonomicName>
