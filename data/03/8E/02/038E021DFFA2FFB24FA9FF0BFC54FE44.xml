<taxonomicName authorityName=", Jerdon" authorityYear="1853" box="[1004,1171,1180,1204]" class="Reptilia" family="Agamidae" genus="Calotes" higherTaxonomySource="GBIF" kingdom="Animalia" order="Squamata" pageId="18" pageNumber="419" phylum="Chordata" rank="species" species="nemoricola">C. nemoricola</taxonomicName>
