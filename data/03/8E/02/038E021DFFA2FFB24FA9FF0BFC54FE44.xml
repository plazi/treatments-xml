<taxonomicName authorityName="calotes (Linnaeus" authorityYear="1758" box="[802,915,1215,1239]" class="Reptilia" family="Agamidae" genus="Calotes" higherTaxonomySource="GBIF" kingdom="Animalia" order="Squamata" pageId="18" pageNumber="419" phylum="Chordata" rank="species" species="calotes">
