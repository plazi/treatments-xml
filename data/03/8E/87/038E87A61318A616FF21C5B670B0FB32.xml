<taxonomicName baseAuthorityName="Cramer" baseAuthorityYear="1780" box="[829,943,1032,1054]" class="Insecta" family="Hesperiidae" genus="Nascus" kingdom="Animalia" order="Lepidoptera" pageId="31" pageNumber="30" phylum="Arthropoda" rank="species" species="broteas">
