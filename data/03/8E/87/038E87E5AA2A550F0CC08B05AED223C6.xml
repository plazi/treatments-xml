<subSubSection pageId="5" pageNumber="170" type="etymology">
<paragraph blockId="5.[151,1437,151,501]" pageId="5" pageNumber="170">
<emphasis bold="true" box="[199,334,439,464]" pageId="5" pageNumber="170">Etymology.</emphasis>
