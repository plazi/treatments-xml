<paragraph blockId="22.[104,797,1032,1135]" pageId="22" pageNumber="21">
<emphasis box="[200,331,1033,1061]" italics="true" pageId="22" pageNumber="21">FEMALE.</emphasis>
<typeStatus box="[359,478,1032,1061]" pageId="22" pageNumber="21">Holotype</typeStatus>
female, total length 
<quantity box="[104,214,1069,1098]" metricMagnitude="-3" metricUnit="m" metricValue="1.24" pageId="22" pageNumber="21" unit="mm" value="1.24">1.24mm</quantity>
