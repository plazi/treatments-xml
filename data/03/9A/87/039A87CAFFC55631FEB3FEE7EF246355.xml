<emphasis box="[715,878,324,349]" italics="true" pageId="21" pageNumber="22">
<taxonomicName box="[715,874,324,349]" class="Insecta" family="Noctuidae" genus="Schinia" higherTaxonomySource="GBIF" kingdom="Animalia" order="Lepidoptera" pageId="21" pageNumber="22" phylum="Arthropoda" rank="species" species="rufocostulata">rufocostulata</taxonomicName>
