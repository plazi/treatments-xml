<subSubSection pageId="21" pageNumber="22" type="etymology">
<paragraph blockId="21.[264,1324,283,830]" pageId="21" pageNumber="22">
<emphasis bold="true" box="[312,456,323,349]" pageId="21" pageNumber="22">Etymology:</emphasis>
