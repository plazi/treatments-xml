<subSubSection box="[151,1042,502,527]" pageId="1" pageNumber="260" type="etymology">
<paragraph blockId="1.[151,1437,502,932]" box="[151,1042,502,527]" pageId="1" pageNumber="260">
<emphasis bold="true" box="[151,278,502,527]" pageId="1" pageNumber="260">Etymology</emphasis>
