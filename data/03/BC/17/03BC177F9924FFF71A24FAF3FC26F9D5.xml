<subSubSection pageId="9" pageNumber="10" type="diagnosis">
<paragraph blockId="9.[227,1436,1434,1612]" box="[227,345,1434,1460]" pageId="9" pageNumber="10">
<heading bold="true" box="[227,345,1434,1460]" fontSize="11" level="3" pageId="9" pageNumber="10" reason="6">
