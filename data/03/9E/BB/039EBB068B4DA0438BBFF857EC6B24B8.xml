<number box="[438,448,1934,1970]" pageId="2" pageNumber="147" value="3.0">3</number>
with apex on anterior margin; 
<number box="[985,1027,1925,1957]" pageId="2" pageNumber="147" value="3111.0">3111</number>
tergum narrowly reddish brown on basolateral 
<number box="[446,456,1971,2004]" pageId="2" pageNumber="147" value="1.0">1</number>
/ 
<number box="[467,475,1996,2015]" pageId="2" pageNumber="147" value="4.0">4</number>
