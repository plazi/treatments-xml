<paragraph blockId="181.[743,1272,193,1742]" pageId="181" pageNumber="182">
<materialsCitation collectionCode="RD, BUL, CD, CIL, ZB, RL, MB, IOC, D" country="Peru" county="Peruvian" latitude="4.413" location="The" longLatPrecision="78" longitude="-2.13" municipality="On" pageId="181" pageNumber="182" specimenCode="RW-2, RW-1" specimenCount="1">
