<subSubSection lastPageId="195" lastPageNumber="196" pageId="194" pageNumber="195" type="description">
<paragraph blockId="194.[163,692,838,1741]" pageId="194" pageNumber="195">
MEASUREMENTS OF 
<typeStatus box="[433,552,1220,1243]" pageId="194" pageNumber="195">HOLOTYPE</typeStatus>
