of 
<collectingCountry box="[840,925,1445,1470]" name="Mexico" pageId="17" pageNumber="168">
<collectingRegion box="[840,925,1445,1470]" country="Mexico" name="Mexico" pageId="17" pageNumber="168">Mexico</collectingRegion>
</collectingCountry>
and 
<collectingCountry box="[980,1083,1445,1470]" name="Bahamas" pageId="17" pageNumber="168">Bahamas</collectingCountry>
