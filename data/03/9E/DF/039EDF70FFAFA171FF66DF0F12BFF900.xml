<collectingCountry box="[1118,1162,1445,1470]" name="Iceland" pageId="17" pageNumber="168">Ilha</collectingCountry>
Rasa off 
<collectingRegion box="[1268,1432,1445,1470]" country="Brazil" name="Rio de Janeiro" pageId="17" pageNumber="168">Rio de Janeiro</collectingRegion>
, 
<collectingCountry box="[151,222,1481,1506]" name="Brazil" pageId="17" pageNumber="168">Brazil</collectingCountry>
