<collectingCountry box="[452,574,1465,1490]" name="Costa Rica" pageId="2" pageNumber="353">Costa Rica</collectingCountry>
and 
<collectingRegion box="[628,712,1465,1490]" country="Trinidad and Tobago" name="Tobago" pageId="2" pageNumber="353">
