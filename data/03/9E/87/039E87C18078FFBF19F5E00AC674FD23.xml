<geoCoordinate box="[493,580,1952,1974]" degrees="0.1869" direction="south" orientation="latitude" pageId="1" pageNumber="27" precision="5" value="-0.1869">0.1869 S</geoCoordinate>
, 
<geoCoordinate box="[590,689,1952,1974]" degrees="10.7573" direction="east" orientation="longitude" pageId="1" pageNumber="27" precision="5" value="10.7573">10.7573 E</geoCoordinate>
, 
