<subSubSection pageId="4" pageNumber="45" type="distribution">
<paragraph blockId="4.[151,1436,151,825]" box="[197,1148,403,428]" pageId="4" pageNumber="45">
<emphasis bold="true" box="[197,350,403,428]" pageId="4" pageNumber="45">Distribution.</emphasis>
