<quantity box="[974,1098,1682,1706]" metricMagnitude="-2" metricUnit="m" metricValue="1.45" metricValueMax="1.5" metricValueMin="1.4" pageId="1" pageNumber="42" unit="mm" value="14.5" valueMax="15.0" valueMin="14.0">14–15 mm</quantity>
