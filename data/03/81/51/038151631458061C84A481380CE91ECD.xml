<quantity box="[509,586,1925,1943]" metricMagnitude="-2" metricUnit="m" metricValue="1.75" metricValueMax="2.5" metricValueMin="1.0" pageId="8" pageNumber="861" unit="cm" value="1.75" valueMax="2.5" valueMin="1.0">1–2.5 cm</quantity>
....................................................................... 7. 
<taxonomicName box="[1410,1499,1926,1943]" class="Magnoliopsida" family="Solanaceae" genus="Solanum" kingdom="Plantae" order="Solanales" pageId="8" pageNumber="861" phylum="Tracheophyta" rank="species" species="juvenale">
<emphasis box="[1410,1499,1926,1943]" italics="true" pageId="8" pageNumber="861">S. juvenale</emphasis>
</taxonomicName>
</keyLead>
</paragraph>
</keyStep>
<paragraph blockId="8.[160,1499,1496,1992]" pageId="8" pageNumber="861">
<keyLead pageId="8" pageNumber="861">
