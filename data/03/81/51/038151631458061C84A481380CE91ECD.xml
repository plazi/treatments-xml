<quantity box="[537,631,183,201]" metricMagnitude="-2" metricUnit="m" metricValue="1.0" metricValueMax="1.3" metricValueMin="0.7" pageId="9" pageNumber="862" unit="cm" value="1.0" valueMax="1.3" valueMin="0.7">0.7–1.3 cm</quantity>
