<quantity box="[518,582,231,249]" metricMagnitude="-2" metricUnit="m" metricValue="1.5" metricValueMax="2.0" metricValueMin="1.0" pageId="9" pageNumber="862" unit="cm" value="1.5" valueMax="2.0" valueMin="1.0">1–2 cm</quantity>
