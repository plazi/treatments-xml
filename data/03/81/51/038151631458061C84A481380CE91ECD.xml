<quantity box="[490,551,1878,1896]" metricMagnitude="-2" metricUnit="m" metricValue="3.0" metricValueMax="5.0" metricValueMin="1.0" pageId="8" pageNumber="861" unit="cm" value="3.0" valueMax="5.0" valueMin="1.0">1–5 cm</quantity>
