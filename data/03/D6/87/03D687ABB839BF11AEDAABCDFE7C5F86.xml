<taxonomicName box="[1196,1323,764,788]" class="Malacostraca" family="Isaeidae" genus="Chevalia" kingdom="Animalia" order="Amphipoda" pageId="2" pageNumber="27" phylum="Arthropoda" rank="species" species="aviculae">
<emphasis box="[1196,1323,764,788]" italics="true" pageId="2" pageNumber="27">C. aviculae</emphasis>
</taxonomicName>
complex, which includes: 
<taxonomicName box="[334,461,800,824]" class="Malacostraca" family="Isaeidae" genus="Chevalia" kingdom="Animalia" order="Amphipoda" pageId="2" pageNumber="27" phylum="Arthropoda" rank="species" species="aviculae">
<emphasis box="[334,461,800,824]" italics="true" pageId="2" pageNumber="27">C. aviculae</emphasis>
</taxonomicName>
; 
