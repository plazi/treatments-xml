<taxonomicNameLabel box="[586,676,800,824]" pageId="2" pageNumber="27" rank="species">sp. nov.</taxonomicNameLabel>
</emphasis>
; 
<taxonomicName box="[691,830,800,824]" class="Malacostraca" family="Isaeidae" genus="Chevalia" kingdom="Animalia" order="Amphipoda" pageId="2" pageNumber="27" phylum="Arthropoda" rank="species" species="mexicana">
<emphasis box="[691,830,800,824]" italics="true" pageId="2" pageNumber="27">C. mexicana</emphasis>
</taxonomicName>
