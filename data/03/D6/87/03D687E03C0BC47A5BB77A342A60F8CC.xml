<subSubSection box="[189,1172,1886,1913]" pageId="4" pageNumber="267" type="etymology">
<paragraph blockId="4.[136,1452,1238,2093]" box="[189,1172,1886,1913]" pageId="4" pageNumber="267">
<emphasis bold="true" box="[189,318,1886,1912]" pageId="4" pageNumber="267">Etymology</emphasis>
