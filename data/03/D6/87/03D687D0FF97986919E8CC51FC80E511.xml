<emphasis bold="true" box="[151,471,1544,1570]" pageId="49" pageNumber="350">
Family 
<taxonomicName authority="Tang" box="[247,471,1544,1570]" class="Insecta" family="Putoidae" higherTaxonomySource="GBIF" kingdom="Animalia" order="Hemiptera" pageId="49" pageNumber="350" phylum="Arthropoda" rank="family">PUTOIDAE Tang</taxonomicName>
