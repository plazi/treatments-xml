<taxonomicName authority="Hampson, 1907" authorityName="Hampson" authorityYear="1907" box="[703,1099,293,315]" class="Insecta" family="Erebidae" genus="Diacrisia" higherTaxonomySource="GBIF" kingdom="Animalia" order="Lepidoptera" pageId="1" pageNumber="578" phylum="Arthropoda" rank="species" species="melanodisca">
