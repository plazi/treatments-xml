<quantity box="[879,967,1281,1308]" metricMagnitude="0" metricUnit="m" metricValue="7.5" metricValueMax="15.0" metricValueMin="0.0" pageId="102" pageNumber="103" unit="m" value="7.5" valueMax="15.0" valueMin="0.0">0–15 m</quantity>
