<mcCollectionCode box="[595,676,425,449]" pageId="15" pageNumber="16">WUSL</mcCollectionCode>
/EI/8 from Hiriketiya and 
<mcCollectionCode box="[974,1054,425,449]" pageId="15" pageNumber="16">WUSL</mcCollectionCode>
