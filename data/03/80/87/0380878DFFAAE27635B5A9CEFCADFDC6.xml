(
<typeStatus box="[1064,1164,1987,2013]" pageId="10" pageNumber="532">holotype</typeStatus>
<quantity box="[1171,1261,1987,2013]" metricMagnitude="-3" metricUnit="m" metricValue="3.4" pageId="10" pageNumber="532" unit="mm" value="3.4">3.4 mm</quantity>
