<typeStatus box="[1064,1164,223,249]" pageId="10" pageNumber="532">holotype</typeStatus>
<quantity box="[1171,1261,223,249]" metricMagnitude="-3" metricUnit="m" metricValue="3.3" pageId="10" pageNumber="532" unit="mm" value="3.3">3.3 mm</quantity>
