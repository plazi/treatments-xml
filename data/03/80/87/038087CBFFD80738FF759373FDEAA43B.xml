<quantity box="[1350,1436,187,213]" metricMagnitude="1" metricUnit="m" metricValue="5.1562" pageId="55" pageNumber="56" unit="in" value="2030.0">2030 in</quantity>
<collectionCode box="[151,257,223,249]" country="United Kingdom" httpUri="http://biocol.org/urn:lsid:biocol.org:col:34665" lsid="urn:lsid:biocol.org:col:34665" name="Natural History Museum, London" pageId="55" pageNumber="56" type="Museum">NHMUK</collectionCode>
