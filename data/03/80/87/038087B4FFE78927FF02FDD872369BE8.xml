<elevation box="[739,838,1735,1759]" metricMagnitude="1" metricUnit="m" metricValue="2.75" metricValueMax="2.8" metricValueMin="2.7" pageId="77" pageNumber="78" unit="m" value="27.5" valueMax="28.0" valueMin="27.0">
