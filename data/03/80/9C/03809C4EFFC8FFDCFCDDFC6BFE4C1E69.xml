<quantity box="[932,1034,1125,1147]" metricMagnitude="2" metricUnit="m" metricValue="9.5" metricValueMax="19.0" metricValueMin="0.0" pageId="6" pageNumber="7" unit="m" value="950.0" valueMax="1900.0" valueMin="0.0">0–1900 m</quantity>
