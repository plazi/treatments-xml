<taxonomicName authority="Linnaeus" authorityName="Linnaeus" authorityYear="1753" box="[202,497,182,208]" class="Magnoliopsida" family="Myrtaceae" genus="Psidium" higherTaxonomySource="CoL" kingdom="Plantae" order="Myrtales" pageId="17" pageNumber="356" phylum="Tracheophyta" rank="species" species="guajava">
<emphasis box="[202,383,182,208]" italics="true" pageId="17" pageNumber="356">Psidium guajava</emphasis>
Linnaeus
</taxonomicName>
, 
<taxonomicName box="[508,630,183,209]" class="Magnoliopsida" family="Myrtaceae" kingdom="Plantae" order="Myrtales" pageId="17" pageNumber="356" phylum="Tracheophyta" rank="family">Myrtaceae</taxonomicName>
