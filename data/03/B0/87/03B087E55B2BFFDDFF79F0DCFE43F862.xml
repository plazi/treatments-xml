<quantity box="[151,236,2012,2036]" metricMagnitude="3" metricUnit="m" metricValue="1.4" pageId="78" pageNumber="79" unit="m" value="1400.0">1400 m</quantity>
and 
<quantity box="[290,375,2012,2036]" metricMagnitude="3" metricUnit="m" metricValue="1.7" pageId="78" pageNumber="79" unit="m" value="1700.0">1700 m</quantity>
(
