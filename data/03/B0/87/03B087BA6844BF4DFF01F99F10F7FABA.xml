<taxonomicName authorityName="Ruta &amp; Yoshitomi" authorityYear="2010" box="[404,523,1312,1337]" class="Insecta" family="Scirtidae" genus="Exochomoscirtes" higherTaxonomySource="GBIF" kingdom="Animalia" order="Coleoptera" pageId="28" pageNumber="29" phylum="Arthropoda" rank="species" species="picturatus">
