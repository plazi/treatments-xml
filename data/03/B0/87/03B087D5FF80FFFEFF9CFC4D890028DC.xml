<taxonomicName authorityName="Stehlík &amp; Kment" authorityYear="2010" box="[719,823,923,946]" class="Insecta" family="Largidae" genus="Largus" kingdom="Animalia" order="Hemiptera" pageId="3" pageNumber="56" phylum="Arthropoda" rank="species" species="giganteus">
<emphasis box="[719,823,923,946]" italics="true" pageId="3" pageNumber="56">giganteus</emphasis>
