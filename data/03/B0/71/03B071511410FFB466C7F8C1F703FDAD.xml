(
<bibRefCitation author="Lamarck" box="[809,987,476,500]" firstAuthor="Lamarck" pageId="6" pageNumber="7" refId="ref11267" refString="Lamarck, [J. B. P. A.] (1822) Histoire naturelle des animaux sans vertebres ... Paris. 7 (2), 711 pp." type="book" year="1822">Lamarck, 1822</bibRefCitation>
)
</taxonomicName>
