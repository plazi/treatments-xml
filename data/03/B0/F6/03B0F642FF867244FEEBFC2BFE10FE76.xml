<paragraph blockId="14.[264,1321,284,430]" box="[264,548,284,309]" pageId="14" pageNumber="15">
<emphasis box="[264,548,284,309]" italics="true" pageId="14" pageNumber="15">Habitats and Phenology</emphasis>
</paragraph>
<paragraph blockId="14.[264,1321,284,430]" pageId="14" pageNumber="15">
<taxonomicName box="[312,400,324,349]" class="Insecta" family="Therevidae" genus="Peralia" kingdom="Animalia" order="Diptera" pageId="14" pageNumber="15" phylum="Arthropoda" rank="genus">
<emphasis box="[312,400,324,349]" italics="true" pageId="14" pageNumber="15">Peralia</emphasis>
</taxonomicName>
