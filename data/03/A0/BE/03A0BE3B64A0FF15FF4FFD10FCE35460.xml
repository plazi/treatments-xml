<emphasis box="[749,873,717,742]" italics="true" pageId="170" pageNumber="171">
<taxonomicName authorityName="Milne-Edwards" authorityYear="1867" box="[749,869,717,742]" class="Mammalia" family="Muridae" genus="Cricetulus" kingdom="Animalia" order="Rodentia" pageId="170" pageNumber="171" phylum="Chordata" rank="genus">Cricetulus</taxonomicName>
