<paragraph blockId="170.[151,1436,717,778]" pageId="170" pageNumber="171">
<taxonomicName authorityName="Ognev" authorityYear="1914" box="[151,270,717,742]" class="Mammalia" family="Muridae" genus="Tscherskia" kingdom="Animalia" order="Rodentia" pageId="170" pageNumber="171" phylum="Chordata" rank="genus">
