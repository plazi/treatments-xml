<paragraph blockId="14.[151,1436,1622,1705]" pageId="14" pageNumber="251">
<emphasis bold="true" box="[151,275,1622,1644]" pageId="14" pageNumber="251">FIGURE 8.</emphasis>
<emphasis box="[282,499,1622,1644]" italics="true" pageId="14" pageNumber="251">
<taxonomicName authorityName="Collingwood" authorityYear="1876" box="[282,495,1622,1644]" class="Rhabditophora" family="Pericelidae" genus="Pericelis" higherTaxonomySource="GBIF" kingdom="Animalia" order="Polycladida" pageId="14" pageNumber="251" phylum="Platyhelminthes" rank="species" species="byerleyana">
