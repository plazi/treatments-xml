<subSubSection box="[199,1123,439,464]" pageId="4" pageNumber="493" type="etymology">
<paragraph blockId="4.[151,1436,151,608]" box="[199,1123,439,464]" pageId="4" pageNumber="493">
<emphasis bold="true" box="[199,326,439,464]" pageId="4" pageNumber="493">Etymology</emphasis>
