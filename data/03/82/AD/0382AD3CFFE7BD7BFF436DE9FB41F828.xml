<paragraph blockId="10.[151,1436,1444,1497]" pageId="10" pageNumber="213">
<emphasis bold="true" box="[151,278,1445,1467]" pageId="10" pageNumber="213">FIGURE 5.</emphasis>
<taxonomicName box="[288,535,1444,1466]" class="Actinopterygii" family="Xenisthmidae" genus="Xenisthmus" kingdom="Animalia" order="Perciformes" pageId="10" pageNumber="213" phylum="Chordata" rank="species" species="polyzonatus">
<emphasis box="[288,535,1444,1466]" italics="true" pageId="10" pageNumber="213">
<taxonomicName box="[288,405,1444,1466]" class="Actinopterygii" family="Xenisthmidae" genus="Xenisthmus" higherTaxonomySource="CoL" kingdom="Animalia" order="Perciformes" pageId="10" pageNumber="213" phylum="Chordata" rank="genus">Xenisthmus</taxonomicName>
polyzonatus
</emphasis>
</taxonomicName>
