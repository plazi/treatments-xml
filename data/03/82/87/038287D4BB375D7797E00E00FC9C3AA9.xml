<subSubSection pageId="39" pageNumber="40" type="biology_ecology">
<paragraph blockId="39.[151,1436,151,393]" pageId="39" pageNumber="40">
<emphasis bold="true" box="[199,295,258,284]" pageId="39" pageNumber="40">Biology.</emphasis>
