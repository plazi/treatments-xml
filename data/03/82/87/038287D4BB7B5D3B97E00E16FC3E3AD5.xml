<collectingRegion box="[702,818,367,393]" country="Brazil" name="Maranhao" pageId="107" pageNumber="108">Maranhão</collectingRegion>
, 
<taxonomicName authorityName="Lopes" authorityYear="1946" box="[830,940,367,393]" class="Insecta" family="Sarcophagidae" genus="Oxysarcodexia" kingdom="Animalia" order="Diptera" pageId="107" pageNumber="108" phylum="Arthropoda" rank="species" species="villosa">
<emphasis box="[830,940,367,393]" italics="true" pageId="107" pageNumber="108">O. villosa</emphasis>
