); 
<taxonomicName authority="Hampson, 1919" authorityName="Hampson" authorityYear="1919" class="Insecta" family="Sesiidae" genus="Scoliokona" higherTaxonomySource="GBIF" kingdom="Animalia" order="Lepidoptera" pageId="9" pageNumber="194" phylum="Arthropoda" rank="species" species="zygophora" status="comb. nov.">
