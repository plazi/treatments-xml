<subSubSection lastPageId="41" lastPageNumber="42" pageId="40" pageNumber="41" type="discussion">
<paragraph blockId="40.[151,1437,870,2011]" lastBlockId="41.[151,1436,151,285]" lastPageId="41" lastPageNumber="42" pageId="40" pageNumber="41">
<emphasis bold="true" box="[199,332,1986,2011]" pageId="40" pageNumber="41">Discussion.</emphasis>
<taxonomicName box="[348,561,1987,2011]" class="Insecta" family="Syrphidae" genus="Sphegina" kingdom="Animalia" order="Diptera" pageId="40" pageNumber="41" phylum="Arthropoda" rank="species" species="bilobata">
<emphasis box="[348,561,1987,2011]" italics="true" pageId="40" pageNumber="41">Sphegina bilobata</emphasis>
