<paragraph blockId="4.[151,1436,152,838]" box="[198,1389,193,219]" pageId="4" pageNumber="33">
<emphasis bold="true" box="[198,390,193,219]" pageId="4" pageNumber="33">Distribution:—</emphasis>
<collectingCountry box="[390,446,193,219]" name="Peru" pageId="4" pageNumber="33">Peru</collectingCountry>
, Dept. 
<collectingRegion box="[530,661,193,219]" country="Peru" name="San Martin" pageId="4" pageNumber="33">San Martin</collectingRegion>
