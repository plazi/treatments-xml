<collectingCountry box="[902,947,152,175]" name="Iran" pageId="4" pageNumber="57">Iran</collectingCountry>
and 
<collectingCountry box="[1002,1082,151,175]" name="Turkey" pageId="4" pageNumber="57">Turkey</collectingCountry>
