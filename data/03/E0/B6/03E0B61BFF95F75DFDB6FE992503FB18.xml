<taxonomicName authorityName="Thierry-Mieg" authorityYear="1904" box="[506,661,739,766]" class="Insecta" family="Geometridae" genus="Callipia" higherTaxonomySource="GBIF" kingdom="Animalia" order="Lepidoptera" pageId="15" pageNumber="16" phylum="Arthropoda" rank="species" species="paradisea">
