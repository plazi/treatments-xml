<subSubSection pageId="12" pageNumber="13" type="diagnosis">
<paragraph blockId="12.[189,310,1845,1871]" box="[189,310,1845,1871]" pageId="12" pageNumber="13">
<heading bold="true" box="[189,310,1845,1871]" fontSize="11" level="3" pageId="12" pageNumber="13" reason="3">
