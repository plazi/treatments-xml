, 
<taxonomicName authority="Bates, 1885" authorityName="Bates" authorityYear="1885" box="[740,993,810,835]" class="Insecta" family="Cerambycidae" genus="Lycidola" kingdom="Animalia" order="Coleoptera" pageId="1" pageNumber="446" phylum="Arthropoda" rank="species" species="eximia">
