<taxonomicName box="[1030,1127,918,943]" class="Insecta" family="Cerambycidae" genus="Lycidola" kingdom="Animalia" order="Coleoptera" pageId="1" pageNumber="446" phylum="Arthropoda" rank="genus">
<emphasis box="[1030,1127,918,943]" italics="true" pageId="1" pageNumber="446">Lycidola</emphasis>
</taxonomicName>
: 
<taxonomicName box="[1147,1269,918,943]" class="Insecta" family="Cerambycidae" genus="Lycidola" kingdom="Animalia" order="Coleoptera" pageId="1" pageNumber="446" phylum="Arthropoda" rank="species" species="palliata">
<emphasis box="[1147,1269,918,943]" italics="true" pageId="1" pageNumber="446">L. palliata</emphasis>
</taxonomicName>
; 
<taxonomicName box="[1288,1395,919,942]" class="Insecta" family="Cerambycidae" genus="Apeba" kingdom="Animalia" order="Coleoptera" pageId="1" pageNumber="446" phylum="Arthropoda" rank="species" species="togata">
<emphasis box="[1288,1395,919,942]" italics="true" pageId="1" pageNumber="446">L. togata</emphasis>
</taxonomicName>
