</taxonomicName>
, 
<taxonomicName box="[280,369,954,979]" class="Insecta" family="Cerambycidae" genus="Lycidola" kingdom="Animalia" order="Coleoptera" pageId="1" pageNumber="446" phylum="Arthropoda" rank="species" species="beltii">
<emphasis box="[280,369,954,979]" italics="true" pageId="1" pageNumber="446">L. beltii</emphasis>
</taxonomicName>
, 
<taxonomicName box="[386,562,954,979]" class="Insecta" family="Cerambycidae" genus="Lycidola" kingdom="Animalia" order="Coleoptera" pageId="1" pageNumber="446" phylum="Arthropoda" rank="species" species="flavofasciata">
<emphasis box="[386,562,954,979]" italics="true" pageId="1" pageNumber="446">L. flavofasciata</emphasis>
</taxonomicName>
, 
<taxonomicName box="[579,658,954,979]" class="Insecta" family="Cerambycidae" genus="Lycidola" kingdom="Animalia" order="Coleoptera" pageId="1" pageNumber="446" phylum="Arthropoda" rank="species" species="felix">
<emphasis box="[579,658,954,979]" italics="true" pageId="1" pageNumber="446">L. felix</emphasis>
</taxonomicName>
, 
<taxonomicName box="[675,789,955,979]" class="Insecta" family="Cerambycidae" genus="Lycidola" kingdom="Animalia" order="Coleoptera" pageId="1" pageNumber="446" phylum="Arthropoda" rank="species" species="retifera">
<emphasis box="[675,789,955,979]" italics="true" pageId="1" pageNumber="446">L. retifera</emphasis>
</taxonomicName>
, 
<taxonomicName box="[805,929,956,979]" class="Insecta" family="Cerambycidae" genus="Lycidola" kingdom="Animalia" order="Coleoptera" pageId="1" pageNumber="446" phylum="Arthropoda" rank="species" species="expansa">
<emphasis box="[805,929,956,979]" italics="true" pageId="1" pageNumber="446">L. expansa</emphasis>
