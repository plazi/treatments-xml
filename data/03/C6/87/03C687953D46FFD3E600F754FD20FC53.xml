<subSubSection pageId="8" pageNumber="9" type="etymology">
<paragraph blockId="8.[264,1323,283,870]" pageId="8" pageNumber="9">
<emphasis bold="true" box="[312,445,764,790]" pageId="8" pageNumber="9">Etymology</emphasis>
