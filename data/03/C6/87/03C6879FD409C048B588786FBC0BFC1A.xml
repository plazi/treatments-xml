<taxonomicName box="[1395,1436,925,951]" class="Insecta" family="Coleoptera" genus="Atlas" higherTaxonomySource="GBIF" kingdom="Animalia" order="Coleoptera" pageId="7" pageNumber="8" phylum="Arthropoda" rank="species" species="dos">dos</taxonomicName>
