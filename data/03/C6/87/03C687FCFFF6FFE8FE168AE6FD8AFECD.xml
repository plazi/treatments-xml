<taxonomicName authority="Esteban &amp; Finlay &amp; Olmo &amp; Tyler, 2000" authorityName="Esteban &amp; Finlay &amp; Olmo &amp; Tyler" authorityYear="2000" box="[190,399,1040,1062]" class="Oligohymenophorea" family="Lembadionidae" genus="Lembadion" higherTaxonomySource="GBIF" kingdom="Chromista" order="Hymenostomatida" pageId="14" pageNumber="171" phylum="Ciliophora" rank="subSpecies" species="embadion" status="n. sp." subSpecies="curvatum">
