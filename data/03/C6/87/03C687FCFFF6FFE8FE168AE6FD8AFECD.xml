<taxonomicName authority="Esteban &amp; Finlay &amp; Olmo &amp; Tyler, 2000" authorityName="Esteban &amp; Finlay &amp; Olmo &amp; Tyler" authorityYear="2000" box="[228,438,1509,1531]" class="Oligohymenophorea" family="Lembadionidae" genus="Lembadion" higherTaxonomySource="GBIF" kingdom="Chromista" order="Hymenostomatida" pageId="15" pageNumber="172" phylum="Ciliophora" rank="subSpecies" species="embadion" status="n. sp." subSpecies="curvatum">
