<subSubSection pageId="4" pageNumber="105" type="etymology">
<paragraph blockId="4.[151,1436,1647,2033]" pageId="4" pageNumber="105">
<emphasis bold="true" box="[199,334,1863,1888]" pageId="4" pageNumber="105">Etymology.</emphasis>
