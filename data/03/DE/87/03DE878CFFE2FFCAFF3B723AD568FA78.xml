, 
<collectingCountry box="[626,736,1400,1426]" name="Suriname" pageId="26" pageNumber="27">Suriname</collectingCountry>
, 
<collectingCountry box="[750,849,1401,1427]" name="Uruguay" pageId="26" pageNumber="27">Uruguay</collectingCountry>
