<collectingCountry box="[336,426,1400,1426]" name="Guyana" pageId="26" pageNumber="27">Guyana</collectingCountry>
, 
<collectingCountry box="[439,544,1401,1427]" name="Paraguay" pageId="26" pageNumber="27">Paraguay</collectingCountry>
, 
