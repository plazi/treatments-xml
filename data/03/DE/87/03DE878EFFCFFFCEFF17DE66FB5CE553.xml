<taxonomicName authority="Kuwert, 1890" authorityName="Kuwert" authorityYear="1890" class="Insecta" family="Heteroceridae" genus="Heterocerus" higherTaxonomySource="GBIF" kingdom="Animalia" order="Coleoptera" pageId="3" pageNumber="600" phylum="Arthropoda" rank="species" species="heydeni">
