<taxonomicName authorityName="Reitter" authorityYear="1879" box="[871,1069,706,729]" class="Insecta" family="Heteroceridae" genus="Heterocerus" higherTaxonomySource="GBIF" kingdom="Animalia" order="Coleoptera" pageId="3" pageNumber="600" phylum="Arthropoda" rank="species" species="fausti">
