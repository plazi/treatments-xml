62. 
<taxonomicName box="[184,286,448,475]" class="Insecta" family="Nolidae" kingdom="Animalia" order="Lepidoptera" pageId="251" pageNumber="252" phylum="Arthropoda" rank="family">Nolidae</taxonomicName>
