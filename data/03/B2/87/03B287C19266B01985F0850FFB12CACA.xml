<location LSID="urn:lsid:plazi:treatment:03B287C19266B01985F0850FFB12CACA:8EC4600C9267B019818381C3FAACCEC8" box="[1252,1331,980,1005]" country="Iran" county="Subspecies" municipality="Iranian" name="Iranian" pageId="5" pageNumber="580" stateProvince="Yazd">Iranian</location>
