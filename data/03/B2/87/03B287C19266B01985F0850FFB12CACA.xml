is known from 
<collectingMunicipality box="[1171,1250,943,968]" pageId="5" pageNumber="580">Iranian</collectingMunicipality>
provinces 
<collectingRegion box="[1380,1436,943,968]" country="Iran" name="Yazd" pageId="5" pageNumber="580">Yazd</collectingRegion>
(
<location LSID="urn:lsid:plazi:treatment:03B287C19266B01985F0850FFB12CACA:8EC4600C9267B01985F981C3FEDECEC9" box="[158,321,980,1005]" country="Iran" county="Subspecies" municipality="Iranian" name="Shir Kuh Mts." pageId="5" pageNumber="580" stateProvince="Yazd">Shir Kuh Mts.</location>
