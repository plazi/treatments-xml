<location LSID="urn:lsid:plazi:treatment:03B287C19266B01985F0850FFB12CACA:8EC4600C9267B01987F281C3FD52CEC8" box="[661,717,980,1005]" country="Iran" county="Subspecies" municipality="Iranian" name="Thus" pageId="5" pageNumber="580" stateProvince="Yazd">Thus</location>
<taxonomicName box="[724,845,980,1004]" class="Insecta" family="Lycaenidae" genus="Athamanthia" kingdom="Animalia" order="Lepidoptera" pageId="5" pageNumber="580" phylum="Arthropoda" rank="species" species="balucha">
