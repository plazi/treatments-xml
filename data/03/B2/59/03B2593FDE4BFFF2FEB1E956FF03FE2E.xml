<subSubSection pageId="26" pageNumber="231" type="description">
<paragraph blockId="26.[683,1198,163,1730]" box="[683,951,266,292]" pageId="26" pageNumber="231">
<emphasis box="[683,951,266,292]" italics="true" pageId="26" pageNumber="231">
<taxonomicName authority="Descriptive" authorityName="Descriptive" box="[683,818,267,292]" class="Mammalia" family="Vespertilionidae" genus="Hypsugo" kingdom="Animalia" order="Chiroptera" pageId="26" pageNumber="231" phylum="Chordata" rank="genus">Descriptive</taxonomicName>
