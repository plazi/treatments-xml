<taxonomicName baseAuthorityName="Hedley &amp; Hull" baseAuthorityYear="1909" box="[324,541,151,177]" class="Polyplacophora" family="Leptochitonidae" genus="Leptochiton" kingdom="Animalia" order="Lepidopleurida" pageId="5" pageNumber="406" phylum="Mollusca" rank="species" species="badius">
