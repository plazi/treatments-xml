<taxonomicName authority="(Iredale &amp; Hull, 1925)" baseAuthorityName="Iredale &amp; Hull" baseAuthorityYear="1925" box="[151,685,1480,1507]" class="Polyplacophora" family="Leptochitonidae" genus="Leptochiton" kingdom="Animalia" order="Lepidopleurida" pageId="38" pageNumber="439" phylum="Mollusca" rank="species" species="collusor">
