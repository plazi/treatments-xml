, 
<taxonomicName authority="Kuwana" authorityName="Kuwana" box="[990,1390,261,287]" class="Insecta" family="Aclerdidae" genus="Nipponaclerda" kingdom="Animalia" order="Hemiptera" pageId="198" pageNumber="199" phylum="Arthropoda" rank="species" species="biwakoensis">
