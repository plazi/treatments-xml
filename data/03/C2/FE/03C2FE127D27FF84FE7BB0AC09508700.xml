<subSubSection pageId="3" pageNumber="265" type="etymology">
<paragraph blockId="3.[249,1082,837,885]" pageId="3" pageNumber="265">
<emphasis bold="true" box="[275,403,837,858]" pageId="3" pageNumber="265">Etymology.</emphasis>
