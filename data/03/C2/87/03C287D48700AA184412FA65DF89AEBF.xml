<taxonomicName box="[918,1042,1693,1719]" class="Magnoliopsida" family="Fabaceae" genus="Crotalaria" kingdom="Plantae" order="Fabales" pageId="27" pageNumber="28" phylum="Tracheophyta" rank="genus">
<emphasis box="[918,1042,1693,1719]" italics="true" pageId="27" pageNumber="28">Crotalaria</emphasis>
</taxonomicName>
L. sp. (
<taxonomicName box="[1149,1265,1693,1720]" class="Magnoliopsida" family="Fabaceae" kingdom="Plantae" order="Fabales" pageId="27" pageNumber="28" phylum="Tracheophyta" rank="family">Fabaceae</taxonomicName>
