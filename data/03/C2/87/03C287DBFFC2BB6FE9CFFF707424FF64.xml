<number box="[1352,1386,1735,1759]" pageId="3" pageNumber="594" value="2.8">2.8</number>
–3.0 mm, male max. = 
<quantity box="[353,441,1771,1795]" metricMagnitude="-3" metricUnit="m" metricValue="2.8" pageId="3" pageNumber="594" unit="mm" value="2.8">2.8 mm</quantity>
, female max. = 3.0 mm, male min. = 
<quantity box="[859,947,1771,1795]" metricMagnitude="-3" metricUnit="m" metricValue="2.8" pageId="3" pageNumber="594" unit="mm" value="2.8">2.8 mm</quantity>
, female min. = 
<quantity box="[1120,1208,1771,1795]" metricMagnitude="-3" metricUnit="m" metricValue="2.8" pageId="3" pageNumber="594" unit="mm" value="2.8">2.8 mm</quantity>
, GW = 
<quantity box="[1295,1432,1771,1795]" metricMagnitude="-3" metricUnit="m" metricValue="1.75" metricValueMax="1.8" metricValueMin="1.7" pageId="3" pageNumber="594" unit="mm" value="1.75" valueMax="1.8" valueMin="1.7">1.7–1.8 mm</quantity>
, TL/GW = 
<quantity box="[271,409,1806,1831]" metricMagnitude="-3" metricUnit="m" metricValue="1.65" metricValueMax="1.7" metricValueMin="1.6" pageId="3" pageNumber="594" unit="mm" value="1.65" valueMax="1.7" valueMin="1.6">1.6–1.7 mm</quantity>
, HW = 1.0– 
<quantity box="[550,637,1807,1831]" metricMagnitude="-3" metricUnit="m" metricValue="1.1" pageId="3" pageNumber="594" unit="mm" value="1.1">1.1 mm</quantity>
, EW = 
<quantity box="[724,862,1806,1831]" metricMagnitude="-4" metricUnit="m" metricValue="6.499999999999999" metricValueMax="7.0" metricValueMin="6.0" pageId="3" pageNumber="594" unit="mm" value="0.6499999999999999" valueMax="0.7" valueMin="0.6">0.6–0.7 mm</quantity>
, HW/EW = 
<quantity box="[1003,1141,1806,1831]" metricMagnitude="-3" metricUnit="m" metricValue="1.65" metricValueMax="1.7" metricValueMin="1.6" pageId="3" pageNumber="594" unit="mm" value="1.65" valueMax="1.7" valueMin="1.6">1.6–1.7 mm</quantity>
, PNWpost = 
<quantity box="[1294,1432,1806,1831]" metricMagnitude="-3" metricUnit="m" metricValue="1.6" metricValueMax="1.7" metricValueMin="1.5" pageId="3" pageNumber="594" unit="mm" value="1.6" valueMax="1.7" valueMin="1.5">1.5–1.7 mm</quantity>
, PNWant = 
<quantity box="[274,410,1843,1867]" metricMagnitude="-3" metricUnit="m" metricValue="1.15" metricValueMax="1.2" metricValueMin="1.1" pageId="3" pageNumber="594" unit="mm" value="1.15" valueMax="1.2" valueMin="1.1">1.1–1.2 mm</quantity>
, PNWpost/PNWant = 
