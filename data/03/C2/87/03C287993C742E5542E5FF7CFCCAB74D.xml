<emphasis bold="true" box="[151,314,1861,1886]" pageId="17" pageNumber="218">FIGURES 5–6.</emphasis>
<taxonomicName authorityName="Jacoby" authorityYear="1907" box="[319,465,1862,1886]" class="Insecta" family="Chrysomelidae" genus="Cryptocephalus" kingdom="Animalia" order="Coleoptera" pageId="17" pageNumber="218" phylum="Arthropoda" rank="species" species="bivitticollis">
<emphasis box="[319,465,1862,1886]" italics="true" pageId="17" pageNumber="218">M. bivitticollis</emphasis>
</taxonomicName>
(5), 
<taxonomicName authorityName="Sassi" authorityYear="2019" box="[512,650,1862,1886]" class="Insecta" family="Chrysomelidae" genus="Metallactus" higherTaxonomySource="GBIF" kingdom="Animalia" order="Coleoptera" pageId="17" pageNumber="218" phylum="Arthropoda" rank="species" species="chamorroi">
