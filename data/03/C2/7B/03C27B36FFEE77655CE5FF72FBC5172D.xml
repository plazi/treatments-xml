<quantity box="[1027,1190,763,790]" metricMagnitude="-3" metricUnit="m" metricValue="4.35" metricValueMax="4.58" metricValueMin="4.12" pageId="6" pageNumber="202" unit="mm" value="4.35" valueMax="4.58" valueMin="4.12">4.12–4.58 mm</quantity>
