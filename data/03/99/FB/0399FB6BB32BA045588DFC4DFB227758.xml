<taxonomicName authority="Agassiz, 1862" authorityName="Agassiz" authorityYear="1862" box="[181,464,1014,1040]" class="Scyphozoa" family="Cepheidae" kingdom="Animalia" order="Rhizostomeae" pageId="12" pageNumber="513" phylum="Cnidaria" rank="family">Cepheidae Agassiz, 1862</taxonomicName>
