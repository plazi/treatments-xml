<emphasis bold="true" box="[151,258,978,1004]" pageId="12" pageNumber="513">Remark:</emphasis>
<taxonomicName authority="Berlese, 1896" authorityName="Berlese" authorityYear="1896" box="[265,548,978,1004]" class="Scyphozoa" family="Cepheidae" kingdom="Animalia" order="Rhizostomeae" pageId="12" pageNumber="513" phylum="Cnidaria" rank="family">Cepheidae Berlese, 1896</taxonomicName>
