<taxonomicName authority="Berlese" authorityName="Berlese" authorityYear="1896" box="[1132,1341,1014,1040]" class="Scyphozoa" family="Cepheidae" kingdom="Animalia" order="Rhizostomeae" pageId="12" pageNumber="513" phylum="Cnidaria" rank="family">Cepheidae Berlese</taxonomicName>
