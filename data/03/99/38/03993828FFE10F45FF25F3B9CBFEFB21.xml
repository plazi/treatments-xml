<caption ID-DOI="http://doi.org/10.5281/zenodo.6600500" ID-Zenodo-Dep="6600500" httpUri="https://zenodo.org/record/6600500/files/figure.png" inLine="true" pageId="19" pageNumber="202" targetBox="[1452,2043,305,720]" targetPageId="19">
