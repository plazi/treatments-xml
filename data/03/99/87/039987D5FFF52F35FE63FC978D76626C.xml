<taxonomicName box="[371,485,494,516]" class="Magnoliopsida" family="Asteraceae" kingdom="Plantae" order="Asterales" pageId="21" pageNumber="144" phylum="Tracheophyta" rank="family">Asteraceae</taxonomicName>
: 
<taxonomicName authority="(Spreng.) King and H. Rob." authorityName="King and H. Rob." baseAuthorityName="Spreng." class="Magnoliopsida" family="Asteraceae" genus="Ageratina" kingdom="Plantae" order="Asterales" pageId="21" pageNumber="144" phylum="Tracheophyta" rank="species" species="adenophora">
<emphasis box="[498,723,494,515]" italics="true" pageId="21" pageNumber="144">Ageratina adenophora</emphasis>
(Spreng.) King and H. Rob.
</taxonomicName>
[as 
<taxonomicName box="[241,501,521,542]" class="Magnoliopsida" family="Asteraceae" genus="Eupatorium" kingdom="Plantae" order="Asterales" pageId="21" pageNumber="144" phylum="Tracheophyta" rank="species" species="adenophorum">
