. 
<taxonomicName box="[472,609,524,549]" class="Insecta" family="Lycidae" genus="Dilophotes" higherTaxonomySource="GBIF" kingdom="Animalia" order="Coleoptera" pageId="9" pageNumber="10" phylum="Arthropoda" rank="species" species="berezowskii">
