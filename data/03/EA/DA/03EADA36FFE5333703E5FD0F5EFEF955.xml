<taxonomicName box="[151,333,704,730]" class="Insecta" family="Curculionidae" genus="Pachysquamus" higherTaxonomySource="GBIF" kingdom="Metazoa" order="Coleoptera" pageId="7" pageNumber="308" phylum="Arthropoda" rank="genus" status="new genus">
