<paragraph blockId="13.[192,873,217,241]" box="[192,873,217,241]" pageId="13" pageNumber="12">
<heading bold="true" box="[192,873,217,241]" fontSize="10" level="2" pageId="13" pageNumber="12" reason="3">
<emphasis bold="true" box="[192,873,217,241]" pageId="13" pageNumber="12">
<taxonomicName authority="Wappes and Santos-Silva" authorityName="Wappes and Santos-Silva" authorityYear="2019" box="[192,713,217,241]" class="Insecta" family="Cerambycidae" genus="Giesberticus" higherTaxonomySource="GBIF" kingdom="Animalia" order="Coleoptera" pageId="13" pageNumber="12" phylum="Arthropoda" rank="genus" status="new genus">
<emphasis bold="true" box="[192,360,217,241]" italics="true" pageId="13" pageNumber="12">Giesberticus</emphasis>
Wappes and Santos-Silva
</taxonomicName>
, 
<taxonomicNameLabel box="[727,873,217,241]" pageId="13" pageNumber="12" rank="genus">new genus</taxonomicNameLabel>
</emphasis>
