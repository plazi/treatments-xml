<subSubSection lastPageId="24" lastPageNumber="339" pageId="22" pageNumber="337" type="diagnosis">
<paragraph blockId="22.[831,1436,2021,2078]" lastBlockId="24.[151,756,258,538]" lastPageId="24" lastPageNumber="339" pageId="22" pageNumber="337">
<emphasis bold="true" box="[831,951,2021,2044]" pageId="22" pageNumber="337">Diagnosis:</emphasis>
