<quantity box="[1087,1235,2021,2046]" metricMagnitude="-2" metricUnit="m" metricValue="2.4" metricValueMax="2.5" metricValueMin="2.3" pageId="22" pageNumber="337" unit="mm" value="24.0" valueMax="25.0" valueMin="23.0">23 to 25 mm</quantity>
