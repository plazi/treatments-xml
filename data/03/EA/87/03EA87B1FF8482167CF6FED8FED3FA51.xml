<paragraph blockId="57.[151,756,1384,1475]" pageId="57" pageNumber="372">
<taxonomicName box="[151,411,1384,1407]" class="Insecta" family="Pyralidae" genus="Salbia" higherTaxonomySource="GBIF" kingdom="Animalia" order="Lepidoptera" pageId="57" pageNumber="372" phylum="Arthropoda" rank="species" species="haemorrhoidalis" subFamily="Spilomelinae">
