<collectingCountry box="[1159,1311,1713,1737]" name="Saint Kitts and Nevis" pageId="56" pageNumber="371">
<collectingRegion box="[1159,1311,1713,1737]" country="Dominican Republic" name="San Cristobal" pageId="56" pageNumber="371">San Cristóbal</collectingRegion>
</collectingCountry>
, and 
