<taxonomicName authority="Dist." authorityName="Dist." box="[1066,1332,1131,1156]" class="Insecta" family="Cicadellidae" genus="Mesogonia" kingdom="Animalia" order="Hemiptera" pageId="4" pageNumber="413" phylum="Arthropoda" rank="species" species="apulia">
