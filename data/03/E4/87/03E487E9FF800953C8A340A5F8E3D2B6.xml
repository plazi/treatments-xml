C. 
<taxonomicName box="[709,806,581,603]" pageId="108" pageNumber="109" rank="species" species="simulatus" status="n. sp.">simulatus</taxonomicName>
</emphasis>
</taxonomicName>
<emphasis bold="true" box="[812,869,581,603]" pageId="108" pageNumber="109">
<taxonomicNameLabel box="[812,869,581,603]" pageId="108" pageNumber="109" rank="species">n. sp.</taxonomicNameLabel>
