<typeStatus box="[151,204,1335,1359]" pageId="1" pageNumber="31">Type</typeStatus>
species:
</emphasis>
<taxonomicName authority="Lacordaire, 1866" authorityName="Lacordaire" authorityYear="1866" box="[300,700,1335,1359]" class="Insecta" family="Anthribidae" genus="Diastatotropis" higherTaxonomySource="GBIF" kingdom="Animalia" order="Coleoptera" pageId="1" pageNumber="31" phylum="Arthropoda" rank="species" species="tigrina">
