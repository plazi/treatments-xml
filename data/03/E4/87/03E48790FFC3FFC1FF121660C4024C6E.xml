<taxonomicName authority="Benth." authorityName="Benth." box="[151,501,255,280]" class="Magnoliopsida" family="Fabaceae" genus="Gastrolobium" kingdom="Plantae" order="Fabales" pageId="67" pageNumber="68" phylum="Tracheophyta" rank="species" species="spinosum">
<emphasis box="[151,418,256,280]" italics="true" pageId="67" pageNumber="68">Gastrolobium spinosum</emphasis>
Benth.
</taxonomicName>
, (
<taxonomicName baseAuthorityName="Cowie" baseAuthorityYear="2001" box="[519,630,255,279]" class="Magnoliopsida" family="Fabaceae" kingdom="Plantae" order="Fabales" pageId="67" pageNumber="68" phylum="Tracheophyta" rank="family">Fabaceae</taxonomicName>
); 
<taxonomicName authority="S. Moore" authorityName="S. Moore" box="[649,931,255,280]" class="Magnoliopsida" family="Fabaceae" genus="Gastrolobium" kingdom="Plantae" order="Fabales" pageId="67" pageNumber="68" phylum="Tracheophyta" rank="species" species="floribundum">
<emphasis box="[649,818,256,280]" italics="true" pageId="67" pageNumber="68">G. floribundum</emphasis>
S. Moore
</taxonomicName>
, (
<taxonomicName baseAuthorityName="Cowie" baseAuthorityYear="2001" box="[950,1061,255,279]" class="Magnoliopsida" family="Fabaceae" kingdom="Plantae" order="Fabales" pageId="67" pageNumber="68" phylum="Tracheophyta" rank="family">Fabaceae</taxonomicName>
); 
<taxonomicName authority="(F. Muell.)" baseAuthorityName="F. Muell." box="[1080,1431,255,280]" class="Magnoliopsida" family="Fabaceae" genus="Mirbelia" kingdom="Plantae" order="Fabales" pageId="67" pageNumber="68" phylum="Tracheophyta" rank="species" species="seorsifolia">
<emphasis box="[1080,1302,256,280]" italics="true" pageId="67" pageNumber="68">Mirbelia seorsifolia</emphasis>
(F. Muell.)
</taxonomicName>
, (
<taxonomicName baseAuthorityName="Cowie" baseAuthorityYear="2001" box="[158,269,290,314]" class="Magnoliopsida" family="Fabaceae" kingdom="Plantae" order="Fabales" pageId="67" pageNumber="68" phylum="Tracheophyta" rank="family">Fabaceae</taxonomicName>
); 
<taxonomicName box="[288,467,291,314]" class="Magnoliopsida" family="Ericaceae" genus="Leucopogon" kingdom="Plantae" order="Ericales" pageId="67" pageNumber="68" phylum="Tracheophyta" rank="species" species="undetermined">
<emphasis box="[288,426,291,314]" italics="true" pageId="67" pageNumber="68">Leucopogon</emphasis>
sp.
</taxonomicName>
, (
<taxonomicName box="[487,603,290,314]" class="Magnoliopsida" family="Ericaceae" kingdom="Plantae" order="Ericales" pageId="67" pageNumber="68" phylum="Tracheophyta" rank="family">Ericaceae</taxonomicName>
). Larval hosts unknown.
</paragraph>
