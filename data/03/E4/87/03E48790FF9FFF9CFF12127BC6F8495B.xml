(
<taxonomicName baseAuthorityName="Cowie" baseAuthorityYear="2001" box="[1314,1425,980,1004]" class="Magnoliopsida" family="Fabaceae" kingdom="Plantae" order="Fabales" pageId="30" pageNumber="31" phylum="Tracheophyta" rank="family">Fabaceae</taxonomicName>
