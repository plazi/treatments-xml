<taxonomicName authority="Laurenti, 1768" authorityName="Laurenti" authorityYear="1768" box="[151,255,770,795]" class="Reptilia" family="Chamaeleonidae" genus="Chameleo" higherTaxonomySource="GBIF" kingdom="Animalia" order="Squamata" pageId="10" pageNumber="67" phylum="Chordata" rank="species" species="cristatus">
