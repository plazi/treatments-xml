<paragraph blockId="24.[192,778,291,443]" box="[192,778,387,411]" pageId="24" pageNumber="23">
<taxonomicName authority="(Bromley)" baseAuthorityName="Bromley" baseAuthorityYear="1929" box="[192,506,387,411]" class="Insecta" family="Asilidae" genus="Efferia" kingdom="Animalia" order="Diptera" pageId="24" pageNumber="23" phylum="Arthropoda" rank="species" species="pilosula">
