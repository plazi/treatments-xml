<date box="[1373,1451,1601,1627]" pageId="13" pageNumber="214" value="2012-10-09">9–12 x</date>
<quantity box="[136,253,1636,1663]" metricMagnitude="-3" metricUnit="m" metricValue="4.75" metricValueMax="5.0" metricValueMin="4.5" pageId="13" pageNumber="214" unit="mm" value="4.75" valueMax="5.0" valueMin="4.5">4.5–5 mm</quantity>
