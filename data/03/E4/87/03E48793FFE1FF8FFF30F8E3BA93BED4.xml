<taxonomicName box="[781,875,1636,1662]" class="Magnoliopsida" family="Fabaceae" genus="Mimosa" higherTaxonomySource="IPNI" kingdom="Plantae" order="Fabales" pageId="13" pageNumber="214" phylum="Magnoliophyta" rank="species" species="nuda">
<emphasis box="[781,875,1636,1662]" italics="true" pageId="13" pageNumber="214">
M. 
<taxonomicName box="[819,875,1636,1662]" class="Magnoliopsida" family="Fabaceae" genus="Mimosa" higherTaxonomySource="CoL" kingdom="Plantae" order="Fabales" pageId="13" pageNumber="214" phylum="Tracheophyta" rank="species" species="nuda">nuda</taxonomicName>
