<taxonomicName authority="Philippi, 1836" authorityName="Philippi" authorityYear="1836" box="[613,998,836,862]" class="Gastropoda" family="Bulimulidae" genus="Bulimus" higherTaxonomySource="GBIF" kingdom="Animalia" order="Stylommatophora" pageId="39" pageNumber="40" phylum="Mollusca" rank="species" species="rupestris">
