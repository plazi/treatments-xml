</taxonomicName>
and 
<taxonomicName authorityName="Smith" authorityYear="1853" box="[734,873,975,1000]" class="Insecta" family="Megachilidae" genus="Osmia" kingdom="Animalia" order="Hymenoptera" pageId="101" pageNumber="102" phylum="Arthropoda" rank="species" species="simillima">
<emphasis box="[734,754,976,999]" italics="true" pageId="101" pageNumber="102">O</emphasis>
