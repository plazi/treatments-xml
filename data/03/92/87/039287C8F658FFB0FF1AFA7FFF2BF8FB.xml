<subSubSection pageId="10" pageNumber="51" type="etymology">
<paragraph blockId="10.[151,1436,1383,1912]" pageId="10" pageNumber="51">
<emphasis bold="true" box="[199,334,1527,1552]" pageId="10" pageNumber="51">Etymology.</emphasis>
