<collectingCountry box="[737,910,1658,1684]" name="French Guiana" pageId="9" pageNumber="56">French Guiana</collectingCountry>
and 
<collectingCountry box="[967,1039,1658,1684]" name="Brazil" pageId="9" pageNumber="56">Brazil</collectingCountry>
