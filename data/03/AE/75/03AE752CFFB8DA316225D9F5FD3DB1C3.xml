<paragraph blockId="34.[304,931,1228,1252]" box="[304,931,1228,1252]" pageId="34" pageNumber="482">
<heading box="[304,931,1228,1252]" centered="true" fontSize="10" level="2" pageId="34" pageNumber="482" reason="3">
<taxonomicName authority="Loew, 1869" authorityName="Loew" authorityYear="1869" box="[304,625,1228,1252]" class="Insecta" family="Bibionidae" genus="Dilophus" kingdom="Animalia" order="Diptera" pageId="34" pageNumber="482" phylum="Arthropoda" rank="species" species="tibialis">
<emphasis bold="true" box="[304,485,1228,1252]" italics="true" pageId="34" pageNumber="482">Dilophus tibialis</emphasis>
<bibRefCitation author="LOEW, H." box="[494,625,1228,1252]" pageId="34" pageNumber="482" pagination="122" refId="ref15832" refString="LOEW, H., 1869, Diptera Americae septentrionalis indigena. Centuria nona. Berl, Entomologisc he Zeitschrift, 13, 122 etc." type="journal article" year="1869">Loew, 1869</bibRefCitation>
</taxonomicName>
(
<emphasis box="[644,702,1229,1252]" italics="true" pageId="34" pageNumber="482">sensu</emphasis>
<bibRefCitation author="KRIVOSHEINA, N. P." box="[712,920,1228,1252]" pageId="34" pageNumber="482" pagination="170" refId="ref15695" refString="KRIVOSHEINA, N. P., 1972, Detrito ® lynye dvukrylye bibionodogo kompleksa v yuzhnom Primorye (Diptera, Nematocera), Trudy Biologo-potch vennongo Instituta (Novaja Serija), 7, 159 ± 170." type="journal article" year="1972">Krivosheina, 1972</bibRefCitation>
