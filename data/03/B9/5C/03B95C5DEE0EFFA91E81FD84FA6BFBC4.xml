<emphasis box="[1124,1168,738,759]" italics="true" pageId="10" pageNumber="77">stem</emphasis>
up to 
<quantity box="[1228,1301,738,760]" metricMagnitude="-3" metricUnit="m" metricValue="2.5" pageId="10" pageNumber="77" unit="mm" value="2.5">2.5 mm</quantity>
