<taxonomicName authority="Hering" authorityName="Hering" authorityYear="1931" box="[1021,1351,410,434]" class="Insecta" family="Limacodidae" genus="Trichogyia" kingdom="Animalia" order="Lepidoptera" pageId="1" pageNumber="317" phylum="Arthropoda" rank="species" species="nigrimargo">
