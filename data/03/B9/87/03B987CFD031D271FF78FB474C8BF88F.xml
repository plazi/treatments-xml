<taxonomicName authority="Reitter" authorityName="Reitter" box="[286,552,1192,1219]" class="Insecta" family="Curculionidae" genus="Xylosandrus" kingdom="Animalia" order="Coleoptera" pageId="0" pageNumber="64" phylum="Arthropoda" rank="genus">
