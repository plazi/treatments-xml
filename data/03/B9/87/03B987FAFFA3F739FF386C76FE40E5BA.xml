<specimenCount box="[164,342,1129,1151]" pageId="23" pageNumber="530" type="generic" typeStatus="syntypes">three syntypes</specimenCount>
(
<specimenCount box="[369,426,1128,1150]" pageId="23" pageNumber="530" type="male">2 ♂</specimenCount>
, 
<specimenCount box="[450,503,1128,1150]" pageId="23" pageNumber="530" type="female">1 ♀</specimenCount>
) from Labrador, [NF, 
<collectingCountry box="[164,257,1159,1181]" name="Canada" pageId="23" pageNumber="530">Canada</collectingCountry>
]. Two 
<typeStatus box="[336,436,1160,1181]" pageId="23" pageNumber="530">syntypes</typeStatus>
