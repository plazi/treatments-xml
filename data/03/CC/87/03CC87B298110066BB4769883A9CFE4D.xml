<paragraph blockId="9.[113,753,544,594]" pageId="9" pageNumber="32">
<emphasis bold="true" box="[113,233,544,565]" pageId="9" pageNumber="32">
<emphasis bold="true" box="[113,217,544,565]" italics="true" pageId="9" pageNumber="32">Diagnosis.</emphasis>
