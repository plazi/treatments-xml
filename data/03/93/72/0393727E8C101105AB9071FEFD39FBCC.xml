<collectionCode LSID="urn:lsid:biocol.org:col:34988" box="[1137,1226,644,668]" httpUri="http://biocol.org/urn:lsid:biocol.org:col:34988" name="Museum National d'Histoire Naturelle" pageId="8" pageNumber="569">MNHN</collectionCode>
