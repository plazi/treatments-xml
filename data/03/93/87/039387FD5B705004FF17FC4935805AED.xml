<typeStatus box="[214,297,1117,1138]" pageId="1" pageNumber="146">holotype</typeStatus>
(SBL 
<emphasis bold="true" box="[356,374,1117,1137]" italics="true" pageId="1" pageNumber="146">¼</emphasis>
<quantity box="[377,452,1117,1138]" metricMagnitude="-3" metricUnit="m" metricValue="8.6" pageId="1" pageNumber="146" unit="mm" value="8.6">8.6 mm</quantity>
