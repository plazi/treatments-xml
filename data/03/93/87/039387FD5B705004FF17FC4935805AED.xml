<quantity box="[636,755,1170,1191]" metricMagnitude="-3" metricUnit="m" metricValue="8.35" metricValueMax="9.4" metricValueMin="7.3" pageId="1" pageNumber="146" unit="mm" value="8.35" valueMax="9.4" valueMin="7.3">7.3–9.4 mm</quantity>
