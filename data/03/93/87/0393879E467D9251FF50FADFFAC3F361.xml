<number box="[268,280,1890,1916]" pageId="7" pageNumber="52" value="3.0">3</number>
-articulate, article 
<number box="[502,517,1890,1916]" pageId="7" pageNumber="52" value="1.0">1</number>
, length 
<number box="[618,654,1890,1916]" pageId="7" pageNumber="52" value="3.5">3.5</number>
