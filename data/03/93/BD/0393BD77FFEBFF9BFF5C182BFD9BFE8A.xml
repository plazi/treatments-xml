<taxonomicName authority="JASCHHOF, 2001" authorityName="JASCHHOF" authorityYear="2001" box="[189,473,206,229]" class="Insecta" family="Cecidomyiidae" genus="Peromyia" kingdom="Animalia" order="Diptera" pageId="6" pageNumber="39" phylum="Arthropoda" rank="species" species="ayaensis">
<emphasis box="[189,289,206,229]" italics="true" pageId="6" pageNumber="39">P. ayaensis</emphasis>
JASCHHOF, 2001
</taxonomicName>
and 
<taxonomicName authority="JASCHHOF, 2001" authorityName="JASCHHOF" authorityYear="2001" box="[532,804,206,230]" class="Insecta" family="Cecidomyiidae" genus="Peromyia" kingdom="Animalia" order="Diptera" pageId="6" pageNumber="39" phylum="Arthropoda" rank="species" species="valens">
<emphasis box="[532,618,206,224]" italics="true" pageId="6" pageNumber="39">P. valens</emphasis>
