<subSubSection box="[198,1373,151,178]" pageId="37" pageNumber="38" type="etymology">
<paragraph blockId="37.[151,1437,151,529]" box="[198,1373,151,178]" pageId="37" pageNumber="38">
<emphasis bold="true" box="[198,339,151,177]" pageId="37" pageNumber="38">Etymology.</emphasis>
