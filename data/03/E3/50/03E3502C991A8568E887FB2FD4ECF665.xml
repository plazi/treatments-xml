<taxonomicName authority="(von Roser, 1840) (Peloropeodinae)" authorityName="Peloropeodinae" baseAuthorityName="von Roser" baseAuthorityYear="1840" box="[193,888,1232,1260]" class="Insecta" family="Dolichopodidae" genus="Chrysotimus" kingdom="Animalia" order="Diptera" pageId="28" pageNumber="29" phylum="Arthropoda" rank="species" species="flaviventris">
