<taxonomicName authority="(Loew, 1850) (Sympycninae)" authorityName="Sympycninae" baseAuthorityName="Loew" baseAuthorityYear="1850" box="[207,748,1088,1116]" class="Insecta" family="Dolichopodidae" genus="Syntormon" kingdom="Animalia" order="Diptera" pageId="56" pageNumber="57" phylum="Arthropoda" rank="species" species="zelleri">
<emphasis bold="true" box="[207,571,1088,1115]" pageId="56" pageNumber="57">
<emphasis bold="true" box="[207,412,1088,1115]" italics="true" pageId="56" pageNumber="57">Syntormon zelleri</emphasis>
(Loew, 1850)
</emphasis>
(Sympycninae)
</taxonomicName>
— 
<emphasis bold="true" box="[777,967,1089,1115]" pageId="56" pageNumber="57">
new to 
<collectingCountry box="[863,967,1089,1115]" name="Portugal" pageId="56" pageNumber="57">Portugal</collectingCountry>
</emphasis>
</paragraph>
