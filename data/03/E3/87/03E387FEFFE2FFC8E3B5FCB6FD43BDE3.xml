<emphasis box="[1116,1378,1949,1972]" italics="true" pageId="39" pageNumber="40">Aplysina orthoreticulata</emphasis>
</taxonomicName>
<taxonomicNameLabel box="[1386,1436,1949,1972]" pageId="39" pageNumber="40" rank="species">sp.n.</taxonomicNameLabel>
B. 
<taxonomicName box="[182,453,1984,2007]" class="Demospongiae" family="Aplysinidae" genus="Aplysina" kingdom="Animalia" order="Verongida" pageId="39" pageNumber="40" phylum="Porifera" rank="species" species="pseudolacunosa" status="sp.n.">
<emphasis box="[182,453,1984,2007]" italics="true" pageId="39" pageNumber="40">Aplysina pseudolacunosa</emphasis>
</taxonomicName>
<taxonomicNameLabel box="[460,511,1983,2006]" pageId="39" pageNumber="40" rank="species">sp.n.</taxonomicNameLabel>
C. 
<taxonomicName box="[548,756,1984,2007]" class="Demospongiae" family="Aplysinidae" genus="Aplysina" kingdom="Animalia" order="Verongida" pageId="39" pageNumber="40" phylum="Porifera" rank="species" species="solangeae" status="sp.n.">
