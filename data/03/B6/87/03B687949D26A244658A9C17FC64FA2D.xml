), between 
<number box="[736,764,1399,1423]" pageId="16" pageNumber="193" value="20.0">20</number>
and 
<quantity box="[818,876,1399,1423]" metricMagnitude="1" metricUnit="m" metricValue="7.9" pageId="16" pageNumber="193" unit="m" value="79.0">79 m</quantity>
