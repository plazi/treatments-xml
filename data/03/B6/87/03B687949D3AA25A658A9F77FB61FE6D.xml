<number box="[850,863,440,464]" pageId="14" pageNumber="191" value="1.0">1</number>
), between 
<number box="[988,1016,439,464]" pageId="14" pageNumber="191" value="16.0">16</number>
and 
<quantity box="[1070,1127,440,464]" metricMagnitude="1" metricUnit="m" metricValue="9.2" pageId="14" pageNumber="191" unit="m" value="92.0">92 m</quantity>
