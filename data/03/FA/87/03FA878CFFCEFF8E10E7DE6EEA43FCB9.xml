<collectingCountry box="[790,937,1891,1915]" name="Puerto Rico" pageId="7" pageNumber="6">Puerto Rico</collectingCountry>
<emphasis bold="true" box="[948,956,1891,1915]" pageId="7" pageNumber="6">!</emphasis>
