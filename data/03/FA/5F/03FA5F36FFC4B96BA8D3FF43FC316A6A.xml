<materialsCitation ID-GBIF-Occurrence="3319220301" collectingDate="1898-09-21" collectionCode="O, A" determinerName="Hackel" elevation="2900" location="These" municipality="Hackel" pageId="3" pageNumber="38" specimenCount="1">
