</quantity>
, 
<date pageId="3" pageNumber="38" value="1898-09-21">
<collectingDate pageId="3" pageNumber="38" value="1898-09-21">21 September 1898</collectingDate>
</date>
, 
<emphasis box="[369,507,935,960]" italics="true" pageId="3" pageNumber="38">
<collectionCode box="[369,394,935,960]" country="Norway" lsid="urn:lsid:biocol.org:col:13093" name="Botanical Museum - University of Oslo" pageId="3" pageNumber="38" type="Herbarium">O</collectionCode>
