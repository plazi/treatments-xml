<quantity box="[1011,1094,1269,1292]" metricMagnitude="-3" metricUnit="m" metricValue="3.4" pageId="34" pageNumber="177" unit="mm" value="3.4">3.4 mm</quantity>
,! 
<quantity box="[1134,1266,1269,1292]" metricMagnitude="-3" metricUnit="m" metricValue="3.4" metricValueMax="3.6" metricValueMin="3.2" pageId="34" pageNumber="177" unit="mm" value="3.4" valueMax="3.6" valueMin="3.2">3.2–3.6 mm</quantity>
