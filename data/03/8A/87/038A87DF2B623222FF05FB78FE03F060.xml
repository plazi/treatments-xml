<subSubSection box="[151,1183,1311,1333]" pageId="5" pageNumber="362" type="materials_examined">
<paragraph blockId="5.[151,1183,1311,1333]" box="[151,1183,1311,1333]" pageId="5" pageNumber="362">
<emphasis bold="true" box="[151,283,1311,1333]" pageId="5" pageNumber="362">
<typeStatus box="[151,202,1311,1333]" pageId="5" pageNumber="362">Type</typeStatus>
species
</emphasis>
. 
<taxonomicName authority="A. Milne-Edwards, 1875" authorityName="A. Milne-Edwards" authorityYear="1875" box="[297,757,1311,1333]" class="Malacostraca" family="Epialtidae" genus="Rochinia" kingdom="Animalia" order="Decapoda" pageId="5" pageNumber="362" phylum="Arthropoda" rank="species" species="gracilipes">
<emphasis box="[297,496,1311,1333]" italics="true" pageId="5" pageNumber="362">Rochinia gracilipes</emphasis>
A. Milne-Edwards, 
