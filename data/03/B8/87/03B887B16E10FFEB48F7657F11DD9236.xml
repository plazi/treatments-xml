<subSubSection pageId="39" pageNumber="40" type="discussion">
<paragraph blockId="39.[151,1437,716,1283]" pageId="39" pageNumber="40">
<emphasis bold="true" box="[199,315,1220,1246]" pageId="39" pageNumber="40">Remarks.</emphasis>
