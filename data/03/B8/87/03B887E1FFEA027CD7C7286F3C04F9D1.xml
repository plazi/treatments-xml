<emphasis box="[730,878,1520,1544]" italics="true" pageId="3" pageNumber="2415">L. sebastiena</emphasis>
</taxonomicName>
, 
<taxonomicName authority="(Fabricius, 1780)" baseAuthorityName="Fabricius" baseAuthorityYear="1780" class="Polychaeta" family="Capitellidae" genus="Capitella" kingdom="Animalia" pageId="3" pageNumber="2415" phylum="Annelida" rank="species" species="capitata">
<emphasis box="[895,996,1520,1544]" italics="true" pageId="3" pageNumber="2415">Capitella</emphasis>
cf. 
