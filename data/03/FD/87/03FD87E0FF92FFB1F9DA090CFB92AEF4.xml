<subSubSection box="[113,728,936,956]" pageId="1" pageNumber="610" type="type_taxon">
<paragraph blockId="1.[113,728,936,956]" box="[113,728,936,956]" pageId="1" pageNumber="610">
<emphasis bold="true" box="[113,233,936,956]" pageId="1" pageNumber="610">
<typeStatus box="[113,159,937,956]" pageId="1" pageNumber="610">Type</typeStatus>
species.
</emphasis>
<taxonomicName authority="Seguy, 1948" authorityName="♀, Cotyp., E. Seguy" authorityYear="1948" box="[238,520,936,956]" class="Insecta" family="Scathophagidae" genus="Norellisoma" kingdom="Animalia" order="Diptera" pageId="1" pageNumber="610" phylum="Arthropoda" rank="species" species="agrion">
