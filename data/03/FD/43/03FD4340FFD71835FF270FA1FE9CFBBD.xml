<taxonomicName authorityName="Fluke" authorityYear="1945" box="[433,724,922,948]" class="Insecta" family="Syrphidae" genus="Platycheirus" kingdom="Animalia" order="Diptera" pageId="109" pageNumber="110" phylum="Arthropoda" rank="species" species="punctulatum">
