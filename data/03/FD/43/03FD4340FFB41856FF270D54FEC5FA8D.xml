<quantity box="[1078,1172,1126,1154]" metricMagnitude="1" metricUnit="m" metricValue="5.2" metricValueMax="9.9" metricValueMin="0.5" pageId="14" pageNumber="15" unit="m" value="52.0" valueMax="99.0" valueMin="5.0">
