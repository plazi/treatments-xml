<paragraph blockId="5.[192,1440,581,669]" pageId="5" pageNumber="4">
<emphasis bold="true" box="[192,334,581,605]" pageId="5" pageNumber="4">Variation.</emphasis>
<typeStatus box="[341,467,582,606]" pageId="5" pageNumber="4">Paratypes</typeStatus>
