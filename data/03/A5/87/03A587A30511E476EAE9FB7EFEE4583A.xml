<taxonomicName authority="Linnavuori" authorityName="Linnavuori" box="[639,899,295,320]" class="Insecta" family="Cicadellidae" genus="Parallaxis" kingdom="Animalia" order="Hemiptera" pageId="3" pageNumber="244" phylum="Arthropoda" rank="species" species="colorata">
