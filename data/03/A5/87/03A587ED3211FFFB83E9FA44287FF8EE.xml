<taxonomicName authority="(Tate 1939)" baseAuthorityName="Tate" baseAuthorityYear="1939" box="[845,1141,1483,1509]" class="Mammalia" family="Muridae" genus="Oecomys" kingdom="Animalia" order="Rodentia" pageId="46" pageNumber="47" phylum="Chordata" rank="species" species="auyantepui">
<emphasis box="[845,1003,1483,1509]" italics="true" pageId="46" pageNumber="47">O. auyantepui</emphasis>
