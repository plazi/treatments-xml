</taxonomicName>
, 
<taxonomicName authority="(Thomas 1909)" baseAuthorityName="Thomas" baseAuthorityYear="1909" box="[151,488,1519,1545]" class="Mammalia" family="Muridae" genus="Oecomys" kingdom="Animalia" order="Rodentia" pageId="46" pageNumber="47" phylum="Chordata" rank="species" species="catherinae">
<emphasis box="[151,306,1519,1545]" italics="true" pageId="46" pageNumber="47">O. catherinae</emphasis>
(Thomas 1909)
</taxonomicName>
, 
<taxonomicName authority="(Locks 1981)" baseAuthorityName="Locks" baseAuthorityYear="1981" box="[501,774,1519,1545]" class="Mammalia" family="Muridae" genus="Oecomys" kingdom="Animalia" order="Rodentia" pageId="46" pageNumber="47" phylum="Chordata" rank="species" species="cleberi">
<emphasis box="[501,614,1519,1545]" italics="true" pageId="46" pageNumber="47">O. cleberi</emphasis>
(Locks 1981)
</taxonomicName>
, 
<taxonomicName authority="(Wagner 1845)" baseAuthorityName="Wagner" baseAuthorityYear="1845" box="[787,1100,1518,1545]" class="Mammalia" family="Muridae" genus="Oecomys" kingdom="Animalia" order="Rodentia" pageId="46" pageNumber="47" phylum="Chordata" rank="species" species="concolor">
<emphasis box="[787,922,1519,1545]" italics="true" pageId="46" pageNumber="47">O. concolor</emphasis>
(Wagner 1845)
</taxonomicName>
, 
<taxonomicName authority="(Thomas 1894)" baseAuthorityName="Thomas" baseAuthorityYear="1894" box="[1113,1432,1519,1545]" class="Mammalia" family="Muridae" genus="Oecomys" kingdom="Animalia" order="Rodentia" pageId="46" pageNumber="47" phylum="Chordata" rank="species" species="flavicans">
<emphasis box="[1113,1249,1519,1545]" italics="true" pageId="46" pageNumber="47">O. flavicans</emphasis>
(Thomas 1894)
</taxonomicName>
, 
<taxonomicName authority="(Pardinas, Teta, Salazar-Bravo, Myers &amp; Galliari 2016)" baseAuthorityName="Pardinas, Teta, Salazar-Bravo, Myers &amp; Galliari" baseAuthorityYear="2016" box="[151,964,1555,1582]" class="Mammalia" family="Muridae" genus="Oecomys" kingdom="Animalia" order="Rodentia" pageId="46" pageNumber="47" phylum="Chordata" rank="species" species="franciscorum">
<emphasis box="[151,334,1555,1581]" italics="true" pageId="46" pageNumber="47">O. franciscorum</emphasis>
(
<bibRefCitation author="Salazar-Bravo, J. &amp; Pardinas, U. F. J. &amp; Zeballos, H. &amp; Teta, P." box="[349,955,1555,1582]" pageId="46" pageNumber="47" pagination="1 - 24" refId="ref73049" refString="Salazar-Bravo, J., Pardinas, U. F. J., Zeballos, H. &amp; Teta, P. (2016) Description of a New Tribe of Sigmodontine rodents (Cricetidae: Sigmodontinae) with an updated summary of valid tribes and their generic contents. Occasional papers / The Museum, Texas Tech University, 338, 1 - 24." type="journal article" year="2016">Pardiñas, Teta, Salazar-Bravo, Myers &amp; Galliari 2016</bibRefCitation>
