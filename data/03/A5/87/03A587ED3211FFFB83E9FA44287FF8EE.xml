</taxonomicName>
, 
<taxonomicName authority="(Thomas 1906)" baseAuthorityName="Thomas" baseAuthorityYear="1906" box="[975,1296,1555,1582]" class="Mammalia" family="Muridae" genus="Oecomys" kingdom="Animalia" order="Rodentia" pageId="46" pageNumber="47" phylum="Chordata" rank="species" species="mamorae">
<emphasis box="[975,1115,1555,1581]" italics="true" pageId="46" pageNumber="47">O. mamorae</emphasis>
(Thomas 1906)
</taxonomicName>
, 
<taxonomicName authority="(Thomas 1904)" baseAuthorityName="Thomas" baseAuthorityYear="1904" class="Mammalia" family="Muridae" genus="Oecomys" kingdom="Animalia" order="Rodentia" pageId="46" pageNumber="47" phylum="Chordata" rank="species" species="paricola">
<emphasis box="[1307,1436,1555,1581]" italics="true" pageId="46" pageNumber="47">O. paricola</emphasis>
(Thomas 1904)
</taxonomicName>
, 
<taxonomicName authority="(Thomas 1901)" baseAuthorityName="Thomas" baseAuthorityYear="1901" box="[336,644,1591,1617]" class="Mammalia" family="Muridae" genus="Oecomys" kingdom="Animalia" order="Rodentia" pageId="46" pageNumber="47" phylum="Chordata" rank="species" species="phaeotis">
<emphasis box="[336,464,1591,1617]" italics="true" pageId="46" pageNumber="47">O. phaeotis</emphasis>
(Thomas 1901)
</taxonomicName>
, 
<taxonomicName authority="(Thomas 1910)" baseAuthorityName="Thomas" baseAuthorityYear="1910" box="[655,903,1591,1617]" class="Mammalia" family="Muridae" genus="Oecomys" kingdom="Animalia" order="Rodentia" pageId="46" pageNumber="47" phylum="Chordata" rank="species" species="rex">
<emphasis box="[655,724,1591,1617]" italics="true" pageId="46" pageNumber="47">O. rex</emphasis>
(Thomas 1910)
</taxonomicName>
, 
<taxonomicName authority="(Thomas 1904)" baseAuthorityName="Thomas" baseAuthorityYear="1904" box="[914,1205,1591,1617]" class="Mammalia" family="Muridae" genus="Oecomys" kingdom="Animalia" order="Rodentia" pageId="46" pageNumber="47" phylum="Chordata" rank="species" species="roberti">
<emphasis box="[914,1025,1591,1617]" italics="true" pageId="46" pageNumber="47">O. roberti</emphasis>
(Thomas 1904)
</taxonomicName>
, 
<taxonomicName authority="(Anthony 1921)" baseAuthorityName="Anthony" baseAuthorityYear="1921" class="Mammalia" family="Muridae" genus="Oecomys" kingdom="Animalia" order="Rodentia" pageId="46" pageNumber="47" phylum="Chordata" rank="species" species="rutilus">
