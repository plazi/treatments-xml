<emphasis box="[657,687,1399,1422]" italics="true" pageId="1" pageNumber="206">vs.</emphasis>
<quantity metricMagnitude="-1" metricUnit="m" metricValue="1.3081" metricValueMax="1.3716" metricValueMin="1.2446" pageId="1" pageNumber="206" unit="in" value="5.15" valueMax="5.4" valueMin="4.9">4.9­5.4 in</quantity>
