<quantity box="[558,673,1366,1389]" metricMagnitude="-2" metricUnit="m" metricValue="6.223" metricValueMax="6.604" metricValueMin="5.842" pageId="1" pageNumber="206" unit="in" value="2.45" valueMax="2.6" valueMin="2.3">2.3­2.6 in</quantity>
