<quantity box="[315,419,1496,1519]" metricMagnitude="-2" metricUnit="m" metricValue="8.128" metricValueMax="9.144" metricValueMin="7.111999999999999" pageId="1" pageNumber="206" unit="in" value="3.2" valueMax="3.6" valueMin="2.8">2.8­3.6 in</quantity>
