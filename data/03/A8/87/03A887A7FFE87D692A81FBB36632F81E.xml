Keys; Gulf of 
<collectingRegion box="[968,1062,1877,1903]" country="Mexico" name="Mexico" pageId="38" pageNumber="39">Mexico</collectingRegion>
, 
<quantity box="[1075,1196,1877,1903]" metricMagnitude="1" metricUnit="m" metricValue="6.9" metricValueMax="12.5" metricValueMin="1.3" pageId="38" pageNumber="39" unit="m" value="69.0" valueMax="125.0" valueMin="13.0">13–125 m</quantity>
(
<bibRefCitation author="Deichmann, E." box="[1212,1431,1877,1903]" pageId="38" pageNumber="39" refId="ref25431" refString="Deichmann, E. (1936) The Alcyonaria of the western part of the Atlantic Ocean. Memoirs of the Museum of Comparative Zoology, 53, 317 pp." type="book" year="1936">Deichmann, 1936</bibRefCitation>
