, 
<collectingCountry box="[800,913,260,285]" name="Colombia" pageId="103" pageNumber="104">Colombia</collectingCountry>
, 
<collectingCountry box="[926,1018,260,285]" name="Bonaire, Sint Eustatius and Saba" pageId="103" pageNumber="104">Bonaire</collectingCountry>
, 
<collectingCountry box="[1030,1126,260,284]" name="Curaçao" pageId="103" pageNumber="104">Curaçao</collectingCountry>
, 
<collectingCountry box="[1139,1245,260,285]" name="Bahamas" pageId="103" pageNumber="104">Bahamas</collectingCountry>
, offshore islands of NE 
<collectingCountry box="[225,296,295,320]" name="Brazil" pageId="103" pageNumber="104">Brazil</collectingCountry>
, 
<collectingRegion box="[308,392,295,320]" country="United States of America" name="Florida" pageId="103" pageNumber="104">Florida</collectingRegion>
, on reefs and sand bottoms, at 
<quantity box="[736,849,295,320]" metricMagnitude="1" metricUnit="m" metricValue="8.25" metricValueMax="15.5" metricValueMin="1.0" pageId="103" pageNumber="104" unit="m" value="82.5" valueMax="155.0" valueMin="10.0">10–155 m</quantity>
depth (
<collectingCountry box="[933,1022,296,320]" name="Guyana" pageId="103" pageNumber="104">Guyana</collectingCountry>
Shelf 
