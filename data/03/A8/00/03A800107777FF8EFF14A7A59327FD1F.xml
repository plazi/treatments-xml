<quantity box="[400,457,1851,1875]" metricMagnitude="1" metricUnit="m" metricValue="9.4" pageId="33" pageNumber="34" unit="m" value="94.0">94 m</quantity>
(
<collectingCountry box="[471,560,1851,1875]" name="Guyana" pageId="33" pageNumber="34">Guyana</collectingCountry>
Shelf 
