<subSubSection pageId="33" pageNumber="34" type="distribution">
<paragraph blockId="33.[151,1437,1742,2020]" pageId="33" pageNumber="34">
<emphasis bold="true" box="[199,508,1814,1839]" pageId="33" pageNumber="34">Distribution and ecology.</emphasis>
<collectingCountry box="[519,606,1815,1839]" name="Guyana" pageId="33" pageNumber="34">Guyana</collectingCountry>
