<taxonomicName box="[123,244,1542,1566]" class="Bacilli" family="Lactobacillaceae" genus="Lactobacillus" kingdom="Bacteria" order="Lactobacillales" pageId="17" pageNumber="2799" phylum="Firmicutes" rank="species" species="melliventris">
