<taxonomicName authority="Yan Liu" authorityName="Yan Liu" box="[1122,1308,411,435]" class="Liliopsida" family="Asparagaceae" genus="Aspidistra" kingdom="Plantae" order="Asparagales" pageId="2" pageNumber="299" phylum="Tracheophyta" rank="species" species="erecta">
