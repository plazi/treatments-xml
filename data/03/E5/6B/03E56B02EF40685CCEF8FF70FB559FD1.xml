<subSubSection box="[199,1156,1231,1257]" pageId="10" pageNumber="591" type="etymology">
<paragraph blockId="10.[151,1437,150,1257]" box="[199,1156,1231,1257]" pageId="10" pageNumber="591">
<emphasis bold="true" box="[199,334,1231,1257]" pageId="10" pageNumber="591">Etymology.</emphasis>
