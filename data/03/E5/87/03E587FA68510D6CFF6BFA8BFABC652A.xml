<collectingCountry box="[1371,1436,2000,2023]" name="Brazil" pageId="0" pageNumber="373">Brazil</collectingCountry>
(
<typeStatus box="[158,205,152,175]" pageId="1" pageNumber="374">type</typeStatus>
