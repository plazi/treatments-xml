<taxonomicName authority="Obenberger 1933" authorityName="Obenberger" authorityYear="1933" box="[1140,1432,1965,1989]" class="Insecta" family="Buprestidae" genus="Agrilus" kingdom="Animalia" order="Coleoptera" pageId="0" pageNumber="373" phylum="Arthropoda" rank="species" species="pallon">
<emphasis box="[1140,1238,1965,1989]" italics="true" pageId="0" pageNumber="373">A. pallon</emphasis>
<bibRefCitation author="Obenberger" box="[1244,1432,1966,1989]" pageId="0" pageNumber="373" refString="Obenberger, J. (1933) Nove druhy rodu Agrilus Steph. (Col. Bupr.). De Agrili generis speciebus novis (Col. Bupr.). Acta Entomologica Musaei Nationalis Pragae, 11, 15 - 81." type="journal article" year="1933">Obenberger 1933</bibRefCitation>
</taxonomicName>
, 
<taxonomicName authority="Curletti &amp; Brule 2011" authorityName="Curletti &amp; Brule" authorityYear="2011" box="[151,509,2000,2023]" class="Insecta" family="Buprestidae" genus="Agrilus" kingdom="Animalia" order="Coleoptera" pageId="0" pageNumber="373" phylum="Arthropoda" rank="species" species="rosanti">
