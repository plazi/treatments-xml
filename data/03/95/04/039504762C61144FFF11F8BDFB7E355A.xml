Crandall (
<number box="[572,633,1052,1076]" pageId="29" pageNumber="130" value="1998.0">1998</number>
); Dillman 
<emphasis box="[751,808,1052,1076]" italics="true" pageId="29" pageNumber="130">et al.</emphasis>
(
<number box="[823,885,1052,1076]" pageId="29" pageNumber="130" value="2010.0">2010</number>
); Taylor &amp; Knouft (
<number box="[1107,1169,1052,1077]" pageId="29" pageNumber="130" value="2006.0">2006</number>
).
</paragraph>
