<subSubSection pageId="9" pageNumber="367" type="etymology">
<paragraph blockId="9.[151,1437,151,1257]" pageId="9" pageNumber="367">
<emphasis bold="true" box="[199,334,1195,1221]" pageId="9" pageNumber="367">Etymology.</emphasis>
