<elevation box="[386,479,1098,1122]" metricMagnitude="1" metricUnit="m" metricValue="8.25" metricValueMax="9.0" metricValueMin="7.5" pageId="28" pageNumber="1535" unit="m" value="82.5" valueMax="90.0" valueMin="75.0">75–90 m</elevation>
