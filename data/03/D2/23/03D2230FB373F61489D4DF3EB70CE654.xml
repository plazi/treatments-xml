</taxonomicName>
<taxonomicNameLabel box="[672,734,1861,1887]" pageId="1" pageNumber="277" rank="species">sp. n.</taxonomicNameLabel>
, 
<taxonomicName authority="Irwin &amp; Winterton, 2020" authorityName="Irwin &amp; Winterton" authorityYear="2020" box="[748,902,1861,1887]" class="Insecta" family="Therevidae" genus="Sigalopella" kingdom="Animalia" order="Diptera" pageId="1" pageNumber="277" phylum="Arthropoda" rank="species" species="ammophila" status="n. sp.">
<emphasis box="[748,902,1861,1887]" italics="true" pageId="1" pageNumber="277">S. ammophila</emphasis>
</taxonomicName>
<taxonomicNameLabel box="[910,972,1861,1887]" pageId="1" pageNumber="277" rank="species">n. sp.</taxonomicNameLabel>
, 
<taxonomicName authority="Irwin &amp; Winterton, 2020" authorityName="Irwin &amp; Winterton" authorityYear="2020" box="[985,1179,1861,1887]" class="Insecta" family="Therevidae" genus="Sigalopella" kingdom="Animalia" order="Diptera" pageId="1" pageNumber="277" phylum="Arthropoda" rank="species" species="nigrofemoralis" status="sp. n.">
<emphasis box="[985,1179,1861,1887]" italics="true" pageId="1" pageNumber="277">S. nigrofemoralis</emphasis>
</taxonomicName>
