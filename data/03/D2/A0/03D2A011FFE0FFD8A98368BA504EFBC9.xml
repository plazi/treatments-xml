<taxonomicName authority="Calcinai &amp; Pansini, 2000" authorityName="Calcinai &amp; Pansini" authorityYear="2000" box="[192,343,1175,1192]" class="Demospongiae" family="Acarnidae" genus="Iophon" kingdom="Animalia" order="Poecilosclerida" pageId="3" pageNumber="372" phylum="Porifera" rank="species" species="terranovae" status="n. sp.">
<emphasis box="[192,343,1175,1192]" italics="true" pageId="3" pageNumber="372">Iophon terranovae</emphasis>
</taxonomicName>
<taxonomicNameLabel box="[348,397,1175,1192]" pageId="3" pageNumber="372" rank="species">n. sp.</taxonomicNameLabel>
; 
<emphasis bold="true" box="[404,417,1175,1192]" pageId="3" pageNumber="372">A</emphasis>
, paratype; 
<emphasis bold="true" box="[510,523,1175,1192]" pageId="3" pageNumber="372">B</emphasis>
, 
<emphasis bold="true" box="[533,547,1175,1192]" pageId="3" pageNumber="372">C</emphasis>
, thick ectosomal layer of vertically arranged acanthostyles (arrow) supported by the choanosomal reticulation; 
<emphasis bold="true" box="[374,388,1196,1213]" pageId="3" pageNumber="372">D</emphasis>
, 
<emphasis bold="true" box="[400,412,1196,1213]" pageId="3" pageNumber="372">E</emphasis>
