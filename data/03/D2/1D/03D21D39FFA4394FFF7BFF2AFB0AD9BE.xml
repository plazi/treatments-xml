<subSubSection box="[199,1194,369,396]" pageId="22" pageNumber="423" type="etymology">
<paragraph blockId="22.[151,1436,261,576]" box="[199,1194,369,396]" pageId="22" pageNumber="423">
<emphasis bold="true" box="[199,334,370,396]" pageId="22" pageNumber="423">Etymology.</emphasis>
