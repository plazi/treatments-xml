<collectingCountry box="[597,654,1026,1052]" name="Peru" pageId="12" pageNumber="13">Peru</collectingCountry>
, and 
<taxonomicName authority="Stichel" authorityName="Stichel" box="[715,939,1026,1052]" class="Insecta" family="Nymphalidae" genus="Opoptera" kingdom="Animalia" order="Lepidoptera" pageId="12" pageNumber="13" phylum="Arthropoda" rank="species" species="bracteolata">
