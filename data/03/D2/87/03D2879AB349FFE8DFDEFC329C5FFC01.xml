(
<taxonomicName box="[692,803,908,933]" class="Magnoliopsida" family="Cistaceae" kingdom="Plantae" order="Malvales" pageId="43" pageNumber="244" phylum="Tracheophyta" rank="family">Cistaceae</taxonomicName>
