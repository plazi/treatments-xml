long, 
<quantity box="[685,847,295,319]" metricMagnitude="-3" metricUnit="m" metricValue="1.51" metricValueMax="1.56" metricValueMin="1.46" pageId="86" pageNumber="87" unit="mm" value="1.51" valueMax="1.56" valueMin="1.46">1.46–1.56 mm</quantity>
