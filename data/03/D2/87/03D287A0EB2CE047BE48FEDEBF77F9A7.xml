<taxonomicName authorityName="O’Grady &amp; Bonacum &amp; Desalle &amp; Val" authorityYear="2003" baseAuthorityName="O’Grady &amp; Bonacum &amp; Desalle &amp; Val" baseAuthorityYear="2003" box="[366,591,404,429]" class="Insecta" family="Drosophilidae" genus="Scaptomyza" kingdom="Animalia" order="Diptera" pageId="9" pageNumber="10" phylum="Arthropoda" rank="species" species="inflata">
