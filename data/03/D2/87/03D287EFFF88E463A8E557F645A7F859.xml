<taxonomicName authority="L." authorityName="L." box="[386,577,1684,1709]" class="Magnoliopsida" family="Iridaceae" genus="Iris" higherTaxonomySource="GBIF" kingdom="Plantae" order="Asparagales" pageId="40" pageNumber="41" phylum="Tracheophyta" rank="species" species="versicolor">
