<subSubSection box="[199,706,1340,1365]" pageId="60" pageNumber="61" type="description">
<paragraph blockId="60.[151,1437,1196,1544]" box="[199,706,1340,1365]" pageId="60" pageNumber="61">
<emphasis bold="true" box="[199,328,1340,1365]" pageId="60" pageNumber="61">Puparium.</emphasis>
