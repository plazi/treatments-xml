<emphasis bold="true" box="[195,362,1791,1817]" italics="true" pageId="43" pageNumber="44">
<taxonomicName authority="Vaz-De-Mello, 2008" authorityName="Vaz-De-Mello" authorityYear="2008" box="[195,356,1791,1817]" class="Insecta" family="Scarabaeidae" genus="Trichillidium" kingdom="Animalia" order="Coleoptera" pageId="43" pageNumber="44" phylum="Arthropoda" rank="genus" status="new genus">Trichillidium</taxonomicName>
