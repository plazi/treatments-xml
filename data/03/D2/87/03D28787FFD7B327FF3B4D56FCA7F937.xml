<taxonomicName authorityName="C.A.Viraktamath" authorityYear="2011" box="[772,916,1729,1753]" class="Insecta" family="Cicadellidae" genus="Formallia" higherTaxonomySource="GBIF" kingdom="Animalia" order="Hemiptera" pageId="53" pageNumber="54" phylum="Arthropoda" rank="species" species="longipenis">
