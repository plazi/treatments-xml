. 
<taxonomicName authority="Erichson, 1848" authorityName="Erichson" authorityYear="1848" box="[313,640,687,712]" class="Insecta" family="Glaresidae" genus="Glaresis" kingdom="Animalia" order="Coleoptera" pageId="1" pageNumber="596" phylum="Arthropoda" rank="species" species="rufa">
