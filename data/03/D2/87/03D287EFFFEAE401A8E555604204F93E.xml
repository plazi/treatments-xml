<taxonomicName authorityName="" authorityYear="1789" box="[280,437,295,320]" class="Magnoliopsida" family="Boraginaceae" higherTaxonomySource="GBIF" kingdom="Plantae" order="Boraginales" pageId="75" pageNumber="76" phylum="Magnoliopsida" rank="family">Boraginaceae</taxonomicName>
: 
<taxonomicName box="[447,732,295,320]" class="Magnoliopsida" family="Boraginaceae" genus="Hydrophyllum" higherTaxonomySource="GBIF" kingdom="Plantae" order="Boraginales" pageId="75" pageNumber="76" phylum="Tracheophyta" rank="species" species="canadense">
