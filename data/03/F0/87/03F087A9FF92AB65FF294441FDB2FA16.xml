<taxonomicName authority="Fowler, 1895" authorityName="Fowler" authorityYear="1895" box="[659,921,1469,1492]" class="Insecta" family="Membracidae" genus="Micrutalis" higherTaxonomySource="GBIF" kingdom="Animalia" order="Hemiptera" pageId="2" phylum="Arthropoda" rank="genus">
