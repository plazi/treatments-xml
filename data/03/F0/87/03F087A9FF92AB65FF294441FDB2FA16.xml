<taxonomicName authority="Buckton" authorityName="Buckton" authorityYear="1902" class="Insecta" family="Membracidae" genus="Micrutalis" higherTaxonomySource="GBIF" kingdom="Animalia" order="Hemiptera" pageId="2" phylum="Arthropoda" rank="species" species="minuta">
