<emphasis bold="true" box="[151,760,225,252]" pageId="4" pageNumber="155">
<taxonomicName authority="Motschulsky, 1860" authorityName="Motschulsky" authorityYear="1860" box="[151,296,225,252]" class="Insecta" family="Glaphyridae" genus="Pygopleurus" kingdom="Animalia" order="Coleoptera" pageId="4" pageNumber="155" phylum="Arthropoda" rank="genus">
