<paragraph blockId="7.[151,1437,249,1030]" box="[151,1411,249,274]" pageId="7" pageNumber="8">
<emphasis bold="true" box="[151,461,249,274]" pageId="7" pageNumber="8">Material examined. 50303</emphasis>
, one stem 
<quantity box="[582,661,249,273]" metricMagnitude="-2" metricUnit="m" metricValue="4.0" pageId="7" pageNumber="8" unit="mm" value="40.0">40 mm</quantity>
