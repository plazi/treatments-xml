<taxonomicName box="[181,303,1072,1097]" class="Insecta" family="Hybotidae" genus="Elaphropeza" kingdom="Animalia" order="Diptera" pageId="137" pageNumber="138" phylum="Arthropoda" rank="species" species="palpata">
<emphasis box="[181,303,1072,1097]" italics="true" pageId="137" pageNumber="138">E. palpata</emphasis>
</taxonomicName>
and 
<taxonomicName box="[360,557,1072,1097]" class="Insecta" family="Hybotidae" genus="Elaphropeza" kingdom="Animalia" order="Diptera" pageId="137" pageNumber="138" phylum="Arthropoda" rank="species" species="nigropunctata">
