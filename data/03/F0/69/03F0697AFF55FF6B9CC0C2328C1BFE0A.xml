<date box="[282,378,1809,1835]" pageId="135" pageNumber="136" value="1912-06">
<collectionCode box="[282,315,1809,1835]" country="Norway" name="Mykotektet, National Veterinary Institute" pageId="135" pageNumber="136">VI</collectionCode>
.1912
</date>
[printed]; additional label: 
<taxonomicName box="[715,863,1809,1834]" class="Insecta" family="Hybotidae" genus="Elaphropeza" kingdom="Animalia" order="Diptera" pageId="135" pageNumber="136" phylum="Arthropoda" rank="genus">
