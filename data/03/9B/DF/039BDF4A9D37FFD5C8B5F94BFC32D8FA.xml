<subSubSection pageId="9" pageNumber="410" type="diagnosis">
<paragraph blockId="9.[151,1436,1806,2011]" pageId="9" pageNumber="410">
<emphasis bold="true" box="[199,314,1878,1903]" pageId="9" pageNumber="410">Diagnosis</emphasis>
