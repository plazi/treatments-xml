<paragraph blockId="11.[151,1222,402,424]" box="[151,1222,402,424]" pageId="11" pageNumber="12">
<taxonomicName authority="Ishihara, 1955" authorityName="Ishihara" authorityYear="1955" box="[151,439,402,424]" class="Insecta" family="Cicadellidae" genus="Japanagallia" kingdom="Animalia" order="Hemiptera" pageId="11" pageNumber="12" phylum="Arthropoda" rank="genus">
