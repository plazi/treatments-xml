<subSubSection pageId="21" pageNumber="22" type="discussion">
<paragraph blockId="21.[151,1436,151,500]" pageId="21" pageNumber="22">
<emphasis bold="true" box="[201,317,440,464]" pageId="21" pageNumber="22">Remarks.</emphasis>
