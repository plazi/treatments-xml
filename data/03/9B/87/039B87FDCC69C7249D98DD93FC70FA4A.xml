<taxonomicName authorityName="Chaowasku" authorityYear="2012" box="[678,767,1420,1445]" class="Magnoliopsida" family="Annonaceae" genus="Hubera" kingdom="Plantae" order="Magnoliales" pageId="17" pageNumber="50" phylum="Tracheophyta" rank="genus">
