<subSubSection pageId="12" pageNumber="115" type="etymology">
<paragraph blockId="12.[151,756,508,562]" pageId="12" pageNumber="115">
<emphasis bold="true" box="[151,284,508,531]" pageId="12" pageNumber="115">Etymology:</emphasis>
