and 
<taxonomicName box="[839,1001,616,640]" class="Insecta" family="Hybotidae" genus="Platypalpus" kingdom="Animalia" order="Diptera" pageId="7" pageNumber="149" phylum="Arthropoda" rank="species" species="pallidicornis">
<emphasis box="[839,1001,616,640]" italics="true" pageId="7" pageNumber="149">P. pallidicornis</emphasis>
