<quantity box="[1222,1304,2247,2280]" metricMagnitude="0" metricUnit="kg" metricValue="3.0" metricValueMax="5.0" metricValueMin="1.0" pageId="12" pageNumber="631" unit="kg" value="3.0" valueMax="5.0" valueMin="1.0">1-5 kg</quantity>
