<quantity box="[571,733,2247,2280]" metricMagnitude="-1" metricUnit="m" metricValue="5.075" metricValueMax="5.45" metricValueMin="4.7" pageId="12" pageNumber="631" unit="cm" value="50.75" valueMax="54.5" valueMin="47.0">47-54.5 cm</quantity>
, tail 
<quantity box="[803,961,2247,2280]" metricMagnitude="0" metricUnit="m" metricValue="1.2" metricValueMax="2.23" metricValueMin="0.16999999999999998" pageId="12" pageNumber="631" unit="cm" value="120.0" valueMax="223.0" valueMin="17.0">17-223 cm</quantity>
