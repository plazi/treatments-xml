(1904b) is 
<taxonomicName authorityName="Suffert" authorityYear="1904" box="[1115,1360,1896,1920]" class="Insecta" family="Lycaenidae" genus="Pentila" kingdom="Animalia" order="Lepidoptera" pageId="6" pageNumber="591" phylum="Arthropoda" rank="subSpecies" species="amenaida" subSpecies="dama">
