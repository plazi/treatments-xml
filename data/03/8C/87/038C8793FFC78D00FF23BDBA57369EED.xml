) head; 
<taxonomicName authority="KUHLMANN" authorityName="KUHLMANN" box="[749,1009,1541,1563]" class="Insecta" family="Colletidae" genus="Colletes" kingdom="Animalia" order="Hymenoptera" pageId="2" pageNumber="1257" phylum="Arthropoda" rank="species" species="tulbaghensis">
