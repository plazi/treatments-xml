<taxonomicName box="[982,1108,1430,1456]" class="Insecta" higherTaxonomySource="GBIF,CoL" kingdom="Animalia" order="Neuroptera" pageId="50" pageNumber="51" phylum="Arthropoda" rank="order">Neuroptera</taxonomicName>
