<paragraph blockId="72.[189,381,1722,1749]" box="[189,381,1722,1749]" pageId="72" pageNumber="73">
<emphasis allCaps="true" box="[189,283,1723,1749]" inLineHeading="true" pageId="72" pageNumber="73">LENGTH.</emphasis>
<quantity box="[291,377,1722,1749]" metricMagnitude="-2" metricUnit="m" metricValue="1.6" pageId="72" pageNumber="73" unit="mm" value="16.0">16 mm</quantity>
