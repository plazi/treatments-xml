<paragraph blockId="44.[189,500,1280,1307]" box="[189,500,1280,1307]" pageId="44" pageNumber="45">
<emphasis bold="true" box="[189,334,1280,1306]" pageId="44" pageNumber="45">Description</emphasis>
(female only)
</paragraph>
<paragraph blockId="44.[189,381,1326,1353]" box="[189,381,1326,1353]" pageId="44" pageNumber="45">
<emphasis allCaps="true" box="[189,283,1327,1353]" inLineHeading="true" pageId="44" pageNumber="45">LENGTH.</emphasis>
<quantity box="[291,377,1326,1353]" metricMagnitude="-2" metricUnit="m" metricValue="1.6" pageId="44" pageNumber="45" unit="mm" value="16.0">16 mm</quantity>
