<subSubSection pageId="110" pageNumber="111" type="description">
<paragraph blockId="110.[189,511,531,600]" box="[189,511,531,558]" pageId="110" pageNumber="111">
<emphasis bold="true" box="[189,334,531,557]" pageId="110" pageNumber="111">Description</emphasis>
(females only)
</paragraph>
<paragraph blockId="110.[189,511,531,600]" box="[189,425,574,600]" pageId="110" pageNumber="111">
<emphasis allCaps="true" box="[189,283,574,600]" inLineHeading="true" pageId="110" pageNumber="111">LENGTH.</emphasis>
<quantity box="[291,421,574,600]" metricMagnitude="-2" metricUnit="m" metricValue="1.65" metricValueMax="1.7" metricValueMin="1.6" pageId="110" pageNumber="111" unit="mm" value="16.5" valueMax="17.0" valueMin="16.0">16–17 mm</quantity>
