<treatmentCitation accessDate="2019-07-23" author="Enderlein" authority="Enderlein, 1922" authorityName="Enderlein" authorityYear="1922" box="[189,608,1097,1123]" firstAuthor="Enderlein" genus="Tanypoda" journalOrPublisher="Archiv fur Naturgeschichte A" kingdom="Animalia" pageId="61" pageNumber="62" pagination="140 - 229" part="88" publicationUrl="https://biodiversitylibrary.org/page/45506103" rank="species" refId="ref59018" refString="Enderlein G. 1922. Klassifikation der Micropeziden. Archiv fur Naturgeschichte A 88 (5): 140 - 229. Available from https: // biodiversitylibrary. org / page / 45506103 [accessed 23 Jul. 2019]." species="garleppi" title="Klassifikation der Micropeziden" treatmentTaxon="Tanypoda garleppi" type="journal article" year="1922">
<taxonomicName authority="Enderlein, 1922" authorityName="Enderlein" authorityYear="1922" box="[189,608,1097,1123]" class="Insecta" family="Micropezidae" genus="Tanypoda" higherTaxonomySource="GBIF" kingdom="Animalia" order="Diptera" pageId="61" pageNumber="62" phylum="Arthropoda" rank="species" species="garleppi">
