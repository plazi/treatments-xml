<treatmentCitation accessDate="2019-07-23" author="Enderlein" authority="Enderlein, 1922" authorityName="Enderlein" authorityYear="1922" box="[950,1327,1602,1628]" class="Insecta" family="Micropezidae" firstAuthor="Enderlein" genus="Mesoconius" journalOrPublisher="Archiv fur Naturgeschichte A" kingdom="Animalia" order="Diptera" pageId="59" pageNumber="60" pagination="140 - 229" part="88" phylum="Arthropoda" publicationUrl="https://biodiversitylibrary.org/page/45506103" rank="species" refId="ref59018" refString="Enderlein G. 1922. Klassifikation der Micropeziden. Archiv fur Naturgeschichte A 88 (5): 140 - 229. Available from https: // biodiversitylibrary. org / page / 45506103 [accessed 23 Jul. 2019]." species="ujhelyianus" title="Klassifikation der Micropeziden" treatmentTaxon="M. ujhelyianus" type="journal article" year="1922">
<taxonomicName authority="Enderlein, 1922" authorityName="Enderlein" authorityYear="1922" box="[950,1327,1602,1628]" class="Insecta" family="Micropezidae" genus="Mesoconius" kingdom="Animalia" order="Diptera" pageId="59" pageNumber="60" phylum="Arthropoda" rank="species" species="ujhelyianus">
<emphasis box="[950,1126,1602,1628]" italics="true" pageId="59" pageNumber="60">M. ujhelyianus</emphasis>
<bibRefCitation accessDate="2019-07-23" author="Enderlein" box="[1136,1327,1602,1628]" firstAuthor="Enderlein" journalOrPublisher="Archiv fur Naturgeschichte A" pageId="59" pageNumber="60" pagination="140 - 229" part="88" publicationUrl="https://biodiversitylibrary.org/page/45506103" refId="ref59018" refString="Enderlein G. 1922. Klassifikation der Micropeziden. Archiv fur Naturgeschichte A 88 (5): 140 - 229. Available from https: // biodiversitylibrary. org / page / 45506103 [accessed 23 Jul. 2019]." title="Klassifikation der Micropeziden" type="journal article" year="1922">Enderlein, 1922</bibRefCitation>
</taxonomicName>
</treatmentCitation>
