<quantity box="[1321,1436,404,428]" metricMagnitude="1" metricUnit="m" metricValue="7.0" metricValueMax="10.0" metricValueMin="4.0" pageId="83" pageNumber="84" unit="m" value="70.0" valueMax="100.0" valueMin="40.0">40–100 m</quantity>
