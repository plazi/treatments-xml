<paragraph blockId="0.[926,1383,1391,1447]" box="[926,1383,1423,1447]" pageId="0" pageNumber="129">
<typeStatus box="[926,979,1423,1447]" pageId="0" pageNumber="129">Type</typeStatus>
species, 
<taxonomicName authority="Schmitz, 1927" authorityName="Schmitz" authorityYear="1927" box="[1078,1383,1423,1447]" class="Insecta" family="Phoridae" genus="Abaristophora" kingdom="Animalia" order="Diptera" pageId="0" pageNumber="129" phylum="Arthropoda" rank="species" species="arctophila">
