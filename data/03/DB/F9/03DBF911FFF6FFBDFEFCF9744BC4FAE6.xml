<subSubSection pageId="25" pageNumber="26" type="etymology">
<paragraph blockId="25.[264,1324,284,1310]" pageId="25" pageNumber="26">
<emphasis bold="true" box="[312,447,603,629]" pageId="25" pageNumber="26">Etymology</emphasis>
