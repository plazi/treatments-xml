<subSubSection pageId="12" pageNumber="313" type="description">
<paragraph blockId="12.[151,1437,151,968]" pageId="12" pageNumber="313">
<emphasis bold="true" box="[199,677,151,176]" pageId="12" pageNumber="313">
Description. Male (
<collectionCode box="[443,535,151,176]" country="USA" httpUri="http://biocol.org/urn:lsid:biocol.org:col:34925" name="American Museum of Natural History" pageId="12" pageNumber="313">AMNH</collectionCode>
