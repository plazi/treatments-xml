<taxonomicName baseAuthorityName="Bruzelius" baseAuthorityYear="1859" box="[306,457,801,827]" class="Malacostraca" family="Melitidae" genus="Maera" kingdom="Animalia" order="Amphipoda" pageId="9" pageNumber="460" phylum="Arthropoda" rank="species" species="loveni">
<emphasis box="[306,457,801,827]" italics="true" pageId="9" pageNumber="460">Maera loveni</emphasis>
