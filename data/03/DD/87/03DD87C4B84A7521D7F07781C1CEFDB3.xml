spp. nov., male imagos: 1) 
<taxonomicName box="[725,811,1985,2007]" class="Insecta" family="Leptophlebiidae" genus="Thraulodes" kingdom="Animalia" order="Ephemeroptera" pageId="2" pageNumber="573" phylum="Arthropoda" rank="species" species="luisae">
<emphasis box="[725,811,1985,2007]" italics="true" pageId="2" pageNumber="573">T. luisae</emphasis>
</taxonomicName>
(lateral view); 2) 
<taxonomicName box="[999,1086,1985,2007]" class="Insecta" family="Leptophlebiidae" genus="Thraulodes" kingdom="Animalia" order="Ephemeroptera" pageId="2" pageNumber="573" phylum="Arthropoda" rank="species" species="luisae">
<emphasis box="[999,1086,1985,2007]" italics="true" pageId="2" pageNumber="573">T. luisae</emphasis>
</taxonomicName>
(dorsal view); 3) 
<taxonomicName box="[1273,1357,1986,2007]" class="Insecta" family="Leptophlebiidae" genus="Thraulodes" kingdom="Animalia" order="Ephemeroptera" pageId="2" pageNumber="573" phylum="Arthropoda" rank="species" species="pinga">
<emphasis box="[1273,1357,1986,2007]" italics="true" pageId="2" pageNumber="573">T. pinga</emphasis>
</taxonomicName>
(lateral view); 4) 
<taxonomicName box="[249,332,2017,2038]" class="Insecta" family="Leptophlebiidae" genus="Thraulodes" kingdom="Animalia" order="Ephemeroptera" pageId="2" pageNumber="573" phylum="Arthropoda" rank="species" species="pinga">
