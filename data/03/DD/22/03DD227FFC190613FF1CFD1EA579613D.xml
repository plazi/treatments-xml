<collectionCode box="[858,881,916,937]" country="Austria" lsid="urn:lsid:biocol.org:col:15588" name="Naturhistorisches Museum Wien" pageId="8" pageNumber="62" type="Herbarium">W</collectionCode>
, 
<collectionCode box="[892,909,916,937]" country="United Kingdom" lsid="urn:lsid:biocol.org:col:15670" name="Royal Botanic Garden Edinburgh" pageId="8" pageNumber="62" type="Herbarium">E</collectionCode>
, 
<collectionCode box="[919,938,916,937]" country="United Kingdom" lsid="urn:lsid:biocol.org:col:15867" name="Royal Botanic Gardens" pageId="8" pageNumber="62" type="Herbarium">K</collectionCode>
, 
<collectionCode box="[949,989,916,937]" country="United Kingdom" name="Bristol Museum" pageId="8" pageNumber="62">BM</collectionCode>
. There are apparently no specimens of this at 
<collectionCode box="[1434,1451,915,936]" country="Switzerland" lsid="urn:lsid:biocol.org:col:15706" name="Conservatoire et Jardin botaniques de la Ville de Genève" pageId="8" pageNumber="62" type="Herbarium">G</collectionCode>
