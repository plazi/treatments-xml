<taxonomicName box="[550,610,1192,1215]" class="Insecta" family="Bethylidae" genus="Australomesitius" higherTaxonomySource="GBIF" kingdom="Animalia" order="Hymenoptera" pageId="2" pageNumber="449" phylum="Arthropoda" rank="species" species="mirus">
