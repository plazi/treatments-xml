<subSubSection pageId="11" pageNumber="95" type="materials_examined">
<paragraph blockId="11.[831,1438,1151,2071]" pageId="11" pageNumber="95">
<emphasis bold="true" box="[831,940,1151,1175]" pageId="11" pageNumber="95">Material:</emphasis>
