<collectingCountry box="[627,738,494,521]" name="Germany" pageId="7" pageNumber="248">Germany</collectingCountry>
south to south-west 
<collectingCountry box="[1016,1099,494,521]" name="France" pageId="7" pageNumber="248">France</collectingCountry>
, and from 
<collectingCountry box="[178,276,526,553]" name="Belgium" pageId="7" pageNumber="248">Belgium</collectingCountry>
eastwards through central and southern Europe (
<collectingCountry box="[863,978,526,553]" name="Germany" pageId="7" pageNumber="248">Germany</collectingCountry>
, 
<collectingCountry box="[990,1076,526,553]" name="Poland" pageId="7" pageNumber="248">Poland</collectingCountry>
, 
<collectingCountry box="[1087,1142,526,553]" name="Italy" pageId="7" pageNumber="248">Italy</collectingCountry>
, former 
<collectingCountry box="[178,309,558,585]" name="Serbia" pageId="7" pageNumber="248">Yugoslavia</collectingCountry>
) to 
<collectingCountry box="[362,553,558,585]" name="Czech Republic" pageId="7" pageNumber="248">Czech Republic</collectingCountry>
, 
<collectingCountry box="[568,669,558,585]" name="Slovakia" pageId="7" pageNumber="248">Slovakia</collectingCountry>
, 
<collectingCountry box="[683,790,558,585]" name="Hungary" pageId="7" pageNumber="248">Hungary</collectingCountry>
, 
<collectingCountry box="[806,915,558,585]" name="Romania" pageId="7" pageNumber="248">Romania</collectingCountry>
, 
<collectingCountry box="[931,1029,558,585]" name="Bulgaria" pageId="7" pageNumber="248">Bulgaria</collectingCountry>
and central part of European 
<collectingCountry box="[338,414,590,617]" name="Russia" pageId="7" pageNumber="248">Russia</collectingCountry>
(
<bibRefCitation author="Peck, L. V." box="[432,567,590,617]" pageId="7" pageNumber="248" pagination="11 - 230" refId="ref4662" refString="Peck, L. V. 1988. Family Syrphidae. In: Soos, A. &amp; Papp, L., eds. Catalogue of Palaearctic Diptera, 8 (Syrphidae - Conopidae). Elsevier Science Publishers &amp; Akademiai Kiado, Amsterdam, Budapest, 11 - 230." type="book chapter" year="1988">Peck, 1988</bibRefCitation>
; 
<bibRefCitation author="Holinka, J. &amp; Mazanek, L." box="[582,904,590,617]" pageId="7" pageNumber="248" pagination="60 - 66" refId="ref4283" refString="Holinka, J. &amp; Mazanek, L. 1997. Syrphidae. In: Chvala, M., ed. Check List of Diptera (Insecta) of the Czech and Slovak Republics. Karolinum Press, Charles University, Prague, 60 - 66." type="book chapter" year="1997">Holinka &amp; Mazánek, 1997</bibRefCitation>
; 
<bibRefCitation author="Toth, S." box="[919,1053,590,617]" pageId="7" pageNumber="248" pagination="5 - 408" refId="ref5241" refString="Toth, S. 2011. Magyarorszag zengolegy faunaja (Diptera: Syrphidae) [Hoverfly fauna of Hungary (Diptera: Syrphidae)]. e-ActaNaturaliaPannonica, Supplementum 1, 5 - 408. http: // epa. oszk. hu / 01900 / 01957 / 00012 / pdf / EPA 01957 _ e-acta _ nat _ pannon _ suppl _ 1 _ 2011. pdf" type="journal article" year="2011">Tóth, 2011</bibRefCitation>
; Speight, 2017; 
<bibRefCitation author="Mielczarek, L." box="[178,381,622,649]" pageId="7" pageNumber="248" pagination="2009 - 2018" refId="ref4471" refString="Mielczarek, L. 2018 (2009 - 2018). List of species Syrphidae of Poland (Diptera, Syrphidae). http: // syrphidae. insects. pl / checklist. php? lang = en" type="book chapter" year="2018">Mielczarek, 2018</bibRefCitation>
