<subSubSection box="[198,846,706,730]" pageId="2" pageNumber="51" type="biology_ecology">
<paragraph blockId="2.[151,1436,152,972]" box="[198,846,706,730]" pageId="2" pageNumber="51">
<emphasis bold="true" box="[198,326,706,730]" pageId="2" pageNumber="51">Host plant:</emphasis>
