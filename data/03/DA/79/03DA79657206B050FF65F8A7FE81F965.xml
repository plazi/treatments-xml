<number box="[1224,1311,1002,1028]" pageId="4" pageNumber="63" value="1.0" valueMax="1.1" valueMin="0.9">0.9–1.1</number>
; prothorax width at base, 
<number box="[320,358,1041,1067]" pageId="4" pageNumber="63" value="0.9">0.9</number>
–1.0/ 
<number box="[420,507,1041,1067]" pageId="4" pageNumber="63" value="1.0" valueMax="1.1" valueMin="0.9">0.9–1.1</number>
