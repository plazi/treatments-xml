<number box="[690,779,1041,1067]" pageId="4" pageNumber="63" value="4.05" valueMax="4.3" valueMin="3.8">3.8–4.3</number>
/ 
<number box="[788,877,1041,1067]" pageId="4" pageNumber="63" value="4.35" valueMax="4.8" valueMin="3.9">3.9–4.8</number>
; humeral width, 1.0– 
<number box="[1127,1164,1041,1067]" pageId="4" pageNumber="63" value="1.2">1.2</number>
/ 
<number box="[1174,1262,1041,1067]" pageId="4" pageNumber="63" value="1.2000000000000002" valueMax="1.3" valueMin="1.1">1.1–1.3</number>
.
</paragraph>
