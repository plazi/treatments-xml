<collectingCountry box="[832,917,151,176]" name="Taiwan" pageId="37" pageNumber="238">Taiwan</collectingCountry>
, Hassensan (
<quantity box="[1060,1220,152,176]" metricMagnitude="3" metricUnit="m" metricValue="1.6005" metricValueMax="1.829" metricValueMin="1.3719999999999999" pageId="37" pageNumber="238" unit="m" value="1600.5" valueMax="1829.0" valueMin="1372.0">1372–1829 m</quantity>
), 
<number box="[1240,1299,152,176]" pageId="37" pageNumber="238" value="1929.0">1929</number>
