<subSubSection box="[199,980,367,392]" pageId="31" pageNumber="232" type="etymology">
<paragraph blockId="31.[151,1436,151,614]" box="[199,980,367,392]" pageId="31" pageNumber="232">
<emphasis bold="true" box="[199,334,367,392]" pageId="31" pageNumber="232">Etymology.</emphasis>
