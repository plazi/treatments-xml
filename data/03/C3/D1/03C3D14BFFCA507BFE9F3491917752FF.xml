<paragraph blockId="2.[158,801,1022,1078]" pageId="2" pageNumber="491">
<emphasis bold="true" box="[158,307,1023,1046]" pageId="2" pageNumber="491">
<typeStatus box="[158,214,1023,1046]" pageId="2" pageNumber="491">Type</typeStatus>
