<paragraph blockId="25.[151,1437,1820,1917]" pageId="25" pageNumber="26">
<emphasis bold="true" box="[199,330,1820,1845]" pageId="25" pageNumber="26">Bionomics.</emphasis>
<taxonomicName box="[340,493,1820,1843]" class="Insecta" family="Formicidae" genus="Stigmatomma" higherTaxonomySource="GBIF" kingdom="Animalia" order="Hymenoptera" pageId="25" pageNumber="26" phylum="Arthropoda" rank="genus">
<emphasis box="[340,493,1820,1843]" italics="true" pageId="25" pageNumber="26">Stigmatomma</emphasis>
