(
<taxonomicName box="[754,899,1628,1653]" class="Magnoliopsida" family="Nitrariaceae" kingdom="Plantae" order="Sapindales" pageId="11" pageNumber="312" phylum="Tracheophyta" rank="family">Nitrariaceae</taxonomicName>
): all 
<number box="[955,983,1628,1652]" pageId="11" pageNumber="312" value="19.0">19</number>
