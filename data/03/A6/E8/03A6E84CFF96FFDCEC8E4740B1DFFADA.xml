<number box="[675,690,888,910]" pageId="12" pageNumber="517" value="4.0">4</number>
). 
<emphasis bold="true" box="[709,1017,888,910]" pageId="12" pageNumber="517">
<typeStatus box="[709,816,888,910]" pageId="12" pageNumber="517">Lectotype</typeStatus>
