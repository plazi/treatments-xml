, 
<collectingCountry box="[966,1079,1519,1543]" name="Colombia" pageId="26" pageNumber="27">Colombia</collectingCountry>
, 
<collectingCountry box="[1094,1192,1519,1543]" name="Grenada" pageId="26" pageNumber="27">Grenada</collectingCountry>
, 
<collectingCountry box="[1207,1431,1519,1543]" name="Trinidad and Tobago" pageId="26" pageNumber="27">Trinidad &amp; Tobago</collectingCountry>
, 
<collectingCountry box="[151,319,1556,1580]" name="French Guiana" pageId="26" pageNumber="27">French Guiana</collectingCountry>
, 
<collectingCountry box="[330,401,1556,1580]" name="Brazil" pageId="26" pageNumber="27">Brazil</collectingCountry>
, 
<collectingCountry box="[412,507,1556,1580]" name="Ecuador" pageId="26" pageNumber="27">Ecuador</collectingCountry>
, 
<collectingCountry box="[518,581,1556,1580]" name="Chile" pageId="26" pageNumber="27">Chile</collectingCountry>
, 
<collectingCountry box="[592,706,1556,1580]" name="Argentina" pageId="26" pageNumber="27">Argentina</collectingCountry>
