<taxonomicName authority="(Burmeister, 1835)" baseAuthorityName="Burmeister" baseAuthorityYear="1835" box="[288,729,1549,1573]" class="Insecta" family="Veliidae" genus="Rhagovelia" kingdom="Animalia" order="Hemiptera" pageId="22" pageNumber="23" phylum="Arthropoda" rank="species" species="collaris">
