<collectingCountry box="[606,727,611,635]" name="Democratic Republic of the Congo" pageId="17" pageNumber="281">DR Congo</collectingCountry>
, 
<collectingCountry box="[737,816,611,635]" name="Democratic Republic of the Congo" pageId="17" pageNumber="281">Congo</collectingCountry>
, 
<collectingCountry box="[826,939,611,635]" name="Cameroon" pageId="17" pageNumber="281">Cameroon</collectingCountry>
, 
<collectingCountry box="[949,1024,611,635]" name="Ghana" pageId="17" pageNumber="281">Ghana</collectingCountry>
, 
<collectingCountry box="[1034,1122,611,635]" name="Nigeria" pageId="17" pageNumber="281">Nigeria</collectingCountry>
