<taxonomicName baseAuthorityName="Temminck" baseAuthorityYear="1853" box="[852,967,645,669]" class="Mammalia" family="Muridae" genus="Lophuromys" kingdom="Animalia" order="Rodentia" pageId="17" pageNumber="281" phylum="Chordata" rank="species" species="sikapusi">
