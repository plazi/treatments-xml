(
<taxonomicName box="[487,623,1895,1917]" class="Magnoliopsida" family="Asteraceae" kingdom="Plantae" order="Asterales" pageId="4" pageNumber="284" phylum="Tracheophyta" rank="tribe" tribe="Neurolaeneae">Neurolaeneae</taxonomicName>
