<quantity box="[316,448,258,282]" metricMagnitude="-3" metricUnit="m" metricValue="3.15" metricValueMax="3.2" metricValueMin="3.1" pageId="6" pageNumber="34" unit="mm" value="3.15" valueMax="3.2" valueMin="3.1">3.1–3.2mm</quantity>
