<paragraph blockId="3.[151,1436,1967,2029]" lastBlockId="4.[151,1437,151,1004]" lastPageId="4" lastPageNumber="26" pageId="3" pageNumber="25">
<emphasis bold="true" box="[199,542,1967,1992]" pageId="3" pageNumber="25">
<emphasis box="[199,344,1967,1992]" inLineHeading="true" pageId="3" pageNumber="25" reason="1">Description.</emphasis>
Male 
<typeStatus box="[430,537,1968,1992]" pageId="3" pageNumber="25">holotype</typeStatus>
