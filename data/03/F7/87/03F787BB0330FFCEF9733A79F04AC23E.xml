<emphasis bold="true" box="[264,455,283,310]" pageId="2" pageNumber="53">
<taxonomicName box="[264,412,284,310]" class="Insecta" family="Leptophlebiidae" genus="Choroterpes" kingdom="Animalia" order="Ephemeroptera" pageId="2" pageNumber="53" phylum="Arthropoda" rank="genus">
