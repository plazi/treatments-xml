<emphasis box="[636,834,535,556]" italics="true" pageId="15" pageNumber="710">Nomada flavilabris</emphasis>
MORAWITZ, 1875
</taxonomicName>
, 
<taxonomicName authority="IMHOFF, 1834" authorityName="IMHOFF" authorityYear="1834" class="Insecta" family="Apidae" genus="Nomada" kingdom="Animalia" order="Hymenoptera" pageId="15" pageNumber="710" phylum="Arthropoda" rank="species" species="melathoracica">
<emphasis box="[1035,1052,536,557]" italics="true" pageId="15" pageNumber="710">N</emphasis>
. 
<emphasis box="[151,297,563,584]" italics="true" pageId="15" pageNumber="710">melathoracica</emphasis>
IMHOFF, 1834
</taxonomicName>
, aber am engsten mit 
<taxonomicName authority="MOCSARY, 1883" authorityName="MOCSARY" authorityYear="1883" box="[665,929,562,585]" class="Insecta" family="Apidae" genus="Nomada" kingdom="Animalia" order="Hymenoptera" pageId="15" pageNumber="710" phylum="Arthropoda" rank="species" species="algira">
