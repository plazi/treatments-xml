<taxonomicName authority="(Yassin et al. 2016)" authorityName="Yassin" authorityYear="2016" baseAuthorityName="Yassin" baseAuthorityYear="2016" class="Insecta" family="Drosophilidae" genus="Drosophila" kingdom="Animalia" order="Diptera" pageId="12" pageNumber="13" phylum="Arthropoda" rank="species" species="seguyi">
