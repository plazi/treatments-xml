<emphasis bold="true" box="[151,672,225,252]" pageId="3" pageNumber="4">
<taxonomicName baseAuthorityName="Linnaeus" baseAuthorityYear="1758" box="[151,493,225,252]" class="Insecta" family="Mutillidae" genus="Traumatomutilla" higherTaxonomySource="GBIF" kingdom="Animalia" order="Hymenoptera" pageId="3" pageNumber="4" phylum="Arthropoda" rank="species" species="americana">
<emphasis bold="true" box="[151,493,225,252]" italics="true" pageId="3" pageNumber="4">Traumatomutilla americana</emphasis>
</taxonomicName>
