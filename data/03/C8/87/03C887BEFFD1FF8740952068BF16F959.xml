<subSubSection pageId="8" pageNumber="399" type="etymology">
<paragraph blockId="8.[151,1437,151,1725]" pageId="8" pageNumber="399">
<emphasis bold="true" box="[199,334,1412,1437]" pageId="8" pageNumber="399">Etymology.</emphasis>
