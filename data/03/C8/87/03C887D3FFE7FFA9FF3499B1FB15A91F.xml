<taxonomicName box="[1066,1200,977,1001]" class="Diplopoda" family="Julidae" genus="Megaphyllum" kingdom="Animalia" order="Julida" pageId="30" pageNumber="85" phylum="Arthropoda" rank="species" species="unilineatum">
<emphasis box="[1066,1200,977,1001]" italics="true" pageId="30" pageNumber="85">unilineatum</emphasis>
</taxonomicName>
-group (
<emphasis italics="true" pageId="30" pageNumber="85">
i.e. M. (u.) 
<taxonomicName box="[151,285,1013,1037]" class="Diplopoda" family="Julidae" genus="Megaphyllum" kingdom="Animalia" order="Julida" pageId="30" pageNumber="85" phylum="Arthropoda" rank="species" species="unilineatum">unilineatum</taxonomicName>
</emphasis>
, 
<emphasis box="[299,476,1013,1037]" italics="true" pageId="30" pageNumber="85">
M. (u.) 
<taxonomicName box="[382,476,1013,1037]" class="Diplopoda" family="Julidae" genus="Megaphyllum" kingdom="Animalia" order="Julida" pageId="30" pageNumber="85" phylum="Arthropoda" rank="species" species="hercules">hercules</taxonomicName>
