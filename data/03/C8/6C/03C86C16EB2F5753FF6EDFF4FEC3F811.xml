(
<emphasis bold="true" box="[302,395,764,791]" italics="true" pageId="9" pageNumber="10">Ashima</emphasis>
) 
<emphasis bold="true" box="[412,528,764,791]" italics="true" pageId="9" pageNumber="10">afoliolata</emphasis>
