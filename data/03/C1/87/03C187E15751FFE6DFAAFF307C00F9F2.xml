(
<bibRefCitation author="LeConte, J. L." pageId="3" pageNumber="4" pagination="1 - 32" refId="ref15087" refString="LeConte, J. L. (1884) Short studies of North American Coleoptera. (No. 2). Transactions of the American Entomological Society, 12, 1 - 32. [compiled and edited by G. H. Horn] https: // doi. org / 10.2307 / 2507644 7" type="journal article" year="1884">LeConte 1884</bibRefCitation>
). 
<bibRefCitation author="Weisman, D. M." box="[231,416,431,458]" pageId="3" pageNumber="4" refId="ref15600" refString="Weisman, D. M. 1960: A Revision of the Species of the Genus Xanthonia Baly in America north of Mexico. unpublished thesis, North Carolina State College, Raleigh. vii + 69 pp." type="book" year="1960">Weisman (1960)</bibRefCitation>
