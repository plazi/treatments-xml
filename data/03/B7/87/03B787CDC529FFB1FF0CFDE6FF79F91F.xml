<subSubSection box="[199,1267,1622,1648]" pageId="3" pageNumber="144" type="etymology">
<paragraph blockId="3.[151,1437,685,1756]" box="[199,1267,1622,1648]" pageId="3" pageNumber="144">
<emphasis bold="true" box="[199,334,1622,1648]" pageId="3" pageNumber="144">Etymology.</emphasis>
