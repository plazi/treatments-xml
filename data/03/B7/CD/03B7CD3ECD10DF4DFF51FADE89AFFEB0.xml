<paragraph blockId="5.[128,657,1601,1741]" lastBlockId="5.[704,1233,193,1741]" pageId="5" pageNumber="6">
<materialsCitation box="[157,652,1601,1624]" collectionCode="TYPE, MATERIAL" pageId="5" pageNumber="6" specimenCount="1" typeStatus="holotype">
<collectionCode box="[157,365,1601,1624]" pageId="5" pageNumber="6">TYPE MATERIAL</collectionCode>
