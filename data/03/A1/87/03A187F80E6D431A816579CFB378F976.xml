<emphasis box="[959,1132,1959,1995]" italics="true" pageId="4" pageNumber="248">
<taxonomicName authorityName="Hagen" authorityYear="1862" box="[959,1126,1959,1995]" class="Insecta" family="Perilestidae" genus="Perilestes" higherTaxonomySource="GBIF" kingdom="Animalia" order="Odonata" pageId="4" pageNumber="248" phylum="Arthropoda" rank="genus">Perilestes</taxonomicName>
