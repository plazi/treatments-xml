<emphasis box="[1154,1299,1153,1190]" italics="true" pageId="1" pageNumber="245">Synonym</emphasis>
<taxonomicName authorityName="Handlirsch" authorityYear="1906" class="Insecta" family="Epiophlebiidae" genus="Neopalaeophlebia" higherTaxonomySource="GBIF" kingdom="Animalia" order="Odonata" pageId="1" pageNumber="245" phylum="Arthropoda" rank="genus">
<emphasis box="[229,373,1203,1239]" italics="true" pageId="1" pageNumber="245">Neopalaeophlebia</emphasis>
</taxonomicName>
in eine 
<emphasis box="[549,709,1203,1240]" italics="true" pageId="1" pageNumber="245">besondere</emphasis>
Unterordnung 
<emphasis box="[976,1477,1203,1240]" italics="true" pageId="1" pageNumber="245">
<taxonomicName authorityName="Handlirsch" authorityYear="1906" box="[976,1233,1203,1239]" class="Insecta" kingdom="Animalia" order="Odonata" pageId="1" pageNumber="245" phylum="Arthropoda" rank="subOrder" subOrder="Anisozygoptera">Anisozygoptera</taxonomicName>
gestellt hatte
</emphasis>
, worin 
<emphasis box="[346,409,1253,1290]" italics="true" pageId="1" pageNumber="245">ihm</emphasis>
Tillyard 
<emphasis box="[609,708,1253,1290]" italics="true" pageId="1" pageNumber="245">später</emphasis>
beipflichtete; 
<emphasis box="[964,997,1253,1289]" italics="true" pageId="1" pageNumber="245">2.</emphasis>
<taxonomicName authorityName="Calvert" authorityYear="1901" box="[1004,1148,1253,1289]" class="Insecta" family="Lestidae" higherTaxonomySource="GBIF" kingdom="Animalia" order="Odonata" pageId="1" pageNumber="245" phylum="Arthropoda" rank="subFamily" subFamily="Lestinae">Lestinae</taxonomicName>
