und 
<taxonomicName authorityName="Selys" authorityYear="1868" box="[768,924,1353,1389]" class="Insecta" family="Synlestidae" genus="Synlestes" higherTaxonomySource="GBIF" kingdom="Animalia" order="Odonata" pageId="1" pageNumber="245" phylum="Arthropoda" rank="genus">Synlestes</taxonomicName>
