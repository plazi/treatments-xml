<taxonomicName authority="Rudolphi" authorityName="Rudolphi" box="[225,450,1696,1722]" class="Cestoda" higherTaxonomySource="GBIF" kingdom="Animalia" order="Cestoda" pageId="5" pageNumber="476" phylum="Platyhelminthes" rank="order">Cestoda Rudolphi</taxonomicName>
