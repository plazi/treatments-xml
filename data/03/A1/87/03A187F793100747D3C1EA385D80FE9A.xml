<heading bold="true" box="[151,404,1336,1363]" fontSize="11" level="1" pageId="7" pageNumber="8" reason="1">
<emphasis bold="true" box="[151,404,1336,1363]" pageId="7" pageNumber="8">
<taxonomicName authority="Emery" authorityName="Emery" box="[151,309,1337,1363]" class="Insecta" family="Formicidae" genus="Pheidole" kingdom="Animalia" order="Hymenoptera" pageId="7" pageNumber="8" phylum="Arthropoda" rank="species" species="speculifera">
