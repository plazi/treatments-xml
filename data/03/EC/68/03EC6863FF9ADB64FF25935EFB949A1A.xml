<subSubSection pageId="2" pageNumber="361" type="etymology">
<paragraph blockId="2.[189,794,1321,1377]" box="[189,794,1321,1345]" pageId="2" pageNumber="361">
<emphasis bold="true" box="[189,391,1321,1345]" pageId="2" pageNumber="361">Derivatio nominis</emphasis>
