<collectingCountry box="[978,1109,1194,1220]" name="Costa Rica" pageId="7" pageNumber="8">Costa Rica</collectingCountry>
, 
<collectingCountry box="[1121,1219,1194,1220]" name="Ecuador" pageId="7" pageNumber="8">Ecuador</collectingCountry>
