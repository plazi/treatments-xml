) and 
<taxonomicName authorityName="Assing" authorityYear="2007" box="[839,963,1682,1702]" class="Insecta" family="Staphylinidae" genus="Geostiba" kingdom="Animalia" order="Coleoptera" pageId="9" pageNumber="786" phylum="Arthropoda" rank="species" species="albimontis" status="nov.sp.">
<emphasis box="[839,963,1682,1702]" italics="true" pageId="9" pageNumber="786">G. albimontis</emphasis>
</taxonomicName>
<taxonomicNameLabel box="[969,1036,1682,1702]" pageId="9" pageNumber="786" rank="species">nov.sp.</taxonomicNameLabel>
(
<emphasis bold="true" box="[1049,1102,1682,1702]" pageId="9" pageNumber="786">24-34</emphasis>
): (
<emphasis bold="true" box="[1129,1247,1682,1702]" pageId="9" pageNumber="786">22-23, 33-34</emphasis>
) spermatheca; (
<emphasis bold="true" box="[482,505,1705,1725]" pageId="9" pageNumber="786">23</emphasis>
) male tergite VIII; (
