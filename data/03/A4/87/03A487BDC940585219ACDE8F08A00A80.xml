<taxonomicName authorityName="Grootaert" authorityYear="2013" box="[1098,1177,491,514]" class="Insecta" family="Dolichopodidae" genus="Nepalomyia" kingdom="Animalia" order="Diptera" pageId="3" pageNumber="106" phylum="Arthropoda" rank="species" species="spinata">
