<taxonomicName authorityName="Balogh" authorityYear="1960" box="[1084,1246,577,602]" class="Arachnida" family="Galumnidae" genus="Leptogalumna" higherTaxonomySource="GBIF" kingdom="Animalia" order="Sarcoptiformes" pageId="27" pageNumber="28" phylum="Arthropoda" rank="genus">
<emphasis box="[1084,1246,577,602]" italics="true" pageId="27" pageNumber="28">Leptogalumna</emphasis>
</taxonomicName>
(
<taxonomicName authorityName="Balogh" authorityYear="1960" box="[1265,1427,577,602]" class="Arachnida" family="Galumnidae" genus="Leptogalumna" higherTaxonomySource="GBIF" kingdom="Animalia" order="Sarcoptiformes" pageId="27" pageNumber="28" phylum="Arthropoda" rank="genus">
<emphasis box="[1265,1427,577,602]" italics="true" pageId="27" pageNumber="28">Leptogalumna</emphasis>
</taxonomicName>
) and 
<taxonomicName authority="(Aegyptogalumna)" authorityName="AegYptogalumna" box="[198,575,613,638]" class="Arachnida" family="Galumnidae" genus="Leptogalumna" higherTaxonomySource="GBIF" kingdom="Animalia" order="Sarcoptiformes" pageId="27" pageNumber="48" phylum="Arthropoda" rank="genus">
<emphasis box="[198,360,613,638]" italics="true" pageId="27" pageNumber="28">Leptogalumna</emphasis>
(
<emphasis box="[376,566,613,638]" italics="true" pageId="27" pageNumber="28">Aegyptogalumna</emphasis>
)
</taxonomicName>
forming independent monophyletic lineages
</paragraph>
