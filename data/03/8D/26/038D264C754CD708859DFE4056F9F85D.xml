<collectingCountry box="[746,936,798,831]" name="Sierra Leone" pageId="3" pageNumber="383">Sierra Leone</collectingCountry>
and 
<collectingCountry box="[1028,1128,798,831]" name="Liberia" pageId="3" pageNumber="383">Liberia</collectingCountry>
to 
<collectingCountry box="[1193,1264,798,831]" name="Togo" pageId="3" pageNumber="383">Togo</collectingCountry>
and from SW 
<collectingCountry box="[883,989,845,870]" name="Nigeria" pageId="3" pageNumber="383">Nigeria</collectingCountry>
, 
