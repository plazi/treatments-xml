<paragraph blockId="5.[743,1336,675,1102]" pageId="5" pageNumber="385">
<emphasis bold="true" box="[743,899,675,708]" pageId="5" pageNumber="385">Taxonomy.</emphasis>
<taxonomicName pageId="5" pageNumber="385">Vespertilio hispidus Schreber, 1774,</taxonomicName>
<materialsCitation box="[828,943,718,747]" pageId="5" pageNumber="385">
<collectingCountry box="[828,939,718,747]" name="Senegal" pageId="5" pageNumber="385">Senegal</collectingCountry>
