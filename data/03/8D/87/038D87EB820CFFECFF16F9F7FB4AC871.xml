<taxonomicName authority="Hirayama, 1988" authorityName="Hirayama" authorityYear="1988" class="Malacostraca" family="Caprellidae" genus="Quadrisegmentum" higherTaxonomySource="GBIF" kingdom="Animalia" order="Amphipoda" pageId="1" pageNumber="232" phylum="Arthropoda" rank="species" species="triangulum">
