<paragraph blockId="7.[151,1349,1014,1037]" box="[151,1349,1014,1037]" pageId="7" pageNumber="598">
<taxonomicName authority="Nielson, 1982: 20" authorityName="Nielson" authorityPageNumber="20" authorityYear="1982" box="[151,419,1014,1036]" class="Insecta" family="Cicadellidae" genus="Tialidia" higherTaxonomySource="GBIF" kingdom="Animalia" order="Hemiptera" pageId="7" pageNumber="598" phylum="Arthropoda" rank="genus">
