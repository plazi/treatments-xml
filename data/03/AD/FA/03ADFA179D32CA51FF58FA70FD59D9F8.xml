(including cerci 
<number box="[835,888,512,536]" pageId="2" pageNumber="487" value="41.2">41.2</number>
), fastigium width 
<quantity box="[1097,1187,511,536]" metricMagnitude="-3" metricUnit="m" metricValue="1.5" pageId="2" pageNumber="487" unit="mm" value="1.5">1.5 mm</quantity>
