<subSubSection pageId="35" pageNumber="93" type="reference_group">
<paragraph blockId="35.[738,1330,390,817]" pageId="35" pageNumber="93">
<emphasis bold="true" box="[738,893,390,423]" pageId="35" pageNumber="93">Taxonomy.</emphasis>
Cynonycleris 
<taxonomicName authority="Bocage, 1889" authorityName="Bocage" authorityYear="1889" class="Mammalia" family="Pteropodidae" genus="Myonycteris" kingdom="Animalia" order="Chiroptera" pageId="35" pageNumber="93" phylum="Chordata" rank="species" species="brachycephala">brachycephala Bocage, 1889</taxonomicName>
