<collectingCountry box="[946,1035,1442,1465]" name="Panama" pageId="7" pageNumber="8">Panama</collectingCountry>
and 
<collectingCountry box="[1094,1162,1441,1465]" name="Brazil" pageId="7" pageNumber="8">Brazil</collectingCountry>
