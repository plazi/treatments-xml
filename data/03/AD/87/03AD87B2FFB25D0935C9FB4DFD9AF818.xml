<collectingCountry box="[182,263,1513,1537]" name="Guinea-Bissau" pageId="7" pageNumber="8">Guinea</collectingCountry>
and 
<collectingCountry box="[319,393,1513,1537]" name="Republic of the Congo" pageId="7" pageNumber="8">Congo</collectingCountry>
