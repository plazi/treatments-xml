<quantity box="[1123,1214,1037,1062]" metricMagnitude="-3" metricUnit="m" metricValue="4.2" pageId="1" pageNumber="64" unit="mm" value="4.2">4.2 mm</quantity>
; elytral length 
<number pageId="1" pageNumber="64" value="2.75" valueMax="2.8" valueMin="2.7">2.7– 2.8</number>
/ 
<quantity box="[194,332,1074,1098]" metricMagnitude="-3" metricUnit="m" metricValue="3.15" metricValueMax="3.2" metricValueMin="3.1" pageId="1" pageNumber="64" unit="mm" value="3.15" valueMax="3.2" valueMin="3.1">3.1–3.2 mm</quantity>
; humeral width 
<number box="[512,546,1073,1098]" pageId="1" pageNumber="64" value="1.5">1.5</number>
/ 
<quantity box="[555,693,1073,1098]" metricMagnitude="-3" metricUnit="m" metricValue="1.65" metricValueMax="1.7" metricValueMin="1.6" pageId="1" pageNumber="64" unit="mm" value="1.65" valueMax="1.7" valueMin="1.6">1.6–1.7 mm</quantity>
