<collectingCountry box="[527,632,467,493]" name="Brazil" pageId="14" pageNumber="207">BRAZIL</collectingCountry>
. 
<emphasis bold="true" box="[642,771,466,493]" pageId="14" pageNumber="207">
<collectingRegion box="[642,766,466,493]" country="Brazil" name="Sao Paulo" pageId="14" pageNumber="207">São Paulo</collectingRegion>
:
</emphasis>
<location LSID="urn:lsid:plazi:treatment:03ADE338FF9BFFB5C9C0FEC0FB50B633:8EDB04F5FF9BFFB5CA42FE11FC3CB588" box="[778,898,466,492]" country="Brazil" name="Guarulhos" pageId="14" pageNumber="207" stateProvince="Sao Paulo">Guarulhos</location>
, 
<date box="[908,1067,466,493]" pageId="14" pageNumber="207" value="2012-04-03">
<collectingDate box="[908,1067,466,493]" pageId="14" pageNumber="207" value="2012-04-03">03 April 2012</collectingDate>
</date>
, 
<emphasis box="[1078,1256,466,493]" italics="true" pageId="14" pageNumber="207">
