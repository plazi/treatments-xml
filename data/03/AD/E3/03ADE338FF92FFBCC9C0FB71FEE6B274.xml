<collectingCountry box="[506,605,1382,1408]" name="Brazil" pageId="7" pageNumber="200">BRAZIL</collectingCountry>
. 
<emphasis bold="true" box="[615,735,1381,1408]" pageId="7" pageNumber="200">
<collectingRegion box="[615,730,1381,1408]" country="Brazil" name="Sao Paulo" pageId="7" pageNumber="200">São Paulo</collectingRegion>
:
</emphasis>
<location LSID="urn:lsid:plazi:treatment:03ADE338FF92FFBCC9C0FB71FEE6B274:8EDB04F5FF92FFBCCBADFAA5FC01B1E4" box="[741,959,1382,1408]" country="Brazil" name="Sao Jose do Barreiro" pageId="7" pageNumber="200" stateProvince="Sao Paulo">São José do Barreiro</location>
, 
<date box="[969,1144,1382,1408]" pageId="7" pageNumber="200" value="2013-01-21">
<collectingDate box="[969,1144,1382,1408]" pageId="7" pageNumber="200" value="2013-01-21">21 January 2013</collectingDate>
</date>
, 
<emphasis box="[1153,1376,1382,1408]" italics="true" pageId="7" pageNumber="200">
<collectorName box="[1153,1287,1382,1408]" pageId="7" pageNumber="200">O.L.M. Silva</collectorName>
et al. 77
</emphasis>
(SP)
</materialsCitation>
