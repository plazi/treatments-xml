<materialsCitation box="[189,1432,1381,1408]" collectingDate="2013-01-21" collectorName="O. L. M. Silva" country="Brazil" location="Sao Jose do Barreiro" pageId="7" pageNumber="200" specimenCount="1" stateProvince="Sao Paulo">
