<collectingCountry box="[1064,1149,266,292]" name="Bolivia" pageId="12" pageNumber="205">Bolivia</collectingCountry>
, 
<collectingCountry box="[1160,1264,266,292]" name="Paraguay" pageId="12" pageNumber="205">Paraguay</collectingCountry>
and 
<collectingCountry box="[1318,1418,266,292]" name="Uruguay" pageId="12" pageNumber="205">Uruguay</collectingCountry>
