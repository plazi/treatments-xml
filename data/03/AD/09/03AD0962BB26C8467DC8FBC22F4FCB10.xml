<paragraph blockId="11.[140,1108,1257,1672]" pageId="11" pageNumber="236">
<emphasis bold="true" box="[185,309,1433,1459]" pageId="11" pageNumber="236">
<emphasis box="[185,304,1433,1459]" inLineHeading="true" pageId="11" pageNumber="236" reason="1">Diagnosis</emphasis>
