<taxonomicName authorityName="Lafontaine &amp; Ferris &amp; Walsh" authorityYear="2010" baseAuthorityName="Dyar" baseAuthorityYear="1920" box="[496,675,449,474]" class="Insecta" family="Noctuidae" genus="Hypotrix" higherTaxonomySource="GBIF" kingdom="Animalia" order="Lepidoptera" pageId="23" pageNumber="248" phylum="Arthropoda" rank="species" species="optima">
