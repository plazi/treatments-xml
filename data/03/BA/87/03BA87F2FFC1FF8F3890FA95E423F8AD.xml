<quantity box="[149,228,1681,1708]" metricMagnitude="-2" metricUnit="m" metricValue="1.905" pageId="9" pageNumber="10" unit="in" value="0.75">0.75 in</quantity>
<taxonomicName box="[234,347,1681,1707]" class="Insecta" family="Rhagionidae" genus="Litoleptis" kingdom="Animalia" order="Diptera" pageId="9" pageNumber="10" phylum="Arthropoda" rank="species" species="alaskensis">
<emphasis box="[234,347,1681,1707]" italics="true" pageId="9" pageNumber="10">alaskensis</emphasis>
