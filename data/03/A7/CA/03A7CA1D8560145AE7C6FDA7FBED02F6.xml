<taxonomicName authority="Cuvier, 1816" authorityName="Cuvier" authorityYear="1816" box="[432,503,619,640]" class="Elasmobranchii" family="Dasyatidae" genus="Trygon" higherTaxonomySource="GBIF" kingdom="Animalia" order="Myliobatiformes" pageId="10" pageNumber="355" phylum="Chordata" rank="genus">
