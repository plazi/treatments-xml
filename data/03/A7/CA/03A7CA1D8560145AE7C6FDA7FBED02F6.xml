<paragraph blockId="10.[151,1436,618,671]" pageId="10" pageNumber="355">
<taxonomicName box="[151,272,619,640]" class="Elasmobranchii" family="Dasyatidae" genus="Hemitrygon" higherTaxonomySource="CoL" kingdom="Animalia" order="Myliobatiformes" pageId="10" pageNumber="355" phylum="Chordata" rank="genus">
