, 
<taxonomicName authority="Last, Manjaji-Matsumoto &amp; Moore, 2012" authorityName="Last, Manjaji-Matsumoto &amp; Moore" authorityYear="2012" box="[747,1391,439,464]" class="Elasmobranchii" family="Dasyatidae" genus="Maculabatis" kingdom="Animalia" order="Myliobatiformes" pageId="17" pageNumber="362" phylum="Chordata" rank="species" species="randalli">
<emphasis box="[747,878,439,464]" italics="true" pageId="17" pageNumber="362">M. randalli</emphasis>
(Last, Manjaji-Matsumoto &amp; Moore, 2012)
</taxonomicName>
, 
<taxonomicName authority="Whitley, 1939" authorityName="Whitley" authorityYear="1939" class="Elasmobranchii" family="Dasyatidae" genus="Maculabatis" kingdom="Animalia" order="Myliobatiformes" pageId="17" pageNumber="362" phylum="Chordata" rank="species" species="toshi">
<emphasis italics="true" pageId="17" pageNumber="362">M. toshi</emphasis>
