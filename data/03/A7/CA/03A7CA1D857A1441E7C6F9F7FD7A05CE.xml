<emphasis box="[983,1119,404,429]" italics="true" pageId="17" pageNumber="362">M. gerrardi</emphasis>
(Gray, 1851)
</taxonomicName>
, 
<taxonomicName authority="Bleeker, 1852" authorityName="Bleeker" authorityYear="1852" class="Elasmobranchii" family="Dasyatidae" genus="Maculabatis" kingdom="Animalia" order="Myliobatiformes" pageId="17" pageNumber="362" phylum="Chordata" rank="species" species="macrura">
<emphasis box="[1297,1436,405,428]" italics="true" pageId="17" pageNumber="362">M. macrura</emphasis>
(Bleeker, 1852)
</taxonomicName>
, 
<taxonomicName authority="Bleeker, 1852" authorityName="Bleeker" authorityYear="1852" box="[346,732,439,464]" class="Elasmobranchii" family="Dasyatidae" genus="Maculabatis" kingdom="Animalia" order="Myliobatiformes" pageId="17" pageNumber="362" phylum="Chordata" rank="species" species="pastinacoides">
<emphasis box="[346,541,439,464]" italics="true" pageId="17" pageNumber="362">M. pastinacoides</emphasis>
(Bleeker, 1852)
