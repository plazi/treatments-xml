<paragraph blockId="22.[151,668,942,968]" box="[151,668,942,968]" pageId="22" pageNumber="323">
<heading bold="true" box="[151,668,942,968]" fontSize="11" level="1" pageId="22" pageNumber="323" reason="1">
<taxonomicName authority="Fabricius" authorityName="Fabricius" authorityYear="1804" box="[151,668,942,968]" class="Insecta" family="Vespidae" genus="Polistes" higherTaxonomySource="GBIF" kingdom="Animalia" order="Hymenoptera" pageId="22" pageNumber="323" phylum="Arthropoda" rank="species" species="billardieri" subGenus="Epicnemius">
