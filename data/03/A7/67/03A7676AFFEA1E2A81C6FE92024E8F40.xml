<quantity box="[327,418,536,563]" metricMagnitude="-3" metricUnit="m" metricValue="7.5" metricValueMax="9.0" metricValueMin="6.0" pageId="25" pageNumber="84" unit="mm" value="7.5" valueMax="9.0" valueMin="6.0">6-9 mm</quantity>
long, hairy to the top, anthers 
<quantity box="[238,349,566,593]" metricMagnitude="-3" metricUnit="m" metricValue="2.75" metricValueMax="3.0" metricValueMin="2.5" pageId="25" pageNumber="84" unit="mm" value="2.75" valueMax="3.0" valueMin="2.5">2.5-3 mm</quantity>
