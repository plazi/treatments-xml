<quantity box="[255,353,290,317]" metricMagnitude="-1" metricUnit="m" metricValue="1.0" metricValueMax="1.5" metricValueMin="0.5" pageId="25" pageNumber="84" unit="cm" value="10.0" valueMax="15.0" valueMin="5.0">5-15 cm</quantity>
