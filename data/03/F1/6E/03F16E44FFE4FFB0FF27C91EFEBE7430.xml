<quantity box="[415,532,1015,1039]" metricMagnitude="-2" metricUnit="m" metricValue="1.35" metricValueMax="1.4" metricValueMin="1.3" pageId="12" pageNumber="139" unit="mm" value="13.5" valueMax="14.0" valueMin="13.0">13–14mm</quantity>
