<subSubSection pageId="49" pageNumber="50" type="materials_examined">
<paragraph blockId="49.[151,1436,462,1099]" pageId="49" pageNumber="50">
<emphasis bold="true" box="[151,387,462,487]" inLineHeading="true" pageId="49" pageNumber="50" reason="1">Material examined.</emphasis>
