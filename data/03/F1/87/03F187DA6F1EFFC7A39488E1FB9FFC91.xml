</taxonomicName>
, and 
<taxonomicName authority="Melvill, 1898" authorityName="Melvill" authorityYear="1898" box="[275,597,1899,1923]" class="Bivalvia" family="Psammobiidae" genus="Gari" kingdom="Animalia" order="Cardiida" pageId="73" pageNumber="74" phylum="Mollusca" rank="species" species="erasmia">
