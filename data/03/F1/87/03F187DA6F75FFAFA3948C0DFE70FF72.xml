<collectionCode box="[471,542,1671,1695]" country="Uganda" lsid="urn:lsid:biocol.org:col:13539" name="Makerere University" pageId="34" pageNumber="35" type="Herbarium">MHU</collectionCode>
), Okinawa (BK) and the 
<collectingCountry box="[823,949,1671,1695]" name="Philippines" pageId="34" pageNumber="35">Philippines</collectingCountry>
(
<collectionCode box="[964,1035,1671,1695]" country="Uganda" lsid="urn:lsid:biocol.org:col:13539" name="Makerere University" pageId="34" pageNumber="35" type="Herbarium">MHU</collectionCode>
