<quantity box="[620,674,1589,1608]" metricMagnitude="1" metricUnit="m" metricValue="2.0" pageId="3" pageNumber="364" unit="m" value="20.0">
<elevation box="[620,674,1589,1608]" metricMagnitude="1" metricUnit="m" metricValue="2.0" pageId="3" pageNumber="364" unit="m" value="20.0">20 m</elevation>
</quantity>
