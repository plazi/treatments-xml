<quantity box="[687,715,1749,1768]" metricMagnitude="-3" metricUnit="kg" metricValue="1.0" pageId="3" pageNumber="364" unit="g" value="1.0">1g</quantity>
, h, i
</figureCitation>
). 
<collectionCode box="[129,187,1781,1800]" pageId="3" pageNumber="364">FISH</collectionCode>
