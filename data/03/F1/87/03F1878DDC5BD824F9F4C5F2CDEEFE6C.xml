<subSubSection pageId="12" pageNumber="51" type="diagnosis">
<paragraph blockId="12.[151,1436,1778,1988]" pageId="12" pageNumber="51">
<emphasis bold="true" box="[199,314,1854,1879]" pageId="12" pageNumber="51">Diagnosis</emphasis>
