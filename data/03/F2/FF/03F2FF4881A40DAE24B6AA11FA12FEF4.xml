<emphasis bold="true" box="[151,284,438,460]" pageId="143" pageNumber="144">
<typeStatus box="[151,204,439,460]" pageId="143" pageNumber="144">Type</typeStatus>
species
</emphasis>
: 
<taxonomicName authority="Green." authorityName="Green." box="[298,577,438,460]" class="Insecta" family="Cerococcidae" genus="Cerococcus" kingdom="Animalia" order="Hemiptera" pageId="143" pageNumber="144" phylum="Arthropoda" rank="species" species="ficoides">
