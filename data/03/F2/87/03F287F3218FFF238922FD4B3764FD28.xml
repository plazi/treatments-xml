<taxonomicName authority="Robertson, 1902" authorityName="Robertson" authorityYear="1902" box="[350,458,493,519]" class="Insecta" family="Halictidae" genus="Dialictus" higherTaxonomySource="GBIF" kingdom="Animalia" order="Hymenoptera" pageId="197" pageNumber="198" phylum="Arthropoda" rank="genus">
