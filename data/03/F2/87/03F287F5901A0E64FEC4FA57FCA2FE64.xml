<quantity metricMagnitude="3" metricUnit="m" metricValue="1.5375" metricValueMax="1.575" metricValueMin="1.5" pageId="8" pageNumber="195" unit="m" value="1537.5" valueMax="1575.0" valueMin="1500.0">1500- 1575 m</quantity>
