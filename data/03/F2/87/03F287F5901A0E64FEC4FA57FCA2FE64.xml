<taxonomicName authorityName="Holmes" authorityYear="1908" box="[915,1136,363,389]" class="Malacostraca" family="Valettiopsidae" genus="Valettiopsis" kingdom="Animalia" order="Amphipoda" pageId="8" pageNumber="195" phylum="Arthropoda" rank="species" species="dentata">
