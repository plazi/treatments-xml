<taxonomicName authorityName="Ricardo" authorityYear="1925" box="[339,508,1724,1749]" class="Insecta" family="Asilidae" genus="Perasis" kingdom="Animalia" order="Diptera" pageId="6" pageNumber="15" phylum="Arthropoda" rank="species" species="transvaalensis">
