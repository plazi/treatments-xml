<taxonomicName authorityName="Engel" authorityYear="1929" box="[1017,1118,1644,1669]" class="Insecta" family="Asilidae" genus="Perasis" kingdom="Animalia" order="Diptera" pageId="6" pageNumber="15" phylum="Arthropoda" rank="species" species="capensis">
