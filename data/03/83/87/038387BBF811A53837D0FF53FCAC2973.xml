<taxonomicName authority="(Kemp, 1925)" authorityName="Kemp" authorityYear="1925" baseAuthorityName="Kemp" baseAuthorityYear="1925" box="[1123,1403,1314,1339]" class="Malacostraca" family="Pandalidae" genus="Plesionika" higherTaxonomySource="GBIF" kingdom="Animalia" order="Decapoda" pageId="1" pageNumber="584" phylum="Arthropoda" rank="species" species="persica">
