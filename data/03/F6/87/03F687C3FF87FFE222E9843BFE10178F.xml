<number box="[604,677,1386,1410]" pageId="2" pageNumber="50" value="25.0" valueMax="40.0" valueMin="10.0">10–40</number>
; length of stalk 
<number box="[855,943,1386,1410]" pageId="2" pageNumber="50" value="90.0" valueMax="100.0" valueMin="80.0">80–100</number>
; stalk diameter 
<number box="[1119,1163,1386,1410]" pageId="2" pageNumber="50" value="4.5" valueMax="5.0" valueMin="4.0">4–5</number>
; macronucleus diameter 
<number box="[151,223,1422,1446]" pageId="2" pageNumber="50" value="13.0" valueMax="15.0" valueMin="11.0">11–15</number>
; length of tentacles 
<number box="[448,522,1422,1446]" pageId="2" pageNumber="50" value="18.5" valueMax="25.0" valueMin="12.0">12–25</number>
. Previous measurements: body diameter 
<number box="[983,1056,1422,1446]" pageId="2" pageNumber="50" value="47.5" valueMax="70.0" valueMin="25.0">25–70</number>
; length of stalk 
<number box="[1236,1323,1422,1446]" pageId="2" pageNumber="50" value="87.5" valueMax="140.0" valueMin="35.0">35–140</number>
; length of tentacles until 
<number box="[314,359,1457,1481]" pageId="2" pageNumber="50" value="120.0">120</number>
