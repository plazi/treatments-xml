<taxonomicName box="[359,563,1908,1930]" class="Insecta" family="Leptophlebiidae" genus="Paramaka" kingdom="Animalia" order="Ephemeroptera" pageId="2" pageNumber="47" phylum="Arthropoda" rank="species" species="pearljam" status="sp. n.">
<emphasis box="[359,563,1908,1930]" italics="true" pageId="2" pageNumber="47">
<taxonomicName box="[359,464,1908,1930]" class="Insecta" family="Leptophlebiidae" genus="Paramaka" higherTaxonomySource="CoL" kingdom="Animalia" order="Ephemeroptera" pageId="2" pageNumber="47" phylum="Arthropoda" rank="genus">Paramaka</taxonomicName>
pearljam
</emphasis>
</taxonomicName>
, 
<emphasis bold="true" box="[578,636,1908,1929]" pageId="2" pageNumber="47">
