<quantity box="[445,588,640,662]" metricMagnitude="-3" metricUnit="m" metricValue="3.56" metricValueMax="3.88" metricValueMin="3.24" pageId="32" pageNumber="233" unit="mm" value="3.56" valueMax="3.88" valueMin="3.24">3.24–3.88 mm</quantity>
