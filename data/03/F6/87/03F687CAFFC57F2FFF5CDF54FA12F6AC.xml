<collectingRegion box="[602,674,699,720]" country="Mexico" name="Oaxaca" pageId="32" pageNumber="233">Oaxaca</collectingRegion>
and 
<collectingRegion box="[720,788,699,721]" country="Mexico" name="Puebla" pageId="32" pageNumber="233">Puebla</collectingRegion>
, 
<collectingCountry box="[798,871,699,721]" name="Mexico" pageId="32" pageNumber="233">Mexico</collectingCountry>
