<taxonomicName authority="Iredale, 1936" authorityName="Iredale" authorityYear="1936" box="[260,619,1578,1603]" class="Bivalvia" family="Myidae" genus="Distugonia" higherTaxonomySource="GBIF" kingdom="Animalia" order="Myida" pageId="14" pageNumber="53" phylum="Mollusca" rank="species" species="inopinata" subGenus="Distugonia">
