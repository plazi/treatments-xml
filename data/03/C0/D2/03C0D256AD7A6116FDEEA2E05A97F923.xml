<subSubSection pageId="53" pageNumber="54" type="synonymic_list">
<paragraph blockId="53.[189,1398,493,556]" pageId="53" pageNumber="54">
<taxonomicName authority="Vervoort, 1993" authorityName="Vervoort" authorityYear="1993" box="[189,704,493,520]" class="Hydrozoa" family="Sertulariidae" genus="Thyroscyphus" kingdom="Animalia" order="Leptothecata" pageId="53" pageNumber="54" phylum="Cnidaria" rank="species" species="scorpioides">
<emphasis box="[189,502,493,519]" italics="true" pageId="53" pageNumber="54">Thyroscyphus scorpioides</emphasis>
<bibRefCitation author="Vervoort" box="[517,704,493,520]" firstAuthor="Vervoort" pageId="53" pageNumber="54" pagination="89 - 298" refId="ref39987" refString="Vervoort W. 1993. Cnidaria, Hydrozoa, Hydroida: Hydroids from the western Pacific (Philippines, Indonesia and New Caledonia) I. Sertulariidae (Part 1). In: Crosnier A. (ed.) Resultats des Campagnes MUSORSTOM, Vol. 11. Memoires du Museum national d'histoire naturelle 158: 89 - 298." type="journal article" year="1993">Vervoort, 1993</bibRefCitation>
</taxonomicName>
, as 
<taxonomicName authority="(Vervoort, 1993)" authorityName="Galea &amp; Schuchert" authorityYear="2019" baseAuthorityName="Vervoort" baseAuthorityYear="1993" box="[766,1295,493,519]" class="Hydrozoa" family="Symplectoscyphidae" genus="Tuberocaulus" higherTaxonomySource="GBIF,CoL" kingdom="Animalia" order="Leptothecata" pageId="53" pageNumber="54" phylum="Cnidaria" rank="species" species="scorpioides" status="gen. et comb. nov.">
<emphasis box="[766,1075,493,519]" italics="true" pageId="53" pageNumber="54">Tuberocaulus scorpioides</emphasis>
(
<bibRefCitation author="Vervoort" box="[1099,1287,493,519]" firstAuthor="Vervoort" pageId="53" pageNumber="54" pagination="89 - 298" refId="ref39987" refString="Vervoort W. 1993. Cnidaria, Hydrozoa, Hydroida: Hydroids from the western Pacific (Philippines, Indonesia and New Caledonia) I. Sertulariidae (Part 1). In: Crosnier A. (ed.) Resultats des Campagnes MUSORSTOM, Vol. 11. Memoires du Museum national d'histoire naturelle 158: 89 - 298." type="journal article" year="1993">Vervoort, 1993</bibRefCitation>
)
