° 
<number box="[300,331,2006,2032]" pageId="1" pageNumber="34" value="36.0">36</number>
' 
<number box="[334,366,2006,2032]" pageId="1" pageNumber="34" value="50.0">50</number>
'' 
<number box="[383,413,2006,2032]" pageId="1" pageNumber="34" value="91.0">91</number>
° 
<number box="[424,457,2006,2032]" pageId="1" pageNumber="34" value="47.0">47</number>
' 
