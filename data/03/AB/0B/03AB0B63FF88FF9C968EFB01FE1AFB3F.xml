<paragraph blockId="26.[178,1086,1288,1353]" pageId="26" pageNumber="427">
<typeStatus box="[178,276,1288,1308]" pageId="26" pageNumber="427">Holotypus</typeStatus>
:, 
<collectingCountry box="[320,383,1288,1308]" name="Turkey" pageId="26" pageNumber="427">Türkei</collectingCountry>
, 
<collectingRegion box="[395,439,1288,1308]" country="Turkey" name="Sanliurfa" pageId="26" pageNumber="427">Urfa</collectingRegion>
, 
<date box="[451,533,1288,1308]" pageId="26" pageNumber="427" value="1968-06-01">1.6.1968</date>
, leg. J. Schmidt; 
<typeStatus box="[701,790,1288,1308]" pageId="26" pageNumber="427">Paratypus</typeStatus>
