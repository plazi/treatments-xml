Moore, 
<number box="[359,418,776,802]" pageId="2" pageNumber="3" value="1881.0">1881</number>
</taxonomicName>
(in 
<bibRefCitation author="Moore" box="[467,616,776,802]" pageId="2" pageNumber="3" refString="Moore, F. (1880 - 1881) Lepidoptera of Ceylon. Vol. 1. L. Reeve and Co., London, 190 pp." type="book" year="1880">
