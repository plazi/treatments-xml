male: &quot; 
<collectingCountry box="[390,482,1517,1542]" name="Mexico" pageId="6" pageNumber="210">Mexico</collectingCountry>
: [Nuevo Leon], C[erro] Potosí, 
<quantity box="[842,929,1518,1542]" metricMagnitude="3" metricUnit="m" metricValue="2.3" pageId="6" pageNumber="210" unit="m" value="2300.0">2300 m</quantity>
, 
<date box="[942,1088,1518,1542]" pageId="6" pageNumber="210" value="1997-06-23">
