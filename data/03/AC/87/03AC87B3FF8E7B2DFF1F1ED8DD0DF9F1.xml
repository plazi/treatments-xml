<number box="[1029,1088,1518,1542]" pageId="6" pageNumber="210" value="1997.0">1997</number>
</date>
, V.O. Becker Col; Col. Becker 
<number box="[151,240,1554,1578]" pageId="6" pageNumber="210" value="110440.0">
<date box="[151,240,1554,1578]" pageId="6" pageNumber="210" value="40-11-04">110440</date>
