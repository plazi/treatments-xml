<quantity box="[1071,1218,190,216]" metricMagnitude="1" metricUnit="m" metricValue="6.5" metricValueMax="10.0" metricValueMin="3.0" pageId="8" pageNumber="61" unit="m" value="65.0" valueMax="100.0" valueMin="30.0">30 to 100 m</quantity>
