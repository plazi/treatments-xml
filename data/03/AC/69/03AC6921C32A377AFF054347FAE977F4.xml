, 
<taxonomicName authorityName="Oliver &amp; Templado" authorityYear="2009" box="[577,683,1896,1922]" class="Gastropoda" family="Rissoidae" genus="Alvania" kingdom="Animalia" order="Littorinimorpha" pageId="25" pageNumber="440" phylum="Mollusca" rank="species" species="josefoi">
