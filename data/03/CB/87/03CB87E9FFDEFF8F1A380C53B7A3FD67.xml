<paragraph blockId="6.[189,303,718,744]" box="[189,303,718,744]" pageId="6" pageNumber="7">
<heading bold="true" box="[189,303,718,744]" fontSize="11" level="3" pageId="6" pageNumber="7" reason="3">
<emphasis bold="true" box="[189,303,718,744]" pageId="6" pageNumber="7">Remarks</emphasis>
