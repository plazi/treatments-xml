<paragraph blockId="4.[151,1436,222,336]" pageId="4" pageNumber="570">
<materialsCitation ID-GBIF-Occurrence="1291636399" collectorName="H. Vardal" country="Tanzania" location="Tanzania" pageId="4" pageNumber="570" specimenCount="1" typeStatus="holotype">
