of 
<taxonomicName authority="Szepligeti, 1908" authorityName="Szepligeti" authorityYear="1908" box="[329,679,222,245]" class="Insecta" family="Braconidae" genus="Idiasta" kingdom="Animalia" order="Hymenoptera" pageId="4" pageNumber="570" phylum="Arthropoda" rank="species" species="postscutellaris">
