<paragraph blockId="2.[151,679,152,239]" pageId="2" pageNumber="3">
<taxonomicName box="[151,283,184,207]" class="Insecta" family="Halictidae" genus="Ceratalictus" kingdom="Animalia" order="Hymenoptera" pageId="2" pageNumber="3" phylum="Arthropoda" rank="genus">
