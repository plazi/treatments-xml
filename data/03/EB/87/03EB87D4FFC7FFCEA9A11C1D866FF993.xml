<subSubSection box="[151,525,1891,1915]" pageId="1" pageNumber="544" type="materials_examined">
<paragraph blockId="1.[151,525,1891,1915]" box="[151,525,1891,1915]" pageId="1" pageNumber="544">
<typeStatus box="[151,201,1891,1915]" pageId="1" pageNumber="544">Type</typeStatus>
genus: 
<taxonomicName authority="Wu" authorityName="Wu" authorityYear="2022" box="[280,444,1891,1914]" class="Insecta" family="Margarodidae" genus="Qinococcus" higherTaxonomySource="GBIF" kingdom="Animalia" order="Hemiptera" pageId="1" pageNumber="544" phylum="Arthropoda" rank="genus" status="gen. n.">
<emphasis box="[280,400,1891,1914]" italics="true" pageId="1" pageNumber="544">Qinococcus</emphasis>
Wu
</taxonomicName>
, 
<emphasis bold="true" box="[454,525,1891,1915]" pageId="1" pageNumber="544">
<taxonomicNameLabel box="[454,525,1891,1915]" pageId="1" pageNumber="544" rank="genus">gen. n.</taxonomicNameLabel>
