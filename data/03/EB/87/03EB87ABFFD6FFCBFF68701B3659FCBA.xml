<subSubSection pageId="9" type="reference_group">
<paragraph blockId="9.[151,1437,151,789]" pageId="9">
<taxonomicName authorityName="Myers" authorityYear="1934" box="[208,375,548,573]" class="Eurotatoria" family="Flosculariidae" genus="Ptygura" kingdom="Animalia" order="Flosculariaceae" pageId="9" phylum="Rotifera" rank="species" species="libera">
<emphasis box="[208,375,548,573]" italics="true" pageId="9">Ptygura libera</emphasis>
</taxonomicName>
