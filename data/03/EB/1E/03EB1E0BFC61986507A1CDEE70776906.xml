<collectionCode LSID="urn:lsid:biocol.org:col:34697" box="[881,962,912,935]" httpUri="http://biocol.org/urn:lsid:biocol.org:col:34697" name="Bishop Museum" pageId="10" pageNumber="11">BPBM</collectionCode>
