<paragraph blockId="59.[151,1436,575,842]" pageId="59" pageNumber="60">
<materialsCitation collectionCode="ZMB" collectorName="W. H. C. Peters" country="Mozambique" location="Mozambique" pageId="59" pageNumber="60" specimenCode="ZMB 3041" specimenCount="1" typeStatus="holotype">
