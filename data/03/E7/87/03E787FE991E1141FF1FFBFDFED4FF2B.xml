<taxonomicName authority="(Chevrolat)" baseAuthorityName="Chevrolat" class="Insecta" family="Cleridae" genus="Tillus" higherTaxonomySource="GBIF" kingdom="Animalia" order="Coleoptera" pageId="32" pageNumber="33" phylum="Arthropoda" rank="species" species="leucomelas">
