<location LSID="urn:lsid:plazi:treatment:03E787D28930FF95FF068CBCC652FD3F:8E91601F8931FF95FD068AE3C08AFF1F" box="[663,722,152,178]" country="Indonesia" county="Kuhl's" municipality="Lichtenstein" name="Kuhl" pageId="55" pageNumber="56" stateProvince="Jawa Timur">Kuhl</location>
