<location LSID="urn:lsid:plazi:treatment:03E787D28930FF95FF068CBCC652FD3F:8E91601F8931FF95FED18ABBC00DFF77" box="[320,597,192,218]" country="Indonesia" county="Kuhl's" municipality="Lichtenstein" name="Elector of Hessen. This" pageId="55" pageNumber="56" stateProvince="Jawa Timur">Elector of Hessen. This</location>
