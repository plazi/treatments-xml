<taxonomicName baseAuthorityName="Kuhl" baseAuthorityYear="1817" box="[893,974,272,297]" class="Mammalia" family="Vespertilionidae" genus="Nyctalus" kingdom="Animalia" order="Chiroptera" pageId="55" pageNumber="56" phylum="Chordata" rank="species" species="leisleri">
