<taxonomicName authority="OPITZ, 2005" authorityName="OPITZ" authorityYear="2005" class="Insecta" family="Cleridae" genus="Aphelocerus" higherTaxonomySource="GBIF" kingdom="Animalia" order="Coleoptera" pageId="84" pageNumber="85" phylum="Arthropoda" rank="species" species="hespenheidei" status="n.sp.">
