and puparium (
<collectionCode box="[1071,1133,894,916]" country="United Kingdom" httpUri="http://grbio.org/cool/h8hj-4rxx" name="National Museum of Scotland - Natural Sciences" pageId="17" pageNumber="714" type="Museum">NMS</collectionCode>
), 
<collectingCountry box="[1166,1241,894,915]" name="Peru" pageId="17" pageNumber="714">PERU</collectingCountry>
