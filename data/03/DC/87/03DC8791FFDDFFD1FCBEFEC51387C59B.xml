<taxonomicName authority="(SAY, 1829)" baseAuthorityName="Say" baseAuthorityYear="1829" box="[886,1342,330,352]" class="Insecta" family="Syrphidae" genus="Copestylum" kingdom="Animalia" order="Diptera" pageId="10" pageNumber="707" phylum="Arthropoda" rank="species" species="marginatum">
