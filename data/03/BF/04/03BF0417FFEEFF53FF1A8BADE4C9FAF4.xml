. 
<collectingCountry box="[359,504,871,897]" name="South Africa" pageId="66" pageNumber="67">South Africa</collectingCountry>
, Southwestern 
<collectingRegion box="[675,842,871,897]" country="South Africa" name="Western Cape" pageId="66" pageNumber="67">Cape Province</collectingRegion>
, False Bay, 
<specimenCount box="[977,1041,871,897]" pageId="66" pageNumber="67" type="generic">
<quantity box="[977,1037,871,897]" metricMagnitude="1" metricUnit="m" metricValue="3.0" pageId="66" pageNumber="67" unit="m" value="30.0">30 m</quantity>
