<paragraph blockId="23.[545,1042,264,291]" box="[545,1042,264,291]" pageId="23" pageNumber="24">
<heading box="[545,1042,264,291]" centered="true" fontSize="11" level="2" pageId="23" pageNumber="24" reason="2">
<emphasis bold="true" box="[545,1042,264,291]" pageId="23" pageNumber="24">
<taxonomicName baseAuthorityName="de Saussure &amp; Zehntner" baseAuthorityYear="1902" box="[545,864,264,291]" class="Diplopoda" family="Arthrosphaeridae" genus="Zoosphaerium" kingdom="Animalia" order="Sphaerotheriida" pageId="23" pageNumber="24" phylum="Arthropoda" rank="species" species="platylabum">
<emphasis bold="true" box="[545,864,264,291]" italics="true" pageId="23" pageNumber="24">Zoosphaerium platylabum</emphasis>
</taxonomicName>
species-group
</emphasis>
