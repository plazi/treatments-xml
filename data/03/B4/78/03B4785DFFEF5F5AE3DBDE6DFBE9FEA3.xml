<taxonomicName authorityName="O. V. Morozova, E. S. Popov, T. H. G. Pham &amp; Noordeloos" authorityYear="2022" box="[256,406,1714,1736]" class="Agaricomycetes" family="Entolomataceae" genus="Entoloma" kingdom="Fungi" order="Agaricales" pageId="11" pageNumber="12" phylum="Basidiomycota" rank="species" species="arion">
