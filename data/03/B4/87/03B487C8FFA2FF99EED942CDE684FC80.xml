<taxonomicName box="[384,557,1788,1809]" class="Actinopterygii" family="Lampridae" genus="Lampris" higherTaxonomySource="GBIF" kingdom="Animalia" order="Lampriformes" pageId="11" pageNumber="562" phylum="Chordata" rank="species" species="guttatus">
