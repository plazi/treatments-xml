<taxonomicName box="[575,749,1757,1778]" class="Actinopterygii" family="Lampridae" genus="Lampris" higherTaxonomySource="GBIF" kingdom="Animalia" order="Lampriformes" pageId="11" pageNumber="562" phylum="Chordata" rank="species" species="guttatus">
