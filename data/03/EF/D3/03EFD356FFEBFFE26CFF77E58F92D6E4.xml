<quantity box="[486,635,1082,1108]" metricMagnitude="-4" metricUnit="m" metricValue="3.5" metricValueMax="4.0" metricValueMin="3.0" pageId="48" pageNumber="49" unit="mm" value="0.35" valueMax="0.4" valueMin="0.3">0.3–0.4 mm</quantity>
; pronotum medially 
<quantity box="[886,983,1082,1108]" metricMagnitude="-4" metricUnit="m" metricValue="3.0" pageId="48" pageNumber="49" unit="mm" value="0.3">0.3 mm</quantity>
