<subSubSection box="[192,1146,1443,1467]" pageId="6" pageNumber="5" type="etymology">
<paragraph blockId="6.[192,1146,1443,1467]" box="[192,1146,1443,1467]" pageId="6" pageNumber="5">
<emphasis bold="true" box="[192,349,1443,1467]" pageId="6" pageNumber="5">Etymology.</emphasis>
