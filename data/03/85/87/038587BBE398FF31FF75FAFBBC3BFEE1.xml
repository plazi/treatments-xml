<emphasis bold="true" box="[151,813,1374,1400]" pageId="159" pageNumber="160">
<taxonomicName authority="Leach 1815" authorityName="Leach" authorityYear="1815" box="[151,431,1374,1400]" class="Insecta" family="Hydraenidae" genus="Limnebius" higherTaxonomySource="GBIF" kingdom="Animalia" order="Coleoptera" pageId="159" pageNumber="160" phylum="Arthropoda" rank="genus">
<emphasis bold="true" box="[151,280,1374,1400]" italics="true" pageId="159" pageNumber="160">Limnebius</emphasis>
Leach 1815
</taxonomicName>
, subgenus 
<taxonomicName authority="Rey 1883" authorityName="Rey" authorityYear="1883" box="[567,813,1374,1400]" class="Insecta" family="Hydraenidae" genus="Bilimneus" higherTaxonomySource="GBIF" kingdom="Animalia" order="Coleoptera" pageId="159" pageNumber="160" phylum="Arthropoda" rank="genus">
