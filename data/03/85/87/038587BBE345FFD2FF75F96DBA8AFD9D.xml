<taxonomicName authorityName="Perkins" authorityYear="2017" box="[1200,1399,1807,1832]" class="Insecta" family="Hydraenidae" genus="Hydraena" higherTaxonomySource="GBIF" kingdom="Animalia" order="Coleoptera" pageId="66" pageNumber="67" phylum="Arthropoda" rank="species" species="amplipunctata">H. amplipunctata</taxonomicName>
