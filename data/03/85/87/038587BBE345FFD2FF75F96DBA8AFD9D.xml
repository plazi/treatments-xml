<taxonomicName authorityName="Perkins" authorityYear="2017" box="[985,1190,1807,1832]" class="Insecta" family="Hydraenidae" genus="Hydraena" higherTaxonomySource="GBIF" kingdom="Animalia" order="Coleoptera" pageId="66" pageNumber="67" phylum="Arthropoda" rank="species" species="contracolorata">H. contracolorata</taxonomicName>
