<taxonomicName authorityName="Perkins" authorityYear="2017" box="[309,467,1843,1868]" class="Insecta" family="Hydraenidae" genus="Hydraena" higherTaxonomySource="GBIF" kingdom="Animalia" order="Coleoptera" pageId="66" pageNumber="67" phylum="Arthropoda" rank="species" species="triaequalis">H. triaequalis</taxonomicName>
