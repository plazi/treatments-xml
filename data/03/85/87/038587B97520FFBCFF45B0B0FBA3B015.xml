<subSubSection box="[192,1267,1667,1692]" pageId="9" pageNumber="8" type="etymology">
<paragraph blockId="9.[192,1267,1667,1692]" box="[192,1267,1667,1692]" pageId="9" pageNumber="8">
<emphasis bold="true" box="[192,348,1667,1691]" pageId="9" pageNumber="8">Etymology.</emphasis>
