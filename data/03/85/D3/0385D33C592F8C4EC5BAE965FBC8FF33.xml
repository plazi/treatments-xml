, PL= 
<quantity box="[1323,1431,603,627]" metricMagnitude="-3" metricUnit="m" metricValue="1.63" pageId="17" pageNumber="186" unit="mm" value="1.63">1.63 mm</quantity>
, PW=1.00 mm, EL= 
<quantity box="[375,476,639,663]" metricMagnitude="-3" metricUnit="m" metricValue="1.68" pageId="17" pageNumber="186" unit="mm" value="1.68">1.68 mm</quantity>
, EW= 
<quantity box="[549,650,639,663]" metricMagnitude="-3" metricUnit="m" metricValue="1.58" pageId="17" pageNumber="186" unit="mm" value="1.58">1.58 mm</quantity>
