</taxonomicName>
and 
<taxonomicName authority="Reichardt, 1932" authorityName="Reichardt" authorityYear="1932" box="[658,915,1442,1466]" class="Insecta" family="Histeridae" genus="Zorius" kingdom="Animalia" order="Coleoptera" pageId="239" pageNumber="232" phylum="Arthropoda" rank="species" species="exilis">
