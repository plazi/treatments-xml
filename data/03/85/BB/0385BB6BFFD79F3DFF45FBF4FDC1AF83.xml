<subSubSection box="[189,387,689,715]" pageId="4" pageNumber="5" type="nomenclature">
<paragraph blockId="4.[189,387,689,715]" box="[189,387,689,715]" pageId="4" pageNumber="5">
<heading bold="true" box="[189,387,689,715]" fontSize="11" level="3" pageId="4" pageNumber="5" reason="3">
<taxonomicName box="[189,387,689,715]" class="Magnoliopsida" family="Rubiaceae" genus="Ixora" kingdom="Plantae" order="Gentianales" pageId="4" pageNumber="5" phylum="Tracheophyta" rank="species" species="tomentosa">
