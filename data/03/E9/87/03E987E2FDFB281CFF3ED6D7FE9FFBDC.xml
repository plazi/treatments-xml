<subSubSection pageId="596" pageNumber="597" type="diagnosis">
<paragraph blockId="596.[151,1436,261,324]" pageId="596" pageNumber="597">
<emphasis bold="true" box="[151,266,261,288]" pageId="596" pageNumber="597">Diagnosis</emphasis>
. 
<specimenCount box="[282,303,262,288]" pageId="596" pageNumber="597" type="male">♂</specimenCount>
of 
<taxonomicName authorityName="Olmi" authorityYear="2007" box="[345,505,261,287]" class="Insecta" family="Dryinidae" genus="Apoaphelopus" higherTaxonomySource="GBIF" kingdom="Animalia" order="Hymenoptera" pageId="596" pageNumber="597" phylum="Arthropoda" rank="genus">
