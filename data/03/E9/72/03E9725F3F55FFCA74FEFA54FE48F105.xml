<subSubSection pageId="12" pageNumber="483" type="etymology">
<paragraph blockId="12.[151,1437,151,789]" pageId="12" pageNumber="483">
<emphasis bold="true" box="[199,334,727,752]" pageId="12" pageNumber="483">Etymology.</emphasis>
