<taxonomicName authority="Scopoli, 1763" authorityName="Scopoli" authorityYear="1763" box="[546,775,1804,1829]" class="Insecta" family="Bibionidae" genus="Ceria" higherTaxonomySource="GBIF" kingdom="Animalia" order="Diptera" pageId="1" pageNumber="74" phylum="Arthropoda" rank="genus">
<emphasis box="[546,610,1804,1827]" italics="true" pageId="1" pageNumber="74">Ceria</emphasis>
