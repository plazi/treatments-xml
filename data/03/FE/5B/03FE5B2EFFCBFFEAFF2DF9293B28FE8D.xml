<taxonomicName authority="Rafinesque, 1815" authorityName="Rafinesque" authorityYear="1815" box="[932,1229,1804,1829]" class="Insecta" family="Syrphidae" genus="Ceriana" kingdom="Animalia" order="Diptera" pageId="1" pageNumber="74" phylum="Arthropoda" rank="genus">
<emphasis box="[932,1024,1804,1827]" italics="true" pageId="1" pageNumber="74">Ceriana</emphasis>
Rafinesque, 1815
</taxonomicName>
, 
<emphasis box="[1240,1396,1805,1828]" italics="true" pageId="1" pageNumber="74">nomen novum</emphasis>
for 
<taxonomicName authority="Fabricius, 1794" authorityName="Fabricius" authorityYear="1794" box="[151,396,1839,1864]" class="Insecta" family="Syrphidae" genus="Ceria" higherTaxonomySource="GBIF" kingdom="Animalia" order="Diptera" pageId="1" pageNumber="74" phylum="Arthropoda" rank="genus">
<emphasis box="[151,215,1840,1863]" italics="true" pageId="1" pageNumber="74">Ceria</emphasis>
