</taxonomicName>
(
<taxonomicName box="[410,530,1839,1864]" class="Insecta" family="Syrphidae" kingdom="Animalia" order="Diptera" pageId="1" pageNumber="74" phylum="Arthropoda" rank="family">Syrphidae</taxonomicName>
).
