<quantity box="[436,562,188,212]" metricMagnitude="1" metricUnit="m" metricValue="6.15" metricValueMax="11.0" metricValueMin="1.3" pageId="51" pageNumber="52" unit="m" value="61.5" valueMax="110.0" valueMin="13.0">13 – 110 m</quantity>
