<taxonomicName box="[410,613,1702,1727]" class="Magnoliopsida" family="Cistaceae" genus="Cistus" kingdom="Plantae" order="Malvales" pageId="36" pageNumber="37" phylum="Tracheophyta" rank="species" species="laurifolius">
<emphasis box="[410,613,1702,1727]" italics="true" pageId="36" pageNumber="37">Cistus laurifolius</emphasis>
</taxonomicName>
L. (
<taxonomicName box="[662,839,1702,1727]" class="Insecta" family="Gelechiidae" genus="Schistophila" kingdom="Animalia" order="Lepidoptera" pageId="36" pageNumber="37" phylum="Arthropoda" rank="species" species="laurocistella">
