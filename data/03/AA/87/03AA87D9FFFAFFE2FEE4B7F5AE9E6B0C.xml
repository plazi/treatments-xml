<taxonomicName authorityName="Stach" authorityYear="1951" box="[629,752,292,313]" class="Mammalia" family="Mustelidae" genus="Arctomeles" higherTaxonomySource="GBIF" kingdom="Animalia" order="Carnivora" pageId="5" pageNumber="213" phylum="Chordata" rank="genus">
<emphasis box="[629,752,292,313]" italics="true" pageId="5" pageNumber="213">Arctomeles</emphasis>
</taxonomicName>
, 
<taxonomicName authorityName="Cuvier" authorityYear="1825" box="[144,244,323,344]" class="Mammalia" family="Mustelidae" genus="Arctonyx" kingdom="Animalia" order="Carnivora" pageId="5" pageNumber="213" phylum="Chordata" rank="genus">
<emphasis box="[144,244,323,344]" italics="true" pageId="5" pageNumber="213">Arctonyx</emphasis>
</taxonomicName>
, and 
<taxonomicName authorityName="Brisson" authorityYear="1762" box="[327,391,323,344]" class="Mammalia" family="Mustelidae" genus="Meles" kingdom="Animalia" order="Carnivora" pageId="5" pageNumber="213" phylum="Chordata" rank="genus">
<emphasis box="[327,391,323,344]" italics="true" pageId="5" pageNumber="213">Meles</emphasis>
</taxonomicName>
to the exclusion of 
<taxonomicName authorityName="Zdansky" authorityYear="1924" box="[661,758,323,344]" class="Mammalia" family="Mustelidae" genus="Melodon" higherTaxonomySource="GBIF" kingdom="Animalia" order="Carnivora" pageId="5" pageNumber="213" phylum="Chordata" rank="genus">
<emphasis box="[661,758,323,344]" italics="true" pageId="5" pageNumber="213">Melodon</emphasis>
