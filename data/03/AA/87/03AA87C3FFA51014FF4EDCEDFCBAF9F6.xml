<emphasis box="[590,714,1474,1500]" italics="true" pageId="7" pageNumber="40">P. wallichii</emphasis>
</taxonomicName>
-1 and 
<taxonomicName box="[789,973,1474,1500]" class="Magnoliopsida" family="Podostemaceae" genus="Polypleurum" kingdom="Plantae" order="Malpighiales" pageId="7" pageNumber="40" phylum="Tracheophyta" rank="species" species="schmidtianum">
<emphasis box="[789,973,1474,1500]" italics="true" pageId="7" pageNumber="40">P. schmidtianum</emphasis>
</taxonomicName>
