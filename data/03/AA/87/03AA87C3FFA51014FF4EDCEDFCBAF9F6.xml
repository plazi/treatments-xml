<paragraph blockId="5.[136,1452,1676,2063]" box="[136,392,1676,1703]" pageId="5" pageNumber="38">
<heading bold="true" box="[136,392,1676,1703]" fontSize="11" level="1" pageId="5" pageNumber="38" reason="1">
<taxonomicName authorityName="(R.Br. ex Griff.) Warm" box="[136,392,1676,1703]" class="Magnoliopsida" family="Podostemaceae" genus="Polypleurum" kingdom="Plantae" order="Malpighiales" pageId="5" pageNumber="38" phylum="Tracheophyta" rank="species" species="wallichii">
