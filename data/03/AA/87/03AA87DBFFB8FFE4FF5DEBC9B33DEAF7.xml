<collectionCode LSID="urn:lsid:biocol.org:col:34834" box="[157,260,1592,1615]" httpUri="http://biocol.org/urn:lsid:biocol.org:col:34834" name="Santa Barbara Museum of Natural History" pageId="1" pageNumber="66">SBMNH</collectionCode>
