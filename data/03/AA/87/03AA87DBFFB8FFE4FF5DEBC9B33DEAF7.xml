Santa Cruz, Baja California Sur, 
<collectingCountry box="[1254,1335,1560,1583]" name="Mexico" pageId="1" pageNumber="66">Mexico</collectingCountry>
(
<geoCoordinate box="[1349,1429,1560,1583]" direction="north" orientation="latitude" pageId="1" pageNumber="66" precision="5555" value="25.4">25.4°N</geoCoordinate>
