<paragraph blockId="23.[151,1436,1923,1987]" pageId="23" pageNumber="24">
Material (
<collectionCode box="[269,366,1923,1949]" httpUri="http://grbio.org/cool/pyng-6456" name="Museo Argentino de Ciencias Naturales Bernardino Rivadavia" pageId="23" pageNumber="24">MACN</collectionCode>
): 
<typeStatus box="[386,496,1923,1949]" pageId="23" pageNumber="24">lectotype</typeStatus>
and 
<number box="[556,571,1923,1949]" pageId="23" pageNumber="24" value="2.0">2</number>
<typeStatus box="[579,752,1923,1949]" pageId="23" pageNumber="24">paralectotypes</typeStatus>
female adults from 
<collectingCountry box="[996,1118,1923,1949]" name="Argentina" pageId="23" pageNumber="24">Argentina</collectingCountry>
, Córdoba, Alta Gracia, La Granja, 
<date box="[245,362,1961,1987]" pageId="23" pageNumber="24" value="1924-01-20">
<number box="[245,275,1961,1987]" pageId="23" pageNumber="24" value="20.0">20</number>
