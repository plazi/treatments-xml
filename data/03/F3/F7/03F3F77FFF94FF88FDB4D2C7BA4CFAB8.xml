<subSubSection pageId="10" pageNumber="11" type="discussion">
<paragraph blockId="10.[533,1528,693,1306]" box="[565,834,936,960]" pageId="10" pageNumber="11">
<emphasis bold="true" box="[565,710,936,960]" pageId="10" pageNumber="11">IUCN status:</emphasis>
