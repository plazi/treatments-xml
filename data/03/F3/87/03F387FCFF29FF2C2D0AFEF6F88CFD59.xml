<taxonomicName box="[403,579,447,470]" class="Insecta" family="Miridae" genus="Microphylellus" higherTaxonomySource="GBIF" kingdom="Animalia" order="Hemiptera" pageId="253" pageNumber="254" phylum="Arthropoda" rank="genus">
