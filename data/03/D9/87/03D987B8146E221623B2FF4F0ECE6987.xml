<subSubSection box="[198,1296,306,332]" pageId="11" pageNumber="52" type="diagnosis">
<paragraph blockId="11.[151,1436,266,492]" box="[198,1296,306,332]" pageId="11" pageNumber="52">
<emphasis bold="true" box="[198,326,306,332]" pageId="11" pageNumber="52">Diagnosis.</emphasis>
