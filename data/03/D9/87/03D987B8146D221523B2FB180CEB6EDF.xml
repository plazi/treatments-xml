<quantity box="[911,1085,1570,1596]" metricMagnitude="3" metricUnit="m" metricValue="1.438" metricValueMax="2.239" metricValueMin="0.637" pageId="8" pageNumber="49" unit="m" value="1438.0" valueMax="2239.0" valueMin="637.0">637 to 2239 m</quantity>
