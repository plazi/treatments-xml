<subSubSection box="[199,1154,655,680]" pageId="8" pageNumber="159" type="biology_ecology">
<paragraph blockId="8.[151,1437,151,717]" box="[199,1154,655,680]" pageId="8" pageNumber="159">
<emphasis bold="true" box="[199,295,655,680]" pageId="8" pageNumber="159">Biology.</emphasis>
