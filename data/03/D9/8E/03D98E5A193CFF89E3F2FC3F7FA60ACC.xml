<subSubSection box="[199,1380,1228,1253]" pageId="8" pageNumber="490" type="etymology">
<paragraph blockId="8.[151,1437,1086,2037]" box="[199,1380,1228,1253]" pageId="8" pageNumber="490">
<emphasis bold="true" box="[199,334,1228,1253]" pageId="8" pageNumber="490">Etymology.</emphasis>
