<quantity box="[1283,1422,977,999]" metricMagnitude="3" metricUnit="m" metricValue="1.545" metricValueMax="2.45" metricValueMin="0.64" pageId="38" pageNumber="483" unit="m" value="1545.0" valueMax="2450.0" valueMin="640.0">640–2450 m</quantity>
