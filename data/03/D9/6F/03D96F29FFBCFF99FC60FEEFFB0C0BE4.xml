<collectionCode box="[826,901,1154,1175]" country="USA" httpUri="http://biocol.org/urn:lsid:biocol.org:col:34802" lsid="urn:lsid:biocol.org:col:34802" name="Natural History Museum of Los Angeles County" pageId="25" pageNumber="470" type="Museum">LACM</collectionCode>
