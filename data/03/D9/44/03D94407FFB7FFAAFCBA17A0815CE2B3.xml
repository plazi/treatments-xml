<taxonomicName authority="O. Berg" authorityName="O. Berg" class="Magnoliopsida" family="Myrtaceae" genus="Aulomyrcia" kingdom="Plantae" order="Myrtales" pageId="8" pageNumber="357" phylum="Tracheophyta" rank="variety" species="laruotteana" variety="paraguayensis">
