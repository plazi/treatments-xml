<taxonomicName authority="Gurke" authorityName="Gurke" authorityYear="1892" box="[998,1378,1331,1355]" class="Magnoliopsida" family="Malvaceae" form="longifolia" genus="Pavonia" kingdom="Plantae" order="Malvales" pageId="6" pageNumber="355" phylum="Tracheophyta" rank="form" species="hastata">
