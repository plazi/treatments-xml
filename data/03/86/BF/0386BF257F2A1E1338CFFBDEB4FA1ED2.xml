<taxonomicName authority="Latreille" authorityName="Latreille" box="[558,1007,478,503]" class="Insecta" family="Cerambycidae" genus="Callistochroma" higherTaxonomySource="GBIF,CoL" kingdom="Animalia" order="Coleoptera" pageId="21" pageNumber="372" phylum="Arthropoda" rank="species" species="viridipennis">
