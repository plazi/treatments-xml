</taxonomicName>
and 
<taxonomicName authority="Pujade-Villar &amp; Fernandez-Garzon, 2017" authorityName="Pujade-Villar &amp; Fernandez-Garzon" authorityYear="2017" box="[454,1039,1327,1353]" class="Insecta" family="Cynipidae" genus="Zapatella" higherTaxonomySource="GBIF" kingdom="Animalia" order="Hymenoptera" pageId="117" pageNumber="118" phylum="Arthropoda" rank="species" species="migueli">
