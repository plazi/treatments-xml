<taxonomicName authorityName="Costa" authorityYear="1859" class="Insecta" family="Mordellidae" genus="Mordella" higherTaxonomySource="GBIF" kingdom="Animalia" order="Coleoptera" pageId="7" pageNumber="49" phylum="Arthropoda" rank="species" species="viridescens">Mordella viridescens</taxonomicName>
, m. [original Costa’s label] | 
<typeStatus box="[607,767,621,647]" pageId="7" pageNumber="49">LECTOTYPE</typeStatus>
<taxonomicName authority="Costa, 1854 D. Selnekovic" authorityName="Costa" authorityYear="1854" box="[775,1320,620,647]" class="Insecta" family="Mordellidae" genus="Mordella" higherTaxonomySource="GBIF" kingdom="Animalia" order="Coleoptera" pageId="7" pageNumber="49" phylum="Arthropoda" rank="species" species="viridescens">Mordella viridescens Costa, 1854 D. Selnekovič</taxonomicName>
