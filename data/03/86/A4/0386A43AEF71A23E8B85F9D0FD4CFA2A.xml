<taxonomicName authorityName="Needham &amp; Murphy" authorityYear="1924" box="[1082,1215,1378,1403]" class="Insecta" family="Polymitarcyidae" genus="Campsurus" kingdom="Animalia" order="Ephemeroptera" pageId="8" pageNumber="309" phylum="Arthropoda" rank="species" species="evanidus">
