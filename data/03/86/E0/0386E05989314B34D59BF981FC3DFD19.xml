. 
<collectingCountry box="[359,479,296,320]" name="Cameroon" pageId="4" pageNumber="136">Cameroon</collectingCountry>
, 
<collectingCountry box="[490,546,295,320]" name="Serbia" pageId="4" pageNumber="136">Mali</collectingCountry>
