<paragraph blockId="78.[151,1437,887,1344]" pageId="78" pageNumber="79">
<emphasis bold="true" box="[199,308,1031,1056]" pageId="78" pageNumber="79">Remarks</emphasis>
. 
<taxonomicName authority="Verrill, 1882" authorityName="Verrill" authorityYear="1882" box="[329,659,1031,1056]" class="Gastropoda" family="Acteonidae" genus="Acteon" kingdom="Animalia" pageId="78" pageNumber="79" phylum="Mollusca" rank="species" species="nitidus">
