<subSubSection pageId="17" pageNumber="18" type="distribution">
<paragraph blockId="17.[151,1437,916,1301]" pageId="17" pageNumber="18">
<emphasis bold="true" box="[199,491,1132,1157]" pageId="17" pageNumber="18">Distribution and habitat</emphasis>
