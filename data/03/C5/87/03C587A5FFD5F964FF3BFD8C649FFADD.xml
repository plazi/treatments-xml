<quantity metricMagnitude="2" metricUnit="m" metricValue="6.5" metricValueMax="12.0" metricValueMin="1.0" pageId="17" pageNumber="18" unit="m" value="650.0" valueMax="1200.0" valueMin="100.0">100 to 1200 m</quantity>
