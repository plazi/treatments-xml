<subSubSection pageId="16" pageNumber="119" type="etymology">
<paragraph blockId="16.[831,1437,1609,1697]" pageId="16" pageNumber="119">
<emphasis bold="true" box="[831,950,1609,1633]" pageId="16" pageNumber="119">Etymology</emphasis>
