<taxonomicName authority="Fairmaire" authorityName="Fairmaire. Different" authorityYear="1891" box="[381,599,1000,1024]" class="Insecta" family="Cantharidae" genus="Cyrebion" higherTaxonomySource="GBIF" kingdom="Animalia" order="Coleoptera" pageId="10" pageNumber="587" phylum="Arthropoda" rank="genus">
