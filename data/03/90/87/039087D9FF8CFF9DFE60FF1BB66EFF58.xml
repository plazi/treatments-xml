: male, 
<collectingCountry box="[322,431,803,827]" name="Thailand" pageId="13" pageNumber="4042">Thailand</collectingCountry>
, 
<collectingRegion box="[445,609,803,827]" country="Thailand" name="Loei" pageId="13" pageNumber="4042">Loei province</collectingRegion>
