<quantity box="[276,366,876,900]" metricMagnitude="-3" metricUnit="m" metricValue="2.5" pageId="19" pageNumber="4048" unit="mm" value="2.5">2.5 mm</quantity>
; wing length 
<quantity box="[525,617,876,900]" metricMagnitude="-3" metricUnit="m" metricValue="2.6" pageId="19" pageNumber="4048" unit="mm" value="2.6">2.6 mm</quantity>
