<paragraph blockId="5.[125,621,525,549]" box="[125,621,525,549]" pageId="5" pageNumber="4034">
Body length 
<quantity box="[276,366,525,549]" metricMagnitude="-3" metricUnit="m" metricValue="2.9" pageId="5" pageNumber="4034" unit="mm" value="2.9">2.9 mm</quantity>
; wing length 
<quantity box="[525,617,525,549]" metricMagnitude="-3" metricUnit="m" metricValue="2.9" pageId="5" pageNumber="4034" unit="mm" value="2.9">2.9 mm</quantity>
