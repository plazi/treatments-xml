(
<taxonomicName box="[612,757,1595,1618]" class="Insecta" family="Phoridae" genus="Udamochiras" higherTaxonomySource="GBIF" kingdom="Animalia" order="Diptera" pageId="6" pageNumber="7" phylum="Arthropoda" rank="genus">
