<taxonomicName authority="Vidlicka" authorityName="Vidlička" authorityYear="2019" box="[285,654,1647,1672]" class="Insecta" family="Blaberidae" genus="Lucihormetica" kingdom="Animalia" order="Blattodea" pageId="10" pageNumber="165" phylum="Arthropoda" rank="species" species="yasuniana" status="sp. n.">
<emphasis bold="true" box="[285,554,1647,1672]" italics="true" pageId="10" pageNumber="165">
