<subSubSection pageId="5" pageNumber="6" type="etymology">
<paragraph blockId="5.[151,1436,1606,2027]" pageId="5" pageNumber="6">
<emphasis bold="true" box="[199,334,1643,1667]" pageId="5" pageNumber="6">Etymology.</emphasis>
