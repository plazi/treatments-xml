<collectionCode box="[1161,1262,921,947]" pageId="7" pageNumber="324">CLF-PL</collectionCode>
, 
<specimenCount box="[1273,1315,921,947]" pageId="7" pageNumber="324" type="female">1 ♀</specimenCount>
<collectionCode box="[1322,1412,921,947]" country="Italy" httpUri="http://grbio.org/cool/1trn-7b59" name="Museo Civico di Storia Naturale di Genova 'Giacomo Doria'" pageId="7" pageNumber="324">MSNG</collectionCode>
