<paragraph blockId="22.[212,1171,927,1022]" pageId="22" pageNumber="1927">
Fore wing length 
<quantity box="[418,583,965,990]" metricMagnitude="-3" metricUnit="m" metricValue="4.35" metricValueMax="4.5" metricValueMin="4.2" pageId="22" pageNumber="1927" unit="mm" value="4.35" valueMax="4.5" valueMin="4.2">4.20–4.50 mm</quantity>
; one 
<typeStatus box="[647,746,966,990]" pageId="22" pageNumber="1927">paratype</typeStatus>
with ventral 0.1 of gena yellow; one 
<typeStatus box="[212,311,998,1022]" pageId="22" pageNumber="1927">paratype</typeStatus>
