<quantity box="[486,623,1672,1698]" metricMagnitude="-3" metricUnit="m" metricValue="4.15" metricValueMax="4.2" metricValueMin="4.1" pageId="2" pageNumber="64" unit="mm" value="4.15" valueMax="4.2" valueMin="4.1">4.1–4.2mm</quantity>
