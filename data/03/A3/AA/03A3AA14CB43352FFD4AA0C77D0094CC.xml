<taxonomicName authority="Species-Group" authorityName="Species-Group" box="[762,1137,245,266]" class="Insecta" family="Chrysomelidae" genus="Pachybrachis" kingdom="Animalia" order="Coleoptera" pageId="3" phylum="Arthropoda" rank="species" species="othonus">
<emphasis bold="true" box="[762,1137,245,266]" pageId="3">
<emphasis bold="true" box="[762,981,245,266]" italics="true" pageId="3">Pachybrachis othonus</emphasis>
