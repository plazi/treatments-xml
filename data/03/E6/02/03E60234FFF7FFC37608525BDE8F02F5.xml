<quantity box="[962,1095,1311,1343]" metricMagnitude="-3" metricUnit="m" metricValue="1.82" pageId="4" pageNumber="11" unit="mm" value="1.82">1.82 mm</quantity>
.; head length 
<quantity box="[1328,1484,1311,1343]" metricMagnitude="-4" metricUnit="m" metricValue="2.59" pageId="4" pageNumber="11" unit="mm" value="0.259">0.259 mm</quantity>
