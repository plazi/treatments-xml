<subSubSection pageId="2" pageNumber="297" type="diagnosis">
<paragraph blockId="2.[151,1437,401,2010]" pageId="2" pageNumber="297">
<emphasis bold="true" box="[199,314,617,642]" pageId="2" pageNumber="297">Diagnosis</emphasis>
