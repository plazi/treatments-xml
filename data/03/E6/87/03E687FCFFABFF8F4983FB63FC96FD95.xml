<location LSID="urn:lsid:plazi:treatment:03E687FCFFABFF8F4983FB63FC96FD95:8E906031FFACFF8F49A7FE09FDFFFDB3" box="[419,577,490,514]" country="Ethiopia" name="eastern Africa" pageId="12" pageNumber="877">eastern Africa</location>
, from 
<collectingCountry box="[649,741,490,514]" name="Ethiopia" pageId="12" pageNumber="877">Ethiopia</collectingCountry>
