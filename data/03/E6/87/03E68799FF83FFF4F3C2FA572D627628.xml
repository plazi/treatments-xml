<taxonomicName authority="(Stal)" authorityName="Distant" authorityYear="1906" baseAuthorityName="Stal" baseAuthorityYear="1858" box="[967,1170,439,464]" class="Insecta" family="Derbidae" genus="Rhotana" kingdom="Animalia" order="Hemiptera" pageId="97" pageNumber="98" phylum="Arthropoda" rank="species" species="vitriceps">
