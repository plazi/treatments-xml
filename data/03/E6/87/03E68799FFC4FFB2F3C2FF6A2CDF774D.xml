<collectingCountry box="[655,717,822,846]" name="Palau" pageId="39" pageNumber="40">Palau</collectingCountry>
and 
<taxonomicName authority="(Fennah)" authorityName="Zelazny &amp; Webb" authorityYear="2011" baseAuthorityName="Fennah" baseAuthorityYear="1956" box="[773,1013,822,846]" class="Insecta" family="Derbidae" genus="Levu" kingdom="Animalia" order="Hemiptera" pageId="39" pageNumber="40" phylum="Arthropoda" rank="species" species="haedulus">
<emphasis box="[773,904,822,846]" italics="true" pageId="39" pageNumber="40">L. haedulus</emphasis>
