<taxonomicName authority="(Fennah)" authorityName="Zelazny &amp; Webb" authorityYear="2011" baseAuthorityName="Fennah" baseAuthorityYear="1956" box="[344,585,822,846]" class="Insecta" family="Derbidae" genus="Levu" kingdom="Animalia" order="Hemiptera" pageId="39" pageNumber="40" phylum="Arthropoda" rank="species" species="lactineus">
