<quantity box="[422,561,1370,1394]" metricMagnitude="-2" metricUnit="m" metricValue="4.125" metricValueMax="4.6" metricValueMin="3.65" pageId="27" pageNumber="892" unit="mm" value="41.25" valueMax="46.0" valueMin="36.5">
