<emphasis box="[468,481,1370,1394]" italics="true" pageId="27" pageNumber="892">–</emphasis>
46 mm
</quantity>
[mean (
<emphasis box="[655,669,1370,1394]" italics="true" pageId="27" pageNumber="892">n</emphasis>
= 13) 
<quantity box="[743,858,1370,1394]" metricMagnitude="-2" metricUnit="m" metricValue="4.196" pageId="27" pageNumber="892" unit="mm" value="41.96">41.96 mm</quantity>
