<taxonomicName id="225CD0741EFD5F5C0925C54830B0273A" class="Insecta" family="Eriococcidae" genus="Lachnodius" higherTaxonomySource="CoL" kingdom="Animalia" lsidName="Lachnodius maculosus" order="Hemiptera" pageId="0" pageNumber="43" phylum="Arthropoda" rank="species" species="maculosus">Lachnodius maculosus</taxonomicName>
