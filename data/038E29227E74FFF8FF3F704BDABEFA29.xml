<subSubSection id="C33DCBBF7E74FFF8FF3F70FEDC7EFA7A" pageId="6" pageNumber="5" type="type_taxon">
<paragraph id="8B9898347E74FFF8FF3F70FEDD78FC17" blockId="6.[192,614,980,1004]" box="[192,614,980,1004]" pageId="6" pageNumber="5">
<emphasis id="B95344267E74FFF8FF3F70FEDE7AFC17" bold="true" box="[192,356,980,1004]" pageId="6" pageNumber="5">
<typeStatus id="549C26967E74FFF8FF3F70FEDE1AFC17" box="[192,260,980,1004]" pageId="6" pageNumber="5">Type</typeStatus>
