<taxonomicName id="4C2B4D49B477C039FE9EFBF4D64F5B7A" authority="Matsumura, 1914" authorityName="Matsumura" authorityYear="1914" box="[301,771,1030,1053]" class="Insecta" family="Cicadellidae" genus="Thamnotettix" kingdom="Animalia" order="Hemiptera" pageId="0" pageNumber="65" phylum="Arthropoda" rank="species" species="formosanus">
