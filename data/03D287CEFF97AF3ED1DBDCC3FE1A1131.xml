<subSubSection id="C3616553FF90AF3ED18ADF93FBD5125A" box="[198,1139,231,258]" pageId="36" pageNumber="37" type="etymology">
<paragraph id="8BC436D8FF90AF3ED18ADF93FBD5125A" blockId="36.[151,1436,151,617]" box="[198,1139,231,258]" pageId="36" pageNumber="37">
<emphasis id="B90FEACAFF90AF3ED18ADF93FEF11259" bold="true" box="[198,343,231,257]" pageId="36" pageNumber="37">Etymology:</emphasis>
