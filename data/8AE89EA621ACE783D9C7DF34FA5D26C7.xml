<taxonomicName id="32B38A921B53A35D438F8E4162C94DE9" class="Insecta" family="Gracillariidae" genus="Epicephala" higherTaxonomySource="CoL" kingdom="Animalia" lsidName="Epicephala" order="Lepidoptera" pageId="18" pageNumber="105" phylum="Arthropoda" rank="genus">Epicephala</taxonomicName>
