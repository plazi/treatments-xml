<taxonomicName id="AEDE92CAC6291B1CFCEDFD80FB10FD63" authorityName="Pretzmann" authorityYear="1971" box="[838,1173,678,702]" class="Malacostraca" family="Varunidae" genus="Metaplax" kingdom="Animalia" order="Decapoda" pageId="47" pageNumber="48" phylum="Arthropoda" rank="subSpecies" species="indicus" subSpecies="occidentalis">
