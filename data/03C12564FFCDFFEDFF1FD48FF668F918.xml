<taxonomicName id="4C68EFF1FFCDFFEDFC00D6D9F483F8B4" authorityName="Lacordaire" authorityYear="1859" box="[904,1013,649,674]" class="Insecta" family="Pedilidae" higherTaxonomySource="GBIF" kingdom="Animalia" order="Coleoptera" pageId="3" pageNumber="454" phylum="Arthropoda" rank="family">Pedilidae</taxonomicName>
