<quantity id="4C9E4FE6FF98FF80FC20F83DB90F6CEC" box="[946,1063,2003,2027]" metricMagnitude="2" metricUnit="m" metricValue="1.5" metricValueMax="2.0" metricValueMin="1.0" pageId="7" pageNumber="64" unit="m" value="150.0" valueMax="200.0" valueMin="100.0">
