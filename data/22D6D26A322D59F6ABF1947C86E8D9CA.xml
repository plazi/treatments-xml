<paragraph id="702AEAF57100CB942D587605BBFD0E4A" pageId="0" pageNumber="1">Comments.</paragraph>
<paragraph id="33E04D469373DAB93530DF9C518506C2" pageId="0" pageNumber="1">
<taxonomicName id="4B84D1E0012877B8F465BDA76E44FA8E" class="Liliopsida" family="Haemodoraceae" genus="Lachnanthes" higherTaxonomySource="CoL" kingdom="Plantae" lsidName="Lachnanthes" order="Commelinales" pageId="0" pageNumber="1" phylum="Tracheophyta" rank="genus">
<emphasis id="AFB7EAB90620939381DF7EE20E0EBE20" italics="true" pageId="0" pageNumber="1">Lachnanthes</emphasis>
</taxonomicName>
