<taxonomicName id="FDACE5673D93B0400F9186F31C5952FD" authorityName="P.J.Bergius" authorityYear="1767" class="Liliopsida" family="Haemodoraceae" genus="Dilatris" higherTaxonomySource="CoL" kingdom="Plantae" lsidName="Dilatris" order="Commelinales" pageId="0" pageNumber="1" phylum="Tracheophyta" rank="genus">
