<subSubSection pageId="0" pageNumber="83" type="type species">
<paragraph pageId="0" pageNumber="83">Type species.</paragraph>
<paragraph pageId="0" pageNumber="83">
<taxonomicName authority="Irwin, Winterton &amp; Metz, 2020" authorityName="Irwin &amp; Winterton &amp; Metz" authorityYear="2020" class="Insecta" family="Therevidae" genus="Jeanchazeauia" higherTaxonomySource="GBIF" kingdom="Animalia" lsidName="Jeanchazeauia nubilosus" order="Diptera" pageId="0" pageNumber="83" phylum="Arthropoda" rank="species" species="nubilosus">
