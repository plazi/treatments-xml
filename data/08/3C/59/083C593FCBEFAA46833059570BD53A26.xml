<taxonomicName class="Insecta" family="Ibaliidae" genus="Ibalia" higherTaxonomySource="CoL" kingdom="Animalia" lsidName="Ibalia leucospoides" order="Hymenoptera" pageId="129" pageNumber="130" phylum="Arthropoda" rank="species" species="leucospoides">Ibalia leucospoides</taxonomicName>
