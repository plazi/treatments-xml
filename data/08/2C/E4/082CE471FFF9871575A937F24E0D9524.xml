<quantity box="[911,1067,422,448]" metricMagnitude="-3" metricUnit="m" metricValue="9.75" metricValueMax="10.4" metricValueMin="9.1" pageId="9" pageNumber="35" unit="mm" value="9.75" valueMax="10.4" valueMin="9.1">9.1–10.4 mm</quantity>
(
