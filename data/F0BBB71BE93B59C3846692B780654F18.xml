<taxonomicName id="BDCA359D5327A3FE5EB773F11E26A9C3" baseAuthorityName="Lucas" baseAuthorityYear="1838" class="Arachnida" family="Lycosidae" genus="Hogna" higherTaxonomySource="CoL" kingdom="Animalia" lsidName="Hogna ferox" order="Araneae" pageId="0" pageNumber="84" phylum="Arthropoda" rank="species" species="ferox">
