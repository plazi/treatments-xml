<paragraph id="6897380CCA2603028F89F5968EAB47E9" pageId="0" pageNumber="1">
<taxonomicName id="C207A8A8DDABA3A18D818A744AC1AA64" authorityName="Eggers" authorityYear="1940" class="Lecanoromycetes" family="Stereocaulaceae" genus="Xyleborus" higherTaxonomySource="CoL" kingdom="Fungi" lsidName="Xyleborus theae" order="Lecanorales" pageId="0" pageNumber="1" phylum="Ascomycota" rank="species" species="theae">
<emphasis id="6917EC215BAA559E7D7B030617A0F8B2" italics="true" pageId="0" pageNumber="1">Xyleborus theae</emphasis>
</taxonomicName>
Eggers, 1940 = 
<taxonomicName id="C40DBF6B4775C5D5BC5E0399C3F58ABE" class="Lecanoromycetes" family="Stereocaulaceae" genus="Xyleborus" higherTaxonomySource="CoL" kingdom="Fungi" lsidName="Xyleborus myristicae" order="Lecanorales" pageId="0" pageNumber="1" phylum="Ascomycota" rank="species" species="myristicae">
