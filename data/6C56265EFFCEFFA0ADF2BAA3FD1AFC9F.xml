<taxonomicName id="23FFECCBFFCFFFA0ACD9BD1BFE7EFD1C" authorityName="Roding" authorityYear="1798" box="[405,486,628,654]" class="Bivalvia" family="Cardiidae" genus="Fragum" kingdom="Animalia" order="Cardiida" pageId="15" pageNumber="98" phylum="Mollusca" rank="genus">
<emphasis id="D68B4B5AFFCFFFA0ACD9BD1BFE7EFD1C" box="[405,486,628,654]" italics="true" pageId="15" pageNumber="98">Fragum</emphasis>
</taxonomicName>
