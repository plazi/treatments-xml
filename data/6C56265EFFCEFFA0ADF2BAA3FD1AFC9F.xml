<taxonomicName id="23FFECCBFFCEFFA1ADF3B964FD1EF9B7" authority="H. Adams &amp; A. Adams, 1858" authorityName="H. Adams &amp; A. Adams" authorityYear="1858" box="[191,646,1547,1573]" class="Bivalvia" family="Cardiidae" genus="Ctenocardia" kingdom="Animalia" order="Cardiida" pageId="14" pageNumber="97" phylum="Mollusca" rank="genus">
