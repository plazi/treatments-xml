<taxonomicName id="23FFECCBFFCFFFA0AC04BDBBFE50FD7C" authorityName="Tomlin" authorityYear="1931" box="[328,456,724,750]" class="Bivalvia" family="Cardiidae" genus="Afrocardium" kingdom="Animalia" order="Cardiida" pageId="15" pageNumber="98" phylum="Mollusca" rank="genus">
<emphasis id="D68B4B5AFFCFFFA0AC04BDBBFE50FD7C" box="[328,456,724,750]" italics="true" pageId="15" pageNumber="98">Afrocardium</emphasis>
