<emphasis id="D3C088648A4FFFDE7DE6BD10FD7B16AF" bold="true" box="[151,736,1910,1936]" pageId="73" pageNumber="74">
Putative 
<taxonomicName id="26B42FF58A4FFFDE7C77BD10FE2216AF" authorityName="Linnaeus" authorityYear="1767" box="[262,441,1910,1936]" class="Insecta" family="Nymphalidae" genus="Heliconius" higherTaxonomySource="GBIF" kingdom="Animalia" order="Lepidoptera" pageId="73" pageNumber="74" phylum="Arthropoda" rank="species" species="charithonia">
<emphasis id="D3C088648A4FFFDE7C77BD10FE2216AF" bold="true" box="[262,441,1910,1936]" italics="true" pageId="73" pageNumber="74">H. charithonia</emphasis>
</taxonomicName>
x 
<taxonomicName id="26B42FF58A4FFFDE7CA6BD10FD1816AF" authorityName="C. Felder &amp; R. Felder" authorityYear="1859" box="[471,643,1910,1936]" class="Insecta" family="Nymphalidae" genus="Heliconius" higherTaxonomySource="GBIF" kingdom="Animalia" order="Lepidoptera" pageId="73" pageNumber="74" phylum="Arthropoda" rank="species" species="peruvianus">
<emphasis id="D3C088648A4FFFDE7CA6BD10FD1816AF" bold="true" box="[471,643,1910,1936]" italics="true" pageId="73" pageNumber="74">H. peruvianus</emphasis>
