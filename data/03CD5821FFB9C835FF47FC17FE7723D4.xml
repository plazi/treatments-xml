<collectionCode id="ED7571F2FFB9C833FE56F8DAFE0F2470" box="[409,436,1887,1913]" country="Austria" lsid="urn:lsid:biocol.org:col:15588" name="Naturhistorisches Museum Wien" pageId="3" pageNumber="204" type="Herbarium">W</collectionCode>
