, 
<collectionCode id="ED7571F2FFB9C833FB3AF8BEFA80245C" box="[1269,1339,1851,1877]" pageId="3" pageNumber="204">BRIX</collectionCode>
, 
<collectionCode id="ED7571F2FFB9C833FA8AF8BEFADB245C" box="[1349,1376,1851,1877]" country="Italy" name="Natural History Museum" pageId="3" pageNumber="204" type="Herbarium">FI</collectionCode>
, 
<collectionCode id="ED7571F2FFB9C833FAA4F8BFFA1C245D" box="[1387,1447,1850,1876]" country="Austria" httpUri="http://biocol.org/urn:lsid:biocol.org:col:15750" lsid="urn:lsid:biocol.org:col:15750" name="Karl-Franzens-Universität Graz" pageId="3" pageNumber="204" type="Herbarium">GZU</collectionCode>
, 
<collectionCode id="ED7571F2FFB9C833FF47F8DAFF242470" box="[136,159,1887,1913]" country="United Kingdom" lsid="urn:lsid:biocol.org:col:15867" name="Royal Botanic Gardens" pageId="3" pageNumber="204" type="Herbarium">K</collectionCode>
, 
<collectionCode id="ED7571F2FFB9C833FF66F8DBFF622471" box="[169,217,1886,1912]" country="Spain" lsid="urn:lsid:biocol.org:col:15682" name="Real Jardín Botánico" pageId="3" pageNumber="204" type="Herbarium">MA</collectionCode>
, 
<collectionCode id="ED7571F2FFB9C833FF2BF8DBFEA72471" box="[228,284,1886,1912]" country="China" httpUri="http://grbio.org/cool/7wcs-k2gs" name="Institute of Zoology, Academia Sinica (formerly National Academy of Peiping)" pageId="3" pageNumber="204">NAP</collectionCode>
, 
<collectionCode id="ED7571F2FFB9C833FEE9F8DBFEE52471" box="[294,350,1886,1912]" country="Italy" httpUri="http://biocol.org/urn:lsid:biocol.org:col:14385" lsid="urn:lsid:biocol.org:col:14385" name="Università degli Studi di Padova" pageId="3" pageNumber="204" type="Herbarium">PAD</collectionCode>
, 
<collectionCode id="ED7571F2FFB9C833FEA7F8DBFE2B2471" box="[360,400,1886,1912]" country="Italy" name="University of Turin" pageId="3" pageNumber="204" type="Herbarium">TO</collectionCode>
