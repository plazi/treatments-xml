<collectionCode id="ED4840A9FF54FF649ED7C3EC8BDAF94D" box="[640,689,1691,1717]" country="Germany" httpUri="http://biocol.org/urn:lsid:biocol.org:col:33211" lsid="urn:lsid:biocol.org:col:33211" name="Senckenberg Deutsches Entomologisches Institut" pageId="135" pageNumber="136" type="Other type of research institution/biorepository">DEI</collectionCode>
