<subSubSection pageId="14" pageNumber="15" type="color">
<paragraph pageId="14" pageNumber="15">Color.</paragraph>
<paragraph pageId="14" pageNumber="15">Colony fragments red, polyp sclerites light yellow, all others orange.</paragraph>
</subSubSection>
