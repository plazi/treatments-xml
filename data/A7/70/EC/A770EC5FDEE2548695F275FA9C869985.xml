<taxonomicName LSID="A770EC5F-DEE2-5486-95F2-75FA9C869985" authority="Kawashita-Ribeiro, Àvila, Morais, 2013" authorityName="Kawashita-Ribeiro, Àvila, Morais" authorityYear="2013" class="Reptilia" family="Dipsadidae" genus="Helicops" higherTaxonomySource="CoL" kingdom="Animalia" lsidName="Helicops apiaka" order="Squamata" pageId="0" pageNumber="69234" phylum="Chordata" rank="species" species="apiaka">
