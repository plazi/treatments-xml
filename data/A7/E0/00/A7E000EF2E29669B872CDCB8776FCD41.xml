<taxonomicName authorityName="Ishiki &amp; T. Wendt" authorityYear="2014" class="Magnoliopsida" family="Malvaceae" genus="Mortoniodendron" higherTaxonomySource="CoL" kingdom="Plantae" lsidName="Mortoniodendron ocotense" order="Malvales" pageId="7" pageNumber="86" phylum="Tracheophyta" rank="species" species="ocotense">
<emphasis italics="true" pageId="7" pageNumber="86">Mortoniodendron ocotense</emphasis>
</taxonomicName>
Ishiki &amp; T. Wendt, 
<taxonomicName authorityName="Lundell" authorityYear="1965" class="Magnoliopsida" family="Malvaceae" genus="Mortoniodendron" higherTaxonomySource="CoL" kingdom="Plantae" lsidName="Mortoniodendron vestitum" order="Malvales" pageId="7" pageNumber="86" phylum="Tracheophyta" rank="species" species="vestitum">
<emphasis italics="true" pageId="7" pageNumber="86">Mortoniodendron vestitum</emphasis>
</taxonomicName>
Lundell, 
<taxonomicName class="Equisetopsida" family="Meliaceae" genus="Trichilia" higherTaxonomySource="GBIF" kingdom="Plantae" lsidName="Trichilia moschata" order="Sapindales" pageId="7" pageNumber="86" phylum="Magnoliophyta" rank="species" species="moschata">
<emphasis italics="true" pageId="7" pageNumber="86">Trichilia moschata</emphasis>
</taxonomicName>
Sw., 
<taxonomicName class="Equisetopsida" family="Nyctaginaceae" genus="Neea" higherTaxonomySource="GBIF" kingdom="Plantae" lsidName="Neea tenuis" order="Caryophyllales" pageId="7" pageNumber="86" phylum="Magnoliophyta" rank="species" species="tenuis">
<emphasis italics="true" pageId="7" pageNumber="86">Neea tenuis</emphasis>
</taxonomicName>
Standl., 
<taxonomicName class="Magnoliopsida" family="Moraceae" genus="Pseudolmedia" higherTaxonomySource="GBIF" kingdom="Plantae" lsidName="Pseudolmedia glabrata" order="Rosales" pageId="7" pageNumber="86" phylum="Magnoliophyta" rank="species" species="glabrata">
<emphasis italics="true" pageId="7" pageNumber="86">Pseudolmedia glabrata</emphasis>
</taxonomicName>
(Liebm.) C.C. Berg, 
<taxonomicName class="Magnoliopsida" family="Bombacaceae" genus="Quararibea" higherTaxonomySource="GBIF" kingdom="Plantae" lsidName="Quararibea funebris" order="Malvales" pageId="7" pageNumber="86" phylum="Magnoliophyta" rank="species" species="funebris">
<emphasis italics="true" pageId="7" pageNumber="86">Quararibea funebris</emphasis>
</taxonomicName>
(La Llave) Vischer, 
<taxonomicName class="Dicotyledoneae" family="Fagaceae" genus="Quercus" higherTaxonomySource="GBIF" kingdom="Plantae" lsidName="Quercus lancifolia" order="Fagales" pageId="7" pageNumber="86" phylum="Angiospermae" rank="species" species="lancifolia">
<emphasis italics="true" pageId="7" pageNumber="86">Quercus lancifolia</emphasis>
</taxonomicName>
Schltdl. &amp; Cham. and 
<taxonomicName authorityName="Turcz" authorityYear="1858" class="Magnoliopsida" family="Malvaceae" genus="Heliocarpus" higherTaxonomySource="GBIF" kingdom="Plantae" lsidName="Heliocarpus appendiculatus" order="Malvales" pageId="7" pageNumber="86" phylum="Magnoliophyta" rank="species" species="appendiculatus">
<emphasis italics="true" pageId="7" pageNumber="86">Heliocarpus appendiculatus</emphasis>
</taxonomicName>
Turcz. (
<bibRefCitation author="Escobar-Castellanos, M" journalOrPublisher="Universidad de Ciencias y Artes de Chiapas, Mexico" pageId="9" pageNumber="88" refId="B9" refString="Escobar-Castellanos, M, 2016. Estructura, diversidad y composicion floristica del bosque tropical perennifolio de la zona sujeta a conservacion ecologica La Pera, Berriozabal, Chiapas. Universidad de Ciencias y Artes de Chiapas, Mexico" title="Estructura, diversidad y composicion floristica del bosque tropical perennifolio de la zona sujeta a conservacion ecologica La Pera, Berriozabal, Chiapas" year="2016">Escobar-Castellanos 2016</bibRefCitation>
).
</paragraph>
