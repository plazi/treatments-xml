<subSubSection pageId="10" pageNumber="115" type="habitat">
<paragraph pageId="10" pageNumber="115">Habitat.</paragraph>
<paragraph pageId="10" pageNumber="115">
Lowland mesic forest (
<taxonomicName class="Liliopsida" family="Liliaceae" genus="Astelia" higherTaxonomySource="CoL" kingdom="Plantae" lsidName="Astelia menziesiana" order="Asparagales" pageId="10" pageNumber="115" phylum="Tracheophyta" rank="species" species="menziesiana">
<emphasis italics="true" pageId="10" pageNumber="115">Astelia menziesiana</emphasis>
</taxonomicName>
, 
<taxonomicName authorityName="Skottsb" authorityYear="1937" class="Liliopsida" family="Liliaceae" genus="Astelia" higherTaxonomySource="CoL" kingdom="Plantae" lsidName="Astelia rapensis" order="Asparagales" pageId="10" pageNumber="115" phylum="Tracheophyta" rank="species" species="rapensis">
<emphasis italics="true" pageId="10" pageNumber="115">Astelia rapensis</emphasis>
</taxonomicName>
), tropical montane cloud forest (
<taxonomicName class="Liliopsida" family="Liliaceae" genus="Astelia" higherTaxonomySource="CoL" kingdom="Plantae" lsidName="Astelia argyrocoma" order="Asparagales" pageId="10" pageNumber="115" phylum="Tracheophyta" rank="species" species="argyrocoma">
<emphasis italics="true" pageId="10" pageNumber="115">Astelia argyrocoma</emphasis>
</taxonomicName>
and 
<taxonomicName class="Liliopsida" family="Liliaceae" genus="Astelia" higherTaxonomySource="CoL" kingdom="Plantae" lsidName="Astelia menziesiana" order="Asparagales" pageId="10" pageNumber="115" phylum="Tracheophyta" rank="species" species="menziesiana">
<emphasis italics="true" pageId="10" pageNumber="115">Astelia menziesiana</emphasis>
</taxonomicName>
) and alpine swamps (
<taxonomicName class="Liliopsida" family="Liliaceae" genus="Astelia" higherTaxonomySource="CoL" kingdom="Plantae" lsidName="Astelia menziesiana" order="Asparagales" pageId="10" pageNumber="115" phylum="Tracheophyta" rank="species" species="menziesiana">
<emphasis italics="true" pageId="10" pageNumber="115">Astelia menziesiana</emphasis>
</taxonomicName>
and 
<taxonomicName authorityName="Wawra" authorityYear="1875" class="Liliopsida" family="Liliaceae" genus="Astelia" higherTaxonomySource="CoL" kingdom="Plantae" lsidName="Astelia waialealae" order="Asparagales" pageId="10" pageNumber="115" phylum="Tracheophyta" rank="species" species="waialealae">
<emphasis italics="true" pageId="10" pageNumber="115">Astelia waialealae</emphasis>
