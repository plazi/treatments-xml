<taxonomicName id="ADAD06CBC1A024EB3088C26319EE9D82" class="Anthozoa" family="Nephtheidae" genus="Litophyton" higherTaxonomySource="CoL" kingdom="Animalia" lsidName="Litophyton acutifolium" order="Alcyonacea" pageId="5" pageNumber="6" phylum="Cnidaria" rank="species" species="acutifolium">Litophyton acutifolium</taxonomicName>
