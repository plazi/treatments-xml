<taxonomicName id="AC823C04DA6219971069CC36D049FA37" authority="" authorityName="" class="Octocorallia" family="Nephtheidae" genus="Nephthea" higherTaxonomySource="GBIF" kingdom="Animalia" lsidName="Nephthea striata" order="Alcyonacea" pageId="5" pageNumber="6" phylum="Cnidaria" rank="species" species="striata">Nephthea striata</taxonomicName>
