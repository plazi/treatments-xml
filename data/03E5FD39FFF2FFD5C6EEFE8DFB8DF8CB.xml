<taxonomicName id="4C4C37ACFFF2FFD5C6EEFE8DFDBCFEAA" authority="semifuscus" authorityName="semifuscus Sclater &amp; Salvin" authorityYear="1873" box="[151,611,330,357]" class="Aves" family="Emberizidae" genus="Chlorospingus" kingdom="Animalia" order="Passeriformes" pageId="14" pageNumber="165" phylum="Chordata" rank="subSpecies" species="semifuscus" subSpecies="semifuscus">
