<emphasis italics="true" pageId="0" pageNumber="1">Fortiborus</emphasis>
</taxonomicName>
, 
<taxonomicName authority="Hulcr &amp; Cognato, 2013" authorityName="Hulcr &amp; Cognato" authorityYear="2013" class="Insecta" family="Curculionidae" genus="Immanus" higherTaxonomySource="GBIF" kingdom="Animalia" lsidName="Immanus" order="Coleoptera" pageId="0" pageNumber="1" phylum="Arthropoda" rank="genus">
<emphasis italics="true" pageId="0" pageNumber="1">Immanus</emphasis>
