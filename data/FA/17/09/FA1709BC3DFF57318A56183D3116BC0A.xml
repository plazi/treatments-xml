<paragraph pageId="0" pageNumber="37">Remarks.</paragraph>
<paragraph pageId="0" pageNumber="37">
<taxonomicName authorityName="Rchb. f., Linnaea" authorityYear="1876" class="Actinopterygii" family="Liparidae" genus="Liparis" higherTaxonomySource="CoL" kingdom="Animalia" lsidName="Liparis brachystalix" order="Scorpaeniformes" pageId="0" pageNumber="37" phylum="Chordata" rank="species" species="brachystalix">
<emphasis italics="true" pageId="0" pageNumber="37">Liparis brachystalix</emphasis>
</taxonomicName>
