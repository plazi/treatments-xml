<geoCoordinate box="[718,802,1350,1376]" degrees="8" direction="north" minutes="05" orientation="latitude" pageId="149" pageNumber="150" precision="925" value="8.083333">8°05’N</geoCoordinate>
and 76°00’– 
<geoCoordinate box="[970,1078,1350,1376]" degrees="78" direction="west" minutes="44" orientation="longitude" pageId="149" pageNumber="150" precision="925" value="-78.73333">78°44’W</geoCoordinate>
in eastern 
<collectingCountry box="[1229,1325,1350,1376]" name="Panama" pageId="149" pageNumber="150">Panama</collectingCountry>
, western 
<collectingCountry box="[151,270,1389,1415]" name="Colombia" pageId="149" pageNumber="150">Colombia</collectingCountry>
, and northwestern 
<collectingCountry box="[489,587,1389,1415]" name="Ecuador" pageId="149" pageNumber="150">Ecuador</collectingCountry>
