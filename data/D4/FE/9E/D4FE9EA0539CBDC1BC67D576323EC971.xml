<subSubSection type="nomenclature">
<paragraph pageNumber="613">
<taxonomicName LSID-HNS="urn:lsid:biosci.ohio-state.edu:osuc_concepts:181983" class="Insecta" family="Formicidae" genus="Pheidole" higherTaxonomySource="CoL" kingdom="Animalia" lsidName="Pheidole gradifer Wilson" lsidName-HNS="Pheidole gradifer Wilson" order="Hymenoptera" pageNumber="613" phylum="Arthropoda" rank="species" species="gradifer">Pheidole gradifer</taxonomicName>
