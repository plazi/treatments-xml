<subSubSection pageId="56" pageNumber="57" type="type">
<paragraph pageId="56" pageNumber="57">Type.</paragraph>
<paragraph pageId="56" pageNumber="57">
TURKEY, Merzivan, 
<emphasis italics="true" pageId="56" pageNumber="57">Manisadjan</emphasis>
