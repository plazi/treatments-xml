<paragraph pageNumber="267">
<taxonomicName LSID-HNS="urn:lsid:biosci.ohio-state.edu:osuc_concepts:30371" class="Insecta" family="Formicidae" genus="Leptothorax" higherTaxonomySource="CoL" kingdom="Animalia" lsidName-HNS="Leptothorax retusispinosus Forel" order="Hymenoptera" pageNumber="267" phylum="Arthropoda" rank="species" species="retusispinosus">LEPTOTHORAX RETUSISPINOSUS</taxonomicName>
