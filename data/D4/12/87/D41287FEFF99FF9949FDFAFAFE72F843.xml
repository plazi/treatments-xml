</number>
; fD = (
<number box="[286,331,1570,1595]" pageId="19" pageNumber="20" value="5.5" valueMax="7.0" valueMin="4.0">4–7</number>
)H-(
<number box="[378,453,1570,1595]" pageId="19" pageNumber="20" value="29.5" valueMax="35.0" valueMin="24.0">24–35</number>
)-(
<number box="[477,553,1570,1595]" pageId="19" pageNumber="20" value="24.5" valueMax="29.0" valueMin="20.0">20–29</number>
)-(
<number box="[577,651,1570,1595]" pageId="19" pageNumber="20" value="17.0" valueMax="22.0" valueMin="12.0">12–22</number>
)-(
<number box="[675,749,1570,1595]" pageId="19" pageNumber="20" value="15.0" valueMax="20.0" valueMin="10.0">10–20</number>
)-…; DS = 
<number box="[866,953,1571,1595]" pageId="19" pageNumber="20" value="107.0" valueMax="122.0" valueMin="92.0">92–122</number>
; VS = 
<number box="[1028,1101,1571,1595]" pageId="19" pageNumber="20" value="83.5" valueMax="97.0" valueMin="70.0">70–97</number>
; NDV = 
<number box="[1201,1303,1570,1595]" pageId="19" pageNumber="20" value="190.5" valueMax="214.0" valueMin="167.0">167–214</number>
