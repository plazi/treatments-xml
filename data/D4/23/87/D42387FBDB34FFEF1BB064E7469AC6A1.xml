<quantity box="[744,850,1251,1277]" metricMagnitude="1" metricUnit="m" metricValue="7.4" metricValueMax="8.7" metricValueMin="6.1" pageId="1" pageNumber="64" unit="m" value="74.0" valueMax="87.0" valueMin="61.0">61–87 m</quantity>
..
</paragraph>
<paragraph blockId="1.[151,1437,965,1477]" box="[198,910,1290,1317]" pageId="1" pageNumber="64">
<emphasis bold="true" box="[198,278,1290,1316]" pageId="1" pageNumber="64">Range</emphasis>
