<taxonomicName box="[846,963,194,220]" class="Lycopodiopsida" family="Lycopodiaceae" genus="Phlegmariurus" kingdom="Plantae" order="Lycopodiales" pageId="29" pageNumber="30" phylum="Tracheophyta" rank="species" species="reflexus">
<emphasis box="[846,963,194,220]" italics="true" pageId="29" pageNumber="30">P. reflexus</emphasis>
</taxonomicName>
or 
<taxonomicName authorityName="B. Ollgaard" authorityYear="2012" baseAuthorityName="Poiret" box="[1004,1117,195,220]" class="Lycopodiopsida" family="Lycopodiaceae" genus="Phlegmariurus" kingdom="Plantae" order="Lycopodiales" pageId="29" pageNumber="30" phylum="Tracheophyta" rank="species" species="eversus">
<emphasis box="[1004,1117,195,220]" italics="true" pageId="29" pageNumber="30">P. eversus</emphasis>
</taxonomicName>
, usually growing in shade of 
<taxonomicName authorityName="Kunth" authorityYear="1822" box="[136,248,230,256]" class="Liliopsida" family="Poaceae" genus="Chusquea" kingdom="Plantae" order="Poales" pageId="29" pageNumber="30" phylum="Tracheophyta" rank="genus">
<emphasis box="[136,248,230,256]" italics="true" pageId="29" pageNumber="30">Chusquea</emphasis>
</taxonomicName>
or 
<taxonomicName box="[285,386,230,256]" class="Magnoliopsida" family="Scrophulariaceae" genus="Buddleja" kingdom="Plantae" order="Lamiales" pageId="29" pageNumber="30" phylum="Tracheophyta" rank="genus">
<emphasis box="[285,386,230,256]" italics="true" pageId="29" pageNumber="30">Buddleja</emphasis>
</taxonomicName>
