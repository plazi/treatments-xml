is easily confused with 
<taxonomicName LSID-HNS="urn:lsid:biosci.ohio-state.edu:osuc_concepts:142296" class="Insecta" family="Formicidae" genus="Pheidole" higherTaxonomySource="CoL" kingdom="Animalia" lsidName="Pheidole exigua Mayr" lsidName-HNS="Pheidole exigua Mayr" order="Hymenoptera" pageNumber="420" phylum="Arthropoda" rank="species" species="exigua">P. exigua</taxonomicName>
and 
<taxonomicName LSID-HNS="urn:lsid:biosci.ohio-state.edu:osuc_concepts:33879" class="Insecta" family="Formicidae" genus="Pheidole" higherTaxonomySource="CoL" kingdom="Animalia" lsidName="Pheidole moerens Wheeler" lsidName-HNS="Pheidole moerens Wheeler" order="Hymenoptera" pageNumber="420" phylum="Arthropoda" rank="species" species="moerens">P. moerens</taxonomicName>
