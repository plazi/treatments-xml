<taxonomicName authorityName="Pham &amp; Matsumoto &amp; Konishi &amp; Sheng &amp; Broad" authorityYear="2020" box="[676,830,189,215]" class="Insecta" family="Ichneumonidae" genus="Apophysius" higherTaxonomySource="GBIF" kingdom="Animalia" order="Hymenoptera" pageId="4" pageNumber="305" phylum="Arthropoda" rank="species" species="constrictus">
<emphasis box="[676,830,189,215]" italics="true" pageId="4" pageNumber="305">A. constrictus</emphasis>
</taxonomicName>
, 
<taxonomicName authorityName="Pham &amp; Matsumoto &amp; Konishi &amp; Sheng &amp; Broad" authorityYear="2020" box="[844,1007,189,215]" class="Insecta" family="Ichneumonidae" genus="Apophysius" higherTaxonomySource="GBIF" kingdom="Animalia" order="Hymenoptera" pageId="4" pageNumber="305" phylum="Arthropoda" rank="species" species="baolocensis">
<emphasis box="[844,1007,189,215]" italics="true" pageId="4" pageNumber="305">A. baolocensis</emphasis>
</taxonomicName>
