<date id="B01BD6BF1B61FFC5FE7BF955FE45F8BB" box="[438,501,1784,1809]" pageId="3">
<emphasis id="F6D12C6D1B61FFC5FE7BF955FE7CF8BB" bold="true" box="[438,460,1784,1809]" pageId="3">II</emphasis>
1–2
</date>
<date id="B01BD6BF1B61FFC5FE38F955FDF0F8BB" box="[501,576,1784,1809]" pageId="3">
<emphasis id="F6D12C6D1B61FFC5FE38F955FDA6F8BB" bold="true" box="[501,534,1784,1809]" pageId="3">III</emphasis>
