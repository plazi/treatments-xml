<subSubSection pageId="3" pageNumber="72" type="etymology">
<paragraph blockId="3.[812,1452,255,310]" pageId="3" pageNumber="72">
<emphasis bold="true" box="[812,957,255,279]" pageId="3" pageNumber="72">
<emphasis bold="true" box="[812,937,255,279]" italics="true" pageId="3" pageNumber="72">Etymology.</emphasis>
