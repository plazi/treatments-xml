<taxonomicName id="4C774D19FFB9FF91FF1873F0D104FC74" box="[180,276,928,954]" class="Insecta" family="Cicadidae" genus="Orellana" kingdom="Animalia" order="Hemiptera" pageId="65" pageNumber="66" phylum="Arthropoda" rank="genus">Orellana</taxonomicName>
