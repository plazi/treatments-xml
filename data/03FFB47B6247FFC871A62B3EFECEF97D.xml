<taxonomicName id="4C567EEE6244FFF671452CDDFC82FB60" authority="" box="[590,878,1215,1239]" class="Insecta" family="Megachilidae" genus="Megachile" kingdom="Animalia" order="Hymenoptera" pageId="30" phylum="Arthropoda" rank="subGenus" subGenus="Rhyssomegachile">
