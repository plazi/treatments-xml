species: 
<taxonomicName id="4C303FA7FFCEDB72B33247B59FB9908C" authority="Wiedemann, 1820" authorityName="Wiedemann" authorityYear="1820" box="[294,705,707,731]" class="Insecta" family="Asilidae" genus="Dasypogon" kingdom="Animalia" order="Diptera" pageId="1" pageNumber="578" phylum="Arthropoda" rank="species" species="luctuosus">
