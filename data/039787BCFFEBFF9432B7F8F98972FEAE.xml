<emphasis id="B94AEAB8FFEBFF9732B7F8F98BB8F8F5" bold="true" box="[151,418,1836,1862]" pageId="1" pageNumber="522">
<taxonomicName id="4C3E4D29FFEBFF9732B7F8F98AE8F8F5" authorityName="Haliday" authorityYear="1836" box="[151,242,1836,1862]" class="Liliopsida" family="Pontederiaceae" genus="Ancylosceles" kingdom="Plantae" order="Commelinales" pageId="1" pageNumber="522" phylum="Tracheophyta" rank="species" species="ursinus">
