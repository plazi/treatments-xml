<taxonomicName id="11659B0B0E3708B4A8A56997FA7F02E6" class="Magnoliopsida" family="Cunoniaceae" genus="Weinmannia" higherTaxonomySource="GBIF" kingdom="Plantae" lsidName="" order="Oxalidales" pageId="2" pageNumber="141" phylum="Magnoliophyta" rank="genus">
<emphasis id="D01FCA96127EA408541203C0A3E64D6F" italics="true" pageId="2" pageNumber="141">Weinmannia</emphasis>
</taxonomicName>
, with an understory rich in plants such as 
<taxonomicName id="AF456A0DC6112A7F9845D48CBFCC73FD" class="Dicotyledoneae" family="Gesneriaceae" genus="Cyrtandra" higherTaxonomySource="GBIF" kingdom="Plantae" lsidName="" order="Tubiflorae" pageId="2" pageNumber="141" phylum="Angiospermae" rank="genus">
<emphasis id="F46EF678C2C642330CCB6B2940238905" italics="true" pageId="2" pageNumber="141">Cyrtandra</emphasis>
</taxonomicName>
, 
<taxonomicName id="3C3ADA3A15722B29EFF782834216B292" class="Filicopsida" family="Gleicheniaceae" genus="Dicranopteris" higherTaxonomySource="GBIF" kingdom="Plantae" lsidName="" order="Gleicheniales" pageId="2" pageNumber="141" phylum="Pteridophyta" rank="genus">
<emphasis id="920700EE798BF9D41CF41908F1EA75C0" italics="true" pageId="2" pageNumber="141">Dicranopteris</emphasis>
</taxonomicName>
, 
<taxonomicName id="7CC0424EDEA638E656E78D3BD60D69BE" class="Monocotyledoneae" family="Cyperaceae" genus="Gahnia" higherTaxonomySource="GBIF" kingdom="Plantae" lsidName="" order="Cyperales" pageId="2" pageNumber="141" phylum="Angiospermae" rank="genus">
<emphasis id="F1EBE963175B99EF1CD8CF808CA308B6" italics="true" pageId="2" pageNumber="141">Gahnia</emphasis>
</taxonomicName>
, 
<taxonomicName id="6305E612E5BD78ABB53AA0DEE2A826B5" class="Magnoliopsida" family="Piperaceae" genus="Macropiper" higherTaxonomySource="GBIF,CoL" kingdom="Plantae" lsidName="" order="Piperales" pageId="2" pageNumber="141" phylum="Tracheophyta" rank="genus">
<emphasis id="6C0799841BDF347C1A3089821E659D2C" italics="true" pageId="2" pageNumber="141">Macropiper</emphasis>
</taxonomicName>
, 
<taxonomicName id="F9149E7871F98B8E9C13C675C4097D27" class="Eusporangiopsida" family="Marattiaceae" genus="Marattia" higherTaxonomySource="GBIF" kingdom="Plantae" lsidName="" order="Marattiales" pageId="2" pageNumber="141" phylum="Pteridophyta" rank="genus">
<emphasis id="2BCC921862813CFD506EF0028A35E34E" italics="true" pageId="2" pageNumber="141">Marattia</emphasis>
