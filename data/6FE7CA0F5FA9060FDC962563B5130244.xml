<taxonomicName id="40A590854DE38E29BE08A61630E71007" class="Magnoliopsida" family="Rubiaceae" genus="Psychotria" higherTaxonomySource="CoL" kingdom="Plantae" lsidName="" order="Gentianales" pageId="2" pageNumber="141" phylum="Tracheophyta" rank="genus">
