<emphasis id="CF5D5D8910CF121A5F5A9295D0AA52DC" italics="true" pageId="2" pageNumber="141">Freycinetia</emphasis>
</taxonomicName>
, 
<taxonomicName id="D426FA838AF7945B65599560B6390B67" class="Dicotyledoneae" family="Malvaceae" genus="Hibiscus" higherTaxonomySource="GBIF" kingdom="Plantae" lsidName="" order="Malvales" pageId="2" pageNumber="141" phylum="Angiospermae" rank="genus">
<emphasis id="63BB9E4079CF7EC59982C6657C453992" italics="true" pageId="2" pageNumber="141">Hibiscus</emphasis>
</taxonomicName>
, 
<taxonomicName id="DB22E7195D9107CF45D1C8DF80E6F788" class="Magnoliopsida" family="Myrtaceae" genus="Metrosideros" higherTaxonomySource="GBIF" kingdom="Plantae" lsidName="" order="Myrtales" pageId="2" pageNumber="141" phylum="Magnoliophyta" rank="genus">
<emphasis id="903FA79F2B49B66F36CAA5C3C896E9BE" italics="true" pageId="2" pageNumber="141">Metrosideros</emphasis>
</taxonomicName>
, 
<taxonomicName id="199AD68E8F22A14D15503964C28E40B1" class="Clitellata" family="Lumbricidae" genus="Reynoldsia" higherTaxonomySource="GBIF" kingdom="Animalia" lsidName="" order="Crassiclitellata" pageId="2" pageNumber="141" phylum="Annelida" rank="genus">
<emphasis id="F48AD8A55F64C421240002DEE745980D" italics="true" pageId="2" pageNumber="141">Reynoldsia</emphasis>
</taxonomicName>
