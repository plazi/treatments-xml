<taxonomicName id="851D99EE98249AE3D4AB494B8E6C5A43" class="Hexapoda" family="Geometridae" genus="Alsophila" higherTaxonomySource="GBIF" kingdom="Animalia" lsidName="" order="Lepidoptera" pageId="2" pageNumber="141" phylum="Arthropoda" rank="genus">
<emphasis id="19B4E093F9B2C5AD4D1F2FE2D39B0AD5" italics="true" pageId="2" pageNumber="141">Alsophila</emphasis>
</taxonomicName>
, 
<taxonomicName id="2DD55E7A375C8F2B35BA9D82E48DAB93" class="Magnoliopsida" family="Rhizophoraceae" genus="Crossostylis" higherTaxonomySource="GBIF,CoL" kingdom="Plantae" lsidName="" order="Malpighiales" pageId="2" pageNumber="141" phylum="Tracheophyta" rank="genus">
<emphasis id="EB80C48C498D132E5D4BADAEAADFB1FB" italics="true" pageId="2" pageNumber="141">Crossostylis</emphasis>
