<taxonomicName id="67F0E9B567706976F5070501791D5784" class="Insecta" family="Cicadellidae" genus="Morinda" higherTaxonomySource="CoL" kingdom="Animalia" lsidName="" order="Hemiptera" pageId="2" pageNumber="141" phylum="Arthropoda" rank="genus">
