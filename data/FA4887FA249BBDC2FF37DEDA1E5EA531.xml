<geoCoordinate id="17D5502B249BBDC2FC08DB3E1F29A697" box="[936,1046,1404,1430]" degrees="77" direction="west" minutes="45" orientation="longitude" pageId="133" pageNumber="134" precision="925" value="-77.75">77°45’W</geoCoordinate>
in Andean regions of 
<collectingCountry id="0AF6767C249BBDC2FA87DB3E1E62A697" box="[1319,1373,1404,1430]" name="Peru" pageId="133" pageNumber="134">Peru</collectingCountry>
