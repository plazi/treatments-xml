<taxonomicName id="939EF1C41A41DD64BD15856F18C566BF" class="Magnoliopsida" family="Melastomataceae" genus="Melastoma" higherTaxonomySource="CoL" kingdom="Plantae" lsidName="Melastoma" order="Myrtales" pageId="43" pageNumber="44" phylum="Tracheophyta" rank="genus">Melastoma</taxonomicName>
