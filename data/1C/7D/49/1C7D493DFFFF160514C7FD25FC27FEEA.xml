<taxonomicName authorityName="Jiang, Li, Ji, Engel, &amp; Wang" authorityYear="2021" box="[414,641,259,285]" class="Insecta" family="Tenebrionidae" genus="Hexarhopalus" higherTaxonomySource="GBIF" kingdom="Animalia" order="Coleoptera" pageId="2" pageNumber="594" phylum="Arthropoda" rank="species" species="yunnanensis" subGenus="Hexarhopalus">
