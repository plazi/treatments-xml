<subSubSection pageId="0" pageNumber="95" type="type species">
<paragraph pageId="0" pageNumber="95">Type species.</paragraph>
<paragraph pageId="0" pageNumber="95">
<taxonomicName authority="Lin &amp; Li, 2020" authorityName="Lin &amp; Li" authorityYear="2020" class="Arachnida" family="Salticidae" genus="Megaeupoa" higherTaxonomySource="GBIF" kingdom="Animalia" lsidName="Megaeupoa yanfengi" order="Araneae" pageId="0" pageNumber="95" phylum="Arthropoda" rank="species" species="yanfengi">
