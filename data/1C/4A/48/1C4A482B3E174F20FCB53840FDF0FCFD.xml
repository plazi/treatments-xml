<paragraph blockId="35.[821,1434,1051,1075]" box="[821,1434,1051,1075]" pageId="35" pageNumber="36">
<heading box="[821,1434,1051,1075]" centered="true" fontSize="9" level="2" pageId="35" pageNumber="36" reason="4">
<taxonomicName authority="Brown, 2004" authorityName="Brown" authorityYear="2004" box="[821,1168,1051,1075]" class="Insecta" family="Phoridae" genus="Melaloncha" kingdom="Animalia" order="Diptera" pageId="35" pageNumber="36" phylum="Arthropoda" rank="species" species="triangularis" status="SP. NOV.">MELALONCHA TRIANGULARIS</taxonomicName>
<emphasis bold="true" box="[1176,1276,1051,1075]" pageId="35" pageNumber="36">
