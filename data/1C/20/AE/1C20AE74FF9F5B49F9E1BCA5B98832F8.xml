<paragraph blockId="1.[151,533,753,779]" box="[151,533,753,779]" pageId="1" pageNumber="569">
<heading bold="true" box="[151,533,753,779]" fontSize="11" level="1" pageId="1" pageNumber="569" reason="1">
<emphasis bold="true" box="[151,533,753,779]" pageId="1" pageNumber="569">
<taxonomicName box="[151,288,753,779]" class="Bivalvia" family="Cardiidae" genus="Bucardium" kingdom="Animalia" order="Veneroida" pageId="1" pageNumber="569" phylum="Mollusca" rank="genus">
<emphasis bold="true" box="[151,288,753,779]" italics="true" pageId="1" pageNumber="569">Bucardium</emphasis>
