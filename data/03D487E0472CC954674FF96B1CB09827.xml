<taxonomicName id="4C7D4D75472EC954655FFEFE1C279C30" authority="(Claassen)" authorityName="Claassen" baseAuthorityName="Claassen" baseAuthorityYear="1924" box="[792,1026,324,350]" class="Insecta" family="Capniidae" genus="Allocapnia" kingdom="Animalia" order="Plecoptera" pageId="2" pageNumber="41" phylum="Arthropoda" rank="species" species="recta">
