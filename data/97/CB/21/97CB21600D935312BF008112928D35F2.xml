<paragraph pageId="0" pageNumber="65">
<taxonomicName authority="Lee &amp; Bezdek, 2020" authorityName="Lee &amp; Bezděk" authorityYear="2020" class="Insecta" family="Chrysomelidae" genus="Pseudotheopea" higherTaxonomySource="GBIF" kingdom="Animalia" lsidName="Pseudotheopea boreri" order="Coleoptera" pageId="0" pageNumber="65" phylum="Arthropoda" rank="species" species="boreri">
