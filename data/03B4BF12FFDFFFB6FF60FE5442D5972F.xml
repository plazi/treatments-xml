<quantity id="4CE5A3E1FFDFFFB6FF60F9464213972C" box="[151,276,1773,1798]" metricMagnitude="2" metricUnit="m" metricValue="6.5" metricValueMax="7.0" metricValueMin="6.0" pageId="34" pageNumber="35" unit="m" value="650.0" valueMax="700.0" valueMin="600.0">
600- 
<specimenCount id="9D1BC58DFFDFFFB6FF3EF9464213972C" box="[201,276,1773,1798]" pageId="34" pageNumber="35" type="generic">700 m</specimenCount>
</quantity>
