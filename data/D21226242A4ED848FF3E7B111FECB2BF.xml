<emphasis id="68CF4B202A4ED848FF3E7B111D4CB41D" bold="true" box="[151,591,542,568]" pageId="15" pageNumber="16">
3. 
<taxonomicName id="9DBBECB12A4ED848FF1D7B111E9CB41D" authorityName="Heller in Mindanao" authorityYear="1921" box="[180,415,542,568]" class="Insecta" family="Carabidae" genus="Calleida" higherTaxonomySource="GBIF" kingdom="Animalia" order="Coleoptera" pageId="15" pageNumber="16" phylum="Arthropoda" rank="species" species="discoidalis">
