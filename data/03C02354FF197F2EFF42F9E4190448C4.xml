<subSubSection id="C373C1C9FF197F28FF42F9AD18684FEC" box="[151,829,1646,1668]" pageId="2" pageNumber="247" type="materials_examined">
<paragraph id="8BD69242FF197F28FF42F9AD18684FEC" blockId="2.[151,829,1646,1668]" box="[151,829,1646,1668]" pageId="2" pageNumber="247">
<emphasis id="B91D4E50FF197F28FF42F9AD1A494FEC" bold="true" box="[151,284,1646,1668]" pageId="2" pageNumber="247">
<typeStatus id="54D22CE0FF197F28FF42F9AD1B994FEC" box="[151,204,1646,1668]" pageId="2" pageNumber="247">Type</typeStatus>
species
</emphasis>
. 
<taxonomicName id="4C69E9C1FF197F28FEFCF9AD191D4FEC" authority="White, 1876" authorityName="White" authorityYear="1876" box="[297,584,1646,1668]" class="Insecta" family="Saldidae" genus="Salda" kingdom="Animalia" order="Hemiptera" pageId="2" pageNumber="247" phylum="Arthropoda" rank="species" species="australis">
<emphasis id="B91D4E50FF197F28FEFCF9AD1A974FEC" box="[297,450,1646,1668]" italics="true" pageId="2" pageNumber="247">Salda australis</emphasis>
<bibRefCitation id="EFF8EFB3FF197F28FE1DF9AD191D4FEC" author="White" box="[456,584,1646,1668]" pageId="2" pageNumber="247" refString="White, F. B. (1876) Descriptions of three new species of Hemiptera - Heteroptera from New Zealand. Entomologist's Monthly Magazine, 13, 105 - 106." type="journal article" year="1876">
White, 
<number id="3DA18065FF197F28FDC6F9AD191D4FEC" box="[531,584,1646,1668]" pageId="2" pageNumber="247" value="1876.0">1876</number>
</bibRefCitation>
