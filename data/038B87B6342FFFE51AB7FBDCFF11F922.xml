<materialsCitation id="3B4A3CFD342FFFE51E4BFB0AFD7FFA91" ID-GBIF-Occurrence="1697157837" country="Chile" county="Galera" elevation="120" location="Punta Lavapie, near to Galera" municipality="Punta Lavapie" pageId="73" pageNumber="74" specimenCount="1" stateProvince="Hamburg" typeStatus="type">
