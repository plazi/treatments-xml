<collectingCountry id="F3357630342FFFE51947FB09FC4BFB76" box="[871,931,1225,1250]" name="Chile" pageId="73" pageNumber="74">Chile</collectingCountry>
in 
<quantity id="4CDA9B45342FFFE519EBFB09FBFDFB75" box="[971,1045,1225,1250]" metricMagnitude="2" metricUnit="m" metricValue="2.6" pageId="73" pageNumber="74" unit="m" value="260.0">
<elevation id="000FD193342FFFE519EBFB09FBFDFB75" box="[971,1045,1225,1250]" metricMagnitude="2" metricUnit="m" metricValue="2.6" pageId="73" pageNumber="74" unit="m" value="260.0">260 m</elevation>
