<elevation id="000FD193342FFFE51803FB2DFD7FFA91" box="[547,663,1261,1286]" metricMagnitude="2" metricUnit="m" metricValue="1.2" metricValueMax="1.5" metricValueMin="0.9" pageId="73" pageNumber="74" unit="m" value="120.0" valueMax="150.0" valueMin="90.0">
<quantity id="4CDA9B45342FFFE51803FB2DFD7FFA91" box="[547,663,1261,1286]" metricMagnitude="2" metricUnit="m" metricValue="1.2" metricValueMax="1.5" metricValueMin="0.9" pageId="73" pageNumber="74" unit="m" value="120.0" valueMax="150.0" valueMin="90.0">90–150 m</quantity>
</elevation>
</materialsCitation>
