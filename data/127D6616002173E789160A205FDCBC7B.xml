<paragraph id="3089090D1061623A09A17A9158DABD31" pageId="null" pageNumber="325">
<taxonomicName id="EF1DEF32AC7DC47535558E7807654552" authority="L." class="Magnoliopsida" family="Caprifoliaceae" genus="Valeriana" kingdom="Plantae" order="Dipsacales" pageId="null" pageNumber="325" phylum="Tracheophyta" rank="species" species="celtica">
