<subSubSection pageId="1" pageNumber="2" type="nomenclature">
<paragraph pageId="1" pageNumber="2">
<taxonomicName LSID="urn:lsid:zoobank.org:act:8E2A95F1-AC1D-4535-8FB1-2202B4897FF0" class="Arachnida" family="Lycosidae" genus="Acantholycosa" higherTaxonomySource="CoL" kingdom="Animalia" lsidName="Acantholycosa azarkinae" order="Araneae" pageId="1" pageNumber="2" phylum="Arthropoda" rank="species" species="azarkinae">Acantholycosa azarkinae</taxonomicName>
