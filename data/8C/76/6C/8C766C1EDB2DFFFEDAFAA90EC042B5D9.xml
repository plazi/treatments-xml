<subSubSection box="[199,1362,1700,1727]" pageId="17" pageNumber="168" type="etymology">
<paragraph blockId="17.[151,1437,944,1727]" box="[199,1362,1700,1727]" pageId="17" pageNumber="168">
<emphasis bold="true" box="[199,334,1701,1727]" pageId="17" pageNumber="168">Etymology.</emphasis>
