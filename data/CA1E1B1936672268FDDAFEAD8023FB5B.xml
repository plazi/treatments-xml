<quantity id="854F07EA36672268FE38FE2D860BFD99" box="[485,608,503,527]" metricMagnitude="-2" metricUnit="m" metricValue="3.15" metricValueMax="3.5" metricValueMin="2.8" pageId="25" pageNumber="1567" unit="mm" value="31.5" valueMax="35.0" valueMin="28.0">28–35 mm</quantity>
