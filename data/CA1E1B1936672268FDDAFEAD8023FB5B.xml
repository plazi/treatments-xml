<emphasis id="70C3761D36672268FD18FE2D86B9FD99" box="[709,722,503,527]" italics="true" pageId="25" pageNumber="1567">n</emphasis>
= 8) 
<quantity id="854F07EA36672268FCC0FE2D87FFFD99" box="[797,916,503,527]" metricMagnitude="-2" metricUnit="m" metricValue="3.089" pageId="25" pageNumber="1567" unit="mm" value="30.89">30.89 mm</quantity>
, 
<collectingRegion id="807364ED36672268FC79FE2D87A3FD99" box="[932,968,503,527]" country="Serbia" name="Sid" pageId="25" pageNumber="1567">SD</collectingRegion>
= 1.853); female 
<quantity id="854F07EA36672268FF09FDCD850BFDB9" box="[212,352,535,559]" metricMagnitude="-2" metricUnit="m" metricValue="2.875" metricValueMax="3.1" metricValueMin="2.65" pageId="25" pageNumber="1567" unit="mm" value="28.75" valueMax="31.0" valueMin="26.5">26.5–31 mm</quantity>
