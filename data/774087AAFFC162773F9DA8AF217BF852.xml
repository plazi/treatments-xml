<subSubSection id="B7F36537FFC162773F9DA95B2408FA92" pageId="25" pageNumber="134" type="materials_examined">
<paragraph id="FF5636BCFFC162773F9DA95B24A8FC8E" blockId="25.[136,458,810,832]" box="[136,458,810,832]" pageId="25" pageNumber="134">
<emphasis id="CD9DEAAEFFC162773F9DA95B25A0FCF1" bold="true" box="[136,194,810,831]" pageId="25" pageNumber="134">
<typeStatus id="2052881EFFC162773F9DA95B25DCFCF1" box="[136,190,810,831]" pageId="25" pageNumber="134">Type</typeStatus>
