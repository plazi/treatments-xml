<taxonomicName id="4C5BF3C6FF80FF8500EDE5D4FE5CFCAD" authority="Haeselbarth, 2008" authorityName="Haeselbarth" authorityYear="2008" box="[177,412,762,784]" class="Insecta" family="Braconidae" genus="Perilitus" kingdom="Animalia" order="Hymenoptera" pageId="20" pageNumber="1033" phylum="Arthropoda" rank="species" species="aeschlimanni" status="nov.sp.">
<emphasis id="B92F5457FF80FF8500EDE5D4FE5CFCAD" bold="true" box="[177,412,762,784]" italics="true" pageId="20" pageNumber="1033">Perilitus aeschlimanni</emphasis>
