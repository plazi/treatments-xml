<location id="2C211AC8FF974B6FFEF7FE0AFE3C27BD" LSID="urn:lsid:plazi:treatment:A157FD05FF974B6FFF2FFED3FD052531:2C211AC8FF974B6FFEF7FE0AFE3C27BD" box="[335,420,439,465]" country="Mexico" name="Female" pageId="42" pageNumber="493">Female</location>
