<paragraph id="6464894839ED28BCE558BFB539E9DF1C" pageId="14" pageNumber="45">
<taxonomicName id="914EA84D42C1B14BDEA190EFF36002CE" class="Insecta" family="Megachilidae" genus="Megachile" higherTaxonomySource="CoL" kingdom="Animalia" lsidName="Megachile onobrychidis" order="Hymenoptera" pageId="14" pageNumber="45" phylum="Arthropoda" rank="species" species="onobrychidis">Megachile onobrychidis</taxonomicName>
