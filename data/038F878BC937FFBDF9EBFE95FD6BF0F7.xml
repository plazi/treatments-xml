<taxonomicName id="4C264D1EC937FFBDF850FE48FDE7F3B3" authority="Brook, 1889" authorityName="Brook" authorityYear="1889" box="[300,638,400,425]" class="Anthozoa" family="Schizopathidae" genus="Schizopathes" kingdom="Animalia" order="Antipatharia" pageId="36" pageNumber="37" phylum="Cnidaria" rank="species" species="crassa">
