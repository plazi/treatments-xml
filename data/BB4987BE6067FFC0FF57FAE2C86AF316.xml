<taxonomicName id="F4E04D2B6066FFC3FEDAF8BACF58F603" box="[261,531,1852,1873]" class="Dothideomycetes" family="Tetraplosphaeriaceae" genus="Aquatisphaeria" kingdom="Fungi" order="Pleosporales" pageId="5" pageNumber="123" phylum="Ascomycota" rank="species" species="thailandica">
<emphasis id="0194EABA6066FFC3FEDAF8BACF58F603" box="[261,531,1852,1873]" italics="true" pageId="5" pageNumber="123">Aquatisphaeria thailandica</emphasis>
