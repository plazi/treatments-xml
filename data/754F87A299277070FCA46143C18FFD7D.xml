(
<taxonomicName id="3AE64D3799267077FDA860BCC270FB70" authorityName="Vršanský" authorityYear="2009" box="[558,630,1234,1251]" class="Insecta" family="Eadiidae" higherTaxonomySource="GBIF" kingdom="Animalia" order="Blattodea" pageId="11" pageNumber="84" phylum="Arthropoda" rank="family">Eadiidae</taxonomicName>
