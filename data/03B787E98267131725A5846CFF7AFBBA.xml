and 
<taxonomicName id="4C1E4D7C8267131720B68720FD3BFDC2" authority="Moradmand and Jager, 2012" authorityName="Moradmand and Jager" authorityYear="2012" class="Arachnida" family="Sparassidae" genus="Eusparassus" kingdom="Animalia" order="Araneae" pageId="68" pageNumber="69" phylum="Arthropoda" rank="species" species="mesopotamicus">
<emphasis id="B96AEAED8267131720B68720FEF6FDC2" italics="true" pageId="68" pageNumber="69">E. mesopotamicus</emphasis>
