<collectionCode id="ED71AE33FFEF9D20FEE0FA80F6F7FAFC" box="[380,409,1336,1362]" country="Germany" lsid="urn:lsid:biocol.org:col:15637" name="Botanische Staatssammlung München" pageId="27" pageNumber="46" type="Herbarium">M</collectionCode>
. 
