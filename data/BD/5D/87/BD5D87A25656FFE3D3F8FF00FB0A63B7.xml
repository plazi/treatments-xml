near 
<location LSID="urn:lsid:plazi:treatment:BD5D87A25656FFE3D3F8FF00FB0A63B7:302B606F5656FFE3D57EFA65FB3A60E1" box="[1093,1165,1415,1438]" municipality="We" name="Nuevo" pageId="74" pageNumber="74" stateProvince="San Juan/Laventille">Nuevo</location>
<collectingRegion country="Trinidad and Tobago" name="San Juan/Laventille" pageId="74" pageNumber="74">San Juan</collectingRegion>
, consisting of two individuals (both adult males; collected on 
<date box="[907,1122,1481,1505]" pageId="74" pageNumber="74" value="1999-09-10">
<collectingDate box="[907,1122,1481,1505]" pageId="74" pageNumber="74" value="1999-09-10">10 September 1999</collectingDate>
