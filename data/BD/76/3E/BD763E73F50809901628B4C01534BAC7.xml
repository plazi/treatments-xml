<taxonomicName class="Arachnida" family="Thomisidae" genus="Sidymella" higherTaxonomySource="CoL" kingdom="Animalia" lsidName="Sidymella spinifera" order="Araneae" pageId="0" pageNumber="319" phylum="Arthropoda" rank="species" species="spinifera">Sidymella spinifera</taxonomicName>
<normalizedToken originalValue="Mello-Leitão">Mello-Leitao</normalizedToken>
