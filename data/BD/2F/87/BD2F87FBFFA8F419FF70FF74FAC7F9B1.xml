<subSubSection pageId="52" pageNumber="53" type="discussion">
<paragraph blockId="52.[151,1437,263,1643]" pageId="52" pageNumber="53">
<emphasis bold="true" box="[198,312,1539,1565]" pageId="52" pageNumber="53">Remarks</emphasis>
. 
<taxonomicName authorityName="Kruse and Powell" authorityYear="2009" box="[330,705,1540,1565]" class="Insecta" family="Tortricidae" genus="Sparganothoides" kingdom="Animalia" order="Lepidoptera" pageId="52" pageNumber="53" phylum="Arthropoda" rank="species" species="polymitariana">
<emphasis box="[330,705,1540,1565]" italics="true" pageId="52" pageNumber="53">Sparganothoides polymitariana</emphasis>
