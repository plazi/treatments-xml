<taxonomicName LSID="BD69515D-D6D7-5229-BEE0-05832F322318" authority="Simon, 1895" authorityName="Simon" authorityYear="1895" class="Arachnida" family="Theridiidae" genus="Meotipa" higherTaxonomySource="CoL" kingdom="Animalia" lsidName="Meotipa" order="Araneae" pageId="0" pageNumber="153" phylum="Arthropoda" rank="genus">Meotipa Simon, 1895</taxonomicName>
