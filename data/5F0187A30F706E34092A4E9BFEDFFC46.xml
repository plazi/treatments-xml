<taxonomicName id="10A84D360F716E3408E64C44FC9DFE86" authority="L. Kollmann &amp; Peixoto" authorityName="L. Kollmann &amp; Peixoto. A. Habit" authorityYear="2012" box="[445,855,278,298]" class="Magnoliopsida" family="Begoniaceae" genus="Begonia" kingdom="Plantae" order="Cucurbitales" pageId="5" pageNumber="64" phylum="Tracheophyta" rank="species" species="wasshauseniana">Begonia wasshauseniana L. Kollmann &amp; Peixoto</taxonomicName>
and its closest relatives (
<taxonomicName id="10A84D360F716E340D774C44FB29FE86" authority="L. Kollmann" authorityName="L. Kollmann" box="[1068,1251,278,298]" class="Magnoliopsida" family="Begoniaceae" genus="Begonia" kingdom="Plantae" order="Cucurbitales" pageId="5" pageNumber="64" phylum="Tracheophyta" rank="species" species="ruschii">B. ruschii L. Kollmann</taxonomicName>
, 
<taxonomicName id="10A84D360F716E340DB44C44FA51FE86" authority="Brade" authorityName="Brade" box="[1263,1435,278,298]" class="Magnoliopsida" family="Begoniaceae" genus="Begonia" kingdom="Plantae" order="Cucurbitales" pageId="5" pageNumber="64" phylum="Tracheophyta" rank="species" species="kuhlmannii">B. kuhlmannii Brade</taxonomicName>
and 
<taxonomicName id="10A84D360F716E3409394C63FF3EFEE9" authority="Brade" authorityName="Brade" box="[98,244,305,325]" class="Magnoliopsida" family="Begoniaceae" genus="Begonia" kingdom="Plantae" order="Cucurbitales" pageId="5" pageNumber="64" phylum="Tracheophyta" rank="species" species="albidula">B. albidula Brade</taxonomicName>
).
