<taxonomicName id="72934D71F15DFFD34A20CC9FFD13FACC" box="[515,666,1269,1294]" genus="Neobittacus" kingdom="Animalia" pageId="4" pageNumber="31" rank="species" species="blanchetti">
<emphasis id="87E7EAE0F15DFFD34A20CC9FFD13FACC" box="[515,666,1269,1294]" italics="true" pageId="4" pageNumber="31">N. blanchetti</emphasis>
