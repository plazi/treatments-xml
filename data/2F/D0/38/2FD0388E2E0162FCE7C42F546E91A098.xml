<taxonomicName authorityName="L." authorityYear="1753" class="Liliopsida" family="Orchidaceae" genus="Ophrys" higherTaxonomySource="CoL" kingdom="Plantae" order="Asparagales" pageId="7" pageNumber="600" phylum="Tracheophyta" rank="genus">Ophrys</taxonomicName>
