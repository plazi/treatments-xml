<collectionCode box="[1356,1380,1335,1361]" country="United Kingdom" lsid="urn:lsid:biocol.org:col:15867" name="Royal Botanic Gardens" pageId="6" pageNumber="197" type="Herbarium">K</collectionCode>
)
