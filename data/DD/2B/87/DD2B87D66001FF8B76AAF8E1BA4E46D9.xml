<taxonomicName authority="Duan &amp; Dietrich, 2018" authorityName="Duan &amp; Dietrich" authorityYear="2018" box="[936,1250,980,1004]" class="Insecta" family="Cicadellidae" genus="Polyamia" higherTaxonomySource="GBIF" kingdom="Animalia" order="Hemiptera" pageId="6" pageNumber="563" phylum="Arthropoda" rank="species" species="choromorica" status="sp. n." subGenus="Polyamia">
