<subSubSection pageId="0" pageNumber="97" type="diagnosis">
<paragraph pageId="0" pageNumber="97">Diagnosis.</paragraph>
<paragraph pageId="0" pageNumber="97">
<taxonomicName authorityName="Aignon, Yorou &amp; Ryberg" authorityYear="2021" class="Agaricomycetes" family="Inocybaceae" genus="Inosperma" higherTaxonomySource="CoL" kingdom="Fungi" lsidName="Inosperma africanum" order="Agaricales" pageId="0" pageNumber="97" phylum="Basidiomycota" rank="species" species="africanum">
