<heading id="D0F54B127B61D210FF6FFB47FEB4FB7A" bold="true" box="[151,381,1235,1262]" fontSize="11" level="1" pageId="5" pageNumber="6" reason="1">
<taxonomicName id="4C0287FD7B61D210FF6FFB47FEB4FB7A" authority="Evans, 1937" authorityName="Evans" authorityYear="1937" box="[151,381,1235,1262]" class="Insecta" family="Hesperiidae" genus="Brusa" kingdom="Animalia" order="Lepidoptera" pageId="5" pageNumber="6" phylum="Arthropoda" rank="genus">
<emphasis id="B976206C7B61D210FF6FFB47FEB4FB7A" bold="true" box="[151,381,1235,1262]" pageId="5" pageNumber="6">
<emphasis id="B976206C7B61D210FF6FFB47FF29FB79" bold="true" box="[151,224,1236,1262]" italics="true" pageId="5" pageNumber="6">Brusa</emphasis>
Evans, 
<number id="3DCAEE597B61D210FEBBFB40FEB4FB7A" box="[323,381,1235,1261]" pageId="5" pageNumber="6" value="1937.0">1937</number>
</emphasis>
</taxonomicName>
