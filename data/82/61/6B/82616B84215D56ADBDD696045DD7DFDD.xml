<taxonomicName class="Insecta" family="Tipulidae" genus="Tipula" higherTaxonomySource="CoL" kingdom="Animalia" lsidName="Tipula (Vestiplex) testata" order="Diptera" pageId="0" pageNumber="91" phylum="Arthropoda" rank="species" species="testata" subGenus="Vestiplex">Tipula (Vestiplex) testata</taxonomicName>
