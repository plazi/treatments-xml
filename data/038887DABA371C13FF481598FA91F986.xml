<quantity id="4CD99B29BA331C13FCA9108BFC36FA13" box="[886,942,1412,1437]" metricMagnitude="-1" metricUnit="m" metricValue="8.382" pageId="37" pageNumber="188" unit="in" value="33.0">33 in</quantity>
