<taxonomicName id="4C214D4FBA331C13FB5D106EFAD7FAF6" box="[1154,1359,1375,1400]" class="Polyplacophora" family="Leptochitonidae" genus="Leptochiton" kingdom="Animalia" order="Lepidopleurida" pageId="37" pageNumber="188" phylum="Mollusca" rank="species" species="longibranchiae">
