<taxonomicName id="4C349BB3FFA2FFB81C0BFC74197194EE" authorityName="Watson" authorityYear="2008" box="[1055,1296,941,962]" class="Hydrozoa" family="Haleciidae" genus="Halecium" kingdom="Animalia" order="Leptothecata" pageId="4" pageNumber="169" phylum="Cnidaria" rank="species" species="brevithecum">
