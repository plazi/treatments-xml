<paragraph id="9B9DBBB134A06F8980EDF1BA271F5DE8" pageId="0" pageNumber="89">
<taxonomicName id="3F6B7D236186CD048D41B92D4EB1DB8B" class="Gastropoda" family="Facelinidae" genus="Myja" higherTaxonomySource="CoL" kingdom="Animalia" lsidName="Myja longicornis" order="Nudibranchia" pageId="0" pageNumber="89" phylum="Mollusca" rank="species" species="longicornis">Myja longicornis</taxonomicName>
