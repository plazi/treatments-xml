<taxonomicName id="4C3095864073FFF5E36004B7352CF974" box="[293,518,1724,1746]" class="Eurotatoria" family="Trichocercidae" genus="Trichocerca" higherTaxonomySource="CoL" kingdom="Animalia" order="Ploima" pageId="40" pageNumber="191" phylum="Rotifera" rank="species" species="pediculus">
