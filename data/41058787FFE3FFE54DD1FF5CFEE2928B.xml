<quantity id="0E549B74FFE3FFE54ED7FE46FC1A92C0" box="[913,969,397,422]" metricMagnitude="1" metricUnit="m" metricValue="4.8387" pageId="4" pageNumber="584" unit="in" value="1905.0">1905</quantity>
</bibRefCitation>
