<paragraph id="8B8B36ACFFF5FFE0D28561F10F450C06" blockId="7.[151,564,506,531]" box="[151,564,506,531]" pageId="7" pageNumber="170">
<treatmentCitationGroup id="AB241182FFF5FFE0D28561F10F450C06" box="[151,564,506,531]" pageId="7" pageNumber="170">
<treatmentCitation id="0A9510BDFFF5FFE0D28561F10F410C06" author="Schedl, K. E." box="[151,560,506,531]" page="366" pageId="7" pageNumber="170" year="1975">
