<collectingCountry id="F370764F05414306FC81F605FCC95D5C" box="[811,876,1605,1631]" name="South Africa" pageId="6" pageNumber="21">RSA</collectingCountry>
, Eastern Cape, 
<quantity id="4C9F9B3A05414306FB90F605FB295D5C" box="[1082,1164,1605,1631]" metricMagnitude="4" metricUnit="m" metricValue="2.0" pageId="6" pageNumber="21" unit="km" value="20.0">20 km</quantity>
