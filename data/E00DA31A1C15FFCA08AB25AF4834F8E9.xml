<number id="DE6C002B1C15FFCA0B2D20114E29FAC1" box="[785,875,1372,1398]" pageId="16" pageNumber="17" value="709433.0">709433</number>
/ 
<number id="DE6C002B1C15FFCA0B4820114E8DFAC1" box="[884,975,1372,1398]" pageId="16" pageNumber="17" value="326944.0">326944</number>
