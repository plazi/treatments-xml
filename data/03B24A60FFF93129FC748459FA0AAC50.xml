<paragraph id="8BA4FB76FFF9312FFCC082B9FC13ADEE" blockId="3.[813,1455,1365,1519]" pageId="3" pageNumber="10">
Haute de 
<quantity id="4CE35693FFF9312FFC4C82BAFBB1ADB1" box="[929,1044,1429,1456]" metricMagnitude="-1" metricUnit="m" metricValue="4.5" metricValueMax="6.0" metricValueMin="3.0" pageId="3" pageNumber="10" unit="cm" value="45.0" valueMax="60.0" valueMin="30.0">30-60 cm</quantity>
