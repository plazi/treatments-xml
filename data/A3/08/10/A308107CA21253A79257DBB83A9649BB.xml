<taxonomicName authorityName="Germar" authorityYear="1824" class="Insecta" family="Curculionidae" genus="Poecilma" higherTaxonomySource="GBIF,CoL" kingdom="Animalia" lsidName="Poecilma papaveratum" order="Coleoptera" pageId="21" pageNumber="72" phylum="Arthropoda" rank="species" species="papaveratum">
