<taxonomicName id="3CB44D32FA2CFFD16A9DFEFE6A78FEF3" baseAuthorityName="Alpheraky" baseAuthorityYear="1892" box="[898,1092,359,383]" class="Insecta" family="Noctuidae" genus="Blepharosis" higherTaxonomySource="GBIF" kingdom="Animalia" order="Lepidoptera" pageId="1" pageNumber="597" phylum="Arthropoda" rank="species" species="anachoretoides">
<emphasis id="C9C0EAA3FA2CFFD16A9DFEFE6A78FEF3" box="[898,1092,359,383]" italics="true" pageId="1" pageNumber="597">B. anachoretoides</emphasis>
</taxonomicName>
