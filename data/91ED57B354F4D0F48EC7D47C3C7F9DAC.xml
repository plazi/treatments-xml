spp. 9 
<taxonomicName id="38DCA24A8D202F959A532CFE2D7F1845" genus="L." lsidName="L. nigrilineata" pageId="2" pageNumber="103" rank="species" species="nigrilineata">L. nigrilineata</taxonomicName>
