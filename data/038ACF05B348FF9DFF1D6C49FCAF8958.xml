, 
<taxonomicName id="4C230590B34AFF9AFD106972FD548E82" authority="Bartlett &amp; Kennedy, 2018" authorityName="Bartlett &amp; Kennedy" authorityYear="2018" box="[666,756,621,644]" class="Liliopsida" family="Poaceae" genus="Lamaxa" higherTaxonomySource="GBIF" kingdom="Plantae" order="Poales" pageId="11" pageNumber="516" phylum="Tracheophyta" rank="genus" status="new genus">
