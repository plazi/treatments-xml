<taxonomicName id="4C230590B34AFF9AFCBF6973FC2B8E83" authorityName="Melichar" authorityYear="1914" box="[821,907,620,645]" class="Insecta" family="Delphacidae" genus="Malaxa" higherTaxonomySource="GBIF" kingdom="Animalia" order="Hemiptera" pageId="11" pageNumber="522" phylum="Arthropoda" rank="genus">
