<subSubSection pageId="2" pageNumber="3" type="nomenclature">
<paragraph pageId="2" pageNumber="3">
<taxonomicName LSID="http://zoobank.org/8636DDEB-EDC7-4A8C-B6EA-6D7AEF8756DC" authority="Yu &amp; Yang" class="Insecta" family="Cicadellidae" genus="Dayus" higherTaxonomySource="CoL" kingdom="Animalia" lsidName="Dayus bifurcatus" order="Hemiptera" pageId="2" pageNumber="3" phylum="Arthropoda" rank="species" species="bifurcatus">Dayus bifurcatus Yu &amp; Yang</taxonomicName>
