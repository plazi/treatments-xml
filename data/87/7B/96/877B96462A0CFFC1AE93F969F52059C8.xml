<subSubSection pageId="2" pageNumber="37" type="diagnosis">
<paragraph blockId="2.[151,1436,151,215]" pageId="2" pageNumber="37">
<emphasis bold="true" box="[196,326,151,177]" pageId="2" pageNumber="37">Diagnosis:</emphasis>
