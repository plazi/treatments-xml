<subSubSection type="reference_group">
<paragraph pageId="34" pageNumber="35">
<taxonomicName class="Gastropoda" family="Nassariidae" genus="Tritia" higherTaxonomySource="CoL" kingdom="Animalia" order="Neogastropoda" pageId="34" pageNumber="35" phylum="Mollusca" rank="species" species="nuda">Tritia nuda Berlese</taxonomicName>
