<subSubSection pageId="6" pageNumber="7" type="materials_examined">
<paragraph pageId="6" pageNumber="7">
<pageBreakToken pageId="6" pageNumber="7" start="start">Type</pageBreakToken>
.
</paragraph>
<paragraph pageId="6" pageNumber="7">
CHINA, Chongqing, on 
<taxonomicName class="Magnoliopsida" family="Fagaceae" genus="Lithocarpus" higherTaxonomySource="CoL" kingdom="Plantae" lsidName="Lithocarpus" order="Fagales" pageId="6" pageNumber="7" phylum="Tracheophyta" rank="genus">Lithocarpus</taxonomicName>
