<taxonomicName id="EDDF1FB50271DB415B69B7B06041D07B" authority="Gorochov, 2014" authorityName="Gorochov" authorityYear="2014" box="[279,622,1768,1795]" class="Insecta" family="Haglotettigoniidae" genus="Endecous" kingdom="Animalia" order="Orthoptera" pageId="4" pageNumber="275" phylum="Arthropoda" rank="subGenus" subGenus="Pedroecous">
