<taxonomicName id="4C084D64FF89877A26ABB800FD83FD03" authority="Appelof, 1898" authorityName="Appelof" authorityYear="1898" box="[246,578,618,644]" class="Cephalopoda" family="Idiosepiidae" higherTaxonomySource="GBIF" kingdom="Animalia" order="Sepiolida" pageId="5" pageNumber="456" phylum="Mollusca" rank="family">
