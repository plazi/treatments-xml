<paragraph id="507ADA07FFB765604680FD4EFE78FC83" blockId="4.[151,509,764,790]" box="[151,509,764,790]" pageId="4" pageNumber="405">
<heading id="0B326D6BFFB765604680FD4EFE78FC83" bold="true" box="[151,509,764,790]" fontSize="11" level="1" pageId="4" pageNumber="405" reason="1">
<emphasis id="62B10615FFB765604680FD4EFE78FC83" bold="true" box="[151,509,764,790]" pageId="4" pageNumber="405">
The 
<taxonomicName id="97C5A184FFB7656046D8FD4EFEC9FC83" baseAuthorityName="Hampson" baseAuthorityYear="1891" box="[207,332,764,790]" class="Insecta" family="Arctiidae" genus="Nephelomilta" higherTaxonomySource="GBIF" kingdom="Animalia" order="Lepidoptera" pageId="4" pageNumber="405" phylum="Arthropoda" rank="species" species="suffusa">
<emphasis id="62B10615FFB7656046D8FD4EFEC9FC83" bold="true" box="[207,332,764,790]" italics="true" pageId="4" pageNumber="405">N. suffusa</emphasis>
</taxonomicName>
