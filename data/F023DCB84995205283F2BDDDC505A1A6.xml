<taxonomicName id="F9E1D817E4C1AC93EBE277FBD74DD9A1" LSID-HNS="urn:lsid:biosci.ohio-state.edu:osuc_concepts:33912" class="Insecta" family="Formicidae" genus="Pheidole" higherTaxonomySource="CoL" kingdom="Animalia" lsidName="Pheidole orbica Forel" lsidName-HNS="Pheidole orbica Forel" order="Hymenoptera" pageNumber="374" phylum="Arthropoda" rank="species" species="orbica">orbica</taxonomicName>
