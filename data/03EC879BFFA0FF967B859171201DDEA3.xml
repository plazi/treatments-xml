<subSubSection id="C35F6506FFA0FF967BDB91EC26B5D887" box="[201,966,644,668]" pageId="26" pageNumber="427" type="etymology">
<paragraph id="8BFA368DFFA0FF967BDB91EC26B5D887" blockId="26.[151,1436,607,1208]" box="[201,966,644,668]" pageId="26" pageNumber="427">
<emphasis id="B931EA9FFFA0FF967BDB91EC243CD887" bold="true" box="[201,335,644,668]" pageId="26" pageNumber="427">Etymology.</emphasis>
