<taxonomicName id="4C2E4D76FFFCFFE5075CFD23FE1052CF" authority="Hempell" authorityName="Hempell" authorityYear="1900" class="Insecta" family="Coccidae" genus="Lecanium" higherTaxonomySource="GBIF" kingdom="Animalia" order="Hemiptera" pageId="14" pageNumber="13" phylum="Arthropoda" rank="species" species="obscurum">
