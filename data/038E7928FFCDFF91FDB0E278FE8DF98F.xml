<subSubSection id="C33D9BB5FFCEFF91FF7AE737FB43FC81" box="[198,1208,791,818]" pageId="14" pageNumber="15" type="etymology">
<paragraph id="8B98C83EFFCEFF91FF7AE737FB43FC81" blockId="14.[151,1436,151,1018]" box="[198,1208,791,818]" pageId="14" pageNumber="15">
<emphasis id="B953142CFFCEFF91FF7AE737FEB0FC82" bold="true" box="[198,331,791,817]" pageId="14" pageNumber="15">Etymology</emphasis>
