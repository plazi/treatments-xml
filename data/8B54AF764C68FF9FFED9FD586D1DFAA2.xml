<emphasis id="3189C2724C68FF9FFDBBFBB36DA0FBD5" bold="true" box="[618,720,1105,1129]" pageId="14" pageNumber="15">
<typeStatus id="DC46A0C24C68FF9FFDBBFBB36DA0FBD5" box="[618,720,1105,1129]" pageId="14" pageNumber="15">lectotype</typeStatus>
</emphasis>
