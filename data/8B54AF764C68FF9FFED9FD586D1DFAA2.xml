<collectionCode id="65EC86A54C68FF9FFB4EFBD66B9AFBF7" box="[1183,1258,1076,1099]" httpUri="http://grbio.org/cool/94p5-pepz" name="Iziko Museums of Cape Town" pageId="14" pageNumber="15">SAMC</collectionCode>
