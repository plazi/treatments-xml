<taxonomicName id="A799C7DB4CD069B32C6D875F0E329B77" LSID="828868" authority="Pintos &amp; P. Alvarado" authorityName="" class="Sordariomycetes" family="Apiosporaceae" genus="Arthirnium" higherTaxonomySource="GBIF" kingdom="Fungi" lsidName="Arthirnium esporlense" order="Xylariales" pageId="0" pageNumber="15" phylum="Ascomycota" rank="species" species="esporlense">Arthirnium esporlense Pintos &amp; P. Alvarado</taxonomicName>
