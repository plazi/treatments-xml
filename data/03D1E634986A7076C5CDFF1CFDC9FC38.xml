<quantity id="4C80FAC7986A7076C130FF68FB36FF4F" box="[1141,1252,234,256]" metricMagnitude="2" metricUnit="m" metricValue="5.0" metricValueMax="6.0" metricValueMin="4.0" pageId="57" pageNumber="58" unit="m" value="500.0" valueMax="600.0" valueMin="400.0">
