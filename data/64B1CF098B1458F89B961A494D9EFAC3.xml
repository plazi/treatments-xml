<taxonomicName id="324E550948541A4DC181DBFB99E8C57C" class="Agaricomycetes" family="Agaricaceae" genus="Micromphale" higherTaxonomySource="CoL" kingdom="Fungi" lsidName="Micromphale subsp. sect." order="Agaricales" pageId="7" pageNumber="8" phylum="Basidiomycota" rank="section" section="Perforantia" species="glabrosipes" subSpecies="sect.">Micromphale sect. Perforantia</taxonomicName>
