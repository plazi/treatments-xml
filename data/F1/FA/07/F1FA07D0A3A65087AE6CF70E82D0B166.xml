<taxonomicName class="Magnoliopsida" family="Asteraceae" genus="Ambrosia" higherTaxonomySource="CoL" kingdom="Plantae" lsidName="Ambrosia chamissonis" order="Asterales" pageId="0" pageNumber="57" phylum="Tracheophyta" rank="species" species="chamissonis">
<emphasis italics="true" pageId="0" pageNumber="57">Ambrosia chamissonis</emphasis>
</taxonomicName>
Greene (
<taxonomicName class="Magnoliopsida" family="Asteraceae" genus="Ambrosia" higherTaxonomySource="CoL" kingdom="Plantae" lsidName="" order="Asterales" pageId="0" pageNumber="57" phylum="Tracheophyta" rank="family">Asteraceae</taxonomicName>
), 
<taxonomicName authorityName="J. R. Benn" authorityYear="2008" class="Magnoliopsida" family="Solanaceae" genus="Solanum" higherTaxonomySource="CoL" kingdom="Plantae" lsidName="Solanum coquimbense" order="Solanales" pageId="0" pageNumber="57" phylum="Tracheophyta" rank="species" species="coquimbense">
<emphasis italics="true" pageId="0" pageNumber="57">Solanum coquimbense</emphasis>
</taxonomicName>
J.R.Benn. (
<taxonomicName class="Magnoliopsida" family="Solanaceae" genus="Solanum" higherTaxonomySource="CoL" kingdom="Plantae" lsidName="" order="Solanales" pageId="0" pageNumber="57" phylum="Tracheophyta" rank="family">Solanaceae</taxonomicName>
