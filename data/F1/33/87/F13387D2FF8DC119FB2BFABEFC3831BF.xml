<subSubSection pageId="18" pageNumber="19" type="etymology">
<paragraph blockId="18.[189,324,1471,1497]" box="[189,324,1471,1497]" pageId="18" pageNumber="19">
<heading bold="true" box="[189,324,1471,1497]" fontSize="11" level="3" pageId="18" pageNumber="19" reason="3">
