<subSubSection box="[192,648,962,986]" pageId="13" pageNumber="12" type="etymology">
<paragraph blockId="13.[192,648,962,986]" box="[192,648,962,986]" pageId="13" pageNumber="12">
<emphasis bold="true" box="[192,340,962,986]" pageId="13" pageNumber="12">Etymology</emphasis>
