<caption pageId="57" pageNumber="58" startId="57.[151,250,916,939]" targetBox="[164,1425,207,887]" targetPageId="57">
<paragraph blockId="57.[151,1436,916,968]" pageId="57" pageNumber="58">
<emphasis bold="true" box="[151,329,916,939]" pageId="57" pageNumber="58">FIGURE 42A–C</emphasis>
. 
<taxonomicName authority="Pešić &amp; Smit &amp; Saboori, 2012" authorityName="Pešić &amp; Smit &amp; Saboori" authorityYear="2012" box="[342,562,916,938]" class="Arachnida" family="Aturidae" genus="Haloaxonopsis" higherTaxonomySource="GBIF" kingdom="Animalia" order="Acari" pageId="57" pageNumber="58" phylum="Arthropoda" rank="species" species="salina" status="sp. nov.">
<emphasis box="[342,562,916,938]" italics="true" pageId="57" pageNumber="58">Haloaxonopsis salina</emphasis>
</taxonomicName>
<taxonomicNameLabel box="[567,647,917,938]" pageId="57" pageNumber="58" rank="species">
