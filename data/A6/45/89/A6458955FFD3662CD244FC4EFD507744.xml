<collectionCode box="[797,817,1484,1510]" country="Netherlands" lsid="urn:lsid:biocol.org:col:15678" name="Nationaal Herbarium Nederland, Leiden University branch" pageId="11" pageNumber="144" type="Herbarium">L</collectionCode>
