<subSubSection id="A35A4DC0C00A5062F1027DA919AA9E89" pageId="null" pageNumber="150" type="vernacular_name">
<paragraph id="A0874E2B270C1D23DD8BC0DC83D073AD" pageId="null" pageNumber="150">Arznei-Thymian</paragraph>
