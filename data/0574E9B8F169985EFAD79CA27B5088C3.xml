<subSubSection id="FBCAD45DF28EE80F2548065CC22DE2C5" pageId="0" pageNumber="13" type="diagnosis">
<paragraph id="4998A6CC3AE453EC19E5400F1EA6676D" pageId="0" pageNumber="13">Diagnosis.</paragraph>
<paragraph id="5F1D63422628F5277E0F8E851401C98D" pageId="0" pageNumber="13">
