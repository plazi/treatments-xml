<taxonomicName id="EB9986E93D668B5F8ED5FC54FC193838" authority="subsect. Asteroprason" box="[473,949,1015,1036]" class="Liliopsida" family="Amaryllidaceae" genus="Allium" kingdom="Plantae" order="Asparagales" pageId="2" pageNumber="30" phylum="Tracheophyta" rank="subSection" section="Asteroprason" subSection="Asteroprason">
