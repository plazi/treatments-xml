<taxonomicName id="F6A486BBA2A4021A112B42A2BD481E3B" LSID="42F0791B-AA40-5E6E-A61B-94459228D328" authority="A. Berger" authorityName="A. Berger" authorityYear="1922" class="Liliopsida" family="Asphodelaceae" genus="Aloe" higherTaxonomySource="CoL" kingdom="Plantae" lsidName="Aloe linearifolia" order="Asparagales" pageId="0" pageNumber="1" phylum="Tracheophyta" rank="species" species="linearifolia">Aloe linearifolia A.Berger</taxonomicName>
