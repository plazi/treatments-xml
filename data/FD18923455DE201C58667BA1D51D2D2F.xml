<paragraph id="6386D2B0E72EE4FEBF3201CE9E4FBA14" pageId="1" pageNumber="70">
<taxonomicName id="3A6916E7D31041C2AD2D4DF5C03DA839" authority="Linnaeus, 1758" authorityName="Linnaeus" authorityYear="1758" class="Insecta" family="Noctuidae" genus="Phalaena" higherTaxonomySource="GBIF" kingdom="Animalia" lsidName="Phalaena fuliginosa" order="Lepidoptera" pageId="1" pageNumber="70" phylum="Arthropoda" rank="species" species="fuliginosa">Phalaena fuliginosa</taxonomicName>
