<emphasis id="B96E2E5B7953FF9FBEA67956C961F885" bold="true" box="[151,273,1859,1883]" pageId="10" pageNumber="49">FIGURE 5</emphasis>
. 
<taxonomicName id="4C1A89CA7953FF9FBF2E7951CA7BF885" authorityName="Rafael &amp; Cumming" authorityYear="2009" box="[287,523,1860,1883]" class="Insecta" family="Empididae" genus="Macrostomus" kingdom="Animalia" order="Diptera" pageId="10" pageNumber="49" phylum="Arthropoda" rank="species" species="furcatus" status="n. sp.">
<emphasis id="B96E2E5B7953FF9FBF2E7951CA7BF885" box="[287,523,1860,1883]" italics="true" pageId="10" pageNumber="49">Macrostomus furcatus</emphasis>
</taxonomicName>
