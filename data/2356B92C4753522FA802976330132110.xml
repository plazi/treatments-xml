<paragraph id="707CE68720775B82F181980F842CF671" pageId="720" pageNumber="721">
Subgenus 
<taxonomicName id="845FDA1ED3BCF40005D9CF9990F1E9EB" LSID="2356B92C-4753-522F-A802-976330132110" authority="Bates, 1883" authorityName="Bates" authorityYear="1883" class="Hexapoda" family="Carabidae" genus="Harpalus" higherTaxonomySource="GBIF" kingdom="Animalia" lsidName="(Iridessus)" order="Coleoptera" pageId="720" pageNumber="721" phylum="Arthropoda" rank="subGenus" subGenus="Iridessus">Iridessus Bates, 1883</taxonomicName>
