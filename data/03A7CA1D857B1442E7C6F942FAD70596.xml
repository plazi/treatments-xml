. 
<typeStatus id="54B5C5A9857B1441E51BF88AFDA20078" box="[586,636,1801,1822]" pageId="17" pageNumber="362">Type</typeStatus>
species 
<taxonomicName id="4C0E0088857B1441E58FF88AFB7D0078" authority="Bloch &amp; Schneider, 1801" authorityName="Bloch &amp; Schneider" authorityYear="1801" box="[734,1187,1800,1822]" class="Elasmobranchii" family="Rajidae" genus="Raja" kingdom="Animalia" order="Rajiformes" pageId="17" pageNumber="362" phylum="Chordata" rank="species" species="asperrima">
<emphasis id="B97AA719857B1441E58FF88AFC5C0078" box="[734,898,1801,1822]" italics="true" pageId="17" pageNumber="362">Raja asperrima</emphasis>
Bloch &amp; Schneider, 1801
</taxonomicName>
; replacement name for 
<taxonomicName id="4C0E0088857B1441E796F8A4FDD0005A" authority="Muller &amp; Henle, 1837" authorityName="Muller &amp; Henle" authorityYear="1837" box="[199,526,1830,1852]" class="Elasmobranchii" family="Gymnuridae" genus="Gymnura" kingdom="Animalia" order="Myliobatiformes" pageId="17" pageNumber="362" phylum="Chordata" rank="genus">
