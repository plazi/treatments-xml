; 
<specimenCount id="9D5A2DC7FFD7FF8D9D3A4EA7FC87F9B3" box="[769,790,1517,1543]" pageId="60" pageNumber="61" type="female">♀</specimenCount>
<quantity id="4CA44BABFFD7FF8D9D264EA6FC2AF9B3" box="[797,955,1516,1543]" metricMagnitude="-4" metricUnit="m" metricValue="8.7" metricValueMax="9.5" metricValueMin="7.9" pageId="60" pageNumber="61" unit="mm" value="0.87" valueMax="0.95" valueMin="0.79">0.79–0.95mm</quantity>
. VW/HW = 
<specimenCount id="9D5A2DC7FFD7FF8D9A7C4EA7FBCDF9B3" box="[1095,1116,1517,1543]" pageId="60" pageNumber="61" type="male">♂</specimenCount>
0.39; 
