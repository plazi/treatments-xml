<taxonomicName id="4C5C9DCDFFD6FF8C9CFF4D11FCB8F9C1" authorityName="Loew" authorityYear="1874" box="[708,809,1627,1653]" class="Insecta" family="Asilidae" genus="Lasiopogon" kingdom="Animalia" order="Diptera" pageId="61" pageNumber="62" phylum="Arthropoda" rank="species" species="opaculus">
