<taxonomicName id="6FFBE2CDE92EDC2556FFAD93C3A09370" class="Dicotyledoneae" family="Fagaceae" genus="Quercus" higherTaxonomySource="GBIF" kingdom="Plantae" lsidName="Quercus rugosa" order="Fagales" pageId="0" pageNumber="75" phylum="Angiospermae" rank="species" species="rugosa">
<emphasis id="BFBE5AA8A498D60165D5D2F035988588" italics="true" pageId="0" pageNumber="75">Quercus rugosa</emphasis>
</taxonomicName>
<normalizedToken id="E9F1BCF7F3B21CFD5463127A1775197B" originalValue="Née">Nee</normalizedToken>
, 
<taxonomicName id="006FBA48B67FF3DBC78DB874E67965FD" class="Magnoliopsida" family="Fabaceae" genus="Inga" higherTaxonomySource="CoL" kingdom="Plantae" lsidName="Inga vera" order="Fabales" pageId="0" pageNumber="75" phylum="Tracheophyta" rank="species" species="vera">
<emphasis id="FD1AB5D921C24E60B719EE9B84E52DDD" italics="true" pageId="0" pageNumber="75">Inga vera</emphasis>
</taxonomicName>
Willd, 
<taxonomicName id="D917EB1D04F538686CC750A6DF8F5A19" authorityName="Trofimov &amp; Rohwer" authorityYear="2016" baseAuthorityName="Sw." class="Magnoliopsida" family="Lauraceae" genus="Damburneya" higherTaxonomySource="GBIF" kingdom="Plantae" lsidName="Damburneya coriacea" order="Laurales" pageId="0" pageNumber="75" phylum="Tracheophyta" rank="species" species="coriacea">
<emphasis id="16384769797C415E55817A7C94F697D7" italics="true" pageId="0" pageNumber="75">Damburneya coriacea</emphasis>
