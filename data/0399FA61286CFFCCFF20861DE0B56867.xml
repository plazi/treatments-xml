and 
<taxonomicName id="4C3030F42860FFCDFD9E8797E3866CD1" box="[553,675,2005,2027]" class="Insecta" family="Nolidae" genus="Maculonola" kingdom="Animalia" order="Lepidoptera" pageId="42" pageNumber="289" phylum="Arthropoda" rank="genus" status="gen. n.">
