<taxonomicName id="4C1DB0E8FFF4A127D57B4601ABA1F8C9" box="[557,652,1889,1910]" class="Insecta" family="Nepticulidae" genus="Stigmella" kingdom="Animalia" order="Lepidoptera" pageId="13" pageNumber="114" phylum="Arthropoda" rank="genus">
