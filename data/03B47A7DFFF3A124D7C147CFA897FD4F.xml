<emphasis id="B9691779FFF4A127D30C4601AD43F8C9" box="[1114,1134,1889,1910]" italics="true" pageId="13" pageNumber="114">S.</emphasis>
species 610; 52, S. 
<taxonomicName id="4C1DB0E8FFF4A127D2164601A898F82A" authority="Remeikis, Diskus &amp; Stonis" authorityName="Remeikis, Diskus &amp; Stonis" class="Insecta" family="Nepticulidae" genus="Stigmella" kingdom="Animalia" order="Lepidoptera" pageId="13" pageNumber="114" phylum="Arthropoda" rank="species" species="latifoliae" status="sp. nov.">
<emphasis id="B9691779FFF4A127D2164601ACB1F8C9" box="[1344,1436,1889,1910]" italics="true" pageId="13" pageNumber="114">latifoliae</emphasis>
Remeikis, Diškus &amp; Stonis
</taxonomicName>
, 
<emphasis id="B9691779FFF4A127D69546E0AB3AF82A" bold="true" box="[451,535,1920,1941]" pageId="13" pageNumber="114">
<taxonomicNameLabel id="A25AAA02FFF4A127D69546E0AB3AF82A" box="[451,535,1920,1941]" pageId="13" pageNumber="114" rank="species">sp. nov.</taxonomicNameLabel>
</emphasis>
, not belonging to the type-series; 53, 
<taxonomicName id="4C1DB0E8FFF4A127D4F846E0AC24F82A" authority="Diskus &amp; Stonis" authorityName="Diskus &amp; Stonis" box="[942,1289,1919,1941]" class="Insecta" family="Nepticulidae" genus="Stigmella" kingdom="Animalia" order="Lepidoptera" pageId="13" pageNumber="114" phylum="Arthropoda" rank="species" species="baccharicola" status="sp. nov.">
<emphasis id="B9691779FFF4A127D4F846E0AD7CF82A" box="[942,1105,1920,1941]" italics="true" pageId="13" pageNumber="114">S. baccharicola</emphasis>
Diškus &amp; Stonis
</taxonomicName>
, 
<emphasis id="B9691779FFF4A127D24146E0AC46F82A" bold="true" box="[1303,1387,1920,1941]" pageId="13" pageNumber="114">
