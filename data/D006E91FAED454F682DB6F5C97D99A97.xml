<taxonomicName id="AA5CDFC173B884F5229AAC2AF3987EDC" LSID="D006E91FAED454F682DB6F5C97D99A97" authority="D. Q. Dai &amp; K. D. Hyde" class="Dothideomycetes" family="Shiraiaceae" genus="Rubroshiraia" higherTaxonomySource="CoL" kingdom="Fungi" lsidName="Rubroshiraia" order="Pleosporales" pageId="0" pageNumber="1" phylum="Ascomycota" rank="genus">Rubroshiraia D.Q. Dai &amp; K.D. Hyde</taxonomicName>
