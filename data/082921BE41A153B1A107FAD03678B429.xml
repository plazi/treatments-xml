[
<taxonomicName id="556A5CD96D6DDC90284F23892E7CF7D5" authorityName="A.L.Jussieu" authorityYear="1789" class="Magnoliopsida" family="Basellaceae" genus="Anredera" higherTaxonomySource="CoL" kingdom="Plantae" lsidName="Anredera" order="Caryophyllales" pageId="0" pageNumber="47" phylum="Tracheophyta" rank="genus">
<emphasis id="4FCD072AEFED5BC17F098E2801031E79" italics="true" pageId="0" pageNumber="47">Anredera</emphasis>
