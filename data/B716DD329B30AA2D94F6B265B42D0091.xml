<taxonomicName id="F8BF17A79B30AA2D9513B33BB491051C" authority="Grube, 1878" authorityName="Grube" authorityYear="1878" box="[303,659,776,801]" class="Magnoliopsida" family="Ericaceae" genus="Phyllodoce" kingdom="Plantae" order="Ericales" pageId="8" pageNumber="7" phylum="Tracheophyta" rank="species" species="quadraticeps">
