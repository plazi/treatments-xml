<taxonomicName id="4C48D9A7FFA0B83FFB4D4FA060A8F8E7" authorityName="Kaydan &amp; Gullan" authorityYear="2012" box="[1261,1436,1772,1796]" class="Insecta" family="Pseudococcidae" genus="Ferrisia" kingdom="Animalia" order="Hemiptera" pageId="23" pageNumber="24" phylum="Arthropoda" rank="species" species="ecuadorensis">
