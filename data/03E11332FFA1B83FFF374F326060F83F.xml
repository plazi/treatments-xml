<location id="8E97F4FFFFA0B83FFDCA4E316799F877" LSID="urn:lsid:plazi:treatment:03E11332FFA1B83FFF374F326060F83F:8E97F4FFFFA0B83FFDCA4E316799F877" box="[618,685,1916,1940]" country="Brazil" municipality="Limeira" name="These" pageId="23" pageNumber="24" stateProvince="Sao Paulo">These</location>
<specimenCount id="9D4E69ADFFA0B83FFD144E31666CF877" box="[692,856,1916,1940]" pageId="23" pageNumber="24" type="generic">two specimens</specimenCount>
