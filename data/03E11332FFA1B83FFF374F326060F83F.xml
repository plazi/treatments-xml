, 
<collectingCountry id="F35FE2B4FFA0B83FFF374EED65EAF85B" box="[151,222,1952,1976]" name="Brazil" pageId="23" pageNumber="24">Brazil</collectingCountry>
, 
<date id="FFF684E4FFA0B83FFF4B4EED64AEF85B" box="[235,410,1952,1976]" pageId="23" pageNumber="24" value="1958-03-21">
<collectingDate id="EFB27D0CFFA0B83FFF4B4EED64AEF85B" box="[235,410,1952,1976]" pageId="23" pageNumber="24" value="1958-03-21">21 March 1958</collectingDate>
</date>
by 
<collectorName id="26BDC7F2FFA0B83FFE674EED6753F85B" box="[455,615,1952,1976]" pageId="23" pageNumber="24">S. E. Flanders</collectorName>
[S&amp;R # 
<date id="FFF684E4FFA0B83FFD6B4EED660EF85B" box="[715,826,1952,1976]" pageId="23" pageNumber="24" value="1805-02-02">
<collectingDate id="EFB27D0CFFA0B83FFD6B4EED660EF85B" box="[715,826,1952,1976]" pageId="23" pageNumber="24" value="1805-02-02">1805-II-2</collectingDate>
