<quantity id="4CB00FC1FFA0B83FFDBE4E4267F2F8C4" box="[542,710,1807,1831]" metricMagnitude="-3" metricUnit="m" metricValue="2.4349999999999996" metricValueMax="2.57" metricValueMin="2.3" pageId="23" pageNumber="24" unit="mm" value="2.4349999999999996" valueMax="2.57" valueMin="2.3">2.30–2.57 mm</quantity>
long, 
<quantity id="4CB00FC1FFA0B83FFCB44E42668EF8C4" box="[788,954,1807,1831]" metricMagnitude="-3" metricUnit="m" metricValue="1.22" metricValueMax="1.3" metricValueMin="1.14" pageId="23" pageNumber="24" unit="mm" value="1.22" valueMax="1.3" valueMin="1.14">1.14–1.30 mm</quantity>
