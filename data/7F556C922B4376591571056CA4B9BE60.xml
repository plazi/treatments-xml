<paragraph id="726C11809CE9CFF283CA462660245A50" pageId="null" pageNumber="551">
<taxonomicName id="DF53EC639EDCE16E3A2A677A943C9EE8" authority="L." class="Liliopsida" family="Liliaceae" genus="Tulipa" kingdom="Plantae" order="Liliales" pageId="null" pageNumber="551" phylum="Tracheophyta" rank="species" species="gesneriana">
