<emphasis id="B915EAD1FF83FF808396FE3BC776FE32" bold="true" box="[199,322,441,468]" pageId="14" pageNumber="153">Diagnosis.</emphasis>
<taxonomicName id="4C614D40FF83FF808216FE3BC47BFE35" authorityName="Busanello &amp; Irmler &amp; Caron" authorityYear="2020" box="[327,591,441,467]" class="Insecta" family="Staphylinidae" genus="Pseudastenus" higherTaxonomySource="GBIF,CoL" kingdom="Animalia" order="Coleoptera" pageId="14" pageNumber="153" phylum="Arthropoda" rank="species" species="schubarti">
