<taxonomicName id="4A7051D68D62CD0C0972955BA89E9647" authority="Vill." class="Magnoliopsida" family="Caprifoliaceae" genus="Knautia" kingdom="Plantae" order="Dipsacales" pageId="null" pageNumber="348" phylum="Tracheophyta" rank="species" species="purpurea">
