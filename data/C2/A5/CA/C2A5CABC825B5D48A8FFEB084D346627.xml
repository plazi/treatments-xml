<emphasis italics="true" pageId="47" pageNumber="48">Sintenis</emphasis>
1335, 
<emphasis italics="true" pageId="47" pageNumber="48">Stainton &amp; Henderson</emphasis>
5763, 
<emphasis italics="true" pageId="47" pageNumber="48">Davis &amp; Hedge</emphasis>
