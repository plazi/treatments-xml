<number box="[151,249,968,993]" pageId="58" pageNumber="59" value="341.0" valueMax="550.0" valueMin="132.0">132–550</number>
<date box="[255,347,968,992]" pageId="58" pageNumber="59" value="2010-10-20">
x 
<number box="[276,347,968,992]" pageId="58" pageNumber="59" value="15.0" valueMax="20.0" valueMin="10.0">10–20</number>
</date>
(
<emphasis box="[362,458,968,992]" italics="true" pageId="58" pageNumber="59">
<number box="[362,404,968,992]" pageId="58" pageNumber="59" value="357.0">357</number>
