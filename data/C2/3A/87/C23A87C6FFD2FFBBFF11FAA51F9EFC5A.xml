<paragraph blockId="98.[151,1436,1736,1850]" pageId="98" pageNumber="99">
<emphasis bold="true" box="[151,293,1736,1758]" pageId="98" pageNumber="99">FIGURE 43.</emphasis>
<emphasis box="[305,505,1736,1758]" italics="true" pageId="98" pageNumber="99">
<taxonomicName box="[305,500,1736,1758]" class="Demospongiae" family="Aplysinidae" genus="Aplysina" kingdom="Animalia" order="Verongida" pageId="98" pageNumber="99" phylum="Porifera" rank="species" species="sciophila">
<taxonomicName box="[305,394,1736,1758]" class="Demospongiae" family="Aplysinidae" genus="Aplysina" higherTaxonomySource="CoL" kingdom="Animalia" order="Verongiida" pageId="98" pageNumber="99" phylum="Porifera" rank="genus">Aplysina</taxonomicName>
sciophila
