<emphasis id="B946A84C1C79C345C8F2A4E738E56871" bold="true" box="[151,689,506,532]" pageId="2" pageNumber="451">
<emphasis id="B946A84C1C79C345C8F2A4E738196871" bold="true" box="[151,589,506,532]" italics="true" pageId="2" pageNumber="451">
<taxonomicName id="4C320FDD1C79C345C8F2A4E73B406871" box="[151,276,506,532]" class="Insecta" family="Nymphalidae" genus="Bebearia" kingdom="Animalia" order="Lepidoptera" pageId="2" pageNumber="451" phylum="Arthropoda" rank="species" species="tentyris">B. tentyris</taxonomicName>
, 
<taxonomicName id="4C320FDD1C79C345C944A4E73BDD6871" box="[289,393,506,532]" class="Insecta" family="Nymphalidae" genus="Bebearia" kingdom="Animalia" order="Lepidoptera" pageId="2" pageNumber="451" phylum="Arthropoda" rank="species" species="osyris">B. osyris</taxonomicName>
and 
<taxonomicName id="4C320FDD1C79C345C9A3A4E738196871" box="[454,589,506,532]" class="Insecta" family="Nymphalidae" genus="Bebearia" kingdom="Animalia" order="Lepidoptera" pageId="2" pageNumber="451" phylum="Arthropoda" rank="species" species="oshogbo" status="sp. nov.">B. oshogbo</taxonomicName>
