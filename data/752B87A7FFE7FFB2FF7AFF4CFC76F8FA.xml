(2014: 289)
</bibRefCitation>
and 
<taxonomicName id="3A824D32FFE7FFB2FCB6FA20FBF8FA2A" authority="He &amp; Sun" authorityName="He &amp; Sun" box="[836,1114,1432,1459]" class="Liliopsida" family="Asparagaceae" genus="Aspidistra" kingdom="Plantae" order="Asparagales" pageId="4" pageNumber="187" phylum="Tracheophyta" rank="species" species="pingfaensis">
