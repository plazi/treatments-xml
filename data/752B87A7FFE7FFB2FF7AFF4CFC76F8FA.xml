<taxonomicName id="3A824D32FFE7FFB2FC4CFACCFB77FA17" authority="He &amp; Xu" authorityName="He &amp; Xu" box="[958,1237,1396,1423]" class="Liliopsida" family="Asparagaceae" genus="Aspidistra" kingdom="Plantae" order="Asparagales" pageId="4" pageNumber="187" phylum="Tracheophyta" rank="species" species="chishuiensis">
