<taxonomicName id="B88F4D71FF89FFD3FDBBFE1EFCFA4DD7" authorityName="Fairmaire" authorityYear="1882" box="[627,780,476,500]" class="Insecta" family="Meloidae" genus="Lydomorphus" higherTaxonomySource="GBIF" kingdom="Animalia" order="Coleoptera" pageId="30" pageNumber="31" phylum="Arthropoda" rank="genus">
<emphasis id="4DFBEAE0FF89FFD3FDBBFE1EFCFA4DD7" box="[627,780,476,500]" italics="true" pageId="30" pageNumber="31">Lydomorphus</emphasis>
</taxonomicName>
and 
<taxonomicName id="B88F4D71FF89FFD3FC8AFE1EFC484DD7" authority="Bologna &amp; Amore &amp; Pitzalis, 2018" authorityName="Bologna &amp; Amore &amp; Pitzalis" authorityYear="2018" box="[834,958,476,500]" class="Insecta" family="Meloidae" genus="Dilatilydus" kingdom="Animalia" order="Coleoptera" pageId="30" pageNumber="8" phylum="Arthropoda" rank="genus" status="gen. n">
<emphasis id="4DFBEAE0FF89FFD3FC8AFE1EFC484DD7" box="[834,958,476,500]" italics="true" pageId="30" pageNumber="31">Dilatilydus</emphasis>
</taxonomicName>
.
</paragraph>
