<taxonomicName id="B88F4D71FF8AFFD0FEE1FCE2FD3E4F17" authority="Peringuey, 1888" authorityName="Peringuey" authorityYear="1888" box="[297,712,798,821]" class="Insecta" family="Meloidae" genus="Lytta" kingdom="Animalia" order="Coleoptera" pageId="29" pageNumber="30" phylum="Arthropoda" rank="species" species="mesembryanthemi">
