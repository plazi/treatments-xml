<taxonomicName class="Dicotyledoneae" family="Rosaceae" genus="P." higherTaxonomySource="GBIF" kingdom="Plantae" lsidName="P. tahsiangi" order="Rosales" pageId="0" pageNumber="1" phylum="Angiospermae" rank="species" species="tahsiangi">
