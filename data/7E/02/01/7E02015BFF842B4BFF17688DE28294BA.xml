<emphasis box="[961,1142,1696,1719]" italics="true" pageId="1" pageNumber="585">
<taxonomicName box="[961,1025,1696,1719]" class="Insecta" family="Tetrigidae" genus="Tetrix" kingdom="Animalia" order="Orthoptera" pageId="1" pageNumber="585" phylum="Arthropoda" rank="genus">Tetrix</taxonomicName>
