<paragraph pageId="3" pageNumber="32">Type species.</paragraph>
<paragraph pageId="3" pageNumber="32">
<taxonomicName genus="Ceratgergithus" lsidName="Ceratgergithus spinosus" pageId="3" pageNumber="32" rank="species" species="spinosus">Ceratgergithus spinosus</taxonomicName>
