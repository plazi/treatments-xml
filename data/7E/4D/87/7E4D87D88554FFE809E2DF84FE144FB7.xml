<emphasis bold="true" box="[192,468,475,501]" pageId="5" pageNumber="4">Taxonomic position of</emphasis>
<taxonomicName authority="Werner, 1936" authorityName="Werner" authorityYear="1936" class="Arachnida" family="Buthidae" genus="Babycurus" kingdom="Animalia" order="Scorpiones" pageId="5" pageNumber="4" phylum="Arthropoda" rank="species" species="ornatus">
<emphasis bold="true" pageId="5" pageNumber="4">
<emphasis bold="true" box="[476,706,475,502]" italics="true" pageId="5" pageNumber="4">Babycurus ornatus</emphasis>
