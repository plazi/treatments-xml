E 
<taxonomicName id="EA900D5CF5C98E69654CC86DB2B293E4" LSID="E1DCE10C-6A24-5CE3-A6BF-26AE0B46A63D" authority="A. Berger" authorityName="A. Berger" authorityYear="1906" class="Liliopsida" family="Asphodelaceae" genus="Aloe" higherTaxonomySource="CoL" kingdom="Plantae" lsidName="Aloe candelabrum" order="Asparagales" pageId="0" pageNumber="1" phylum="Tracheophyta" rank="species" species="candelabrum">Aloe candelabrum A.Berger</taxonomicName>
