<taxonomicName id="E937B327B9DAED7CBA6EA988F59291F4" authorityName="Mill" authorityYear="1768" class="Liliopsida" family="Asphodelaceae" genus="Aloe" higherTaxonomySource="CoL" kingdom="Plantae" lsidName="Aloe ferox" order="Asparagales" pageId="0" pageNumber="1" phylum="Tracheophyta" rank="species" species="ferox">
