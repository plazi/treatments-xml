<taxonomicName authorityName="Butaud" authorityYear="2015" class="Magnoliopsida" family="Malpighiaceae" genus="Stigmaphyllon" higherTaxonomySource="CoL" kingdom="Plantae" lsidName="Stigmaphyllon patricianum-firmenichianum" order="Malpighiales" pageId="1" pageNumber="120" phylum="Tracheophyta" rank="species" species="patricianum-firmenichianum">
