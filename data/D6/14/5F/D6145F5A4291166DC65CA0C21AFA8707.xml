<taxonomicName class="Magnoliopsida" family="Malpighiaceae" genus="Stigmaphyllon" higherTaxonomySource="CoL" kingdom="Plantae" lsidName="Stigmaphyllon" order="Malpighiales" pageId="1" pageNumber="120" phylum="Tracheophyta" rank="genus">
