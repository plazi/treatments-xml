<taxonomicName authorityName="Kataev &amp; Shilenkov" authorityYear="1990" class="Hexapoda" family="Carabidae" genus="Harpalus" higherTaxonomySource="GBIF" kingdom="Animalia" lsidName="" order="Coleoptera" pageId="702" pageNumber="703" phylum="Arthropoda" rank="subSpecies" species="vittatus" subSpecies="kiselevi">
