</taxonomicName>
and 
<taxonomicName authorityName="LeConte" authorityYear="1863" class="Hexapoda" family="Carabidae" genus="Nebria" higherTaxonomySource="GBIF" kingdom="Animalia" lsidName="" order="Coleoptera" pageId="139" pageNumber="140" phylum="Arthropoda" rank="species" species="diversa">
<emphasis italics="true" pageId="139" pageNumber="140">Nebria diversa</emphasis>
