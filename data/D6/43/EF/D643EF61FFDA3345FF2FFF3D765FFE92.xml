<paragraph blockId="2.[166,896,957,1006]" box="[166,896,984,1006]" pageId="2" pageNumber="197">
<typeStatus box="[166,215,984,1006]" pageId="2" pageNumber="197">Type</typeStatus>
species: 
<taxonomicName authority="Hendel, 1934" authorityName="Hendel" authorityYear="1934" box="[298,646,984,1006]" class="Insecta" family="Pyrgotidae" genus="Prohypotyphla" kingdom="Animalia" order="Diptera" pageId="2" pageNumber="197" phylum="Arthropoda" rank="species" species="scalaris">
