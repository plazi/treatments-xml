<emphasis italics="true" pageId="1" pageNumber="72">E. gracilipes</emphasis>
(
<bibRefCitation author="Miers, E" box="[241,383,494,517]" pageId="1" pageNumber="72" pagination="1 - 362" refId="ref7554" refString="Miers, E. J., 1886. Report on the Brachyura collected by H. M. S. ' Challenger' during the years 1873 - 1876. In: Report on the Scientific Results of the Exploring Voyage of H. M. S. ' Challenger', Zoology, Part 49, 17: 1 - 362, 29 pls." type="book chapter" year="1886">Miers, 1886</bibRefCitation>
)
</taxonomicName>
, 
<taxonomicName authority="Alcock, 1896" authorityName="Alcock" authorityYear="1896" box="[402,748,494,517]" class="Malacostraca" family="Ethusidae" genus="Ethusina" kingdom="Animalia" order="Decapoda" pageId="1" pageNumber="72" phylum="Arthropoda" rank="species" species="investigatoris">
<emphasis box="[402,587,494,517]" italics="true" pageId="1" pageNumber="72">E. investigatoris</emphasis>
<bibRefCitation author="Alcock, A" box="[595,748,494,517]" pageId="1" pageNumber="72" pagination="134 - 296" refId="ref6213" refString="Alcock, A., 1896. Materials for a carcinological fauna of India. No. 2. The Brachyura Oxystoma. Journal of the Asiatic Society of Bengal, 65 (2): 134 - 296, pls 6 - 8." type="journal article" year="1896">Alcock, 1896</bibRefCitation>
</taxonomicName>
, 
<taxonomicName authority="Chen, 1987" authorityName="Chen" authorityYear="1987" box="[113,390,527,550]" class="Malacostraca" family="Ethusidae" genus="Ethusina" kingdom="Animalia" order="Decapoda" pageId="1" pageNumber="72" phylum="Arthropoda" rank="species" species="longipes">
<emphasis box="[113,243,527,550]" italics="true" pageId="1" pageNumber="72">E. longipes</emphasis>
