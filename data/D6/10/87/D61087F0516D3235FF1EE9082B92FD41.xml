<quantity box="[532,618,1124,1151]" metricMagnitude="-3" metricUnit="m" metricValue="4.5" pageId="8" pageNumber="526" unit="mm" value="4.5">4.5 mm</quantity>
(
<typeStatus box="[632,737,1125,1152]" pageId="8" pageNumber="526">holotype</typeStatus>
