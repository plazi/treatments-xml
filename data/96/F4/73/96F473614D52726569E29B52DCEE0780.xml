<taxonomicName class="Insecta" family="Chrysomelidae" genus="Cephaloleia" higherTaxonomySource="CoL" kingdom="Animalia" lsidName="Cephaloleia apicicornis" order="Coleoptera" pageId="220" pageNumber="221" phylum="Arthropoda" rank="species" species="apicicornis">Cephaloleia apicicornis</taxonomicName>
, 
<taxonomicName class="Insecta" family="Chrysomelidae" genus="Cephaloleia" higherTaxonomySource="CoL" kingdom="Animalia" lsidName="Cephaloleia corallina" order="Coleoptera" pageId="220" pageNumber="221" phylum="Arthropoda" rank="species" species="corallina">Cephaloleia corallina</taxonomicName>
, 
<taxonomicName class="Insecta" family="Chrysomelidae" genus="Cephaloleia" higherTaxonomySource="CoL" kingdom="Animalia" lsidName="Cephaloleia halli" order="Coleoptera" pageId="220" pageNumber="221" phylum="Arthropoda" rank="species" species="halli">Cephaloleia halli</taxonomicName>
, and 
<taxonomicName class="Insecta" family="Chrysomelidae" genus="Cephaloleia" higherTaxonomySource="CoL" kingdom="Animalia" lsidName="Cephaloleia ochra" order="Coleoptera" pageId="220" pageNumber="221" phylum="Arthropoda" rank="species" species="ochra">Cephaloleia ochra</taxonomicName>
