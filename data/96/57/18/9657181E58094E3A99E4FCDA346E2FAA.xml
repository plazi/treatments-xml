<quantity box="[696,834,1098,1120]" metricMagnitude="-3" metricUnit="m" metricValue="6.125" metricValueMax="6.6" metricValueMin="5.65" pageId="2" pageNumber="937" unit="mm" value="6.125" valueMax="6.6" valueMin="5.65">5.65-6.6 mm</quantity>
; total length without head: 
<quantity box="[212,345,1128,1150]" metricMagnitude="-3" metricUnit="m" metricValue="5.525" metricValueMax="5.9" metricValueMin="5.15" pageId="2" pageNumber="937" unit="mm" value="5.525" valueMax="5.9" valueMin="5.15">5.15-5.9 mm</quantity>
