<subSubSection pageId="0" pageNumber="27" type="lectotype (here designated)">
<paragraph pageId="0" pageNumber="27">Lectotype (here designated).</paragraph>
<paragraph pageId="0" pageNumber="27">
&quot; 
<taxonomicName authorityName="de Vriese" authorityYear="1854" class="Magnoliopsida" family="Goodeniaceae" genus="Dampiera" higherTaxonomySource="CoL" kingdom="Plantae" lsidName="Dampiera verreauxii" order="Asterales" pageId="0" pageNumber="27" phylum="Tracheophyta" rank="species" species="verreauxii">Dampiera verreauxii</taxonomicName>
