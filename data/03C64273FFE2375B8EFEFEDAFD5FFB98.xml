—Rio de Janeiro, Corcovado Forest, 
<number id="3DA7E142FFE2375B8A16FC97FB6DFC9B" box="[1151,1207,802,826]" pageId="10" pageNumber="51" value="1958.0">1958</number>
(H.B.D. Kettlewell) BM 
<number id="3DA7E142FFE2375B8EA2FCF2FEDEFCFE" box="[203,260,839,863]" pageId="10" pageNumber="51" value="1958.0">1958</number>
– 
<number id="3DA7E142FFE2375B8F7AFCF2FEE4FCFE" box="[275,318,839,863]" pageId="10" pageNumber="51" value="273.0">273</number>
; in 
<collectionCode id="ED7E6BA0FFE2375B8F01FCFDFE1AFCFE" box="[360,448,840,863]" pageId="10" pageNumber="51">BMNH</collectionCode>
. 
<typeStatus id="54D44DC7FFE2375B8FA2FCFDFDF7FCC1" box="[459,557,840,864]" pageId="10" pageNumber="51">Paratype</typeStatus>
female, 
<collectingCountry id="F378B3F5FFE2375B8CF8FCF3FD26FCFE" box="[657,764,838,863]" name="Brazil" pageId="10" pageNumber="51">
