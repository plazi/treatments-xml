, 
<taxonomicNameLabel id="08845808B40AFF9B6006F6A9FB688C90" box="[1116,1199,1951,1975]" pageId="54" pageNumber="55" rank="species">
<emphasis id="13B7E573B40AFF9B6006F6A9FB6E8C91" bold="true" box="[1116,1193,1951,1975]" pageId="54" pageNumber="55">sp. nov</emphasis>
