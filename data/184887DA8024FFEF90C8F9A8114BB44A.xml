<location id="953E60178025FFEF9263FEE417B3B44A" LSID="urn:lsid:plazi:treatment:184887DA8024FFEF90C8F9A8114BB44A:953E60178025FFEF9263FEE417B3B44A" box="[572,699,306,332]" county="Known" municipality="Santa Marta" name="Specimens" pageId="5" pageNumber="34" stateProvince="Veracruz de Ignacio de la Llave">Specimens</location>
