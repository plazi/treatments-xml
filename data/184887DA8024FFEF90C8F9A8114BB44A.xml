<materialsCitation id="20893C918025FFEF91B6FF4E1136B44A" collectionCode="LC" county="Known" location="Los Tuxtlas Biosphere Reserve" municipality="Santa Marta" pageId="5" pageNumber="34" specimenCount="1" stateProvince="Veracruz de Ignacio de la Llave">
