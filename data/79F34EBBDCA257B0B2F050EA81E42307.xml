<paragraph id="4318334A112C0AF74F9FFC849FF36D87" pageId="0" pageNumber="83">
<taxonomicName id="677C8C49863DA99E0F5CF7E033C25444" authority="Irwin, Winterton &amp; Metz, 2020" authorityName="Irwin &amp; Winterton &amp; Metz" authorityYear="2020" class="Insecta" family="Therevidae" genus="Calophytus" higherTaxonomySource="GBIF" kingdom="Animalia" lsidName="Calophytus monteithi" order="Diptera" pageId="0" pageNumber="83" phylum="Arthropoda" rank="species" species="monteithi">
<emphasis id="1AD7A64E3B947592F8CCF69D198F47DF" italics="true" pageId="0" pageNumber="83">Calophytus monteithi</emphasis>
</taxonomicName>
