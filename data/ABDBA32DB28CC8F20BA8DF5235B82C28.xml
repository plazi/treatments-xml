<taxonomicName id="1B8D6FAB4CA5A245814BBB07774D6113" LSID-ZBK="urn:lsid:zoobank.org:act:0F13D4E0-473C-499E-84BA-A9D9B43CBBF0" class="Actinopterygii" family="Cichlidae" genus="Lepidiolamprologus" higherTaxonomySource="CoL" kingdom="Animalia" lsidName-ZBK="Lepidiolamprologus Pellegrin 1904:(163) 295" order="Perciformes" pageNumber="47" phylum="Chordata" rank="genus">Lepidiolamprologus</taxonomicName>
