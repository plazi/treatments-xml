<taxonomicName id="4C764D1BFFB274475A03F9A227E33D1B" authorityName="Rosell &amp; Uriz" authorityYear="1997" box="[283,453,1551,1569]" class="Demospongiae" family="Clionaidae" genus="Pione" kingdom="Animalia" order="Clionaida" pageId="29" pageNumber="382" phylum="Porifera" rank="species" species="carpenteri">
