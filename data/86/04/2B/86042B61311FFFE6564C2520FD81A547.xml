<collectingRegion box="[530,590,1430,1454]" country="United Kingdom" name="Kent" pageId="4" pageNumber="690">Kent</collectingRegion>
, 
<location LSID="urn:lsid:plazi:treatment:86042B61311FFFE6564C2520FD81A547:0B72CCAC3118FFE7560A23AEFD4DA1B3" box="[604,712,1430,1454]" country="United Kingdom" municipality="West" name="Eynsford" pageId="4" pageNumber="690" stateProvince="Kent">Eynsford</location>
, 
