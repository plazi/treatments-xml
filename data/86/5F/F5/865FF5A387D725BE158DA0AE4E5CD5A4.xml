<taxonomicName LSID-HNS="urn:lsid:biosci.ohio-state.edu:osuc_concepts:145405" authority="Roger, 1863" authorityName="Forel" authorityYear="1891" class="Insecta" family="Formicidae" genus="Sima" higherTaxonomySource="GBIF" kingdom="Animalia" lsidName-HNS="Sima sahlbergii Forel" order="Hymenoptera" pageNumber="204" phylum="Arthropoda" rank="species" species="sahlbergii">Sima Sahlbergii</taxonomicName>
