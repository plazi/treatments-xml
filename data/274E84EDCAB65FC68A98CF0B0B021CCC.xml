<emphasis id="A24522E4BEB4743C0D49076B129B7F36" italics="true" pageId="3" pageNumber="66">Lapanthus vidaliorum</emphasis>
</taxonomicName>
(circle), 
<taxonomicName id="5BF1DEB3C35F3152609E2BC2B83F6D73" authorityName="Louzada &amp; Versieux" authorityYear="2010" baseAuthorityName="L. B. Sm." class="Liliopsida" family="Bromeliaceae" genus="Lapanthus" higherTaxonomySource="GBIF,CoL" kingdom="Plantae" lsidName="" order="Poales" pageId="3" pageNumber="66" phylum="Tracheophyta" rank="species" species="duartei">
<emphasis id="ECEB09B570D0210DEC62478E3F438DB2" italics="true" pageId="3" pageNumber="66">Lapanthus duartei</emphasis>
</taxonomicName>
(triangle), and 
<taxonomicName id="4803F869110D4809861DB5FCA15FF9DC" authorityName="Louzada &amp; Versieux" authorityYear="2010" baseAuthorityName="Versieux &amp; Leme" class="Liliopsida" family="Bromeliaceae" genus="Lapanthus" higherTaxonomySource="GBIF,CoL" kingdom="Plantae" lsidName="" order="Poales" pageId="3" pageNumber="66" phylum="Tracheophyta" rank="species" species="itambensis">
