<subSubSection pageId="1" pageNumber="254" type="nomenclature">
<paragraph pageId="1" pageNumber="254">
<taxonomicName LSID="8458B59C-2072-5620-9D8F-780268E69A8C" authority="Bassi &amp; Huemer, 2020" authorityName="Bassi &amp; Huemer" authorityYear="2020" class="Insecta" family="Crambidae" genus="Catoptria" higherTaxonomySource="CoL" kingdom="Animalia" lsidName="Catoptria samnitica" order="Lepidoptera" pageId="1" pageNumber="254" phylum="Arthropoda" rank="species" species="samnitica" status="sp. nov.">Catoptria samnitica</taxonomicName>
