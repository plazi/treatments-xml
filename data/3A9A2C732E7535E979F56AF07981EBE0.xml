<paragraph id="2B06F45F56319092074EBF642300AC04" pageId="0" pageNumber="11">Type species.</paragraph>
<paragraph id="424D8D16EC58DB64A7D9BF0A96909B16" pageId="0" pageNumber="11">
<taxonomicName id="6200EE524004E519F9175800BFD4F633" class="Liliopsida" family="Poaceae" genus="Leptaspis" higherTaxonomySource="CoL" kingdom="Plantae" lsidName="Leptaspis pege" order="Poales" pageId="0" pageNumber="11" phylum="Tracheophyta" rank="species" species="pege">Leptaspis pege</taxonomicName>
