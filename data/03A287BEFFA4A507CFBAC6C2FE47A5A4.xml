<collectingRegion id="49CFF84AFFA7A507CC5BC2F5FC35A49C" box="[886,940,677,703]" country="Papua New Guinea" name="Gulf" pageId="30" pageNumber="31">Gulf</collectingRegion>
of 
<location id="8ED46073FFA7A507CCFEC2F5FBB7A49C" LSID="urn:lsid:plazi:treatment:03A287BEFFA4A507CFBAC6C2FE47A5A4:8ED46073FFA7A507CCFEC2F5FBB7A49C" box="[979,1070,677,703]" municipality="The" name="Mannar" pageId="30" pageNumber="31" stateProvince="Gulf">Mannar</location>
(
<tableCitation id="C6890313FFA7A507CB10C2F5FB0FA49C" box="[1085,1174,677,703]" captionStart="TABLE 6" captionStartId="12.[151,236,198,220]" captionText="TABLE 6. Presence () of Conus species and total number of species per sampling site." pageId="30" pageNumber="31">Table 6</tableCitation>
) by trawling in 
<quantity id="4CF39B4DFFA7A507CA7EC2F5FF28A4C4" metricMagnitude="1" metricUnit="m" metricValue="2.25" metricValueMax="3.0" metricValueMin="1.5" pageId="30" pageNumber="31" unit="m" value="22.5" valueMax="30.0" valueMin="15.0">
<elevation id="0026D19BFFA7A507CA7EC2F5FF28A4C4" metricMagnitude="1" metricUnit="m" metricValue="2.25" metricValueMax="3.0" metricValueMin="1.5" pageId="30" pageNumber="31" unit="m" value="22.5" valueMax="30.0" valueMin="15.0">15–30 m</elevation>
