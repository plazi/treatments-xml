<taxonomicName id="E6C14D7DFFF9FFBCFCEEFD64FC9904D3" box="[826,879,686,709]" class="Insecta" family="Bombyliidae" genus="Usia" kingdom="Animalia" order="Diptera" pageId="44" pageNumber="45" phylum="Arthropoda" rank="genus">
