<subSubSection id="69DB6575FFF9FFBCFF13FD67FD63056F" pageId="44" pageNumber="45" type="diagnosis">
<paragraph id="217E36FEFFF9FFBCFF13FD67FD63056F" blockId="44.[151,1437,469,2006]" pageId="44" pageNumber="45">
<emphasis id="13B5EAECFFF9FFBCFF13FD67FEB704D0" bold="true" box="[199,321,685,710]" pageId="44" pageNumber="45">Diagnosis.</emphasis>
