and 
<taxonomicName id="4C318BA8FFAE780EFD82CC3156BCC73A" authority="L." box="[590,696,1319,1343]" class="Magnoliopsida" family="Ericaceae" genus="Erica" kingdom="Plantae" order="Ericales" pageId="4" pageNumber="55" phylum="Tracheophyta" rank="species" species="ciliaris">
