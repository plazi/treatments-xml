<quantity id="4CEA9B07FFBEFF9BE1BF27F1BA98FA5E" box="[215,229,1417,1442]" metricMagnitude="-3" metricUnit="kg" metricValue="6.0" pageId="18" pageNumber="219" unit="g" value="6.0">6</quantity>
