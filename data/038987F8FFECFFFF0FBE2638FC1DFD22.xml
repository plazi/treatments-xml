. 
<collectingMunicipality id="6BFBAC94FFECFFFA0DC523BEFB2FFBCF" box="[755,878,2002,2028]" pageId="1" pageNumber="273">Peninsular</collectingMunicipality>
: 
<collectingRegion id="49E4F80CFFECFFFA0C4F23BEFC3CFBCF" box="[889,1149,2002,2028]" country="Thailand" name="Nakhon Si Thammarat" pageId="1" pageNumber="273">Nakhon Si Thammarat</collectingRegion>
, 
<location id="8EFF6035FFECFFFA0BBF23BEFD56FBCE" LSID="urn:lsid:plazi:treatment:038987F8FFECFFFF0FBE2638FC1DFD22:8EFF6035FFECFFFA0BBF23BEFD56FBCE" box="[1161,1303,2002,2029]" country="Thailand" municipality="Peninsular" name="Khao Luang" pageId="1" pageNumber="273" stateProvince="Nakhon Si Thammarat">Khao Luang</location>
, 
