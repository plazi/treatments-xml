<taxonomicName id="B56CDC4FE0E2C4EA7FED2F3DFE5A68E5" class="Magnoliopsida" family="Solanaceae" genus="Solanum" higherTaxonomySource="CoL" kingdom="Plantae" lsidName="" order="Solanales" pageId="21" pageNumber="22" phylum="Tracheophyta" rank="species" species="nigrum">
