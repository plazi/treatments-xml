<taxonomicName id="3AC002161BF0C4F661F874F4545F6D32" class="Insecta" family="Erebidae" genus="Amatula" higherTaxonomySource="GBIF" kingdom="Animalia" lsidName="" order="Lepidoptera" pageId="21" pageNumber="22" phylum="Arthropoda" rank="genus">
