<typeStatus id="54BD3FD18E678046A26CA521FD7D3E36" box="[586,703,1838,1863]" pageId="4" pageNumber="577">Holotypus</typeStatus>
<taxonomicName id="4C06FAF08E678046A2EBA521FED83E1A" authority="Madruga, Siewert, Mielke &amp; Casagrande" authorityName="Madruga, Siewert, Mielke &amp; Casagrande" class="Insecta" family="Hesperiidae" genus="Drephalys" higherTaxonomySource="GBIF" kingdom="Animalia" order="Lepidoptera" pageId="4" pageNumber="577" phylum="Arthropoda" rank="species" species="citrinus" subGenus="Drephalys">
<emphasis id="B9725D618E678046A2EBA521FBF53E37" box="[717,1079,1838,1863]" italics="true" pageId="4" pageNumber="577">Drephalys (Drephalys) citrinus</emphasis>
