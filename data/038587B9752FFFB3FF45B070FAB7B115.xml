<subSubSection id="C3366524752FFFB3FF45B6D6FB97B2F5" box="[192,1146,1443,1467]" pageId="6" pageNumber="5" type="etymology">
<paragraph id="8B9336AF752FFFB3FF45B6D6FB97B2F5" blockId="6.[192,1146,1443,1467]" box="[192,1146,1443,1467]" pageId="6" pageNumber="5">
<emphasis id="B958EABD752FFFB3FF45B6D6FEB0B2F5" bold="true" box="[192,349,1443,1467]" pageId="6" pageNumber="5">Etymology.</emphasis>
Latin, 
<emphasis id="B958EABD752FFFB3FE30B6D6FDE4B2F5" box="[437,521,1443,1467]" italics="true" pageId="6" pageNumber="5">rubrus</emphasis>
