<paragraph pageId="0" pageNumber="1">
<taxonomicName authorityName="Xin-Fen Gao &amp; Meng Li" authorityYear="2020" class="Magnoliopsida" family="Rosaceae" genus="Sorbus" higherTaxonomySource="CoL" kingdom="Plantae" lsidName="Sorbus gongshanensis" order="Rosales" pageId="0" pageNumber="1" phylum="Tracheophyta" rank="species" species="gongshanensis">
