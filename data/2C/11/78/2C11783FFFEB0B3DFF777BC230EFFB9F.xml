<taxonomicName authorityName="Hornemann" authorityYear="1832" class="Liliopsida" family="Zosteraceae" genus="Zostera" kingdom="Plantae" order="Alismatales" pageId="3" pageNumber="284" phylum="Tracheophyta" rank="species" species="noltei" subGenus="Zosterella">
<emphasis box="[1209,1294,837,860]" italics="true" pageId="3" pageNumber="284">Zostera</emphasis>
(
<emphasis box="[1314,1427,836,860]" italics="true" pageId="3" pageNumber="284">Zosterella</emphasis>
) 
<emphasis box="[151,215,872,896]" italics="true" pageId="3" pageNumber="284">noltei</emphasis>
</taxonomicName>
.
</paragraph>
