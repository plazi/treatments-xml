(
<emphasis box="[368,481,1372,1396]" italics="true" pageId="1" pageNumber="282">Zosterella</emphasis>
) 
<emphasis box="[497,561,1372,1396]" italics="true" pageId="1" pageNumber="282">noltei</emphasis>
</taxonomicName>
, 
<date box="[574,742,1372,1397]" pageId="1" pageNumber="282" value="2015-08-06">6 August 2015</date>
