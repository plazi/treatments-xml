<emphasis box="[460,712,1573,1596]" italics="true" pageId="6" pageNumber="7">
<taxonomicName box="[460,605,1573,1596]" class="Insecta" family="Asilidae" genus="Pygommatius" higherTaxonomySource="CoL" kingdom="Animalia" order="Diptera" pageId="6" pageNumber="7" phylum="Arthropoda" rank="genus">Pygommatius</taxonomicName>
<taxonomicName authority="Scarbrough" authorityName="Scarbrough" box="[614,712,1573,1596]" pageId="6" pageNumber="7" rank="species" species="apoticius">apoticius</taxonomicName>
