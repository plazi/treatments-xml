<taxonomicName id="4C334D01FFACFF91FF4DFEA1FDDD727D" authority="Schenck, 1853" authorityName=", Schenck" authorityYear="1853" box="[144,563,356,383]" class="Insecta" family="Andrenidae" genus="Andrena" kingdom="Animalia" order="Hymenoptera" pageId="5" pageNumber="74" phylum="Arthropoda" rank="species" species="fulvicornis">
