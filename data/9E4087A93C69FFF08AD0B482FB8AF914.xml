<quantity id="D1119B5A3C6FFFF0897FB3D6FC63FB93" box="[824,896,1016,1040]" metricMagnitude="4" metricUnit="m" metricValue="5.0" pageId="5" pageNumber="63" unit="km" value="50.0">50 km</quantity>
