<emphasis id="1BC354707442BF56C9B2FFFCFC79FC63" box="[646,968,937,961]" italics="true" pageId="10" pageNumber="65">Aphilanthops quadrinotatus</emphasis>
<bibRefCitation id="4D26F5937442BF56C8ECFFFCFB22FC60" author="Ashmead" box="[984,1171,937,962]" pageId="10" pageNumber="65" refString="Ashmead, W. H. (1890) On the Hymenoptera of Colorado. Bulletin of the Colorado Biological Association, 1 (1889), 1 - 47." type="journal article" year="1890">Ashmead, 1890</bibRefCitation>
</taxonomicName>
] (
<taxonomicName id="EEB7F3E17442BF56CF84FFFCFA96FC60" authorityName="Latreille" authorityYear="1802" box="[1200,1319,937,962]" class="Insecta" family="Sphecidae" kingdom="Animalia" order="Hymenoptera" pageId="10" pageNumber="65" phylum="Arthropoda" rank="family">Sphecidae</taxonomicName>
) and 
<taxonomicName id="EEB7F3E17442BF56CE42FFFCFE23FC44" authority="Loew, 1863" authorityName="Loew" authorityYear="1863" class="Insecta" family="Bombyliidae" genus="Phthiria" kingdom="Animalia" order="Diptera" pageId="10" pageNumber="65" phylum="Arthropoda" rank="species" species="sulphurea">
<emphasis id="1BC354707442BF56CE42FFFCFEB7FC47" italics="true" pageId="10" pageNumber="65">Ph. sulphurea</emphasis>
<bibRefCitation id="4D26F5937442BF56CA39FF9BFE23FC44" author="Loew" box="[269,402,973,998]" pageId="10" pageNumber="65" refString="Loew, H. (1863) Diptera Americae septentrionalis indigena. Centuria tertia. Berliner Entomologische Zeitschrift, 7, 1 - 55. https: // doi. org / 10.1002 / mmnd. 18630070104" type="journal article" year="1863">Loew, 1863</bibRefCitation>
</taxonomicName>
reared from 
<emphasis id="1BC354707442BF56C911FF98FD36FC47" box="[549,647,973,997]" italics="true" pageId="10" pageNumber="65">Romelea</emphasis>
sp. (
<taxonomicName id="EEB7F3E17442BF56C98AFF98FC82FC44" authorityName="Olivier" authorityYear="1789" box="[702,819,973,998]" class="Insecta" family="Acrididae" kingdom="Animalia" order="Orthoptera" pageId="10" pageNumber="65" phylum="Arthropoda" rank="family">Acrididae</taxonomicName>
). The two last species of 
<taxonomicName id="EEB7F3E17442BF56CF65FF98FB1EFC47" authorityName="Meigen" authorityYear="1820" box="[1105,1199,973,997]" class="Insecta" family="Bombyliidae" genus="Phthiria" kingdom="Animalia" order="Diptera" pageId="10" pageNumber="65" phylum="Arthropoda" rank="genus">
