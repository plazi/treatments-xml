<taxonomicName id="FDE0848EFFA2B250F4BFFE77FDB6A4DF" authority="Lendenfeld, 1891" authorityName="Lendenfeld" authorityYear="1891" box="[246,594,443,469]" class="Calcarea" family="Sycanthidae" kingdom="Animalia" order="Leucosolenida" pageId="25" pageNumber="228" phylum="Porifera" rank="family">SYCANTHIDAE Lendenfeld, 1891</taxonomicName>
