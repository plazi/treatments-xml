<taxonomicName id="402822730AF963A22D6251ADA290EF9A" class="Sordariomycetes" family="Thyridiaceae" genus="T." kingdom="Fungi" lsidName="T. pluriloculosum" order="Myrmecridiales" pageId="0" pageNumber="147" phylum="Ascomycota" rank="species" species="pluriloculosum">
<emphasis id="50C65486CECED862E672C214624FA6DA" italics="true" pageId="0" pageNumber="147">T. pluriloculosum</emphasis>
