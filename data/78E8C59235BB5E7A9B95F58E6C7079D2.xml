<taxonomicName id="5A5F4A512571B1ADE44E474D4CD2FF2A" class="Sordariomycetes" family="Thyridiaceae" genus="T." kingdom="Fungi" lsidName="T. flavostromatum" order="Myrmecridiales" pageId="0" pageNumber="147" phylum="Ascomycota" rank="species" species="flavostromatum">
