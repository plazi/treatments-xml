<emphasis id="5C5291D8DCDA4B19325B1E102C5BAB90" bold="true" pageId="0" pageNumber="147">C</emphasis>
<taxonomicName id="1AC0E8F1D048C7CAB17B88F5BE11A2A0" class="Sordariomycetes" family="Thyridiaceae" genus="T." kingdom="Fungi" lsidName="T. punctulatum" order="Myrmecridiales" pageId="0" pageNumber="147" phylum="Ascomycota" rank="species" species="punctulatum">
<emphasis id="705DB8ACEA3E9A0A42F79F6725C3D7B1" italics="true" pageId="0" pageNumber="147">T. punctulatum</emphasis>
