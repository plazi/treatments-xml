, 
<taxonomicName id="2FFF4DEAFFB2FFCEFBB6196A84E4B1A8" authority="(Williston, 1987)" baseAuthorityName="Williston" baseAuthorityYear="1987" class="Insecta" family="Ephydridae" genus="Parydra" kingdom="Animalia" order="Diptera" pageId="37" pageNumber="836" phylum="Arthropoda" rank="species" species="humilis">
