<taxonomicName authority="Costa, 1851" authorityName="Costa" authorityYear="1851" class="Malacostraca" family="Scopelocheiridae" genus="Callisoma" higherTaxonomySource="GBIF" kingdom="Animalia" lsidName="Callisoma Barthelemyi" order="Amphipoda" pageId="3" pageNumber="4" phylum="Arthropoda" rank="species" species="Barthelemyi">
<emphasis italics="true" pageId="3" pageNumber="4">Callisoma Barthelemyi</emphasis>
