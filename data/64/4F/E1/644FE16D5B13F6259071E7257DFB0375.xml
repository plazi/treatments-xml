<paragraph pageId="41" pageNumber="90">
<taxonomicName class="Polychaeta" family="Asteraceae" genus="Polydora" higherTaxonomySource="CoL" kingdom="Plantae" lsidName="Polydora angustifolia" order="Asterales" pageId="41" pageNumber="90" phylum="Annelida" rank="species" species="angustifolia">
<emphasis italics="true" pageId="41" pageNumber="90">Polydora angustifolia</emphasis>
