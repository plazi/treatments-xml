<emphasis box="[727,774,680,705]" italics="true" pageId="2" pageNumber="153">max</emphasis>
</taxonomicName>
, 
<taxonomicName box="[787,887,679,705]" class="Insecta" family="Staphylinidae" genus="Xanthopygus" kingdom="Animalia" order="Coleoptera" pageId="2" pageNumber="153" phylum="Arthropoda" rank="species" species="oliveirae">
