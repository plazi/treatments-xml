<taxonomicName id="DFEBCCABFFD6FF8B09C88306FE4CFA39" authority="Zettel, 2021" authorityName="Zettel" authorityYear="2021" box="[217,445,1390,1411]" class="Insecta" family="Aphelocheiridae" genus="Aphelocheirus" higherTaxonomySource="GBIF" kingdom="Animalia" order="Hemiptera" pageId="2" pageNumber="1141" phylum="Arthropoda" rank="species" species="aschalewi" status="nov.sp.">
