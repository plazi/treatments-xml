A. 
<misspelling id="A9BD19CA00E22461D303957C23749D52" pageNumber="495" type="misspelled">balachowskyi</misspelling>
</emphasis>
Legrand, 
<number id="3DC3F155CA2BFFD8EDF1FE2F4509FE6E" box="[979,1036,450,476]" pageId="50" pageNumber="495" value="1982.0">1982</number>
</taxonomicName>
and 
<taxonomicName id="4C0B98F1CA2BFFD8EEF6FE054310FDB0" authority="Pinhey, 1964" authorityName="Pinhey" authorityYear="1964" box="[212,533,487,514]" class="Insecta" family="Coenagrionidae" genus="Aciagrion" higherTaxonomySource="GBIF,CoL" kingdom="Animalia" order="Odonata" pageId="50" pageNumber="495" phylum="Arthropoda" rank="species" species="nodosum">
<emphasis id="B97F3F60CA2BFFD8EEF6FE054065FDB0" box="[212,352,487,514]" italics="true" pageId="50" pageNumber="495">
A. 
<misspelling id="F26647DF9E1E7A7EA94F9119362A41A0" pageNumber="495" type="misspelled">nodosum</misspelling>
</emphasis>
(Pinhey, 
<number id="3DC3F155CA2BFFD8EFF1FE0A4308FDB0" box="[467,525,487,514]" pageId="50" pageNumber="495" value="1964.0">1964</number>
)
</taxonomicName>
but genetically nearer 
<taxonomicName id="4C0B98F1CA2BFFD8ED0AFE0541E4FD95" authority="Sjostedt, 1909" authorityName="Sjostedt" authorityYear="1909" class="Insecta" family="Coenagrionidae" genus="Aciagrion" higherTaxonomySource="GBIF,CoL" kingdom="Animalia" order="Odonata" pageId="50" pageNumber="495" phylum="Arthropoda" rank="species" species="gracile">
