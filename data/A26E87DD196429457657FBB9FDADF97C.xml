<subSubSection id="62DD6540196429477486FA1CFD36F97C" pageId="52" pageNumber="627" type="diagnosis">
<paragraph id="2A7836CB196429477486FA1CFE82FA13" blockId="52.[212,1172,1501,1691]" box="[212,320,1501,1524]" pageId="52" pageNumber="627">
