<taxonomicName id="EC0B7E19C7EBB8966B836051E69BF66B" class="Agaricomycetes" family="Hygrophoraceae" genus="Hygrophorus" higherTaxonomySource="CoL" kingdom="Fungi" lsidName="Hygrophorus" order="Agaricales" pageId="6" pageNumber="39" phylum="Basidiomycota" rank="genus">Hygrophorus</taxonomicName>
