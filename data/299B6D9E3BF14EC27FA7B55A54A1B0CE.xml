<taxonomicName id="733F9C1B2EA7AE8FC7F548A4D40F3220" authority="Enderlein, 1912" authorityName="Enderlein" authorityYear="1912" class="Insecta" family="Dolichopodidae" genus="Lichtwardtia" higherTaxonomySource="GBIF" kingdom="Animalia" lsidName="Lichtwardtia formosana" order="Diptera" pageId="0" pageNumber="63" phylum="Arthropoda" rank="species" species="formosana">Lichtwardtia formosana</taxonomicName>
