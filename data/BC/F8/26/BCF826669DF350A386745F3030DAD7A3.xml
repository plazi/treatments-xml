<subSubSection pageId="62" pageNumber="63" type="type">
<paragraph pageId="62" pageNumber="63">Type.</paragraph>
<paragraph pageId="62" pageNumber="63">
Based on 
<taxonomicName authorityName="Benoist" authorityYear="1921" class="Magnoliopsida" family="Convolvulaceae" genus="Convolvulus" higherTaxonomySource="CoL" kingdom="Plantae" lsidName="Convolvulus leucochnous" order="Solanales" pageId="62" pageNumber="63" phylum="Tracheophyta" rank="species" species="leucochnous">
<emphasis italics="true" pageId="62" pageNumber="63">Convolvulus leucochnous</emphasis>
