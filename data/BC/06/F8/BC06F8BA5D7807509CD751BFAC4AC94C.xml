<taxonomicName class="Monocotyledoneae" family="Pandanaceae" genus="Pandanus" higherTaxonomySource="GBIF" kingdom="Plantae" lsidName="" order="Pandanales" pageId="8" pageNumber="13" phylum="Angiospermae" rank="genus">
