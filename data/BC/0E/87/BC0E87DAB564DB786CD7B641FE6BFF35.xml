, 
<collectingRegion box="[1016,1073,1221,1245]" country="Brazil" name="Acre" pageId="6" pageNumber="469">Acre</collectingRegion>
, 
<collectingCountry box="[1086,1157,1220,1245]" name="Brazil" pageId="6" pageNumber="469">Brazil</collectingCountry>
