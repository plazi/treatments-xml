<td align="left" pageId="null" pageNumber="501" valign="bottom">
<taxonomicName class="Magnoliopsida" family="Asteraceae" genus="Senecio" kingdom="Plantae" order="Asterales" pageId="null" pageNumber="501" phylum="Tracheophyta" rank="species" species="vernalis">
