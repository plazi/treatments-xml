<taxonomicName baseAuthorityName="Michener" baseAuthorityYear="1989" class="Insecta" family="Colletidae" genus="Tetraglossula" higherTaxonomySource="GBIF" kingdom="Animalia" order="Hymenoptera" pageId="12" pageNumber="533" phylum="Arthropoda" rank="species" species="anthracina">
