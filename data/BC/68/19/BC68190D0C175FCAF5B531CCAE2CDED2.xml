<subSubSection pageId="null" pageNumber="241" type="vernacular_name">
<paragraph pageId="null" pageNumber="241">
Goldlackartiger 
<normalizedToken originalValue="Schöterich" pageId="null" pageNumber="241">Schoeterich</normalizedToken>
, 
<normalizedToken originalValue="Acker-Schöterich" pageId="null" pageNumber="241">Acker-Schoeterich</normalizedToken>
</paragraph>
</subSubSection>
