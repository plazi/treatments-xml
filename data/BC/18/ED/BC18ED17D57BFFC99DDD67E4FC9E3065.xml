<collectionCode LSID="urn:lsid:biocol.org:col:34795" box="[1251,1338,1352,1378]" httpUri="http://biocol.org/urn:lsid:biocol.org:col:34795" name="Field Museum of Natural History" pageId="7" pageNumber="56">FMNH</collectionCode>
