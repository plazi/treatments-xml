, and 
<taxonomicName authority="Tate" authorityName="Tate" box="[972,1353,1626,1652]" class="Mammalia" family="Didelphidae" genus="Marmosops" kingdom="Animalia" order="Didelphimorphia" pageId="3" pageNumber="52" phylum="Chordata" rank="species" species="parvidens">
