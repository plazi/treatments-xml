<taxonomicName id="89A82C5F054F07CDCBAB9F31A2690AE7" LSID-ZBK="urn:lsid:zoobank.org:act:34603111-87BE-467C-8532-236E69A386BF" class="Actinopterygii" family="Rivulidae" genus="Rivulus" higherTaxonomySource="CoL" kingdom="Animalia" lsidName-ZBK="Rivulus amanapira Costa 2004:7" order="Cyprinodontiformes" pageNumber="2" phylum="Chordata" rank="species" species="amanapira">R. amanapira Costa</taxonomicName>
