<taxonomicName id="128801D0FF94484FFDA54B61FDA8FE7C" box="[544,600,368,392]" class="Insecta" family="Arctiidae" genus="Balacra" kingdom="Animalia" order="Lepidoptera" pageId="19" pageNumber="170" phylum="Arthropoda" rank="species" species="flava">
