<paragraph blockId="1.[151,661,1183,1206]" box="[151,661,1183,1206]" pageId="1" pageNumber="24">
<typeStatus box="[151,200,1185,1206]" pageId="1" pageNumber="24">Type</typeStatus>
species: 
<taxonomicName authority="Dalman, 1826" authorityName="Dalman" authorityYear="1826" box="[294,661,1183,1206]" class="Insecta" family="Coccidae" genus="Coccus" kingdom="Animalia" order="Hemiptera" pageId="1" pageNumber="24" phylum="Arthropoda" rank="species" species="hemicryphus">
<emphasis bold="true" box="[294,511,1183,1205]" italics="true" pageId="1" pageNumber="24">Coccus hemicryphus</emphasis>
<bibRefCitation author="Dalman" box="[517,661,1184,1206]" pageId="1" pageNumber="24" refString="Dalman, J. W. 1826. Om nagra Svenska Arter af Coccus; samt deinuti dem forekommande Parasit-insecter. Kongliga Vetenskap-Akademiens Handlingar (1825), 350 - 374." type="journal article" year="1826">
