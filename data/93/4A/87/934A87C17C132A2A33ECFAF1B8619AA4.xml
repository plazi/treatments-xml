<typeStatus box="[151,204,1422,1446]" pageId="0" pageNumber="145">Type</typeStatus>
species: 
<taxonomicName authority="N. Singh, Kirti &amp; Datta" authorityName="Singh &amp; Kirti &amp; Datta" authorityYear="2019" box="[302,843,1422,1446]" class="Insecta" family="Erebidae" genus="Parvuspina" higherTaxonomySource="GBIF" kingdom="Animalia" order="Lepidoptera" pageId="0" pageNumber="145" phylum="Arthropoda" rank="species" species="tawaghatensis" status="sp. nov.">
<emphasis box="[302,584,1422,1446]" italics="true" pageId="0" pageNumber="145">Parvuspina tawaghatensis</emphasis>
N. Singh, Kirti &amp; Datta
</taxonomicName>
, 
<emphasis bold="true" box="[854,940,1422,1446]" pageId="0" pageNumber="145">
