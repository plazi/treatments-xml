<subSubSection pageId="18" pageNumber="53" type="diagnosis">
<paragraph blockId="18.[151,1436,511,860]" pageId="18" pageNumber="53">
<emphasis bold="true" box="[199,321,655,680]" pageId="18" pageNumber="53">Diagnosis.</emphasis>
