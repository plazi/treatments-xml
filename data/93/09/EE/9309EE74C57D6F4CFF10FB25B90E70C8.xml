</taxonomicName>
, 
<taxonomicName authority="Ho, Endo &amp; Sakamaki, 2008" authorityName="Ho, Endo &amp; Sakamaki" authorityYear="2008" box="[450,878,871,896]" class="Actinopterygii" family="Ogcocephalidae" genus="Halicmetus" higherTaxonomySource="GBIF" kingdom="Animalia" order="Lophiiformes" pageId="2" pageNumber="181" phylum="Chordata" rank="species" species="niger">
