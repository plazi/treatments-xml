<taxonomicName authority="Ho &amp; Last, 2018" authorityName="Ho &amp; Last" authorityYear="2018" box="[1206,1318,836,861]" class="Actinopterygii" family="Ogcocephalidae" genus="Halicmetus" higherTaxonomySource="GBIF" kingdom="Animalia" order="Lophiiformes" pageId="2" pageNumber="181" phylum="Chordata" rank="species" species="drypus" status="n. sp.">
<emphasis box="[1206,1318,836,861]" italics="true" pageId="2" pageNumber="181">H. drypus</emphasis>
</taxonomicName>
<emphasis bold="true" box="[1327,1392,836,861]" pageId="2" pageNumber="181">
<taxonomicNameLabel box="[1327,1392,836,861]" pageId="2" pageNumber="181" rank="species">n. sp.</taxonomicNameLabel>
</emphasis>
, 
<taxonomicName authority="Weber, 1913" authorityName="Weber" authorityYear="1913" class="Actinopterygii" family="Ogcocephalidae" genus="Halicmetus" higherTaxonomySource="GBIF" kingdom="Animalia" order="Lophiiformes" pageId="2" pageNumber="181" phylum="Chordata" rank="species" species="marmoratus">
