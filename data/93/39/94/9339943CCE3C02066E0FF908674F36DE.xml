<quantity box="[507,639,984,1008]" metricMagnitude="-3" metricUnit="m" metricValue="6.1" metricValueMax="6.3" metricValueMin="5.9" pageId="7" pageNumber="88" unit="mm" value="6.1" valueMax="6.3" valueMin="5.9">5,9-6,3 mm</quantity>
