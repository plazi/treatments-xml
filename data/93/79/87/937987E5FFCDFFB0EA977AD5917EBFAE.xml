/ 
<number box="[765,780,1901,1927]" pageId="1" pageNumber="54" value="4.0">4</number>
, on 
<date box="[829,871,1901,1927]" pageId="1" pageNumber="54">
II 
<number box="[856,871,1901,1927]" pageId="1" pageNumber="54" value="7.0">7</number>
</date>
/ 
<number box="[881,896,1901,1927]" pageId="1" pageNumber="54" value="7.0">7</number>
, on 
