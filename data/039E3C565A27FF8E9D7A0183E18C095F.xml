<collectionCode id="ED2615855A21FF8E9CB205CFE15C0EDF" box="[1015,1067,384,410]" country="USA" lsid="urn:lsid:biocol.org:col:15859" name="Missouri Botanical Garden" pageId="12" pageNumber="13" type="Herbarium">MO</collectionCode>
