<taxonomicName authorityName=": Saussure" authorityYear="1862" class="Insecta" family="Tetrigidae" genus="Scelymena" higherTaxonomySource="GBIF" kingdom="Animalia" order="Orthoptera" pageId="21" pageNumber="22" phylum="Arthropoda" rank="species" species="gavialis">E. gavialis</taxonomicName>
</emphasis>
