<taxonomicName baseAuthorityName="Hancock" baseAuthorityYear="1904" box="[868,977,1813,1838]" class="Insecta" family="Tetrigidae" genus="Euscelimena" higherTaxonomySource="GBIF" kingdom="Animalia" order="Orthoptera" pageId="21" pageNumber="22" phylum="Arthropoda" rank="species" species="logani">E. logani</taxonomicName>
, 
<taxonomicName authorityName=": Saussure" authorityYear="1862" box="[993,1117,1813,1838]" class="Insecta" family="Tetrigidae" genus="Scelymena" higherTaxonomySource="GBIF" kingdom="Animalia" order="Orthoptera" pageId="21" pageNumber="22" phylum="Arthropoda" rank="species" species="gavialis">E. gavialis</taxonomicName>
</emphasis>
) and 
<collectingCountry box="[1189,1247,1813,1838]" name="India" pageId="21" pageNumber="22">India</collectingCountry>
(
<emphasis italics="true" pageId="21" pageNumber="22">
<taxonomicName baseAuthorityName="Serville" baseAuthorityYear="1838" box="[1268,1401,1813,1838]" class="Insecta" family="Tetrigidae" genus="Euscelimena" higherTaxonomySource="GBIF" kingdom="Animalia" order="Orthoptera" pageId="21" pageNumber="22" phylum="Arthropoda" rank="species" species="harpago">E. harpago</taxonomicName>
