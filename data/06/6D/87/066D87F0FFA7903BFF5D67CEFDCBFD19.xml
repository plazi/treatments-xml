and 
<taxonomicName box="[828,1013,285,309]" class="Insecta" family="Phoridae" genus="Coniceromyia" higherTaxonomySource="GBIF" kingdom="Animalia" order="Diptera" pageId="27" pageNumber="28" phylum="Arthropoda" rank="species" species="leucomacula">
<emphasis box="[828,1013,285,309]" italics="true" pageId="27" pageNumber="28">C. leucomacula</emphasis>
</taxonomicName>
. 
<taxonomicName box="[1037,1337,286,309]" class="Insecta" family="Phoridae" genus="Coniceromyia" higherTaxonomySource="GBIF" kingdom="Animalia" order="Diptera" pageId="27" pageNumber="28" phylum="Arthropoda" rank="species" species="convergens">
<emphasis box="[1037,1337,286,309]" italics="true" pageId="27" pageNumber="28">Coniceromyia convergens</emphasis>
</taxonomicName>
