<paragraph blockId="9.[151,1436,151,536]" box="[199,1193,188,213]" pageId="9" pageNumber="576">
<emphasis box="[199,254,188,211]" italics="true" pageId="9" pageNumber="576">Size:</emphasis>
Body length 
<quantity box="[405,578,188,212]" metricMagnitude="-3" metricUnit="m" metricValue="4.21" metricValueMax="4.28" metricValueMin="4.14" pageId="9" pageNumber="576" unit="mm" value="4.21" valueMax="4.28" valueMin="4.14">4.14– 4.28 mm</quantity>
; maximum width across mesoacetabula 
<quantity box="[1030,1189,188,213]" metricMagnitude="-3" metricUnit="m" metricValue="1.345" metricValueMax="1.36" metricValueMin="1.33" pageId="9" pageNumber="576" unit="mm" value="1.345" valueMax="1.36" valueMin="1.33">1.33–1.36mm</quantity>
