<number box="[747,793,1559,1583]" pageId="7" pageNumber="574" value="2.5" valueMax="4.0" valueMin="1.0">1–4</number>
: 
<number box="[810,862,1558,1583]" pageId="7" pageNumber="574" value="0.76">0.76</number>
; 
<number box="[879,931,1559,1583]" pageId="7" pageNumber="574" value="0.74">0.74</number>
; 
<number box="[949,1001,1559,1583]" pageId="7" pageNumber="574" value="0.78">0.78</number>
; 
<quantity box="[1019,1115,1558,1583]" metricMagnitude="-4" metricUnit="m" metricValue="8.6" pageId="7" pageNumber="574" unit="mm" value="0.86">0.86mm</quantity>
