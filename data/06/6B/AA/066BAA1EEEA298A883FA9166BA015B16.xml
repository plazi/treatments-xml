<subSubSection type="nomenclature">
<paragraph pageNumber="732">
<taxonomicName LSID-HNS="urn:lsid:biosci.ohio-state.edu:osuc_concepts:182064" class="Insecta" family="Formicidae" genus="Pheidole" higherTaxonomySource="CoL" kingdom="Animalia" lsidName="Pheidole pidax Wilson" lsidName-HNS="Pheidole pidax Wilson" order="Hymenoptera" pageNumber="732" phylum="Arthropoda" rank="species" species="pidax">Pheidole pidax</taxonomicName>
