<pageBreakToken id="022B52B5D79A86839BB28E24AAAE415B" pageId="38" pageNumber="39" start="start">15</pageBreakToken>
. 
<taxonomicName id="AA533C32D444E75CDF1E1FBEC3A5BA35" authority="Bruchet, Bull. Mens. Soc. Linn. Lyon 39 (6 suppl.): 126 (1970)" class="Agaricomycetes" family="Hymenogastraceae" genus="Hebeloma" higherTaxonomySource="CoL" kingdom="Fungi" lsidName="Hebeloma nigellum" order="Agaricales" pageId="38" pageNumber="39" phylum="Basidiomycota" rank="species" species="nigellum">Hebeloma nigellum Bruchet, Bull. Mens. Soc. Linn. Lyon 39 (6 suppl.): 126 (1970)</taxonomicName>
