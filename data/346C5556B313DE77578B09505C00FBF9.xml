<taxonomicName id="7BC59FC3B314DE77565C0D0A5B3AFC11" box="[320,551,887,910]" class="Insecta" family="Meloidae" genus="Epicauta" kingdom="Animalia" order="Coleoptera" pageId="20" pageNumber="41" phylum="Arthropoda" rank="species" species="semivittata">
