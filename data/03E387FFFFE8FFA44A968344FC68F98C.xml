</taxonomicName>
, 
<taxonomicName id="4C4A4D6AFFE8FFA4489A838CFCF0FE13" box="[667,786,439,464]" class="Aves" family="Thraupidae" genus="Islerothraupis" kingdom="Animalia" order="Passeriformes" pageId="6" pageNumber="335" phylum="Chordata" rank="species" species="luctuosa">
<emphasis id="B93EEAFBFFE8FFA4489A838CFCF0FE13" box="[667,786,439,464]" italics="true" pageId="6" pageNumber="335">I. luctuosa</emphasis>
</taxonomicName>
(d’Orbigny &amp; Lafresnaye, 1837), and 
<taxonomicName id="4C4A4D6AFFE8FFA44ECB838CFF39FE36" authority="Spix, 1825" authorityName="Spix" authorityYear="1825" class="Aves" family="Thraupidae" genus="Islerothraupis" kingdom="Animalia" order="Passeriformes" pageId="6" pageNumber="335" phylum="Chordata" rank="species" species="rufiventer">
