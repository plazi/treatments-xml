<taxonomicName id="4C4A4D6AFFE8FFA44B908383FD69FE0C" box="[401,651,439,464]" class="Aves" family="Thraupidae" genus="Islerothraupis" kingdom="Animalia" order="Passeriformes" pageId="6" pageNumber="335" phylum="Chordata" rank="species" species="cristata">
