<taxonomicName id="4C4C50C3FF99FF8CFE30FE836140AE1C" box="[476,552,260,284]" class="Insecta" family="Empididae" genus="Macrostomus" kingdom="Animalia" order="Diptera" pageId="8" pageNumber="53" phylum="Arthropoda" rank="species" species="nitidus">
