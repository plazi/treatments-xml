, 
<taxonomicName id="1774B6201130CBC3418D65631347BD3F" LSID-HNS="urn:lsid:biosci.ohio-state.edu:osuc_concepts:33747" class="Insecta" family="Formicidae" genus="Pheidole" higherTaxonomySource="CoL" kingdom="Animalia" lsidName="Pheidole floridana Emery" lsidName-HNS="Pheidole floridana Emery" order="Hymenoptera" pageNumber="496" phylum="Arthropoda" rank="species" species="floridana">floridana</taxonomicName>
, 
<taxonomicName id="97F4982E0166ABEAAF622415D523042F" LSID-HNS="urn:lsid:biosci.ohio-state.edu:osuc_concepts:181883" class="Insecta" family="Formicidae" genus="Pheidole" higherTaxonomySource="CoL" kingdom="Animalia" lsidName="Pheidole hazenae Wilson" lsidName-HNS="Pheidole hazenae Wilson" order="Hymenoptera" pageNumber="496" phylum="Arthropoda" rank="species" species="hazenae">hazenae</taxonomicName>
, 
<taxonomicName id="600F96B0F5D17A0DBB9A2D578F642631" LSID-HNS="urn:lsid:biosci.ohio-state.edu:osuc_concepts:181929" class="Insecta" family="Formicidae" genus="Pheidole" higherTaxonomySource="CoL" kingdom="Animalia" lsidName="Pheidole rectiluma Wilson" lsidName-HNS="Pheidole rectiluma Wilson" order="Hymenoptera" pageNumber="496" phylum="Arthropoda" rank="species" species="rectiluma">rectiluma</taxonomicName>
, 
<taxonomicName id="5E9C82F507ACC44B6E67B3BC19A8AE97" LSID-HNS="urn:lsid:biosci.ohio-state.edu:osuc_concepts:181930" class="Insecta" family="Formicidae" genus="Pheidole" higherTaxonomySource="CoL" kingdom="Animalia" lsidName="Pheidole rectisentis Wilson" lsidName-HNS="Pheidole rectisentis Wilson" order="Hymenoptera" pageNumber="496" phylum="Arthropoda" rank="species" species="rectisentis">rectisentis</taxonomicName>
