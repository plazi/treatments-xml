</emphasis>
<taxonomicName id="4C27E3B77E7EFFF2FE817261DCBCFE9F" authority="Godman and Salvin, [1897]" authorityName="Godman and Salvin" authorityYear="1897" box="[382,930,331,356]" class="Insecta" family="Hesperiidae" genus="Pholisora" kingdom="Animalia" order="Lepidoptera" pageId="12" pageNumber="11" phylum="Arthropoda" rank="species" species="clytius">
