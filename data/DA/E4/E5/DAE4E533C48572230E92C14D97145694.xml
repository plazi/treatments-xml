<taxonomicName authority="Kit. ex Schult." authorityName="Schult." class="Liliopsida" family="Poaceae" genus="Sesleria" kingdom="Plantae" order="Poales" phylum="Tracheophyta" rank="species" species="albicans">
<emphasis italics="true" pageNumber="469">S. albicans</emphasis>
Kit. ex Schult.
</taxonomicName>
), leaving 
<taxonomicName authority="Opiz" authorityName="Opiz" class="Liliopsida" family="Cyperaceae" genus="Sesleria" kingdom="Plantae" order="Poales" phylum="Tracheophyta" rank="species" species="uliginosa">
