<subSubSection box="[151,556,151,177]" pageId="19" pageNumber="20" type="nomenclature">
<paragraph blockId="19.[151,556,151,177]" box="[151,556,151,177]" pageId="19" pageNumber="20">
<heading bold="true" box="[151,556,151,177]" fontSize="11" level="1" pageId="19" pageNumber="20" reason="1">
<emphasis bold="true" box="[151,556,151,177]" pageId="19" pageNumber="20">
<taxonomicName baseAuthorityName="Berthold" baseAuthorityYear="1846" box="[151,369,151,177]" class="Reptilia" family="Polychrotidae" genus="Dactyloa" higherTaxonomySource="GBIF" kingdom="Animalia" order="Squamata" pageId="19" pageNumber="20" phylum="Chordata" rank="species" species="latifrons">
<emphasis bold="true" box="[151,369,151,177]" italics="true" pageId="19" pageNumber="20">Dactyloa latifrons</emphasis>
</taxonomicName>
Species Group
</emphasis>
</heading>
</paragraph>
