<taxonomicName class="Gastropoda" family="Ficidae" genus="Ficus" higherTaxonomySource="CoL" kingdom="Animalia" lsidName="Ficus" order="Littorinimorpha" pageId="0" pageNumber="49" phylum="Mollusca" rank="genus">
<emphasis italics="true" pageId="0" pageNumber="49">Ficus</emphasis>
</taxonomicName>
