<taxonomicName class="Polypodiopsida" family="Aspleniaceae" genus="Asplenium" higherTaxonomySource="CoL" kingdom="Plantae" lsidName="Asplenium nidus" order="Polypodiales" pageId="0" pageNumber="49" phylum="Tracheophyta" rank="species" species="nidus">
