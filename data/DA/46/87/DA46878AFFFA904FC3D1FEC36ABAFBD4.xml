<collectingCountry box="[684,752,901,925]" name="Brazil" pageId="2">Brazil</collectingCountry>
(Stål 
<number box="[824,883,901,925]" pageId="2" value="1872.0">1872</number>
; Lethierry &amp; Severin 
<number box="[1136,1196,901,925]" pageId="2" value="1896.0">1896</number>
; Wygodzinsky 1949, 1951; Maldonado 
<number box="[365,424,937,961]" pageId="2" value="1990.0">1990</number>
; Dougherty 
<number box="[572,631,937,961]" pageId="2" value="1995.0">1995</number>
