<collectingCountry id="F339764ECD05FFE2FF704C6FB206FECC" box="[151,324,260,284]" name="New Caledonia" pageId="12" pageNumber="13">New Caledonia</collectingCountry>
(
<quantity id="4CD69B3BCD05FFE2FEB54C6EB2DCFECC" box="[338,414,260,284]" metricMagnitude="2" metricUnit="m" metricValue="7.2" pageId="12" pageNumber="13" unit="m" value="720.0">720 m</quantity>
