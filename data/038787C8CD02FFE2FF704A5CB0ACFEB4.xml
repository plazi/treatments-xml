<quantity id="4CD69B3BCD05FFE2FF794C4DB27DFEEF" box="[158,319,295,319]" metricMagnitude="3" metricUnit="m" metricValue="2.105" metricValueMax="2.11" metricValueMin="2.1" pageId="12" pageNumber="13" unit="m" value="2105.0" valueMax="2110.0" valueMin="2100.0">2100–2110 m</quantity>
