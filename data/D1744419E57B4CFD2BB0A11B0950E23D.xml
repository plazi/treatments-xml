Neotype selected for 
<taxonomicName id="47D4996EF9D1B6FE9874AA2CB3D3ECE8" authorityName="Huds., Fl. Angl.: 39" authorityYear="1762" class="Liliopsida" family="Gramineae" genus="Bromus" higherTaxonomySource="CoL" kingdom="Plantae" lsidName="Bromus erectus" order="Poales" pageId="4" pageNumber="57" phylum="Tracheophyta" rank="species" species="erectus">
<emphasis id="FDCDD49C5E458C7608CFECA82E7DFBE1" italics="true" pageId="4" pageNumber="57">Bromus erectus</emphasis>
