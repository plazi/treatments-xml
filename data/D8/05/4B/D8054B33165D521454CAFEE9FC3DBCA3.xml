<taxonomicName authorityName="Williams" authorityYear="2007" box="[928,1054,184,208]" class="Insecta" family="Eriococcidae" genus="Rhopalotococcus" higherTaxonomySource="GBIF" kingdom="Animalia" order="Hemiptera" pageId="22" pageNumber="1364" phylum="Arthropoda" rank="species" species="dugdalei">
