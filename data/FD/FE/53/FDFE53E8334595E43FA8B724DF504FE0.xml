<subSubSection type="nomenclature">
<paragraph pageNumber="761">
<taxonomicName LSID-HNS="urn:lsid:biosci.ohio-state.edu:osuc_concepts:182082" class="Insecta" family="Formicidae" genus="Pheidole" higherTaxonomySource="CoL" kingdom="Animalia" lsidName="Pheidole subsphaerica Wilson" lsidName-HNS="Pheidole subsphaerica Wilson" order="Hymenoptera" pageNumber="761" phylum="Arthropoda" rank="species" species="subsphaerica">Pheidole subsphaerica</taxonomicName>
