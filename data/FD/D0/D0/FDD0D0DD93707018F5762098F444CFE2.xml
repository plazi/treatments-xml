<taxonomicName LSID-HNS="urn:lsid:biosci.ohio-state.edu:osuc_concepts:227009" class="Insecta" family="Formicidae" genus="Pyramica" higherTaxonomySource="CoL" kingdom="Animalia" lsidName="Pyramica rishwani Makhan" lsidName-HNS="Pyramica rishwani Makhan" order="Hymenoptera" pageNumber="5" phylum="Arthropoda" rank="species" species="rishwani">Pyramica rishwani</taxonomicName>
