(J.H.Martin # 
<number box="[1001,1061,1004,1030]" pageId="51" pageNumber="52" value="6714.0">6714</number>
) (
<collectionCode box="[1090,1185,1004,1030]" pageId="51" pageNumber="52">BMNH</collectionCode>
