</taxonomicName>
(
<taxonomicName box="[546,681,1004,1030]" class="Magnoliopsida" family="Asteraceae" kingdom="Plantae" order="Asterales" pageId="51" pageNumber="52" phylum="Tracheophyta" rank="family">Asteraceae</taxonomicName>
), 
<date box="[705,824,1004,1030]" pageId="51" pageNumber="52" value="1996-02-28">
