<collectingCountry box="[1098,1223,1028,1054]" name="Cameroon" pageId="20" pageNumber="21">Cameroun</collectingCountry>
, 
<collectingCountry box="[1237,1318,1028,1054]" name="Republic of the Congo" pageId="20" pageNumber="21">Congo</collectingCountry>
, 
<collectingCountry box="[264,337,1068,1094]" name="Benin" pageId="20" pageNumber="21">Benin</collectingCountry>
, 
<collectingCountry box="[357,437,1068,1094]" name="Ghana" pageId="20" pageNumber="21">Ghana</collectingCountry>
, 
<collectingCountry box="[456,547,1068,1094]" name="Nigeria" pageId="20" pageNumber="21">Nigeria</collectingCountry>
, 
<collectingCountry box="[566,695,1068,1094]" name="Sao Tome and Principe" pageId="20" pageNumber="21">Sao Tomé</collectingCountry>
, 
<collectingCountry box="[714,778,1068,1094]" name="Togo" pageId="20" pageNumber="21">Togo</collectingCountry>
; Malagasian Region — 
<collectingCountry box="[1089,1207,1068,1094]" name="Mauritius" pageId="20" pageNumber="21">Mauritius</collectingCountry>
; Oriental Region — 
<collectingCountry box="[396,459,1108,1134]" name="India" pageId="20" pageNumber="21">India</collectingCountry>
, 
<collectingCountry box="[473,585,1108,1134]" name="Maldives" pageId="20" pageNumber="21">Maldives</collectingCountry>
, 
<collectingCountry box="[600,720,1108,1134]" name="Sri Lanka" pageId="20" pageNumber="21">Sri Lanka</collectingCountry>
, 
<collectingCountry box="[735,843,1108,1134]" name="Thailand" pageId="20" pageNumber="21">Thailand</collectingCountry>
; Austro­oriental and Pacific Regions — widely distributed; 
<collectingCountry box="[492,599,1148,1174]" name="Australia" pageId="20" pageNumber="21">Australia</collectingCountry>
— northern Queensland.
</paragraph>
