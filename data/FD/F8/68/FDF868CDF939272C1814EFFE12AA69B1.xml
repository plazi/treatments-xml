<taxonomicName authority="Berlese, 1924" authorityName="Berlese" authorityYear="1924" class="Arachnida" family="Phthiracaridae" genus="Calhoplophora" higherTaxonomySource="GBIF" kingdom="Animalia" order="Oribatida" pageId="39" pageNumber="40" phylum="Arthropoda" rank="genus">Calhoplophora</taxonomicName>
