<subSubSection pageId="1" pageNumber="70" type="type species">
<paragraph pageId="1" pageNumber="70">Type species.</paragraph>
<paragraph pageId="1" pageNumber="70">
<taxonomicName authority="Linnaeus, 1758" authorityName="Linnaeus" authorityYear="1758" class="Insecta" family="Noctuidae" genus="Phalaena" higherTaxonomySource="GBIF" kingdom="Animalia" lsidName="Phalaena fuliginosa" order="Lepidoptera" pageId="1" pageNumber="70" phylum="Arthropoda" rank="species" species="fuliginosa">Phalaena fuliginosa</taxonomicName>
