<caption ID-DOI="http://doi.org/10.5281/zenodo.4747307" ID-Zenodo-Dep="4747307" httpUri="https://zenodo.org/record/4747307/files/figure.png" pageId="28" pageNumber="1954" startId="28.[160,225,1006,1029]" targetBox="[185,1151,142,965]" targetPageId="28">
<paragraph blockId="28.[160,1157,1006,1118]" pageId="28" pageNumber="1954">
