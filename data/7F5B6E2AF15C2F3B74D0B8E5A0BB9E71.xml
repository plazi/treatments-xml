<emphasis id="C586032EF15C2F3C75D0BB82A29F9C8B" box="[407,415,1008,1022]" italics="true" pageId="3" pageNumber="4">
<number id="413ACD1BF15C2F3C75D0BB82A29F9C8B" box="[407,415,1008,1022]" pageId="3" pageNumber="4" value="5.0">5</number>
