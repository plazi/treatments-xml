<collectionCode id="7B83AE130E562D2BFF52A426BE87DB50" box="[152,244,1293,1317]" country="USA" httpUri="http://biocol.org/urn:lsid:biocol.org:col:34795" lsid="urn:lsid:biocol.org:col:34795" name="Field Museum of Natural History" pageId="16" pageNumber="1272" type="Museum">FMNH</collectionCode>
