<taxonomicName id="70F63509424BAB6D38C6E4D80C64E9DF" class="Magnoliopsida" family="Verbenaceae" genus="Solanum" higherTaxonomySource="CoL" kingdom="Plantae" lsidName="Solanum scabrum" order="Solanales" pageId="95" pageNumber="96" phylum="Tracheophyta" rank="species" species="scabrum">
