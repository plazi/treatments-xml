A proposito de 
<taxonomicName id="4D57660D67C4099F57E122C276293CEA" LSID-HNS="urn:lsid:biosci.ohio-state.edu:osuc_concepts:24980" class="Insecta" family="Formicidae" genus="Acropyga" higherTaxonomySource="CoL" kingdom="Animalia" lsidName-HNS="Acropyga pickeli Borgmeier" order="Hymenoptera" pageNumber="238" phylum="Arthropoda" rank="species" species="pickeli">Acropyga pickeli Borgm</taxonomicName>
