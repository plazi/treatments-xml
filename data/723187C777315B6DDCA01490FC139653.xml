<taxonomicName id="3D984D5277315B6CDDCD15CFFD2296B3" authority="O.L.M.Silva &amp; P.J.Braun" authorityName="O. L. M. Silva &amp; P. J. Braun" box="[189,744,1964,1990]" class="Magnoliopsida" family="Euphorbiaceae" genus="Euphorbia" kingdom="Plantae" order="Malpighiales" pageId="6" pageNumber="78" phylum="Tracheophyta" rank="species" species="sobolifera" status="sp. nov.">
