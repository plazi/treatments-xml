<quantity id="3D609B3477315B6CD99315ADFADA969C" box="[1251,1296,1998,2025]" metricMagnitude="0" metricUnit="m" metricValue="2.0" pageId="6" pageNumber="78" unit="m" value="2.0">2 m</quantity>
