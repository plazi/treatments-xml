<taxonomicName id="59874D46836F1F48F841F88CFC28F8ED" box="[820,933,1796,1821]" class="Malacostraca" family="Trapeziidae" genus="Trapezia" kingdom="Animalia" order="Decapoda" pageId="50" pageNumber="51" phylum="Arthropoda" rank="species" species="guttata">
