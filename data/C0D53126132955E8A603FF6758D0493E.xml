<taxonomicName id="6046ADB9FFED9414F7F55B9CF471F729" class="Magnoliopsida" family="Boraginaceae" genus="Eritrichium" higherTaxonomySource="CoL" kingdom="Plantae" lsidName="Eritrichium longifolium" order="Boraginales" pageId="0" pageNumber="29" phylum="Tracheophyta" rank="species" species="longifolium">Eritrichium longifolium</taxonomicName>
