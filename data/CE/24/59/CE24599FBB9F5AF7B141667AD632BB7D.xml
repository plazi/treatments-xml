<subSubSection pageId="0" pageNumber="323" type="reference_group">
<paragraph pageId="0" pageNumber="323">
<taxonomicName authorityName="Mineo" authorityYear="1979" class="Insecta" family="Scelionidae" genus="Gryon" higherTaxonomySource="CoL" kingdom="Animalia" lsidName="Gryon eremiogryon" order="Hymenoptera" pageId="0" pageNumber="323" phylum="Arthropoda" rank="species" species="eremiogryon">Gryon eremiogryon</taxonomicName>
