<taxonomicName authorityName="Sherff" authorityYear="1937" baseAuthorityName="Forest Brown" class="Magnoliopsida" family="Asteraceae" genus="Oparanthus" higherTaxonomySource="GBIF,CoL" kingdom="Plantae" lsidName="" order="Asterales" pageId="3" pageNumber="80" phylum="Tracheophyta" rank="species" species="coriaceus">
