<collectingCountry box="[499,655,524,550]" name="United States of America" pageId="16" pageNumber="17">United States</collectingCountry>
and northern 
<collectingCountry box="[819,913,524,550]" name="Mexico" pageId="16" pageNumber="17">Mexico</collectingCountry>
