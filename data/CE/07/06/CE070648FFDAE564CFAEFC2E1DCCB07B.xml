<taxonomicName authority="catalogs" authorityName="Linnaeus" authorityYear="1753" box="[824,939,1402,1426]" class="Liliopsida" family="Commelinaceae" genus="Commelina" kingdom="Plantae" order="Commelinales" pageId="4" pageNumber="37" phylum="Tracheophyta" rank="genus">
