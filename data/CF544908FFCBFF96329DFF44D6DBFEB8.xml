<taxonomicName id="80FD839DFFCBFF9532BDF819D47BF80B" authorityName="E. D. Cooper" authorityYear="2013" baseAuthorityName="E. D. Cooper" baseAuthorityYear="2013" box="[183,295,1994,2012]" class="Jungermanniopsida" family="Lepidoziaceae" genus="Ceramanus" higherTaxonomySource="GBIF" kingdom="Plantae" order="Jungermanniales" pageId="1" pageNumber="53" phylum="Marchantiophyta" rank="species" species="grossiseta">
