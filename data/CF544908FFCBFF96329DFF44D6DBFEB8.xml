<taxonomicName id="80FD839DFFCBFF953181F837D6A5F821" authorityName="E. D. Cooper" authorityYear="2013" baseAuthorityName="E. D. Cooper" baseAuthorityYear="2013" box="[907,1017,2020,2038]" class="Jungermanniopsida" family="Lepidoziaceae" genus="Ceramanus" higherTaxonomySource="GBIF" kingdom="Plantae" order="Jungermanniales" pageId="1" pageNumber="53" phylum="Marchantiophyta" rank="species" species="grossiseta">
<emphasis id="7589240CFFCBFF953181F837D6A5F821" box="[907,1017,2020,2038]" italics="true" pageId="1" pageNumber="53">C. grossiseta</emphasis>
