<quantity id="9116DFA2FFBBC11BFE3CD956FDB47C75" box="[460,578,1803,1825]" metricMagnitude="-3" metricUnit="m" metricValue="5.25" metricValueMax="5.4" metricValueMin="5.1" pageId="33" pageNumber="34" unit="mm" value="5.25" valueMax="5.4" valueMin="5.1">5.1–5.4 mm</quantity>
, female 6.0– 
<quantity id="9116DFA2FFBBC11BFD4ED951FCFF7C75" box="[702,777,1804,1826]" metricMagnitude="-3" metricUnit="m" metricValue="6.7" pageId="33" pageNumber="34" unit="mm" value="6.7">6.7 mm</quantity>
