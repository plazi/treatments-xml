<taxonomicName id="91EE09C4FFBBC11BFAC6D939FA6A7C2D" box="[1334,1436,1892,1913]" class="Insecta" family="Cicadellidae" genus="Bonamus" kingdom="Animalia" order="Hemiptera" pageId="33" pageNumber="34" phylum="Arthropoda" rank="species" species="lineatus">
