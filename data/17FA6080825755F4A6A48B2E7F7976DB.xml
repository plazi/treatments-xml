<taxonomicName id="AB9B348C9BAA4B5C172E2E3824DF9CD0" class="Agaricomycetes" genus="B." higherTaxonomySource="GBIF,CoL" kingdom="Fungi" lsidName="B. minispora" order="Polyporales" pageId="0" pageNumber="149" phylum="Basidiomycota" rank="species" species="minispora">
<emphasis id="E109EB4928CDC5B6736A76ABFC9BEA9E" italics="true" pageId="0" pageNumber="149">B. minispora</emphasis>
