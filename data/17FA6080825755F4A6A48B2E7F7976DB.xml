<taxonomicName id="8A116856CA9A518D37ED09025CFCA15F" class="Agaricomycetes" genus="B." higherTaxonomySource="GBIF,CoL" kingdom="Fungi" lsidName="B. minispora" order="Polyporales" pageId="0" pageNumber="149" phylum="Basidiomycota" rank="species" species="minispora">
