<taxonomicName id="9EB467B96B7DA0ECC3708FD724957E1E" LSID-ZBK="urn:lsid:zoobank.org:act:2AB9A3E3-3848-4839-8F5E-97E97ABF29CD" class="Holocephali" family="Chimaeridae" genus="Hydrolagus" higherTaxonomySource="CoL" kingdom="Animalia" lsidName-ZBK="Hydrolagus matallanasi Soto &amp; Vooren 2004:3" order="Chimaeriformes" pageNumber="8" phylum="Chordata" rank="species" species="matallanasi">H. matallanasi</taxonomicName>
