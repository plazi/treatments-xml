<taxonomicName id="B1D04D4FFFD7FFFABC9CFAB71437FAC7" authority="Jiang &amp; Li" authorityName="Jiang &amp; Li" box="[234,536,1352,1376]" class="Arachnida" family="Gigarachnidae" higherTaxonomySource="GBIF" kingdom="Animalia" order="Araneae" pageId="6" pageNumber="272" phylum="Arthropoda" rank="family">Gigarachnidae Jiang &amp; Li</taxonomicName>
