<taxonomicName id="00B03685FFADFF9EFEE7272CFE338C6E" box="[277,440,1342,1365]" class="Mammalia" family="Phyllostomidae" genus="Micronycteris" kingdom="Animalia" order="Chiroptera" pageId="62" pageNumber="62" phylum="Chordata" rank="genus">
