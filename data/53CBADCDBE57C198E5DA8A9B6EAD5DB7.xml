19. 
<taxonomicName id="86B950DF0DE76F7F351FC4E8F684857C" LSID-HNS="urn:lsid:biosci.ohio-state.edu:143558" class="Insecta" family="Formicidae" genus="Polyrhachis" kingdom="Animalia" lsidName-HNS="Polyrhachis affinis Smith" order="Hymenoptera" pageId="63" pageNumber="63" phylum="Arthropoda" rank="species" species="affinis">Polyrhachis affinis</taxonomicName>
