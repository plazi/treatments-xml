<paragraph id="8BCA36DDFF8E870DB3A6FE0DFEBEABB2" blockId="16.[151,1127,219,468]" box="[151,1015,411,436]" pageId="16" pageNumber="385">
<emphasis id="B901EACFFF8E870DB3A6FE0DFC50ABB2" bold="true" box="[151,281,412,436]" pageId="16" pageNumber="385">Etymology.</emphasis>
<taxonomicName id="4C754D5EFF8E870DB22EFE0CFCBAABB5" authority=", Latin" authorityName="Latin" box="[287,499,411,436]" class="Insecta" family="Miridae" genus="Megalodactylus" kingdom="Animalia" order="Hemiptera" pageId="16" pageNumber="385" phylum="Arthropoda" rank="species" species="grandoculus">
<emphasis id="B901EACFFF8E870DB22EFE0CFCE3ABB2" box="[287,426,413,436]" italics="true" pageId="16" pageNumber="385">Grandoculus</emphasis>
