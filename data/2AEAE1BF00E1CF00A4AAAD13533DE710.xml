<taxonomicName id="E6F305EA29D2916F547BA316877A856E" class="Magnoliopsida" family="Verbenaceae" genus="Solanum" higherTaxonomySource="CoL" kingdom="Plantae" lsidName="Solanum pseudogracile" order="Solanales" pageId="83" pageNumber="84" phylum="Tracheophyta" rank="species" species="pseudogracile">
