<taxonomicName id="3B4AF30465D0696600DB3EB96C686434" family="Verbenaceae" genus="S." kingdom="Plantae" lsidName="S. pseudogracile" order="Solanales" pageId="83" pageNumber="84" rank="species" species="pseudogracile">
<emphasis id="C3A54AA39057055D9443A3AF7D3B42BB" italics="true" pageId="83" pageNumber="84">S. pseudogracile</emphasis>
</taxonomicName>
