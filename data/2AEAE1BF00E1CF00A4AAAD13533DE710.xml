<taxonomicName id="F81433CB2E3E9B8B289E628CA9057A0D" family="Verbenaceae" genus="S." kingdom="Plantae" lsidName="S. gracilius" order="Solanales" pageId="83" pageNumber="84" rank="species" species="gracilius">
<emphasis id="204DB75827CC12B91A75818C29CE173D" italics="true" pageId="83" pageNumber="84">S. gracilius</emphasis>
