<location LSID="urn:lsid:plazi:treatment:F52B87F65E2F6158FF5ED83FFC4A1C99:785D603B5E2F6158FF74D8B0FF7F1A39" box="[189,238,753,775]" country="United Kingdom" county="Pertshire" latitude="56.667" longLatPrecision="63" longitude="-4.347" municipality="Black Wood of Rannoch" name="This" pageId="25" pageNumber="158">This</location>
