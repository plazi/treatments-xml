, PnHL 
<quantity box="[1138,1208,369,390]" metricMagnitude="-2" metricUnit="m" metricValue="4.3" pageId="25" pageNumber="158" unit="mm" value="43.0">43 µm</quantity>
, nMes 2.5, nMet 1.4, MetHL 
<quantity box="[902,972,401,422]" metricMagnitude="-2" metricUnit="m" metricValue="3.0" pageId="25" pageNumber="158" unit="mm" value="30.0">30 µm</quantity>
