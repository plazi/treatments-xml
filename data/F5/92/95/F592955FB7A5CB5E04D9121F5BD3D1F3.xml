and 
<taxonomicName class="Insecta" family="Noctuidae" genus="Polia" higherTaxonomySource="CoL" kingdom="Animalia" lsidName="Polia" order="Lepidoptera" pageId="2" pageNumber="135" phylum="Nemertea" rank="genus">Polia</taxonomicName>
.
</paragraph>
</subSubSection>
