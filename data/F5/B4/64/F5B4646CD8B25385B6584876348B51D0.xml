<emphasis italics="true" pageId="7" pageNumber="18">Planorbis carinatus</emphasis>
</taxonomicName>
, 
<taxonomicName authorityName="S. Studer" authorityYear="1820" class="Gastropoda" family="Planorbidae" genus="Anisus" higherTaxonomySource="GBIF" kingdom="Animalia" lsidName="" order="Basommatophora" pageId="7" pageNumber="18" phylum="Mollusca" rank="genus">
<emphasis italics="true" pageId="7" pageNumber="18">Anisus</emphasis>
</taxonomicName>
sp., 
<taxonomicName authorityName="O. F. Mueller" authorityYear="1774" class="Gastropoda" family="Valvatidae" genus="Valvata" higherTaxonomySource="GBIF" kingdom="Animalia" lsidName="" order="Allogastropoda" pageId="7" pageNumber="18" phylum="Mollusca" rank="species" species="cristata">
<emphasis italics="true" pageId="7" pageNumber="18">Valvata cristata</emphasis>
</taxonomicName>
, 
