<subSubSection id="C314654B1F605A7DFF7FFD6EFEFCD776" pageId="2" pageNumber="135" type="etymology">
<paragraph id="8BB136C01F605A7DFF7FFD6EFEFCD776" blockId="2.[175,781,702,790]" pageId="2" pageNumber="135">
<emphasis id="B97AEAD21F605A7DFF7FFD6EFEBDD6B6" box="[175,365,702,726]" italics="true" pageId="2" pageNumber="135">Etymology. Ptero</emphasis>
