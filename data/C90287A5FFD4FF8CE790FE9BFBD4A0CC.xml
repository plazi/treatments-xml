<heading id="1A5C81DFFFD4FF8CE790FE9BFD23A303" box="[151,741,288,315]" fontSize="11" level="2" pageId="2" pageNumber="125" reason="2">
<taxonomicName id="86AB4D30FFD4FF8CE790FE9BFD23A303" authority="(Stys &amp; Moucha, 1962)" baseAuthorityName="Stys &amp; Moucha" baseAuthorityYear="1962" box="[151,741,288,315]" class="Insecta" family="Syrphidae" genus="Dasysyrphus" kingdom="Animalia" order="Diptera" pageId="2" pageNumber="125" phylum="Arthropoda" rank="species" species="postclaviger">
