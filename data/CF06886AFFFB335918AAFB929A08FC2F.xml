<paragraph id="4710397CFFFB335C18AAFBB69A7FFD00" blockId="1.[151,680,1090,1151]" box="[151,281,1126,1151]" pageId="1" pageNumber="490">
(
<figureCitation id="DF9425F9FFFB335C18A2FBB69A76FD00" box="[159,272,1126,1151]" captionStart-0="FIGURES 1 – 2" captionStart-1="FIGURE 3" captionStart-2="FIGURES 4 – 6" captionStart-3="FIGURES 7 – 9" captionStart-4="FIGURES 10 – 12" captionStart-5="FIGURES 13 – 14" captionStartId-0="2.[151,264,931,954]" captionStartId-1="2.[151,250,1963,1985]" captionStartId-2="3.[151,264,1453,1476]" captionStartId-3="4.[151,264,1029,1052]" captionStartId-4="4.[151,264,1855,1878]" captionStartId-5="5.[151,264,852,875]" captionTargetBox-0="[151,1436,193,910]" captionTargetBox-1="[167,1417,1034,1940]" captionTargetBox-2="[151,1436,151,1423]" captionTargetBox-3="[151,1436,219,989]" captionTargetBox-4="[151,1436,1461,1823]" captionTargetBox-5="[151,1436,193,831]" captionTargetId-0="figure@2.[151,1436,193,911]" captionTargetId-1="figure@2.[167,1417,1034,1940]" captionTargetId-2="figure@3.[151,1436,151,1423]" captionTargetId-3="figure@4.[151,1436,219,990]" captionTargetId-4="figure@4.[151,1436,1461,1823]" captionTargetId-5="figure@5.[151,1436,193,832]" captionTargetPageId-0="2" captionTargetPageId-1="2" captionTargetPageId-2="3" captionTargetPageId-3="4" captionTargetPageId-4="4" captionTargetPageId-5="5" captionText-0="FIGURES 1 – 2. Epania gressitti sp. nov. 1. holotype male; 2. paratype male. a. dorsal view; b. ventral view. Scale bars equal 5 mm." captionText-1="FIGURE 3. Epania gressitti sp. nov. paratype female. a. dorsal view; b. ventral view. Scale bars equal 5 mm." captionText-2="FIGURES 4 – 6. Epania gressitti sp. nov. paratype male. 4. scutellum and adjacent elytra surface; 5. metathorax, ventral view; 6. mesothorax and metathorax, lateral view. Scale bars equal 0.5 mm." captionText-3="FIGURES 7 – 9. Abdomen in Epania gressitti sp. nov., lateral view. 7. paratype male; 8 – 9. paratype female. Scale bars equal 0.5 mm." captionText-4="FIGURES 10 – 12. Epania gressitti sp. nov. paratype male. 10. frons; 11. pronotum, dorsal view; 12. head and prothorax, lateral view. Scale bars equal 0.5 mm." captionText-5="FIGURES 13 – 14. Prosternal intercoxal process with a depression at apex in Epania gressitti sp. nov. 13. paratype male; 14. paratype female. Scale bars equal 0.5 mm, fc = fore coxa." httpUri-0="https://zenodo.org/record/224909/files/figure.png" httpUri-1="https://zenodo.org/record/224910/files/figure.png" httpUri-2="https://zenodo.org/record/224911/files/figure.png" httpUri-3="https://zenodo.org/record/224912/files/figure.png" httpUri-4="https://zenodo.org/record/224913/files/figure.png" httpUri-5="https://zenodo.org/record/224914/files/figure.png" pageId="1" pageNumber="490">
Figs 
<number id="F1672B5BFFFB335C18EAFBB79A76FD00" box="[215,272,1127,1151]" pageId="1" pageNumber="490" value="7.5" valueMax="14.0" valueMin="1.0">1–14</number>
