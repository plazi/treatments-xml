<quantity box="[332,417,1540,1564]" metricMagnitude="-3" metricUnit="m" metricValue="8.0" metricValueMax="9.0" metricValueMin="7.0" pageId="83" pageNumber="84" unit="mm" value="8.0" valueMax="9.0" valueMin="7.0">7–9mm</quantity>
