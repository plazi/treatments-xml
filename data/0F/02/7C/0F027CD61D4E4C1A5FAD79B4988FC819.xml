<taxonomicName authorityName="Chaudoir" authorityYear="1868" class="Hexapoda" family="Carabidae" genus="Amerizus" higherTaxonomySource="GBIF" kingdom="Animalia" lsidName="" order="Coleoptera" pageId="342" pageNumber="343" phylum="Arthropoda" rank="genus">
<emphasis italics="true" pageId="342" pageNumber="343">Amerizus</emphasis>
</taxonomicName>
Chaudoir, 
<taxonomicName authorityName="des Gozis" authorityYear="1886" class="Hexapoda" family="Carabidae" genus="Asaphidion" higherTaxonomySource="GBIF" kingdom="Animalia" lsidName="" order="Coleoptera" pageId="342" pageNumber="343" phylum="Arthropoda" rank="genus">
<emphasis italics="true" pageId="342" pageNumber="343">Asaphidion</emphasis>
</taxonomicName>
des Gozis, 
<taxonomicName authorityName="Latreille" authorityYear="1802" class="Hexapoda" family="Carabidae" genus="Bembidion" higherTaxonomySource="GBIF" kingdom="Animalia" lsidName="" order="Coleoptera" pageId="342" pageNumber="343" phylum="Arthropoda" rank="genus">
<emphasis italics="true" pageId="342" pageNumber="343">Bembidion</emphasis>
