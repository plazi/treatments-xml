<taxonomicName authorityName="Motschoulsky" authorityYear="1864" class="Hexapoda" family="Carabidae" genus="Sinechostictus" higherTaxonomySource="GBIF" kingdom="Animalia" lsidName="" order="Coleoptera" pageId="342" pageNumber="343" phylum="Arthropoda" rank="genus">
