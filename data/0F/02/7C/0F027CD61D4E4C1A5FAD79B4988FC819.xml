<taxonomicName authorityName="Kraatz" authorityYear="1888" class="Insecta" family="Carabidae" genus="Pseudolimnaeum" higherTaxonomySource="GBIF" kingdom="Animalia" lsidName="" order="Coleoptera" pageId="342" pageNumber="343" phylum="Arthropoda" rank="genus">
