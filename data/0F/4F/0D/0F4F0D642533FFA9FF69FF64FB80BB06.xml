<taxonomicName authorityName="Chamberlin" authorityYear="1941" box="[623,729,1264,1290]" class="Diplopoda" family="Striariidae" genus="Amplaria" higherTaxonomySource="CoL" kingdom="Animalia" order="Chordeumatida" pageId="7" pageNumber="282" phylum="Arthropoda" rank="genus">
