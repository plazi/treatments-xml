187. 
<taxonomicName authority="Urb." authorityName="Urb." class="Magnoliopsida" family="Convolvulaceae" genus="Ipomoea" kingdom="Plantae" order="Solanales" phylum="Tracheophyta" rank="species" species="balioclada">
