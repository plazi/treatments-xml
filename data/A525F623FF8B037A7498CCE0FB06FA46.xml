<emphasis id="1FF89B27FF8B03757498CCAFFEDEF907" bold="true" box="[151,266,1739,1764]" pageId="5" pageNumber="62">Diagnosis</emphasis>
. 
<taxonomicName id="EA8C3CB6FF8B03757516CCAFFE07F900" authorityName="Mederos" authorityYear="2018" box="[281,467,1739,1764]" class="Insecta" family="Keroplatidae" genus="Keroplatus" higherTaxonomySource="GBIF" kingdom="Animalia" order="Diptera" pageId="5" pageNumber="62" phylum="Arthropoda" rank="species" species="maxi">
