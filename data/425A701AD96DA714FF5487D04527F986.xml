<number id="7C3BD32BD96CA714FBA185B74500FA0E" box="[1122,1139,1472,1498]" pageId="13" pageNumber="14" value="5.0">5</number>
; tegmen: 
<number id="7C3BD32BD96CA714FB2585B74474FA0E" box="[1254,1287,1472,1498]" pageId="13" pageNumber="14" value="22.0">22</number>
; hind femur: 
<quantity id="0D0B6CE9D96CA714FF54859F419FF9D6" box="[151,236,1512,1538]" metricMagnitude="-2" metricUnit="m" metricValue="1.7" pageId="13" pageNumber="14" unit="mm" value="17.0">17 mm</quantity>
