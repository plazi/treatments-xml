<td align="left" pageId="null" pageNumber="896" valign="bottom">
<taxonomicName class="Magnoliopsida" family="Ericaceae" genus="Pyrola" kingdom="Plantae" order="Ericales" pageId="null" pageNumber="896" phylum="Tracheophyta" rank="species" species="media">
