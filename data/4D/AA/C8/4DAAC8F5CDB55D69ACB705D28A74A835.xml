<paragraph pageId="0" pageNumber="309">
<taxonomicName authorityName="group Esben-Petersen" authorityYear="1921" class="Insecta" family="Panorpidae" genus="Panorpa" higherTaxonomySource="CoL" kingdom="Animalia" lsidName="Panorpa davidi" order="Mecoptera" pageId="0" pageNumber="309" phylum="Arthropoda" rank="species" species="davidi">Panorpa davidi</taxonomicName>
