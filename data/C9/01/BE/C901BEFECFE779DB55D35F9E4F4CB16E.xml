<taxonomicName authority="von Linne" authorityName="von Linne" class="Magnoliopsida" family="Lamiaceae" genus="Ballota" kingdom="Plantae" order="Lamiales" pageId="null" pageNumber="119" phylum="Tracheophyta" rank="species" species="nigra">
