<taxonomicName id="4B67E767A0A13076F02DD698BAB97875" LSID="http://zoobank.org/2DB96132-8EE5-498D-936A-DFF88AC8C599" class="Insecta" family="Pompilidae" genus="Abernessia" higherTaxonomySource="CoL" kingdom="Animalia" lsidName="Abernessia giga" order="Hymenoptera" pageId="4" pageNumber="75" phylum="Arthropoda" rank="species" species="giga">Abernessia giga</taxonomicName>
