<taxonomicName authority="(Keller 1891)" authorityName="Keller" authorityYear="1891" baseAuthorityName="Keller" baseAuthorityYear="1891" box="[614,930,1327,1352]" class="Demospongiae" family="Clionaidae" genus="Spheciospongia" kingdom="Animalia" order="Hadromerida" pageId="18" pageNumber="19" phylum="Porifera" rank="species" species="mastoidea">
