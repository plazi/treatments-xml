, 
<taxonomicName authority="(Dendy 1922)" authorityName="Dendy" authorityYear="1922" baseAuthorityName="Dendy" baseAuthorityYear="1922" box="[1063,1395,1292,1317]" class="Demospongiae" family="Clionaidae" genus="Spheciospongia" kingdom="Animalia" order="Hadromerida" pageId="18" pageNumber="19" phylum="Porifera" rank="species" species="globularis">
<emphasis box="[1063,1214,1292,1317]" italics="true" pageId="18" pageNumber="19">S. globularis</emphasis>
