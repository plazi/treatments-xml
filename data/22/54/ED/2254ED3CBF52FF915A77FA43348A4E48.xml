<emphasis box="[274,436,1210,1235]" italics="true" pageId="64" pageNumber="65">Picea glauca</emphasis>
(Moench) Voss
</taxonomicName>
and 
<taxonomicName authority="Parry" authorityName="Parry" box="[715,971,1210,1236]" class="Pinopsida" family="Pinaceae" genus="Picea" kingdom="Plantae" order="Pinales" pageId="64" pageNumber="65" phylum="Tracheophyta" rank="species" species="englemanni">
<emphasis box="[715,889,1210,1235]" italics="true" pageId="64" pageNumber="65">P. englemanni</emphasis>
