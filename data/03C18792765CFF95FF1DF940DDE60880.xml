<collectionCode id="ED79AE417653FF95FB8EFD6ADA640990" box="[1028,1105,672,698]" httpUri="http://grbio.org/cool/jekt-x82m" name="Florida State Collection of Arthropods, The Museum of Entomology" pageId="8" pageNumber="55">FSCA</collectionCode>
; 
<quantity id="4C909B617653FF95FBD4FD6ADA9A0990" box="[1118,1199,672,698]" metricMagnitude="4" metricUnit="m" metricValue="1.0460736" pageId="8" pageNumber="55" unit="mi" value="6.5">6.5 mi</quantity>
