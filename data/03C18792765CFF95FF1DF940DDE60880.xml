<typeStatus id="54D388267653FF95FE8BFCA2DF5208A8" box="[257,359,872,898]" pageId="8" pageNumber="55">holotype</typeStatus>
(
<collectionCode id="ED79AE417653FF95FEFCFCA2DFE708A8" box="[374,466,872,898]" pageId="8" pageNumber="55">BMNH</collectionCode>
) of 
<taxonomicName id="4C684D077653FF95FD8AFCA2DC4808AB" box="[512,637,872,897]" class="Insecta" family="Buprestidae" genus="Chrysobothris" kingdom="Animalia" order="Coleoptera" pageId="8" pageNumber="55" phylum="Arthropoda" rank="species" species="rutilans">
