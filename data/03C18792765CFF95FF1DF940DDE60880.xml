<collectingCountry id="F37F76147653FF95FC5CFE42DA430A88" box="[982,1142,392,418]" name="Colombia" pageId="8" pageNumber="55">COLOMBIA</collectingCountry>
, Valle de Cauca, 
<collectionCode id="ED79AE417653FF95FAC2FE42DBAD0A88" box="[1352,1432,392,418]" pageId="8" pageNumber="55">CLBC</collectionCode>
