<collectingCountry id="F37F76147653FF95FDEEFC8ADCEA0870" box="[612,735,832,858]" name="Venezuela" pageId="8" pageNumber="55">Venezuela</collectingCountry>
, Rancho Grande, 
<quantity id="4C909B617653FF95FC38FC8ADA390870" box="[946,1036,832,858]" metricMagnitude="3" metricUnit="m" metricValue="1.1" pageId="8" pageNumber="55" unit="m" value="1100.0">1100 m</quantity>
, 
<date id="FFD610447653FF95FB93FC8ADAA70870" box="[1049,1170,832,858]" pageId="8" pageNumber="55" value="1952-07-12">
<number id="3DA024A37653FF95FB93FC8ADA000870" box="[1049,1077,832,858]" pageId="8" pageNumber="55" value="12.0">12</number>
-VII- 
<number id="3DA024A37653FF95FBF9FC8ADAA70870" box="[1139,1170,832,858]" pageId="8" pageNumber="55" value="52.0">52</number>
