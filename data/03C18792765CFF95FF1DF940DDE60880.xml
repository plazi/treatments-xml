<taxonomicName id="4C684D077653FF95FE97FDE2DFC5096B" box="[285,496,552,577]" class="Insecta" family="Buprestidae" genus="Chrysobothris" kingdom="Animalia" order="Coleoptera" pageId="8" pageNumber="55" phylum="Arthropoda" rank="species" species="ichthyomorpha">
