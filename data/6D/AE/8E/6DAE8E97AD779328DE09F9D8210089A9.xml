<subSubSection pageId="2" pageNumber="29" type="nomenclature">
<paragraph pageId="2" pageNumber="29">
Subgenus 
<taxonomicName authority="Wainstein" class="Arachnida" family="Tetranychidae" genus="Paraplonobia" kingdom="Animalia" lsidName="Acari (Anaplonobia)" order="Protostigmata" pageId="2" pageNumber="29" phylum="Arthropoda" rank="subGenus" subGenus="Anaplonobia">Anaplonobia Wainstein</taxonomicName>
</paragraph>
