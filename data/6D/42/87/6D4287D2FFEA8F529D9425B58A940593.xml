, 
<collectingCountry box="[801,868,384,407]" name="Japan" pageId="9" pageNumber="46">Japan</collectingCountry>
, and 
<collectingCountry box="[932,1035,383,408]" name="Australia" pageId="9" pageNumber="46">Australia</collectingCountry>
