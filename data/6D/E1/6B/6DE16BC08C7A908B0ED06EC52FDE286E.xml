<paragraph pageId="290" pageNumber="291">
<pageBreakToken pageId="290" pageNumber="291" start="start">Genus</pageBreakToken>
<taxonomicName LSID="6DE16BC0-8C7A-908B-0ED0-6EC52FDE286E" authority="Alluaud, 1919" authorityName="Alluaud" authorityYear="1919" class="Hexapoda" family="Carabidae" genus="Halocoryza" higherTaxonomySource="GBIF" kingdom="Animalia" lsidName="Halocoryza" order="Coleoptera" pageId="290" pageNumber="291" phylum="Arthropoda" rank="genus">Halocoryza Alluaud, 1919</taxonomicName>
