cf 
<taxonomicName authority="(Karsch)" baseAuthorityName="Karsch" baseAuthorityYear="1880" box="[303,513,403,430]" class="Arachnida" family="Theraphosidae" genus="Psalmopoeus" kingdom="Animalia" order="Araneae" pageId="20" pageNumber="21" phylum="Arthropoda" rank="species" species="reduncus">
<emphasis box="[303,405,403,429]" italics="true" pageId="20" pageNumber="21">reduncus</emphasis>
