<taxonomicName authorityName="Mendoza &amp; Francke" authorityYear="2020" box="[1014,1117,655,681]" class="Arachnida" family="Theraphosidae" genus="Tliltocatl" higherTaxonomySource="GBIF" kingdom="Animalia" order="Araneae" pageId="20" pageNumber="21" phylum="Arthropoda" rank="genus">
