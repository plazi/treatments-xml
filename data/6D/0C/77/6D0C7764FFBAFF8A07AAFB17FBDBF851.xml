<paragraph blockId="10.[151,1437,150,1941]" pageId="10" pageNumber="11">
<collectingCountry box="[151,252,223,249]" name="Belize" pageId="10" pageNumber="11">BELIZE</collectingCountry>
: 
<collectingRegion box="[261,500,223,249]" country="Belize" name="Orange Walk" pageId="10" pageNumber="11">Orange Walk District</collectingRegion>
, Lamanai Archaeological Reserve; 
<date box="[892,1017,223,249]" pageId="10" pageNumber="11" value="2012-04">April 2012</date>
; axarus. Host: 
<taxonomicName baseAuthorityName="Ausserer" baseAuthorityYear="1875" box="[1179,1367,223,249]" class="Arachnida" family="Theraphosidae" genus="Tliltocatl" higherTaxonomySource="GBIF" kingdom="Animalia" order="Araneae" pageId="10" pageNumber="11" phylum="Arthropoda" rank="species" species="vagans">
