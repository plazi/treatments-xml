<typeStatus box="[215,264,1252,1276]" pageId="17" pageNumber="795">type</typeStatus>
locality, 
<collectingRegion box="[373,475,1252,1276]" country="Portugal" name="Madeira" pageId="17" pageNumber="795">Madeira</collectingRegion>
