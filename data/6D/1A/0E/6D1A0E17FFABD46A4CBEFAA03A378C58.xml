(
<bibRefCitation author="Bechyne" box="[805,1217,1272,1298]" pageId="28" pageNumber="29" refString="Bechyne, J. (1959) Observations sur les Alticides recueillis au Congo belge par M. A. Collart (Coleoptera, Phytophaga)." type="book" year="1959">
Bechyné, 
<number box="[924,987,1272,1298]" pageId="28" pageNumber="29" value="1959.0">1959</number>
: 
<number box="[999,1028,1272,1298]" pageId="28" pageNumber="29" value="13.0">13</number>
sub 
<taxonomicName box="[1085,1217,1272,1297]" class="Insecta" family="Chrysomelidae" genus="Serraphula" higherTaxonomySource="GBIF" kingdom="Animalia" order="Coleoptera" pageId="28" pageNumber="29" phylum="Arthropoda" rank="genus">
<emphasis box="[1085,1217,1272,1297]" italics="true" pageId="28" pageNumber="29">Serraphula</emphasis>
