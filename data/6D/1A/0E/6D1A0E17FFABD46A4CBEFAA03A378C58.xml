<emphasis box="[1118,1235,1232,1257]" italics="true" pageId="28" pageNumber="29">B. pallens</emphasis>
</taxonomicName>
(Bechyné, 
<number box="[1369,1432,1232,1258]" pageId="28" pageNumber="29" value="1955.0">1955</number>
: 
<number box="[151,195,1272,1298]" pageId="28" pageNumber="29" value="518.0">518</number>
sub 
<taxonomicName box="[251,383,1272,1297]" class="Insecta" family="Chrysomelidae" genus="Serraphula" higherTaxonomySource="GBIF" kingdom="Animalia" order="Coleoptera" pageId="28" pageNumber="29" phylum="Arthropoda" rank="genus">
