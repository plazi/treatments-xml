<materialsCitation collectingDate="1983-12-21" collectingDateMax="1993-05-04" collectingDateMin="1983-12-21" collectorName="du Ya" location="Nimba" pageId="140" pageNumber="533" specimenCount="1" stateProvince="Nimba">
