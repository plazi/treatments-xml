<number box="[501,541,1759,1785]" pageId="3" pageNumber="22" value="2.8">2.8</number>
, 2.0, 
<number box="[604,644,1759,1785]" pageId="3" pageNumber="22" value="1.2">1.2</number>
); II: absent; III: absent; IV: 
<number box="[970,1006,1759,1785]" pageId="3" pageNumber="22" value="9.8">9.8</number>
(
<number box="[1023,1063,1759,1785]" pageId="3" pageNumber="22" value="2.6">2.6</number>
