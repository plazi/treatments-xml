<normalizedToken originalValue="ØJy" pageId="0" pageNumber="4">OJy</normalizedToken>
<normalizedToken originalValue="�rhus" pageId="0" pageNumber="4">Arhus</normalizedToken>
1963, SJy 
<normalizedToken originalValue="Sønderborg" pageId="0" pageNumber="4">Sonderborg</normalizedToken>
