<taxonomicName authority="Rondani, 1850" authorityName="Enderlein" authorityYear="1922" box="[236,364,547,573]" class="Insecta" family="Micropezidae" genus="Grallomya" higherTaxonomySource="GBIF" kingdom="Animalia" order="Diptera" pageId="10" pageNumber="49" phylum="Arthropoda" rank="species" species="albibasis">
