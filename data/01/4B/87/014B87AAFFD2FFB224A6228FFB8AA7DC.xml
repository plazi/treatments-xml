<subSubSection box="[199,1139,1904,1931]" pageId="21" pageNumber="60" type="etymology">
<paragraph blockId="21.[151,1437,1004,2003]" box="[199,1139,1904,1931]" pageId="21" pageNumber="60">
<emphasis bold="true" box="[199,338,1904,1930]" pageId="21" pageNumber="60">Etymology:</emphasis>
