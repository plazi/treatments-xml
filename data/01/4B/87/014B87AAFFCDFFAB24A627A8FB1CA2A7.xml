<taxonomicName authorityName="Ferro &amp; Marshall" authorityYear="2020" box="[344,469,619,645]" class="Insecta" family="Micropezidae" genus="Paragrallomyia" higherTaxonomySource="GBIF" kingdom="Animalia" order="Diptera" pageId="12" pageNumber="51" phylum="Arthropoda" rank="species" species="caliensis">
