<taxonomicName id="9CE54D2D4D3E2622FECCF96266D6F932" box="[287,472,1738,1760]" class="Polychaeta" family="Flabelligeridae" genus="Piromis" kingdom="Animalia" order="Terebellida" pageId="12" pageNumber="13" phylum="Annelida" rank="species" species="brisegnoi" status="n. sp.">
<emphasis id="6991EABC4D3E2622FECCF96266D6F932" box="[287,472,1738,1760]" italics="true" pageId="12" pageNumber="13">Piromis brisegnoi</emphasis>
