(
<taxonomicName id="18A830F26A72615B057C8612887A2865" LSID-HNS="urn:lsid:biosci.ohio-state.edu:osuc_concepts:181974" class="Insecta" family="Formicidae" genus="Pheidole" higherTaxonomySource="CoL" kingdom="Animalia" lsidName="Pheidole macrops Wilson" lsidName-HNS="Pheidole macrops Wilson" order="Hymenoptera" pageNumber="583" phylum="Arthropoda" rank="species" species="macrops">macrops</taxonomicName>
