<taxonomicName id="7A871326D18D5F57A3A153ABB766F08B" LSID-HNS="urn:lsid:biosci.ohio-state.edu:osuc_concepts:34109" class="Insecta" family="Formicidae" genus="Pheidole" higherTaxonomySource="CoL" kingdom="Animalia" lsidName="Pheidole yaqui Creighton &amp; Gregg" lsidName-HNS="Pheidole yaqui Creighton &amp; Gregg" order="Hymenoptera" pageNumber="583" phylum="Arthropoda" rank="species" species="yaqui">yaqui</taxonomicName>
