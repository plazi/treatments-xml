<taxonomicName id="5F0335064BE86A9C334CDC58D93CA92C" LSID-HNS="urn:lsid:biosci.ohio-state.edu:osuc_concepts:34109" class="Insecta" family="Formicidae" genus="Pheidole" higherTaxonomySource="CoL" kingdom="Animalia" lsidName="Pheidole yaqui Creighton &amp; Gregg" lsidName-HNS="Pheidole yaqui Creighton &amp; Gregg" order="Hymenoptera" pageNumber="583" phylum="Arthropoda" rank="species" species="yaqui">yaqui</taxonomicName>
