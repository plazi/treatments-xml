<caption id="7680450D5FB94A14D260C7D46C043D9B" httpUri="https://binary.pensoft.net/fig/10761" pageId="24" pageNumber="25" start="Figure 23" startId="F23">
<paragraph id="C16DCB4CCC41A2E6FB647F77C3CDBE61" pageId="24" pageNumber="25">
