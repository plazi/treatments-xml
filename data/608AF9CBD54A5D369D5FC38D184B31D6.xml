<taxonomicName id="CCD3B280D67C4E3F51A66605B35A40E6" class="Magnoliopsida" family="Fagaceae" genus="Castanea" higherTaxonomySource="IPNI" kingdom="Plantae" lsidName="Castanea mollissima" order="Fagales" pageId="0" pageNumber="1" phylum="Magnoliophyta" rank="species" species="mollissima">
<emphasis id="369BB4878DB915435D433178803CB696" italics="true" pageId="0" pageNumber="1">Castanea mollissima</emphasis>
