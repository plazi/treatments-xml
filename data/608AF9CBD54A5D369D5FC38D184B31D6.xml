<taxonomicName id="D9BE8D2D6316E7EAE5811A107B94BCA2" class="Magnoliopsida" family="Fagaceae" genus="Castanea" higherTaxonomySource="IPNI" kingdom="Plantae" lsidName="Castanea mollissima" order="Fagales" pageId="0" pageNumber="1" phylum="Magnoliophyta" rank="species" species="mollissima">
