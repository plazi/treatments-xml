<treatmentCitationGroup id="C9D50F421968584720CC397EA76DF10A" box="[151,1035,795,814]" pageId="36" pageNumber="293">
<treatmentCitation id="68640E7D1968584720CC397EA215F10A" author="BALY J. S." box="[151,371,795,814]" page="31" pageId="36" pageNumber="293" year="1858">
<taxonomicName id="2EC553EF1968584720CC397EA215F10A" authority="Baly, 1858: 31" authorityName="Baly" authorityPageNumber="31" authorityYear="1858" box="[151,371,795,814]" class="Insecta" family="Chrysomelidae" genus="Xanthispa" kingdom="Animalia" order="Coleoptera" pageId="36" pageNumber="293" phylum="Arthropoda" rank="genus">
<emphasis id="DBB1F47E1968584720CC397EA388F10A" box="[151,238,795,814]" italics="true" pageId="36" pageNumber="293">Xanthispa</emphasis>
<bibRefCitation id="8D54559D1968584720A8397EA215F10A" author="BALY J. S." box="[243,371,795,814]" pageId="36" pageNumber="293" refId="ref28592" refString="BALY J. S. 1858: Catalogue of Hispidae in the collection of the British Museum. Part I. Order of the Trustees, London, 172 pp. + 9 pls." type="book" year="1858">Baly, 1858: 31</bibRefCitation>
