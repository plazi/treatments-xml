<quantity id="4C8B9B70B2581A6AFD86FF42FD0AFF03" box="[587,687,151,175]" metricMagnitude="-2" metricUnit="m" metricValue="4.14" pageId="2" pageNumber="196" unit="mm" value="41.4">41.4 mm</quantity>
(min-max 
<number id="3DBB24B2B2581A6AFCE6FF42FC05FF03" box="[811,928,151,175]" pageId="2" pageNumber="196" value="41.650000000000006" valueMax="42.6" valueMin="40.7">40.7–42.6</number>
); forewing length 
<quantity id="4C8B9B70B2581A6AFBA1FF42FB74FF03" box="[1132,1233,151,175]" metricMagnitude="-2" metricUnit="m" metricValue="4.72" pageId="2" pageNumber="196" unit="mm" value="47.2">47.2 mm</quantity>
