<taxonomicName id="4C094D750E4EFFB5FEE0FAB7FE99FADB" box="[264,323,1369,1392]" class="Gastropoda" family="Volutidae" genus="Lyria" kingdom="Animalia" order="Neogastropoda" pageId="7" pageNumber="108" phylum="Mollusca" rank="genus">
<emphasis id="B97DEAE40E4EFFB5FEE0FAB7FE99FADB" box="[264,323,1369,1392]" italics="true" pageId="7" pageNumber="108">Lyria</emphasis>
