<taxonomicName id="4C094D750E4EFFB5FBD8FAB7FF00FA3F" authority="Lamarck, 1803" authorityName="Lamarck" authorityYear="1803" class="Gastropoda" family="Volutidae" genus="Lyria" kingdom="Animalia" order="Neogastropoda" pageId="7" pageNumber="108" phylum="Mollusca" rank="species" species="harpula" subGenus="Lyria">
