<quantity id="47D9AA938B65D8106997D38A731C3985" metricMagnitude="-2" metricUnit="m" metricValue="2.2" unit="mm" value="22.0">22 mm</quantity>
. Long. alar. 
<quantity id="64EBB8B4F7883CDC9BB1A6BD6E873460" metricMagnitude="-2" metricUnit="m" metricValue="1.4" unit="mm" value="14.0">14 mm</quantity>
