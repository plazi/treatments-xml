<taxonomicName class="Pucciniomycetes" genus="Hemileia" higherTaxonomySource="CoL" kingdom="Fungi" lsidName="Hemileia" order="Pucciniales" pageId="3" pageNumber="4" phylum="Basidiomycota" rank="genus">Hemileia</taxonomicName>
