</taxonomicName>
<emphasis bold="true" box="[391,554,1189,1213]" pageId="0" pageNumber="441">nomen novum</emphasis>
for 
<taxonomicName authority="Breuning, 1940" authorityName="Breuning" authorityYear="1940" box="[600,914,1189,1213]" class="Insecta" family="Cerambycidae" genus="Centruroides" kingdom="Animalia" order="Coleoptera" pageId="0" pageNumber="441" phylum="Arthropoda" rank="genus">
<emphasis box="[600,740,1189,1213]" italics="true" pageId="0" pageNumber="441">Centruroides</emphasis>
<bibRefCitation author="Breuning, S. von" box="[748,914,1189,1213]" pageId="0" pageNumber="441" pagination="407 - 437" refId="ref502" refString="Breuning, S. von (1940) Novae species Cerambycidarum. X. Folia Zoologica et Hydrobiologica, 10 (2), 407 - 437." type="journal article" year="1940">Breuning, 1940</bibRefCitation>
</taxonomicName>
nec 
<bibRefCitation author="Marx, G." box="[967,1095,1189,1213]" pageId="0" pageNumber="441" pagination="207 - 211" refId="ref720" refString="Marx, G. (1889) Arachnida of Albatross exploration. In: Howard L. O. Scientific results of explorations by steamer Albatross. Proceedings of the United States National Museum, 12, 207 - 211." type="journal article" year="1889">Marx, 1889</bibRefCitation>
; 
<typeStatus box="[1108,1154,1189,1213]" pageId="0" pageNumber="441">type</typeStatus>
species 
<taxonomicName authority="Breuning, 1940" authorityName="Breuning" authorityYear="1940" class="Insecta" family="Cerambycidae" genus="Centruroides" kingdom="Animalia" order="Coleoptera" pageId="0" pageNumber="441" phylum="Arthropoda" rank="species" species="bulbifera">
<emphasis italics="true" pageId="0" pageNumber="441">Centruroides bulbifera</emphasis>
<bibRefCitation author="Breuning, S. von" box="[222,387,1225,1249]" pageId="0" pageNumber="441" pagination="407 - 437" refId="ref502" refString="Breuning, S. von (1940) Novae species Cerambycidarum. X. Folia Zoologica et Hydrobiologica, 10 (2), 407 - 437." type="journal article" year="1940">Breuning, 1940</bibRefCitation>
