............................................................................................................... 
<taxonomicName authority="Yeshwanth &amp; Konstantinov, 2021" authorityName="Yeshwanth &amp; Konstantinov" authorityYear="2021" box="[1097,1301,1037,1064]" class="Insecta" family="Miridae" genus="Mertila" kingdom="Animalia" order="Hemiptera" pageId="20" pageNumber="21" phylum="Arthropoda" rank="species" species="rubrocephala" status="sp. nov.">
