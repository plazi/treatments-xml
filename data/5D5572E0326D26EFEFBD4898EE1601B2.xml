<taxonomicName id="525D6B352582B988687CCDB29F0E2BA4" LSID="http://zoobank.org/17A09A1B-0CEC-4FBA-904C-C826A5136BA8" authority="St Laurent &amp; Kawahara" authorityName="St Laurent &amp; Kawahara" authorityYear="2019" class="Insecta" family="Mimallonidae" genus="Lepismalla" higherTaxonomySource="GBIF" kingdom="Animalia" lsidName="Lepismalla" order="Lepidoptera" pageId="22" pageNumber="23" phylum="Arthropoda" rank="genus">Lepismalla St Laurent &amp; Kawahara</taxonomicName>
