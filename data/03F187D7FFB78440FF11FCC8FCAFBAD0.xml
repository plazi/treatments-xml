, Junín Province, (
<collectionCode id="ED49AE04FFB68440FD4DFC10FCC8BAD0" box="[715,785,944,968]" httpUri="http://grbio.org/cool/sxrc-6x8s" name="Cornell University Insect Collection" pageId="61" pageNumber="62">CUIC</collectionCode>
) 
<specimenCount id="9D5EFD48FFB68440FCA6FC10FCAFBAD0" box="[800,886,943,968]" pageId="61" pageNumber="62" type="male">
<number id="3D9024E6FFB68440FCA6FC10FCF7BAD0" box="[800,814,944,968]" pageId="61" pageNumber="62" value="2.0">2</number>
males
