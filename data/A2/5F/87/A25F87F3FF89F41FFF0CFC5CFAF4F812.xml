. 
<collectingCountry box="[359,427,1905,1931]" name="Brazil" pageId="21" pageNumber="176">Brazil</collectingCountry>
(
<collectingRegion box="[442,542,1905,1932]" country="Brazil" name="Roraima" pageId="21" pageNumber="176">Roraima</collectingRegion>
) (
<figureCitation box="[566,656,1905,1932]" captionStart="FIGURE 135" captionStartId="30.[151,250,1821,1845]" captionTargetBox="[151,1436,1080,1800]" captionTargetId="figure-84@30.[151,1436,1080,1800]" captionTargetPageId="30" captionText="FIGURE 135. Records of Bennarella species." figureDoi="http://doi.org/10.5281/zenodo.6405073" httpUri="https://zenodo.org/record/6405073/files/figure.png" pageId="21" pageNumber="176">Fig.135</figureCitation>
