<taxonomicName baseAuthorityName="Druce" baseAuthorityYear="1894" box="[710,792,1405,1429]" class="Insecta" family="Erebidae" genus="Eucereon" higherTaxonomySource="GBIF" kingdom="Animalia" order="Lepidoptera" pageId="5" pageNumber="231" phylum="Arthropoda" rank="species" species="alba">
