<subSubSection lastPageId="42" lastPageNumber="43" pageId="41" pageNumber="42" type="diagnosis">
<paragraph blockId="41.[189,310,1862,1888]" box="[189,310,1862,1888]" pageId="41" pageNumber="42">
<heading bold="true" box="[189,310,1862,1888]" fontSize="11" level="3" pageId="41" pageNumber="42" reason="3">
