(
<taxonomicName authority="(Linnaeus 1753: 1165) Martius (1817: 304)" authorityName="Martius" authorityPageNumber="304" authorityYear="1817" baseAuthorityName="Linnaeus 1753:" baseAuthorityPageNumber="1165" baseAuthorityYear="1165" class="Xanthophyceae" family="Vaucheriaceae" genus="Vaucheria" kingdom="Chromista" order="Vaucheriales" pageId="15" pageNumber="132" phylum="Ochrophyta" rank="species" species="dichotoma">
