prov., 
<collectorName id="26B9533A68500D6CFCE2F906FC3362F0" box="[798,899,1718,1741]" pageId="1" pageNumber="374">
<location id="8E93603768500D6CFCE2F906FC3362F0" LSID="urn:lsid:plazi:treatment:03E587FA68500D6FFF6BF923FDBA66A9:8E93603768500D6CFCE2F906FC3362F0" box="[798,899,1718,1741]" country="Colombia" latitude="-0.104444444" name="La Tagua" pageId="1" pageNumber="374" stateProvince="Caqueta">La Tagua</location>
