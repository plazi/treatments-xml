<subSubSection id="51A46529FF89F769410C0BA2FCC5F9E5" pageId="1" pageNumber="40" type="etymology">
<paragraph id="190136A2FF89F769410C0BA2FCC5F9E5" blockId="1.[264,1323,1270,1582]" pageId="1" pageNumber="40">
<emphasis id="2BCAEAB0FF89F769410C0BA2FE2DF9CD" bold="true" box="[312,445,1516,1542]" pageId="1" pageNumber="40">Etymology</emphasis>
. 
<taxonomicName id="DEBE4D21FF89F76941FB0BA2FDC8F9CD" authority="(Gr.)" baseAuthorityName="Gr." box="[463,600,1516,1542]" class="Insecta" family="Liopteridae" genus="Peras" higherTaxonomySource="GBIF" kingdom="Animalia" order="Hymenoptera" pageId="1" pageNumber="40" phylum="Arthropoda" rank="genus">
<emphasis id="2BCAEAB0FF89F76941FB0BA2FD83F9CE" box="[463,531,1516,1541]" italics="true" pageId="1" pageNumber="40">Peras</emphasis>
