<taxonomicName id="93BC2535ECB8CD8F0C23C1A6CB9608CA" LSID="9012B0BE-ED69-80BE-AF5B-9A1E848827A5" authority="L." authorityName="L." class="Magnoliopsida" family="Melastomataceae" genus="Melastoma" higherTaxonomySource="CoL" kingdom="Plantae" lsidName="Melastoma malabathricum" order="Myrtales" pageId="116" pageNumber="117" phylum="Tracheophyta" rank="species" species="malabathricum">Melastoma malabathricum L.</taxonomicName>
