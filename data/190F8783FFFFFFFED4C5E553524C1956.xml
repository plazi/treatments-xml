<treatmentCitationGroup id="B1B611BBFFFFFFFED4C5E53E556E1F79" box="[151,556,873,895]" pageId="35" pageNumber="36">
<taxonomicName id="56A64D16FFFFFFFED4C5E53E556A1F79" authority="Moulton, 1929: 13" authorityName="Moulton" authorityPageNumber="13" authorityYear="1929" box="[151,552,873,895]" class="Insecta" family="Phlaeothripidae" genus="Holopothrips" higherTaxonomySource="GBIF" kingdom="Animalia" order="Thysanoptera" pageId="35" pageNumber="36" phylum="Arthropoda" rank="species" species="ferrisi">
<emphasis id="A3D2EA87FFFFFFFED4C5E53E56201F79" box="[151,354,873,895]" italics="true" pageId="35" pageNumber="36">Holopothrips ferrisi</emphasis>
<treatmentCitation id="10071084FFFFFFFED53AE53E556A1F79" author="" box="[360,552,873,895]" page="13" pageId="35" pageNumber="36">
<bibRefCitation id="F5374B64FFFFFFFED53AE53E55401F79" box="[360,514,873,895]" pageId="35" pageNumber="36" refId="ref59369" refString="Moulton, D. (1929) New Mexican Thysanoptera. Pan-Pacific Entomologist, 6, 11 - 20." type="journal article">Moulton, 1929</bibRefCitation>
