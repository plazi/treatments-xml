<subSubSection pageId="0" pageNumber="35" type="nomenclature">
<paragraph pageId="0" pageNumber="35">
<taxonomicName authority="Swenie &amp; Matheny" class="Agaricomycetes" family="Hydnaceae" genus="Hydnum" higherTaxonomySource="CoL" kingdom="Fungi" lsidName="Hydnum cuspidatum" order="Cantharellales" pageId="0" pageNumber="35" phylum="Basidiomycota" rank="species" species="cuspidatum">Hydnum cuspidatum Swenie &amp; Matheny</taxonomicName>
<taxonomicNameLabel pageId="0" pageNumber="35">sp. nov.</taxonomicNameLabel>
Figs 4B, 5M
