<taxonomicName authority="Stål, 1873" authorityName="Stål" authorityYear="1873" class="Insecta" family="Stenocephalidae" genus="Dichomerus" higherTaxonomySource="GBIF" kingdom="Animalia" lsidName="Dichomerus santarosensis" order="Hemiptera" pageId="47" pageNumber="140" phylum="Arthropoda" rank="species" species="santarosensis">Dichomerus santarosensis</taxonomicName>
(
<taxonomicName lsidName="" pageId="47" pageNumber="140" rank="subfamily" subfamily="Dichomeridinae">Dichomeridinae</taxonomicName>
, 
<taxonomicName family="Gelechiidae" lsidName="" pageId="47" pageNumber="140" rank="family">Gelechiidae</taxonomicName>
) leaf-tier feeding on new foliage of 
<taxonomicName class="Magnoliopsida" family="Fagaceae" genus="Quercus" higherTaxonomySource="CoL" kingdom="Plantae" lsidName="Quercus oleioides" order="Fagales" pageId="47" pageNumber="140" phylum="Tracheophyta" rank="species" species="oleioides">Quercus oleioides</taxonomicName>
(
<taxonomicName family="Fagaceae" lsidName="" pageId="47" pageNumber="140" rank="family">Fagaceae</taxonomicName>
