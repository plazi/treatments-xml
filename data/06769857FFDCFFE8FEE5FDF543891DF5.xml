<taxonomicName id="49DF52C2FFDCFFE8FEFDFC0940831AD2" baseAuthorityName="Walch" baseAuthorityYear="1775" box="[330,466,917,940]" class="Insecta" family="Hesperiidae" genus="Astraptes" kingdom="Animalia" order="Lepidoptera" pageId="2" pageNumber="487" phylum="Arthropoda" rank="species" species="fulgerator">
<emphasis id="BCABF553FFDCFFE8FEFDFC0940831AD2" box="[330,466,917,940]" italics="true" pageId="2" pageNumber="487">A. fulgerator</emphasis>
</taxonomicName>
