<taxonomicName id="49DF52C2FFDCFFE8FE76FCE943751AF2" authorityName="BROWER" authorityYear="2010" box="[449,548,885,908]" class="Insecta" family="Hesperiidae" genus="Astraptes" kingdom="Animalia" order="Lepidoptera" pageId="2" pageNumber="487" phylum="Arthropoda" rank="species" species="favilla">
