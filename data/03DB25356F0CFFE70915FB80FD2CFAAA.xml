<paragraph id="8BCD94236F0CFFE10BFCF910FECDF916" blockId="114.[189,381,1744,1770]" box="[189,381,1744,1770]" pageId="114" pageNumber="115">
<emphasis id="B90648316F0CFFE10BFCF910FEABF916" allCaps="true" box="[189,283,1744,1770]" inLineHeading="true" pageId="114" pageNumber="115">LENGTH.</emphasis>
<quantity id="4C8A39C66F0CFFE10A62F910FEC9F916" box="[291,377,1744,1770]" metricMagnitude="-2" metricUnit="m" metricValue="1.7" pageId="114" pageNumber="115" unit="mm" value="17.0">17 mm</quantity>
