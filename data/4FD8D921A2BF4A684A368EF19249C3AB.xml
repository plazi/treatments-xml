<emphasis id="E1D5634D8EBF13B078C65E722AF962F1" italics="true" pageNumber="276">Rev.</emphasis>
<taxonomicName id="9FCBDD09844CDE81A659E461DF9ECF36" authority="Sect. Allium" class="Liliopsida" family="Amaryllidaceae" genus="Allium" kingdom="Plantae" order="Asparagales" phylum="Tracheophyta" rank="section" section="Allium">
