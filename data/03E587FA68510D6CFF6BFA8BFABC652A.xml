<taxonomicName id="4C4C4D6F68510D6DFF6BF860FE4D63DA" authority="Curletti &amp; Brule 2011" authorityName="Curletti &amp; Brule" authorityYear="2011" box="[151,509,2000,2023]" class="Insecta" family="Buprestidae" genus="Agrilus" kingdom="Animalia" order="Coleoptera" pageId="0" pageNumber="373" phylum="Arthropoda" rank="species" species="rosanti">
