<taxonomicName id="4C114D77FFB8540EFB6686E1FABDE8B9" baseAuthorityName="Baker" baseAuthorityYear="1915" box="[1269,1376,949,972]" class="Insecta" family="Cicadellidae" higherTaxonomySource="GBIF" kingdom="Animalia" order="Hemiptera" pageId="3" pageNumber="587" phylum="Arthropoda" rank="tribe" tribe="Idiocerini">Idiocerini</taxonomicName>
.
</paragraph>
