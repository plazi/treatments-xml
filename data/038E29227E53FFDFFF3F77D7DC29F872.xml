<taxonomicName id="4C27E3B77E53FFDFFE81765ADC12FA7C" authority="Hewitson, 1868" authorityName="Hewitson" authorityYear="1868" box="[382,780,1391,1415]" class="Insecta" family="Hesperiidae" genus="Hesperia" kingdom="Animalia" order="Lepidoptera" pageId="33" pageNumber="32" phylum="Arthropoda" rank="species" species="artona">
