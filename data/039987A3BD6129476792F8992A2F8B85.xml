<taxonomicName id="4C304D36BD6529446720F8BE2F5C893C" authorityName="Schmitz" authorityYear="1927" box="[890,1039,1843,1862]" class="Insecta" family="Phoridae" genus="Abaristophora" kingdom="Animalia" order="Diptera" pageId="37" pageNumber="461" phylum="Arthropoda" rank="genus">
