<emphasis id="A05D159F86D2FEAE7CDBCF01B60B1EA5" italics="true" pageId="28" pageNumber="71">C. contorta</emphasis>
</taxonomicName>
s.str. 
<emphasis id="7E12253AE55C1218107F6B25560384A5" bold="true" pageId="28" pageNumber="71">b</emphasis>
<taxonomicName id="2099A4460452621DE0C65AE730A05E26" genus="C." lsidName="C. rectangularis" pageId="28" pageNumber="71" rank="species" species="rectangularis">
