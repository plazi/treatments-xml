<collectingCountry id="EDB07672FFC8055088A1F8FEE74B1323" box="[501,586,1853,1878]" name="Mexico" pageId="28" pageNumber="479">Mexico</collectingCountry>
(
<collectingRegion id="5763F800FFC805508B0EF8FEE7B61323" box="[602,695,1853,1878]" country="Mexico" name="Chiapas" pageId="28" pageNumber="479">Chiapas</collectingRegion>
) (
<figureCitation id="0D9C2A67FFC805508B9AF8FEE6311323" box="[718,816,1853,1878]" captionStart="FIGURE 130" captionStartId="41.[151,250,1338,1360]" captionTargetBox="[152,1433,196,1309]" captionTargetId="figure@41.[151,1436,193,1316]" captionTargetPageId="41" captionText="FIGURE 130. Geographic distribution of Himantigera species. Squares represent holotypes, and circles paratypes and additional material." httpUri="https://zenodo.org/record/2614865/files/figure.png" pageId="28" pageNumber="479">Fig. 130</figureCitation>
