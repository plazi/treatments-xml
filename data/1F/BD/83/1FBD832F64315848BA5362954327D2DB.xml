<emphasis italics="true" pageId="32" pageNumber="33">hpun-hpawk</emphasis>
, 
<emphasis italics="true" pageId="32" pageNumber="33">mai-pyit</emphasis>
, 
<emphasis italics="true" pageId="32" pageNumber="33">sumhtung</emphasis>
