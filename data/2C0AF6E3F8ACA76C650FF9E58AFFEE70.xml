<taxonomicName id="00F9D7A8CA102F3117FBFF307E78749B" LSID-ZBK="urn:lsid:zoobank.org:act:9316BCE6-31A6-4087-9206-D20EFC9BD6BC" class="Actinopterygii" family="Loricariidae" genus="Hemipsilichthys" higherTaxonomySource="CoL" kingdom="Animalia" lsidName-ZBK="Hemipsilichthys Eigenmann &amp; Eigenmann 1889:46" order="Siluriformes" pageNumber="2" phylum="Chordata" rank="genus">Hemipsilichthys</taxonomicName>
