of the subfamily 
<taxonomicName id="4C7A4D1FB7BFFF0A665E7F85DFFCFD4A" authorityName="Mulsant" authorityYear="1846" box="[778,908,695,721]" class="Insecta" family="Coccinellidae" kingdom="Animalia" order="Coleoptera" pageId="238" pageNumber="239" phylum="Arthropoda" rank="subFamily" subFamily="Scymninae">Scymninae</taxonomicName>
........... 
<taxonomicName id="4C7A4D1FB7BFFF0A66BA7F85D907FD4A" authority="(Thaxt.) Thaxt." authorityName="Thaxt." baseAuthorityName="Thaxt." box="[1006,1399,695,722]" class="Magnoliopsida" family="Asteraceae" genus="Harmonia" kingdom="Plantae" order="Asterales" pageId="238" pageNumber="239" phylum="Tracheophyta" rank="species" species="coccinelloides">
<emphasis id="B90EEA8EB7BFFF0A66BA7F85D8CDFD49" bold="true" box="[1006,1213,695,722]" italics="true" pageId="238" pageNumber="239">H. coccinelloides</emphasis>
(Thaxt.) Thaxt.
</taxonomicName>
</keyLead>
</paragraph>
<paragraph id="8BC5369CB7BFFF0A65957FEFD907FC86" blockId="238.[189,1399,657,797]" pageId="238" pageNumber="239">
<keyLead id="308B95A9B7BFFF0A65957FEFD907FC86" pageId="238" pageNumber="239">
