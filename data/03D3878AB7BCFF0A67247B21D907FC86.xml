<taxonomicName id="4C7A4D1FB7BFFF0A65BF7E31DDFCFC86" authorityName="Latreille" authorityYear="1807" box="[235,396,771,797]" class="Insecta" family="Coccinellidae" kingdom="Animalia" order="Coleoptera" pageId="238" pageNumber="239" phylum="Arthropoda" rank="family">Coccinellidae</taxonomicName>
