<paragraph id="F819E643BCD0506D88CAC664305AF20D" pageId="21" pageNumber="22">
<taxonomicName id="7E3890E47818C6CF8EA6A3FB49264700" class="Insecta" family="Mimallonidae" genus="Lacosoma" higherTaxonomySource="CoL" kingdom="Animalia" lsidName="Lacosoma chiridota" order="Lepidoptera" pageId="21" pageNumber="22" phylum="Arthropoda" rank="species" species="chiridota">Lacosoma chiridota</taxonomicName>
