<taxonomicName id="7E3EECCF1757C55403684F0C30C027B0" authority="Grote, 1864" authorityName="Grote" authorityYear="1864" class="Insecta" family="Mimallonidae" genus="Lacosoma" higherTaxonomySource="CoL" kingdom="Animalia" lsidName="Lacosoma" order="Lepidoptera" pageId="21" pageNumber="22" phylum="Arthropoda" rank="genus">Lacosoma Grote, 1864</taxonomicName>
