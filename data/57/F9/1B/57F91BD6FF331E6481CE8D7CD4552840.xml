<taxonomicName class="Insecta" family="Andrenidae" genus="Perdita" higherTaxonomySource="CoL" kingdom="Animalia" lsidName="Perdita stephanomeriae" order="Hymenoptera" pageId="3" pageNumber="90" phylum="Arthropoda" rank="species" species="stephanomeriae">Perdita stephanomeriae</taxonomicName>
