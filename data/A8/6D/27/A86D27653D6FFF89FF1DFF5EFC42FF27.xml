Only known from 
<collectingRegion box="[567,824,151,177]" country="Colombia" name="Magdalena" pageId="29" pageNumber="30">Magdalena department</collectingRegion>
(
<figureCitation box="[840,924,151,177]" captionStart="FIGURE 32" captionStartId="58.[151,250,1943,1967]" captionTargetBox="[193,1399,187,1920]" captionTargetId="figure-27@58.[187,1399,181,1920]" captionTargetPageId="58" captionText="FIGURE 32. Distribution of species of the florezi group in Colombia." figureDoi="http://doi.org/10.5281/zenodo.4468453" httpUri="https://zenodo.org/record/4468453/files/figure.png" pageId="29" pageNumber="30">Fig. 32</figureCitation>
).
</paragraph>
