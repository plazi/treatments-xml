<collectingCountry box="[1022,1127,1015,1039]" name="Brazil" pageId="14" pageNumber="210">BRAZIL</collectingCountry>
: 
<emphasis bold="true" box="[1140,1333,1014,1039]" pageId="14" pageNumber="210">Distrito Federal</emphasis>
, 
<taxonomicName box="[1349,1436,1014,1039]" class="Insecta" family="Hesperiidae" genus="Ginungagapus" kingdom="Animalia" order="Lepidoptera" pageId="14" pageNumber="210" phylum="Arthropoda" rank="species" species="brasilia" status="sp. nov.">
<collectingCountry box="[1349,1436,1014,1039]" name="Brazil" pageId="14" pageNumber="210">Brasília</collectingCountry>
