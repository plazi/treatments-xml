<paragraph pageId="0" pageNumber="79">
<taxonomicName authorityName="Hurkmans" authorityYear="1993" class="Insecta" family="Syrphidae" genus="Merodon" higherTaxonomySource="CoL" kingdom="Animalia" lsidName="Merodon sophron" order="Diptera" pageId="0" pageNumber="79" phylum="Arthropoda" rank="species" species="sophron">
