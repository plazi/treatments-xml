(
<taxonomicName class="Insecta" family="Megachilidae" genus="Noteriades" higherTaxonomySource="CoL" kingdom="Animalia" lsidName="Noteriades" order="Hymenoptera" pageId="7" pageNumber="72" phylum="Arthropoda" rank="genus">Noteriades</taxonomicName>
