<subSubSection pageId="3" pageNumber="82" type="nomenclature">
<paragraph pageId="3" pageNumber="82">
<taxonomicName LSID="http://zoobank.org/D324A453-1294-48AB-AC2E-6DC359763FF7" class="Gastropoda" family="Cochliopidae" genus="Pyrgophorus" higherTaxonomySource="CoL" kingdom="Animalia" lsidName="Pyrgophorus thompsoni" order="Littorinimorpha" pageId="3" pageNumber="82" phylum="Mollusca" rank="species" species="thompsoni">Pyrgophorus thompsoni</taxonomicName>
