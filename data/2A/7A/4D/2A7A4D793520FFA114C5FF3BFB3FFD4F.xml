<taxonomicName authorityName="Wherry" authorityYear="1944" baseAuthorityName="A. Nelson" box="[832,897,333,359]" class="Magnoliopsida" family="Polemoniaceae" genus="Phlox" kingdom="Plantae" order="Ericales" pageId="13" pageNumber="14" phylum="Tracheophyta" rank="genus">
