<taxonomicName id="4C484D53FF864135FF72FC01FE12B0A8" authority="Duda, 1930: 59" authorityName="Duda, Melanochaeta Bezzi" authorityPageNumber="59" authorityYear="1930" box="[151,419,984,1006]" class="Insecta" family="Chloropidae" genus="Goniaspis" higherTaxonomySource="GBIF" kingdom="Animalia" order="Diptera" pageId="20" pageNumber="21" phylum="Arthropoda" rank="genus">
<emphasis id="B93CEAC2FF864135FF72FC01FF4FB0A8" box="[151,254,985,1006]" italics="true" pageId="20" pageNumber="21">Goniaspis</emphasis>
