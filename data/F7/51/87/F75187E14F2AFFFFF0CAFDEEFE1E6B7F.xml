<taxonomicName authority="Curtis" authorityName="Curtis" authorityYear="1833" class="Insecta" family="Halictidae" genus="Lasioglossum" kingdom="Animalia" order="Hymenoptera" pageId="7" pageNumber="6" phylum="Arthropoda" rank="genus">
