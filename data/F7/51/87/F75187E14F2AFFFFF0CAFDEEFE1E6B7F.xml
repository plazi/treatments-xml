<collectionCode box="[1000,1088,803,827]" country="USA" httpUri="http://biocol.org/urn:lsid:biocol.org:col:34925" lsid="urn:lsid:biocol.org:col:34925" name="American Museum of Natural History" pageId="7" pageNumber="6">AMNH</collectionCode>
