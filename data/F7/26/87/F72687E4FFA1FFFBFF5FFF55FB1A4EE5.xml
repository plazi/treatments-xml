<taxonomicName baseAuthorityName="Linne" baseAuthorityYear="1767" box="[327,456,223,246]" class="Insecta" family="Meloidae" genus="Ceroctis" kingdom="Animalia" order="Coleoptera" pageId="54" pageNumber="55" phylum="Arthropoda" rank="species" species="capensis">
<emphasis box="[327,456,223,246]" italics="true" pageId="54" pageNumber="55">C. capensis</emphasis>
