<subSubSection pageId="null" pageNumber="383" type="vernacular_name">
<paragraph pageId="null" pageNumber="383">
<normalizedToken originalValue="Großblumige" pageId="null" pageNumber="383">Grossblumige</normalizedToken>
Glockenblume
</paragraph>
