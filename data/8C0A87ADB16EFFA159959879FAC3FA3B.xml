<taxonomicName id="C3A34D38B169FFA05A5F9F22FD70FBE8" box="[540,709,1060,1086]" class="Magnoliopsida" family="Linderniaceae" genus="Isabelcristinia" higherTaxonomySource="GBIF" kingdom="Plantae" order="Lamiales" pageId="4" pageNumber="5" phylum="Tracheophyta" rank="genus">
