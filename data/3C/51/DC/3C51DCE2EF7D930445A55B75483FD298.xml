<subSubSection pageId="null" pageNumber="585" type="vernacular_name">
<paragraph pageId="null" pageNumber="585">
Amerikanische 
<taxonomicName class="Liliopsida" family="Asparagaceae" genus="Agave" kingdom="Plantae" order="Asparagales" pageId="null" pageNumber="585" phylum="Tracheophyta" rank="genus">Agave</taxonomicName>
</paragraph>
