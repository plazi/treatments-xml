<subSubSection pageId="1" pageNumber="140" type="materials_examined">
<paragraph blockId="1.[151,1104,784,809]" box="[151,1104,784,809]" pageId="1" pageNumber="140">
<typeStatus box="[151,201,785,809]" pageId="1" pageNumber="140">Type</typeStatus>
species. 
<taxonomicName authorityName="Baly" authorityYear="1865" box="[294,362,785,808]" class="Insecta" family="Chrysomelidae" genus="Eryxia" higherTaxonomySource="GBIF" kingdom="Animalia" order="Coleoptera" pageId="1" pageNumber="140" phylum="Arthropoda" rank="genus">
<emphasis box="[294,362,785,808]" italics="true" pageId="1" pageNumber="140">Eryxia</emphasis>
