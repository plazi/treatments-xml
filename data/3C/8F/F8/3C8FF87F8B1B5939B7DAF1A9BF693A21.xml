<taxonomicName genus="C." lsidName="C. tibialis" pageId="22" pageNumber="65" rank="species" species="tibialis">
<emphasis italics="true" pageId="22" pageNumber="65">C. tibialis</emphasis>
</taxonomicName>
<emphasis bold="true" pageId="22" pageNumber="65">c</emphasis>
<taxonomicName genus="C." lsidName="C. circumdata" pageId="22" pageNumber="65" rank="species" species="circumdata">
<emphasis italics="true" pageId="22" pageNumber="65">C. circumdata</emphasis>
</taxonomicName>
<emphasis bold="true" pageId="22" pageNumber="65">d</emphasis>
<taxonomicName genus="C." lsidName="C. vartianorum" pageId="22" pageNumber="65" rank="species" species="vartianorum">
