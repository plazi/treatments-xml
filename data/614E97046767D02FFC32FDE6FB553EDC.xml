<taxonomicName id="2EE75D916764D02EFD93F864FD5C3CD8" authorityName="J.-P.Castillon" authorityYear="2018" box="[546,707,2007,2025]" class="Magnoliopsida" family="Euphorbiaceae" genus="Euphorbia" kingdom="Plantae" order="Malpighiales" pageId="6" pageNumber="167" phylum="Tracheophyta" rank="species" species="gigantea">
