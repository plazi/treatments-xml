<taxonomicName id="E0C4FE489BFD3FA8C7966DDD8EA6AEA8" LSID="urn:lsid:zoobank.org:act:21847924-C4A8-4A78-8501-E252DC0EB426" authority="Durante &amp; Roig Alsina" authorityName="Durante &amp; Roig Alsina" authorityYear="2012" class="Insecta" family="Megachilidae" genus="Trichothurgus" higherTaxonomySource="GBIF,CoL" kingdom="Animalia" lsidName="Trichothurgus bolitophilus" order="Hymenoptera" pageId="5" pageNumber="6" phylum="Arthropoda" rank="species" species="bolitophilus" status="sp. n.">Trichothurgus bolitophilus Durante &amp; Roig Alsina</taxonomicName>
