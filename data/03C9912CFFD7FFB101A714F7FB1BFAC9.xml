<taxonomicName id="4C605BB9FFD4FFB105181369FB00FEA0" authorityName="Quatrefages" authorityYear="1866" box="[1064,1155,259,285]" class="Polychaeta" family="Orbiniidae" genus="Orbinia" kingdom="Animalia" pageId="6" pageNumber="7" phylum="Annelida" rank="genus">Orbinia</taxonomicName>
, 
<taxonomicName id="4C605BB9FFD4FFB105A11369FB56FEA0" authorityName="Kinberg" authorityYear="1866" box="[1169,1237,259,285]" class="Polychaeta" family="Orbiniidae" genus="Phylo" kingdom="Animalia" pageId="6" pageNumber="7" phylum="Annelida" rank="genus">Phylo</taxonomicName>
