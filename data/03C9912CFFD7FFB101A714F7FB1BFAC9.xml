, 
<taxonomicName id="4C605BB9FFD4FFB103141369FDF6FEA0" authorityName="Hartman" authorityYear="1957" box="[548,629,259,285]" class="Polychaeta" family="Orbiniidae" genus="Califia" kingdom="Animalia" pageId="6" pageNumber="7" phylum="Annelida" rank="genus">Califia</taxonomicName>
