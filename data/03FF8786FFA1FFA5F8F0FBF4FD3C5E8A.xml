<taxonomicNameLabel id="A21157F9FFA0FFA7FAE3F81FFD365ED4" box="[644,701,1982,2006]" pageId="9" pageNumber="568" rank="species">sp. n.</taxonomicNameLabel>
</emphasis>
; D, H. female 
<taxonomicName id="4C564D13FFA0FFA7FB33F81FFC635ED7" authorityName="Macquart. The" authorityYear="1843" box="[852,1000,1982,2005]" class="Insecta" family="Tephritidae" genus="Tephritis" kingdom="Animalia" order="Diptera" pageId="9" pageNumber="568" phylum="Arthropoda" rank="species" species="canariensis">
<emphasis id="B922EA82FFA0FFA7FB33F81FFC635ED7" box="[852,1000,1982,2005]" italics="true" pageId="9" pageNumber="568">O. canariensis</emphasis>
