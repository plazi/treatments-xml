<subSubSection id="E55F6687AF1567749AD7524FE0937FF0" pageId="6" pageNumber="115" type="biology_ecology">
<paragraph id="EA7A5362C432CDB89FEC27FA9FA61DD0" pageId="6" pageNumber="115">Biology.</paragraph>
<paragraph id="425D285607032880EFFADBEB9BFCA250" pageId="6" pageNumber="115">
Recorded from 
<taxonomicName id="E9A798772A296974B97FE25ECC10BF7D" class="Insecta" family="Tachinidae" genus="Eugenia" higherTaxonomySource="CoL" kingdom="Animalia" lsidName="Eugenia" order="Diptera" pageId="6" pageNumber="115" phylum="Arthropoda" rank="genus">
