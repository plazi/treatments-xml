<taxonomicName id="76043C0AE4BD17D049D0619DE51EADCD" class="Magnoliopsida" family="Myrtaceae" genus="Tristania" higherTaxonomySource="CoL" kingdom="Plantae" lsidName="Tristania" order="Myrtales" pageId="6" pageNumber="115" phylum="Tracheophyta" rank="genus">
