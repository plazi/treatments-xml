<paragraph id="F3826F1B283A745A1C3B4987BC51137C" pageId="18" pageNumber="19">
<taxonomicName id="6CB9B0045026C8153AD3CAF0538E78E5" class="Arachnida" family="Brachychthoniidae" genus="Liochthonius" kingdom="Animalia" order="Sarcoptiformes" pageId="18" pageNumber="19" phylum="Arthropoda" rank="genus">Liochthonius</taxonomicName>
1) 
<taxonomicNameLabel id="5838B7225A479C1CFDF5CE40423AEEFD" rank="genus">nov. gen.</taxonomicNameLabel>
(= 
<taxonomicName id="368E94EC9C45B883E4A542163C4B255F" class="Arachnida" family="Brachychthoniidae" genus="Brachychthonius" kingdom="Animalia" order="Sarcoptiformes" phylum="Arthropoda" rank="genus">Brachychthonius</taxonomicName>
