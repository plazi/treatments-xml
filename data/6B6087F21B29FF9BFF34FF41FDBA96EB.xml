<taxonomicName id="24C94D671B29FF9BFC95F884FBF49657" box="[822,1075,1873,1897]" class="Magnoliopsida" family="Plantaginaceae" genus="Linaria" kingdom="Plantae" order="Lamiales" pageId="77" pageNumber="78" phylum="Tracheophyta" rank="species" species="triornitophora">
