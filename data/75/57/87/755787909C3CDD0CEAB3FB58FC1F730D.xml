<subSubSection box="[151,774,1330,1355]" pageId="2" type="materials_examined">
<paragraph blockId="2.[151,1437,1330,2003]" box="[151,774,1330,1355]" pageId="2">
<emphasis bold="true" box="[151,299,1330,1355]" pageId="2">Type species</emphasis>
. 
<taxonomicName authority="Li, 2017" authorityName=", Latin" authorityYear="2017" box="[313,593,1331,1355]" class="Hexactinellida" family="Pheronematidae" genus="Pheronemoides" kingdom="Animalia" order="Amphidiscosida" pageId="2" phylum="Porifera" rank="species" species="fungosus" status="gen. et sp. nov.">
<emphasis box="[313,593,1331,1355]" italics="true" pageId="2">Pheronemoides fungosus</emphasis>
</taxonomicName>
<taxonomicNameLabel box="[599,774,1330,1355]" pageId="2" rank="species">
