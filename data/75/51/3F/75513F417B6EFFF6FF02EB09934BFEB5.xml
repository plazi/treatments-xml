<emphasis box="[415,464,1540,1565]" italics="true" pageId="31" pageNumber="32">poca</emphasis>
</taxonomicName>
, 
<taxonomicName authority="(Richards)" authorityName="Crabo &amp; Lafontaine" authorityYear="2009" baseAuthorityName="Richards" baseAuthorityYear="1943" box="[479,769,1539,1566]" class="Insecta" family="Noctuidae" genus="Lasionycta" kingdom="Animalia" order="Lepidoptera" pageId="31" pageNumber="32" phylum="Arthropoda" rank="species" species="coloradensis">
