<emphasis box="[140,259,1469,1495]" italics="true" pageId="31" pageNumber="32">anthracina</emphasis>
</taxonomicName>
<taxonomicNameLabel box="[266,329,1470,1496]" pageId="31" pageNumber="32" rank="species">sp. n.</taxonomicNameLabel>
, and 
<taxonomicName authorityName="Crabo &amp; Lafontaine" authorityYear="2009" box="[391,512,1470,1496]" class="Insecta" family="Noctuidae" genus="Lasionycta" kingdom="Animalia" order="Lepidoptera" pageId="31" pageNumber="32" phylum="Arthropoda" rank="species" species="coracina">
