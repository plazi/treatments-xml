</taxonomicName>
, 
<taxonomicName authority="Crabo &amp; Lafontaine, 2009" authorityName="Crabo &amp; Lafontaine" authorityYear="2009" box="[894,1029,1539,1566]" class="Insecta" family="Noctuidae" genus="Lasionycta" kingdom="Animalia" order="Lepidoptera" pageId="31" pageNumber="32" phylum="Arthropoda" rank="species" species="sasquatch" status="sp. n.">
