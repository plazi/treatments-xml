<emphasis bold="true" box="[185,489,1222,1249]" pageId="98" pageNumber="99">
<emphasis box="[185,336,1222,1248]" inLineHeading="true" pageId="98" pageNumber="99" reason="1">Distribution</emphasis>
and biology.
</emphasis>
<taxonomicName authorityName="Crabo &amp; Lafontaine" authorityYear="2009" baseAuthorityName="Troubridge &amp; Mustelin" baseAuthorityYear="2009" box="[495,686,1223,1249]" class="Insecta" family="Noctuidae" genus="Psammopolia" higherTaxonomySource="GBIF" kingdom="Animalia" order="Lepidoptera" pageId="98" pageNumber="99" phylum="Arthropoda" rank="species" species="sala">
<emphasis box="[495,686,1223,1249]" italics="true" pageId="98" pageNumber="99">Psammopolia sala</emphasis>
