<emphasis bold="true" box="[140,517,1539,1566]" pageId="14" pageNumber="15">
<taxonomicName baseAuthorityName="Hampson" baseAuthorityYear="1905" box="[140,346,1539,1566]" class="Insecta" family="Noctuidae" genus="Lasionycta" kingdom="Animalia" order="Lepidoptera" pageId="14" pageNumber="15" phylum="Arthropoda" rank="species" species="phaea">
<emphasis bold="true" box="[140,346,1539,1566]" italics="true" pageId="14" pageNumber="15">Lasionycta phaea</emphasis>
