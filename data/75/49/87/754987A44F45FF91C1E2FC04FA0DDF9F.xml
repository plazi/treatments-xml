<subSubSection pageId="1" pageNumber="2" type="nomenclature">
<paragraph blockId="1.[151,299,911,937]" box="[151,299,911,937]" pageId="1" pageNumber="2">
<heading bold="true" box="[151,299,911,937]" fontSize="11" level="1" pageId="1" pageNumber="2" reason="1">
<taxonomicName box="[151,299,911,937]" class="Malacostraca" family="Janirellidae" kingdom="Animalia" order="Isopoda" pageId="1" pageNumber="2" phylum="Arthropoda" rank="family">
