<paragraph blockId="10.[675,1210,1377,1699]" pageId="10" pageNumber="83">
<typeStatus box="[677,725,1378,1401]" pageId="10" pageNumber="83">TYPE</typeStatus>
SPECIES. — 
<taxonomicName authority="Vršanský, 2009" authorityName="Vršanský" authorityYear="2009" box="[847,1041,1377,1401]" class="Insecta" family="Liberiblattinidae" genus="Leptolythica" higherTaxonomySource="GBIF" kingdom="Animalia" order="Blattodea" pageId="10" pageNumber="83" phylum="Arthropoda" rank="species" species="vincenti" status="n. sp.">
