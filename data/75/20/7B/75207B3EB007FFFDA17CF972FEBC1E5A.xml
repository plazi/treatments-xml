<taxonomicName authorityName="Zamani &amp; Marusik" authorityYear="2020" baseAuthorityName="Walckenaer" baseAuthorityYear="1841" class="Arachnida" family="Agelenidae" genus="Gorbiscape" kingdom="Animalia" order="Araneae" pageId="5" pageNumber="373" phylum="Arthropoda" rank="species" species="agelenoides">
