<subSubSection pageId="17" pageNumber="385" type="etymology">
<paragraph blockId="17.[125,772,1397,2100]" pageId="17" pageNumber="385">
<emphasis box="[155,269,1431,1455]" italics="true" pageId="17" pageNumber="385">Etymology</emphasis>
