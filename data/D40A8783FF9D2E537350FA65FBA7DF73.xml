<taxonomicName id="9BA34D16FF9D2E56767AF9B3FE52DD75" authority="Yang &amp; Saigusa" authorityName="Yang &amp; Saigusa" class="Insecta" family="Dolichopodidae" genus="Hercostomus" kingdom="Animalia" order="Diptera" pageId="33" pageNumber="34" phylum="Arthropoda" rank="species" species="rotundatus">
