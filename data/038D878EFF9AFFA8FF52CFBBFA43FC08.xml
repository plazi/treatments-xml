<taxonomicName id="4C244D1BFF9AFFA8FCD4CE43FBBFFEA9" authority="Nielson, 1982" authorityName="Nielson" authorityYear="1982" box="[785,1121,292,314]" class="Insecta" family="Cicadellidae" genus="Brasura" higherTaxonomySource="GBIF" kingdom="Animalia" order="Hemiptera" pageId="1" pageNumber="592" phylum="Arthropoda" rank="species" species="variabilis">
