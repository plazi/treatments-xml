<taxonomicName id="FEE94D5DFF9B927916BAFC4EFD920562" authority="Walker, 1870" authorityName="Walker" authorityYear="1870" box="[151,542,1013,1039]" class="Insecta" family="Hesperiidae" genus="Spialia" kingdom="Animalia" order="Lepidoptera" pageId="35" pageNumber="336" phylum="Arthropoda" rank="subSpecies" species="doris" subSpecies="doris">
