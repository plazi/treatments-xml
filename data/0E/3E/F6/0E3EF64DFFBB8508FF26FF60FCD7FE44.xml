<taxonomicName authorityName="Kolanowska &amp; Szlachetko" authorityYear="2014" box="[593,849,410,436]" class="Liliopsida" family="Orchidaceae" genus="Myoxanthus" kingdom="Plantae" order="Asparagales" pageId="28" pageNumber="239" phylum="Tracheophyta" rank="species" species="ortizianus">
