<subSubSection lastPageId="10" lastPageNumber="353" pageId="8" pageNumber="351" type="description">
<paragraph blockId="8.[151,1436,1391,1991]" pageId="8" pageNumber="351">
<emphasis bold="true" box="[199,345,1715,1740]" pageId="8" pageNumber="351">Description.</emphasis>
N = 
<number box="[407,438,1716,1740]" pageId="8" pageNumber="351" value="64.0">64</number>
