<number box="[1009,1023,658,682]" pageId="5" pageNumber="58" value="1.0">1</number>
st, R 
<number box="[1068,1076,674,688]" pageId="5" pageNumber="58" value="2.0">2</number>
+ 
<number box="[1085,1092,674,688]" pageId="5" pageNumber="58" value="3.0">3</number>
distinct, CR 
<number box="[1246,1357,658,682]" pageId="5" pageNumber="58" value="0.945" valueMax="0.95" valueMin="0.94">0.94–0.95</number>
