<number box="[1394,1436,404,428]" pageId="5" pageNumber="58" value="1.5" valueMax="2.0" valueMin="1.0">1–2</number>
median and 
<number box="[290,304,439,463]" pageId="5" pageNumber="58" value="2.0">2</number>
