) and 
<taxonomicName box="[862,1107,1774,1799]" class="Magnoliopsida" family="Verbenaceae" genus="Stachytarpheta" kingdom="Plantae" order="Lamiales" pageId="12" pageNumber="448" phylum="Tracheophyta" rank="species" species="indica">
<emphasis box="[862,1107,1774,1799]" italics="true" pageId="12" pageNumber="448">Stachytarpheta indica</emphasis>
