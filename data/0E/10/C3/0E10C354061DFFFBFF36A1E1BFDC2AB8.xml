<taxonomicName authority="(Pocock, 1900)" authorityName="Pocock" authorityYear="1900" baseAuthorityName="Pocock" baseAuthorityYear="1900" box="[361,766,757,782]" class="Arachnida" family="Ctenidae" genus="Africactenus" kingdom="Animalia" order="Araneae" pageId="1" pageNumber="396" phylum="Arthropoda" rank="species" species="agilior">
