species. – 
<taxonomicName authority="Sakai, 1935" authorityName="Sakai" authorityYear="1935" box="[279,630,2053,2074]" class="Malacostraca" family="Xanthidae" genus="Carpoporus" kingdom="Animalia" order="Decapoda" pageId="13" pageNumber="398" phylum="Arthropoda" rank="species" species="orientalis">
