<subSubSection box="[151,694,1015,1039]" pageId="21" pageNumber="22" type="type_taxon">
<paragraph blockId="21.[151,694,1015,1039]" box="[151,694,1015,1039]" pageId="21" pageNumber="22">
<emphasis bold="true" box="[151,299,1015,1039]" pageId="21" pageNumber="22">
<typeStatus box="[151,207,1015,1039]" pageId="21" pageNumber="22">Type</typeStatus>
species.
</emphasis>
<taxonomicName authority="Thomas, 1965" authorityName="Thomas" authorityYear="1965" box="[305,694,1016,1039]" class="Reptilia" family="Leptotyphlopidae" genus="Leptotyphlops" kingdom="Animalia" order="Squamata" pageId="21" pageNumber="22" phylum="Chordata" rank="species" species="pyrites">
