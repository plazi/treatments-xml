<taxonomicName authorityName="de Buen" authorityYear="1928" box="[383,537,475,501]" class="Actinopterygii" family="Gobiidae" genus="Gobius" kingdom="Animalia" order="Perciformes" pageId="60" pageNumber="61" phylum="Chordata" rank="species" species="roulei">
