<taxonomicName authorityName="Linnaeus" authorityYear="1758" box="[649,806,937,964]" class="Actinopterygii" family="Gobiidae" genus="Gobius" kingdom="Animalia" order="Perciformes" pageId="53" pageNumber="54" phylum="Chordata" rank="species" species="paganellus">
