<quantity box="[486,569,290,317]" metricMagnitude="-2" metricUnit="m" metricValue="4.5" metricValueMax="5.0" metricValueMin="4.0" pageId="64" pageNumber="65" unit="cm" value="4.5" valueMax="5.0" valueMin="4.0">4–5 cm</quantity>
