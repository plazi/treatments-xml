<collectingRegion box="[151,216,330,355]" country="Tanzania" name="Kusini Unguja" pageId="18" pageNumber="505">South</collectingRegion>
Sudan, and 
<collectionCode box="[354,426,331,355]" pageId="18" pageNumber="505">TCEC</collectionCode>
