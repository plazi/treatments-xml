<subSubSection pageId="0" pageNumber="75" type="reference_group">
<paragraph pageId="0" pageNumber="75">
<taxonomicName authorityName="Agarwal, Grewal, Kapoor, Gupta &amp; Sharma" authorityYear="1989" class="Insecta" family="Tephritidae" genus="Campiglossa" higherTaxonomySource="CoL" kingdom="Animalia" lsidName="Campiglossa kumaonensis" order="Diptera" pageId="0" pageNumber="75" phylum="Arthropoda" rank="species" species="kumaonensis">Campiglossa kumaonensis</taxonomicName>
