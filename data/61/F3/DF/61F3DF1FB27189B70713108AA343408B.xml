<subSubSection type="nomenclature">
<paragraph pageNumber="298">
<taxonomicName LSID-HNS="urn:lsid:biosci.ohio-state.edu:osuc_concepts:181735" class="Insecta" family="Formicidae" genus="Pheidole" higherTaxonomySource="CoL" kingdom="Animalia" lsidName="Pheidole hector Wilson" lsidName-HNS="Pheidole hector Wilson" order="Hymenoptera" pageNumber="298" phylum="Arthropoda" rank="species" species="hector">Pheidole hector</taxonomicName>
