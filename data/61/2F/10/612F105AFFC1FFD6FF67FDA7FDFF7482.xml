<subSubSection pageId="13" pageNumber="40" type="etymology">
<paragraph blockId="13.[151,1436,151,645]" pageId="13" pageNumber="40">
<emphasis bold="true" box="[199,334,260,285]" pageId="13" pageNumber="40">Etymology.</emphasis>
