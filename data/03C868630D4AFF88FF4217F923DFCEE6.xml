<taxonomicName id="4C61A2F60D4AFF8FFB3710792371CB5C" authorityName="Melichar" authorityYear="1926" box="[1250,1330,1107,1128]" class="Insecta" family="Cicadellidae" genus="Balacha" kingdom="Animalia" order="Hemiptera" pageId="11" pageNumber="553" phylum="Arthropoda" rank="genus">
<emphasis id="B91505670D4AFF8FFB3710792371CB5C" box="[1250,1330,1107,1128]" italics="true" pageId="11" pageNumber="553">Balacha</emphasis>
