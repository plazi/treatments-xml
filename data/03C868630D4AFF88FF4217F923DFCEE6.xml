<quantity id="4C9974900D4AFF8FFCDE131A2517C872" box="[779,852,1840,1862]" metricMagnitude="-3" metricUnit="m" metricValue="9.5" pageId="11" pageNumber="553" unit="mm" value="9.5">9.5 mm</quantity>
.................... 
<taxonomicName id="4C61A2F60D4AFF8FFB99131B23DFC872" authority="(Signoret, 1854)" baseAuthorityName="Signoret" baseAuthorityYear="1854" box="[1100,1436,1840,1862]" class="Insecta" family="Cicadellidae" genus="Balacha" kingdom="Animalia" order="Hemiptera" pageId="11" pageNumber="553" phylum="Arthropoda" rank="species" species="melanocephala">
