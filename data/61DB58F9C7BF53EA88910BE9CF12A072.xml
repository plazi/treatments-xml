11. 
<taxonomicName id="7D0AD61257EEA39F04DCEBB8E3E65121" LSID="61DB58F9-C7BF-53EA-8891-0BE9CF12A072" authority="(Mitt.) J. R. Spence" authorityName="(Mitt.) J. R. Spence" class="Bryopsida" family="Bryaceae" genus="Rosulabryum" higherTaxonomySource="CoL" kingdom="Plantae" lsidName="Rosulabryum rubens" order="Bryales" pageId="0" pageNumber="87" phylum="Bryophyta" rank="species" species="rubens">Rosulabryum rubens (Mitt.) J.R. Spence</taxonomicName>
