<taxonomicName id="4C674D5C05424305FE61F6D0FD125DAA" box="[459,695,1680,1706]" class="Insecta" family="Buprestidae" genus="Brachelytrium" higherTaxonomySource="GBIF" kingdom="Animalia" order="Coleoptera" pageId="5" pageNumber="20" phylum="Arthropoda" rank="species" species="transvalense" subGenus="Brachelytrium">
<emphasis id="B913EACD05424305FE61F6D0FE785DAA" box="[459,477,1680,1705]" italics="true" pageId="5" pageNumber="20">B</emphasis>
. (
<emphasis id="B913EACD05424305FE5CF6D0FDAD5DAA" box="[502,520,1680,1705]" italics="true" pageId="5" pageNumber="20">B</emphasis>
.) 
<emphasis id="B913EACD05424305FD88F6D0FD125DAA" box="[546,695,1680,1705]" italics="true" pageId="5" pageNumber="20">transvalense</emphasis>
</taxonomicName>
