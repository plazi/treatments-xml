<taxonomicName id="4C674D5C05424305FE51F605FCF95D5D" box="[507,860,1605,1631]" class="Insecta" family="Buprestidae" genus="Brachelytrium" higherTaxonomySource="GBIF" kingdom="Animalia" order="Coleoptera" pageId="5" pageNumber="20" phylum="Arthropoda" rank="species" species="niehuisi" status="sp. nov." subGenus="Brachelytrium">
