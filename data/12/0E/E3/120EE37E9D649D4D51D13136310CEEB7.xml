<taxonomicName class="Gastropoda" family="Hydrobiidae" genus="Pyrgula" higherTaxonomySource="CoL" kingdom="Animalia" lsidName="Pyrgula marginata" order="Littorinimorpha" pageId="48" pageNumber="79" phylum="Mollusca" rank="species" species="marginata">Pyrgula marginata</taxonomicName>
