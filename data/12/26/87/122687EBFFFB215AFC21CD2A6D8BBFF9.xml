, 
<collectingMunicipality box="[826,882,1480,1501]" pageId="47" pageNumber="298">West</collectingMunicipality>
<collectingCountry box="[903,1026,1480,1502]" name="Greenland" pageId="47" pageNumber="298">Greenland</collectingCountry>
