<pageStartToken pageNumber="43">[[</pageStartToken>
Genus 
<taxonomicName LSID-ZBK="urn:lsid:zoobank.org:act:AEE7B86E-F937-4C39-B378-5EE7B2637113" class="Actinopterygii" family="Bythitidae" genus="Lucifuga" higherTaxonomySource="CoL" kingdom="Animalia" lsidName-ZBK="Lucifuga Poey 1858:95" order="Ophidiiformes" pageNumber="43" phylum="Chordata" rank="genus">Lucifuga Poey</taxonomicName>
