<quantity box="[410,555,1415,1437]" metricMagnitude="-4" metricUnit="m" metricValue="7.15" metricValueMax="7.7" metricValueMin="6.6" pageId="11" pageNumber="19" unit="mm" value="0.715" valueMax="0.77" valueMin="0.66">0.66–0.77 mm</quantity>
