<quantity box="[173,272,1708,1729]" metricMagnitude="-4" metricUnit="m" metricValue="6.5" pageId="11" pageNumber="19" unit="mm" value="0.65">0.65 mm</quantity>
, 
<emphasis box="[293,305,1708,1729]" italics="true" pageId="11" pageNumber="19">n</emphasis>
