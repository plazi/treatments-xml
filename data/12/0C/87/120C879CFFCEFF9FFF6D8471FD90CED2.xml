<quantity box="[508,659,1708,1730]" metricMagnitude="-4" metricUnit="m" metricValue="9.55" metricValueMax="10.3" metricValueMin="8.8" pageId="11" pageNumber="19" unit="mm" value="0.955" valueMax="1.03" valueMin="0.88">0.88–1.03 mm</quantity>
(mean = 
