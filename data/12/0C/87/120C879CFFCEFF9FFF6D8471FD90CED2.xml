<quantity box="[375,532,1681,1703]" metricMagnitude="-4" metricUnit="m" metricValue="6.45" metricValueMax="6.8999999999999995" metricValueMin="6.0" pageId="11" pageNumber="19" unit="mm" value="0.645" valueMax="0.69" valueMin="0.6">0.60–0.69 mm</quantity>
