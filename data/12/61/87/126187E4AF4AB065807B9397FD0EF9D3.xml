(
<collectionCode box="[272,368,1196,1222]" httpUri="http://grbio.org/cool/10ei-x9nj" name="Universidad Nacional Autonoma de Mexico" pageId="10" pageNumber="11">UNAM</collectionCode>
); of 
<taxonomicName authority="Brownsville" authorityName="Brownsville" box="[427,835,1196,1222]" class="Insecta" family="Buprestidae" genus="Rhaeboscelis" higherTaxonomySource="GBIF" kingdom="Animalia" order="Coleoptera" pageId="10" pageNumber="11" phylum="Arthropoda" rank="species" species="texana">
<emphasis box="[427,670,1196,1221]" italics="true" pageId="10" pageNumber="11">Rhaeboscelis texana</emphasis>
, Brownsville
</taxonomicName>
, Texas (
<collectionCode LSID="urn:lsid:biocol.org:col:34871" box="[936,1025,1196,1222]" httpUri="http://biocol.org/urn:lsid:biocol.org:col:34871" name="Smithsonian Institution, National Museum of Natural History" pageId="10" pageNumber="11">USNM</collectionCode>
, 
<typeStatus box="[1040,1147,1196,1222]" pageId="10" pageNumber="11">lectotype</typeStatus>
