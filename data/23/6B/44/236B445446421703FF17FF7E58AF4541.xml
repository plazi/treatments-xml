<paragraph blockId="8.[151,627,151,177]" box="[151,627,151,177]" pageId="8" pageNumber="9">
<heading bold="true" box="[151,627,151,177]" fontSize="11" level="1" pageId="8" pageNumber="9" reason="1">
<emphasis bold="true" box="[151,627,151,177]" pageId="8" pageNumber="9">
<taxonomicName box="[151,430,151,177]" class="Insecta" family="Cicadidae" genus="Pomponia" kingdom="Animalia" order="Hemiptera" pageId="8" pageNumber="9" phylum="Arthropoda" rank="species" species="backanensis" status="sp. nov.">
<emphasis bold="true" box="[151,430,151,177]" italics="true" pageId="8" pageNumber="9">Pomponia backanensis</emphasis>
</taxonomicName>
<taxonomicNameLabel box="[437,530,151,177]" pageId="8" pageNumber="9" rank="species">sp. nov.</taxonomicNameLabel>
(
<figureCitation box="[546,619,151,177]" captionStart="FIGURE 2" captionStartId="9.[151,255,1501,1525]" captionTargetBox="[166,1418,221,1462]" captionTargetId="figure@9.[166,1419,221,1463]" captionTargetPageId="9" captionText="FIGURE 2. Pomponia backanensis sp. nov., a, dorsal view of male; b, ventral view of male; c. male genitalia in ventral view; d, male genitalia in lateral view." httpUri="https://zenodo.org/record/190762/files/figure.png" pageId="8" pageNumber="9">
