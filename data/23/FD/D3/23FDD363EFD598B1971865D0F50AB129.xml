<normalizedToken originalValue="Müller">Mueller</normalizedToken>
, 1774), 
<taxonomicName class="Gastropoda" family="Hygromiidae" genus="Euomphalia" higherTaxonomySource="CoL" kingdom="Animalia" lsidName="Euomphalia strigella" order="Stylommatophora" pageId="3" pageNumber="4" phylum="Mollusca" rank="species" species="strigella">Euomphalia strigella</taxonomicName>
(Draparnaud, 1801), 
<taxonomicName class="Gastropoda" family="Helicidae" genus="Cattania" higherTaxonomySource="CoL" kingdom="Animalia" lsidName="Cattania balcanica" order="Stylommatophora" pageId="3" pageNumber="4" phylum="Mollusca" rank="species" species="balcanica">Cattania balcanica</taxonomicName>
(Kobelt, 1876), and 
<taxonomicName class="Gastropoda" family="Helicidae" genus="Cepaea" higherTaxonomySource="CoL" kingdom="Animalia" lsidName="Cepaea vindobonensis" order="Stylommatophora" pageId="3" pageNumber="4" phylum="Mollusca" rank="species" species="vindobonensis">Cepaea vindobonensis</taxonomicName>
(
<normalizedToken originalValue="Férussac">Ferussac</normalizedToken>
