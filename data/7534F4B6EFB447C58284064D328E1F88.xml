<taxonomicName id="E072E021F1A2BBC4EF481342D3780C24" authorityName="Wood" authorityYear="1980" class="Insecta" family="Curculionidae" genus="Microperus" higherTaxonomySource="CoL" kingdom="Animalia" lsidName="Microperus" order="Coleoptera" pageId="0" pageNumber="1" phylum="Arthropoda" rank="genus">
