(
<taxonomicName id="55851EC657167849C171400A6A7A96F0" class="Insecta" family="Megachilidae" genus="Noteriades" higherTaxonomySource="CoL" kingdom="Animalia" lsidName="Noteriades" order="Hymenoptera" pageId="7" pageNumber="72" phylum="Arthropoda" rank="genus">Noteriades</taxonomicName>
