<taxonomicName id="AA4576300213B258B8ECE219E2794A99" class="Insecta" family="Megachilidae" genus="Megachile" higherTaxonomySource="CoL" kingdom="Animalia" lsidName="Megachile tricarinata" order="Hymenoptera" pageId="7" pageNumber="72" phylum="Arthropoda" rank="species" species="tricarinata">Megachile tricarinata</taxonomicName>
