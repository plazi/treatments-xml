<taxonomicName id="76B0D0EA075DFFA92917EA0378EEFB8E" authorityName="Hedges &amp; Conn" authorityYear="2012" box="[1065,1208,1086,1110]" class="Reptilia" family="Scincidae" genus="Notomabuya" kingdom="Animalia" order="Squamata" pageId="84" pageNumber="85" phylum="Chordata" rank="genus">
