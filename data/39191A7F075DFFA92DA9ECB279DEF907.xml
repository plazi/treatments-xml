<taxonomicName id="76B0D0EA075DFFA929CFEA02791EFB8E" authorityName="Hedges &amp; Conn" authorityYear="2012" box="[1265,1352,1087,1110]" class="Reptilia" family="Scincidae" genus="Panopa" kingdom="Animalia" order="Squamata" pageId="84" pageNumber="85" phylum="Chordata" rank="genus">
