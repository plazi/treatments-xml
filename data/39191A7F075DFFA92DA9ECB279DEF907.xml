<taxonomicName id="76B0D0EA075DFFA92CBEEA5E7DA9FBA3" authorityName="Hedges &amp; Conn" authorityYear="2012" box="[384,511,1123,1147]" class="Reptilia" family="Scincidae" genus="Aspronema" kingdom="Animalia" order="Squamata" pageId="84" pageNumber="85" phylum="Chordata" rank="genus">
