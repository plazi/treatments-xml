<taxonomicName id="76B0D0EA075DFFA92825EA5E7900FBA3" authorityName="Hedges &amp; Conn" authorityYear="2012" box="[1307,1366,1123,1147]" class="Reptilia" family="Scincidae" genus="Exila" kingdom="Animalia" order="Squamata" pageId="84" pageNumber="85" phylum="Chordata" rank="genus">
