<quantity id="4CCA9B7D442A9C0DDBABF805FAC63CDB" box="[1242,1333,1949,1973]" metricMagnitude="3" metricUnit="m" metricValue="1.2" pageId="8" pageNumber="268" unit="m" value="1200.0">1200 m</quantity>
