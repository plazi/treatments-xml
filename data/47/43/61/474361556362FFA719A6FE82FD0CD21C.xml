<taxonomicName baseAuthorityName="Schellenberg" baseAuthorityYear="1938" box="[920,1033,358,382]" class="Malacostraca" family="Maeridae" genus="Quadrimaera" kingdom="Animalia" order="Amphipoda" pageId="21" pageNumber="661" phylum="Arthropoda" rank="species" species="serrata">
<emphasis box="[920,1033,358,382]" italics="true" pageId="21" pageNumber="661">Q. serrata</emphasis>
