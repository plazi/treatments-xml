<emphasis box="[315,507,421,445]" italics="true" pageId="21" pageNumber="661">
<taxonomicName box="[315,456,422,445]" class="Malacostraca" family="Maeridae" genus="Maera" kingdom="Animalia" order="Amphipoda" pageId="21" pageNumber="661" phylum="Arthropoda" rank="species" species="sensu">
