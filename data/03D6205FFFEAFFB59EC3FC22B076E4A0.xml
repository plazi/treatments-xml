<taxonomicName id="4C7FEACAFFEAFFB59F7AFC22B0BEE736" authority="K. Viets, 1926" authorityName="K. Viets" authorityYear="1926" box="[330,677,1011,1035]" class="Arachnida" family="Pionidae" genus="Pionacercopsis" higherTaxonomySource="GBIF" kingdom="Animalia" order="Trombidiformes" pageId="3" pageNumber="59" phylum="Arthropoda" rank="genus">
