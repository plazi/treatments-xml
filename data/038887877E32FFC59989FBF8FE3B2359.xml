<taxonomicName id="4C214D127E36FFC59B40FC05FD442481" authorityName="Evenhuis" authorityYear="2017" box="[606,736,943,968]" class="Insecta" family="Simuliidae" genus="Simulium" kingdom="Animalia" order="Diptera" pageId="5" pageNumber="378" phylum="Arthropoda" rank="species" species="littopyga">
<emphasis id="B955EA837E36FFC59B40FC05FD442481" box="[606,736,943,968]" italics="true" pageId="5" pageNumber="378">S. littopyga</emphasis>
</taxonomicName>
