<emphasis italics="true" pageId="30" pageNumber="153">Baccharis</emphasis>
</taxonomicName>
, 
<taxonomicName authorityName="Molina" authorityYear="1782" class="Liliopsida" family="Bromeliaceae" genus="Puya" higherTaxonomySource="GBIF" kingdom="Plantae" lsidName="Puya" order="Poales" pageId="30" pageNumber="153" phylum="Liliopsida" rank="genus">
<emphasis italics="true" pageId="30" pageNumber="153">Puya</emphasis>
</taxonomicName>
, 
<taxonomicName class="Dicotyledoneae" family="Lamiaceae" genus="Salvia" higherTaxonomySource="GBIF" kingdom="Plantae" lsidName="Salvia" order="Tubiflorae" pageId="30" pageNumber="153" phylum="Angiospermae" rank="genus">
<emphasis italics="true" pageId="30" pageNumber="153">Salvia</emphasis>
