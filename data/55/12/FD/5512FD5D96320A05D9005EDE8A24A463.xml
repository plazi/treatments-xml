, 
<taxonomicName class="Liliopsida" family="Poaceae" genus="Chusquea" higherTaxonomySource="GBIF" kingdom="Plantae" lsidName="Chusquea" order="Poales" pageId="30" pageNumber="153" phylum="Liliopsida" rank="genus">
