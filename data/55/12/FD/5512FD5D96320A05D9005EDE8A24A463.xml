, 
<taxonomicName class="Magnoliopsida" family="Rosaceae" genus="Rubus" higherTaxonomySource="CoL" kingdom="Plantae" lsidName="Rubus" order="Rosales" pageId="30" pageNumber="153" phylum="Tracheophyta" rank="genus">
