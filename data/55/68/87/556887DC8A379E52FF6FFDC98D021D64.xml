<emphasis box="[346,615,1800,1824]" italics="true" pageId="7" pageNumber="576">
<taxonomicName box="[346,488,1800,1824]" class="Insecta" family="Cicadellidae" genus="Metacephalus" higherTaxonomySource="CoL" kingdom="Animalia" order="Hemiptera" pageId="7" pageNumber="576" phylum="Arthropoda" rank="genus">Metacephalus</taxonomicName>
sakakibarai
