<quantity box="[1062,1183,1864,1886]" metricMagnitude="-2" metricUnit="m" metricValue="8.0" metricValueMax="12.5" metricValueMin="3.5" pageId="7" pageNumber="132" unit="cm" value="8.0" valueMax="12.5" valueMin="3.5">3.5–12.5 cm</quantity>
