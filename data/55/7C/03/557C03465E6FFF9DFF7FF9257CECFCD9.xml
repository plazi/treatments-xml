<quantity box="[1077,1190,1922,1944]" metricMagnitude="-3" metricUnit="m" metricValue="1.0" metricValueMax="1.5" metricValueMin="0.5" pageId="7" pageNumber="132" unit="mm" value="1.0" valueMax="1.5" valueMin="0.5">0.5–1.5 mm</quantity>
