<taxonomicName class="Pinopsida" family="Pinaceae" genus="Tsuga" higherTaxonomySource="CoL" kingdom="Plantae" lsidName="Tsuga carolinensis" order="Pinales" pageId="0" pageNumber="35" phylum="Tracheophyta" rank="species" species="carolinensis">Tsuga carolinensis</taxonomicName>
, 
<taxonomicName class="Magnoliopsida" family="Fagaceae" genus="Quercus" higherTaxonomySource="CoL" kingdom="Plantae" lsidName="Quercus" order="Fagales" pageId="0" pageNumber="35" phylum="Tracheophyta" rank="genus">Quercus</taxonomicName>
, 
<taxonomicName class="Magnoliopsida" family="Magnoliaceae" genus="Liriodendron" higherTaxonomySource="CoL" kingdom="Plantae" lsidName="Liriodendron" order="Magnoliales" pageId="0" pageNumber="35" phylum="Tracheophyta" rank="genus">Liriodendron</taxonomicName>
