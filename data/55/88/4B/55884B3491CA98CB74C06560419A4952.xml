<subSubSection pageId="0" pageNumber="35" type="nomenclature">
<paragraph pageId="0" pageNumber="35">
<taxonomicName authority="Swenie &amp; Matheny" class="Agaricomycetes" family="Hydnaceae" genus="Hydnum" higherTaxonomySource="CoL" kingdom="Fungi" lsidName="Hydnum subconnatum" order="Cantharellales" pageId="0" pageNumber="35" phylum="Basidiomycota" rank="species" species="subconnatum">Hydnum subconnatum Swenie &amp; Matheny</taxonomicName>
