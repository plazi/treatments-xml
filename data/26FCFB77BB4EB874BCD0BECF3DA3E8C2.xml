(
<taxonomicName id="DC7DB61C988EEFA87CAC5323E10C8E2D" genus="Ericaceae" lsidName="Ericaceae" pageId="21" pageNumber="52" rank="genus">Ericaceae</taxonomicName>
), 
<taxonomicName id="BA81356E1071B091093A8A050D18D848" class="Magnoliopsida" family="Apocynaceae" genus="Asclepias" higherTaxonomySource="CoL" kingdom="Plantae" lsidName="Asclepias speciosa" order="Gentianales" pageId="21" pageNumber="52" phylum="Tracheophyta" rank="species" species="speciosa">Asclepias speciosa</taxonomicName>
(
<taxonomicName id="EACEC8551B44C4EB35CDD9B8CC5BE561" genus="Asclepiadaceae" lsidName="Asclepiadaceae" pageId="21" pageNumber="52" rank="genus">Asclepiadaceae</taxonomicName>
), 
<taxonomicName id="616CE7310FE93E071ABA634DADEC7F81" class="Magnoliopsida" family="Apocynaceae" genus="Asclepias" higherTaxonomySource="CoL" kingdom="Plantae" lsidName="Asclepias syriaca" order="Gentianales" pageId="21" pageNumber="52" phylum="Tracheophyta" rank="species" species="syriaca">Asclepias syriaca</taxonomicName>
(
<taxonomicName id="1916EB73193523010362090FD7ED6226" genus="Asclepiadaceae" lsidName="Asclepiadaceae" pageId="21" pageNumber="52" rank="genus">Asclepiadaceae</taxonomicName>
), 
