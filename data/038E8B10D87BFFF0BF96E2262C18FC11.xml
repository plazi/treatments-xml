<emphasis id="B953E614D864FFF0BF96E7262952FC91" bold="true" box="[192,324,835,859]" pageId="112" pageNumber="111">Remarks.</emphasis>
<taxonomicName id="4C274185D864FFF0BE1BE7212A34FC91" authorityName="Gordon and Hanley" authorityYear="2017" box="[333,546,835,859]" class="Magnoliopsida" family="Plantaginaceae" genus="Ponaria" higherTaxonomySource="GBIF" kingdom="Plantae" order="Lamiales" pageId="112" pageNumber="111" phylum="Tracheophyta" rank="species" species="hurtadoi">
