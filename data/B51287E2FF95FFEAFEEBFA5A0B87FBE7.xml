<taxonomicName id="FABB4D77FF95FFEAFC1BFE410CE7FE35" authority="Bowditch" authorityName="Bowditch" authorityYear="1909" box="[991,1189,485,507]" class="Insecta" family="Chrysomelidae" genus="Pachybrachis" kingdom="Animalia" order="Coleoptera" pageId="3" pageNumber="3" phylum="Arthropoda" rank="species" species="confusus">
