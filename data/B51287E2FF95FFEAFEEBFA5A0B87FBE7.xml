<taxonomicName id="FABB4D77FF95FFEAFBEFFDCD0B66FD55" authorityName="Bowditch" authorityYear="1909" class="Insecta" family="Chrysomelidae" genus="Pachybrachis" kingdom="Animalia" order="Coleoptera" pageId="3" pageNumber="3" phylum="Arthropoda" rank="species" species="discoideus">
<emphasis id="0FCFEAE6FF95FFEAFBEFFDCD0B66FD55" italics="true" pageId="3" pageNumber="3">Pachybrachis discoideus</emphasis>
