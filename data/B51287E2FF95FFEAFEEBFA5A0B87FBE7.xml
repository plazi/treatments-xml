<taxonomicName id="FABB4D77FF95FFEAFBDCFDF60B60FD4E" authority="(LeConte)" baseAuthorityName="LeConte" class="Insecta" family="Chrysomelidae" genus="Cryptocephalus" kingdom="Animalia" order="Coleoptera" pageId="3" pageNumber="3" phylum="Arthropoda" rank="species" species="subfasciatus">
<emphasis id="0FCFEAE6FF95FFEAFBDCFDF60CEAFDA8" box="[1048,1192,592,614]" italics="true" pageId="3" pageNumber="3">P. subfasciatus</emphasis>
