<taxonomicName id="4C144D613F766D43FF19FD3FFDC3FD00" baseAuthorityName="Noack" baseAuthorityYear="1893" box="[247,515,679,705]" class="Mammalia" family="Hipposideridae" genus="Hipposideros" kingdom="Animalia" order="Chiroptera" pageId="7" pageNumber="366" phylum="Chordata" rank="species" species="ruber">
<emphasis id="B960EAF03F766D43FF19FD3FFE54FD00" box="[247,404,679,705]" italics="true" pageId="7" pageNumber="366">Hipposideros</emphasis>
cf. 
<emphasis id="B960EAF03F766D43FE2CFD3FFDC3FD00" box="[450,515,679,705]" italics="true" pageId="7" pageNumber="366">ruber</emphasis>
</taxonomicName>
