<paragraph id="E42A50A5CE787A00946E7C791A6FECFF" pageNumber="2">
[[ Genus 
<taxonomicName id="1ECEB60E17C9359ECFC1D8564EE7045D" LSID-ZBK="urn:lsid:zoobank.org:act:E0BC8DAD-9CD9-4E32-920A-063D33AD0E80" class="Actinopterygii" family="Loricariidae" genus="Hypostomus" higherTaxonomySource="CoL" kingdom="Animalia" lsidName-ZBK="Hypostomus Lacépède 1803:144" order="Siluriformes" pageNumber="2" phylum="Chordata" rank="genus">Hypostomus Lacépède</taxonomicName>
]]
