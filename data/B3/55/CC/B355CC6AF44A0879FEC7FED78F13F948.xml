</bibRefCitation>
</taxonomicName>
; 
<taxonomicName authority="Alcolado &amp; Gotera, 1986" authorityName="Alcolado &amp; Gotera" authorityYear="1986" class="Demospongiae" family="Desmacellidae" genus="Biemna" kingdom="Animalia" order="Poecilosclerida" pageId="2" pageNumber="41" phylum="Porifera" rank="species" species="cribaria">
<emphasis box="[948,966,1479,1504]" italics="true" pageId="2" pageNumber="41">B</emphasis>
. 
<emphasis box="[979,1075,1479,1504]" italics="true" pageId="2" pageNumber="41">cribaria</emphasis>
(
<bibRefCitation author="Alcolado" pageId="2" pageNumber="41" refString="Alcolado, P. M. &amp; Gotera, G. G. (1986) Nuevas adiciones a la fauna de poriferos de Cuba. Poeyana, 331, 1 - 19." type="journal article" year="1986">
Alcolado &amp; Gotera, 
<number box="[264,324,1519,1545]" pageId="2" pageNumber="41" value="1986.0">1986</number>
</bibRefCitation>
)
</taxonomicName>
(senior synonym of 
<taxonomicName authority="Van Soest &amp; Stentoft, 1988" authorityName="Van Soest &amp; Stentoft" authorityYear="1988" box="[592,1059,1519,1545]" class="Demospongiae" family="Desmacellidae" genus="Biemna" kingdom="Animalia" order="Poecilosclerida" pageId="2" pageNumber="41" phylum="Porifera" rank="species" species="oxeata">
<emphasis box="[592,610,1519,1544]" italics="true" pageId="2" pageNumber="41">B</emphasis>
. 
<emphasis box="[629,707,1519,1544]" italics="true" pageId="2" pageNumber="41">oxeata</emphasis>
Van 
<bibRefCitation author="Soest" box="[776,1059,1519,1545]" pageId="2" pageNumber="41" refString="Soest, R. W. M. Van &amp; Stentoft, N. (1988) Barbados deep water sponges. Studies on the Fauna of Curacao and other Caribbean Islands, 70, 1 - 175." type="journal article" year="1988">
Soest &amp; Stentoft, 
