<taxonomicName id="CCF7166A989B7912E1DA5F62B5155455" class="Insecta" family="Acrididae" genus="Odontomelus" higherTaxonomySource="CoL" kingdom="Animalia" lsidName="Odontomelus usambaricus" order="Orthoptera" pageId="7" pageNumber="44" phylum="Arthropoda" rank="species" species="usambaricus">Odontomelus usambaricus</taxonomicName>
