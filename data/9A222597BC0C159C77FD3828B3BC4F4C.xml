<taxonomicName id="B9CC38666DF03C45CCF837E41C8369F7" class="Insecta" family="Tettigoniidae" genus="Horatosphaga" higherTaxonomySource="CoL" kingdom="Animalia" lsidName="Horatosphaga aethiopica" order="Orthoptera" pageId="5" pageNumber="22" phylum="Arthropoda" rank="species" species="aethiopica">Horatosphaga aethiopica</taxonomicName>
