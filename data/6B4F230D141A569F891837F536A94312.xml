[≡ 
<taxonomicName id="F6DE7A688EA414EFCAFC7C5A3E091EAB" authorityName="Summerh" authorityYear="1937" class="Magnoliopsida" family="Orchidaceae" genus="Angraecum" higherTaxonomySource="GBIF" kingdom="Plantae" lsidName="Angraecum doratophyllum" order="Asparagales" pageId="2" pageNumber="81" phylum="Angiospermae" rank="species" species="doratophyllum">
