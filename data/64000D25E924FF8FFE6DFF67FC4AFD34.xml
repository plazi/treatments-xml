<taxonomicName id="2BA9C7B0E925FF8FFF36FEF1FE78FE33" authority="Sturtevant" authorityName="Sturtevant" authorityYear="1916" box="[130,462,375,401]" class="Agaricomycetes" family="Psathyrellaceae" genus="Drosophila" kingdom="Fungi" order="Agaricales" pageId="23" pageNumber="24" phylum="Basidiomycota" rank="species" species="florae">Drosophila florae Sturtevant</taxonomicName>
