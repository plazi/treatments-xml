<materialsCitation id="5CC1B66EE925FF8FFF1CFEABFD96FDD3" collectingDate="1915-02" collectionCode="AMNH" collectorName="Am. Mus. Nat. Hist. Dept. Invert. &amp; D. A. G. The" country="Cuba" location="Havana" pageId="23" pageNumber="24" specimenCount="1" specimenCount-female="1" stateProvince="La Habana" typeStatus="holotype">
