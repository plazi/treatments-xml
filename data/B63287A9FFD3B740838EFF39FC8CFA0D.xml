<typeStatus id="E120881DFFD3B740838EFF4FFF6BFF1E" box="[151,207,225,249]" pageId="22" pageNumber="23">Type</typeStatus>
species:
</emphasis>
<taxonomicName id="F99B4D3CFFD3B740822AFF4FFEA2FEFE" authority="Hessle, 1917 Synonym" authorityName="Hessle, 1917 Synonym" class="Polychaeta" family="Ampharetidae" genus="Amphisamytha" kingdom="Animalia" order="Terebellida" pageId="22" pageNumber="23" phylum="Annelida" rank="species" species="japonica">
<emphasis id="0CEFEAADFFD3B740822AFF4FFD91FF1F" box="[307,565,225,248]" italics="true" pageId="22" pageNumber="23">Amphisamytha japonica</emphasis>
<bibRefCitation id="5A0A4B4EFFD3B7408125FF4FFD61FF1F" author="Hessle" box="[572,709,225,248]" pageId="22" pageNumber="38" refString="Hessle, C. (1917) Zur Kenntnis der terebellomorphen Polychaeten. Zoologiska Bidrag fran Uppsala, 5, 39 - 258." type="journal article" year="1917">
