</taxonomicName>
: 
<taxonomicName id="F99B4D3CFFD3B7408208FEAFFD35FEFF" authority="Williams, 1987: 256" authorityName="Williams" authorityPageNumber="256" authorityYear="1987" box="[273,657,257,280]" class="Polychaeta" family="Ampharetidae" genus="Mooresamytha" higherTaxonomySource="GBIF" kingdom="Animalia" order="Terebellida" pageId="22" pageNumber="23" phylum="Annelida" rank="genus">
