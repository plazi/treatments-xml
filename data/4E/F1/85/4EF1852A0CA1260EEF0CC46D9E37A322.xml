<subSubSection pageId="0" pageNumber="35" type="nomenclature">
<paragraph pageId="0" pageNumber="35">
<taxonomicName authority="Swenie &amp; Matheny" class="Agaricomycetes" family="Hydnaceae" genus="Hydnum" higherTaxonomySource="CoL" kingdom="Fungi" lsidName="Hydnum alboaurantiacum" order="Cantharellales" pageId="0" pageNumber="35" phylum="Basidiomycota" rank="species" species="alboaurantiacum">Hydnum alboaurantiacum Swenie &amp; Matheny</taxonomicName>
