<taxonomicName id="4C114D0BF308382D06C9FAFFC6EDC234" authority="Fraser, 1853" authorityName="Fraser" authorityYear="1853" box="[900,1180,1362,1380]" class="Mammalia" family="Anomaluridae" genus="Anomalurus" kingdom="Animalia" order="Rodentia" pageId="24" pageNumber="225" phylum="Chordata" rank="species" species="beecrofti">
