<taxonomicName authority="Perger &amp; Rubio, 2020" authorityName="Perger &amp; Rubio" authorityYear="2020" baseAuthorityName="Taczanowski" baseAuthorityYear="1871" class="Arachnida" family="Salticidae" genus="Sympolymnia" higherTaxonomySource="GBIF" kingdom="Animalia" lsidName="Sympolymnia lucasi" order="Araneae" pageId="0" pageNumber="781" phylum="Arthropoda" rank="species" species="lucasi">
<emphasis italics="true" pageId="0" pageNumber="781">Sympolymnia lucasi</emphasis>
</taxonomicName>
(Taczanowski, 1871); 
<normalizedToken originalValue="¾">3/4</normalizedToken>
<taxonomicName genus="S." lsidName="S. cutleri" pageId="0" pageNumber="781" rank="species" species="cutleri">
<emphasis italics="true" pageId="0" pageNumber="781">S. cutleri</emphasis>
</taxonomicName>
sp. nov.; · 
<taxonomicName genus="S." lsidName="S. shinahota" pageId="0" pageNumber="781" rank="species" species="shinahota">
<emphasis italics="true" pageId="0" pageNumber="781">S. shinahota</emphasis>
</taxonomicName>
sp. nov.; l 
<taxonomicName genus="S." lsidName="S. lauretta" pageId="0" pageNumber="781" rank="species" species="lauretta">
