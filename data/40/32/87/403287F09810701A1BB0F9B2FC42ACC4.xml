<taxonomicName authorityName="Castelnau" authorityYear="1873" box="[238,365,1662,1688]" class="Elasmobranchii" family="Dasyatidae" genus="Neotrygon" kingdom="Animalia" order="Myliobatiformes" pageId="7" pageNumber="218" phylum="Chordata" rank="genus">
