<quantity box="[623,741,548,572]" metricMagnitude="1" metricUnit="m" metricValue="9.5" metricValueMax="18.0" metricValueMin="1.0" pageId="20" pageNumber="21" unit="m" value="95.0" valueMax="180.0" valueMin="10.0">10–180 m</quantity>
