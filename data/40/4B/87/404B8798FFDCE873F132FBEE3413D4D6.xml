<taxonomicName authority="(Borelli, 1919)" baseAuthorityName="Borelli" baseAuthorityYear="1919" class="Arachnida" family="Scorpionidae" genus="Pandinurus" higherTaxonomySource="GBIF" kingdom="Animalia" order="Scorpiones" pageId="17" pageNumber="18" phylum="Arthropoda" rank="species" species="intermedius">
