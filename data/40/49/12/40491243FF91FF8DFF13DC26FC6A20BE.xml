<emphasis bold="true" box="[192,373,1667,1691]" pageId="114" pageNumber="111">
<typeStatus box="[192,260,1667,1691]" pageId="114" pageNumber="111">Type</typeStatus>
species.
</emphasis>
<taxonomicName authority="Mulsant, 1850" authorityName="Mulsant" authorityYear="1850" box="[378,941,1667,1691]" class="Insecta" family="Coccinellidae" genus="Cleothera" higherTaxonomySource="GBIF" kingdom="Animalia" order="Coleoptera" pageId="114" pageNumber="111" phylum="Arthropoda" rank="species" species="quinquenotata" subGenus="Cyra">
<emphasis box="[378,494,1667,1691]" italics="true" pageId="114" pageNumber="111">Cleothera</emphasis>
(
<emphasis box="[509,567,1668,1691]" italics="true" pageId="114" pageNumber="111">Cyra</emphasis>
) 
<emphasis box="[583,759,1668,1691]" italics="true" pageId="114" pageNumber="111">quinquenotata</emphasis>
<bibRefCitation author="Mulsant, M. E." box="[765,941,1667,1691]" pageId="114" pageNumber="111" pagination="1 - 1104" refId="ref90542" refString="Mulsant, M. E. 1850. Species de Coleopteres trimeres securipalpes. Annales des Sciences Physiques et Naturelles, Lyon 2: 1 - 1104." type="journal article" year="1850">Mulsant, 1850</bibRefCitation>
</taxonomicName>
