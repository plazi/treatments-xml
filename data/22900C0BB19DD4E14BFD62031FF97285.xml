<taxonomicName id="B755B256B1CFEC7FBE8CCB10FE64E07B" class="Pinopsida" family="Pinaceae" genus="Picea" higherTaxonomySource="CoL" kingdom="Plantae" lsidName="Picea rubens" order="Pinales" pageId="10" pageNumber="19" phylum="Tracheophyta" rank="species" species="rubens">
