<taxonomicName id="45AF4DD1CF4EBDFC0AF5ECF0DB2705FE" class="Pinopsida" family="Pinaceae" genus="Pinus" higherTaxonomySource="CoL" kingdom="Plantae" lsidName="Pinus strobus" order="Pinales" pageId="8" pageNumber="17" phylum="Tracheophyta" rank="species" species="strobus">Pinus strobus</taxonomicName>
