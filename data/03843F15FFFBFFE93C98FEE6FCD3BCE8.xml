<taxonomicName id="4C2DF580FFFAFFEA3DB3FCF8FDE4BBDB" box="[444,579,2001,2023]" class="Insecta" family="Staphylinidae" genus="Pseudacerus" higherTaxonomySource="GBIF" kingdom="Animalia" order="Coleoptera" pageId="5" pageNumber="56" phylum="Arthropoda" rank="species" species="sabahensis">
