<taxonomicName id="3D933C43BD54640F87B35A5A2D317324" LSID-ZBK="urn:lsid:zoobank.org:act:A12D02B2-18D2-450F-B6ED-A28984BAD110" class="Actinopterygii" family="Rivulidae" genus="Austrofundulus" higherTaxonomySource="CoL" kingdom="Animalia" lsidName-ZBK="Austrofundulus Myers 1932:159" order="Cyprinodontiformes" pageNumber="2" phylum="Chordata" rank="genus">Austrofundulus Myers</taxonomicName>
