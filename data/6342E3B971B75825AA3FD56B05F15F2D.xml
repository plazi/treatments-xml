<taxonomicName id="E3DF0F7AAEDF08BE941ABAE2D04DD89F" authorityName="Speg" authorityYear="1902" class="Liliopsida" family="Poaceae" genus="Cortaderia" higherTaxonomySource="CoL" kingdom="Plantae" lsidName="Cortaderia dioeca" order="Poales" pageId="7" pageNumber="46" phylum="Tracheophyta" rank="species" species="dioeca">Cortaderia dioeca</taxonomicName>
