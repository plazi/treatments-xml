<taxonomicName id="82F011E8651321E4D7563FF59FB6DBCC" authorityName="Testoni &amp; Linder" authorityYear="2017" class="Liliopsida" family="Poaceae" genus="Arundo" higherTaxonomySource="CoL" kingdom="Plantae" lsidName="Arundo selloana" order="Poales" pageId="7" pageNumber="46" phylum="Tracheophyta" rank="species" species="selloana">Arundo selloana</taxonomicName>
