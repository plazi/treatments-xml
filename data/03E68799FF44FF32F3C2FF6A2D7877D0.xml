<taxonomicName id="4C4F4D0CFF44FF32F07AFC6E2A0B7795" authority="(Muir)" authorityName="Zelazny" authorityYear="1981" baseAuthorityName="Muir" baseAuthorityYear="1913" box="[815,1027,914,939]" class="Insecta" family="Derbidae" genus="Saccharodite" kingdom="Animalia" order="Hemiptera" pageId="167" pageNumber="168" phylum="Arthropoda" rank="species" species="laratica">
