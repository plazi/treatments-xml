<taxonomicName id="E9DFAF42B5E7CE75C02E9A7AAE29E788" authority="Goldstein &amp; Zilly, 2019" authorityName="Goldstein &amp; Zilly" authorityYear="2019" class="Insecta" family="Noctuidae" genus="Thraumata" higherTaxonomySource="GBIF" kingdom="Animalia" lsidName="Thraumata" order="Lepidoptera" pageId="0" pageNumber="139" phylum="Arthropoda" rank="genus">
