<quantity id="4CF69B71FFF9FFBCFD21FF55FC8D5591" box="[740,826,224,247]" metricMagnitude="-3" metricUnit="m" metricValue="7.7" pageId="3" pageNumber="391" unit="mm" value="7.7">7.7 mm</quantity>
(
<number id="3DC624B3FFF9FFBCFC8CFF6AFCD8559E" box="[841,879,223,248]" pageId="3" pageNumber="391" value="7.9">7.9</number>
– 
<number id="3DC624B3FFF9FFBCFCBBFF6AFC14559E" box="[894,931,223,248]" pageId="3" pageNumber="391" value="7.5">7.5</number>
).
</paragraph>
