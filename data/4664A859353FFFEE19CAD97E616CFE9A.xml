<collectingCountry id="B6DA59DF353DFFEE183ADD8865A3FF4F" box="[359,440,151,176]" name="Turkey" pageId="3" pageNumber="456">Turkey</collectingCountry>
, 
<collectingRegion id="0C09D7AD353DFFEE189EDD886662FF4F" box="[451,633,151,176]" country="Turkey" name="Mugla" pageId="3" pageNumber="456">Muğla province</collectingRegion>
