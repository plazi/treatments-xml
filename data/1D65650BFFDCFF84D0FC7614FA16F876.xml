<collectingRegion id="57081AFFFFDFFF84D4C17536FAE5F9E0" box="[1194,1387,1549,1575]" country="Argentina" name="Chubut" pageId="42" pageNumber="43">Chubut Province</collectingRegion>
, 
<collectingCountry id="EDDB948DFFDFFF84D51D7535FF62F98C" name="Argentina" pageId="42" pageNumber="43">Argentina</collectingCountry>
