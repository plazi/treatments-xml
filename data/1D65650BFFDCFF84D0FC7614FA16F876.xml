<specimenCount id="83CA1F94FFDFFF84D266750AFDD2F98B" box="[525,604,1585,1612]" pageId="42" pageNumber="43" type="generic">
<quantity id="523479F8FFDFFF84D266750AFDD6F98B" box="[525,600,1585,1612]" metricMagnitude="2" metricUnit="m" metricValue="2.0" pageId="42" pageNumber="43" unit="m" value="200.0">200 m</quantity>
