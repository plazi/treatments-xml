</specimenCount>
According 
<bibRefCitation id="F15DA9ECFFDFFF84D2B4750AFCEBF98C" author="Rios, E. C." box="[735,869,1585,1611]" pageId="42" pageNumber="43" refId="ref41663" refString="Rios, E. C. (2009) Compendium of Brazilian Seashells. Evangraf, Rio Grande-RS, 668 pp." type="book" year="2009">Rios (2009)</bibRefCitation>
<taxonomicName id="52CCAF9EFFDFFF84D307750AFBCEF98C" baseAuthorityName="Pilsbry" baseAuthorityYear="1897" box="[876,1088,1585,1611]" class="Bivalvia" family="Corbulidae" genus="Tenuicorbula" kingdom="Animalia" order="Myoida" pageId="42" pageNumber="43" phylum="Mollusca" rank="species" species="lyoni">
<emphasis id="A7B8080FFFDFFF84D307750AFBCEF98C" box="[876,1088,1585,1611]" italics="true" pageId="42" pageNumber="43">Tenuicorbula lyoni</emphasis>
