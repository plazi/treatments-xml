<subSubSection id="C32734F8BE31FFA1FF6D5223232BEBCC" pageId="29" pageNumber="30" type="diagnosis">
<paragraph id="8B826773BE31FFA1FF6D5223232BEBCC" blockId="29.[151,1436,1266,1532]" pageId="29" pageNumber="30">
<emphasis id="B949BB61BE31FFA1FF6D52232319EBB4" bold="true" box="[198,318,1386,1412]" pageId="29" pageNumber="30">Diagnosis</emphasis>
