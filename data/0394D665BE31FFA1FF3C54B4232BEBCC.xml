<taxonomicName id="4C3D1CF0BE31FFA1FD0952F22710EBE4" authority="(Ballantyne &amp; Lambkin, 2000: 59)" baseAuthorityName="Ballantyne &amp; Lambkin" baseAuthorityPageNumber="59" baseAuthorityYear="2000" box="[674,1335,1466,1492]" class="Insecta" family="Lampyridae" genus="Luciola" kingdom="Animalia" order="Coleoptera" pageId="29" pageNumber="30" phylum="Arthropoda" rank="species" species="chinensis">
