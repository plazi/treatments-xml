<quantity id="4CC5CA96BE31FFA1FE0D52232010EBB4" box="[422,567,1386,1412]" metricMagnitude="-3" metricUnit="m" metricValue="8.7" metricValueMax="9.7" metricValueMin="7.7" pageId="29" pageNumber="30" unit="mm" value="8.7" valueMax="9.7" valueMin="7.7">7.7–9.7 mm</quantity>
