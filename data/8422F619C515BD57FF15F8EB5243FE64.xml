locality:
</emphasis>
<collectingCountry id="749C079FC516BD57FEF2FE8B50A2FEF4" box="[368,458,295,321]" name="Mexico" pageId="6" pageNumber="237">Mexico</collectingCountry>
: 
<collectingRegion id="CE4F89EDC516BD57FE56FE8B531EFEF4" box="[468,630,295,321]" country="Mexico" name="Veracruz de Ignacio de la Llave" pageId="6" pageNumber="237">Veracruz state</collectingRegion>
: 
<location id="095411D4C516BD57FD03FE8B53B5FEF4" LSID="urn:lsid:plazi:treatment:8422F619C515BD57FF15F8EB5243FE64:095411D4C516BD57FD03FE8B53B5FEF4" box="[641,733,295,321]" country="Mexico" name="Orizaba" pageId="6" pageNumber="237" stateProvince="Veracruz de Ignacio de la Llave">Orizaba</location>
