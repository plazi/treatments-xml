<collectingCountry box="[457,513,548,572]" name="India" pageId="4" pageNumber="67">Hind</collectingCountry>
wing 
<number box="[582,653,548,572]" pageId="4" pageNumber="67" value="40.0" valueMax="42.0" valueMin="38.0">38–42</number>
