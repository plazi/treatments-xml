<quantity box="[1104,1233,2078,2114]" metricMagnitude="-3" metricUnit="m" metricValue="4.5" pageId="29" pageNumber="136" unit="mm" value="4.5">4.5 mm</quantity>
.; male, 
<quantity box="[1366,1503,2078,2114]" metricMagnitude="-3" metricUnit="m" metricValue="3.45" pageId="29" pageNumber="136" unit="mm" value="3.45">3.45 mm</quantity>
