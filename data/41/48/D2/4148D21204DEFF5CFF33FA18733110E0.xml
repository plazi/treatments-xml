<geoCoordinate box="[1067,1166,1987,2014]" degrees="42" direction="north" minutes="55" orientation="latitude" pageId="142" pageNumber="143" precision="925" value="42.916668">42°55’N</geoCoordinate>
, 
<geoCoordinate box="[1180,1283,1988,2014]" degrees="30" direction="west" minutes="20" orientation="longitude" pageId="142" pageNumber="143" precision="925" value="-30.333334">30°20’W</geoCoordinate>
, 
<quantity lastPageId="143" lastPageNumber="144" metricMagnitude="0" metricUnit="m" metricValue="2.961" metricValueMax="2.968" metricValueMin="2.954" pageId="142" pageNumber="143" unit="m" value="2.961" valueMax="2.968" valueMin="2.954">
