<taxonomicName class="Monocotyledoneae" family="Poaceae" genus="Paspalum" higherTaxonomySource="GBIF" kingdom="Plantae" lsidName="" order="Graminales" pageId="12" pageNumber="17" phylum="Angiospermae" rank="species" species="conjugatum">
