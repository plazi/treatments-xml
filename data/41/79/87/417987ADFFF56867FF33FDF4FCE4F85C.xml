, 
<collectingCountry box="[1113,1189,1970,1996]" name="Nepal" pageId="1" pageNumber="14">Nepal</collectingCountry>
, 
<collectingCountry box="[1201,1312,1970,1996]" name="Thailand" pageId="1" pageNumber="14">Thailand</collectingCountry>
