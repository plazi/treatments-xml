<taxonomicName id="83B946F2E15C5066E9A165F509E85890" LSID-ZBK="urn:lsid:zoobank.org:act:BD08FA7B-788B-4285-9548-0F120F97465D" class="Actinopterygii" family="Rivulidae" genus="Simpsonichthys" higherTaxonomySource="CoL" kingdom="Animalia" lsidName-ZBK="Simpsonichthys Carvalho 1959:2" order="Cyprinodontiformes" pageNumber="53" phylum="Chordata" rank="genus">Simpsonichthys de Carvalho</taxonomicName>
