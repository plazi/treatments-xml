<normalizedToken id="8AC784254FD3157E7FD0503D6DDC85AE" originalValue="Sistemática">Sistematica</normalizedToken>
de 
<normalizedToken id="CA53B4293877130F85AF369A4482A2D2" originalValue="Microartrópodos">Microartropodos</normalizedToken>
