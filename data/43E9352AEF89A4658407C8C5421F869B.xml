<paragraph id="4AE0F30D553B358E750131C5D0B7C161" pageNumber="112">
<taxonomicName id="01DB0E6B5C90782E61CE2F0DC9DC2A34" LSID-HNS="urn:lsid:biosci.ohio-state.edu:osuc_concepts:147162" authority="Emery" authorityName="Emery" class="Hexapoda" family="Formicidae" genus="Pachysima" higherTaxonomySource="GBIF" kingdom="Animalia" lsidName-HNS="Pachysima Emery" order="Hymenoptera" pageNumber="112" phylum="Arthropoda" rank="genus">Pachysima</taxonomicName>
