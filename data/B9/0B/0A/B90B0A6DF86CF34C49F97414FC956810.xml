<paragraph blockId="4.[151,1437,1426,1972]" box="[198,658,1666,1692]" pageId="4" pageNumber="31">
<emphasis bold="true" box="[198,350,1666,1692]" pageId="4" pageNumber="31">Description.</emphasis>
Wing length 
<quantity box="[509,654,1666,1692]" metricMagnitude="-3" metricUnit="m" metricValue="2.4" metricValueMax="2.5" metricValueMin="2.3" pageId="4" pageNumber="31" unit="mm" value="2.4" valueMax="2.5" valueMin="2.3">2.3–2.5 mm</quantity>
