<taxonomicName class="Magnoliopsida" family="Rhamnaceae" genus="Paliurus" kingdom="Plantae" lsidName="Paliurus orientalis" order="Rosales" pageId="0" pageNumber="9" phylum="Tracheophyta" rank="species" species="orientalis">
