violacea 
<quantity box="[959,1053,373,397]" metricMagnitude="-3" metricUnit="m" metricValue="9.5" metricValueMax="10.0" metricValueMin="9.0" pageId="9" pageNumber="176" unit="mm" value="9.5" valueMax="10.0" valueMin="9.0">9-10 mm</quantity>
