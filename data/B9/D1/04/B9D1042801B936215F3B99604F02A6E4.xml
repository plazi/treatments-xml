and 
<taxonomicName authorityName="Meerow" authorityYear="1987" baseAuthorityName="Baker" class="Tentaculata" family="Amaryllidaceae" genus="Eucharis" higherTaxonomySource="CoL" kingdom="Plantae" lsidName="Eucharis moorei" order="Asparagales" pageId="3" pageNumber="4" phylum="Ctenophora" rank="species" species="moorei">
