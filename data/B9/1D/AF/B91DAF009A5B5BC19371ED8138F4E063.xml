<taxonomicName class="Amphibia" family="Bufonidae" genus="Bufotes" higherTaxonomySource="CoL" kingdom="Animalia" lsidName="Bufotes viridis" order="Anura" pageId="0" pageNumber="177" phylum="Chordata" rank="species" species="viridis">
<emphasis italics="true" pageId="0" pageNumber="177">Bufotes viridis</emphasis>
</taxonomicName>
complex (including species 
<taxonomicName genus="B." lsidName="B. oblongus" pageId="0" pageNumber="177" rank="species" species="oblongus">
<emphasis italics="true" pageId="0" pageNumber="177">B. oblongus</emphasis>
</taxonomicName>
, 
<taxonomicName genus="B." lsidName="B. baturae" pageId="0" pageNumber="177" rank="species" species="baturae">
<emphasis italics="true" pageId="0" pageNumber="177">B. baturae</emphasis>
</taxonomicName>
/ 
<taxonomicName lsidName="pseudoraddei" pageId="0" pageNumber="177" rank="species" species="pseudoraddei">
<emphasis italics="true" pageId="0" pageNumber="177">pseudoraddei</emphasis>
</taxonomicName>
, 
<taxonomicName genus="B." lsidName="B. turanensis" pageId="0" pageNumber="177" rank="species" species="turanensis">
<emphasis italics="true" pageId="0" pageNumber="177">B. turanensis</emphasis>
