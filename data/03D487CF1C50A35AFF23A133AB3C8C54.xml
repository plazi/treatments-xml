<taxonomicName id="4C7D4D5A1C53A35AFEA5A5C4A8D98EF5" box="[273,442,385,410]" class="Magnoliopsida" family="Celastraceae" genus="Brexia" kingdom="Plantae" order="Celastrales" pageId="14" pageNumber="81" phylum="Tracheophyta" rank="species" species="montana">
<emphasis id="B909EACB1C53A35AFEA5A5C4A8D98EF5" box="[273,442,385,410]" italics="true" pageId="14" pageNumber="81">Brexia montana</emphasis>
</taxonomicName>
