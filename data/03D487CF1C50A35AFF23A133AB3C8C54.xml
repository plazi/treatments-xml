<quantity id="4C859B3C1C53A35AFE06A563AB7B8E2F" box="[434,536,294,320]" metricMagnitude="6" metricUnit="m" metricValue="1.3" pageId="14" pageNumber="81" unit="km" value="1300.0">1300 km</quantity>
<superScript id="7C089B911C53A35AFDACA564AB418E5B" attach="left" box="[536,546,289,308]" fontSize="8" pageId="14" pageNumber="81">2</superScript>
