<taxonomicName id="B5E14D6F247BBD22FCB0DDCA18CFA0A3" authorityName="Henderson" authorityYear="2011" baseAuthorityName="Spruce" box="[784,1008,904,930]" class="Liliopsida" family="Arecaceae" genus="Geonoma" kingdom="Plantae" order="Arecales" pageId="101" pageNumber="102" phylum="Tracheophyta" rank="subSpecies" species="maxima" subSpecies="chelidonura">
subsp. 
<emphasis id="4095EAFE247BBD22FCC2DDCA18CFA0A3" box="[866,1008,904,930]" italics="true" pageId="101" pageNumber="102">chelidonura</emphasis>
</taxonomicName>
.
</paragraph>
