<quantity id="B5199B09247BBD22FA9EDD231EA3A07A" box="[1342,1436,865,891]" metricMagnitude="-1" metricUnit="m" metricValue="1.15" pageId="101" pageNumber="102" unit="cm" value="11.5">11.5 cm</quantity>
