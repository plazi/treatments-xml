and 
<taxonomicName id="4C324D7DB758FFA3C7C9CD6E3B6DFA11" authority="Tvardik &amp; Bocak, 2001" authorityName="Tvardik &amp; Bocak" authorityYear="2001" box="[943,1114,1404,1429]" class="Insecta" family="Lycidae" genus="Plateros" higherTaxonomySource="GBIF,CoL" kingdom="Animalia" order="Coleoptera" pageId="2" pageNumber="3" phylum="Arthropoda" rank="species" species="mamasensis" status="sp. n.">
