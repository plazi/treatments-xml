; seed 9–14 × 
<quantity id="795A9B41EE4AFF9E6AD7D788FDC4F5B5" box="[412,556,1736,1762]" metricMagnitude="-3" metricUnit="m" metricValue="4.0" metricValueMax="4.5" metricValueMin="3.5" pageId="12" pageNumber="13" unit="mm" value="4.0" valueMax="4.5" valueMin="3.5">3.5–4.5 mm</quantity>
; aril 
<quantity id="795A9B41EE4AFF9E692CD788FD1BF5B5" box="[615,755,1736,1762]" metricMagnitude="-3" metricUnit="m" metricValue="2.5" metricValueMax="3.5" metricValueMin="1.5" pageId="12" pageNumber="13" unit="mm" value="2.5" valueMax="3.5" valueMin="1.5">1.5–3.5 mm</quantity>
