<taxonomicName id="4C224D78050EFF84FE12FB219E4647F9" baseAuthorityName="Mello-Leitao" baseAuthorityYear="1942" box="[413,543,1172,1198]" class="Arachnida" family="Gonyleptidae" genus="Eusarcus" higherTaxonomySource="GBIF" kingdom="Animalia" order="Opiliones" pageId="2" pageNumber="38" phylum="Arthropoda" rank="species" species="aduncus">
<emphasis id="B956EAE9050EFF84FE12FB219E4647F9" box="[413,543,1172,1198]" italics="true" pageId="2" pageNumber="38">E. aduncus</emphasis>
</taxonomicName>
, 
<taxonomicName id="4C224D78050EFF84FDA1FB219F6647F9" authority="Perty, 1833" authorityName="Perty" authorityYear="1833" box="[558,831,1172,1198]" class="Arachnida" family="Gonyleptidae" genus="Eusarcus" higherTaxonomySource="GBIF" kingdom="Animalia" order="Opiliones" pageId="2" pageNumber="38" phylum="Arthropoda" rank="species" species="armatus">
<emphasis id="B956EAE9050EFF84FDA1FB219EF647FA" box="[558,687,1172,1197]" italics="true" pageId="2" pageNumber="38">E. armatus</emphasis>
Perty, 1833
</taxonomicName>
, 
<taxonomicName id="4C224D78050EFF84FCC3FB219FAE47F9" box="[844,1015,1172,1198]" class="Arachnida" family="Gonyleptidae" genus="Eusarcus" higherTaxonomySource="GBIF" kingdom="Animalia" order="Opiliones" pageId="2" pageNumber="38" phylum="Arthropoda" rank="species" species="cavernicola">
<emphasis id="B956EAE9050EFF84FCC3FB219FAE47F9" box="[844,1015,1172,1198]" italics="true" pageId="2" pageNumber="38">E. cavernicola</emphasis>
