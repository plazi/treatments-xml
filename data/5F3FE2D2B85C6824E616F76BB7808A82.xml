<paragraph id="BBFF9953D90E86F4BDD3FF34BB44E050" pageId="4" pageNumber="47">
<taxonomicName id="59FD9B80CDA7D1D0A1600447DA18C9C9" LSID="MycoBank MB808524" authority="Toome &amp; Aime" class="Microbotryomycetes" family="Heterogastridiaceae" genus="Pycnopulvinus" higherTaxonomySource="CoL" kingdom="Fungi" lsidName="Pycnopulvinus aurantiacus" order="Heterogastridiales" pageId="4" pageNumber="47" phylum="Basidiomycota" rank="species" species="aurantiacus">Pycnopulvinus aurantiacus Toome &amp; Aime</taxonomicName>
<taxonomicNameLabel id="48D0F3BC5BE8BEFC5D2FED8213FBDC39" pageId="4" pageNumber="47">sp. nov.</taxonomicNameLabel>
