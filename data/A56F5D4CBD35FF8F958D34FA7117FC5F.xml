<taxonomicName id="EAC697D9BD35FF90946E33717382FB9F" authority="Wagner, 1914" authorityName="Wagner" authorityYear="1914" box="[113,506,1025,1044]" class="Insecta" family="Apionidae" genus="Apion" higherTaxonomySource="GBIF" kingdom="Animalia" order="Coleoptera" pageId="15" pageNumber="172" phylum="Arthropoda" rank="species" species="canariense" status="syn. nov." subGenus="Lepidapion">
<emphasis id="1FB23048BD35FF90946E337172DCFB98" box="[113,164,1025,1043]" italics="true" pageId="15" pageNumber="172">Apion</emphasis>
(
<emphasis id="1FB23048BD35FF9094AE3371736AFB98" box="[177,274,1025,1043]" italics="true" pageId="15" pageNumber="172">Lepidapion</emphasis>
) 
<emphasis id="1FB23048BD35FF90950133717304FB98" box="[286,380,1025,1043]" italics="true" pageId="15" pageNumber="172">canariense</emphasis>
<bibRefCitation id="495791ABBD35FF90959E33717382FB9F" author="WAGNER H." box="[385,506,1025,1044]" pageId="15" pageNumber="172" pagination="12 - 32" refId="ref13164" refString="WAGNER H. 1914: Beitrage zur Kenntnis der Gattung Apion Hbst. Munchener Koleopterologische Zeitschrift 4 (1): 12 - 32." type="journal article" year="1914">Wagner, 1914</bibRefCitation>
