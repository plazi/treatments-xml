species: 
<taxonomicName id="4C4E4D24FF813234633CFD09FEC0FD26" authority="Distant" authorityName="Distant" authorityYear="1910" box="[298,644,687,711]" class="Insecta" family="Cicadellidae" genus="Petalocephala" kingdom="Animalia" order="Hemiptera" pageId="1" pageNumber="452" phylum="Arthropoda" rank="species" species="granulosa">
