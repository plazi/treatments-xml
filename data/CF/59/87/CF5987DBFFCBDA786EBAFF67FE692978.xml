<taxonomicName authorityName="Martins" authorityYear="1979" box="[936,962,318,341]" class="Insecta" family="Cerambycidae" genus="Hesychotypa" kingdom="Animalia" order="Coleoptera" pageId="7" pageNumber="6" phylum="Arthropoda" rank="species" species="punctata">
<emphasis box="[936,962,318,341]" italics="true" pageId="7" pageNumber="6">H</emphasis>
</taxonomicName>
<emphasis box="[962,966,318,341]" italics="true" pageId="7" pageNumber="6">.</emphasis>
<emphasis box="[972,1080,318,341]" italics="true" pageId="7" pageNumber="6">punctata</emphasis>
