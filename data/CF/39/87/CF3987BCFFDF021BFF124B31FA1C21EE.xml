<taxonomicName authority="White, 1879" authorityName="White" authorityYear="1879" box="[238,496,827,854]" class="Malacostraca" family="Portunidae" genus="Helenus" higherTaxonomySource="GBIF" kingdom="Animalia" order="Decapoda" pageId="1" pageNumber="556" phylum="Arthropoda" rank="genus">
