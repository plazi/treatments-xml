<paragraph id="DEF331F02B8D059C9F3D2C5AD3F2309F" pageId="18" pageNumber="127">Type material.</paragraph>
<paragraph id="7DE555DF96458FA1E818DFAF97ABACB1" pageId="18" pageNumber="127">
<emphasis id="847A2CE86A42182217FF6BF294AF267A" bold="true" pageId="18" pageNumber="127">Holotype</emphasis>
(♂): &quot;BRAZIL: Bahia: 
<normalizedToken id="0283344C8F713678E1A475287EB2B603" originalValue="Abaíra">Abaira</normalizedToken>
; 
<geoCoordinate id="EE77D7C74100E64668A275AD52A2BBDB" degrees="13.29053" direction="south" orientation="latitude" precision="1" value="-13.29053">13.29053S</geoCoordinate>
, 
<geoCoordinate id="ABAE842561C69DF0C22AF6A644E095A8" degrees="41.90489" direction="west" orientation="longitude" precision="1" value="-41.90489">41.90489W</geoCoordinate>
