<taxonomicName id="4C1C4D18655F87657AC6092C9BBEFC40" authorityName="P. Micheli ex Linnaeus" authorityYear="1753" box="[136,234,878,904]" class="Magnoliopsida" family="Myrtaceae" genus="Eugenia" kingdom="Plantae" order="Myrtales" pageId="1" pageNumber="136" phylum="Tracheophyta" rank="genus">
