<paragraph id="A9FAE85B398F985AEA64EDD8D047F33E" pageId="7" pageNumber="8">
<taxonomicName id="E98B77A0CFB7BCE2E01DF5D3B60AB267" class="Anthozoa" family="Nephtheidae" genus="Litophyton" higherTaxonomySource="CoL" kingdom="Animalia" lsidName="Litophyton" order="Alcyonacea" pageId="7" pageNumber="8" phylum="Cnidaria" rank="genus">Litophyton</taxonomicName>
