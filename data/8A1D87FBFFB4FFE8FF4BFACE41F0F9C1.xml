<typeStatus id="DD0F884FFFB4FFEBFF4BFA7544A5FA36" box="[151,201,1408,1432]" pageId="13" pageNumber="264">Type</typeStatus>
species 
<taxonomicName id="C5B44D6EFFB4FFEBFEC3FA8A46C8FA39" authority="Hennig, 1934: 300" authorityName="Hennig" authorityPageNumber="300" authorityYear="1934" box="[287,676,1407,1431]" class="Insecta" family="Micropezidae" genus="Grallipeza" kingdom="Animalia" order="Diptera" pageId="13" pageNumber="264" phylum="Arthropoda" rank="species" species="obscura">
<emphasis id="30C0EAFFFFB4FFEBFEC3FA8A4588FA39" box="[287,484,1407,1431]" italics="true" pageId="13" pageNumber="264">Grallipeza obscura</emphasis>
<bibRefCitation id="66254B1CFFB4FFEBFE36FA8A46C8FA39" author="Hennig, W." box="[490,676,1407,1431]" pageId="13" pageNumber="264" pagination="65 - 108" refId="ref12265" refString="Hennig, W. (1934) Revision der Tyliden (Dipt., Acalypt.). I. Teil: Die Taeniapterinae Amerikas. Stettiner Entomologische Zeitung, 95, 65 - 108 + 294 - 330." type="journal article" year="1934">Hennig, 1934:300</bibRefCitation>
</taxonomicName>
