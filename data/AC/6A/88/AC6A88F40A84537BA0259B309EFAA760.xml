L., 
<taxonomicName class="Monocotyledoneae" family="Poaceae" genus="Stipa" higherTaxonomySource="GBIF" kingdom="Plantae" lsidName="Stipa pulcherrima" order="Graminales" pageId="3" pageNumber="84" phylum="Angiospermae" rank="species" species="pulcherrima">
