<taxonomicName class="Dicotyledoneae" family="Crassulaceae" genus="Sedum" higherTaxonomySource="GBIF" kingdom="Plantae" lsidName="Sedum pallidum" order="Rosales" pageId="3" pageNumber="84" phylum="Angiospermae" rank="species" species="pallidum">
