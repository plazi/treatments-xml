<collectionCode box="[1054,1151,1109,1133]" pageId="148" pageNumber="148">G-BOIS</collectionCode>
duplicate as a 
<typeStatus box="[1308,1405,1108,1132]" pageId="148" pageNumber="148">lectotype</typeStatus>
