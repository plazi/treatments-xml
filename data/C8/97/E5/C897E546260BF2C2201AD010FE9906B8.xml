<paragraph pageId="392" pageNumber="393">
<taxonomicName class="Hexapoda" family="Carabidae" genus="Bembidion" higherTaxonomySource="GBIF" kingdom="Animalia" lsidName="" order="Coleoptera" pageId="392" pageNumber="393" phylum="Arthropoda" rank="subSpecies" species="constrictum" subSpecies="civile">Bembidion constrictum civile</taxonomicName>
