<taxonomicName class="Magnoliopsida" family="Convolvulaceae" genus="Ipomoea" kingdom="Plantae" order="Solanales" phylum="Tracheophyta" rank="species" species="lineolata">
<emphasis italics="true" pageId="0" pageNumber="1">Ipomoea lineolata</emphasis>
</taxonomicName>
and 
<taxonomicName class="Magnoliopsida" family="Convolvulaceae" genus="Ipomoea" kingdom="Plantae" order="Solanales" phylum="Tracheophyta" rank="species" species="carolina">
<emphasis italics="true" pageId="0" pageNumber="1">I. carolina</emphasis>
</taxonomicName>
