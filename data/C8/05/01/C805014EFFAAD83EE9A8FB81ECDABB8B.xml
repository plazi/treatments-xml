<taxonomicName authority="Wendeler" authorityName="Wendeler" authorityYear="1927" box="[288,575,981,1006]" class="Insecta" family="Staphylinidae" genus="Hesperus" kingdom="Animalia" order="Coleoptera" pageId="2" pageNumber="193" phylum="Arthropoda" rank="species" species="heynei">
