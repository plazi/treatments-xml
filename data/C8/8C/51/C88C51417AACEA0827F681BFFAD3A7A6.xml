<taxonomicName class="Insecta" family="Delphacidae" genus="Neometopina" higherTaxonomySource="CoL" kingdom="Animalia" lsidName="Neometopina" order="Hemiptera" pageId="1" pageNumber="98" phylum="Arthropoda" rank="genus">Neometopina</taxonomicName>
