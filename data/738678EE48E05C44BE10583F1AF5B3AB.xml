<geoCoordinate id="8E95E89C6D5BD560BBB987C49FCAFAD4" degrees="108" direction="east" minutes="30" orientation="longitude" precision="1" seconds="21.56" value="108.50599">108°30'21.56&quot;E</geoCoordinate>
