<taxonomicName id="4C0C4D28BB265E6762A765F49E7963DA" authority="(Reiche) Heimerl" authorityName="Heimerl" authorityYear="1932" baseAuthorityName="Reiche" box="[491,889,1963,1990]" class="Magnoliopsida" family="Nyctaginaceae" genus="Mirabilis" kingdom="Plantae" order="Caryophyllales" pageId="11" pageNumber="128" phylum="Tracheophyta" rank="species" species="acuta">
