<collectingCountry box="[360,412,511,537]" name="Italy" pageId="23" pageNumber="273">Italy</collectingCountry>
, 
<collectingCountry box="[423,505,511,537]" name="Greece" pageId="23" pageNumber="273">Greece</collectingCountry>
, 
<collectingCountry box="[516,596,511,537]" name="Turkey" pageId="23" pageNumber="273">Turkey</collectingCountry>
(
<bibRefCitation author="Zakhvatkin, A. A." box="[611,814,511,538]" pageId="23" pageNumber="273" pagination="149 - 176" refId="ref14510" refString="Zakhvatkin, A. A. (1946) Studies on the Homoptera of Turkey. I-VII. Transactions of the Entomological Society of London, 97 (6), 149 - 176. https: // doi. org / 10.1111 / j. 1365 - 2311.1946. tb 00278. x" type="journal article" year="1946">Zakhvatkin, 1946</bibRefCitation>
