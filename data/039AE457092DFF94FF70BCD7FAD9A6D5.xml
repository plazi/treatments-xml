<collectionCode id="ED22CD84092DFF9AFD1DBE60FCE1A138" box="[762,855,1637,1663]" httpUri="http://grbio.org/cool/hp11-qr98" name="Nankai University" pageId="7" pageNumber="8">NKUM</collectionCode>
