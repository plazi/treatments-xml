<taxonomicName id="D0EA4D187D18FFE064B8FE02FD74AD87" authorityName="Selys" authorityYear="1862" box="[466,645,449,470]" class="Insecta" family="Megapodagrionidae" genus="Heteragrion" kingdom="Animalia" order="Odonata" pageId="7" pageNumber="8" phylum="Arthropoda" rank="species" species="cinnamomeum">
<emphasis id="259EEA897D18FFE064B8FE02FD74AD87" box="[466,645,449,470]" italics="true" pageId="7" pageNumber="8">H. cinnamomeum</emphasis>
