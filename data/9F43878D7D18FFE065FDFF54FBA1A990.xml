<taxonomicName id="D0EA4D187D18FFE0610CFDDFFAF7AE60" authorityName="Selys" authorityYear="1862" box="[1126,1286,540,561]" class="Insecta" family="Megapodagrionidae" genus="Heteragrion" kingdom="Animalia" order="Odonata" pageId="7" pageNumber="8" phylum="Arthropoda" rank="species" species="aurantiacum">
