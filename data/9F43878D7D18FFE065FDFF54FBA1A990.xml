<taxonomicName id="D0EA4D187D18FFE06076FE3DFA7CAE42" box="[1308,1421,510,531]" class="Insecta" family="Megapodagrionidae" genus="Heteragrion" kingdom="Animalia" order="Odonata" pageId="7" pageNumber="8" phylum="Arthropoda" rank="species" species="consors">
