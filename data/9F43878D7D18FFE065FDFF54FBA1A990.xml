<taxonomicName id="D0EA4D187D18FFE06679FE61FC45ADE6" authorityName="Selys" authorityYear="1862" box="[787,948,418,439]" class="Insecta" family="Megapodagrionidae" genus="Heteragrion" kingdom="Animalia" order="Odonata" pageId="7" pageNumber="8" phylum="Arthropoda" rank="species" species="aurantiacum">
