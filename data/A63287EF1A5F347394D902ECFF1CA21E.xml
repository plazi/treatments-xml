), 
<taxonomicName id="E99B4D7A1A5F347397F60619FB93A256" authority="Zamani &amp; Marusik, 2020" authorityName="Zamani &amp; Marusik" authorityYear="2020" box="[952,1135,1804,1830]" class="Arachnida" family="Phrurolithidae" genus="Bosselaerius" higherTaxonomySource="GBIF,CoL" kingdom="Animalia" order="Araneae" pageId="11" pageNumber="322" phylum="Arthropoda" rank="species" species="tajikistanicus" status="sp. n.">
<emphasis id="1CEFEAEB1A5F347397F60619FB93A256" box="[952,1135,1804,1830]" italics="true" pageId="11" pageNumber="322">B. tajikistanicus</emphasis>
</taxonomicName>
<emphasis id="1CEFEAEB1A5F347390340619FB41A256" bold="true" box="[1146,1213,1804,1830]" pageId="11" pageNumber="322">
<taxonomicNameLabel id="07DC57901A5F347390340619FB41A256" box="[1146,1213,1804,1830]" pageId="11" pageNumber="322" rank="species">sp. n.</taxonomicNameLabel>
