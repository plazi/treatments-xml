<taxonomicName id="4C7B8E9CFFD278437AF0172AFBFF2F72" box="[953,1087,312,337]" class="Insecta" family="Nymphalidae" genus="Opoptera" kingdom="Animalia" order="Lepidoptera" pageId="12" pageNumber="13" phylum="Arthropoda" rank="species" species="staudingeri">
