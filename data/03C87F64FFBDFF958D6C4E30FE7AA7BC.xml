<taxonomicName id="4C61B5F1FFBDFF958D664E37FD63A563" authorityName="Graber" authorityYear="1957" box="[543,675,267,294]" class="Insecta" family="Drosophilidae" genus="Drosophila" kingdom="Animalia" order="Diptera" pageId="17" pageNumber="18" phylum="Arthropoda" rank="species" species="vulcana">
