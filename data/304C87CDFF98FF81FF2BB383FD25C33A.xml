<taxonomicName id="7FE54D58FF99FF81FDB1B6F2FD34C4A2" authority="Douglas, 1890" authorityName="Douglas" authorityYear="1890" box="[525,677,955,980]" class="Insecta" family="Margarodidae" genus="Crossotosoma" higherTaxonomySource="GBIF" kingdom="Animalia" order="Hemiptera" pageId="95" pageNumber="96" phylum="Arthropoda" rank="species" species="aegyptiaca">
