<date box="[683,840,226,252]" pageId="34" pageNumber="35" value="1977-05-31">
<number box="[683,712,226,252]" pageId="34" pageNumber="35" value="31.0">31</number>
May 
<number box="[780,840,226,252]" pageId="34" pageNumber="35" value="1977.0">1977</number>
