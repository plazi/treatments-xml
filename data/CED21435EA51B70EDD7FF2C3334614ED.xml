<paragraph id="E0F26C5029DA9BEAD77971F7B8F10F3E" pageId="8" pageNumber="9">
<taxonomicName id="7790720532058CCD6E102A0BE98E92F2" class="Insecta" family="Mesoraphidiidae" genus="Necroraphidia" higherTaxonomySource="CoL" kingdom="Animalia" lsidName="Necroraphidia arcuata" order="Raphidioptera" pageId="8" pageNumber="9" phylum="Arthropoda" rank="species" species="arcuata">Necroraphidia arcuata</taxonomicName>
