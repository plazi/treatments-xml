<quantity id="8E42F7B7755C8129FB42CBD4FB3FFA66" box="[1188,1257,1509,1535]" metricMagnitude="-3" metricUnit="m" metricValue="3.0" pageId="12" pageNumber="13" unit="mm" value="3.0">3 mm</quantity>
