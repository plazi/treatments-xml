. 
<taxonomicName authority="var. vinagrera" authorityName="var. vinagrera" authorityYear="2021" box="[258,578,1962,1983]" class="Magnoliopsida" family="Begoniaceae" genus="Begonia" kingdom="Plantae" order="Cucurbitales" pageId="17" pageNumber="275" phylum="Tracheophyta" rank="variety" species="vinagrera" variety="vinagrera">
