<collectingRegion id="49A22CE6D206FFC5FCE9FDD21A20FDA3" box="[858,1141,514,538]" isEnumeration="true" pageId="1" pageNumber="204">Anjouan, Grande Comore</collectingRegion>
, 
<collectingCountry id="F371A294D206FFC5FB33FDD21A8FFDA3" box="[1152,1242,514,538]" name="Mayotte" pageId="1" pageNumber="204">Mayotte</collectingCountry>
and 
<location id="8EB9B4DFD206FFC5FABCFDD21B0AFDA3" LSID="urn:lsid:plazi:treatment:03CF5312D206FFC5FC92FED91BF9F9FD:8EB9B4DFD206FFC5FABCFDD21B0AFDA3" box="[1295,1375,514,538]" country="Madagascar" name="Moheli" pageId="1" pageNumber="204" stateProvince="Anjouan, Grande Comore">Moheli</location>
