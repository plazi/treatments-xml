<subSubSection id="C328653BB44BFFE0A9B2D084FC33A593" box="[201,967,404,428]" pageId="21" pageNumber="22" type="etymology">
<paragraph id="8B8D36B0B44BFFE0A9B2D084FC33A593" blockId="21.[151,1436,151,500]" box="[201,967,404,428]" pageId="21" pageNumber="22">
<emphasis id="B946EAA2B44BFFE0A9B2D084FEA4A593" bold="true" box="[201,336,404,428]" pageId="21" pageNumber="22">Etymology.</emphasis>
