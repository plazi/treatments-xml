<taxonomicName id="56B74D4BFFB4FFADD64F8D50FBB4FEBC" authority="Rodriguez" authorityName="Rodriguez" box="[855,1054,331,357]" class="Magnoliopsida" family="Gentianaceae" genus="Karina" kingdom="Plantae" order="Gentianales" pageId="8" pageNumber="9" phylum="Tracheophyta" rank="genus">Karina Rodríguez</taxonomicName>
