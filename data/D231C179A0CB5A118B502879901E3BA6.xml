<taxonomicName id="CFBE62F53F73FC6018E8F8F8B434FE5D" class="Magnoliopsida" family="Juncaceae" genus="Luzula" higherTaxonomySource="GBIF" kingdom="Plantae" lsidName="" order="Poales" pageId="0" pageNumber="59648" phylum="Angiospermae" rank="order">Poales</taxonomicName>
