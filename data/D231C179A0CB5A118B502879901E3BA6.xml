<taxonomicName id="999575CBCC044DC4FB44EDBD8E94D30F" class="Magnoliopsida" family="Apiaceae" genus="Heracleum" higherTaxonomySource="IPNI" kingdom="Plantae" lsidName="Heracleum sphondylium" order="Apiales" pageId="0" pageNumber="59648" phylum="Magnoliophyta" rank="species" species="sphondylium">
