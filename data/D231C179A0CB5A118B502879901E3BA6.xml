<taxonomicName id="DB0BACEDF2F9179E9F4B17E17B77CB2B" class="Magnoliopsida" family="Juncaceae" genus="Luzula" higherTaxonomySource="GBIF" kingdom="Plantae" lsidName="" order="Poales" pageId="0" pageNumber="59648" phylum="Angiospermae" rank="family">Juncaceae</taxonomicName>
