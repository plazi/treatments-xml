<taxonomicName id="B08F9D1AE74EB64364785652646FB5A5" class="Dothideomycetes" family="Phaeosphaeriaceae" genus="Italica" higherTaxonomySource="GBIF" kingdom="Fungi" lsidName="Italica" order="Pleosporales" pageId="0" pageNumber="59648" phylum="Ascomycota" rank="genus">Italica</taxonomicName>
