<taxonomicName id="0A2BFF294A37748D1DA4562B6596F708" class="Magnoliopsida" family="Asteraceae" genus="Achillea" higherTaxonomySource="CoL,IPNI" kingdom="Plantae" lsidName="Achillea millefolium" order="Asterales" pageId="0" pageNumber="59648" phylum="Tracheophyta" rank="species" species="millefolium">
<emphasis id="A237E70D6B3281E1592A9657E8D1A060" italics="true" pageId="0" pageNumber="59648">Achillea millefolium</emphasis>
</taxonomicName>
(
<taxonomicName id="09B317B6DF4ED0629D0BD45B4E7C0796" class="Magnoliopsida" family="Asteraceae" genus="Achillea" higherTaxonomySource="CoL,IPNI" kingdom="Plantae" lsidName="" order="Asterales" pageId="0" pageNumber="59648" phylum="Tracheophyta" rank="order">Asterales</taxonomicName>
, 
<taxonomicName id="4B085FB197F87A3C24DD12195A6065BE" class="Magnoliopsida" family="Asteraceae" genus="Achillea" higherTaxonomySource="CoL,IPNI" kingdom="Plantae" lsidName="" order="Asterales" pageId="0" pageNumber="59648" phylum="Tracheophyta" rank="family">Asteraceae</taxonomicName>
) and 
<taxonomicName id="051103B443D7BC7FA71B3E81162D5285" class="Magnoliopsida" family="Juncaceae" genus="Luzula" higherTaxonomySource="GBIF" kingdom="Plantae" lsidName="Luzula" order="Poales" pageId="0" pageNumber="59648" phylum="Angiospermae" rank="genus">
