</taxonomicName>
(
<taxonomicName id="BCC1A8B9B85DCE8DCED7881E92D91626" authorityName="C.Linnaeus" authorityYear="1753" class="Magnoliopsida" family="Apiaceae" genus="Heracleum" higherTaxonomySource="IPNI" kingdom="Plantae" lsidName="" order="Apiales" pageId="0" pageNumber="59648" phylum="Magnoliophyta" rank="order">Apiales</taxonomicName>
