<taxonomicName id="743902E0B77628450BEEC91D57AC9E3B" authorityName="Wijes., Yong Wang bis, Camporesi &amp; K. D. Hyde" authorityYear="2021" class="Dothideomycetes" family="Phaeosphaeriaceae" genus="Italica" higherTaxonomySource="GBIF" kingdom="Fungi" lsidName="Italica heraclei" order="Pleosporales" pageId="0" pageNumber="59648" phylum="Ascomycota" rank="species" species="heraclei">
