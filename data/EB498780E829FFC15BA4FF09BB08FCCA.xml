<taxonomicName id="A4E04D15E829FFC15BA4FF09BCF8FF6E" authority="(Freyer, 1843)" baseAuthorityName="Freyer" baseAuthorityYear="1843" box="[151,648,151,177]" class="Insecta" family="Sesiidae" genus="Pyropteron" kingdom="Animalia" order="Lepidoptera" pageId="24" pageNumber="25" phylum="Arthropoda" rank="species" species="minianiformis">
