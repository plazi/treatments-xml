<collectingCountry id="6692764CAB74FFF8FCC261C6996D5BBF" box="[225,299,1444,1467]" name="Brazil" pageId="41" pageNumber="42">Brazil</collectingCountry>
, 
<collectingCountry id="6692764CAB74FFF8FD1461C699EB5BBF" box="[311,429,1444,1467]" name="Colombia" pageId="41" pageNumber="42">Colombia</collectingCountry>
, 
<collectingCountry id="6692764CAB74FFF8FD9B61C69A5C5BBF" box="[440,538,1444,1467]" name="Ecuador" pageId="41" pageNumber="42">Ecuador</collectingCountry>
, 
<collectingCountry id="6692764CAB74FFF8FE0761C6988A5BDC" name="French Guiana" pageId="41" pageNumber="42">French Guiana</collectingCountry>
, 
<collectingCountry id="6692764CAB74FFF8FCF961A399545BDC" box="[218,274,1473,1496]" name="Peru" pageId="41" pageNumber="42">Peru</collectingCountry>
, and 
<collectingCountry id="6692764CAB74FFF8FD7661A399975BDC" box="[341,465,1473,1496]" name="Venezuela" pageId="41" pageNumber="42">Venezuela</collectingCountry>
