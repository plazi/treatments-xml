2. 
<taxonomicName id="3655687345363840F99AD6A310B5C8A7" LSID="72F4E5DE-F8DF-5751-A0FF-C6D960138674" authority="Ren &amp; Yang, 2020" authorityName="Ren &amp; Yang" authorityYear="2020" class="Insecta" family="Limoniidae" genus="Limonia" higherTaxonomySource="CoL" kingdom="Animalia" lsidName="Limonia medexocha" order="Diptera" pageId="0" pageNumber="31" phylum="Arthropoda" rank="species" species="medexocha" status="sp. nov.">Limonia medexocha</taxonomicName>
<taxonomicNameLabel id="CDB5CCDAD51757EB8B21A35EA946B1C7" pageId="0" pageNumber="31">sp. nov.</taxonomicNameLabel>
<figureCitation id="C11D03C3A71271F35FE36DEDEA89B702" captionStart="Figures 10–12" captionStartId="F4" captionText="Figures 10 - 12. Limonia medexocha sp. nov., male 10 male habitus, lateral view 11 head and thorax, dorsal view 12 right wing. Scale bars: 1.0 mm." figureDoi="10.3897/zookeys.971.35875.figures10-12" httpUri="https://binary.pensoft.net/fig/456135" pageId="0" pageNumber="31">Figures 10-12</figureCitation>
