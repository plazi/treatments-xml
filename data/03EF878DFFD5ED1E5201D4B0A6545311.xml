<taxonomicName id="4C464D18FFD5ED1E5747D0F2A3D450C2" box="[1102,1247,1460,1485]" class="Insecta" family="Cicadellidae" genus="Scaphotettix" kingdom="Animalia" order="Hemiptera" pageId="15" pageNumber="16" phylum="Arthropoda" rank="genus">
