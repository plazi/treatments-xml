<taxonomicName id="4C464D18FFD5ED1E5288D09AA50B50FA" box="[385,512,1500,1525]" class="Insecta" family="Cicadellidae" genus="Scaphoideus" kingdom="Animalia" order="Hemiptera" pageId="15" pageNumber="16" phylum="Arthropoda" rank="species" species="sculptus" status="sp. nov.">
