<quantity id="4CBE9B7EFFD5ED1E513CD1AAA5965009" box="[565,669,1260,1286]" metricMagnitude="-3" metricUnit="m" metricValue="4.6" pageId="15" pageNumber="16" unit="mm" value="4.6">4.60 mm</quantity>
