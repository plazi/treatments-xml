<materialsCitation id="3B31D231FFA6FF969C91C5EF8B7AFED2" collectionCode="DEI" collectorName="H. Sauter" country="Taiwan" determinerName="Bezzi" location="Tainan" pageId="117" pageNumber="118" specimenCount="1" stateProvince="Tainan" typeStatus="neotype">
