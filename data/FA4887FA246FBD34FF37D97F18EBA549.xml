<taxonomicName id="B5E14D6F246DBD34FA88DCCC1A2EA1CE" authorityName="Martius" authorityYear="1823" class="Liliopsida" family="Arecaceae" genus="Geonoma" kingdom="Plantae" order="Arecales" pageId="115" pageNumber="116" phylum="Tracheophyta" rank="species" species="pauciflora">
