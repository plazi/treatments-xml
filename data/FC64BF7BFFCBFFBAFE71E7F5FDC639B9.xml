group: (a). 
<taxonomicName id="B3CD75EEFFCDFFBAFC1BE3F3FBD43BCA" authorityName="Friese" authorityYear="1908" box="[911,1040,1250,1273]" class="Insecta" family="Megachilidae" genus="Megachile" kingdom="Animalia" order="Hymenoptera" pageId="4" pageNumber="461" phylum="Arthropoda" rank="species" species="leucografa">
<emphasis id="46B9D27FFFCDFFBAFC1BE3F3FBD43BCA" box="[911,1040,1250,1273]" italics="true" pageId="4" pageNumber="461">M. leucografa</emphasis>
</taxonomicName>
, female; (b) 
<taxonomicName id="B3CD75EEFFCDFFBAFF34E3EEFEE23A25" authorityName="Friese" authorityYear="1908" box="[160,294,1279,1302]" class="Insecta" family="Megachilidae" genus="Megachile" kingdom="Animalia" order="Hymenoptera" pageId="4" pageNumber="461" phylum="Arthropoda" rank="species" species="leucografa">
<emphasis id="46B9D27FFFCDFFBAFF34E3EEFEE23A25" box="[160,294,1279,1302]" italics="true" pageId="4" pageNumber="461">M. leucografa</emphasis>
</taxonomicName>
, male; (c). 
<taxonomicName id="B3CD75EEFFCDFFBAFE0EE3EEFDD73A25" authorityName="Jorgensen" authorityYear="1912" box="[410,531,1279,1302]" class="Insecta" family="Megachilidae" genus="Megachile" kingdom="Animalia" order="Hymenoptera" pageId="4" pageNumber="461" phylum="Arthropoda" rank="species" species="obscurior">
<emphasis id="46B9D27FFFCDFFBAFE0EE3EEFDD73A25" box="[410,531,1279,1302]" italics="true" pageId="4" pageNumber="461">M. obscurior</emphasis>
</taxonomicName>
, female holotype; (d) 
<taxonomicName id="B3CD75EEFFCDFFBAFD6CE3EEFCB53A25" authorityName="Jorgensen" authorityYear="1912" box="[760,881,1279,1302]" class="Insecta" family="Megachilidae" genus="Megachile" kingdom="Animalia" order="Hymenoptera" pageId="4" pageNumber="461" phylum="Arthropoda" rank="species" species="obscurior">
