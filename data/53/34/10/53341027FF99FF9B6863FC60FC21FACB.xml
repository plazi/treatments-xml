(1920) (
<taxonomicName authority="Hochst." authorityName="Hochst." box="[862,1241,1249,1272]" class="Liliopsida" family="Orchidaceae" genus="Habenaria" kingdom="Plantae" order="Asparagales" pageId="6" pageNumber="331" phylum="Tracheophyta" rank="species" species="longibracteata">
