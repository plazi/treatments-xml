<emphasis box="[433,447,1903,1924]" italics="true" pageId="5" pageNumber="49">A</emphasis>
stands for 
<emphasis box="[553,670,1903,1924]" italics="true" pageId="5" pageNumber="49">
<taxonomicName box="[553,642,1903,1924]" class="Agaricomycetes" family="Agaricaceae" genus="Agaricus" kingdom="Fungi" order="Agaricales" pageId="5" pageNumber="49" phylum="Basidiomycota" rank="genus">Agaricus</taxonomicName>
; C
</emphasis>
for 
<emphasis box="[711,842,1902,1924]" italics="true" pageId="5" pageNumber="49">
<taxonomicName box="[711,802,1903,1924]" class="Agaricomycetes" family="Agaricaceae" genus="Coprinus" kingdom="Fungi" order="Agaricales" pageId="5" pageNumber="49" phylum="Basidiomycota" rank="genus">Coprinus</taxonomicName>
; Ch
</emphasis>
for 
<emphasis box="[883,1069,1902,1924]" italics="true" pageId="5" pageNumber="49">
<taxonomicName authorityName="Massee" authorityYear="1898" box="[883,1030,1902,1923]" class="Agaricomycetes" family="Agaricaceae" genus="Chlorophyllum" kingdom="Fungi" order="Agaricales" pageId="5" pageNumber="49" phylum="Basidiomycota" rank="genus">Chlorophyllum</taxonomicName>
; Cy
</emphasis>
