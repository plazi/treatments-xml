<paragraph blockId="3.[685,1172,452,579]" pageId="3" pageNumber="84">
<taxonomicName authorityName="Descarpentries" authorityYear="1981" box="[685,1013,532,553]" class="Insecta" family="Buprestidae" genus="Chrysobothris" kingdom="Animalia" order="Coleoptera" pageId="3" pageNumber="84" phylum="Arthropoda" rank="species" species="guadeloupensis">
