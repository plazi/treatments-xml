. 
<taxonomicName authorityName="Corda" authorityYear="1845" box="[824,960,248,273]" class="Pteridospermopsida" family="Pteridospermopsida (awaiting allocation)" genus="Heterangium" higherTaxonomySource="GBIF" kingdom="Plantae" order="Pteridospermopsida (awaiting allocation)" pageId="17" pageNumber="60" phylum="Tracheophyta" rank="genus">
