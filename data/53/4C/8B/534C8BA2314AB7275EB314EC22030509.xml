<taxonomicName authorityName="Dejean" authorityYear="1831" class="Hexapoda" family="Carabidae" genus="Amara" higherTaxonomySource="GBIF" kingdom="Animalia" lsidName="" order="Coleoptera" pageId="596" pageNumber="597" phylum="Arthropoda" rank="species" species="brunnipennis">
