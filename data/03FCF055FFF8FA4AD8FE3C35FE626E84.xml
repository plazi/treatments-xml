<paragraph id="8BEA4143FFF8FA4DD9FF3E0AFA9C6B3D" blockId="11.[189,1322,1569,1596]" box="[189,1322,1569,1596]" pageId="11" pageNumber="12">
<collectingRegion id="49918FA1FFF8FA4DD9FF3E0AFEF86B3A" box="[189,334,1569,1595]" country="Indonesia" name="Sumatera Utara" pageId="11" pageNumber="12">SUMATRA</collectingRegion>
: 
<collectingRegion id="49918FA1FFF8FA4DD81A3E09FE486B3A" box="[344,510,1569,1596]" country="Indonesia" name="Sumatera Barat" pageId="11" pageNumber="12">West Sumatra</collectingRegion>
