<collectionCode id="ED44D986FFF8FA4DDC453E09FAAB6B3D" box="[1287,1309,1570,1596]" country="Netherlands" lsid="urn:lsid:biocol.org:col:15678" name="Nationaal Herbarium Nederland, Leiden University branch" pageId="11" pageNumber="12" type="Herbarium">L</collectionCode>
