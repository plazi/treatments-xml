. 
<taxonomicName authorityName="Evenhuis" authorityYear="2020" baseAuthorityName="Macquart" baseAuthorityYear="1848" box="[329,439,728,753]" class="Insecta" family="Bombyliidae" genus="Ins" kingdom="Animalia" order="Diptera" pageId="10" pageNumber="306" phylum="Arthropoda" rank="species" species="minas">
