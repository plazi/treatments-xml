<taxonomicName authority="(Wiedemann)" authorityName="Evenhuis" authorityYear="2020" baseAuthorityName="Wiedemann" baseAuthorityYear="1828" box="[815,1075,727,754]" class="Insecta" family="Bombyliidae" genus="Ins" kingdom="Animalia" order="Diptera" pageId="10" pageNumber="306" phylum="Arthropoda" rank="species" species="celeris">
