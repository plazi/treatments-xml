, 
<taxonomicName authority="(Thomson)" baseAuthorityName="Thomson" baseAuthorityYear="1869" class="Insecta" family="Bombyliidae" genus="Hemipenthes" kingdom="Animalia" order="Diptera" pageId="3" pageNumber="299" phylum="Arthropoda" rank="species" species="nudiuscula">
