<taxonomicName authorityName="Loew" authorityYear="1869" box="[360,506,1090,1116]" class="Insecta" family="Bombyliidae" genus="Hemipenthes" kingdom="Animalia" order="Diptera" pageId="3" pageNumber="299" phylum="Arthropoda" rank="genus">
