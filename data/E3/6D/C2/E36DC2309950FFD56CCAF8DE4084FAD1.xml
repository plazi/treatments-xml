, 
<taxonomicName authority="(Osten Sacken)" baseAuthorityName="Osten Sacken" baseAuthorityYear="1887" box="[290,572,1056,1083]" class="Insecta" family="Bombyliidae" genus="Hemipenthes" kingdom="Animalia" order="Diptera" pageId="3" pageNumber="299" phylum="Arthropoda" rank="species" species="scylla">
