<taxonomicName id="4C7D4D56FF8CFFBD6A41FA44FB6AFF18" authorityName="Needham" authorityYear="1930" box="[1076,1192,1513,1538]" class="Insecta" family="Synlestidae" genus="Megalestes" kingdom="Animalia" order="Odonata" pageId="17" pageNumber="262" phylum="Arthropoda" rank="species" species="micans">
<emphasis id="B909EAC7FF8CFFBD6A41FA44FB6AFF18" box="[1076,1192,1513,1538]" italics="true" pageId="17" pageNumber="262">M. micans</emphasis>
