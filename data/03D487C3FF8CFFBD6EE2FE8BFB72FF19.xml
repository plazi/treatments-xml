<taxonomicName id="4C7D4D56FF8CFFBD6C2BFA44FCE1FF18" authorityName="Lahiri" authorityYear="1987" box="[606,803,1512,1538]" class="Insecta" family="Synlestidae" genus="Megalestes" kingdom="Animalia" order="Odonata" pageId="17" pageNumber="262" phylum="Arthropoda" rank="species" species="raychoudhurii">
