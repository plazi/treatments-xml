<normalizedToken id="F38D233AC643F0468798313201D3B479" originalValue="Flügel" pageId="null" pageNumber="528">Fluegel</normalizedToken>
<normalizedToken id="CBC7670FFD077CDE8CC3543AC0DFE728" originalValue="länger" pageId="null" pageNumber="528">laenger</normalizedToken>
