<taxonomicName id="AB0FCC4B9F7D28E932D0F717F83974B9" class="Magnoliopsida" family="Fabaceae" genus="Melilotus" kingdom="Plantae" order="Fabales" pageId="null" pageNumber="528" phylum="Tracheophyta" rank="species" species="altissimus">
<italic id="22A8E34C604F5454658D869FF07CCECC" pageId="null" pageNumber="528">M. altissimus</italic>
