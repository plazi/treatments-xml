<taxonomicName id="4C4F4D0CFF86FFF0F1BAFCAB2D3B7751" authorityName="Fennah" authorityYear="1967" box="[751,819,854,878]" class="Insecta" family="Derbidae" genus="Rhotana" kingdom="Animalia" order="Hemiptera" pageId="101" pageNumber="102" phylum="Arthropoda" rank="species" species="pellax">
