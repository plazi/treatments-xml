<taxonomicName id="773D6E684289FF0748725F66B43EF8AA" class="Magnoliopsida" family="Molluginaceae" genus="S." higherTaxonomySource="GBIF" kingdom="Plantae" lsidName="S. portulacastrum" order="Caryophyllales" pageId="30" pageNumber="75" phylum="Spermatophyta" rank="species" species="portulacastrum">
