<taxonomicName id="30F7F3E3D07AFFCCED8E660A0F7B3558" authority="Calman, 1896" authorityName="Calman" authorityYear="1896" box="[238,512,519,545]" class="Malacostraca" family="Bresiliidae" genus="Bresilia" higherTaxonomySource="GBIF" kingdom="Animalia" order="Decapoda" pageId="1" pageNumber="42" phylum="Arthropoda" rank="genus">
