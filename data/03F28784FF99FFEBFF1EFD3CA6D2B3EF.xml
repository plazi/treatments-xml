<taxonomicName id="4C5B4D11FF9AFFEDFE1BF80DA65DB913" authority="Lapeyrouse, TLM" authorityName="Lapeyrouse, TLM" authorityYear="1795" box="[397,833,2031,2053]" class="Magnoliopsida" family="Plantaginaceae" genus="Antirrhinum" kingdom="Plantae" order="Lamiales" pageId="10" pageNumber="221" phylum="Tracheophyta" rank="species" species="sempervirens">
