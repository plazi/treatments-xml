<heading id="D0C9F10BCE30FFEFFF6BC0A8FDA3FDD9" bold="true" box="[151,563,511,537]" fontSize="11" level="1" pageId="22" pageNumber="23" reason="1">
<emphasis id="B94A9A75CE30FFEFFF6BC0A8FDA3FDD9" bold="true" box="[151,563,511,537]" pageId="22" pageNumber="23">
<taxonomicName id="4C3E3DE4CE30FFEFFF6BC0A8FE5FFDD9" authority="Martin, 2008" authorityName="Martin" authorityYear="2008" box="[151,463,511,537]" class="Insecta" family="Aleyrodidae" genus="Aleurodicus" kingdom="Animalia" order="Hemiptera" pageId="22" pageNumber="23" phylum="Arthropoda" rank="species" species="chirripoensis" status="sp. nov.">
<emphasis id="B94A9A75CE30FFEFFF6BC0A8FE5FFDD9" bold="true" box="[151,463,511,537]" italics="true" pageId="22" pageNumber="23">Aleurodicus chirripoensis</emphasis>
</taxonomicName>
