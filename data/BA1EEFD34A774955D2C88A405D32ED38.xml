<taxonomicName id="39F222FC7E4134AC193C869D59BB89A9" LSID="http://zoobank.org/94ECE792-62B4-4CBD-BAB4-8DB36BEDB5C0" authority="Nieto Nafria &amp; Mier Durante" class="Insecta" family="Aphididae" genus="Delfinoia" higherTaxonomySource="CoL" kingdom="Animalia" lsidName="Delfinoia" order="Hemiptera" pageId="2" pageNumber="51" phylum="Arthropoda" rank="genus">
