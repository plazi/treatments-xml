<subSubSection pageId="15" pageNumber="2753" type="etymology">
<paragraph blockId="15.[160,1155,1603,1663]" pageId="15" pageNumber="2753">
<emphasis bold="true" box="[160,291,1603,1628]" italics="true" pageId="15" pageNumber="2753">Etymology.</emphasis>
