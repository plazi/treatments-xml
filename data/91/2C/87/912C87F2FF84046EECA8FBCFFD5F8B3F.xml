<quantity box="[922,1060,461,487]" metricMagnitude="2" metricUnit="m" metricValue="8.0" metricValueMax="9.0" metricValueMin="7.0" pageId="32" pageNumber="33" unit="m" value="800.0" valueMax="900.0" valueMin="700.0">700–900 m</quantity>
, associated with 
<taxonomicName box="[1263,1436,461,487]" class="Liliopsida" family="Bromeliaceae" genus="Alcantarea" higherTaxonomySource="CoL" kingdom="Plantae" order="Poales" pageId="32" pageNumber="33" phylum="Tracheophyta" rank="species" species="undetermined">
