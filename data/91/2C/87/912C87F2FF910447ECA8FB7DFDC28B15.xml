<emphasis box="[677,820,848,873]" italics="true" pageId="9" pageNumber="10">A. laevigata</emphasis>
Leme
</taxonomicName>
, 
<taxonomicName authority="Leme &amp; H. Luther" authorityName="Leme &amp; H. Luther" box="[909,1311,848,874]" class="Liliopsida" family="Bromeliaceae" genus="Aechmea" kingdom="Plantae" order="Poales" pageId="9" pageNumber="10" phylum="Tracheophyta" rank="species" species="viridostigma">
