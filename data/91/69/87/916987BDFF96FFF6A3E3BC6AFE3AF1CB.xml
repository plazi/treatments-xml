<taxonomicName authorityName="N. P. Taylor" authorityYear="1987" baseAuthorityName="Lemaire" baseAuthorityYear="1838" box="[650,884,878,904]" class="Magnoliopsida" family="Cactaceae" genus="Parodia" kingdom="Plantae" order="Caryophyllales" pageId="9" pageNumber="162" phylum="Tracheophyta" rank="species" species="mammulosa">
