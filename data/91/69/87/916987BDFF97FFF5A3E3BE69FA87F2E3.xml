<paragraph blockId="9.[136,1452,1400,2075]" pageId="9" pageNumber="162">
<emphasis bold="true" box="[189,471,1436,1462]" pageId="9" pageNumber="162">General distribution:—</emphasis>
<taxonomicName authorityName="Porter" authorityYear="1964" box="[471,583,1437,1462]" class="Demospongiae" family="Acarnidae" genus="Wigginsia" kingdom="Animalia" order="Poecilosclerida" pageId="9" pageNumber="162" phylum="Porifera" rank="genus">
