<collectingCountry box="[888,959,1746,1772]" name="Brazil" pageId="6" pageNumber="159">Brazil</collectingCountry>
, 
<collectingCountry box="[970,1069,1747,1773]" name="Uruguay" pageId="6" pageNumber="159">Uruguay</collectingCountry>
, 
<collectingCountry box="[1081,1166,1746,1772]" name="Bolivia" pageId="6" pageNumber="159">Bolivia</collectingCountry>
, 
