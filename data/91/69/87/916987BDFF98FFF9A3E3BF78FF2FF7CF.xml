<collectingCountry box="[136,221,1242,1268]" name="Bolivia" pageId="6" pageNumber="159">Bolivia</collectingCountry>
, 
<collectingCountry box="[232,345,1242,1268]" name="Colombia" pageId="6" pageNumber="159">Colombia</collectingCountry>
, French Guiana, 
<collectingCountry box="[536,768,1242,1268]" name="Curaçao" pageId="6" pageNumber="159">Netherlands Antilles</collectingCountry>
, 
<collectingCountry box="[780,885,1243,1269]" name="Paraguay" pageId="6" pageNumber="159">Paraguay</collectingCountry>
, 
<collectingCountry box="[896,950,1243,1269]" name="Peru" pageId="6" pageNumber="159">Peru</collectingCountry>
, 
<collectingCountry box="[961,1051,1243,1269]" name="Guyana" pageId="6" pageNumber="159">Guyana</collectingCountry>
, 
<collectingCountry box="[1062,1172,1242,1268]" name="Suriname" pageId="6" pageNumber="159">Suriname</collectingCountry>
, 
<collectingCountry box="[1183,1399,1242,1269]" name="Trinidad and Tobago" pageId="6" pageNumber="159">Trinidad &amp; Tobago</collectingCountry>
