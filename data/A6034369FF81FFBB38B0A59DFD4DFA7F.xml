; wing 
<quantity id="E9525F9AFF81FFBB3A83A4F4FCC0FD8A" box="[676,790,510,535]" metricMagnitude="-3" metricUnit="m" metricValue="6.75" metricValueMax="7.5" metricValueMin="6.0" pageId="17" pageNumber="418" unit="mm" value="6.75" valueMax="7.5" valueMin="6.0">6–7.5 mm</quantity>
