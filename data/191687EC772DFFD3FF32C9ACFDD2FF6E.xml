<caption id="C5C06672772FFFD4FF32CFB3FAC5FA6A" httpUri="https://zenodo.org/record/1175080/files/figure.png" pageId="3" pageNumber="532" startId="3.[151,250,1470,1492]" targetBox="[175,1419,209,1438]" targetPageId="3">
