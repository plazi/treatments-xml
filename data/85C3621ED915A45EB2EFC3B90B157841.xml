<paragraph id="C54A423456A5F7A8C474A5B9159FD57B" pageId="26" pageNumber="349">
Type material. - Female 
<typeStatus id="45B447EB60FC13133D66A51EE61D883C" pageId="26" pageNumber="349">holotype</typeStatus>
from Rio 
<normalizedToken id="026FC4E0B9C1149ACF37E3B5472D8A47" originalValue="Japurá" pageId="26" pageNumber="349">Japura</normalizedToken>
