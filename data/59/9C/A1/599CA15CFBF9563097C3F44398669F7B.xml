<emphasis italics="true" pageId="0" pageNumber="55">Abies guatemalensis</emphasis>
</taxonomicName>
, 
<taxonomicName class="Pinopsida" family="Pinaceae" genus="Pinus" kingdom="Plantae" lsidName="Pinus pseudostrobus" order="Pinales" pageId="0" pageNumber="55" phylum="Tracheophyta" rank="species" species="pseudostrobus">
<emphasis italics="true" pageId="0" pageNumber="55">Pinus pseudostrobus</emphasis>
</taxonomicName>
and 
