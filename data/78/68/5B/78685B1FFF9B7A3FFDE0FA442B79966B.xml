<taxonomicName authorityName="Rambur" authorityYear="1842" box="[693,879,1521,1553]" class="Insecta" family="Lestidae" genus="Platylestes" higherTaxonomySource="GBIF" kingdom="Animalia" order="Odonata" pageId="0" pageNumber="248" phylum="Arthropoda" rank="species" species="platystylus">platystylus</taxonomicName>
