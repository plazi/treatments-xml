: 
<collectingCountry box="[678,796,1332,1353]" name="Madagascar" pageId="12" pageNumber="13">Madagascar</collectingCountry>
, 
<location LSID="urn:lsid:plazi:treatment:784D87A53705FFADE252EE7FFB31FDBB:F53B60683705FFAFE30CEF4AFC37FADF" box="[806,984,1332,1353]" country="Madagascar" name="Vohimana reserve" pageId="12" pageNumber="13">Vohimana reserve</location>
