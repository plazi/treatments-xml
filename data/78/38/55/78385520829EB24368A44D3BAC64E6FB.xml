<subSubSection pageId="5" pageNumber="72" type="nomenclature">
<paragraph pageId="5" pageNumber="72">
<taxonomicName LSID="MB826795" authority="C. M. Tian &amp; N. Jiang" class="Sordariomycetes" family="Erythrogloeaceae" genus="Dendrostoma" higherTaxonomySource="CoL" kingdom="Fungi" lsidName="Dendrostoma aurorae" order="Diaporthales" pageId="5" pageNumber="72" phylum="Ascomycota" rank="species" species="aurorae">Dendrostoma aurorae C.M. Tian &amp; N. Jiang</taxonomicName>
