<subSubSection id="C3213283FFB4F931FF5BFD23FCF7FF70" lastPageId="39" lastPageNumber="236" pageId="38" pageNumber="235" type="biology_ecology">
<paragraph id="8B846108FFB4F930FF5BFD23FF79FC87" blockId="38.[151,1436,294,2017]" pageId="38" pageNumber="235">
<emphasis id="B94FBD1AFFB4F930FF5BFD23FEB5FCAD" bold="true" box="[196,303,745,771]" pageId="38" pageNumber="235">Ecology.</emphasis>
