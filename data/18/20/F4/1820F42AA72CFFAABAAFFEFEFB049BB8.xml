(
<figureCitation box="[159,238,402,426]" captionStart="FIGURES 6–11" captionStartId="7.[151,264,1692,1715]" captionTargetBox="[151,1435,193,1644]" captionTargetId="figure-92@7.[151,1436,193,1644]" captionTargetPageId="7" captionText="FIGURES 6–11. Adults of Scaeosopha spp. 6, S. percnaula Meyrick, lectotype ♂, Assam, India; 7, S. percnaula Meyrick (= S. stagnigera Meyrick syn. nov., lectotype ♂, Bombay, India); 8, S. sinevi Ponomarenko et Park, ♂, Hong Kong, China; 9, S. betrokensis sp. nov., holotype ♂, Betroka, Madagascar; 10, S. erecta sp. nov., holotype ♂, Hainan, China; 11, S. hongkongensis sp. nov., holotype ♂, Hong Kong, China." pageId="13" pageNumber="14">Figs. 9</figureCitation>
, 
<figureCitation box="[250,334,402,426]" captionStart="FIGURES 31–34" captionStartId="12.[151,264,1615,1638]" captionTargetBox="[245,1343,213,1582]" captionTargetId="figure-122@12.[226,1360,195,1594]" captionTargetPageId="12" captionText="FIGURES 31–34. Male genitalia of Scaeosopha spp. 31, S. percnaula Meyrick (= S. stagnigera Meyrick syn. nov., lectotype, genitalia slide no. JFGC7765); 32, S. sinevi Ponomarenko et Park, genitalia slide no. ZZW08211; 33, S. betrokensis sp. nov., holotype, BMNH Microlep. slide no. 32345, 33a, eighth sternum; 34, S. erecta sp. nov., holotype, genitalia slide no. ZZW09004." pageId="13" pageNumber="14">33, 33a</figureCitation>
