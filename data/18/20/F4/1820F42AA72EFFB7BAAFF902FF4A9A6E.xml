<paragraph blockId="16.[151,1437,151,1076]" pageId="16" pageNumber="17">
<emphasis bold="true" box="[201,323,943,968]" inLineHeading="true" pageId="16" pageNumber="17" reason="1">Diagnosis.</emphasis>
