<taxonomicName LSID-ZBK="urn:lsid:zoobank.org:act:CC7B154F-0B6B-4A8C-A4DD-2EBF83B9C00A" class="Actinopterygii" family="Ariidae" genus="Genidens" kingdom="Animalia" lsidName-ZBK="Genidens Castelnau 1855:33" order="Siluriformes" pageNumber="81" phylum="Chordata" rank="genus">Genidens</taxonomicName>
, 
<taxonomicName LSID-ZBK="urn:lsid:zoobank.org:act:A465F2E2-3CB7-445A-A792-A01BE7E8F95E" class="Actinopterygii" family="Ariidae" genus="Neoarius" kingdom="Animalia" lsidName-ZBK="Neoarius Castelnau 1878:237" order="Siluriformes" pageNumber="81" phylum="Chordata" rank="genus">Neoarius</taxonomicName>
