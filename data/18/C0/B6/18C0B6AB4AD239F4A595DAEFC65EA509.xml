, 
<taxonomicName LSID-ZBK="urn:lsid:zoobank.org:act:4A7D104C-F38B-4AFB-8C4A-A3838C172BB0" class="Actinopterygii" family="Ariidae" genus="Brustiarius" kingdom="Animalia" lsidName-ZBK="Brustiarius Arius Herre 1935:388" order="Siluriformes" pageNumber="81" phylum="Chordata" rank="genus">Brustiarius</taxonomicName>
, 
<taxonomicName class="Actinopterygii" family="Ariidae" genus="Carlarius" kingdom="Animalia" order="Siluriformes" pageNumber="81" phylum="Chordata" rank="genus">Carlarius</taxonomicName>
, 
<taxonomicName LSID-ZBK="urn:lsid:zoobank.org:act:B293B6B1-C1F8-4EA8-AA70-87E0EF542E48" class="Actinopterygii" family="Ariidae" genus="Cochlefelis" kingdom="Animalia" lsidName-ZBK="Cochlefelis Whitley 1941:8" order="Siluriformes" pageNumber="81" phylum="Chordata" rank="genus">Cochlefelis</taxonomicName>
