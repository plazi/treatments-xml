, 
<taxonomicName LSID-ZBK="urn:lsid:zoobank.org:act:B824B602-4F87-4771-B334-61385645D6C4" class="Actinopterygii" family="Ariidae" genus="Ketengus" kingdom="Animalia" lsidName-ZBK="Ketengus Bleeker 1847:167" order="Siluriformes" pageNumber="81" phylum="Chordata" rank="genus">Ketengus</taxonomicName>
