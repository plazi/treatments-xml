</emphasis>
<taxonomicName id="4C27E3B77E7DFFF1FE81745ADDEFF872" authority="Plotz, 1884" authorityName="Plotz" authorityYear="1884" box="[382,753,1904,1929]" class="Insecta" family="Hesperiidae" genus="Antigonus" kingdom="Animalia" order="Lepidoptera" pageId="15" pageNumber="14" phylum="Arthropoda" rank="species" species="obliqua">
