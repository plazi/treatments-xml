<taxonomicName id="9AA8F24387B3ECC7BF4D91F0C2339597" class="Actinopterygii" family="Sciaenidae" genus="Plagioscion" higherTaxonomySource="CoL" kingdom="Animalia" order="Perciformes" pageNumber="40" phylum="Chordata" rank="genus">Plagioscion Gill 1861</taxonomicName>
