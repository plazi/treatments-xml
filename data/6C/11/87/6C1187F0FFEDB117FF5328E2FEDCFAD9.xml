</taxonomicName>
, 
<typeStatus box="[341,391,732,758]" pageId="3" pageNumber="49">type</typeStatus>
species 
<taxonomicName authority="Gravier, 1907" authorityName="Gravier" authorityYear="1907" box="[491,820,732,758]" class="Polychaeta" family="Serpulidae" genus="Helicosiphon" kingdom="Animalia" order="Sabellida" pageId="3" pageNumber="49" phylum="Annelida" rank="species" species="biscoensis">
