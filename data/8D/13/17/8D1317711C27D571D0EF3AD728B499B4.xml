<subSubSection pageId="9" pageNumber="130" type="lectotype">
<paragraph pageId="9" pageNumber="130">Lectotype.</paragraph>
<paragraph pageId="9" pageNumber="130">
<taxonomicName class="Magnoliopsida" family="Melastomataceae" genus="Tashiroea" higherTaxonomySource="CoL" kingdom="Plantae" lsidName="Tashiroea yaeyamensis" order="Myrtales" pageId="9" pageNumber="130" phylum="Tracheophyta" rank="species" species="yaeyamensis">
<emphasis italics="true" pageId="9" pageNumber="130">Tashiroea yaeyamensis</emphasis>
