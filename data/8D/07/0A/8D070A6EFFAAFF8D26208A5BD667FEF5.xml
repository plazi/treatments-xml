<paragraph blockId="6.[264,1324,1279,1905]" box="[264,387,1279,1304]" pageId="6" pageNumber="7">
<taxonomicName box="[264,387,1279,1304]" class="Insecta" family="Phlaeothripidae" genus="Comments" kingdom="Animalia" order="Thysanoptera" pageId="6" pageNumber="3" phylum="Arthropoda" rank="genus">
