<paragraph blockId="2.[264,1324,724,1550]" box="[264,387,724,749]" pageId="2" pageNumber="3">
<taxonomicName box="[264,387,724,749]" class="Insecta" family="Phlaeothripidae" genus="Comments" kingdom="Animalia" order="Thysanoptera" pageId="2" pageNumber="3" phylum="Arthropoda" rank="genus">
