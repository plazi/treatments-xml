<quantity box="[1066,1162,956,983]" metricMagnitude="-3" metricUnit="m" metricValue="2.5" pageId="17" pageNumber="114" unit="mm" value="2.5">2.5 mm</quantity>
. – 
<collectingCountry name="Colombia" pageId="17" pageNumber="114">Colombia</collectingCountry>
<taxonomicName authority="Papp, 2013" authorityName="Papp" authorityYear="2013" box="[1031,1216,990,1016]" class="Insecta" family="Braconidae" genus="Mirax" kingdom="Animalia" order="Hymenoptera" pageId="17" pageNumber="114" phylum="Arthropoda" rank="species" species="politus" status="sp. n." subGenus="Centistidea">
