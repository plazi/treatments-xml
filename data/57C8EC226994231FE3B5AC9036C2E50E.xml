<taxonomicName id="6AE5B96E3EB218B7985ECD73CD4BEDFC" class="Insecta" family="Dytiscidae" genus="Laccophilus" higherTaxonomySource="CoL" kingdom="Animalia" lsidName="Laccophilus pulcher" order="Coleoptera" pageId="151" pageNumber="152" phylum="Arthropoda" rank="species" species="pulcher">Laccophilus pulcher</taxonomicName>
