<quantity id="F50A9B7DFF95A7471779FDB52FA79076" box="[1060,1152,529,555]" metricMagnitude="-3" metricUnit="m" metricValue="4.8" pageId="34" pageNumber="81" unit="mm" value="4.8">4.8 mm</quantity>
