<quantity id="F50A9B7DFF95A7471076FDB528AF9076" box="[811,904,529,555]" metricMagnitude="-3" metricUnit="m" metricValue="1.2" pageId="34" pageNumber="81" unit="mm" value="1.2">1.2 mm</quantity>
