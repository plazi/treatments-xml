<taxonomicName id="76B0D0EA0730FFC42C07EBF67EB6FA3A" authority="Bocourt, 1879: 400" authorityName="Bocourt" authorityPageNumber="400" authorityYear="1879" box="[313,736,1482,1507]" class="Reptilia" family="Scincidae" genus="Mabuya" kingdom="Animalia" order="Squamata" pageId="57" pageNumber="58" phylum="Chordata" rank="species" species="metallica">
