<typeStatus box="[780,828,951,977]" pageId="7" pageNumber="50">type</typeStatus>
locality in 
<collectingCountry box="[955,1003,951,977]" name="Iran" pageId="7" pageNumber="50">Iran</collectingCountry>
, 
<collectingRegion box="[1014,1259,950,976]" country="Iran" name="Mazandaran" pageId="7" pageNumber="50">Mazandaran Province</collectingRegion>
(
<figureCitation box="[1274,1342,950,977]" captionStart="FIGURE 5" captionStartId="7.[136,229,1668,1690]" captionTargetBox="[151,1436,1001,1644]" captionTargetId="figure-384@7.[151,1436,1001,1644]" captionTargetPageId="7" captionText="FIGURE 5 Distribution map of Zeravschania sola and related species: Z. sola (red), Z. aucheri (green), Z. khorasanica (dark blue), and Z. minjanensis (blue)." figureDoi="http://doi.org/10.5281/zenodo.6555841" httpUri="https://zenodo.org/record/6555841/files/figure.png" pageId="7" pageNumber="50">Fig. 5</figureCitation>
