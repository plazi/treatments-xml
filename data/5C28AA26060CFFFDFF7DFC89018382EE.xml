<taxonomicName id="138160B3060FFFFCFECCF864004885DC" authorityName="Runyon &amp; Robinson" authorityYear="2010" box="[294,608,1975,1998]" class="Malacostraca" family="Makawidae" genus="Hurleyella" kingdom="Animalia" order="Amphipoda" pageId="2" pageNumber="59" phylum="Arthropoda" rank="species" species="cumberlandensis">
