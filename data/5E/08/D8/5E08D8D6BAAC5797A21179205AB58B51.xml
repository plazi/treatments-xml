<paragraph pageId="0" pageNumber="19">
<taxonomicName authorityName="Nupponen 1 &amp; Sihvonen" authorityYear="2022" class="Insecta" family="Scythrididae" genus="Scythris" higherTaxonomySource="CoL" kingdom="Animalia" lsidName="Scythris dividua" order="Lepidoptera" pageId="0" pageNumber="19" phylum="Arthropoda" rank="species" species="dividua">
<emphasis italics="true" pageId="0" pageNumber="19">Scythris dividua</emphasis>
</taxonomicName>
, 
<taxonomicName class="Magnoliopsida" family="Amaranthaceae" genus="S." kingdom="Plantae" lsidName="S. medullata" order="Caryophyllales" pageId="0" pageNumber="19" phylum="Tracheophyta" rank="species" species="medullata">
