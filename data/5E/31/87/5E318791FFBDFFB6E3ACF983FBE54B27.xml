in 
<collectingRegion box="[1223,1323,1022,1048]" country="Italy" name="Abruzzo" pageId="13" pageNumber="52">Abruzzo</collectingRegion>
. 
<taxonomicName authorityName="Gottschl. &amp; S. Orsenigo" authorityYear="2021" class="Magnoliopsida" family="Asteraceae" genus="Hieracium" kingdom="Plantae" order="Asterales" pageId="13" pageNumber="52" phylum="Tracheophyta" rank="subSpecies" species="prenanthoides" subSpecies="penicense">
