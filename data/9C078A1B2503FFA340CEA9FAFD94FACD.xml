<taxonomicName id="D3AE408E2503FFA34142A88AFE55FE35" authorityName="Lin, Braby &amp; Hsu" authorityYear="2020" box="[283,400,401,426]" class="Insecta" family="Limacodidae" genus="Epsteinius" kingdom="Animalia" order="Lepidoptera" pageId="2" pageNumber="376" phylum="Arthropoda" rank="genus">
<emphasis id="26DAE71F2503FFA34142A88AFE55FE35" box="[283,400,401,426]" italics="true" pageId="2" pageNumber="376">Epsteinius</emphasis>
