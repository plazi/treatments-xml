<taxonomicName id="48256137E9651D1195A5E3A9F97F2201" authorityName="Morrison" authorityYear="1927" class="Insecta" family="Margarodidae" genus="Steatococcus" higherTaxonomySource="CoL" kingdom="Animalia" lsidName="Steatococcus samaraius" order="Hemiptera" pageId="0" pageNumber="339" phylum="Arthropoda" rank="species" species="samaraius">
<emphasis id="17A4248F1FF232DEAEDC96BD2A12DDBC" italics="true" pageId="0" pageNumber="339">Steatococcus samaraius</emphasis>
