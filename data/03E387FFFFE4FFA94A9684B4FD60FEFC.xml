<paragraph id="8BF536E9FFE4FFA84867844BFC75F8E4" blockId="10.[151,1436,1663,2013]" pageId="10" pageNumber="339">
(type = 
<taxonomicName id="4C4A4D6AFFE4FFA848C6844BFB6CF95B" authority="Strickland, 1844" authorityName="Strickland" authorityYear="1844" box="[711,1166,1663,1688]" class="Aves" family="Thraupidae" genus="Tachyphonus" kingdom="Animalia" order="Passeriformes" pageId="10" pageNumber="339" phylum="Chordata" rank="species" species="ruficeps">
