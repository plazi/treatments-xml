<collectingRegion id="683992C8BF74FFC8598CF91836354C75" box="[755,859,1791,1817]" country="United States of America" name="Missouri" pageId="25" pageNumber="26">Missouri</collectingRegion>
in the East and southern 
<collectingRegion id="683992C8BF74FFC85FF6F91834074C2D" isEnumeration="true" pageId="25" pageNumber="26">New Mexico, Arizona</collectingRegion>
, and 
<collectingRegion id="683992C8BF74FFC85AD9F8C037734C2D" box="[422,541,1831,1857]" country="United States of America" name="California" pageId="25" pageNumber="26">California</collectingRegion>
