<taxonomicName id="4C164D04E926593DFEB4FC18FD10FC08" authority="Hewitson, 1870" authorityName="Hewitson" authorityYear="1870" box="[359,739,939,965]" class="Insecta" family="Lycaenidae" genus="Emesis" kingdom="Animalia" order="Lepidoptera" pageId="6" pageNumber="481" phylum="Arthropoda" rank="species" species="angularis">
