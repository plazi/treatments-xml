<paragraph id="8BA93687E926593DFF14FB8FFD3FFB98" blockId="6.[151,1437,542,1397]" box="[199,716,1083,1109]" pageId="6" pageNumber="481">
<emphasis id="B962EA95E926593DFF14FB8FFE98FB98" bold="true" box="[199,363,1083,1109]" pageId="6" pageNumber="481">Parent taxon:</emphasis>
Genus 
<taxonomicName id="4C164D04E926593DFE13FB88FD3BFB98" authority="Fabricius, 1807" authorityName="Fabricius" authorityYear="1807" box="[448,712,1083,1109]" class="Insecta" family="Lycaenidae" genus="Emesis" kingdom="Animalia" order="Lepidoptera" pageId="6" pageNumber="481" phylum="Arthropoda" rank="genus">
