<taxonomicName id="4C164D04E926593DFD3EFC18FBA3FC08" authority="Hewitson, 1877" authorityName="Hewitson" authorityYear="1877" box="[749,1104,939,965]" class="Insecta" family="Lycaenidae" genus="Emesis" kingdom="Animalia" order="Lepidoptera" pageId="6" pageNumber="481" phylum="Arthropoda" rank="species" species="sinuata">
<emphasis id="B962EA95E926593DFD3EFC18FC66FC08" box="[749,917,940,965]" italics="true" pageId="6" pageNumber="481">Emesis sinuata</emphasis>
Hewitson, 1877
</taxonomicName>
, 
<taxonomicName id="4C164D04E926593DFB88FC18FF21FC24" authority="Hopffer, 1874" authorityName="Hopffer" authorityYear="1874" class="Insecta" family="Lycaenidae" genus="Emesis" kingdom="Animalia" order="Lepidoptera" pageId="6" pageNumber="481" phylum="Arthropoda" rank="species" species="heterochroa">
