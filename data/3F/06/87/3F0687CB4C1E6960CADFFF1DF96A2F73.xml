<subSubSection box="[206,1114,439,466]" pageId="17" pageNumber="418" type="etymology">
<paragraph blockId="17.[151,1437,259,826]" box="[206,1114,439,466]" pageId="17" pageNumber="418">
<emphasis bold="true" box="[206,348,439,465]" pageId="17" pageNumber="418">Etymology.­</emphasis>
