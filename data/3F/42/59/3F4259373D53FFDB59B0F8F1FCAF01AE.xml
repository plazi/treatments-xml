<subSubSection box="[201,1327,476,500]" pageId="1" pageNumber="59" type="etymology">
<paragraph blockId="1.[151,1437,151,644]" box="[201,1327,476,500]" pageId="1" pageNumber="59">
<emphasis bold="true" box="[201,335,476,500]" pageId="1" pageNumber="59">Etymology.</emphasis>
