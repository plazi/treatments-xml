</taxonomicName>
and 
<taxonomicName authority="Pace. No" authorityName="Pace. No" box="[819,1075,1539,1560]" class="Insecta" family="Staphylinidae" genus="Acantoxyura" kingdom="Animalia" order="Coleoptera" pageId="51" pageNumber="134" phylum="Arthropoda" rank="species" species="spinifera">
