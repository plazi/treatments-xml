<quantity id="4CD904EBFF89D932BB482D83FF6F8822" metricMagnitude="-2" metricUnit="m" metricValue="1.7999999999999998" metricValueMax="2.3" metricValueMin="1.3" pageId="9" pageNumber="130" unit="cm" value="1.7999999999999998" valueMax="2.3" valueMin="1.3">1.3–2.3 cm</quantity>
