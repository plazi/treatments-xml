<heading id="D0AE573CFFE5BD17FF50F956987B2B64" bold="true" box="[151,536,1769,1795]" fontSize="11" level="1" pageId="14" pageNumber="405" reason="1">
<emphasis id="B92D3C42FFE5BD17FF50F956987B2B64" bold="true" box="[151,536,1769,1795]" pageId="14" pageNumber="405">
<taxonomicName id="4C599BD3FFE5BD17FF50F9569B0A2B64" box="[151,361,1769,1795]" class="Actinopterygii" family="Badidae" genus="Badis" kingdom="Animalia" order="Perciformes" pageId="14" pageNumber="405" phylum="Chordata" rank="species" species="autumnum">
<emphasis id="B92D3C42FFE5BD17FF50F9569B0A2B64" bold="true" box="[151,361,1769,1795]" italics="true" pageId="14" pageNumber="405">Badis autumnum</emphasis>
