<taxonomicName id="4C2C4D2EE345FFD3FCA0F8B5BAF2F8AD" authorityName="Perkins" authorityYear="2017" box="[834,974,1807,1832]" class="Insecta" family="Hydraenidae" genus="Hydraena" higherTaxonomySource="GBIF" kingdom="Animalia" order="Coleoptera" pageId="66" pageNumber="67" phylum="Arthropoda" rank="species" species="bisinuata">H. bisinuata</taxonomicName>
