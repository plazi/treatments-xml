<subSubSection id="C328653BB44DFFE6A9B2D63CFB35A37B" box="[201,1217,1836,1860]" pageId="19" pageNumber="20" type="etymology">
<paragraph id="8B8D36B0B44DFFE6A9B2D63CFB35A37B" blockId="19.[151,1437,1332,1932]" box="[201,1217,1836,1860]" pageId="19" pageNumber="20">
<emphasis id="B946EAA2B44DFFE6A9B2D63CFEA4A37B" bold="true" box="[201,336,1836,1860]" pageId="19" pageNumber="20">Etymology.</emphasis>
The name 
<taxonomicName id="4C324D33B44DFFE6A8B7D63CFDC0A37B" box="[460,564,1836,1860]" class="Insecta" family="Cicadellidae" genus="Purvigallia" kingdom="Animalia" order="Hemiptera" pageId="19" pageNumber="20" phylum="Arthropoda" rank="species" species="maculata">
