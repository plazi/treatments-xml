<normalizedToken id="501F15138EF4C87AD21C0CFD04E34C85" originalValue="ØJy" pageId="0" pageNumber="4">OJy</normalizedToken>
<normalizedToken id="D631947AE672F6157DDC0C6538B15ED8" originalValue="�rhus" pageId="0" pageNumber="4">Arhus</normalizedToken>
1963, SJy 
<normalizedToken id="0294C77F791F5DF2948398A67BF2F12C" originalValue="Sønderborg" pageId="0" pageNumber="4">Sonderborg</normalizedToken>
1975, FyL 
<normalizedToken id="2E78D269288C8C592EFC7635B118EF4A" originalValue="Nørre" pageId="0" pageNumber="4">Norre</normalizedToken>
