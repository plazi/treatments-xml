</taxonomicName>
(CBS 247.33) and 
<taxonomicName id="EE83E5A6E621FFBAEBCAF7B2AF34F793" box="[649,808,2064,2085]" class="Dothideomycetes" family="Elsinoaceae" genus="Elsinoe" kingdom="Fungi" order="Myriangiales" pageId="6" pageNumber="277" phylum="Ascomycota" rank="species" species="phaseoli">
