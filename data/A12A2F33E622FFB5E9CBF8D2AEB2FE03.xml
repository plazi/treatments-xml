<taxonomicName id="EE83E5A6E621FFBAE9A7F7B3ADCCF793" box="[228,464,2064,2086]" class="Dothideomycetes" family="Myriangiaceae" genus="Myriangium" kingdom="Fungi" order="Myriangiales" pageId="6" pageNumber="277" phylum="Ascomycota" rank="species" species="hispanicum">
