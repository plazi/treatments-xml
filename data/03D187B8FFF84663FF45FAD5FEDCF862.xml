<taxonomicName id="4C784D2DFFF84663FBEBFA9CFE9BFA3D" authority="Fabricius, 1775 (Monotypy)" authorityName="Fabricius, 1775 (Monotypy" class="Insecta" family="Syrphidae" genus="Syrphus" kingdom="Animalia" order="Diptera" pageId="1" pageNumber="302" phylum="Arthropoda" rank="species" species="sphegeus">
