<quantity id="4CCC9B6FBC376E0F6F96768DBD1C2AF7" box="[427,517,1923,1947]" metricMagnitude="-3" metricUnit="m" metricValue="3.1" pageId="7" pageNumber="384" unit="mm" value="3.1">3.1 mm</quantity>
