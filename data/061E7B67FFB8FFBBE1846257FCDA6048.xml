<paragraph id="8E08CA71FFB8FFB8E1846257FE3C647F" blockId="1.[151,1437,1296,2043]" box="[151,498,1296,1323]" pageId="1" pageNumber="244">
<heading id="D5407D1DFFB8FFB8E1846257FE3C647F" bold="true" box="[151,498,1296,1323]" fontSize="11" level="1" pageId="1" pageNumber="244" reason="1">
<emphasis id="BCC31663FFB8FFB8E1846257FE3C647F" bold="true" box="[151,498,1296,1323]" pageId="1" pageNumber="244">
The 
<taxonomicName id="49B7B1F2FFB8FFB8E1DE6256FE89647E" baseAuthorityName="Moore" baseAuthorityYear="1878" box="[205,327,1296,1323]" class="Insecta" family="Arctiidae" genus="Stigmatophora" kingdom="Animalia" order="Lepidoptera" pageId="1" pageNumber="244" phylum="Arthropoda" rank="species" species="palmata">
<emphasis id="BCC31663FFB8FFB8E1DE6256FE89647E" bold="true" box="[205,327,1296,1323]" italics="true" pageId="1" pageNumber="244">S. palmata</emphasis>
