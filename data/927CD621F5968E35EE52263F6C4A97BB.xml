<taxonomicName id="F45EA281D5B45FA38A91986424657663" authority="Hull, 1937" authorityName="Hull" authorityYear="1937" class="Insecta" family="Syrphidae" genus="Syrphipogon" higherTaxonomySource="GBIF" kingdom="Animalia" lsidName="Syrphipogon" order="Diptera" pageId="45" pageNumber="46" phylum="Arthropoda" rank="genus">Syrphipogon</taxonomicName>
