<taxonomicName id="09E8E974F4F13CCF9C560DD096E08D20" authority="Hull, 1937" authorityName="Hull" authorityYear="1937" class="Insecta" family="Syrphidae" genus="Syrphipogon" higherTaxonomySource="GBIF" kingdom="Animalia" lsidName="Syrphipogon fucatissimus" order="Diptera" pageId="45" pageNumber="46" phylum="Arthropoda" rank="species" species="fucatissimus">Syrphipogon fucatissimus</taxonomicName>
