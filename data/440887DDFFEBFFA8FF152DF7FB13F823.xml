<collectionCode id="AAB0AE0EFFEBFFA8FDF32FEAFDD4F8CA" box="[622,637,1791,1817]" country="France" lsid="urn:lsid:biocol.org:col:15763" name="Museum National d' Histoire Naturelle, Paris (MNHN) - Vascular Plants" pageId="2" pageNumber="249" type="Herbarium">P</collectionCode>
(
