<collectionCode id="AAB0AE0EFFEBFFA8FB0A2FEAFB15F8CA" box="[1175,1212,1791,1817]" country="Brazil" name="Embrapa Agrobiology Diazothrophic Microbial Culture Collection" pageId="2" pageNumber="249">BR</collectionCode>
(
