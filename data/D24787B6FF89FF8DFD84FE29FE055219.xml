<taxonomicName id="9DEE4D23FF89FF8DFF55FDA9FDC05569" authority="Schmitz 1953: 207" authorityName="Schmitz" authorityPageNumber="207" authorityYear="1953" box="[212,624,519,543]" class="Insecta" family="Phoridae" genus="Megaselia" kingdom="Animalia" order="Diptera" pageId="65" pageNumber="171" phylum="Arthropoda" rank="species" species="insecta">
