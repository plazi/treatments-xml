<taxonomicName id="C5D4A8B5A81FD70DB7B0FE013961729E" authority="Rondani, 1845" authorityName="Rondani" authorityYear="1845" box="[200,594,446,473]" class="Insecta" family="Syrphidae" genus="Merodon" kingdom="Animalia" order="Diptera" pageId="5" pageNumber="52" phylum="Arthropoda" rank="species" species="nigritarsis">
