is similar to 
<taxonomicName id="4C064D081977FFB06951A7037400F8E9" authority="Steenis &amp; Hippa &amp; Mutin, 2018" authorityName="Steenis &amp; Hippa &amp; Mutin" authorityYear="2018" box="[871,1068,1891,1918]" class="Insecta" family="Syrphidae" genus="Sphegina" kingdom="Animalia" order="Diptera" pageId="87" pageNumber="88" phylum="Arthropoda" rank="species" species="atrimanus" status="sp. nov." subGenus="Asiosphegina">
<emphasis id="B972EA991977FFB06951A7037400F8E9" box="[871,1068,1891,1918]" italics="true" pageId="87" pageNumber="88">S. (A.) atrimanus</emphasis>
</taxonomicName>
<taxonomicNameLabel id="A24157E21977FFB06E07A70474A1F8E9" box="[1073,1165,1891,1917]" pageId="87" pageNumber="88" rank="species">sp. nov.</taxonomicNameLabel>
, 
<taxonomicName id="4C064D081977FFB06EA1A703755BF8E9" authority="Steenis &amp; Hippa &amp; Mutin, 2018" authorityName="Steenis &amp; Hippa &amp; Mutin" authorityYear="2018" box="[1175,1399,1891,1918]" class="Insecta" family="Syrphidae" genus="Sphegina" kingdom="Animalia" order="Diptera" pageId="87" pageNumber="88" phylum="Arthropoda" rank="species" species="incretonigra" status="sp. nov." subGenus="Asiosphegina">
