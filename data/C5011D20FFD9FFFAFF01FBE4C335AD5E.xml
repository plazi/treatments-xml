<specimenCode id="1D0E044DFFD9FFFBFBA1FB70C2F9A8E1" box="[1079,1237,1217,1242]" collectionCode="RGM" country="Netherlands" httpUri="http://grbio.org/cool/47nz-wbm0" name="National Museum of Natural History, Naturalis" pageId="2" pageNumber="403" type="Museum">RGM 962096</specimenCode>
