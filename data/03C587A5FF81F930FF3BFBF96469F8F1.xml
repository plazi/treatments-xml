<taxonomicName id="4C6C4D30FF81F930FDA4F96F657FF961" box="[520,778,1679,1704]" class="Gastropoda" family="Raphitomidae" genus="Pleurotomella" kingdom="Animalia" order="Neogastropoda" pageId="69" pageNumber="70" phylum="Mollusca" rank="species" species="gibbera">
