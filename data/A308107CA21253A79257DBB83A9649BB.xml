<taxonomicName id="8D29EF9A513777FF49F05663EF094500" class="Insecta" family="Curculionidae" genus="Zurus" higherTaxonomySource="CoL" kingdom="Animalia" lsidName="Zurus" order="Coleoptera" pageId="21" pageNumber="72" phylum="Arthropoda" rank="genus">Zurus</taxonomicName>
