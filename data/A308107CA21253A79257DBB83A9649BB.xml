<taxonomicName id="CD9A17534AA20ACA342C6214D23FA8B9" authority="O'Brien &amp; Wibmer, 1982" authorityName="O'Brien &amp; Wibmer" authorityYear="1982" class="Insecta" family="Curculionidae" genus="Neozurus" higherTaxonomySource="GBIF" kingdom="Animalia" lsidName="Neozurus" order="Coleoptera" pageId="21" pageNumber="72" phylum="Arthropoda" rank="genus">Neozurus</taxonomicName>
