<collectingRegion id="0B08F815ED034A08FDE73C16FD6BFD44" box="[584,733,619,644]" country="Argentina" name="Ciudad Autonoma de Buenos Aires" pageId="2" pageNumber="585">Buenos Aires</collectingRegion>
and 
<collectingRegion id="0B08F815ED034A08FCB73C16FCC9FD43" box="[792,895,620,644]" country="Argentina" name="Formosa" pageId="2" pageNumber="585">Formosa</collectingRegion>
. New records)
</emphasis>
, Brazil (
<collectingRegion id="0B08F815ED034A08FB2D3C16FAD6FD44" box="[1154,1376,619,644]" country="Brazil" name="Mato Grosso do Sul" pageId="2" pageNumber="585">Mato Grosso do Sul</collectingRegion>
), Colombia (
<collectingRegion id="0B08F815ED034A08FF403CF5FEDDFD60" box="[239,363,655,679]" country="Colombia" name="Magdalena" pageId="2" pageNumber="585">Magdalena</collectingRegion>
