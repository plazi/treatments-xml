<emphasis id="B96A737F761EFFD86BB01A5310F0FAF9" box="[741,749,1358,1372]" italics="true" pageId="17" pageNumber="18">
<number id="3DD6BD4A761EFFD86BB01A5310F0FAF9" box="[741,749,1358,1372]" pageId="17" pageNumber="18" value="1.0">1</number>
</emphasis>
with basal third infuscated; cells 
<emphasis id="B96A737F761EFFD86D201A23169DFAF2" box="[1141,1152,1342,1367]" italics="true" pageId="17" pageNumber="18">r</emphasis>
<emphasis id="B96A737F761EFFD86DD41A531681FAF9" box="[1153,1180,1358,1372]" italics="true" pageId="17" pageNumber="18">
<number id="3DD6BD4A761EFFD86DD41A531694FAF9" box="[1153,1161,1358,1372]" pageId="17" pageNumber="18" value="2.0">2</number>
