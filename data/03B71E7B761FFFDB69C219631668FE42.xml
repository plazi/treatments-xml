, 
<emphasis id="B96A737F761EFFD86DFE1A2316ABFAF2" box="[1195,1206,1342,1367]" italics="true" pageId="17" pageNumber="18">r</emphasis>
<emphasis id="B96A737F761EFFD86DE31A5316A3FAF9" box="[1206,1214,1358,1372]" italics="true" pageId="17" pageNumber="18">
<number id="3DD6BD4A761EFFD86DE31A5316A3FAF9" box="[1206,1214,1358,1372]" pageId="17" pageNumber="18" value="5.0">5</number>
</emphasis>
and 
<emphasis id="B96A737F761EFFD86DA21A231711FAF2" box="[1271,1292,1342,1367]" italics="true" pageId="17" pageNumber="18">m</emphasis>
<emphasis id="B96A737F761EFFD86C591A531709FAF9" box="[1292,1300,1358,1372]" italics="true" pageId="17" pageNumber="18">
