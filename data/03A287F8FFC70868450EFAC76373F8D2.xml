<taxonomicName id="4C0B4D6DFFC70868450EFA54650AFA16" authority="Smith, 1910" authorityName="Smith" authorityYear="1910" box="[264,636,1478,1502]" class="Insecta" family="Noctuidae" genus="Hexorthodes" kingdom="Animalia" order="Lepidoptera" pageId="40" pageNumber="41" phylum="Arthropoda" rank="species" species="montara" status="NEW SYNONYM">
<emphasis id="B97FEAFCFFC70868450EFA546687FA15" box="[264,497,1479,1502]" italics="true" pageId="40" pageNumber="41">Hexorthodes montara</emphasis>
Smith, 
<number id="3DC324C9FFC708684643FA55650AFA16" box="[581,636,1478,1501]" pageId="40" pageNumber="41" value="1910.0">1910</number>
</taxonomicName>
