<paragraph id="520C9D56DD8EE34714841298B42A8AC6" pageId="333" pageNumber="334">
<taxonomicName id="B746FD9F42D3BADB91C61CDFA2CD8690" authorityName="Casey" authorityYear="1918" class="Hexapoda" family="Carabidae" genus="Trechus" higherTaxonomySource="GBIF" kingdom="Animalia" lsidName="" order="Coleoptera" pageId="333" pageNumber="334" phylum="Arthropoda" rank="species" species="rhodensis">Trechus rhodensis</taxonomicName>
