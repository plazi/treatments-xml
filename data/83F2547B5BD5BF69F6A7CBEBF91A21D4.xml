<taxonomicName id="FB33ECDC8A5C8FBC0AF333E4E11D372A" class="Hexapoda" family="Carabidae" genus="Trechus" higherTaxonomySource="GBIF" kingdom="Animalia" lsidName="" order="Coleoptera" pageId="333" pageNumber="334" phylum="Arthropoda" rank="subSpecies" species="apicalis" subSpecies="micans">
<emphasis id="B4460886E653DB9F4ACD5CF405A38D28" italics="true" pageId="333" pageNumber="334">Trechus apicalis micans</emphasis>
</taxonomicName>
