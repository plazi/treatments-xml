<taxonomicName id="26F33B494F98D9B8E455C24515087C9F" class="Hexapoda" family="Carabidae" genus="Trechus" higherTaxonomySource="GBIF" kingdom="Animalia" lsidName="" order="Coleoptera" pageId="333" pageNumber="334" phylum="Arthropoda" rank="subSpecies" species="apicalis" subSpecies="micans">
<emphasis id="8A03490F4573D3A0F152D05F7BD4A1C1" italics="true" pageId="333" pageNumber="334">Trechus apicalis micans</emphasis>
</taxonomicName>
