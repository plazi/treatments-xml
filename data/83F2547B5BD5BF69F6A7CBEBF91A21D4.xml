<taxonomicName id="561018099E2DDCCBB6457B4655CC018F" baseAuthorityName="LeConte" baseAuthorityYear="1847" class="Hexapoda" family="Carabidae" genus="Trechus" higherTaxonomySource="GBIF" kingdom="Animalia" lsidName="" order="Coleoptera" pageId="332" pageNumber="333" phylum="Arthropoda" rank="species" species="fulvus">
