<taxonomicName id="C02793FA8A085F646C57AD28FA82F636" class="Hexapoda" family="Carabidae" genus="Trechus" higherTaxonomySource="GBIF" kingdom="Animalia" lsidName="" order="Coleoptera" pageId="332" pageNumber="333" phylum="Arthropoda" rank="subSpecies" species="apicalis" subSpecies="micans">
