<collectionCode id="ED2176C0404CFFCAE0F804B03438F975" LSID="urn:lsid:biocol.org:col:35271" box="[701,786,1723,1747]" httpUri="http://biocol.org/urn:lsid:biocol.org:col:35271" name="Royal Belgian Institute of Natural Sciences" pageId="23" pageNumber="174">RBINS</collectionCode>
, No. IG 
<number id="3DF8FC22404CFFCAE13404B03490F975" box="[881,954,1723,1747]" pageId="23" pageNumber="174" value="33099.0">33099</number>
, RIR 
<number id="3DF8FC22404CFFCAE1BC04B0330DF972" box="[1017,1063,1723,1748]" pageId="23" pageNumber="174" value="256.0">256</number>
; 
<number id="3DF8FC22404CFFCAE67404B03315F972" box="[1073,1087,1723,1748]" pageId="23" pageNumber="174" value="5.0">5</number>
