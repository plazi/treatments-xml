<quantity id="4CC843E0404CFFCAE0E4044435F7F9C1" box="[673,733,1615,1639]" metricMagnitude="1" metricUnit="m" metricValue="4.0" pageId="23" pageNumber="174" unit="m" value="40.0">40 m</quantity>
