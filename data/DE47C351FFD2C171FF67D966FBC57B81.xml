<quantity id="9116DFA2FFD0C170FD04D96EFCA67C19" box="[756,848,1843,1869]" metricMagnitude="6" metricUnit="m" metricValue="1.9" pageId="74" pageNumber="75" unit="km" value="1900.0">1900km</quantity>
