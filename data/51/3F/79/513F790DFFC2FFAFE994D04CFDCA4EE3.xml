<taxonomicName authority="Jenkin 1908" authorityName="Jenkin" authorityYear="1908" box="[803,1091,513,539]" class="Calcarea" family="Achramorphidae" genus="Megapogon" kingdom="Animalia" order="Leucosolenida" pageId="23" pageNumber="224" phylum="Porifera" rank="species" species="pollicaris">
