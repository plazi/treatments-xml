<subSubSection pageId="3" pageNumber="86" type="etymology">
<paragraph blockId="3.[136,1451,832,1615]" box="[136,1311,832,860]" pageId="3" pageNumber="86">
<emphasis bold="true" box="[136,275,832,858]" pageId="3" pageNumber="86">Etymology:</emphasis>
<emphasis box="[281,435,832,858]" italics="true" pageId="3" pageNumber="86">
<taxonomicName authorityName="J. D. Leitao, T. R. L. Cordeiro, H. B. Lee &amp; A. L. Santiago" authorityYear="2021" box="[281,431,832,858]" class="Mucoromycetes" family="Cunninghamellaceae" genus="Absidia" kingdom="Fungi" order="Mucorales" pageId="3" pageNumber="86" phylum="Zygomycota" rank="species" species="aguabelensis">aguabelensis</taxonomicName>
