<quantity box="[840,928,1775,1799]" metricMagnitude="0" metricUnit="m" metricValue="9.0" metricValueMax="17.0" metricValueMin="1.0" pageId="6" pageNumber="7" unit="m" value="9.0" valueMax="17.0" valueMin="1.0">
