<td box="[1318,1436,1474,1496]" gridcol="6" gridrow="1" pageId="3" pageNumber="82">metazonital</td>
</tr>
<tr box="[151,1436,1504,1526]" gridrow="2" pageId="3" pageNumber="82" rowspan-1="1" rowspan-2="1" rowspan-3="1" rowspan-4="1" rowspan-5="1" rowspan-6="1">
