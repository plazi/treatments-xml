<taxonomicName class="Filicopsida" family="Pteridaceae" genus="P." higherTaxonomySource="GBIF" kingdom="Plantae" lsidName="P. latipinna" order="Polypodiales" pageId="4" pageNumber="99" phylum="Pteridophyta" rank="species" species="latipinna">
