</taxonomicName>
, 
<taxonomicName box="[1035,1182,1938,1962]" class="Insecta" family="Cleridae" genus="Erymanthus" higherTaxonomySource="GBIF" kingdom="Animalia" order="Coleoptera" pageId="13" pageNumber="514" phylum="Arthropoda" rank="species" species="variolatus">
<emphasis box="[1035,1182,1938,1962]" italics="true" pageId="13" pageNumber="514">E. variolatus</emphasis>
</taxonomicName>
, and 
<taxonomicName box="[1248,1429,1938,1962]" class="Insecta" family="Cleridae" genus="Erymanthus" higherTaxonomySource="GBIF" kingdom="Animalia" order="Coleoptera" pageId="13" pageNumber="514" phylum="Arthropoda" rank="species" species="maculaticeps">
<emphasis box="[1248,1429,1938,1962]" italics="true" pageId="13" pageNumber="514">E. maculaticeps</emphasis>
