<paragraph id="5E1BAE6BFB25747EB89D80C4DF3E2641" pageId="0" pageNumber="47">
<taxonomicName id="572314116CA5CFFF7784577786D0A2B4" authorityName="Massa" authorityYear="2020" class="Insecta" family="Tettigoniidae" genus="Leiodontocercus" higherTaxonomySource="CoL" kingdom="Animalia" lsidName="Leiodontocercus spinicercatus" order="Orthoptera" pageId="0" pageNumber="47" phylum="Arthropoda" rank="species" species="spinicercatus">
