<collectingCountry box="[805,894,1772,1798]" name="Mexico" pageId="122" pageNumber="123">Mexico</collectingCountry>
(
<collectingRegion box="[909,1007,1772,1798]" country="Mexico" name="Chiapas" pageId="122" pageNumber="123">Chiapas</collectingRegion>
) and 
<collectingCountry box="[1071,1198,1772,1798]" name="Guatemala" pageId="122" pageNumber="123">Guatemala</collectingCountry>
at altitudes between 1,500 and 
<quantity box="[274,373,1810,1836]" metricMagnitude="3" metricUnit="m" metricValue="1.68" pageId="122" pageNumber="123" unit="m" value="1680.0">1,680 m</quantity>
