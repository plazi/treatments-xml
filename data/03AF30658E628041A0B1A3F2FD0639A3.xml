</taxonomicName>
and 
<emphasis id="B9725D618E618040A20DA5BDFD2A3EBB" box="[555,744,1969,1994]" italics="true" pageId="2" pageNumber="575">
<taxonomicName id="4C06FAF08E618040A20DA5BDFD263EBB" baseAuthorityName="Mabille &amp; Boullet" baseAuthorityYear="1919" box="[555,740,1969,1994]" class="Insecta" family="Hesperiidae" genus="Drephalys" higherTaxonomySource="GBIF" kingdom="Animalia" order="Lepidoptera" pageId="2" pageNumber="575" phylum="Arthropoda" rank="species" species="phoenicoides">D. phoenicoides</taxonomicName>
