<emphasis box="[281,477,1615,1639]" italics="true" pageId="2" pageNumber="279">Versicolora ziyongi</emphasis>
</taxonomicName>
<emphasis bold="true" box="[483,563,1615,1639]" pageId="2" pageNumber="279">
<taxonomicNameLabel box="[483,563,1615,1639]" pageId="2" pageNumber="279" rank="species">sp. nov.</taxonomicNameLabel>
</emphasis>
, holotype, male. 
<emphasis bold="true" box="[738,756,1614,1639]" pageId="2" pageNumber="279">A</emphasis>
. habitus, dorsal view; 
<emphasis bold="true" box="[985,1002,1615,1639]" pageId="2" pageNumber="279">B</emphasis>
. habitus, ventral view; 
<emphasis bold="true" box="[1238,1256,1614,1639]" pageId="2" pageNumber="279">C</emphasis>
. head and thorax, dorsal view; 
<emphasis bold="true" box="[281,299,1651,1675]" pageId="2" pageNumber="279">D</emphasis>
. head and thorax, ventral view; 
<emphasis bold="true" box="[622,639,1651,1675]" pageId="2" pageNumber="279">E</emphasis>
. abdomen, ventral view; 
<emphasis bold="true" box="[893,908,1651,1675]" pageId="2" pageNumber="279">F</emphasis>
