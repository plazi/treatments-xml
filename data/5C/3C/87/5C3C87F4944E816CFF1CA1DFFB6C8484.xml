<emphasis bold="true" box="[151,630,1509,1535]" pageId="11">
<taxonomicName authority="Eardley &amp; Griswold, 2018" authorityName="Eardley &amp; Griswold" authorityYear="2018" box="[151,479,1509,1535]" class="Insecta" family="Megachilidae" genus="Cyphanthidium" higherTaxonomySource="GBIF" kingdom="Animalia" order="Hymenoptera" pageId="11" phylum="Arthropoda" rank="species" species="whiteheadi" status="new species">
