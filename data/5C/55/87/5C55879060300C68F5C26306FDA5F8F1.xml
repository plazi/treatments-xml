<quantity box="[457,559,1844,1867]" metricMagnitude="-1" metricUnit="m" metricValue="3.4" metricValueMax="3.5" metricValueMin="3.3" pageId="4" pageNumber="59" unit="cm" value="34.0" valueMax="35.0" valueMin="33.0">33-35 cm</quantity>
