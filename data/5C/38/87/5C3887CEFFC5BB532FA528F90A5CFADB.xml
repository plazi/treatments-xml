<subSubSection pageId="21" pageNumber="394" type="biology_ecology">
<paragraph blockId="21.[151,1436,1230,1365]" pageId="21" pageNumber="394">
<emphasis bold="true" box="[151,252,1302,1328]" pageId="21" pageNumber="394">Ecology.</emphasis>
