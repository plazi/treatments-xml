<subSubSection pageId="0" pageNumber="81" type="basionym">
<paragraph pageId="0" pageNumber="81">Basionym.</paragraph>
<paragraph pageId="0" pageNumber="81">
<taxonomicName authorityName="L. Fan &amp; Y. Y. Xu" authorityYear="2018" class="Pezizomycetes" family="Helvellaceae" genus="Barssia" higherTaxonomySource="CoL" kingdom="Fungi" lsidName="Barssia luyashanensis" order="Pezizales" pageId="0" pageNumber="81" phylum="Ascomycota" rank="species" species="luyashanensis">
