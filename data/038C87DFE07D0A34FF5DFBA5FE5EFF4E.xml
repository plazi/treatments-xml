<subSubSection id="C33F6542E07D0A37FF0DF8DDFF6EF839" pageId="5" pageNumber="562" type="etymology">
<paragraph id="8B9A36C9E07D0A37FF0DF8DDFF6EF839" blockId="5.[151,1437,1186,2041]" pageId="5" pageNumber="562">
<emphasis id="B951EADBE07D0A37FF0DF8DDFE89F8DD" box="[199,319,1870,1896]" italics="true" pageId="5" pageNumber="562">Etymology</emphasis>
