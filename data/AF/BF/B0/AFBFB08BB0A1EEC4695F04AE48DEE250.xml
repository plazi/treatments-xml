<taxonomicName LSID="AFBFB08B-B0A1-EEC4-695F-04AE48DEE250" authority="L." authorityName="L." class="Liliopsida" family="Amaryllidaceae" genus="Allium" higherTaxonomySource="CoL" kingdom="Plantae" lsidName="Allium cepa" order="Asparagales" pageId="3" pageNumber="4" phylum="Tracheophyta" rank="species" species="cepa">Allium cepa L.</taxonomicName>
