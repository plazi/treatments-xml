<taxonomicName class="Liliopsida" family="Poaceae" genus="Poa" higherTaxonomySource="CoL" infraspecific-rank="sect." kingdom="Plantae" lsidName="Poa" order="Poales" pageId="18" pageNumber="87" phylum="Tracheophyta" rank="section" section="Pseudopoa">Poa sect. Pseudopoa</taxonomicName>
