<paragraph pageId="0" pageNumber="129">
<taxonomicName authority="Lee &amp; Beenen, 2020" authorityName="Lee &amp; Beenen" authorityYear="2020" class="Insecta" family="Chrysomelidae" genus="Taiwanoshaira" higherTaxonomySource="GBIF" kingdom="Animalia" lsidName="Taiwanoshaira tsoui" order="Coleoptera" pageId="0" pageNumber="129" phylum="Arthropoda" rank="species" species="tsoui">
