<taxonomicName authorityName="Leschen &amp; Reid &amp; Nadein" authorityYear="2020" box="[918,999,1197,1223]" class="Insecta" family="Chrysomelidae" genus="Maurodus" higherTaxonomySource="GBIF" kingdom="Animalia" order="Coleoptera" pageId="38" pageNumber="39" phylum="Arthropoda" rank="species" species="lepidus">
