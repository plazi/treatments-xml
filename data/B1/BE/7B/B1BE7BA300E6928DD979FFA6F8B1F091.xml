<taxonomicName authority="Schmetterlingsstrauch" class="Magnoliopsida" family="Scrophulariaceae" genus="Buddleja" kingdom="Plantae" order="Lamiales" phylum="Tracheophyta" rank="genus">Buddleja, Schmetterlingsstrauch</taxonomicName>
