<paragraph pageId="0" pageNumber="20997">
<taxonomicName authority="Malmgren, 1865" authorityName="Malmgren" authorityYear="1865" class="Polychaeta" family="Ampharetidae" genus="Ampharete" higherTaxonomySource="CoL" kingdom="Animalia" lsidName="Ampharete grubei" order="Terebellida" pageId="0" pageNumber="20997" phylum="Annelida" rank="species" species="grubei">Ampharete grubei Malmgren, 1865</taxonomicName>
