<subSubSection id="72E5167C3A7FBA2D469F78EEE513B165" pageId="0" pageNumber="99" type="etymology">
<paragraph id="DD00F0D5F68FAAF01DD95E4D70F37378" pageId="0" pageNumber="99">Etymology.</paragraph>
<paragraph id="5E93397611871F7183F9A0996AD99EB7" pageId="0" pageNumber="99">
