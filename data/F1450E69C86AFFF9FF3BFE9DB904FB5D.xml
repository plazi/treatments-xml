<taxonomicName id="BEECC4FCC86AFFF9FCA9FE37BF9FFE02" authority="C. Felder &amp; R. Felder." authorityName="C. Felder &amp; R. Felder." box="[773,1243,413,435]" class="Insecta" family="Lycaenidae" genus="Pseudolycaena" kingdom="Animalia" order="Lepidoptera" pageId="2" pageNumber="57" phylum="Arthropoda" rank="species" species="aegides">
