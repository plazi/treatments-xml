<taxonomicName id="4C3E3DE4CE0CFFD3FAA5C0DFFF5FFE0A" class="Magnoliopsida" family="Rutaceae" kingdom="Plantae" order="Sapindales" pageId="42" pageNumber="43" phylum="Tracheophyta" rank="family">Rutaceae</taxonomicName>
