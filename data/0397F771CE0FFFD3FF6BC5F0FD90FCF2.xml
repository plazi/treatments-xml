<collectingCountry id="F32906F7CE0CFFD3FD03C0DFFCFCFE62" box="[767,876,392,418]" name="Brazil" pageId="42" pageNumber="43">BRAZIL</collectingCountry>
, 
<collectingRegion id="49FA8885CE0CFFD3FC8BC0DFFB86FE62" box="[887,1046,392,418]" country="Brazil" name="Minas Gerais" pageId="42" pageNumber="43">Minas Gerais</collectingRegion>
