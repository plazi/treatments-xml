<taxonomicName id="4C3E3DE4CE0CFFD3FAF5C0DFFADAFE62" box="[1289,1354,392,418]" class="Magnoliopsida" family="Rutaceae" genus="Citrus" kingdom="Plantae" order="Sapindales" pageId="42" pageNumber="34" phylum="Tracheophyta" rank="genus">citrus</taxonomicName>
