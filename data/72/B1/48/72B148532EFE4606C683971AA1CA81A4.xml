<taxonomicName class="Insecta" family="Chrysomelidae" genus="Cephaloleia" higherTaxonomySource="CoL" kingdom="Animalia" lsidName="Cephaloleia depressa" order="Coleoptera" pageId="126" pageNumber="127" phylum="Arthropoda" rank="species" species="depressa">Cephaloleia depressa</taxonomicName>
, 
<taxonomicName class="Insecta" family="Chrysomelidae" genus="Cephaloleia" higherTaxonomySource="CoL" kingdom="Animalia" lsidName="Cephaloleia donckieri" order="Coleoptera" pageId="126" pageNumber="127" phylum="Arthropoda" rank="species" species="donckieri">Cephaloleia donckieri</taxonomicName>
, 
<taxonomicName class="Insecta" family="Chrysomelidae" genus="Cephaloleia" higherTaxonomySource="CoL" kingdom="Animalia" lsidName="Cephaloleia tarsata" order="Coleoptera" pageId="126" pageNumber="127" phylum="Arthropoda" rank="species" species="tarsata">Cephaloleia tarsata</taxonomicName>
, and 
<taxonomicName class="Insecta" family="Chrysomelidae" genus="Cephaloleia" higherTaxonomySource="CoL" kingdom="Animalia" lsidName="Cephaloleia zikani" order="Coleoptera" pageId="126" pageNumber="127" phylum="Arthropoda" rank="species" species="zikani">Cephaloleia zikani</taxonomicName>
