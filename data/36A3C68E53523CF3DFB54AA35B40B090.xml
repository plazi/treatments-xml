<subSubSection id="7980B0262CD5EB29C1A71DD906C17471" pageId="9" pageNumber="10" type="ecology">
<paragraph id="9EADA96C627E345E0767DE8000626A1F" pageId="9" pageNumber="10">Ecology.</paragraph>
<paragraph id="EA71401277ADE3A8D6B8A7B0088D3F9D" pageId="9" pageNumber="10">
HOST RECORDS: 
<taxonomicName id="B11B1B425F2F63FD70D8240BF21CE5E2" class="Insecta" family="Apidae" genus="Epeolus" higherTaxonomySource="CoL" kingdom="Animalia" lsidName="Epeolus ainsliei" order="Hymenoptera" pageId="9" pageNumber="10" phylum="Arthropoda" rank="species" species="ainsliei">Epeolus ainsliei</taxonomicName>
