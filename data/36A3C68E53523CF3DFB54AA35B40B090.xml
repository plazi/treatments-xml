<taxonomicName id="39F59312CE99E0407A9155A47B18B0DE" class="Magnoliopsida" family="Fabaceae" genus="Dalea" higherTaxonomySource="CoL" kingdom="Plantae" lsidName="Dalea purpurea" order="Fabales" pageId="9" pageNumber="10" phylum="Tracheophyta" rank="species" species="purpurea">Dalea purpurea</taxonomicName>
Vent. (
<taxonomicName id="693BCA4FBC8A19C58F1B5EBBCE21BB46" family="Leguminosae" genus="Thalestriina" lsidName="Thalestriina" pageId="9" pageNumber="10" rank="family">Leguminosae</taxonomicName>
