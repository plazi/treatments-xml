<taxonomicName id="56A64D16FFF6FFF7D4C5E13055581B7B" authority="Hood, 1938: 233" authorityName="Hood" authorityPageNumber="233" authorityYear="1938" box="[151,538,1895,1917]" class="Insecta" family="Phlaeothripidae" genus="Holopothrips" higherTaxonomySource="GBIF" kingdom="Animalia" order="Thysanoptera" pageId="42" pageNumber="43" phylum="Arthropoda" rank="species" species="hilaris">
