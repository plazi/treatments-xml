<taxonomicName id="749DAC557FC37F312355B2E49046471A" genus="S." lsidName="S. monilicornis" pageId="0" pageNumber="145" rank="species" species="monilicornis">
<emphasis id="184F314E303A65DCEE4D744007536343" italics="true" pageId="0" pageNumber="145">S. monilicornis</emphasis>
