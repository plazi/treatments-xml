<taxonomicName id="F275857A4865986F5C4C5309178151DE" authorityName="Glöer &amp; Pešić" authorityYear="2012" class="Gastropoda" family="Hydrobiidae" genus="Sarkhia" higherTaxonomySource="GBIF,CoL" kingdom="Animalia" lsidName="" order="Littorinimorpha" pageId="10" pageNumber="21" phylum="Mollusca" rank="genus">
