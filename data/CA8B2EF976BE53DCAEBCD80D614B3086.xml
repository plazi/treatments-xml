<taxonomicName id="8D8DB7DA2251F5D66A87F9A27CAE66F7" class="Gastropoda" family="Hydrobiidae" genus="Pseudamnicola" higherTaxonomySource="GBIF,CoL" kingdom="Animalia" lsidName="" order="Littorinimorpha" pageId="10" pageNumber="21" phylum="Mollusca" rank="genus">
