<collectionCode id="84FD8899FF82FFFBB107F9B0FAD50D41" box="[1378,1394,1577,1603]" country="France" lsid="urn:lsid:biocol.org:col:15763" name="Museum National d' Histoire Naturelle, Paris (MNHN) - Vascular Plants" pageId="1" pageNumber="268" type="Herbarium">P</collectionCode>
