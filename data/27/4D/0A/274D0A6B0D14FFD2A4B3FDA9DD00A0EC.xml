<taxonomicName authorityName="Kuntze" authorityYear="1891" baseAuthorityName="Bentham" baseAuthorityYear="1830" box="[1268,1408,1657,1682]" class="Magnoliopsida" family="Lamiaceae" genus="Pogostemon" kingdom="Plantae" order="Lamiales" pageId="1" pageNumber="39" phylum="Tracheophyta" rank="species" species="cruciatus">
