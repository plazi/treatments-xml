, 
<collectingCountry box="[600,673,1696,1722]" name="China" pageId="1" pageNumber="39">China</collectingCountry>
, 
<collectingCountry box="[685,792,1696,1722]" name="Thailand" pageId="1" pageNumber="39">Thailand</collectingCountry>
