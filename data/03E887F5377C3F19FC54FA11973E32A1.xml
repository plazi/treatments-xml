<taxonomicName id="4C414D60377A3F19FC20F91296E932C1" authorityName="A.D. &amp; Polhemus" authorityYear="2017" box="[949,1183,1693,1717]" class="Insecta" family="Gerridae" genus="Metrocoris" higherTaxonomySource="GBIF" kingdom="Animalia" order="Hemiptera" pageId="28" pageNumber="137" phylum="Arthropoda" rank="species" species="monticola">
<emphasis id="B935EAF1377A3F19FC20F91296E932C1" box="[949,1183,1693,1717]" italics="true" pageId="28" pageNumber="137">Metrocoris monticola</emphasis>
