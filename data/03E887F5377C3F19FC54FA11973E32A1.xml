<collectingCountry id="F3567673377A3F19FC4BF9D196483201" box="[990,1086,1629,1653]" name="Vietnam" pageId="28" pageNumber="137">Vietnam</collectingCountry>
: 
<collectingRegion id="4985F801377A3F19FBDFF9D296D73201" box="[1098,1185,1629,1653]" country="Vietnam" name="Lao Cai" pageId="28" pageNumber="137">Lao Cai</collectingRegion>
