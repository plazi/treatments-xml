<quantity id="933DA1EEFFB7FFED6EF9FB5FFC4DAFDA" box="[905,984,1218,1240]" metricMagnitude="3" metricUnit="m" metricValue="2.256" pageId="19" pageNumber="1532" unit="m" value="2256.0">2256 m</quantity>
