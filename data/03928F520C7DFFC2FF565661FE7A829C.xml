</taxonomicName>
and 
<taxonomicName id="4C3B45C70C7CFFC2FD7653B8FC3383FC" authority="Desr." authorityName="Desr." box="[695,966,1693,1717]" class="Magnoliopsida" family="Magnoliaceae" genus="Magnolia" kingdom="Plantae" order="Magnoliales" pageId="5" pageNumber="41" phylum="Tracheophyta" rank="species" species="liliflora">
