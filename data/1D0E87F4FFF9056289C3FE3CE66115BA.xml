<taxonomicName id="52A74D61FFF9056189C3F80AE4241395" authorityName="Lindner" authorityYear="1928" box="[151,293,1992,2016]" class="Insecta" family="Stratiomyidae" genus="Sargus" higherTaxonomySource="GBIF" kingdom="Animalia" order="Diptera" pageId="45" pageNumber="496" phylum="Arthropoda" rank="species" species="flavoniger">
