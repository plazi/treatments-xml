<taxonomicName id="52A74D61FFF905618D81F866E06C13C9" baseAuthorityName="Williston" baseAuthorityYear="1888" box="[1237,1389,1956,1980]" class="Insecta" family="Stratiomyidae" genus="Sargus" higherTaxonomySource="GBIF" kingdom="Animalia" order="Diptera" pageId="45" pageNumber="496" phylum="Arthropoda" rank="species" species="analis">
