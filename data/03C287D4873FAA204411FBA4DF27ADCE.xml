<paragraph id="8BD436C2873FAA2046A0F900DA24AD29" blockId="36.[189,324,1778,1804]" box="[189,324,1778,1804]" pageId="36" pageNumber="37">
<heading id="D09C81AE873FAA2046A0F900DA24AD29" bold="true" box="[189,324,1778,1804]" fontSize="11" level="3" pageId="36" pageNumber="37" reason="3">
