</taxonomicName>
[handwritten]\ 
<taxonomicName id="4C6B4D41873FAA20445CFA08D8ABAC31" authority="Ckll." authorityName="Cockerell" authorityYear="1919" box="[577,971,1529,1556]" class="Insecta" family="Apidae" genus="Centris" kingdom="Animalia" order="Hymenoptera" pageId="36" pageNumber="37" phylum="Arthropoda" rank="subSpecies" species="bimaculata" subSpecies="carrikeri">
<emphasis id="B91FEAD0873FAA20445CFA08D8ECAC36" box="[577,908,1529,1556]" italics="true" pageId="36" pageNumber="37">Centris bimaculata carrikeri</emphasis>
