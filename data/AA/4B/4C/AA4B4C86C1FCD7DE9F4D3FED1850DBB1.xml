<taxonomicName class="Insecta" family="Stratiomyidae" genus="Paraberismyia" higherTaxonomySource="CoL" kingdom="Animalia" lsidName="Paraberismyia" order="Diptera" pageId="1" pageNumber="26" phylum="Arthropoda" rank="genus">Paraberismyia</taxonomicName>
