<subSubSection pageId="2" pageNumber="583" type="etymology">
<paragraph blockId="2.[151,1436,150,285]" pageId="2" pageNumber="583">
<emphasis bold="true" box="[199,328,223,249]" pageId="2" pageNumber="583">Etymology</emphasis>
