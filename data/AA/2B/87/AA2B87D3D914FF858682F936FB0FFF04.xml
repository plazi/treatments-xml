<taxonomicName authorityName="Bampfyldii Boulenger" authorityYear="1900" box="[967,1081,1358,1381]" class="Reptilia" family="Scincidae" genus="Lygosoma" higherTaxonomySource="GBIF" kingdom="Animalia" order="Squamata" pageId="9" pageNumber="537" phylum="Chordata" rank="genus">
