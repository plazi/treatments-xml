. 
<taxonomicName authorityName="Werner" authorityYear="1900" box="[328,566,1356,1381]" class="Reptilia" family="Scincidae" genus="Lygosoma" higherTaxonomySource="GBIF" kingdom="Animalia" order="Squamata" pageId="9" pageNumber="537" phylum="Chordata" rank="species" species="schneideri">
