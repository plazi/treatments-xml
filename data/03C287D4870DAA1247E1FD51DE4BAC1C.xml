<collectionCode id="ED7AAE07870DAA124315FC8DDE17A9BC" box="[1288,1399,895,921]" country="United Kingdom" httpUri="http://biocol.org/urn:lsid:biocol.org:col:34665" lsid="urn:lsid:biocol.org:col:34665" name="Natural History Museum, London" pageId="22" pageNumber="23" type="Museum">NHMUK</collectionCode>
