<taxonomicName authorityName="Samaai and Kelly" authorityYear="2002" box="[396,486,1684,1711]" class="Demospongiae" family="Latrunculiidae" genus="Tsitsikamma" kingdom="Animalia" order="Poecilosclerida" pageId="8" pageNumber="417" phylum="Porifera" rank="species" species="favus">
<emphasis box="[396,412,1685,1710]" italics="true" pageId="8" pageNumber="417">T</emphasis>
. 
<emphasis box="[427,486,1684,1710]" italics="true" pageId="8" pageNumber="417">favus</emphasis>
</taxonomicName>
, 
<emphasis box="[501,610,1685,1710]" italics="true" pageId="8" pageNumber="417">
<taxonomicName authorityName="Samaai &amp; Kelly" authorityYear="2003" box="[501,606,1685,1710]" class="Demospongiae" family="Latrunculiidae" genus="Tsitsikamma" kingdom="Animalia" order="Poecilosclerida" pageId="8" pageNumber="417" phylum="Porifera" rank="species" species="scurra">T. scurra</taxonomicName>
,
</emphasis>
<taxonomicName authority="Parker-Nance, 2019" authorityName="Parker-Nance" authorityYear="2019" box="[619,945,1684,1710]" class="Demospongiae" family="Latrunculiidae" genus="Tsitsikamma" kingdom="Animalia" order="Poecilosclerida" pageId="8" pageNumber="417" phylum="Porifera" rank="species" species="nguni">
