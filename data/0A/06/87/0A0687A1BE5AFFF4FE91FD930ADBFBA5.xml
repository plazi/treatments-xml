<taxonomicName baseAuthorityName="Bernhauer" baseAuthorityYear="1934" box="[113,293,1021,1044]" class="Insecta" family="Staphylinidae" genus="Mentophilonthus" higherTaxonomySource="GBIF" kingdom="Animalia" order="Coleoptera" pageId="29" pageNumber="148" phylum="Arthropoda" rank="species" species="lampropterus">
