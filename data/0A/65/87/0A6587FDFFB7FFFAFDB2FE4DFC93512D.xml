<collectingRegion box="[297,417,1676,1702]" country="Mexico" name="Queretaro de Arteaga" pageId="9" pageNumber="94">Querétaro</collectingRegion>
, 
<collectingRegion box="[431,569,1676,1702]" country="Mexico" name="Guanajuato" pageId="9" pageNumber="94">Guanajuato</collectingRegion>
, 
<collectingRegion box="[583,716,1676,1702]" country="Mexico" name="Michoacan de Ocampo" pageId="9" pageNumber="94">Michoacán</collectingRegion>
