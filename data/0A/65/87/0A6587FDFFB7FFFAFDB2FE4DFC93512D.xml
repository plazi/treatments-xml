<collectingRegion box="[730,839,1677,1703]" country="Mexico" name="Guerrero" pageId="9" pageNumber="94">Guerrero</collectingRegion>
, Estado de 
<collectingCountry box="[979,1072,1676,1702]" name="Mexico" pageId="9" pageNumber="94">México</collectingCountry>
