<collectingRegion box="[641,724,1605,1631]" country="Mexico" name="Sonora" pageId="9" pageNumber="94">Sonora</collectingRegion>
and 
<collectingRegion box="[784,911,1605,1631]" country="Mexico" name="Chihuahua" pageId="9" pageNumber="94">Chihuahua</collectingRegion>
southward through the states of 
<collectingRegion box="[1303,1394,1605,1631]" country="Mexico" name="Sinaloa" pageId="9" pageNumber="94">Sinaloa</collectingRegion>
, 
<collectingRegion box="[191,297,1641,1667]" country="Mexico" name="Durango" pageId="9" pageNumber="94">Durango</collectingRegion>
, 
<collectingRegion box="[307,426,1641,1667]" country="Mexico" name="Zacatecas" pageId="9" pageNumber="94">Zacatecas</collectingRegion>
, 
<collectingRegion box="[437,528,1641,1667]" country="Mexico" name="Nayarit" pageId="9" pageNumber="94">Nayarit</collectingRegion>
, 
<collectingRegion box="[539,623,1641,1667]" country="Mexico" name="Jalisco" pageId="9" pageNumber="94">Jalisco</collectingRegion>
