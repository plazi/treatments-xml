<taxonomicName id="4C1FA0C6FFF2E35EE5CCF9A2FE79F996" authorityName="Kuhne" authorityYear="2007" box="[242,402,1579,1602]" class="Insecta" family="Arctiidae" genus="Exilisia" kingdom="Animalia" order="Lepidoptera" pageId="0" pageNumber="596" phylum="Arthropoda" rank="species" species="prominentia">
