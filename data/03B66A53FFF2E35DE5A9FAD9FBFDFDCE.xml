<taxonomicName id="4C1FA0C6FFF2E35EE116F98EFB4DF9CA" baseAuthorityName="Hampson" baseAuthorityYear="1900" box="[1064,1190,1542,1566]" class="Insecta" family="Arctiidae" genus="Exilisia" kingdom="Animalia" order="Lepidoptera" pageId="0" pageNumber="596" phylum="Arthropoda" rank="species" species="bipuncta">
