<taxonomicName id="4C1FA0C6FFF2E35EE713F9C6FD91F9B2" authorityName="Volynkin" authorityYear="2020" box="[557,634,1615,1638]" class="Insecta" family="Arctiidae" genus="Exilisia" kingdom="Animalia" order="Lepidoptera" pageId="0" pageNumber="596" phylum="Arthropoda" rank="species" species="ngai">
