<caption ID-DOI="http://doi.org/10.5281/zenodo.5702173" ID-Zenodo-Dep="5702173" httpUri="https://zenodo.org/record/5702173/files/figure.png" pageId="3" pageNumber="102" startId="3.[151,264,1943,1967]" targetBox="[205,1390,191,1905]" targetPageId="3">
<paragraph blockId="3.[151,1436,1943,2004]" pageId="3" pageNumber="102">
<emphasis bold="true" box="[151,316,1943,1967]" pageId="3" pageNumber="102">FIGURES 5–8.</emphasis>
<taxonomicName authority="Oliveira, Linzmeier &amp; Konstantinov" authorityName="Oliveira, Linzmeier &amp; Konstantinov" authorityYear="2021" box="[323,928,1944,1968]" class="Insecta" family="Chrysomelidae" genus="Brasilplatus" kingdom="Animalia" order="Coleoptera" pageId="3" pageNumber="102" phylum="Arthropoda" rank="species" species="bahianus" status="new species">
<emphasis box="[323,547,1944,1968]" italics="true" pageId="3" pageNumber="102">Brasilplatus bahianus</emphasis>
Oliveira, Linzmeier &amp; Konstantinov
</taxonomicName>
, 
<taxonomicNameLabel box="[939,1065,1944,1968]" pageId="3" pageNumber="102" rank="species">new species</taxonomicNameLabel>
