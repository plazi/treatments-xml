<paragraph blockId="11.[151,517,886,912]" box="[151,517,886,912]" pageId="11" pageNumber="12">
<heading bold="true" box="[151,517,886,912]" fontSize="11" level="1" pageId="11" pageNumber="12" reason="1">
<taxonomicName authority="Wilson, 1913" authorityName="Wilson" authorityYear="1913" box="[151,517,886,912]" class="Maxillopoda" family="Caligidae" genus="Caligus" kingdom="Animalia" order="Siphonostomatoida" pageId="11" pageNumber="12" phylum="Arthropoda" rank="species" species="enormis">
<emphasis bold="true" box="[151,517,886,912]" pageId="11" pageNumber="12">
<emphasis bold="true" box="[151,349,886,912]" italics="true" pageId="11" pageNumber="12">Caligus enormis</emphasis>
<bibRefCitation author="Wilson" box="[356,517,886,912]" pageId="11" pageNumber="26" refString="Wilson, C. B. (1913) Crustacean parasites of West Indian fishes and land crabs, with descriptions of new genera and species. Proceedings of the United States National Museum, 44, 189 - 277, pls 18 - 53." type="journal article" year="1913">
