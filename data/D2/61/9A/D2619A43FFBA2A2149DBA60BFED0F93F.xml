<subSubSection pageId="67" pageNumber="68" type="biology_ecology">
<paragraph blockId="67.[151,1437,726,1761]" box="[199,861,870,897]" pageId="67" pageNumber="68">
<emphasis bold="true" box="[199,262,870,896]" pageId="67" pageNumber="68">Host.</emphasis>
<taxonomicName box="[269,395,870,896]" class="Magnoliopsida" family="Lamiaceae" kingdom="Plantae" order="Lamiales" pageId="67" pageNumber="68" phylum="Tracheophyta" rank="family">Lamiaceae</taxonomicName>
