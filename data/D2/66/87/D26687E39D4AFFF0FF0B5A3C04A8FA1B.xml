<collectionCode box="[991,1102,1520,1546]" pageId="4" pageNumber="63">TAMAR</collectionCode>
, 
<quantity box="[1106,1206,1520,1546]" metricMagnitude="4" metricUnit="m" metricValue="1.609344" pageId="4" pageNumber="63" unit="mi" value="10.0">10 miles</quantity>
