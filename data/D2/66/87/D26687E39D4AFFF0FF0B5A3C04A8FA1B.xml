<collectingCountry box="[151,213,1560,1586]" name="Malta" pageId="4" pageNumber="63">Mata</collectingCountry>
de São João, Bahia, 
<collectingCountry box="[472,550,1560,1586]" name="Brazil" pageId="4" pageNumber="63">Brazil</collectingCountry>
, in 
<quantity box="[595,672,1560,1586]" metricMagnitude="2" metricUnit="m" metricValue="4.3" pageId="4" pageNumber="63" unit="m" value="430.0">430 m</quantity>
deep (
<geoCoordinate box="[756,896,1557,1586]" direction="south" orientation="latitude" pageId="4" pageNumber="63" precision="15" value="-12.675278">
<number box="[756,787,1560,1586]" pageId="4" pageNumber="63" value="12.0">12</number>
o 
<number box="[796,829,1560,1586]" pageId="4" pageNumber="63" value="39.0">39</number>
´
<number box="[837,868,1560,1586]" pageId="4" pageNumber="63" value="91.0">91</number>
”S
</geoCoordinate>
and 
<geoCoordinate box="[958,1122,1560,1586]" direction="west" orientation="longitude" pageId="4" pageNumber="63" precision="15" value="-37.908337">
<number box="[958,988,1560,1586]" pageId="4" pageNumber="63" value="37.0">37</number>
