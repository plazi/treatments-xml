, SZ, 
<location LSID="urn:lsid:plazi:treatment:D27187E87524A0631EAFF9D8FCDA6B7F:5F0760257524A07D1D06F942FBC768FB" box="[830,1039,1762,1787]" country="Denmark" name="Bimose Overdrev" pageId="14" pageNumber="77">Bimose Overdrev</location>
, 
<date box="[1059,1260,1762,1787]" pageId="14" pageNumber="77" value="2013-06-30" valueMax="2013-07-02" valueMin="2013-06-30">
<collectingDate box="[1059,1260,1762,1787]" pageId="14" pageNumber="77" value="2013-06-30" valueMax="2013-07-02" valueMin="2013-06-30">30.vi–02.vii.2013</collectingDate>
