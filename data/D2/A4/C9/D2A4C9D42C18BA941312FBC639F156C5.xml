<taxonomicName class="Insecta" genus="P." higherTaxonomySource="GBIF,CoL" kingdom="Animalia" lsidName="P. ciscaucasicus" order="Lepidoptera" pageId="16" pageNumber="785" phylum="Arthropoda" rank="species" species="ciscaucasicus">
