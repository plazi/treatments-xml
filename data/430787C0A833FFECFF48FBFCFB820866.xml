<materialsCitation id="7BC63C8BA833FFECFDF7F979FB810866" collectionCode="USNM, AMNH" collectorName="Tower I. &amp; Barrington. Only &amp; Rothschild Collection. It" location="Santa Fe" pageId="43" pageNumber="43" specimenCode="AMNH 522650" specimenCount="1" stateProvince="Santa Fe" typeStatus="paratype">
