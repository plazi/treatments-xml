<collectionCode id="ADBFAE13A833FFECFCB6FEF9FC3C085B" box="[803,897,300,321]" country="USA" httpUri="http://biocol.org/urn:lsid:biocol.org:col:34925" lsid="urn:lsid:biocol.org:col:34925" name="American Museum of Natural History" pageId="43" pageNumber="43">AMNH</collectionCode>
