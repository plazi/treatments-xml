<collectionCode id="ADBFAE13A833FFECFF06F91CFF570FC4" box="[147,234,1737,1758]" country="USA" httpUri="http://biocol.org/urn:lsid:biocol.org:col:34871" lsid="urn:lsid:biocol.org:col:34871" name="Smithsonian Institution, National Museum of Natural History" pageId="43" pageNumber="43" type="Museum">USNM</collectionCode>
