, 
<taxonomicName id="4C274D19FF86B14BFD03F870FCBD1880" authorityName="Schmidt &amp; Shattuck" authorityYear="2014" box="[691,809,1947,1972]" class="Hexapoda" family="Formicidae" genus="Iroponera" higherTaxonomySource="GBIF" kingdom="Animalia" order="Hymenoptera" pageId="46" pageNumber="47" phylum="Arthropoda" rank="genus">
