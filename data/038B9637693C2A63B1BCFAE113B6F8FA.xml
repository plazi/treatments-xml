<heading id="D0D5904D693C2A63B1BCFAE1120CFAA3" bold="true" box="[189,773,1316,1345]" fontSize="12" level="3" pageId="19" pageNumber="20" reason="0">
<emphasis id="B956FB33693C2A63B1BCFAE1120CFAA3" bold="true" box="[189,773,1316,1345]" italics="true" pageId="19" pageNumber="20">
Notes on genus 
<taxonomicName id="4C225CA2693C2A63B091FAE0136DFAA2" authorityName="Desv. (Desvaux" authorityYear="1827" box="[400,612,1316,1345]" class="Polypodiopsida" family="Hymenophyllaceae" genus="Didymoglossum" kingdom="Plantae" order="Hymenophyllales" pageId="19" pageNumber="20" phylum="Tracheophyta" rank="genus">Didymoglossum</taxonomicName>
