<taxonomicName id="27CA4D35FF37FF515A6DFD02FC9D63D1" authorityName="Rondani" authorityYear="1857" box="[627,814,655,680]" class="Insecta" family="Syrphidae" genus="Eumerus" kingdom="Animalia" order="Diptera" pageId="250" pageNumber="251" phylum="Arthropoda" rank="species" species="truquii">
