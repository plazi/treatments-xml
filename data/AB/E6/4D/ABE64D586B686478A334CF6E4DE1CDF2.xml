<taxonomicName LSID-HNS="urn:lsid:biosci.ohio-state.edu:osuc_concepts:33868" class="Insecta" family="Formicidae" genus="Pheidole" higherTaxonomySource="CoL" kingdom="Animalia" lsidName="Pheidole micula Wheeler" lsidName-HNS="Pheidole micula Wheeler" order="Hymenoptera" pageNumber="579" phylum="Arthropoda" rank="species" species="micula">micula</taxonomicName>
