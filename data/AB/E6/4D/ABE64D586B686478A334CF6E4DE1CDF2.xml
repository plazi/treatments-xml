<taxonomicName LSID-HNS="urn:lsid:biosci.ohio-state.edu:osuc_concepts:142583" class="Insecta" family="Formicidae" genus="Pheidole" higherTaxonomySource="CoL" kingdom="Animalia" lsidName="Pheidole soritis Wheeler" lsidName-HNS="Pheidole soritis Wheeler" order="Hymenoptera" pageNumber="579" phylum="Arthropoda" rank="species" species="soritis">soritis</taxonomicName>
