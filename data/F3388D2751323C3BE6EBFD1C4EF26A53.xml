<quantity id="BC6991D451323C3BE4CDFCD0497F6C02" box="[689,789,835,859]" metricMagnitude="-4" metricUnit="m" metricValue="3.3" pageId="30" pageNumber="181" unit="mm" value="0.33">0.33 mm</quantity>
