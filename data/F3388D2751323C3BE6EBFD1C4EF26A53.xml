<quantity id="BC6991D451323C3BE46FFCF448136C26" box="[531,633,871,895]" metricMagnitude="-4" metricUnit="m" metricValue="4.8" pageId="30" pageNumber="181" unit="mm" value="0.48">0.48 mm</quantity>
