<taxonomicName id="968B08DA2C108E674B78F9D2FCDEF9BA" authority="purpureovittata Horn" authorityName="Horn" box="[319,879,1568,1589]" class="Insecta" family="Buprestidae" genus="Chrysobothris" kingdom="Animalia" order="Coleoptera" pageId="10" pageNumber="309" phylum="Arthropoda" rank="subSpecies" species="purpureovittata" status="new status" subSpecies="purpureovittata">
