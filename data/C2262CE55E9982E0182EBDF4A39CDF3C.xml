<taxonomicName id="A18EE02967562CD1D00F7EDABADC32A0" authority="Jeannel, 1962" authorityName="Jeannel" authorityYear="1962" class="Insecta" family="Carabidae" genus="Notholopha" higherTaxonomySource="GBIF" kingdom="Animalia" lsidName="Notholopha" order="Coleoptera" pageId="18" pageNumber="131" phylum="Arthropoda" rank="genus">Notholopha</taxonomicName>
