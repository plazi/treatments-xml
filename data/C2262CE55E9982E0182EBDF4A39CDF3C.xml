<taxonomicName id="74128B1CAA6A19A6373B504D8994363C" class="Insecta" family="Carabidae" genus="Bembidium" higherTaxonomySource="CoL" kingdom="Animalia" lsidName="Bembidium punctigerum" order="Coleoptera" pageId="18" pageNumber="131" phylum="Arthropoda" rank="species" species="punctigerum">Bembidium punctigerum</taxonomicName>
