<taxonomicName id="EBBAC75F6C349C9135F53BC73378B6F2" authority="Konow, 1899" authorityName="Koch" authorityYear="2006" class="Insecta" family="Argidae" genus="Pampsilota" higherTaxonomySource="GBIF" kingdom="Animalia" lsidName="Pampsilota brandbergensis" order="Hymenoptera" pageId="7" pageNumber="8" phylum="Arthropoda" rank="species" species="brandbergensis">Pampsilota brandbergensis</taxonomicName>
