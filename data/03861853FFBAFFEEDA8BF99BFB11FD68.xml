1822a 
<taxonomicName id="4C2FD2C6FFBAFFEEDABCF80FFE72FEEB" authority="BRONGNIART" authorityName="BRONGNIART" box="[204,423,353,374]" class="Lycopodiopsida" family="Lycopodiaceae" genus="Sagenaria" higherTaxonomySource="GBIF" kingdom="Plantae" order="Lycopodiales" pageId="6" pageNumber="15" phylum="Tracheophyta" rank="genus">
