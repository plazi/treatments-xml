<taxonomicName id="38D6EE87BD5AFFFB13665538B43E82D3" authority="Lehmann (1818: 139)" authorityName="Lehmann" authorityPageNumber="139" authorityYear="1818" box="[619,1059,1894,1920]" class="Magnoliopsida" family="Boraginaceae" genus="Heliotropium" kingdom="Plantae" order="Boraginales" pageId="1" pageNumber="36" phylum="Tracheophyta" rank="species" species="argenteum">
