<typeStatus id="0C574887FFE4D9241E75AF39FE615358" box="[368,470,290,313]" pageId="2" pageNumber="60">Holotype</typeStatus>
, male, 
<collectingCountry id="ABFBB6B5FFE4D9241D24AF39FDCD5358" box="[545,634,290,313]" name="China" pageId="2" pageNumber="60">CHINA</collectingCountry>
: Baishishan, Fuping County, Hebei Province, 
<date id="A752D0E5FFE4D9241B65AF39FB665358" box="[1120,1233,290,313]" pageId="2" pageNumber="60" value="1922-08">
<number id="6524E402FFE4D9241B65AF39FBCC5358" box="[1120,1147,290,313]" pageId="2" pageNumber="60" value="22.0">22</number>
