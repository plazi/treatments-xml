<emphasis id="3CC1E373CFDEA006B39EA9A46517DA53" italics="true" pageId="2" pageNumber="21">Rotala malabarica</emphasis>
</taxonomicName>
, 
<taxonomicName id="C1CCA3357A8C059846BB132FCE882770" class="Dicotyledoneae" family="Lythraceae" genus="Rotala" higherTaxonomySource="GBIF" kingdom="Plantae" lsidName="" order="Myrtiflorae" pageId="2" pageNumber="21" phylum="Angiospermae" rank="species" species="malampuzhensis">
<emphasis id="CC2291B5137AA588353F8AFF34B9616E" italics="true" pageId="2" pageNumber="21">Rotala malampuzhensis</emphasis>
</taxonomicName>
, 
<taxonomicName id="EC058C710C19705BDE227CCDD598BC1D" class="Magnoliopsida" family="Scrophulariaceae" genus="Rhamphicarpa" higherTaxonomySource="GBIF" kingdom="Plantae" lsidName="" order="Lamiales" pageId="2" pageNumber="21" phylum="Magnoliophyta" rank="species" species="longiflora">
<emphasis id="D64264D9FB1E6EAE7E3E7C98A36C3DC3" italics="true" pageId="2" pageNumber="21">Rhamphicarpa longiflora</emphasis>
</taxonomicName>
, 
<taxonomicName id="48E18101438E199CD3DD32C2829BC5A8" class="Monocotyledoneae" family="Poaceae" genus="Oryza" higherTaxonomySource="GBIF" kingdom="Plantae" lsidName="" order="Graminales" pageId="2" pageNumber="21" phylum="Angiospermae" rank="species" species="rufipogon">
