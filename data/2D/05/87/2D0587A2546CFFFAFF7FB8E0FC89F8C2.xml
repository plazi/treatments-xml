<subSubSection pageId="41" pageNumber="40" type="type_taxon">
<paragraph blockId="41.[192,1440,258,410]" pageId="41" pageNumber="40">
<emphasis bold="true" box="[192,359,258,282]" pageId="41" pageNumber="40">
<typeStatus box="[192,258,258,282]" pageId="41" pageNumber="40">Type</typeStatus>
