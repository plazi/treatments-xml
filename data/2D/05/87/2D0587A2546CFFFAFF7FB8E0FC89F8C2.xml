<taxonomicName authorityName="Banks. However" authorityYear="1910" box="[845,991,290,314]" class="Insecta" family="Myrmeleontidae" genus="Callistoleon" higherTaxonomySource="GBIF" kingdom="Animalia" order="Neuroptera" pageId="41" pageNumber="40" phylum="Arthropoda" rank="genus">
