<taxonomicName genus="G." lsidName="G. cicatricum" pageId="0" pageNumber="7" rank="species" species="cicatricum">G. cicatricum</taxonomicName>
and 
<taxonomicName genus="G." lsidName="G. desmazieri" pageId="0" pageNumber="7" rank="species" species="desmazieri">G. desmazieri</taxonomicName>
