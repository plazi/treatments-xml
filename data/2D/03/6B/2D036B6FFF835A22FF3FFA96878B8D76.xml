<subSubSection box="[199,809,1521,1546]" pageId="8" pageNumber="569" type="etymology">
<paragraph blockId="8.[151,1437,1521,1906]" box="[199,809,1521,1546]" pageId="8" pageNumber="569">
<emphasis bold="true" box="[199,334,1521,1546]" pageId="8" pageNumber="569">Etymology.</emphasis>
