<paragraph pageId="null" pageNumber="103">
Feuerroter 
<taxonomicName class="Magnoliopsida" family="Ranunculaceae" genus="Adonis" kingdom="Plantae" order="Ranunculales" pageId="null" pageNumber="103" phylum="Tracheophyta" rank="genus">Adonis</taxonomicName>
