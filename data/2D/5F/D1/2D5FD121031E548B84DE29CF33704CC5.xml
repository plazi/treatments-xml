<taxonomicName authority="L. subsp. asiatica" class="Dicotyledoneae" family="Rosaceae" genus="Agrimonia" higherTaxonomySource="GBIF" infraspecific-rank="subsp." kingdom="Plantae" lsidName="Agrimonia eupatoria" order="Rosales" pageId="0" pageNumber="23" phylum="Angiospermae" rank="species" species="eupatoria" subspecies="asiatica">Agrimonia eupatoria L. subsp. asiatica</taxonomicName>
, 
<taxonomicName authority="Lam. subsp. lyrata" class="Dicotyledoneae" family="Campanulaceae" genus="Campanula" higherTaxonomySource="GBIF" infraspecific-rank="subsp." kingdom="Plantae" lsidName="Campanula lyrata" order="Campanulales" pageId="0" pageNumber="23" phylum="Angiospermae" rank="species" species="lyrata" subspecies="lyrata">Campanula lyrata Lam. subsp. lyrata</taxonomicName>
, 
<taxonomicName class="Dicotyledoneae" family="Asteraceae" genus="Centaurea" higherTaxonomySource="GBIF" kingdom="Plantae" lsidName="Centaurea virgata" order="Campanulales" pageId="0" pageNumber="23" phylum="Angiospermae" rank="species" species="virgata">
<emphasis italics="true" pageId="0" pageNumber="23">Centaurea virgata</emphasis>
</taxonomicName>
Lam., 
<taxonomicName class="Eudicots" family="Cistaceae" genus="Cistus" higherTaxonomySource="GBIF" kingdom="Plantae" lsidName="Cistus laurifolius" order="Malvales" pageId="0" pageNumber="23" phylum="Magnoliophyta" rank="species" species="laurifolius">
<emphasis italics="true" pageId="0" pageNumber="23">Cistus laurifolius</emphasis>
</taxonomicName>
L., 
<taxonomicName authority="(L.) J. Gay ex Guss. var. tinctoria" basionym-authority="(L.)" class="Eudicots" family="Asteraceae" genus="Cota" higherTaxonomySource="GBIF" infraspecific-rank="var." kingdom="Plantae" lsidName="Cota tinctoria var. tinctoria" order="Asterales" pageId="0" pageNumber="23" phylum="Magnoliophyta" rank="variety" species="tinctoria" variety="tinctoria">Cota tinctoria (L.) J.Gay ex Guss. var. tinctoria</taxonomicName>
, 
<taxonomicName authority="L. subsp. ferruginea" class="Dicotyledoneae" family="Scrophulariaceae" genus="Digitalis" higherTaxonomySource="GBIF" infraspecific-rank="subsp." kingdom="Plantae" lsidName="Digitalis ferruginea" order="Tubiflorae" pageId="0" pageNumber="23" phylum="Angiospermae" rank="species" species="ferruginea" subspecies="ferruginea">Digitalis ferruginea L. subsp. ferruginea</taxonomicName>
, 
<taxonomicName authority="Sm. var. crinitus" class="Dicotyledoneae" family="Caryophyllaceae" genus="Dianthus" higherTaxonomySource="GBIF" infraspecific-rank="var." kingdom="Plantae" lsidName="Dianthus crinitus var. crinitus" order="Centrospermae" pageId="0" pageNumber="23" phylum="Angiospermae" rank="variety" species="crinitus" variety="crinitus">Dianthus crinitus Sm. var. crinitus</taxonomicName>
, 
<taxonomicName authority="Willd. subsp. varium" class="Dicotyledoneae" family="Fabaceae" genus="Hedysarum" higherTaxonomySource="GBIF" infraspecific-rank="subsp." kingdom="Plantae" lsidName="Hedysarum varium" order="Rosales" pageId="0" pageNumber="23" phylum="Angiospermae" rank="species" species="varium" subspecies="varium">Hedysarum varium Willd. subsp. varium</taxonomicName>
, 
<taxonomicName class="Dicotyledoneae" family="Lamiaceae" genus="Phlomis" higherTaxonomySource="GBIF" kingdom="Plantae" lsidName="Phlomis armeniaca" order="Tubiflorae" pageId="0" pageNumber="23" phylum="Angiospermae" rank="species" species="armeniaca">
