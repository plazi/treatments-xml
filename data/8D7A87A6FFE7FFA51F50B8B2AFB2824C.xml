Total length: 
<quantity id="C22B9B55FFE7FFAA1C22BB1FA8078744" box="[634,783,1836,1862]" metricMagnitude="-3" metricUnit="m" metricValue="2.55" metricValueMax="2.8" metricValueMin="2.3" pageId="7" pageNumber="8" unit="mm" value="2.55" valueMax="2.8" valueMin="2.3">2.3–2.8 mm</quantity>
