<paragraph pageId="68" pageNumber="69">
<taxonomicName class="Magnoliopsida" family="Euphorbiaceae" genus="Croton" higherTaxonomySource="CoL" kingdom="Plantae" lsidName="Croton haumanianus" order="Malpighiales" pageId="68" pageNumber="69" phylum="Tracheophyta" rank="species" species="haumanianus">
