<taxonomicName family="Pholcidae" genus="Pholcinae" higherTaxonomySource="treatment-meta" kingdom="Animalia" lsidName="Pholcinae group subsp. 2" order="Araneae" pageId="17" pageNumber="68" rank="subFamily" species="group" subFamily="Pholcinae 'group 2'" subSpecies="2">
