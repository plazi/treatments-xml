</taxonomicName>
Eggers, 1940 = 
<taxonomicName class="Lecanoromycetes" family="Stereocaulaceae" genus="Xyleborus" higherTaxonomySource="CoL" kingdom="Fungi" lsidName="Xyleborus myristicae" order="Lecanorales" pageId="0" pageNumber="1" phylum="Ascomycota" rank="species" species="myristicae">
