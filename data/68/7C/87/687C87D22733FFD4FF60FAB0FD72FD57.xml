<subSubSection pageId="5" pageNumber="148" type="diagnosis">
<paragraph blockId="5.[151,1437,1484,2015]" pageId="5" pageNumber="148">
<emphasis bold="true" box="[151,274,1484,1511]" pageId="5" pageNumber="148">Diagnosis.</emphasis>
