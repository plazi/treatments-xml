<taxonomicName authority="Phil." authorityName="Phil." class="Insecta" family="Bombyliidae" genus="Bombylius" kingdom="Animalia" order="Diptera" pageId="66" pageNumber="67" phylum="Arthropoda" rank="species" species="valdivianus">
