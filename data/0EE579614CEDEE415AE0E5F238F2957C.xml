<td id="1871EB98F923E7E41AB5B03E994112D5" colspan="1" pageId="14" pageNumber="145" rowspan="1">Strofylia population</td>
<td id="E528FE6313DB78195DD44792FE017833" colspan="1" pageId="14" pageNumber="145" rowspan="1">Holotype NMHC 80.2.15.10</td>
