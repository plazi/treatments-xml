<taxonomicName id="5747E659C2371A0CB3E45D7B2BC80FD1" authorityName="A. G. Schulz" authorityYear="1942" class="Liliopsida" family="Pontederiaceae" genus="Eichhornia" higherTaxonomySource="CoL" kingdom="Plantae" lsidName="Eichhornia meyeri" order="Commelinales" pageId="0" pageNumber="25" phylum="Tracheophyta" rank="species" species="meyeri">Eichhornia meyeri</taxonomicName>
