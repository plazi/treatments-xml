<taxonomicName id="B6CCC7AB1AD406A8D178EABC8BE1CFCC" class="Rosopsida" family="Rubiaceae" genus="Coprosma" higherTaxonomySource="GBIF" kingdom="Plantae" lsidName="" order="Gentianales" pageId="17" pageNumber="50" phylum="Magnoliophyta" rank="genus">
