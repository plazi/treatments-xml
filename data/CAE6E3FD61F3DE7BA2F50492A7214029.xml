<taxonomicName id="3AA301ADF64E2E16573E2B63D40194F6" class="Magnoliopsida" family="Aquifoliaceae" genus="Ilex" higherTaxonomySource="CoL" kingdom="Plantae" lsidName="" order="Aquifoliales" pageId="17" pageNumber="50" phylum="Tracheophyta" rank="genus">
