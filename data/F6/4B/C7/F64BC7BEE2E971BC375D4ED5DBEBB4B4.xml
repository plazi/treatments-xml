<normalizedToken originalValue="keulenförmig" pageId="null" pageNumber="638">keulenfoermig</normalizedToken>
bis 
<normalizedToken originalValue="fadenförmig" pageId="null" pageNumber="638">fadenfoermig</normalizedToken>
