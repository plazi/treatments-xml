<taxonomicName id="CF60D1143633F379886FB42878F0FA6A" LSID="urn:lsid:zoobank.org:act:A00DBDC3-F8BE-4A89-A421-04903BC81B1D" authority="Reemer" authorityName="Reemer" authorityYear="2013" class="Insecta" family="Syrphidae" genus="Metadon" higherTaxonomySource="GBIF" kingdom="Animalia" lsidName="Metadon" order="Diptera" pageId="37" pageNumber="38" phylum="Arthropoda" rank="genus">Metadon Reemer</taxonomicName>
