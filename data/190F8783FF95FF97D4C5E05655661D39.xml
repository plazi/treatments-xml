<treatmentCitationGroup id="B1B611BBFF95FF94D4C5E03B55001A83" box="[151,578,1644,1669]" pageId="73" pageNumber="74">
<taxonomicName id="56A64D16FF95FF94D4C5E03B557F1A83" authority="Hood, 1942: 584" authorityName="Hood" authorityPageNumber="584" authorityYear="1942" box="[151,573,1644,1669]" class="Insecta" family="Phlaeothripidae" genus="Holopothrips" higherTaxonomySource="GBIF" kingdom="Animalia" order="Thysanoptera" pageId="73" pageNumber="74" phylum="Arthropoda" rank="species" species="pictus">
<emphasis id="A3D2EA87FF95FF94D4C5E03B56341A82" box="[151,374,1644,1669]" italics="true" pageId="73" pageNumber="74">Holopothrips pictus</emphasis>
<treatmentCitation id="10071084FF95FF94D52FE03B557F1A83" author="" box="[381,573,1644,1669]" page="584" pageId="73" pageNumber="74">
<bibRefCitation id="F5374B64FF95FF94D52FE03B55471A82" box="[381,517,1644,1669]" pageId="73" pageNumber="74" refId="ref58761" refString="Hood, J. D. (1942) A century of new American Thysanoptera III. Revista de Entomologia, 13, 547 - 678." type="journal article">Hood, 1942</bibRefCitation>
