<taxonomicName id="19944D0F2D30F4036375DD1C76BFFC40" genus="H." lsidName="H. astrapias" pageId="0" pageNumber="1" rank="species" species="astrapias">
<emphasis id="1C16FC6FF9A82E934F72A82A290CCDBB" italics="true" pageId="0" pageNumber="1">H. astrapias</emphasis>
