<taxonomicName id="4C3BFDC2F169FFFA2C13FB28FCA6D5B8" authority="Wanless, 1984" authorityName="Wanless" authorityYear="1984" box="[574,827,1252,1279]" class="Arachnida" family="Salticidae" genus="Meleon" higherTaxonomySource="GBIF,CoL" kingdom="Animalia" order="Araneae" pageId="7" pageNumber="170" phylum="Arthropoda" rank="genus">
<emphasis id="B94F5A53F169FFFA2C13FB28FD0FD5B8" box="[574,658,1252,1279]" italics="true" pageId="7" pageNumber="170">Meleon</emphasis>
Wanless, 
<number id="3DF39466F169FFFA2D2EFB29FCA6D5B8" box="[771,827,1253,1279]" pageId="7" pageNumber="170" value="1984.0">1984</number>
</taxonomicName>
