<subSubSection id="77D86509FFD3FFE1E7FFFA16FB941DEC" box="[198,1129,1462,1488]" pageId="11" pageNumber="42" type="etymology">
<paragraph id="3F7D3682FFD3FFE1E7FFFA16FB941DEC" blockId="11.[151,1437,1346,2030]" box="[198,1129,1462,1488]" pageId="11" pageNumber="42">
