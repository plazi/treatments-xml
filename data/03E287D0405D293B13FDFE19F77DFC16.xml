<collectingCountry id="F35C7656405D293B1018FCB7F19DFCE6" box="[882,953,793,819]" name="Brazil" pageId="17" pageNumber="470">Brazil</collectingCountry>
, 
<collectingCountry id="F35C7656405D293B10A9FCB7F61BFCE6" box="[963,1087,793,819]" name="Costa Rica" pageId="17" pageNumber="470">Costa Rica</collectingCountry>
, 
<collectingCountry id="F35C7656405D293B1723FCB7F68CFCE6" box="[1097,1192,793,819]" name="Ecuador" pageId="17" pageNumber="470">Ecuador</collectingCountry>
, 
<collectingCountry id="F35C7656405D293B17D9FCB7F77EFCE6" box="[1203,1370,793,819]" name="French Guiana" pageId="17" pageNumber="470">French Guiana</collectingCountry>
, 
<collectingCountry id="F35C7656405D293B160EFCB7F2C1FC82" name="Guatemala" pageId="17" pageNumber="470">Guatemala</collectingCountry>
, 
<collectingCountry id="F35C7656405D293B1385FC93F37BFC82" box="[239,351,829,855]" name="Honduras" pageId="17" pageNumber="470">Honduras</collectingCountry>
, 
<collectingCountry id="F35C7656405D293B1203FC93F3FBFC82" box="[361,479,829,855]" name="Nicaragua" pageId="17" pageNumber="470">Nicaragua</collectingCountry>
