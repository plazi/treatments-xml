<taxonomicName id="13914D5BFFDABB4C2F8128640B5EFBBA" authority="(Montagu, 1813)" baseAuthorityName="Montagu" baseAuthorityYear="1813" box="[179,596,1051,1077]" class="Malacostraca" family="Dexaminidae" genus="Dexamine" kingdom="Animalia" order="Amphipoda" pageId="10" pageNumber="383" phylum="Arthropoda" rank="species" species="spinosa">
