<taxonomicName id="FEE74D19FFD52C33FF32051D22DFE8AD" authority="Wassel &amp; Appleq. A. Flowering" box="[208,710,1914,1933]" class="Magnoliopsida" family="Salicaceae" genus="Homalium" kingdom="Plantae" order="Malpighiales" pageId="16" pageNumber="17" phylum="Tracheophyta" rank="species" species="pachycladum">
