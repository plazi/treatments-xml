<paragraph id="A03BD55924EBD1EF4D71CB5007DE8B45" pageId="8" pageNumber="133">
<taxonomicName id="A8A0E47F8BA536DDBDCF931F61E4BF26" authorityName="W. L. Wagner &amp; Lorence, Syst. Bot. 30: 832" authorityYear="2005" baseAuthorityName="Lorence &amp; J. Florence" class="Magnoliopsida" family="Rubiaceae" genus="Kadua" higherTaxonomySource="CoL" kingdom="Plantae" lsidName="" order="Gentianales" pageId="8" pageNumber="133" phylum="Tracheophyta" rank="species" species="nukuhivensis">
