, 
<taxonomicName id="474D8EF85E67CB15F4C58842DC3E4887" class="Monocotyledoneae" family="Pandanaceae" genus="Freycinetia" higherTaxonomySource="GBIF" kingdom="Plantae" lsidName="" order="Pandanales" pageId="8" pageNumber="133" phylum="Angiospermae" rank="genus">
