, 
<taxonomicName id="917F153D9F78D147A7B22DDCCB08CB9E" class="Magnoliopsida" family="Myrtaceae" genus="Metrosideros" higherTaxonomySource="GBIF" kingdom="Plantae" lsidName="" order="Myrtales" pageId="7" pageNumber="132" phylum="Magnoliophyta" rank="genus">
<emphasis id="9387760DA4B5C1C2353939E29900D244" italics="true" pageId="7" pageNumber="132">Metrosideros</emphasis>
</taxonomicName>
, and 
<taxonomicName id="D7F11ED70AFF3020EF7ECB4E3C597DC6" class="Magnoliopsida" family="Cunoniaceae" genus="Weinmannia" higherTaxonomySource="GBIF" kingdom="Plantae" lsidName="" order="Oxalidales" pageId="7" pageNumber="132" phylum="Magnoliophyta" rank="genus">
<emphasis id="CF1EAC1EA335DE2BEA2DEDA6612610AB" italics="true" pageId="7" pageNumber="132">Weinmannia</emphasis>
</taxonomicName>
