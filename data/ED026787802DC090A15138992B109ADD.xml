, 
<taxonomicName id="CCCDD58657B2FD20C93E253B9CB109F2" class="Dicotyledoneae" family="Asteraceae" genus="Bidens" higherTaxonomySource="GBIF" kingdom="Plantae" lsidName="" order="Campanulales" pageId="8" pageNumber="133" phylum="Angiospermae" rank="genus">
<emphasis id="4D00AEAF9F49AA144A2F1D6C8592E872" italics="true" pageId="8" pageNumber="133">Bidens</emphasis>
