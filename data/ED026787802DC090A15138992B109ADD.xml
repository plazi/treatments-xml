<taxonomicName id="E5A16A19E840F8C6095E06C161182703" class="Dicotyledoneae" family="Hernandiaceae" genus="Hernandia" higherTaxonomySource="GBIF" kingdom="Plantae" lsidName="" order="Magnoliales" pageId="7" pageNumber="132" phylum="Angiospermae" rank="genus">
<emphasis id="152428007C89800836FA42FA1FA72426" italics="true" pageId="7" pageNumber="132">Hernandia</emphasis>
</taxonomicName>
, 
<taxonomicName id="EFCCB2D654F172FFA3A865987CD22B55" class="Magnoliopsida" family="Aquifoliaceae" genus="Ilex" higherTaxonomySource="CoL" kingdom="Plantae" lsidName="" order="Aquifoliales" pageId="7" pageNumber="132" phylum="Tracheophyta" rank="genus">
<emphasis id="F701A7FA5DDF2782C4DBC97BDCE333C5" italics="true" pageId="7" pageNumber="132">Ilex</emphasis>
