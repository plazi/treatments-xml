<taxonomicName id="4C27E3B77E6EFFE2FE817267DC10FE9E" authority="Godman, [1901]" authorityName="Godman" authorityYear="1901" box="[382,782,333,357]" class="Insecta" family="Hesperiidae" genus="Thracides" kingdom="Animalia" order="Lepidoptera" pageId="28" pageNumber="27" phylum="Arthropoda" rank="species" species="seron">
