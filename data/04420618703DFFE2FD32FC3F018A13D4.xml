<taxonomicName id="4BEBCC8D703BFFE1FE8FFC2E03601490" authorityName="Prathapan and Konstantinov" authorityYear="2011" box="[332,530,957,976]" class="Insecta" family="Chrysomelidae" genus="Aphthona" kingdom="Animalia" order="Coleoptera" pageId="5" phylum="Arthropoda" rank="species" species="yercaudensis">
