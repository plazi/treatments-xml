des 
<taxonomicName authority="L." class="Magnoliopsida" family="Polygonaceae" genus="Polygonum" kingdom="Plantae" order="Caryophyllales" pageId="null" pageNumber="739" phylum="Tracheophyta" rank="species" species="aviculare">
