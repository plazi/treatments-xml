<taxonomicName id="CDFF4D4718761372AF465CD4FB2E1A8F" box="[1108,1233,1728,1752]" class="Insecta" family="Noctuidae" genus="Polia" kingdom="Animalia" order="Lepidoptera" pageId="0" pageNumber="577" phylum="Arthropoda" rank="species" species="costirufa">
