<quantity id="CD079B2118761372A89C5CF1FBFC1AAC" box="[910,1027,1764,1787]" metricMagnitude="-2" metricUnit="m" metricValue="4.8" metricValueMax="5.0" metricValueMin="4.6" pageId="0" pageNumber="577" unit="mm" value="48.0" valueMax="50.0" valueMin="46.0">46-50 mm</quantity>
