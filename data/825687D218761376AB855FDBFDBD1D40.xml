<taxonomicName id="CDFF4D4718761372A8095D12FC6A1B4A" box="[795,917,1797,1822]" class="Insecta" family="Noctuidae" genus="Polia" kingdom="Animalia" order="Lepidoptera" pageId="0" pageNumber="577" phylum="Arthropoda" rank="species" species="costirufa">
