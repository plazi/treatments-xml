<taxonomicName id="CDFF4D4718761372AA5F5D3CFE371B17" box="[333,456,1832,1856]" class="Insecta" family="Noctuidae" genus="Polia" kingdom="Animalia" order="Lepidoptera" pageId="0" pageNumber="577" phylum="Arthropoda" rank="species" species="costirufa">
