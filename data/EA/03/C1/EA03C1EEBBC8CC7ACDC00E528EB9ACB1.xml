<taxonomicName LSID-HNS="urn:lsid:biosci.ohio-state.edu:osuc_concepts:33642" class="Insecta" family="Formicidae" genus="Pheidole" higherTaxonomySource="CoL" kingdom="Animalia" lsidName="Pheidole calens Forel" lsidName-HNS="Pheidole calens Forel" order="Hymenoptera" pageNumber="596" phylum="Arthropoda" rank="species" species="calens">calens</taxonomicName>
, 
<taxonomicName LSID-HNS="urn:lsid:biosci.ohio-state.edu:osuc_concepts:33643" class="Insecta" family="Formicidae" genus="Pheidole" higherTaxonomySource="CoL" kingdom="Animalia" lsidName="Pheidole californica Mayr" lsidName-HNS="Pheidole californica Mayr" order="Hymenoptera" pageNumber="596" phylum="Arthropoda" rank="species" species="californica">californica</taxonomicName>
, 
<taxonomicName LSID-HNS="urn:lsid:biosci.ohio-state.edu:osuc_concepts:33651" class="Insecta" family="Formicidae" genus="Pheidole" higherTaxonomySource="CoL" kingdom="Animalia" lsidName="Pheidole carrolli Naves" lsidName-HNS="Pheidole carrolli Naves" order="Hymenoptera" pageNumber="596" phylum="Arthropoda" rank="species" species="carrolli">carrolli</taxonomicName>
, 
<taxonomicName LSID-HNS="urn:lsid:biosci.ohio-state.edu:osuc_concepts:181972" class="Insecta" family="Formicidae" genus="Pheidole" higherTaxonomySource="CoL" kingdom="Animalia" lsidName="Pheidole cavigenis Wheeler" lsidName-HNS="Pheidole cavigenis Wheeler" order="Hymenoptera" pageNumber="596" phylum="Arthropoda" rank="species" species="cavigenis">cavigenis</taxonomicName>
, 
<taxonomicName LSID-HNS="urn:lsid:biosci.ohio-state.edu:osuc_concepts:33670" class="Insecta" family="Formicidae" genus="Pheidole" higherTaxonomySource="CoL" kingdom="Animalia" lsidName="Pheidole clementensis Gregg" lsidName-HNS="Pheidole clementensis Gregg" order="Hymenoptera" pageNumber="596" phylum="Arthropoda" rank="species" species="clementensis">clementensis</taxonomicName>
