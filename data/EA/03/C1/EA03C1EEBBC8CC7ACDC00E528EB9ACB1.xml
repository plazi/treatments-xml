<taxonomicName LSID-HNS="urn:lsid:biosci.ohio-state.edu:osuc_concepts:181973" class="Insecta" family="Formicidae" genus="Pheidole" higherTaxonomySource="CoL" kingdom="Animalia" lsidName="Pheidole hoplitica Wilson" lsidName-HNS="Pheidole hoplitica Wilson" order="Hymenoptera" pageNumber="596" phylum="Arthropoda" rank="species" species="hoplitica">hoplitica</taxonomicName>
, 
<taxonomicName LSID-HNS="urn:lsid:biosci.ohio-state.edu:osuc_concepts:33833" class="Insecta" family="Formicidae" genus="Pheidole" higherTaxonomySource="CoL" kingdom="Animalia" lsidName="Pheidole littoralis Cole" lsidName-HNS="Pheidole littoralis Cole" order="Hymenoptera" pageNumber="596" phylum="Arthropoda" rank="species" species="littoralis">littoralis</taxonomicName>
, 
