<taxonomicName id="4C5C4D46FFDEB94DB4D74A05FD59FDDF" box="[471,665,538,564]" class="Glomeromycetes" kingdom="Animalia" pageId="3" pageNumber="238" phylum="Glomeromycota" rank="class">glomeromycetes</taxonomicName>
