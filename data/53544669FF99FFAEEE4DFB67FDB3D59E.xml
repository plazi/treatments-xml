<taxonomicName id="1CFD8CFCFF98FFAEECD7F855FE0FD59E" authorityName="Loew" authorityYear="1862" box="[232,502,1989,2015]" class="Insecta" family="Drosophilidae" genus="Drosophila" higherTaxonomySource="GBIF" kingdom="Animalia" order="Diptera" pageId="13" pageNumber="14" phylum="Arthropoda" rank="species" species="tripunctata">
