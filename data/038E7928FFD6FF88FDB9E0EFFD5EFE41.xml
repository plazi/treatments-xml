<subSubSection id="C33D9BB5FFD7FF88FF7AE58FFD5EFE41" pageId="23" pageNumber="24" type="etymology">
<paragraph id="8B98C83EFFD7FF88FF7AE58FFD5EFE41" blockId="23.[151,1436,152,498]" pageId="23" pageNumber="24">
<emphasis id="B953142CFFD7FF88FF7AE58FFEB0FE7A" bold="true" box="[198,331,431,457]" pageId="23" pageNumber="24">Etymology</emphasis>
