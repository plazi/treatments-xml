<taxonomicName id="4C58A0B51E1AFFA7FC46A230FAB4DC30" authority="GUENEE, [1858]" authorityName="Guenee" authorityYear="1858" box="[988,1369,1544,1569]" class="Insecta" family="Geometridae" genus="Macariini" higherTaxonomySource="GBIF" kingdom="Animalia" order="Lepidoptera" pageId="5" pageNumber="262" phylum="Arthropoda" rank="genus">MACARIINI GUENÉE, [1858]</taxonomicName>
