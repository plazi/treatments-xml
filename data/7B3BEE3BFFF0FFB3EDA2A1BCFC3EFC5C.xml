<taxonomicName id="349224AEFFF0FFB3EF2BA281FD52FC7B" authorityName="Melichar" authorityYear="1923" box="[542,700,937,961]" class="Insecta" family="Cicadellidae" genus="Makilingia" higherTaxonomySource="GBIF" kingdom="Animalia" order="Hemiptera" pageId="14" pageNumber="487" phylum="Arthropoda" rank="species" species="intermedia">
