<taxonomicName id="6D0F30516FDB082C73809AA172C1415E" LSID="A49DAF05-C29D-5EA3-AB2F-A4681CDC0CEF" authority="Stal, 1866" authorityName="Stal" authorityYear="1866" class="Insecta" family="Cercopidae" genus="Locris" higherTaxonomySource="CoL" kingdom="Animalia" lsidName="Locris" order="Hemiptera" pageId="0" pageNumber="29" phylum="Arthropoda" rank="genus">
Locris 
<normalizedToken id="59560DD24C1BB420EB0F4527D4FFE7EB" originalValue="Stål">Stal</normalizedToken>
