<taxonomicName id="4C0AA5C6CA6D5A62F2CDFC09FCBA6AED" box="[694,854,960,985]" class="Anthozoa" family="Plexauridae" genus="Echinogorgia" kingdom="Animalia" order="Alcyonacea" pageId="12" pageNumber="13" phylum="Cnidaria" rank="genus">
