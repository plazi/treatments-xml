</taxonomicName>
occurs in 
<collectingCountry id="F31312BEFF9CFFB2CA66FC69FCCBB7A0" box="[814,885,938,964]" name="Brazil" pageId="9" pageNumber="202">Brazil</collectingCountry>
, 
<collectingCountry id="F31312BEFF9CFFB2CAC9FC69FC54B7A0" box="[897,1002,938,964]" name="Paraguay" pageId="9" pageNumber="202">Paraguay</collectingCountry>
, 
<collectingCountry id="F31312BEFF9CFFB2CABEFC69FBE6B7A0" box="[1014,1112,938,964]" name="Uruguay" pageId="9" pageNumber="202">Uruguay</collectingCountry>
