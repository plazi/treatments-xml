<taxonomicName id="4C0429ADFF9CFFB2C899FC69FD07B7A0" authorityName="Saint-Hilaire" authorityYear="1824" box="[465,697,938,964]" class="Magnoliopsida" family="Euphorbiaceae" genus="Euphorbia" kingdom="Plantae" order="Malpighiales" pageId="9" pageNumber="202" phylum="Tracheophyta" rank="species" species="papillosa">
