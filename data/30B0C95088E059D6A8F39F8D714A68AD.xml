<paragraph id="679AF403CF322023AFC14F1ED1E04ECA" pageId="0" pageNumber="167">Diagnosis.</paragraph>
<paragraph id="4ADA56B5195AF6BFC6DAD75DB92D00D9" pageId="0" pageNumber="167">
<taxonomicName id="2AF6A7303508AB62213B08D1DA2465EE" authorityName="Lei Cai &amp; F. Wen" authorityYear="2020" class="Magnoliopsida" family="Gesneriaceae" genus="Petrocodon" higherTaxonomySource="CoL" kingdom="Plantae" lsidName="Petrocodon luteoflorus" order="Lamiales" pageId="0" pageNumber="167" phylum="Tracheophyta" rank="species" species="luteoflorus">
<emphasis id="2A5A64A270D0EB2C21AA5AA320BC58F3" italics="true" pageId="0" pageNumber="167">Petrocodon luteoflorus</emphasis>
</taxonomicName>
