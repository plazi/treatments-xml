<subSubSection id="C4866B314139CB311785B2F0670F52FE" pageId="2" pageNumber="33" type="reference_group">
<paragraph id="ACFE743DF89D82005299C8A52DBA5846" pageId="2" pageNumber="33">
<taxonomicName id="34397E873BEB76AEF6A2DF92C0A14AEC" authorityName="Enderlein" authorityYear="1913" class="Insecta" family="Apidae" genus="Xylocopa" higherTaxonomySource="CoL" kingdom="Animalia" lsidName="Xylocopa (Neoxylocopa) andica" order="Hymenoptera" pageId="2" pageNumber="33" phylum="Arthropoda" rank="species" species="andica" subGenus="Neoxylocopa">Xylocopa (Neoxylocopa) andica</taxonomicName>
