<emphasis id="5BAA355BC6251B10FF6CFF9AFEBEFF09" bold="true" box="[199,315,188,212]" inLineHeading="true" pageId="35" pageNumber="36" reason="1">Remarks.</emphasis>
<taxonomicName id="AEDE92CAC6251B10FEE8FF9BFD87FF09" baseAuthorityName="Ruppel" baseAuthorityYear="1830" box="[323,514,188,212]" class="Malacostraca" family="Majidae" genus="Micippa" kingdom="Animalia" order="Decapoda" pageId="35" pageNumber="36" phylum="Arthropoda" rank="species" species="platipes">
