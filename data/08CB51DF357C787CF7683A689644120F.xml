<taxonomicName id="A7CEA7138B535435454038D107AA844A" class="Actinopterygii" family="Mastacembelidae" genus="Macrognathus" higherTaxonomySource="CoL" kingdom="Animalia" order="Synbranchiformes" pageNumber="7" phylum="Chordata" rank="species" species="maculatus">Macrognathus maculatus</taxonomicName>
