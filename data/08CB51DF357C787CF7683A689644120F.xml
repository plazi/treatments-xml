<taxonomicName id="2C86E87D3A56CB2C1B4C9177F8420CA5" LSID-ZBK="urn:lsid:zoobank.org:act:896D0D5B-0278-4732-B2AE-55DA94B684AA" class="Actinopterygii" family="Balitoridae" genus="Gastromyzon" higherTaxonomySource="CoL" kingdom="Animalia" lsidName-ZBK="Gastromyzon crenastus Tan &amp; Leh 2006" order="Cypriniformes" pageNumber="7" phylum="Chordata" rank="species" species="crenastus">Gastromyzon crenastus</taxonomicName>
