<collectingRegion box="[621,726,496,522]" country="Chile" name="Tarapaca" pageId="7" pageNumber="8">Tarapacá</collectingRegion>
and 
<collectingRegion box="[782,1001,496,522]" country="Chile" name="Arica y Parinacota" pageId="7" pageNumber="8">
