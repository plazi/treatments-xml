<subSubSection pageId="0" pageNumber="1" type="reference_group">
<paragraph pageId="0" pageNumber="1">
<taxonomicName authority="Lonsdale, 2014" authorityName="Lonsdale" authorityYear="2014" class="Insecta" family="Agromyzidae" genus="Euhexomyza" higherTaxonomySource="GBIF" kingdom="Animalia" lsidName="Euhexomyza" order="Diptera" pageId="0" pageNumber="1" phylum="Arthropoda" rank="genus">Euhexomyza</taxonomicName>
