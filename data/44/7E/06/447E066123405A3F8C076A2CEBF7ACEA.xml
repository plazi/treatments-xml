<taxonomicName authorityName="Froelich" authorityYear="1799" class="Hexapoda" family="Carabidae" genus="Leistus" higherTaxonomySource="GBIF" kingdom="Animalia" lsidName="" order="Coleoptera" pageId="127" pageNumber="128" phylum="Arthropoda" rank="genus">
<emphasis italics="true" pageId="127" pageNumber="128">Leistus</emphasis>
</taxonomicName>
(about 180 species), 
<taxonomicName authorityName="Latreille" authorityYear="1802" class="Hexapoda" family="Carabidae" genus="Nebria" higherTaxonomySource="GBIF" kingdom="Animalia" lsidName="" order="Coleoptera" pageId="127" pageNumber="128" phylum="Arthropoda" rank="genus">
<emphasis italics="true" pageId="127" pageNumber="128">Nebria</emphasis>
</taxonomicName>
(including 
<taxonomicName authorityName="K. Daniel" authorityYear="1903" class="Hexapoda" family="Carabidae" genus="Oreonebria" higherTaxonomySource="GBIF" kingdom="Animalia" lsidName="" order="Coleoptera" pageId="127" pageNumber="128" phylum="Arthropoda" rank="genus">
<emphasis italics="true" pageId="127" pageNumber="128">Oreonebria</emphasis>
</taxonomicName>
Daniel) (about 380 species), and 
<taxonomicName authorityName="Ueno" authorityYear="1955" class="Insecta" family="Carabidae" genus="Nippononebria" higherTaxonomySource="GBIF" kingdom="Animalia" lsidName="" order="Coleoptera" pageId="127" pageNumber="128" phylum="Arthropoda" rank="genus">
<emphasis italics="true" pageId="127" pageNumber="128">Nippononebria</emphasis>
