<taxonomicName authorityName="Jedlicka" authorityYear="1935" class="Insecta" family="Carabidae" genus="Archastes" higherTaxonomySource="GBIF,CoL" kingdom="Animalia" lsidName="" order="Coleoptera" pageId="127" pageNumber="128" phylum="Arthropoda" rank="genus">
