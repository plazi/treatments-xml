<taxonomicName id="4CF64D26161EFFA0FDE8F911FD09FCB5" box="[596,730,1716,1741]" class="Insecta" family="Cicadellidae" genus="Exogonia" kingdom="Animalia" order="Hemiptera" pageId="10" pageNumber="53" phylum="Arthropoda" rank="species" species="luteovittata">
