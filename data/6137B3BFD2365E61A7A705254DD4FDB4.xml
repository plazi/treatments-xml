<subSubSection id="36EA1FA9C18127D04E59C13BEE187A4E" pageId="8" pageNumber="19" type="reference_group">
<paragraph id="D02ECD8554B5CB8698591D50427F755D" pageId="8" pageNumber="19">
<taxonomicName id="C2C306C9AD3F7E39CD4F81C11767D2FC" authorityName="Tryon" authorityYear="1865" class="Gastropoda" family="Bithyniidae" genus="Gabbia" higherTaxonomySource="GBIF" kingdom="Animalia" lsidName="" order="Littorinimorpha" pageId="8" pageNumber="19" phylum="Mollusca" rank="species" species="australis">Gabbia australis</taxonomicName>
