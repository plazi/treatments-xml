</taxonomicName>
, 
<taxonomicName class="Rosopsida" family="Rubiaceae" genus="Coprosma" higherTaxonomySource="GBIF" kingdom="Plantae" lsidName="" order="Gentianales" pageId="6" pageNumber="39" phylum="Magnoliophyta" rank="genus">
<emphasis italics="true" pageId="6" pageNumber="39">Coprosma</emphasis>
</taxonomicName>
, 
<taxonomicName class="Magnoliopsida" family="Rhizophoraceae" genus="Crossostylis" higherTaxonomySource="GBIF,CoL" kingdom="Plantae" lsidName="" order="Malpighiales" pageId="6" pageNumber="39" phylum="Tracheophyta" rank="genus">
<emphasis italics="true" pageId="6" pageNumber="39">Crossostylis</emphasis>
</taxonomicName>
, 
<taxonomicName class="Magnoliopsida" family="Aquifoliaceae" genus="Ilex" higherTaxonomySource="CoL" kingdom="Plantae" lsidName="" order="Aquifoliales" pageId="6" pageNumber="39" phylum="Tracheophyta" rank="genus">
