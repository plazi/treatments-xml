<subSubSection type="nomenclature">
<paragraph pageNumber="556">
<taxonomicName LSID-HNS="urn:lsid:biosci.ohio-state.edu:osuc_concepts:181968" class="Insecta" family="Formicidae" genus="Pheidole" higherTaxonomySource="CoL" kingdom="Animalia" lsidName="Pheidole agricola Wilson" lsidName-HNS="Pheidole agricola Wilson" order="Hymenoptera" pageNumber="556" phylum="Arthropoda" rank="species" species="agricola">Pheidole agricola</taxonomicName>
