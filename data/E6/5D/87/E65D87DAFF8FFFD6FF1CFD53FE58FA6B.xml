sect. 
<emphasis box="[535,662,937,962]" italics="true" pageId="2" pageNumber="49">Attenuatae</emphasis>
<bibRefCitation author="Schuster, R. M." box="[672,927,937,963]" pageId="2" pageNumber="49" refId="ref4803" refString="Schuster, R. M. (1969) The Hepaticae and Anthocerotae of North America. vol. 2. New York, Columbia University Press, 1062 pp." type="book" year="1969">Schuster (1969: 306)</bibRefCitation>
</taxonomicName>
. 
<typeStatus box="[941,1004,937,963]" pageId="2" pageNumber="49">Type</typeStatus>
: 
<taxonomicName authority="(Martius 1817: 177) Dumortier (1835: 17)" authorityName="Dumortier" authorityPageNumber="17" authorityYear="1835" baseAuthorityName="Martius" baseAuthorityPageNumber="177" baseAuthorityYear="1817" class="Jungermanniopsida" family="Anastrophyllaceae" genus="Lophozia" kingdom="Plantae" order="Jungermanniales" pageId="2" pageNumber="49" phylum="Bryophyta" rank="species" species="attenuata">
