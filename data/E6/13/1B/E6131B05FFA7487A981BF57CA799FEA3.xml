<quantity box="[281,346,902,925]" metricMagnitude="-2" metricUnit="m" metricValue="6.0" metricValueMax="7.0" metricValueMin="5.0" pageId="6" pageNumber="99" unit="cm" value="6.0" valueMax="7.0" valueMin="5.0">5-7 cm</quantity>
