and 
<taxonomicName id="A1C11BE951F7D546FF03A978CBA121F8" authorityName="Verdcourt" authorityYear="1971" baseAuthorityName="Diels" class="Magnoliopsida" family="Annonaceae" genus="Monanthotaxis" higherTaxonomySource="CoL" kingdom="Plantae" lsidName="Monanthotaxis trichantha" order="Magnoliales" pageId="12" pageNumber="83" phylum="Tracheophyta" rank="species" species="trichantha">
<emphasis id="F5A8E86DC9452FAE58839056B6BC6905" italics="true" pageId="12" pageNumber="83">Monanthotaxis trichantha</emphasis>
