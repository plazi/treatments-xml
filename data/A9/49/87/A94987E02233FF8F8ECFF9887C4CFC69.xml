<paragraph blockId="4.[151,567,1702,1725]" box="[151,567,1702,1725]" pageId="4" pageNumber="47">
<taxonomicName authority="Lehr, 1984: 703" authorityName="Lehr" authorityPageNumber="703" authorityYear="1984" box="[151,567,1702,1725]" class="Insecta" family="Asilidae" genus="Lasiopogon" kingdom="Animalia" order="Diptera" pageId="4" pageNumber="47" phylum="Arthropoda" rank="species" species="hasanicus">
