<subSubSection box="[199,1394,367,393]" pageId="9" pageNumber="460" type="etymology">
<paragraph blockId="9.[151,1436,151,393]" box="[199,1394,367,393]" pageId="9" pageNumber="460">
<emphasis bold="true" box="[199,334,367,393]" pageId="9" pageNumber="460">Etymology.</emphasis>
