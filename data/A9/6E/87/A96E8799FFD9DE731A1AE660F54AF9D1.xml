<taxonomicName box="[250,401,950,972]" class="Insecta" family="Ichneumonidae" genus="Camera" kingdom="Animalia" order="Hymenoptera" pageId="11" pageNumber="12" phylum="Arthropoda" rank="species" species="lucida">Camera lucida</taxonomicName>
drawings of 
<taxonomicName authorityName="Newman" authorityYear="1835" box="[538,648,950,972]" class="Insecta" family="Bibionidae" kingdom="Animalia" order="Diptera" pageId="11" pageNumber="12" phylum="Arthropoda" rank="family">Bibionidae</taxonomicName>
(
<taxonomicName authorityName="Geoffrey" authorityYear="1762" box="[665,718,950,971]" class="Insecta" family="Bibionidae" genus="Bibio" kingdom="Animalia" order="Diptera" pageId="11" pageNumber="12" phylum="Arthropoda" rank="genus">
<emphasis box="[665,718,950,971]" italics="true" pageId="11" pageNumber="12">Bibio</emphasis>
</taxonomicName>
) wings 
<emphasis bold="true" box="[799,823,950,972]" pageId="11" pageNumber="12">A.</emphasis>
