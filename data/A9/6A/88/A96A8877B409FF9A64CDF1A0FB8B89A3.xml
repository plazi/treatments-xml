<emphasis box="[900,1044,1951,1975]" italics="true" pageId="54" pageNumber="55">Chrysis polita</emphasis>
Rosa
</taxonomicName>
, 
<taxonomicNameLabel box="[1116,1199,1951,1975]" pageId="54" pageNumber="55" rank="species">
<emphasis bold="true" box="[1116,1193,1951,1975]" pageId="54" pageNumber="55">sp. nov</emphasis>
.
</taxonomicNameLabel>
B, F. 
<taxonomicName authority="Dahlbom, 1844" authorityName="Dahlbom" authorityYear="1844" class="Insecta" family="Chrysididae" genus="Chrysis" kingdom="Animalia" order="Hymenoptera" pageId="54" pageNumber="55" phylum="Arthropoda" rank="species" species="exsulans">
<emphasis box="[1264,1436,1951,1975]" italics="true" pageId="54" pageNumber="55">Chrysis exsulans</emphasis>
Dahlbom, 1844
</taxonomicName>
. C, G. 
<taxonomicName authority="Linsenmaier, 1959" authorityName="Linsenmaier" authorityYear="1959" box="[382,757,1986,2011]" class="Insecta" family="Chrysididae" genus="Chrysis" kingdom="Animalia" order="Hymenoptera" pageId="54" pageNumber="55" phylum="Arthropoda" rank="species" species="castigata">
