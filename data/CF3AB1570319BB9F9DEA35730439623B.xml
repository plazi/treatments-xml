<paragraph id="20FA36368B88F3062B92EE5B88E9E577" pageId="0" pageNumber="73">
<taxonomicName id="97F2127126CB3FFC9A397EFA41E95FEE" class="Arachnida" family="Thomisidae" genus="Thomisus" higherTaxonomySource="CoL" kingdom="Animalia" lsidName="Thomisus" order="Araneae" pageId="0" pageNumber="73" phylum="Arthropoda" rank="genus">Thomisus</taxonomicName>
