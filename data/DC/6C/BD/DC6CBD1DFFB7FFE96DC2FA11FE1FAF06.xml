<taxonomicName authorityName="OPITZ" authorityYear="2015" box="[994,1085,1528,1549]" class="Insecta" family="Cleridae" genus="Isoforma" higherTaxonomySource="GBIF" kingdom="Animalia" order="Coleoptera" pageId="19" pageNumber="1555" phylum="Arthropoda" rank="genus">
<emphasis box="[994,1085,1528,1549]" italics="true" pageId="19" pageNumber="1532">Isoforma</emphasis>
