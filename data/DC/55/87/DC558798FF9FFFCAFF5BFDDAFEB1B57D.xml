, in 
<location LSID="urn:lsid:plazi:treatment:DC558798FF9FFFCAFF5BFDDAFEB1B57D:51236055FF9FFFC8FF5BFDF3FF3BB3EB" box="[151,249,622,646]" municipality="Cachoeira do Pau Grande" name="Mamore" pageId="4" stateProvince="Rondonia state">Mamoré</location>
