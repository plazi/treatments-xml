<taxonomicName authorityName="Smith" authorityYear="1805" box="[561,708,1695,1720]" class="Magnoliopsida" family="Ericaceae" genus="Rhododendron" kingdom="Plantae" order="Ericales" pageId="2" pageNumber="12" phylum="Tracheophyta" rank="species" species="arboreum">
<emphasis box="[561,708,1695,1720]" italics="true" pageId="2" pageNumber="12">R. arboreum</emphasis>
</taxonomicName>
, 
<taxonomicName authority="Wallich ex Don (1834: 844)" authorityName="Don" authorityPageNumber="844" authorityYear="1834" box="[723,1209,1694,1720]" class="Magnoliopsida" family="Ericaceae" genus="Rhododendron" kingdom="Plantae" order="Ericales" pageId="2" pageNumber="12" phylum="Tracheophyta" rank="species" species="barbatum">
<emphasis box="[723,870,1695,1720]" italics="true" pageId="2" pageNumber="12">R. barbatum</emphasis>
Wallich ex 
<bibRefCitation author="Don, G." box="[1010,1209,1694,1720]" pageId="2" pageNumber="12" refId="ref3314" refString="Don, G. (1834) A General History of the Dichlamydeous Plants 3. J. G. &amp; F. Rivington, London, 867 pp." type="book" year="1834">Don (1834: 844)</bibRefCitation>
</taxonomicName>
, 
<taxonomicName authorityName="Don" authorityYear="1821" box="[1221,1429,1695,1720]" class="Magnoliopsida" family="Ericaceae" genus="Rhododendron" kingdom="Plantae" order="Ericales" pageId="2" pageNumber="12" phylum="Tracheophyta" rank="species" species="campanulatum">
<emphasis box="[1221,1429,1695,1720]" italics="true" pageId="2" pageNumber="12">R. campanulatum</emphasis>
</taxonomicName>
, 
<taxonomicName authority="Don (1821: 409)" authorityName="Don" authorityPageNumber="409" authorityYear="1821" box="[151,530,1733,1759]" class="Magnoliopsida" family="Ericaceae" genus="Rhododendron" kingdom="Plantae" order="Ericales" pageId="2" pageNumber="12" phylum="Tracheophyta" rank="species" species="anthopogon">
<emphasis box="[151,324,1733,1758]" italics="true" pageId="2" pageNumber="12">R. anthopogon</emphasis>
<bibRefCitation author="Don, D." box="[332,530,1733,1759]" pageId="2" pageNumber="12" pagination="407 - 415" refId="ref3268" refString="Don, D. (1821) Descriptions of the several new plants from the Kingdom of Nepaul, taken from specimens preserved in the herbarium of Aylmer Bourke Lambert, Esq, Memoirs of the Wernerian Natural History Society 3: 407 - 415." type="journal article" year="1821">Don (1821: 409)</bibRefCitation>
</taxonomicName>
, 
<taxonomicName authority="Wallich ex Don (1834: 845)" authorityName="Don" authorityPageNumber="845" authorityYear="1834" box="[543,1031,1733,1759]" class="Magnoliopsida" family="Ericaceae" genus="Rhododendron" kingdom="Plantae" order="Ericales" pageId="2" pageNumber="12" phylum="Tracheophyta" rank="species" species="lepidotum">
<emphasis box="[543,693,1733,1758]" italics="true" pageId="2" pageNumber="12">R. lepidotum</emphasis>
Wallich ex 
