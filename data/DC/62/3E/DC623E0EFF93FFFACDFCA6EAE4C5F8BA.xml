<taxonomicName baseAuthorityName="Malloch" baseAuthorityYear="1920" class="Insecta" family="Scathophagidae" genus="Acerocnema" kingdom="Animalia" order="Diptera" pageId="1" pageNumber="524" phylum="Arthropoda" rank="species" species="fasciventris">
<emphasis italics="true" pageId="1" pageNumber="524">fasciventris</emphasis>
