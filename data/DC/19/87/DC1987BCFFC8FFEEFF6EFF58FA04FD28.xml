<collectingCountry box="[387,477,384,406]" name="China" pageId="11" pageNumber="72">East Asia</collectingCountry>
............................................................................................................................................ 
<taxonomicName authorityName="Kuan Zhao et Zhu L. Yang" authorityYear="2014" box="[1328,1451,384,406]" class="Agaricomycetes" family="Boletaceae" genus="Rubroboletus" kingdom="Fungi" order="Boletales" pageId="11" pageNumber="72" phylum="Basidiomycota" rank="species" species="latisporus">
