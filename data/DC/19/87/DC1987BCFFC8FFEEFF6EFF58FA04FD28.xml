<subSubSection pageId="11" pageNumber="72" type="key">
<keyStep pageId="11" pageNumber="72">
<paragraph blockId="11.[136,1451,240,759]" box="[136,1451,240,262]" pageId="11" pageNumber="72">
<keyLead box="[136,1451,240,262]" pageId="11" pageNumber="72">1 Pileus shiny when dry and strongly viscid when wet; pileal surface turning dark blue when bruised .............................................2</keyLead>
</paragraph>
<paragraph blockId="11.[136,1451,240,759]" box="[136,1451,269,291]" pageId="11" pageNumber="72">
<keyLead box="[136,1451,269,291]" pageId="11" pageNumber="72">1 Pileus not shiny when dry, only slightly viscid when wet; pileal surface turning dark red or unchanging when bruised ................3</keyLead>
</paragraph>
</keyStep>
<keyStep pageId="11" pageNumber="72">
<paragraph blockId="11.[136,1451,240,759]" pageId="11" pageNumber="72">
<keyLead pageId="11" pageNumber="72">
