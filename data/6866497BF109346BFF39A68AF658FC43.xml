<taxonomicName id="27CF83EEF108346BFC44A04AF0A4FCBB" box="[1002,1237,836,861]" class="Insecta" family="Clusiidae" genus="Allometopon" kingdom="Animalia" order="Diptera" pageId="31" pageNumber="32" phylum="Arthropoda" rank="species" species="hauseri">
