<taxonomicName id="9ED8B8D01076FF9D50A2FD2DFE73FD7A" authority="Michener" authorityName="Michener" box="[151,440,731,758]" class="Insecta" family="Apidae" genus="Anthidianum" higherTaxonomySource="GBIF" kingdom="Animalia" order="Hymenoptera" pageId="2" pageNumber="51" phylum="Arthropoda" rank="genus">
