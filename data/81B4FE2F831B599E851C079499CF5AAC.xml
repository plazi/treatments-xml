<taxonomicName id="40F002FE203A69C89D28BE301226E716" LSID="urn:lsid:ipni.org:names:77153393-1" authorityName="Feuillet" authorityYear="2016" baseAuthorityName="Feuillet" baseAuthorityYear="2016" class="Magnoliopsida" family="Heliotropiaceae" genus="Euploca" higherTaxonomySource="CoL" kingdom="Plantae" lsidName="Euploca foliata" order="Boraginales" pageId="1" pageNumber="102" phylum="Tracheophyta" rank="species" species="foliata" status="comb. nov.">Euploca foliata</taxonomicName>
