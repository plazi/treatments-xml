<taxonomicName id="9B5ACADC6E39DC7037282698D15C3C4D" class="Arachnida" family="Thomisidae" genus="Platythomisus" higherTaxonomySource="CoL" kingdom="Animalia" lsidName="Platythomisus xiandao" order="Araneae" pageId="0" pageNumber="73" phylum="Arthropoda" rank="species" species="xiandao">Platythomisus xiandao</taxonomicName>
