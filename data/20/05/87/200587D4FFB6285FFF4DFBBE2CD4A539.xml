<taxonomicName authority="Byers" authorityName=": Byers" authorityYear="1965" box="[595,824,1407,1432]" class="Insecta" family="Bittacidae" genus="Bittacus" higherTaxonomySource="GBIF" kingdom="Animalia" order="Mecoptera" pageId="15" pageNumber="318" phylum="Arthropoda" rank="species" species="maculosus">
