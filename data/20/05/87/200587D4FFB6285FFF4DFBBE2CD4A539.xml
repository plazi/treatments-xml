<taxonomicName authority="Londt &amp; Byers" authorityName="Londt &amp; Byers" authorityYear="1974" class="Insecta" family="Bittacidae" genus="Bittacus" higherTaxonomySource="GBIF" kingdom="Animalia" order="Mecoptera" pageId="15" pageNumber="318" phylum="Arthropoda" rank="species" species="andinus">
<emphasis box="[1316,1436,1372,1397]" italics="true" pageId="15" pageNumber="318">B. andinus</emphasis>
Londt &amp; Byers
</taxonomicName>
, 
<taxonomicName authority="Klug" authorityName="Klug" authorityYear="1838" box="[340,536,1407,1432]" class="Insecta" family="Bittacidae" genus="Bittacus" higherTaxonomySource="GBIF" kingdom="Animalia" order="Mecoptera" pageId="15" pageNumber="318" phylum="Arthropoda" rank="species" species="chilensis">
<emphasis box="[340,471,1407,1432]" italics="true" pageId="15" pageNumber="318">B. chilensis</emphasis>
