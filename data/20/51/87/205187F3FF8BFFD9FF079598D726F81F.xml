1 1 6.5 
<taxonomicName box="[159,261,725,747]" class="Actinopterygii" family="Opistognathidae" genus="Opistognathus" kingdom="Animalia" order="Perciformes" pageId="4" pageNumber="282" phylum="Chordata" rank="species" species="solorensis">
<emphasis box="[159,261,725,747]" italics="true" pageId="4" pageNumber="282">solorensis</emphasis>
</taxonomicName>
<date box="[551,788,725,747]" pageId="4" pageNumber="282" value="1924-10-30">
<collectingDate box="[551,788,725,747]" pageId="4" pageNumber="282" value="1924-10-30">10 30 24</collectingDate>
</date>
11 2.5 
<taxonomicName box="[159,274,766,788]" class="Actinopterygii" family="Opistognathidae" genus="Opistognathus" kingdom="Animalia" order="Perciformes" pageId="4" pageNumber="282" phylum="Chordata" rank="species" species="verecundus">
