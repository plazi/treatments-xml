<number box="[151,189,764,788]" pageId="13" pageNumber="284" value="1.7">1.7</number>
; posterior width of prothorax, 
<number box="[531,569,764,788]" pageId="13" pageNumber="284" value="1.8">1.8</number>
; humeral width, 
<number box="[758,796,764,788]" pageId="13" pageNumber="284" value="2.3">2.3</number>
; elytral length, 
<number box="[970,1008,764,789]" pageId="13" pageNumber="284" value="6.2">6.2</number>
