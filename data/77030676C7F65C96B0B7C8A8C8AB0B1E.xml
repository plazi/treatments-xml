<geoCoordinate id="ECD6E5A65FD3FC005A441D4FB59D0B61" degrees="05" direction="north" minutes="27.5" orientation="latitude" precision="92" value="5.4583335">05°27.5'N</geoCoordinate>
, 
<geoCoordinate id="6DF874B71E058E6E91CF16B1642E0627" degrees="055" direction="west" minutes="13.0" orientation="longitude" precision="92" value="-55.216667">055°13.0'W</geoCoordinate>
/ 9-18-FEB-2010; P.Skelley,/ W.Warner, 
<taxonomicName id="A6D557F3C9704AF5DE9E033902A008CF" genus="C." lsidName="C." pageId="0" pageNumber="25" rank="genus">C.</taxonomicName>
Gillett; FIT&quot;, &quot;[barcode]/SEMC1085915/ KUNHM-ENT&quot;, &quot;HOLOTYPE/ CHASMOGENUS/ 
<taxonomicName id="C2E171EE7191DB817791D0077F78F0E4" genus="C." lsidName="pandus" pageId="0" pageNumber="25" rank="species" species="pandus">pandus</taxonomicName>
