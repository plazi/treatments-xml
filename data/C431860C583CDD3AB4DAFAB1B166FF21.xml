<collectionCode id="2A89AFDF583CDD39B77EF9C9B6E7F999" box="[819,919,1576,1600]" httpUri="http://grbio.org/cool/6yx0-3nm7" name="Museu de Zoologia da Universidade de Sao Paulo" pageId="9" pageNumber="356">MZUSP</collectionCode>
