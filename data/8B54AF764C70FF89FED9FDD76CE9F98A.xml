<taxonomicName id="C4FD65E34C70FF87FDC8FB5B6DECFB6C" box="[537,668,1209,1232]" class="Insecta" family="Bombyliidae" genus="Bombylius" kingdom="Animalia" order="Diptera" pageId="22" pageNumber="23" phylum="Arthropoda" rank="species" species="anomalus">
