<number id="B5350C474C70FF87FCE7FB796C33FB0E" box="[822,835,1179,1202]" pageId="22" pageNumber="23" value="4.0">4</number>
<typeStatus id="DC46A0C24C70FF87FC9BFB796CD8FB0E" box="[842,936,1179,1202]" pageId="22" pageNumber="23">syntypes</typeStatus>
in 
