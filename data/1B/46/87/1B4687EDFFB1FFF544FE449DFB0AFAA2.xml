<taxonomicName box="[742,889,1506,1529]" class="Insecta" family="Phoridae" genus="Megaselia" higherTaxonomySource="GBIF" kingdom="Animalia" order="Diptera" pageId="3" pageNumber="1602" phylum="Arthropoda" rank="species" species="gargarans">
<emphasis box="[742,889,1506,1529]" italics="true" pageId="3" pageNumber="1602">M. gargarans</emphasis>
</taxonomicName>
with 
<taxonomicName baseAuthorityName="Wood" baseAuthorityYear="1909" box="[948,1081,1506,1529]" class="Insecta" family="Phoridae" genus="Megaselia" higherTaxonomySource="GBIF" kingdom="Animalia" order="Diptera" pageId="3" pageNumber="1602" phylum="Arthropoda" rank="species" species="crassipes">
<emphasis box="[948,1081,1506,1529]" italics="true" pageId="3" pageNumber="1602">M. crassipes</emphasis>
</taxonomicName>
is herewith formally proposed. 
<taxonomicName authorityName="Disney and Durska" authorityYear="2011" box="[472,635,1537,1561]" class="Insecta" family="Phoridae" genus="Megaselia" higherTaxonomySource="GBIF" kingdom="Animalia" order="Diptera" pageId="3" pageNumber="1602" phylum="Arthropoda" rank="species" species="basiturgida">
