<taxonomicName authority="Rafinesque, 1838" authorityName="J. Wen &amp; Boggan" authorityYear="2014" baseAuthorityName="J. Wen &amp; Boggan" baseAuthorityYear="2014" class="Magnoliopsida" family="Vitaceae" genus="Nekemias" higherTaxonomySource="GBIF" kingdom="Plantae" lsidName="Nekemias arborea" order="Vitales" pageId="1" pageNumber="12" phylum="Tracheophyta" rank="species" species="arborea">
