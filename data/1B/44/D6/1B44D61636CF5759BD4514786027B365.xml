<emphasis italics="true" pageId="0" pageNumber="1">Pterocarya stenoptera</emphasis>
</taxonomicName>
) and accompanied by 
<taxonomicName class="Monocotyledoneae" family="Araceae" genus="Pinellia" higherTaxonomySource="GBIF" kingdom="Plantae" lsidName="Pinellia ternata" order="Spathiflorae" pageId="0" pageNumber="1" phylum="Angiospermae" rank="species" species="ternata">
<emphasis italics="true" pageId="0" pageNumber="1">Pinellia ternata</emphasis>
</taxonomicName>
, 
<taxonomicName class="Monocotyledoneae" family="Commelinaceae" genus="Commelina" higherTaxonomySource="GBIF" kingdom="Plantae" lsidName="Commelina communis" order="Commelinales" pageId="0" pageNumber="1" phylum="Angiospermae" rank="species" species="communis">
<emphasis italics="true" pageId="0" pageNumber="1">Commelina communis</emphasis>
</taxonomicName>
, 
<taxonomicName class="Monocotyledoneae" family="Poaceae" genus="Arthraxon" higherTaxonomySource="GBIF" kingdom="Plantae" lsidName="Arthraxon hispidus" order="Graminales" pageId="0" pageNumber="1" phylum="Angiospermae" rank="species" species="hispidus">
<emphasis italics="true" pageId="0" pageNumber="1">Arthraxon hispidus</emphasis>
</taxonomicName>
and 
<taxonomicName class="Monocotyledoneae" family="Liliaceae" genus="Ophiopogon" higherTaxonomySource="GBIF" kingdom="Plantae" lsidName="Ophiopogon bodinieri" order="Liliiflorae" pageId="0" pageNumber="1" phylum="Angiospermae" rank="species" species="bodinieri">
