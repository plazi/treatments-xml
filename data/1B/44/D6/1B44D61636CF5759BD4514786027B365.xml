<subSubSection pageId="0" pageNumber="1" type="distribution">
<paragraph pageId="0" pageNumber="1">Distribution.</paragraph>
<paragraph pageId="0" pageNumber="1">
<taxonomicName authorityName="S. Y. Zhang" authorityYear="2021" class="Polychaeta" family="Amaryllidaceae" genus="Lycoris" higherTaxonomySource="CoL" kingdom="Plantae" lsidName="Lycoris wulingensis" order="Phyllodocida" pageId="0" pageNumber="1" phylum="Annelida" rank="species" species="wulingensis">
<emphasis italics="true" pageId="0" pageNumber="1">Lycoris wulingensis</emphasis>
</taxonomicName>
