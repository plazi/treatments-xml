<taxonomicName class="Dicotyledoneae" family="Alangiaceae" genus="Alangium" higherTaxonomySource="GBIF" kingdom="Plantae" lsidName="Alangium chinense" order="Umbelliflorae" pageId="0" pageNumber="1" phylum="Angiospermae" rank="species" species="chinense">
<emphasis italics="true" pageId="0" pageNumber="1">Alangium chinense</emphasis>
</taxonomicName>
