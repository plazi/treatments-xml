<taxonomicName id="4C144D6DC918FFAF7D4FF85D1A8017EE" authority=", USNM" authorityName="USNM" box="[843,1225,1925,1948]" class="Polychaeta" family="Serpulidae" genus="Chitinopomoides" kingdom="Animalia" order="Sabellida" pageId="103" pageNumber="104" phylum="Annelida" rank="species" species="wilsoni">
