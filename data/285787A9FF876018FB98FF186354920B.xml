<taxonomicName id="67FE4D3CFF876018F955FD81658D926F" authority="(Bald.) Halacsy" authorityName="Halacsy. Hayek" authorityYear="1931" baseAuthorityName="Bald." box="[581,899,518,545]" class="Magnoliopsida" family="Asteraceae" genus="Centaurea" kingdom="Plantae" order="Asterales" pageId="27" pageNumber="28" phylum="Tracheophyta" rank="species" species="epirotica">
