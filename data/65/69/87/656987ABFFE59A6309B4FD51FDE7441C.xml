<taxonomicName authorityName="Amyot &amp; Audinet-Serville" authorityYear="1843" box="[227,363,679,701]" class="Insecta" family="Pentatomidae" higherTaxonomySource="GBIF" kingdom="Animalia" order="Hemiptera" pageId="5" pageNumber="228" phylum="Arthropoda" rank="subFamily" subFamily="Edessinae">
