</emphasis>
<taxonomicName id="4C27E3B77E61FFEDFE8171C6DC06FCFE" authority="Mabille, 1888" authorityName="Mabille" authorityYear="1888" box="[382,792,748,773]" class="Insecta" family="Hesperiidae" genus="Anisochoria" kingdom="Animalia" order="Lepidoptera" pageId="19" pageNumber="18" phylum="Arthropoda" rank="species" species="albida">
