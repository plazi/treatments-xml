<quantity id="4CA49B565B6FA93738863247FC74FA0A" box="[921,1008,1390,1415]" metricMagnitude="-3" metricUnit="m" metricValue="1.1" pageId="10" pageNumber="11" unit="mm" value="1.1">1.1 mm</quantity>
