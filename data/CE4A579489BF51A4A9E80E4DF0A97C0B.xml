F. Br., 
<taxonomicName id="8ABF1F2E395601BE73EBB5D66B170B51" authorityName="Skottsb" authorityYear="1937" class="Liliopsida" family="Asteliaceae" genus="Astelia" higherTaxonomySource="GBIF,CoL" kingdom="Plantae" lsidName="" order="Asparagales" pageId="3" pageNumber="80" phylum="Tracheophyta" rank="species" species="rapensis">
