</taxonomicName>
species-group, 
<emphasis id="17BDEA8DFFDAE67DCD2CF99B30A8F989" box="[612,763,1613,1638]" italics="true" pageId="5" pageNumber="266">melancholica</emphasis>
species-group, 
<taxonomicName id="E2C94D1CFFDAE67DCCFDF99B3649F989" authorityName="sensu Richter" authorityYear="1949" box="[949,1050,1613,1638]" class="Insecta" family="Buprestidae" genus="Buprestis" higherTaxonomySource="GBIF" kingdom="Animalia" order="Coleoptera" pageId="5" pageNumber="266" phylum="Arthropoda" rank="species" species="millefolii">
