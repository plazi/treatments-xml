<taxonomicName id="BD60D32F6538B938BF5956BC1F9B805A" authorityName="M. A. Johnson" authorityYear="2017" class="Magnoliopsida" family="Gesneriaceae" genus="Cyrtandra" higherTaxonomySource="CoL" kingdom="Plantae" lsidName="Cyrtandra gregoryi" order="Lamiales" pageId="2" pageNumber="87" phylum="Tracheophyta" rank="species" species="gregoryi">
