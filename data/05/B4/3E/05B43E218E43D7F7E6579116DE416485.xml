<taxonomicName LSID="05B43E21-8E43-D7F7-E657-9116DE416485" authority="LeConte, 1846" authorityName="LeConte" authorityYear="1846" class="Insecta" family="Carabidae" genus="Euryderus" higherTaxonomySource="GBIF,CoL" kingdom="Animalia" lsidName="Euryderus" order="Coleoptera" pageId="684" pageNumber="685" phylum="Arthropoda" rank="genus">Euryderus LeConte, 1846</taxonomicName>
