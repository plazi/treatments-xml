<collectingRegion box="[1142,1224,727,752]" country="Czech Republic" name="Praha" pageId="4" pageNumber="295">Prague</collectingRegion>
, 
<collectingCountry box="[1238,1425,727,752]" name="Czech Republic" pageId="4" pageNumber="295">Czech Republic</collectingCountry>
), specialist on 
<taxonomicName authorityName="C.G. Thomson" authorityYear="1859" box="[297,412,764,789]" class="Insecta" family="Agyrtidae" higherTaxonomySource="GBIF" kingdom="Animalia" order="Coleoptera" pageId="4" pageNumber="295" phylum="Arthropoda" rank="family">Agyrtidae</taxonomicName>
, 
<taxonomicName box="[423,529,764,789]" class="Insecta" family="Silphidae" kingdom="Animalia" order="Coleoptera" pageId="4" pageNumber="295" phylum="Arthropoda" rank="family">Silphidae</taxonomicName>
