<taxonomicName id="46F9DA465334318DA9567CFC812BB23A" class="Pinopsida" family="Pinaceae" genus="Tsuga" higherTaxonomySource="CoL" kingdom="Plantae" lsidName="Tsuga" order="Pinales" pageId="0" pageNumber="35" phylum="Tracheophyta" rank="genus">Tsuga</taxonomicName>
