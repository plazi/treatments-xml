<taxonomicName id="CD5D55C8A5822FA4DD3C5D558F93CD81" class="Pinopsida" family="Pinaceae" genus="Tsuga" higherTaxonomySource="CoL" kingdom="Plantae" lsidName="Tsuga" order="Pinales" pageId="0" pageNumber="35" phylum="Tracheophyta" rank="genus">Tsuga</taxonomicName>
, 
<taxonomicName id="96F4EBA840B7A2B3AE98CA725CB2FC84" class="Magnoliopsida" family="Fagaceae" genus="Fagus" higherTaxonomySource="CoL" kingdom="Plantae" lsidName="Fagus" order="Fagales" pageId="0" pageNumber="35" phylum="Tracheophyta" rank="genus">Fagus</taxonomicName>
