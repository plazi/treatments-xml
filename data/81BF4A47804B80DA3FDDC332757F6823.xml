<taxonomicName id="7D2AC4392FEFAD2127974113598A18F8" class="Pinopsida" family="Pinaceae" genus="Picea" higherTaxonomySource="CoL" kingdom="Plantae" lsidName="Picea" order="Pinales" pageId="0" pageNumber="35" phylum="Tracheophyta" rank="genus">Picea</taxonomicName>
, 
<taxonomicName id="967AE4B1B97BC3AEE88B8C38F22858A5" class="Magnoliopsida" family="Betulaceae" genus="Betula" higherTaxonomySource="CoL" kingdom="Plantae" lsidName="Betula" order="Fagales" pageId="0" pageNumber="35" phylum="Tracheophyta" rank="genus">Betula</taxonomicName>
