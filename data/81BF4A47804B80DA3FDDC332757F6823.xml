<taxonomicName id="729CA78370E85029A894F2C902E6B0D0" class="Pinopsida" family="Pinaceae" genus="Picea" higherTaxonomySource="CoL" kingdom="Plantae" lsidName="Picea" order="Pinales" pageId="0" pageNumber="35" phylum="Tracheophyta" rank="genus">Picea</taxonomicName>
