<quantity id="A75F9B42FF95FF801870FE47FB3AFDB2" box="[1128,1217,511,535]" metricMagnitude="3" metricUnit="m" metricValue="1.3" pageId="6" pageNumber="578" unit="m" value="1300.0">1300 m</quantity>
