<quantity id="4CB39B4DFFC9FFD5FDB8FA78FD720DFB" box="[583,678,1437,1459]" metricMagnitude="-2" metricUnit="m" metricValue="1.23" pageId="11" pageNumber="562" unit="mm" value="12.3">12.3 mm</quantity>
