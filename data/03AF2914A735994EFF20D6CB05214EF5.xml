<taxonomicName id="4C06E381A735994EFC05D75F05BE4979" box="[941,1183,352,378]" class="Arthoniomycetes" family="Arthoniaceae" genus="Arthonia" kingdom="Fungi" order="Arthoniales" pageId="1" pageNumber="184" phylum="Ascomycota" rank="species" species="sampaianae">
