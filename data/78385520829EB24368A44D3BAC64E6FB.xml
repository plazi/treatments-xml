<paragraph id="7CFE19E3A494C67B65ED4D11B4EA35A6" pageId="5" pageNumber="72">
<taxonomicName id="C20D95D01DE7CE255EBBB9EAC3A064D2" class="Sordariomycetes" genus="Dendrostoma" higherTaxonomySource="CoL" kingdom="Fungi" lsidName="Dendrostoma aurorae" order="Diaporthales" pageId="5" pageNumber="72" phylum="Ascomycota" rank="species" species="aurorae">Dendrostoma aurorae</taxonomicName>
