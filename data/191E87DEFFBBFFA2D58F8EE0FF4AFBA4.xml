<specimenCount id="87B1FD41FFBBFFA2D58F8800FF7AFBEC" box="[151,208,1051,1077]" pageId="7" pageNumber="8" type="generic">
<quantity id="564F9B2DFFBBFFA2D58F8800FF66FBEC" box="[151,204,1051,1077]" metricMagnitude="0" metricUnit="m" metricValue="6.0" pageId="7" pageNumber="8" unit="m" value="6.0">6 m</quantity>
.
</specimenCount>
a.s.l., on 
<date id="E5091008FFBBFFA2D42F8800FE58FBEC" box="[311,498,1051,1077]" pageId="7" pageNumber="8" value="2021-01-06">January 6, 2021</date>
