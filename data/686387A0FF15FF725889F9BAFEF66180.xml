<taxonomicName id="27CA4D35FF14FF725C70FF36FEF36180" authority="Rondani, 1868" authorityName="Rondani" authorityYear="1868" class="Insecta" family="Sciomyzidae" genus="Pherbellia" kingdom="Animalia" order="Diptera" pageId="217" pageNumber="218" phylum="Arthropoda" rank="species" species="majuscola">
