<number box="[355,409,1444,1470]" pageId="5" pageNumber="6" value="1.83">1.83</number>
, 
<number box="[421,437,1444,1470]" pageId="5" pageNumber="6" value="8.0">8</number>
), and where the two dark dorsolateral stripes begin: 
<number box="[1050,1108,1444,1470]" pageId="5" pageNumber="6" value="12.5" valueMax="17.0" valueMin="8.0">8–17</number>
(
<number box="[1130,1197,1444,1470]" pageId="5" pageNumber="6" value="11.62">11.62</number>
± 
