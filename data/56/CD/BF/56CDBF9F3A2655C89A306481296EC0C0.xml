<taxonomicName authorityName="Nielson" authorityYear="1982" class="Insecta" family="Cicadellidae" genus="Calodia" higherTaxonomySource="CoL" kingdom="Animalia" lsidName="Calodia" order="Hemiptera" pageId="0" pageNumber="49" phylum="Arthropoda" rank="genus">
