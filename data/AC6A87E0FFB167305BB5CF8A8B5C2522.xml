, and 
<collectionCode id="42D2AE33FFB0673059C5C8458CA52312" box="[743,764,296,323]" country="USA" lsid="urn:lsid:biocol.org:col:15406" name="Harvard University - Arnold Arboretum" pageId="5" pageNumber="187" type="Herbarium">A</collectionCode>
