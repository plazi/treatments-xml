<taxonomicName id="4C2C71FEFFD59F3FFF45FD98FE48AFDA" box="[189,389,1245,1271]" class="Magnoliopsida" family="Linaceae" genus="Linum" kingdom="Plantae" order="Malpighiales" pageId="6" pageNumber="7" phylum="Tracheophyta" rank="species" species="trigynum">
