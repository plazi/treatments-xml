<taxonomicName id="1BC74D1AFFC4FFCEFEC2FA62FD09F9F4" authority="Haliday, 1833: 179" authorityName="Haliday" authorityPageNumber="179" authorityYear="1833" box="[305,724,1517,1540]" class="Insecta" family="Phoridae" genus="Metopina" kingdom="Animalia" order="Diptera" pageId="0" pageNumber="23" phylum="Arthropoda" rank="species" species="galeata">
