<taxonomicName id="9C36A2E5E8859A6F83F9989B0496DD9C" LSID="F8F2F80C-5944-E40E-6D01-CAC8F098721D" authority="L." authorityName="L." class="Magnoliopsida" family="Cucurbitaceae" genus="Momordica" higherTaxonomySource="CoL" kingdom="Plantae" lsidName="Momordica charantia" order="Cucurbitales" pageId="59" pageNumber="60" phylum="Tracheophyta" rank="species" species="charantia">Momordica charantia L.</taxonomicName>
