<emphasis bold="true" box="[151,436,475,501]" pageId="2" pageNumber="3">
Genus 
<taxonomicName authority="Hahn" authorityName="Hahn" box="[234,436,475,501]" class="Insecta" family="Miridae" genus="Pilophorus" kingdom="Animalia" order="Hemiptera" pageId="2" pageNumber="3" phylum="Arthropoda" rank="genus">
