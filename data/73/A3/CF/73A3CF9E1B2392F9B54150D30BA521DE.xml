<taxonomicName LSID="73A3CF9E-1B23-92F9-B541-50D30BA521DE" authority="Sturm, 1826" authorityName="Sturm" authorityYear="1826" class="Insecta" family="Carabidae" genus="Myas" higherTaxonomySource="GBIF,CoL" kingdom="Animalia" lsidName="Myas" order="Coleoptera" pageId="502" pageNumber="503" phylum="Arthropoda" rank="genus">Myas Sturm, 1826</taxonomicName>
