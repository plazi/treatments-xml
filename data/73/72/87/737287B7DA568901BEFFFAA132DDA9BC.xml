<collectingCountry box="[359,460,727,752]" name="Brazil" pageId="2" pageNumber="390">BRAZIL</collectingCountry>
[
<collectingRegion box="[474,537,727,752]" country="Brazil" name="Piaui" pageId="2" pageNumber="390">Piauí</collectingRegion>
