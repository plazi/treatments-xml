<paragraph id="8D86C5A78C1B6914A4C402427CFE773A" pageId="21" pageNumber="22">Ecology.</paragraph>
<paragraph id="55A62D5F3893913258956C54326D24B2" pageId="21" pageNumber="22">
<taxonomicName id="D061A9BA86FB437B765F44100F14BCD0" class="Magnoliopsida" family="Melastomataceae" genus="Miconia" higherTaxonomySource="CoL" kingdom="Plantae" lsidName="Miconia hirtistyla" order="Myrtales" pageId="21" pageNumber="22" phylum="Tracheophyta" rank="species" species="hirtistyla">
