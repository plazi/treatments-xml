<quantity box="[865,1021,1872,1898]" metricMagnitude="2" metricUnit="m" metricValue="9.004999999999999" metricValueMax="17.16" metricValueMin="0.85" pageId="45" pageNumber="46" unit="m" value="900.5" valueMax="1716.0" valueMin="85.0">85 to 1716 m</quantity>
