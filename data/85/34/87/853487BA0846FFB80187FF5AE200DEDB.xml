<number box="[478,569,1469,1495]" pageId="4" pageNumber="55" value="4.15" valueMax="4.7" valueMin="3.6">3.6–4.7</number>
, carapace width 
<number box="[764,852,1469,1495]" pageId="4" pageNumber="55" value="1.6" valueMax="1.7" valueMin="1.5">1.5–1.7</number>
(
<emphasis box="[869,884,1470,1495]" italics="true" pageId="4" pageNumber="55">n</emphasis>
= 
<number box="[915,931,1469,1495]" pageId="4" pageNumber="55" value="8.0">8</number>
