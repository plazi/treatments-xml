<taxonomicName family="Palmae" lsidName="" pageId="8" pageNumber="83" rank="family">Palmae</taxonomicName>
, 
<taxonomicName family="Hypericaceae" lsidName="" pageId="8" pageNumber="83" rank="family">Hypericaceae</taxonomicName>
