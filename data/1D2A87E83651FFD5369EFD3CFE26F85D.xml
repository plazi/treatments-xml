, 
<collectingRegion id="5747F81C3651FFD5321BF869FBC2F879" box="[1042,1132,1966,1992]" country="Tanzania" name="Njombe" pageId="2" pageNumber="378">Njombe</collectingRegion>
and Morogoro (
<location id="905C60253651FFD53326F869FEBFF85C" LSID="urn:lsid:plazi:treatment:1D2A87E83651FFD5369EFD3CFE26F85D:905C60253651FFD53326F869FEBFF85C" country="Tanzania" name="Uzungwa Mountains" pageId="2" pageNumber="378" stateProvince="Njombe">Uzungwa Mountains</location>
) (
<figureCitation id="0DB82A7B3651FFD53721F815FED5F85D" box="[296,379,2002,2028]" captionStart="FIGURES 1â€“13" captionStartId="4.[151,264,1900,1924]" captionTargetBox="[179,1397,185,1875]" captionTargetId="figure-15@4.[179,1409,179,1875]" captionTargetPageId="4" captionText="FIGURES 1â€“13. Dilatapolochrus vikhrevi Tshernyshev gen. et sp.n., holotype, male, external appearance, dorsal view (1); external appearance, lateral view (2); left antenna (3); left anterior tarsus (4); tibia and tarsus of left anterior leg, dorsal view (5); tibia and tarsus of left anterior leg, lateral view (6); left leg, dorsal view (7); left leg, ventral view (8); pygidium (9); ultimate abdominal ventrite (10); aedeagus, dorsal view (11); tegmen (12); distribution map (13). Scale bar 0.5 mm." figureDoi="http://doi.org/10.5281/zenodo.4736851" httpUri="https://zenodo.org/record/4736851/files/figure.png" pageId="2" pageNumber="378">Fig. 13</figureCitation>
