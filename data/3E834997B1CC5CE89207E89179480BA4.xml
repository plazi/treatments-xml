<taxonomicName id="0ED11F0FFFE27A8ED19F8A4C4BD5D82F" authorityName="Bates" authorityYear="1871" class="Insecta" family="Carabidae" genus="Abaris" higherTaxonomySource="GBIF,CoL" kingdom="Animalia" lsidName="" order="Coleoptera" pageId="493" pageNumber="494" phylum="Arthropoda" rank="species" species="tachypoides">
