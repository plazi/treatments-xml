<taxonomicName id="4EB642567EC00EE365E53CFD2FBC62E4" LSID="C3DCCF37-5FE5-51D0-B399-FFC37A374542" authority="Gideon F. Sm. &amp; N. R. Crouch" authorityName="Gideon F. Sm. &amp; N. R. Crouch" authorityYear="2010" class="Liliopsida" family="Asphodelaceae" genus="Aloe" higherTaxonomySource="CoL" kingdom="Plantae" lsidName="Aloe nicholsii" order="Asparagales" pageId="0" pageNumber="1" phylum="Tracheophyta" rank="species" species="nicholsii">Aloe nicholsii Gideon F.Sm. &amp; N.R.Crouch</taxonomicName>
