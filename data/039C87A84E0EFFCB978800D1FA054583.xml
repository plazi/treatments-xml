(
<figureCitation id="130E2A3B4E0EFFC8978000ECFF6F47B0" box="[159,252,690,715]" captionStart="FIGURES 10 – 18" captionStartId="11.[151,264,1953,1976]" captionTargetBox="[162,1426,202,1924]" captionTargetId="figure@11.[155,1431,193,1932]" captionTargetPageId="11" captionText="FIGURES 10 – 18. Habitus. 10 Amydetes caetite sp. nov.. 11 Amydetes lucernula sp. nov.. 12 Amydetes plaumanni sp. nov.. 13 Amydetes bellorum sp. nov.. 14 Amydetes itatiaia sp. nov.. 15 Amydetes vivianii sp. nov.. 16 Amydetes marajoara sp. nov.. 17 Amydetes vagalume sp. nov.. 18 Amydetes luzecu sp. nov. Scale. 2 mm." httpUri="https://zenodo.org/record/252105/files/figure.png" pageId="41" pageNumber="242">
Figs. 
<number id="3DFD24994E0EFFC897C100EDFF6F47B0" box="[222,252,691,715]" pageId="41" pageNumber="242" value="18.4">18</number>
</figureCitation>
, 
<figureCitation id="130E2A3B4E0EFFC8961700EDFEB547B0" box="[264,294,691,715]" captionStart="FIGURES 23 – 40" captionStartId="13.[151,264,1758,1781]" captionTargetBox="[160,1429,204,1726]" captionTargetId="figure@13.[151,1436,193,1737]" captionTargetPageId="13" captionText="FIGURES 23 – 40. Frons shape drawings 23 Amydetes agnita. 24 A. apicalis. 25 A. discissa. 26 A. fastigiata. 27 A. fucata. 28 A. lucioloides. 29 Amydetes solaris sp. nov.. 30 Amydetes goiana sp. nov.. 31 Amydetes manezinha sp. nov.. 32 Amydetes caetite sp. nov.. 33 Amydetes lucernula sp. nov.. 34 Amydetes plaumanni sp. nov.. 35 Amydetes bellorum sp. nov.. 36 Amydetes itatiaia sp. nov.. 37 Amydetes vivianii sp. nov.. 38 Amydetes marajoara sp. nov.. 39 Amydetes vagalume sp. nov.. 40 Amydetes luzecu sp. nov. Scale. 250 µm. DBA = distance between antennifers antennifers. DBAS = distance between antennal sockets." httpUri="https://zenodo.org/record/252107/files/figure.png" pageId="41" pageNumber="242">40</figureCitation>
, 
<number id="3DFD24994E0EFFC8962D00ECFEE847B0" box="[306,379,690,715]" pageId="41" pageNumber="242" value="59.78">59, 78</number>
, 96, 124, 142, 216– 
<number id="3DFD24994E0EFFC8954500ECFD1747B0" box="[602,644,690,715]" pageId="41" pageNumber="242" value="219.0">219</number>
)
