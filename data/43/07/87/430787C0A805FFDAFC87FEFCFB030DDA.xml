<collectorName box="[861,981,638,659]" pageId="29" pageNumber="29">George N.</collectorName>
<taxonomicName authority="LeCroy, 2012" authorityName="LeCroy" authorityYear="2012" box="[988,1097,638,659]" genus="Lawrence" pageId="29" pageNumber="113" rank="genus" status="G.N.">Lawrence</taxonomicName>
