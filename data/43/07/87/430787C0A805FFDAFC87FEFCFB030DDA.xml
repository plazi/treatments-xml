<emphasis bold="true" box="[884,1061,521,542]" pageId="29" pageNumber="29">
<specimenCode box="[884,1061,521,542]" collectionCode="AMNH" country="USA" httpUri="http://biocol.org/urn:lsid:biocol.org:col:34925" lsid="urn:lsid:biocol.org:col:34925" name="American Museum of Natural History" pageId="29" pageNumber="29">AMNH 41303</specimenCode>
