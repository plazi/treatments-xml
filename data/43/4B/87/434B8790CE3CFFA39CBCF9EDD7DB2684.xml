<taxonomicName box="[741,795,852,873]" class="Pinopsida" family="Pinaceae" genus="Pinus" kingdom="Plantae" order="Pinales" pageId="11" pageNumber="354" phylum="Tracheophyta" rank="genus">
<emphasis box="[741,795,852,873]" italics="true" pageId="11" pageNumber="354">Pinus</emphasis>
</taxonomicName>
L., 
<taxonomicName box="[837,922,852,873]" class="Pinopsida" family="Pinaceae" kingdom="Plantae" order="Pinales" pageId="11" pageNumber="354" phylum="Tracheophyta" rank="family">Pinaceae</taxonomicName>
) (
<bibRefCitation author="Schaeffer, C." box="[942,1091,852,873]" journalOrPublisher="Brooklyn Institute Museum, Science Bulletin" pageId="11" pageNumber="354" pagination="221 - 253" part="1" refId="ref12538" refString="Schaeffer, C. 1906. On new and known genera and species of the family Chrysomelidae. Brooklyn Institute Museum, Science Bulletin 1 (9): 221 - 253." title="On new and known genera and species of the family Chrysomelidae" type="journal article" year="1906">Schaeffer 1906</bibRefCitation>
; 
<bibRefCitation author="Wilcox, J. A." journalOrPublisher="New York State Museum and Science Service Bulletin" pageId="11" pageNumber="354" pagination="1 - 226" part="400" refId="ref12891" refString="Wilcox, J. A. 1965. A synopsis of the North American Galerucinae (Coleoptera: Chrysomelidae). New York State Museum and Science Service Bulletin 400: 1 - 226." title="A synopsis of the North American Galerucinae (Coleoptera: Chrysomelidae)" type="journal article" year="1965">Wilcox 1965</bibRefCitation>
; 
<bibRefCitation author="Clark, S. M. &amp; D. G. LeDoux &amp; T. N. Seeno &amp; E. G. Riley &amp; A. J. Gilbert &amp; J. M. Sullivan" box="[747,916,879,900]" journalOrPublisher="The Coleopterists Society Special Publication" pageId="11" pageNumber="354" pagination="1 - 476" part="2" refId="ref11983" refString="Clark, S. M., D. G. LeDoux, T. N. Seeno, E. G. Riley, A. J. Gilbert, and J. M. Sullivan. 2004. Host plants of leaf beetle species occurring in the United States and Canada (Coleoptera: Megalopodidae, Orsodacnidae, Chrysomelidae, excluding Bruchinae). The Coleopterists Society Special Publication 2: 1 - 476." title="Host plants of leaf beetle species occurring in the United States and Canada (Coleoptera: Megalopodidae, Orsodacnidae, Chrysomelidae, excluding Bruchinae)" type="journal article" year="2004">
Clark 
