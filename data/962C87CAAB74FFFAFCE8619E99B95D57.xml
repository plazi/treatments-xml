<paragraph id="1E3A36DCAB77FFFBFD2664D49A1E5EC9" blockId="42.[166,695,182,1187]" box="[261,600,182,206]" pageId="42" pageNumber="43">
Genus 
<taxonomicName id="D9854D5FAB77FFFBFD7A64D59A1E5EC9" authority="Moure" authorityName="Moure" authorityYear="1943" box="[345,600,182,206]" class="Insecta" family="Halictidae" genus="Megommation" kingdom="Animalia" order="Hymenoptera" pageId="42" pageNumber="43" phylum="Arthropoda" rank="genus">
