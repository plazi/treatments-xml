<taxonomicName id="D9854D5FAB77FFFBFDB060A49A005AD9" box="[403,582,1222,1245]" class="Insecta" family="Halictidae" genus="Micrommation" kingdom="Animalia" order="Hymenoptera" pageId="42" pageNumber="43" phylum="Arthropoda" rank="subGenus" subGenus="Cleptommation">
