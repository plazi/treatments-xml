7. 
<taxonomicName id="4C4A4D6AFFEBFFA74AB281E0FED5FC2F" box="[179,311,980,1004]" class="Aves" family="Thraupidae" genus="Asemospiza" kingdom="Animalia" order="Passeriformes" pageId="5" pageNumber="334" phylum="Chordata" rank="genus" status="new genus">
