<taxonomicName class="Magnoliopsida" family="Aceraceae" genus="Swertia" higherTaxonomySource="CoL" kingdom="Plantae" lsidName="" order="Gentianales" pageId="0" pageNumber="1" phylum="Tracheophyta" rank="family">Aceraceae</taxonomicName>
