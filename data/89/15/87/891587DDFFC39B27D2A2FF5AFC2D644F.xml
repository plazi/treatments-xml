<subSubSection box="[151,454,447,472]" pageId="5" pageNumber="498" type="materials_examined">
<paragraph blockId="5.[151,1437,447,1264]" box="[151,454,447,472]" pageId="5" pageNumber="498">
<emphasis bold="true" box="[151,377,447,472]" pageId="5" pageNumber="498">Material examined</emphasis>
