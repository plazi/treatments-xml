<paragraph blockId="19.[151,1436,707,1920]" pageId="19" pageNumber="466">
<emphasis bold="true" box="[151,392,707,732]" pageId="19" pageNumber="466">
<collectionCode box="[151,253,707,732]" pageId="19" pageNumber="466">QUEEN</collectionCode>
