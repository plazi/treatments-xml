<taxonomicName id="6B8B4D09FFD3FFE42500F89272C80716" authority="Kondo" authorityName="Kondo. A" authorityYear="2011" box="[308,695,1794,1816]" class="Insecta" family="Coccidae" genus="Foldilecanium" higherTaxonomySource="GBIF" kingdom="Animalia" order="Hemiptera" pageId="9" pageNumber="8" phylum="Arthropoda" rank="species" species="multisetosus">
