<bibRefCitation id="2424D1955190B0BF488A45FB50478613" author="Noyes, JS" journalOrPublisher="Vancouver and The Natural History Museum, London" pageId="20" pageNumber="69" title="Interactive catalogue of World Chalcidoidea, second edition." year="2002">Noyes 2002</bibRefCitation>
), 
<taxonomicName id="F95EF0E7BFBDE700A96B29AFFD4BAACF" class="Insecta" family="Coccidae" genus="Ceroplastes" higherTaxonomySource="CoL" kingdom="Animalia" lsidName="Ceroplastes rubens" order="Hemiptera" pageId="7" pageNumber="56" phylum="Arthropoda" rank="species" species="rubens">Ceroplastes rubens</taxonomicName>
