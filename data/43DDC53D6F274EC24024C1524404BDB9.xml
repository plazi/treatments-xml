<taxonomicName id="45693B6EE537C127351EE9171CD0B32D" class="Magnoliopsida" family="Aquifoliaceae" genus="Ilex" higherTaxonomySource="CoL" kingdom="Plantae" lsidName="Ilex purpurea" order="Aquifoliales" pageId="7" pageNumber="56" phylum="Tracheophyta" rank="species" species="purpurea">Ilex purpurea</taxonomicName>
