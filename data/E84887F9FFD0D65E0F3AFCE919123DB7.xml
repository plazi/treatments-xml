<taxonomicName id="A7E14D6CFFD0D65E0335FB061B333312" authorityName="Dobson" authorityYear="1876" box="[2431,2588,1258,1291]" class="Mammalia" family="Miniopteridae" genus="Miniopterus" kingdom="Animalia" order="Chiroptera" pageId="6" pageNumber="697" phylum="Chordata" rank="species" species="pusillus">M. pusillus</taxonomicName>
