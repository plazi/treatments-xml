<geoCoordinate id="2770B788C8100B5C8461400634AEA945" direction="north" orientation="latitude" precision="1" value="6.5688887">6°34'8.0&quot;N</geoCoordinate>
, 
<geoCoordinate id="64AF0B660F288BD1E6D2B0203F86955B" direction="east" orientation="longitude" precision="1" value="100.19567">100°11'44.4&quot;E</geoCoordinate>
