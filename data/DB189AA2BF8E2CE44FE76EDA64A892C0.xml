<normalizedToken id="724B7FAFDB35890A8FE75BCA347B17C3" originalValue="Teilfrüchte" pageId="null" pageNumber="83">Teilfruechte</normalizedToken>
stets glatt und 
<normalizedToken id="823FFAE0E0CE756DDF14FF17F2039461" originalValue="glänzend" pageId="null" pageNumber="83">glaenzend</normalizedToken>
, 
<normalizedToken id="4081FB8B82BE8506FF50AC4F4236BC39" originalValue="weiß" pageId="null" pageNumber="83">weiss</normalizedToken>
; Pflanze 
<normalizedToken id="7C25B7497753A905A227A7820C9F28BC" originalValue="mehrjährig" pageId="null" pageNumber="83">mehrjaehrig</normalizedToken>
