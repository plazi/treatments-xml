, gelbbrauner 
<normalizedToken id="A69EA4B448E40D3CAF18990EC69B44E0" originalValue="Oberfläche" pageId="null" pageNumber="83">Oberflaeche</normalizedToken>
; Pflanze 1 
<normalizedToken id="0069F3393E920B77BB3469EB647A140C" originalValue="jährig" pageId="null" pageNumber="83">jaehrig</normalizedToken>
</td>
