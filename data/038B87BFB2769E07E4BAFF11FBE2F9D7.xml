<taxonomicName id="4C224D2AB2769E07E641FB75FD60FA92" box="[620,747,1267,1291]" class="Insecta" family="Noctuidae" genus="Cirrhia" higherTaxonomySource="GBIF" kingdom="Animalia" order="Lepidoptera" pageId="3" pageNumber="63" phylum="Arthropoda" rank="species" species="spalvota">
