<taxonomicName id="39934D7BFFD1FF8FFE9DFEE7FDFC7C74" authorityName="Lonsdale &amp; Marshall" authorityYear="2007" box="[297,535,313,337]" class="Insecta" family="Clusiidae" genus="Heteromeringia" kingdom="Animalia" order="Diptera" pageId="25" pageNumber="62" phylum="Arthropoda" rank="species" species="zophina">
