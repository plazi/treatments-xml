<taxonomicName id="B7BE8B979C5AFFF1FEA2F806E954F858" authorityName="Horton &amp; Thurston" authorityYear="2009" box="[288,553,2009,2032]" class="Malacostraca" family="Hirondelleidae" genus="Hirondellea" kingdom="Animalia" order="Amphipoda" pageId="5" pageNumber="438" phylum="Arthropoda" rank="species" species="sindhusagar" status="sp. nov.">
