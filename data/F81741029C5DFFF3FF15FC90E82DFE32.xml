<taxonomicName id="B7BE8B979C59FFF2FEA2F861E954F87D" authorityName="Horton &amp; Thurston" authorityYear="2009" box="[288,553,1982,2005]" class="Malacostraca" family="Hirondelleidae" genus="Hirondellea" kingdom="Animalia" order="Amphipoda" pageId="6" pageNumber="439" phylum="Arthropoda" rank="species" species="sindhusagar" status="sp. nov.">
