(C–D, G–H); 
<number box="[1027,1039,1973,1995]" pageId="14" pageNumber="415" value="3.0">3</number>
= 
<quantity box="[1060,1113,1973,1995]" metricMagnitude="-3" metricUnit="m" metricValue="1.0" pageId="14" pageNumber="415" unit="mm" value="1.0">1mm</quantity>
(A–B).
</paragraph>
