<taxonomicName authorityName="Linnaeus" authorityYear="1753" box="[392,551,364,389]" genus="Thea" kingdom="Animalia" pageId="19" pageNumber="20" rank="species" species="sinensis">
<emphasis box="[392,551,364,389]" italics="true" pageId="19" pageNumber="20">Thea sinensis</emphasis>
</taxonomicName>
) (
<bibRefCitation author="Miyazaki, M. &amp; Kudo, I." box="[576,868,364,390]" pageId="19" pageNumber="20" pagination="1 - 246" refId="ref31206" refString="Miyazaki, M. &amp; Kudo, I. (1988) Bibliography and host plant catalogue of Thysanoptera of Japan. Miscellaneous Publication of the National Institute of Agro-Environmental Sciences, 3, 1 - 246." type="journal article" year="1988">
<collectingRegion box="[576,688,364,390]" country="Japan" name="Miyazaki" pageId="19" pageNumber="20">Miyazaki</collectingRegion>
