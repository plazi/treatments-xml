<taxonomicName id="4C779FC9FFEDFFC1FC1EFF14FBCEADDF" authorityName="Mirshamsi &amp; Marusik" authorityYear="2013" box="[996,1117,177,201]" class="Arachnida" family="Hersiliidae" genus="Duninia" kingdom="Animalia" order="Araneae" pageId="14" pageNumber="1460" phylum="Arthropoda" rank="species" species="darvishi">D. darvishi</taxonomicName>
