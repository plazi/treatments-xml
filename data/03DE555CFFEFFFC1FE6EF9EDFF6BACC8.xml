, 
<taxonomicName id="4C779FC9FFEDFFC1FDE1FF71FD6EADFA" box="[539,765,212,236]" class="Arachnida" family="Hersiliidae" genus="Hersiliola" kingdom="Animalia" order="Araneae" pageId="14" pageNumber="1460" phylum="Arthropoda" rank="species" species="sternbergsi">
