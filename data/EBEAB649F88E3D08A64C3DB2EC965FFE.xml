<taxonomicName id="BCA1B983580A12E7478448607A2AFF55" class="Magnoliopsida" family="Ehretiaceae" genus="Tiquilia" higherTaxonomySource="CoL" kingdom="Plantae" lsidName="Tiquilia hispidissima" order="Boraginales" pageId="9" pageNumber="96" phylum="Tracheophyta" rank="species" species="hispidissima">Tiquilia hispidissima</taxonomicName>
