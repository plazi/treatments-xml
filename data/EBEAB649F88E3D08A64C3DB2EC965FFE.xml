<taxonomicName id="D87F04AEA7F0E267749ED99925F67FAC" class="Magnoliopsida" family="Fabaceae" genus="Psorothamnus" higherTaxonomySource="CoL" kingdom="Plantae" lsidName="Psorothamnus fremontii" order="Fabales" pageId="9" pageNumber="96" phylum="Tracheophyta" rank="species" species="fremontii">Psorothamnus fremontii</taxonomicName>
