<subSubSection pageId="0" pageNumber="1" type="diagnosis">
<paragraph pageId="0" pageNumber="1">Diagnosis.</paragraph>
<paragraph pageId="0" pageNumber="1">
<taxonomicName class="Sordariomycetes" genus="Dendrostoma" higherTaxonomySource="CoL" kingdom="Fungi" lsidName="Dendrostoma istriacum" order="Diaporthales" pageId="0" pageNumber="1" phylum="Ascomycota" rank="species" species="istriacum">
