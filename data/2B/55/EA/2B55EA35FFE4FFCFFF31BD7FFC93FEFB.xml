<collectingCountry box="[377,502,1122,1145]" name="Botswana" pageId="9" pageNumber="8">Botswana</collectingCountry>
, 
<collectingCountry box="[513,809,1122,1146]" name="South Africa" pageId="9" pageNumber="8">Republic of South Africa</collectingCountry>
(
<collectingRegion box="[823,932,1122,1146]" country="South Africa" name="Gauteng" pageId="9" pageNumber="8">Gauteng</collectingRegion>
, KwaZulu/Natal, 
<collectingRegion box="[1148,1258,1122,1146]" country="South Africa" name="Limpopo" pageId="9" pageNumber="8">Limpopo</collectingRegion>
, 
<collectingRegion box="[1269,1436,1122,1146]" country="South Africa" name="Mpumalanga" pageId="9" pageNumber="8">Mpumalanga</collectingRegion>
, 
<collectingRegion box="[192,379,1154,1178]" country="South Africa" name="Northern Cape" pageId="9" pageNumber="8">Northern Cape</collectingRegion>
, and 
<collectingRegion box="[443,585,1154,1178]" country="South Africa" name="North West" pageId="9" pageNumber="8">North West</collectingRegion>
Provinces), 
<collectingCountry box="[734,865,1154,1178]" name="Swaziland" pageId="9" pageNumber="8">Swaziland</collectingCountry>
, 
<collectingCountry box="[876,1007,1154,1178]" name="Zimbabwe" pageId="9" pageNumber="8">Zimbabwe</collectingCountry>
