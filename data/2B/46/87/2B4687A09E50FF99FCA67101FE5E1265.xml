<materialsCitation ID-GBIF-Occurrence="3059739149" collectingDate="1901-03" collectionCode="AMNH" elevation="2591" pageId="85" pageNumber="85" specimenCode="AMNH 727970, AMNH 727971" specimenCount="2" typeStatus="lectotype">
