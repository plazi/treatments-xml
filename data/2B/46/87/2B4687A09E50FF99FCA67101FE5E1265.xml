<emphasis bold="true" pageId="85" pageNumber="85">
<specimenCode collectionCode="AMNH" country="USA" httpUri="http://biocol.org/urn:lsid:biocol.org:col:34925" lsid="urn:lsid:biocol.org:col:34925" name="American Museum of Natural History" pageId="85" pageNumber="85">AMNH 727971</specimenCode>
</emphasis>
, adult male, 
<date box="[386,537,450,472]" pageId="85" pageNumber="85" value="1901-03">
<collectingDate box="[386,537,450,472]" pageId="85" pageNumber="85" value="1901-03">March 1901</collectingDate>
