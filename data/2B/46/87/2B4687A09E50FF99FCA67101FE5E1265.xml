<collectionCode box="[366,459,243,264]" country="USA" httpUri="http://biocol.org/urn:lsid:biocol.org:col:34925" lsid="urn:lsid:biocol.org:col:34925" name="American Museum of Natural History" pageId="85" pageNumber="85">AMNH</collectionCode>
