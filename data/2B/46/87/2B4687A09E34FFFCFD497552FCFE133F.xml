<date box="[767,1085,932,954]" pageId="48" pageNumber="48" value="1928-02-04" valueMax="1928-03-13" valueMin="1928-02-04">
<collectingDate box="[767,1085,932,954]" pageId="48" pageNumber="48" value="1928-02-04" valueMax="1928-03-13" valueMin="1928-02-04">4 Februaryâ€“13 March 1928</collectingDate>
