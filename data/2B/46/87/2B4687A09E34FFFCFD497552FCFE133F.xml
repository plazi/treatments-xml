<materialsCitation ID-GBIF-Occurrence="3059738870" collectingDate="1928-02-04" collectingDateMax="1928-03-13" collectingDateMin="1928-02-04" collectionCode="AMNH, MCZ" collectorName="A. W. Anthony. This" pageId="48" pageNumber="48" specimenCode="AMNH 398741, 398743-398752" specimenCount="27" specimenCount-female="10" typeStatus="paratype">
