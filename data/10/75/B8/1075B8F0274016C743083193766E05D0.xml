<taxonomicName class="Insecta" family="Ulidiidae" genus="Timia" higherTaxonomySource="CoL" kingdom="Animalia" lsidName="Timia erythrocephala" order="Diptera" pageId="1" pageNumber="120" phylum="Arthropoda" rank="species" species="erythrocephala">Timia erythrocephala</taxonomicName>
