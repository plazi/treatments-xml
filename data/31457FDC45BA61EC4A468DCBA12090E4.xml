<taxonomicName id="77EBC67E7BDBBBF2677E4B5A08CC93E3" class="Insecta" family="Curculionidae" genus="Parazygops" higherTaxonomySource="GBIF,CoL" kingdom="Animalia" lsidName="Parazygops" order="Coleoptera" pageId="41" pageNumber="92" phylum="Arthropoda" rank="genus">
