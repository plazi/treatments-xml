<taxonomicName id="96F7AF985F63A902FD88D3BD2A24F923" authorityName="A. P. Tiwari &amp; Chorghe" authorityYear="2020" box="[629,895,1683,1705]" class="Liliopsida" family="Poaceae" genus="Parahyparrhenia" kingdom="Plantae" order="Poales" pageId="9" pageNumber="256" phylum="Tracheophyta" rank="species" species="khannae">
