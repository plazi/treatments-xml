<paragraph id="E939A14CFFC6FFD6FF37FE0FFDFF7482" blockId="13.[151,1436,151,645]" pageId="13" pageNumber="40">
<taxonomicName id="2E86DACFFFC6FFD6FF37FE0FFE6D77F2" box="[199,481,476,501]" class="Insecta" family="Syrphidae" genus="Sphiximorpha" kingdom="Animalia" order="Diptera" pageId="13" pageNumber="40" phylum="Arthropoda" rank="species" species="euprosopa">
