<specimenCount id="9D74FD09321C9807FCE9119FFCF1FF76" box="[822,845,152,175]" pageId="23" pageNumber="80" type="male">♂</specimenCount>
, pinned, // “53946” [blue label, handwritten] // “ 
<taxonomicName id="4C724D03321C9807FF7C11BBFD8FFF0C" authority="Suffrian, 1866" authorityName="Suffrian" authorityYear="1866" box="[163,563,188,213]" class="Insecta" family="Chrysomelidae" genus="Metallactus" higherTaxonomySource="GBIF" kingdom="Animalia" order="Coleoptera" pageId="23" pageNumber="80" phylum="Arthropoda" rank="species" species="spilotus">
