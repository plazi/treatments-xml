, 
<taxonomicName baseAuthorityName="Gerstaecker" baseAuthorityYear="1885" box="[1184,1345,657,683]" class="Insecta" family="Myrmeleontidae" genus="Glenoleon" kingdom="Animalia" order="Neuroptera" pageId="156" pageNumber="157" phylum="Arthropoda" rank="species" species="osmyloides">G. osmyloides</taxonomicName>
, 
<taxonomicName baseAuthorityName="Rambur" baseAuthorityYear="1842" class="Insecta" family="Myrmeleontidae" genus="Myrmeleon" kingdom="Animalia" order="Neuroptera" pageId="156" pageNumber="157" phylum="Arthropoda" rank="species" species="pulchellus">G. pulchellus</taxonomicName>
