<subSubSection pageId="156" pageNumber="157" type="biology_ecology">
<paragraph blockId="156.[151,1437,153,1835]" pageId="156" pageNumber="157">
<emphasis bold="true" box="[199,295,728,755]" pageId="156" pageNumber="157">Biology.</emphasis>
<taxonomicName authorityName="Machado &amp; Oswald" authorityYear="2020" baseAuthorityName="Esben-Petersen" baseAuthorityYear="1923" box="[301,521,729,755]" class="Insecta" family="Myrmeleontidae" genus="Glenoleon" kingdom="Animalia" order="Neuroptera" pageId="156" pageNumber="157" phylum="Arthropoda" rank="species" species="froggatti">
<emphasis box="[301,521,729,755]" italics="true" pageId="156" pageNumber="157">Glenoleon froggatti</emphasis>
</taxonomicName>
and 
<taxonomicName baseAuthorityName="Rambur" baseAuthorityYear="1842" box="[575,723,729,755]" class="Insecta" family="Myrmeleontidae" genus="Myrmeleon" kingdom="Animalia" order="Neuroptera" pageId="156" pageNumber="157" phylum="Arthropoda" rank="species" species="pulchellus">
