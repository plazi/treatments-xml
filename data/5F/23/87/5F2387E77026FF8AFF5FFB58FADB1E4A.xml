<subSubSection pageId="40" pageNumber="41" type="etymology">
<paragraph blockId="40.[151,1437,153,1655]" pageId="40" pageNumber="41">
<emphasis bold="true" box="[199,328,1161,1187]" pageId="40" pageNumber="41">Etymology</emphasis>
