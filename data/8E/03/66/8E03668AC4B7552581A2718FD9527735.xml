<taxonomicName baseAuthorityName="Obenberger" baseAuthorityYear="1928" class="Insecta" family="Buprestidae" genus="Bilyaxia" higherTaxonomySource="GBIF,CoL" kingdom="Animalia" lsidName="" order="Coleoptera" pageId="21" pageNumber="38" phylum="Arthropoda" rank="species" species="cordillerae" subGenus="Bilyaxia">
