<taxonomicName baseAuthorityName="Reed" baseAuthorityYear="1873" class="Insecta" family="Buprestidae" genus="Bilyaxia" higherTaxonomySource="GBIF,CoL" kingdom="Animalia" lsidName="" order="Coleoptera" pageId="21" pageNumber="38" phylum="Arthropoda" rank="species" species="obscurata" subGenus="Bilyaxia">
