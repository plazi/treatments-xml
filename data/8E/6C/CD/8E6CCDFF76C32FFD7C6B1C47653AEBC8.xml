(
<bibRefCitation author="Lawrence, GN" journalOrPublisher="Ibis" pageId="10" pageNumber="187" pagination="383 - 387" title="Descriptions of five new species of American birds." url="10.1111/j.1474-919x.1875.tb05985.x" volume="5" year="1875">Lawrence 1875</bibRefCitation>
