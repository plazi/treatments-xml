<taxonomicName id="4C4DA1EA321D534DFF2F3807FE1DE810" authorityName="Bosser &amp; J. Gueho" authorityYear="2002" box="[151,400,1632,1649]" class="Liliopsida" family="Pandanaceae" genus="Pandanus" kingdom="Plantae" order="Pandanales" pageId="2" pageNumber="241" phylum="Tracheophyta" rank="species" species="pseudomontanus">
