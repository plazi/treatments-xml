<taxonomicName id="4C4DA1EA321D534DFC723852FB15E827" box="[970,1176,1589,1606]" class="Liliopsida" family="Pandanaceae" genus="Pandanus" kingdom="Plantae" order="Pandanales" pageId="2" pageNumber="241" phylum="Tracheophyta" rank="species" species="microcarpus">
