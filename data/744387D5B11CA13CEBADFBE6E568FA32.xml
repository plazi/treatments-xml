(Branch 
<number id="4A2224E4B11CA13CEE67FB72E5F2FB3E" box="[1373,1432,1187,1211]" pageId="16" pageNumber="467" value="1998.0">1998</number>
; 
<bibRefCitation id="987B4B32B11CA13CEBADFB17E14FFB5A" author="Griffin" box="[151,293,1222,1247]" pageId="16" pageNumber="467" refString="Griffin, M. (2003) Annotated Checklist and Provisional National Conservation Status of Namibian Reptiles. Namibia Scientific Society, Windhoek, [ii] + 169 pp." type="book" year="2003">
Griffin 
<number id="4A2224E4B11CA13CEBD1FB16E14FFB5A" box="[235,293,1223,1247]" pageId="16" pageNumber="467" value="2003.0">2003</number>
</bibRefCitation>
