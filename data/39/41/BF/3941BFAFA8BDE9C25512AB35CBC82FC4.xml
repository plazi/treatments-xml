<taxonomicName LSID-HNS="urn:lsid:biosci.ohio-state.edu:osuc_concepts:181900" class="Insecta" family="Formicidae" genus="Pheidole" higherTaxonomySource="CoL" kingdom="Animalia" lsidName="Pheidole mera Wilson" lsidName-HNS="Pheidole mera Wilson" order="Hymenoptera" pageNumber="452" phylum="Arthropoda" rank="species" species="mera">Pheidole mera</taxonomicName>
