<taxonomicName LSID-HNS="urn:lsid:biosci.ohio-state.edu:osuc_concepts:181977" class="Insecta" family="Formicidae" genus="Pheidole" higherTaxonomySource="CoL" kingdom="Animalia" lsidName="Pheidole torosa Wilson" lsidName-HNS="Pheidole torosa Wilson" order="Hymenoptera" pageNumber="598" phylum="Arthropoda" rank="species" species="torosa">torosa</taxonomicName>
