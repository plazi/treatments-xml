<quantity box="[1062,1146,1089,1115]" metricMagnitude="3" metricUnit="m" metricValue="3.0" metricValueMax="4.0" metricValueMin="2.0" pageId="20" pageNumber="21" unit="km" value="3.0" valueMax="4.0" valueMin="2.0">2–4 km</quantity>
S. of 
<location LSID="urn:lsid:plazi:treatment:396B7E7CFFD13B4D7595FD3BC6E9F956:B41D99B1FFD73B4D71BBFBCFC754FBB2" box="[1209,1291,1089,1115]" country="Chile" name="Vicuna" pageId="20" pageNumber="21">Vicuña</location>
, 
