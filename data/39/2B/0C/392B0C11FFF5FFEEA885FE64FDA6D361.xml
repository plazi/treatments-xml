<caption httpUri="https://zenodo.org/record/236820/files/figure.png" pageId="14" pageNumber="415" targetBox="[162,1435,206,1111]" targetPageId="14">
<paragraph blockId="14.[151,1436,1133,1186]" pageId="14" pageNumber="415">
<emphasis bold="true" box="[151,274,1133,1155]" pageId="14" pageNumber="415">FIGURE 5.</emphasis>
<taxonomicName box="[280,451,1133,1155]" class="Insecta" family="Mantispidae" genus="Plega" kingdom="Animalia" order="Neuroptera" pageId="14" pageNumber="415" phylum="Arthropoda" rank="species" species="fasciatella">
