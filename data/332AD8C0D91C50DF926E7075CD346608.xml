<taxonomicName id="B26430F1C7486417D7913C6699CD1B24" authority="Kriebel, 2016" authorityName="Kriebel" authorityYear="2016" baseAuthorityName="Kriebel" baseAuthorityYear="2016" class="Magnoliopsida" family="Melastomataceae" genus="Conostegia" higherTaxonomySource="GBIF" kingdom="Plantae" lsidName="Conostegia jefensis" order="Myrtales" pageId="193" pageNumber="194" phylum="Tracheophyta" rank="species" species="jefensis" status="comb. nov.">
