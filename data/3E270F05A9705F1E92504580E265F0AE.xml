<taxonomicName id="4DB643A530871C2F35B884033A4C63AD" authorityName="Gomez-Zap., Haelew. &amp; Aime" authorityYear="2021" class="Leotiomycetes" family="Clavicipitaceae" genus="Trochila" kingdom="Fungi" lsidName="Trochila urediniophila" order="Helotiales" pageId="0" pageNumber="21" phylum="Ascomycota" rank="species" species="urediniophila">
