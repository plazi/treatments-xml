<taxonomicName id="00C4A774C664DA5E6F54F386E174BF81" authorityName="Arthur" authorityYear="1917" baseAuthorityName="Castagne" class="Pucciniomycetes" family="Phakopsoraceae" genus="Cerotelium" higherTaxonomySource="GBIF" kingdom="Fungi" lsidName="Cerotelium fici" order="Pucciniales" pageId="0" pageNumber="21" phylum="Basidiomycota" rank="species" species="fici">
