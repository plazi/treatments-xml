<taxonomicName id="4C2033D1FFD7FF9CFEBDF8B83B85F8B5" authority="Louzada &amp; Wand." authorityName="Louzada &amp; Wand." box="[358,746,1894,1917]" class="Liliopsida" family="Bromeliaceae" genus="Orthophytum" kingdom="Plantae" order="Poales" pageId="20" pageNumber="21" phylum="Tracheophyta" rank="species" species="ulei">
