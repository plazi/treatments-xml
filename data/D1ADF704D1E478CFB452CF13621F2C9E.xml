<taxonomicName id="CC0F15D86EFEDF90EA17233600408264" LSID-HNS="urn:lsid:biosci.ohio-state.edu:osuc_concepts:137590" class="Insecta" family="Formicidae" genus="Ponera" higherTaxonomySource="CoL" kingdom="Animalia" lsidName="Ponera sculpta Jerdon" lsidName-HNS="Ponera sculpta Jerdon" order="Hymenoptera" pageNumber="117" phylum="Arthropoda" rank="species" species="sculpta">Ponera sculpta</taxonomicName>
