(
<bibRefCitation author="Hackman" box="[544,721,1806,1831]" pageId="7" pageNumber="58" refString="Hackman, W. (1976) De som larver i hattsvampar levande anthomyiidernas biologi (Diptera) [The biology of anthomyiid flies feeding as larvae in fungi (Diptera).] Notulae entomologicae, 56, 129 - 134. [In Swedish with English summary.]" type="journal article" year="1976">
Hackman 
<number box="[662,721,1806,1831]" pageId="7" pageNumber="58" value="1976.0">1976</number>
</bibRefCitation>
, 
<bibRefCitation author="Hackman" box="[734,1071,1806,1831]" pageId="7" pageNumber="58" refString="Hackman, W. &amp; Meinander, M. (1979) Diptera feeding as larvae on macrofungi in Finland. Annales zoologici fennici, 16, 50 - 83." type="journal article" year="1979">
Hackman &amp; Meinander 
<number box="[1012,1071,1807,1831]" pageId="7" pageNumber="58" value="1979.0">1979</number>
</bibRefCitation>
, 
<bibRefCitation author="Stahls" box="[1084,1286,1806,1831]" pageId="7" pageNumber="58" refString="Stahls, G., Ribeiro, E. &amp; Hanski, I. (1989) Fungivorous Pegomya flies: spatial and temporal variation in a guild of competitors. Annales zoologici fennici, 26, 103 - 112." type="journal article" year="1989">
Ståhls 
<emphasis box="[1161,1219,1806,1831]" italics="true" pageId="7" pageNumber="58">et al.</emphasis>
