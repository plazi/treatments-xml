<quantity id="4CE19B165B0DFFFBFAA8F6E3FA2AFB70" box="[1350,1436,1230,1254]" metricMagnitude="3" metricUnit="m" metricValue="1.128" pageId="104" pageNumber="105" unit="m" value="1128.0">1128 m</quantity>
