<materialsCitation id="8506AAF415BE5BC927BF2E9A6BADB98A" collectingDate="1926-02-02" collectingDateMax="1967-11-12" collectingDateMin="1926-02-02" collectorName="de Betroka, de l'Angavo, de Zombitsy, du Fiherenana, de l'Onilahy, de Tulear, P. K., de Zombitse, Peltier" country="Madagascar" county="Tulear-Ihosy" location="Foret de Zombitsy" municipality="Bekily" specimenCount="1" stateProvince="Toliara">
<emphasis id="3A661C0781EF70A7349778313CD7F785" bold="true" pageId="32" pageNumber="33">
<collectingCountry id="CDF20E97044373F2A1127BC1B532EAC5" name="Madagascar">Madagascar</collectingCountry>
. 
<collectingRegion id="D2ED03E001F20C82B27D9ABF4916227A" country="Madagascar" name="Toliara">Toliara</collectingRegion>
</emphasis>
: 
<collectingCounty id="2FEF8DD7EF06C71F393882A1682A0D0B">Tulear-Ihosy</collectingCounty>
km 44, 
