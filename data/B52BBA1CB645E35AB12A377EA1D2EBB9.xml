<taxonomicName id="A6D6001FACC8D953D7020D1D268767EA" class="Pinopsida" family="Pinaceae" genus="Pinus" higherTaxonomySource="CoL" kingdom="Plantae" lsidName="Pinus yunnanensis" order="Pinales" pageId="11" pageNumber="104" phylum="Tracheophyta" rank="species" species="yunnanensis">Pinus yunnanensis</taxonomicName>
