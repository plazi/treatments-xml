<taxonomicName id="47CC5E18EE7C7E5975AC55C63CB075B3" class="Pinopsida" family="Pinaceae" genus="Pinus" higherTaxonomySource="CoL" kingdom="Plantae" lsidName="Pinus yunnanensis" order="Pinales" pageId="11" pageNumber="104" phylum="Tracheophyta" rank="species" species="yunnanensis">Pinus yunnanensis</taxonomicName>
