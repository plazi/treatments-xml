<collectingRegion id="49EE57D87E29FFEB427AFD5642FF1E0F" box="[381,480,763,789]" country="Mexico" name="Veracruz de Ignacio de la Llave" pageId="10" pageNumber="77">Veracruz</collectingRegion>
(
