<taxonomicName id="F0B6AC346611D84FBD7309254EC62392" baseAuthorityName="Reed" baseAuthorityYear="1873" class="Insecta" family="Buprestidae" genus="Bilyaxia" higherTaxonomySource="GBIF,CoL" kingdom="Animalia" lsidName="" order="Coleoptera" pageId="21" pageNumber="38" phylum="Arthropoda" rank="species" species="obscurata" subGenus="Bilyaxia">
<emphasis id="F9DA9657076CA75574908E98339E927A" italics="true" pageId="21" pageNumber="38">Bilyaxia (Bilyaxia) obscurata</emphasis>
</taxonomicName>
(Reed, 1873) and 
<taxonomicName id="1CC9DD316C627AD39431F6A5C4F3461C" baseAuthorityName="Moore" baseAuthorityYear="1981" class="Insecta" family="Buprestidae" genus="Bilyaxia" higherTaxonomySource="GBIF,CoL" kingdom="Animalia" lsidName="" order="Coleoptera" pageId="21" pageNumber="38" phylum="Arthropoda" rank="species" species="rubricollis" subGenus="Bilyaxia">
