<taxonomicName class="Magnoliopsida" family="Betulaceae" genus="Betula" higherTaxonomySource="CoL" kingdom="Plantae" lsidName="Betula" order="Fagales" pageId="0" pageNumber="35" phylum="Tracheophyta" rank="genus">Betula</taxonomicName>
