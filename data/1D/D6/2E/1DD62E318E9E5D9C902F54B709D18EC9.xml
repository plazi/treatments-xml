<taxonomicName authority="" authorityName="" class="Centricae" family="Chironomidae" genus="H." higherTaxonomySource="GBIF" kingdom="Animalia" lsidName="H. pistasciaria" order="Diptera" pageId="0" pageNumber="52190" phylum="Diatomeae" rank="species" species="pistasciaria">
<emphasis italics="true" pageId="0" pageNumber="52190">H. pistasciaria</emphasis>
</taxonomicName>
