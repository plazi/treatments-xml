<paragraph pageId="0" pageNumber="52190">
<taxonomicName class="Insecta" family="Geometridae" genus="Hethemia" higherTaxonomySource="CoL" kingdom="Animalia" lsidName="Hethemia" order="Lepidoptera" pageId="0" pageNumber="52190" phylum="Arthropoda" rank="genus">
