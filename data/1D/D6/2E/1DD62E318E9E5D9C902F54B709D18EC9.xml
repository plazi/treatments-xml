<taxonomicName authorityName="Huebner" authorityYear="1823" class="Insecta" family="Geometridae" genus="Thalera" higherTaxonomySource="CoL" kingdom="Animalia" lsidName="Thalera" order="Lepidoptera" pageId="0" pageNumber="52190" phylum="Arthropoda" rank="genus">
<emphasis italics="true" pageId="0" pageNumber="52190">Thalera</emphasis>
</taxonomicName>
, creating the new combination 
<taxonomicName authority="" authorityName="" class="Centricae" family="Chironomidae" genus="T." higherTaxonomySource="GBIF" kingdom="Animalia" lsidName="T. pistasciaria" order="Diptera" pageId="0" pageNumber="52190" phylum="Diatomeae" rank="species" species="pistasciaria">
<emphasis italics="true" pageId="0" pageNumber="52190">T. pistasciaria</emphasis>
</taxonomicName>
.
</paragraph>
