<emphasis bold="true" box="[151,948,1886,1912]" pageId="10" pageNumber="41">
<taxonomicName authority="Meyrick" authorityName="Meyrick" authorityYear="1915" box="[151,590,1886,1912]" class="Insecta" family="Tortricidae" genus="Thaumatotibia" higherTaxonomySource="GBIF" kingdom="Animalia" order="Lepidoptera" pageId="10" pageNumber="41" phylum="Arthropoda" rank="species" species="leucotreta">
<emphasis bold="true" box="[151,457,1886,1912]" italics="true" pageId="10" pageNumber="41">Thaumatotibia leucotreta</emphasis>
(Meyrick)
</taxonomicName>
(
<taxonomicName box="[605,752,1886,1912]" class="Insecta" family="Tortricidae" kingdom="Animalia" order="Lepidoptera" pageId="10" pageNumber="41" phylum="Arthropoda" rank="family">Tortricidae</taxonomicName>
