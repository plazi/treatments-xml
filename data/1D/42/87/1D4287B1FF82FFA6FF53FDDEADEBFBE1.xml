<paragraph blockId="9.[151,640,605,631]" box="[151,640,605,631]" pageId="9" pageNumber="40">
<heading bold="true" box="[151,640,605,631]" fontSize="11" level="1" pageId="9" pageNumber="40" reason="1">
<emphasis bold="true" box="[151,640,605,631]" pageId="9" pageNumber="40">
<taxonomicName box="[151,257,605,631]" class="Insecta" family="Tortricidae" genus="Amorbia" kingdom="Animalia" order="Lepidoptera" pageId="9" pageNumber="40" phylum="Arthropoda" rank="genus">
<emphasis bold="true" box="[151,257,605,631]" italics="true" pageId="9" pageNumber="40">Amorbia</emphasis>
</taxonomicName>
spp. (
<taxonomicName box="[330,477,605,631]" class="Insecta" family="Tortricidae" kingdom="Animalia" order="Lepidoptera" pageId="9" pageNumber="40" phylum="Arthropoda" rank="family">Tortricidae</taxonomicName>
: 
<taxonomicName box="[490,632,605,631]" class="Insecta" family="Tortricidae" kingdom="Animalia" order="Lepidoptera" pageId="9" pageNumber="40" phylum="Arthropoda" rank="subFamily" subFamily="Tortricinae">Tortricinae</taxonomicName>
