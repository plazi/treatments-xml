<taxonomicName box="[151,270,292,318]" class="Insecta" family="Gracillariidae" genus="Caloptilia" kingdom="Animalia" order="Lepidoptera" pageId="10" pageNumber="41" phylum="Arthropoda" rank="genus">
<emphasis bold="true" box="[151,270,292,318]" italics="true" pageId="10" pageNumber="41">Caloptilia</emphasis>
</taxonomicName>
, 
<emphasis bold="true" box="[284,407,292,318]" italics="true" pageId="10" pageNumber="41">
<taxonomicName box="[284,401,292,318]" class="Insecta" family="Gracillariidae" genus="Marmara" kingdom="Animalia" order="Lepidoptera" pageId="10" pageNumber="41" phylum="Arthropoda" rank="genus">Marmara</taxonomicName>
,
</emphasis>
and 
<taxonomicName box="[469,624,292,318]" class="Insecta" family="Gracillariidae" genus="Phyllocnistis" kingdom="Animalia" order="Lepidoptera" pageId="10" pageNumber="41" phylum="Arthropoda" rank="genus">
<emphasis bold="true" box="[469,624,292,318]" italics="true" pageId="10" pageNumber="41">Phyllocnistis</emphasis>
</taxonomicName>
spp. (
<taxonomicName box="[698,880,291,317]" class="Insecta" family="Gracillariidae" kingdom="Animalia" order="Lepidoptera" pageId="10" pageNumber="41" phylum="Arthropoda" rank="family">Gracillariidae</taxonomicName>
