<taxonomicName class="Magnoliopsida" family="Melastomataceae" genus="Miconia" higherTaxonomySource="CoL" kingdom="Plantae" lsidName="Miconia papillosperma" order="Myrtales" pageId="6" pageNumber="37" phylum="Tracheophyta" rank="species" species="papillosperma">
