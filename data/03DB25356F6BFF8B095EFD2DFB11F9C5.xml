<paragraph id="8BCD94236F6BFF860BFCF9C9FEDBF9DF" blockId="21.[189,363,1545,1571]" box="[189,363,1545,1571]" pageId="21" pageNumber="22">
<heading id="D085234F6F6BFF860BFCF9C9FEDBF9DF" bold="true" box="[189,363,1545,1571]" fontSize="11" level="3" pageId="21" pageNumber="22" reason="3">
