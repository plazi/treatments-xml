<quantity box="[675,827,978,1003]" metricMagnitude="-3" metricUnit="m" metricValue="1.1749999999999998" metricValueMax="1.2" metricValueMin="1.15" pageId="8" pageNumber="9" unit="mm" value="1.1749999999999998" valueMax="1.2" valueMin="1.15">1.15–1.2 mm</quantity>
wide across eyes and 
