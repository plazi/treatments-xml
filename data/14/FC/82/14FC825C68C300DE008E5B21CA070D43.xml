<taxonomicName class="Insecta" family="Carabidae" genus="Blechrus" higherTaxonomySource="GBIF" kingdom="Animalia" lsidName="" order="Coleoptera" pageId="806" pageNumber="807" phylum="Arthropoda" rank="species" species="glabratus">
