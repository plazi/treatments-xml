<paragraph blockId="21.[113,1089,1428,1516]" box="[113,1005,1428,1453]" pageId="21" pageNumber="182">
<emphasis bold="true" box="[113,272,1428,1452]" pageId="21" pageNumber="182">Redescription</emphasis>
. Body length 
<quantity box="[423,507,1428,1452]" metricMagnitude="-3" metricUnit="m" metricValue="6.7" pageId="21" pageNumber="182" unit="mm" value="6.7">6.7 mm</quantity>
, length of fore body (to end of elytra) 
<quantity box="[916,1001,1428,1452]" metricMagnitude="-3" metricUnit="m" metricValue="4.5" pageId="21" pageNumber="182" unit="mm" value="4.5">4.5 mm</quantity>
