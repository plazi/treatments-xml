</subSubSection>
<subSubSection pageId="0" pageNumber="1" type="reference_group">
<paragraph pageId="0" pageNumber="1">
<taxonomicName class="Magnoliopsida" family="Caryophyllaceae" genus="Dianthus" higherTaxonomySource="CoL" kingdom="Plantae" lsidName="Dianthus morisianus" order="Caryophyllales" pageId="0" pageNumber="1" phylum="Tracheophyta" rank="species" species="morisianus">Dianthus morisianus</taxonomicName>
= 
<taxonomicName family="Caryophyllaceae" genus="D." higherTaxonomySource="treatment-meta" kingdom="Plantae" lsidName="D. morisianus" order="Caryophyllales" pageId="0" pageNumber="1" rank="species" species="morisianus">D. morisianus</taxonomicName>
