<taxonomicName authority="Humes, 1987" authorityName="Humes" authorityYear="1987" box="[151,592,441,467]" class="Maxillopoda" family="Dirivultidae" genus="Aphotopontius" kingdom="Animalia" order="Siphonostomatoida" pageId="13" pageNumber="314" phylum="Arthropoda" rank="species" species="forcipatus">
<emphasis box="[151,434,441,467]" italics="true" pageId="13" pageNumber="314">Aphotopontius forcipatus</emphasis>
