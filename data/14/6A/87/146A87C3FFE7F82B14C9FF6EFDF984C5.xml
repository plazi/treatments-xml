<taxonomicName authorityName="Humes" authorityYear="1987" box="[991,1127,477,503]" class="Maxillopoda" family="Dirivultidae" genus="Aphotopontius" kingdom="Animalia" order="Siphonostomatoida" pageId="13" pageNumber="314" phylum="Arthropoda" rank="species" species="limatulus">
