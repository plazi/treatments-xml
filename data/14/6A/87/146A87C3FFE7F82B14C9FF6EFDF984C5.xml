</taxonomicName>
, 
<taxonomicName authority="Humes, 1996" authorityName="Humes" authorityYear="1996" box="[602,984,441,467]" class="Maxillopoda" family="Dirivultidae" genus="Stygiopontius" kingdom="Animalia" order="Siphonostomatoida" pageId="13" pageNumber="314" phylum="Arthropoda" rank="species" species="mirus">
<emphasis box="[602,825,441,467]" italics="true" pageId="13" pageNumber="314">Stygiopontius mirus</emphasis>
<bibRefCitation author="Humes, A. G." box="[832,984,441,467]" pageId="13" pageNumber="314" pagination="609 - 653" refId="ref16443" refString="Humes, A. G. (1996) Deep-sea Copepoda (Siphonostomatoida) from hydrothermal sites on the Mid-Atlantic Ridge at 23 ° and 37 °. Bulletin of Marine Science, 58, 609 - 653." type="journal article" year="1996">Humes, 1996</bibRefCitation>
</taxonomicName>
, 
<taxonomicName authority="Humes, 1987" authorityName="Humes" authorityYear="1987" box="[994,1295,441,467]" class="Maxillopoda" family="Dirivultidae" genus="Stygiopontius" kingdom="Animalia" order="Siphonostomatoida" pageId="13" pageNumber="314" phylum="Arthropoda" rank="species" species="pectinatus">
<emphasis box="[994,1008,441,467]" italics="true" pageId="13" pageNumber="314">S</emphasis>
. 
<emphasis box="[1022,1137,442,467]" italics="true" pageId="13" pageNumber="314">pectinatus</emphasis>
<bibRefCitation author="Humes, A. G." box="[1143,1295,441,467]" pageId="13" pageNumber="314" pagination="645 - 788" refId="ref16279" refString="Humes, A. G. (1987) Copepoda from deep-sea hydrothermal vents. Bulletin of Marine Science, 41, 645 - 788." type="journal article" year="1987">Humes, 1987</bibRefCitation>
</taxonomicName>
, and 
<taxonomicName authority="Humes, 1997" authorityName="Humes" authorityYear="1997" class="Maxillopoda" family="Dirivultidae" genus="Stygiopontius" kingdom="Animalia" order="Siphonostomatoida" pageId="13" pageNumber="314" phylum="Arthropoda" rank="species" species="rimivagus">
<emphasis box="[1353,1367,441,467]" italics="true" pageId="13" pageNumber="314">S</emphasis>
. 
<emphasis italics="true" pageId="13" pageNumber="314">rimivagus</emphasis>
Humes, 1997
</taxonomicName>
(
<bibRefCitation author="Humes, A. G." box="[388,535,477,503]" pageId="13" pageNumber="314" pagination="289 - 304" refId="ref16388" refString="Humes, A. G. (1990) Copepods (Siphonostomatoida) from a deep-sea hydrothermal vent at the Mariana Back-Arc Basin in the Pacific, including a new genus and species. Journal of Natural History, 24, 289 - 304. https: // doi. org / 10.1080 / 00222939000770211" type="journal article" year="1990">Humes 1990</bibRefCitation>
, 
<bibRefCitation author="Humes, A. G." box="[546,605,477,503]" pageId="13" pageNumber="314" pagination="609 - 653" refId="ref16443" refString="Humes, A. G. (1996) Deep-sea Copepoda (Siphonostomatoida) from hydrothermal sites on the Mid-Atlantic Ridge at 23 ° and 37 °. Bulletin of Marine Science, 58, 609 - 653." type="journal article" year="1996">1996</bibRefCitation>
, 
<bibRefCitation author="Humes, A. G." box="[616,675,477,503]" pageId="13" pageNumber="314" pagination="51 - 62" refId="ref16482" refString="Humes, A. G. (1998). Copepoda from deep-sea hydrothermal sites and cold seeps: description of a new species of Aphotopontius from the East Pacific Rise and general distribution. Cahiers de Biologie Marine, 39, 51 - 62. https: // doi. org / 10.21411 / CBM. A. 958 AE 7 F 7" type="journal article" year="1998">1998</bibRefCitation>
; 
<bibRefCitation author="Gollner, S. &amp; Ivanenko, V. N. &amp; Arbizu, P. M. &amp; Bright, M." box="[687,904,477,503]" pageId="13" pageNumber="314" pagination="9801" refId="ref16060" refString="Gollner, S., Ivanenko, V. N., Arbizu, P. M. &amp; Bright, M. (2010) Advances in taxonomy, ecology, and biogeography of Dirivultidae (Copepoda) associated with chemosynthetic environments in the deep sea. PLoS ONE, 5, e 9801. https: // doi. org / 10.1371 / journal. pone. 0009801" type="journal article" year="2010">
