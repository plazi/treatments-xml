<emphasis bold="true" box="[151,227,1434,1459]" pageId="12" pageNumber="313">FIG. 8.</emphasis>
<taxonomicName authority="Humes" authorityName="Humes" authorityYear="1987" box="[234,562,1435,1459]" class="Maxillopoda" family="Dirivultidae" genus="Aphotopontius" kingdom="Animalia" order="Siphonostomatoida" pageId="12" pageNumber="313" phylum="Arthropoda" rank="species" species="limatulus">
