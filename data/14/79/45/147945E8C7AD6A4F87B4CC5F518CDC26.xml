<paragraph pageId="24" pageNumber="47">
<taxonomicName class="Insecta" family="Carabidae" genus="Graphipterus" higherTaxonomySource="CoL" kingdom="Animalia" lsidName="Graphipterus discipennis" order="Coleoptera" pageId="24" pageNumber="47" phylum="Arthropoda" rank="species" species="discipennis">Graphipterus discipennis</taxonomicName>
