<collectionCode id="52E765CDDB20FFDA88029D634475FCBA" box="[1046,1143,772,796]" country="USA" httpUri="http://biocol.org/urn:lsid:biocol.org:col:34871" name="Smithsonian Institution, National Museum of Natural History" pageId="15" pageNumber="536">USNM</collectionCode>
