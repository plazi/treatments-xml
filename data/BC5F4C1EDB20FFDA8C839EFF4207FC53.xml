<collectionCode id="52E765CDDB20FFDA888C9C8744E6FD5E" box="[1176,1252,736,760]" country="Brazil" httpUri="http://grbio.org/cool/745q-57sa" name="Universidade de Sao Paulo" pageId="15" pageNumber="536">RPSP</collectionCode>
