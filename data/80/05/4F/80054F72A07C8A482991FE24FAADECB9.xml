<taxonomicName authorityName="DeLong" authorityYear="1942" box="[363,459,1699,1722]" class="Insecta" family="Cicadellidae" genus="Acusana" higherTaxonomySource="GBIF" kingdom="Animalia" order="Hemiptera" pageId="5" pageNumber="536" phylum="Arthropoda" rank="genus">
