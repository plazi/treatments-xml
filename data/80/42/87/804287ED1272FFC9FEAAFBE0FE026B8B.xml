<taxonomicName baseAuthorityName="Cobos" baseAuthorityYear="1972" box="[432,541,381,404]" class="Insecta" family="Buprestidae" genus="Agrilaxia" kingdom="Animalia" order="Coleoptera" pageId="25" pageNumber="682" phylum="Arthropoda" rank="species" species="oculata">
<emphasis box="[432,541,381,404]" italics="true" pageId="25" pageNumber="682">A. oculata</emphasis>
