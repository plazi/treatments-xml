<taxonomicName id="4C754D04FFC7FFCBFBD7F9EA139AC521" authorityName="Rotheray &amp; Marcos-García &amp; Hancock &amp; Pérez-Bañón &amp; Maier" authorityYear="2009" box="[1055,1233,1636,1657]" class="Insecta" family="Syrphidae" genus="Copestylum" kingdom="Animalia" order="Diptera" pageId="16" pageNumber="713" phylum="Arthropoda" rank="species" species="cochabamba">
