<taxonomicName id="4C374D54807BFFB81879E1F1C63CF903" box="[260,540,1711,1732]" class="Liliopsida" family="Orchidaceae" genus="Bulbophyllum" kingdom="Plantae" order="Asparagales" pageId="2" pageNumber="28" phylum="Tracheophyta" rank="species" species="pauwelsianum">
