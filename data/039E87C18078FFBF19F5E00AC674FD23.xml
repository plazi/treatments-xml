<caption id="DF48665F807AFFB919F5E1C1C793F972" ID-DOI="http://doi.org/10.5281/zenodo.5153697" ID-Zenodo-Dep="5153697" box="[136,947,1695,1717]" httpUri="https://zenodo.org/record/5153697/files/figure.png" pageId="3" pageNumber="29" startId="3.[136,229,1695,1717]" targetBox="[184,1429,686,1637]" targetPageId="3">
