<taxonomicName id="94EA4D747134FFA4FB730D370B9FF8C2" authorityName="Parry" authorityYear="1864" box="[1266,1440,1877,1899]" class="Insecta" family="Lucanidae" genus="Nigidius" kingdom="Animalia" order="Coleoptera" pageId="3" pageNumber="2" phylum="Arthropoda" rank="species" species="obesus">Nigidius obesus</taxonomicName>
