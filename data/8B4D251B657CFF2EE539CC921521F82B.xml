<paragraph id="FFEAC2205BA6BFF78A7F51D93ECB3C3B" pageId="22" pageNumber="23">
<taxonomicName id="17E166D96876D62CCC25BE435AC923A4" authority="Dahlbom, 1845" authorityName="Dahlbom" authorityYear="1845" class="Insecta" family="Chrysididae" genus="Holopyga" higherTaxonomySource="GBIF" kingdom="Animalia" lsidName="Holopyga" order="Hymenoptera" pageId="22" pageNumber="23" phylum="Arthropoda" rank="genus">Holopyga</taxonomicName>
