(
<emphasis id="B9052022FFC0967BFE0A59DCFE338F1B" bold="true" box="[467,497,1518,1539]" pageId="6" pageNumber="307">1-7</emphasis>
) and 
<taxonomicName id="4C7187B3FFC0967BFDF159DDFD678F1C" authorityName="Assing" authorityYear="2016" box="[552,677,1519,1540]" class="Insecta" family="Staphylinidae" genus="Nazeris" kingdom="Animalia" order="Coleoptera" pageId="6" pageNumber="307" phylum="Arthropoda" rank="species" species="latilobatus">
<emphasis id="B9052022FFC0967BFDF159DDFD678F1C" box="[552,677,1519,1540]" italics="true" pageId="6" pageNumber="307">N. latilobatus</emphasis>
