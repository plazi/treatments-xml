<taxonomicName id="4C364D51FAB1FF7CCA1EB9C4FD7EFF5E" authority="Gabb, 1873" authorityName="Gabb" authorityYear="1873" box="[294,662,222,244]" class="Gastropoda" family="Turridae" genus="Turris" kingdom="Animalia" order="Neogastropoda" pageId="212" pageNumber="213" phylum="Mollusca" rank="species" species="parkeri" subGenus="Surcula">
