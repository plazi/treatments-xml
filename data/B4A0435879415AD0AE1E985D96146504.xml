<paragraph id="EC176E409FD47D5F98ED82E675ECBEF0" pageId="0" pageNumber="119">Type species.</paragraph>
<paragraph id="B2A93327188634F263934DCCFCB5B6F7" pageId="0" pageNumber="119">
<taxonomicName id="D662B522D6126EEEF910D76EB8D43CEF" authority="Fritze, 1908" authorityName="Ingrisch" authorityYear="2020" baseAuthorityName="Ingrisch" baseAuthorityYear="2020" class="Insecta" family="Tettigoniidae" genus="Odontoconus" higherTaxonomySource="GBIF" kingdom="Animalia" lsidName="Odontoconus robustus" order="Orthoptera" pageId="0" pageNumber="119" phylum="Arthropoda" rank="species" species="robustus">
