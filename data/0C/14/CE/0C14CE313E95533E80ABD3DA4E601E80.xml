<subSubSection pageId="0" pageNumber="113" type="diagnosis">
<paragraph pageId="0" pageNumber="113">Diagnosis.</paragraph>
<paragraph pageId="0" pageNumber="113">
<taxonomicName authorityName="R. Romero &amp; Valentim" authorityYear="2021" class="Magnoliopsida" family="Melastomataceae" genus="Microlicia" higherTaxonomySource="CoL" kingdom="Plantae" lsidName="Microlicia johnwurdackiana" order="Myrtales" pageId="0" pageNumber="113" phylum="Tracheophyta" rank="species" species="johnwurdackiana">
