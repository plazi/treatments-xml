<number pageId="9" pageNumber="10" value="4.76" valueMax="5.46" valueMin="4.06">4.06– 5.46</number>
(
<number box="[217,268,1221,1246]" pageId="9" pageNumber="10" value="4.74">4.74</number>
± 
<number box="[283,334,1221,1246]" pageId="9" pageNumber="10" value="0.46">0.46</number>
) times as long as head width, segment 
<number box="[790,804,1222,1246]" pageId="9" pageNumber="10" value="3.0">3</number>
<number box="[813,897,1222,1246]" pageId="9" pageNumber="10" value="2.25" valueMax="2.3" valueMin="2.2">2.2–2.3</number>
