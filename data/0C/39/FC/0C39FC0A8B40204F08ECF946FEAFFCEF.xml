<subSubSection box="[199,1437,476,501]" pageId="6" pageNumber="494" type="etymology">
<paragraph blockId="6.[151,1437,151,788]" box="[199,1437,476,501]" pageId="6" pageNumber="494">
<emphasis bold="true" box="[199,334,476,500]" pageId="6" pageNumber="494">Etymology.</emphasis>
