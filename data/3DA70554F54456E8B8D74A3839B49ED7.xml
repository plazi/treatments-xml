<taxonomicName id="8C3CDB6903696153419BF39C800BF04B" authority="Haliday, 1835" authorityName="Liu, Chen &amp; Xu" authorityYear="2011" class="Insecta" family="Diapriidae" genus="Ismarus" higherTaxonomySource="GBIF" kingdom="Animalia" lsidName="Ismarus nigritrochanter" order="Hymenoptera" pageId="0" pageNumber="139" phylum="Arthropoda" rank="species" species="nigritrochanter">
