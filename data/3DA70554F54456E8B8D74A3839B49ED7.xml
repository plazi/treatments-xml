<taxonomicName id="919874AAA9D5F705156EE54A14A8CDEF" authority="Haliday, 1835" authorityName="Foerster" authorityYear="1850" class="Insecta" family="Diapriidae" genus="Ismarus" higherTaxonomySource="GBIF" kingdom="Animalia" lsidName="Ismarus halidayi" order="Hymenoptera" pageId="0" pageNumber="139" phylum="Arthropoda" rank="species" species="halidayi">
