<taxonomicName id="387EB942CD98DE2627C3D8063F231CBF" authority="Haliday, 1835" authorityName="Haliday" authorityYear="1831" class="Insecta" family="Diapriidae" genus="Ismarus" higherTaxonomySource="GBIF" kingdom="Animalia" lsidName="Ismarus dorsiger" order="Hymenoptera" pageId="0" pageNumber="139" phylum="Arthropoda" rank="species" species="dorsiger">
