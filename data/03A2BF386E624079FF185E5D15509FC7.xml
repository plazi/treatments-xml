<quantity id="4CF3A3CB6E624066FE025AA5151799C5" box="[397,538,1727,1752]" metricMagnitude="2" metricUnit="m" metricValue="6.75" metricValueMax="10.5" metricValueMin="3.0" pageId="15" pageNumber="276" unit="m" value="675.0" valueMax="1050.0" valueMin="300.0">300–1050 m</quantity>
