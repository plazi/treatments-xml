<collectingRegion id="49CA189EFFD71E16806CFD9500C38922" box="[864,1018,614,638]" country="South Africa" name="Western Cape" pageId="37" pageNumber="96">Western Cape</collectingRegion>
, near Darling (holo-, 
<collectionCode id="ED1F4EB9FFD71E1681C6FD73003F89C4" box="[714,774,640,664]" country="South Africa" httpUri="http://biocol.org/urn:lsid:biocol.org:col:15565" lsid="urn:lsid:biocol.org:col:15565" name="South African National Biodiversity Institute" pageId="37" pageNumber="96" type="Herbarium">NBG</collectionCode>
