[[ Genus 
<taxonomicName id="E61AE691277FB4D5F08BD51A24006288" LSID-ZBK="urn:lsid:zoobank.org:act:D5E53DC5-5480-4F01-9C4C-2D9BF239B442" class="Actinopterygii" family="Gobiidae" genus="Hetereleotris" higherTaxonomySource="CoL" kingdom="Animalia" lsidName-ZBK="Hetereleotris Bleeker 1874:306" order="Perciformes" pageNumber="1" phylum="Chordata" rank="genus">Hetereleotris</taxonomicName>
