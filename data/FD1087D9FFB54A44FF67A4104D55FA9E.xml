<number id="C37124E8FFB54A44FDAAA2404CA9FA9E" box="[602,678,1313,1339]" pageId="19" pageNumber="20" value="35194.3559">35194</number>
</accessionNumber>
, 35590, 
<number id="C37124E8FFB54A44FCF9A2404D59FA9E" box="[777,854,1313,1339]" pageId="19" pageNumber="20" value="35664.0">35664</number>
