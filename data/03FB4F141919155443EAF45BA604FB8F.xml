. 
<taxonomicName id="4C528581191A155542E0F5DEA09AFA4F" authorityName="Seigler &amp; Ebinger &amp; Riggins &amp; Terra &amp; Miller" authorityYear="2017" baseAuthorityName="Seigler &amp; Ebinger &amp; Riggins &amp; Terra &amp; Miller" baseAuthorityYear="2017" box="[935,1153,1408,1430]" class="Magnoliopsida" family="Fabaceae" genus="Parasenegalia" higherTaxonomySource="GBIF" kingdom="Plantae" order="Fabales" pageId="10" pageNumber="190" phylum="Tracheophyta" rank="species" species="santosii">
