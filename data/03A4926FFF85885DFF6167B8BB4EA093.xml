<subSubSection id="C31770F2FF85885DFF6163E1BB4EA093" box="[192,1386,1724,1751]" pageId="23" pageNumber="22" type="etymology">
<paragraph id="8BB22379FF85885DFF6163E1BB4EA093" blockId="23.[192,1386,1724,1751]" box="[192,1386,1724,1751]" pageId="23" pageNumber="22">
<emphasis id="B979FF6BFF85885DFF6163E1BF60A093" bold="true" box="[192,324,1724,1750]" pageId="23" pageNumber="22">Etymology.</emphasis>
