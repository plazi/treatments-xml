<taxonomicName id="29C81581FFDC0F2EFE8EFBA7FDB99E7F" authority=", CZNC 1648" authorityName=", CZNC" authorityYear="1648" box="[281,552,1105,1129]" class="Actinopterygii" family="Bryconidae" genus="Brycon" kingdom="Animalia" order="Characiformes" pageId="4" pageNumber="149" phylum="Chordata" rank="species" species="ferox">
<emphasis id="DCBCB210FFDC0F2EFE8EFBA7FE0D9E7F" box="[281,412,1105,1129]" italics="true" pageId="4" pageNumber="149">Brycon ferox</emphasis>
