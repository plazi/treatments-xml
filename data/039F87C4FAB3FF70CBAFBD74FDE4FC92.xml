<quantity id="4CCE9B37FAB3FF7ECA4ABF25FE1DF9FF" box="[370,501,1598,1622]" metricMagnitude="2" metricUnit="m" metricValue="2.09" metricValueMax="2.88" metricValueMin="1.3" pageId="214" pageNumber="215" unit="m" value="209.0" valueMax="288.0" valueMin="130.0">
