</taxonomicName>
under 
<taxonomicName id="0BA14D48FFEDFFAEFC9C288FFB9AFE66" authority="Pav. ex Don" authorityName="Pav. ex Don" authorityYear="1823" box="[769,1075,410,437]" class="Magnoliopsida" family="Melastomataceae" genus="Arthrostemma" kingdom="Plantae" order="Myrtales" pageId="4" pageNumber="251" phylum="Tracheophyta" rank="genus">
