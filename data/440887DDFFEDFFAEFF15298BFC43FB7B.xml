has 
<taxonomicName id="0BA14D48FFEDFFAEFE452863FD15FE43" authority="Aubl" authorityName="Aublet" authorityYear="1775" box="[472,700,374,400]" class="Magnoliopsida" family="Melastomataceae" genus="Rhexia" kingdom="Plantae" order="Myrtales" pageId="4" pageNumber="251" phylum="Tracheophyta" rank="species" species="latifolia">
