<taxonomicName id="BEA17AAB9778BBA665CA67BBEC183196" LSID-HNS="urn:lsid:biosci.ohio-state.edu:osuc_concepts:2325" class="Insecta" family="Formicidae" genus="Adelomyrmex" higherTaxonomySource="CoL" kingdom="Animalia" lsidName-HNS="Adelomyrmex Emery" order="Hymenoptera" pageNumber="37" phylum="Arthropoda" rank="genus">Adelomyrmex</taxonomicName>
