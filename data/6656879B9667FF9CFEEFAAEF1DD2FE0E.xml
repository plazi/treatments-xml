<paragraph id="EE40368D9667FF9EFEEFA924192BFDD1" blockId="5.[264,1324,559,1905]" pageId="5" pageNumber="60">
Material examined. King George 
<collectingCountry id="96E8761D9667FF9EFD55A9241EC4FDE9" box="[690,765,559,585]" name="Iceland" pageId="5" pageNumber="60">Island</collectingCountry>
, Admiralty Bay; 
<specimenCount id="F8F9FD049667FF9EFC31A9241840FDE9" box="[982,1145,559,585]" pageId="5" pageNumber="60" type="generic">
<number id="583724AA9667FF9EFC31A9241FCAFDE9" box="[982,1011,559,585]" pageId="5" pageNumber="60" value="30.0">30</number>
specimens
</specimenCount>
(
<typeStatus id="3144882F9667FF9EFB6AA92418CFFDE9" box="[1165,1270,559,585]" pageId="5" pageNumber="60">holotype</typeStatus>
and 
<typeStatus id="3144882F9667FF9EFEEFA95C1D43FDD1" box="[264,378,599,625]" pageId="5" pageNumber="60">paratypes</typeStatus>
) and 
<specimenCount id="F8F9FD049667FF9EFE5CA95C1E20FDD1" box="[443,537,599,625]" pageId="5" pageNumber="60" type="egg">
<number id="583724AA9667FF9EFE5CA95C1DE1FDD1" box="[443,472,599,625]" pageId="5" pageNumber="60" value="14.0">14</number>
eggs
</specimenCount>
