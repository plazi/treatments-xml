<paragraph id="65A35A0A33D58FF6A81FDAA75856B0E1" pageId="36" pageNumber="37">
<taxonomicName id="A6D1CE9EFD601B26D777880ADD4E6520" LSID="0496069E-637A-7159-20E5-3AC668CF7E13" authority="L." authorityName="L." class="Magnoliopsida" family="Boraginaceae" genus="Heliotropium" higherTaxonomySource="CoL" kingdom="Plantae" lsidName="Heliotropium indicum" order="Boraginales" pageId="36" pageNumber="37" phylum="Tracheophyta" rank="species" species="indicum">Heliotropium indicum L.</taxonomicName>
