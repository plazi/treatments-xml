<subSubSection pageId="0" pageNumber="149" type="etymology">
<paragraph pageId="0" pageNumber="149">Etymology.</paragraph>
<paragraph pageId="0" pageNumber="149">
<taxonomicName class="Bivalvia" family="Mytilidae" genus="Fulgida" higherTaxonomySource="GBIF" kingdom="Animalia" lsidName="Fulgida" order="Mytilida" pageId="0" pageNumber="149" phylum="Mollusca" rank="genus">
