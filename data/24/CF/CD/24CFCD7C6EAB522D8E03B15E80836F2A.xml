<taxonomicName class="Insecta" family="Halictidae" genus="Halictus" higherTaxonomySource="CoL" kingdom="Animalia" lsidName="Halictus pseudonigripes" order="Hymenoptera" pageId="0" pageNumber="35" phylum="Arthropoda" rank="species" species="pseudonigripes">
