<taxonomicName box="[1049,1207,1891,1912]" class="Insecta" family="Formicidae" genus="Pogonomyrmex" kingdom="Animalia" order="Hymenoptera" pageId="16" pageNumber="17" phylum="Arthropoda" rank="genus">
