<subSubSection pageId="23" pageNumber="24" type="etymology">
<paragraph blockId="23.[151,1436,909,1129]" pageId="23" pageNumber="24">
<emphasis bold="true" box="[198,339,1064,1090]" pageId="23" pageNumber="24">Etymology.</emphasis>
