<subSubSection box="[199,1421,1413,1439]" pageId="2" pageNumber="288" type="etymology">
<paragraph blockId="2.[151,1437,548,1439]" box="[199,1421,1413,1439]" pageId="2" pageNumber="288">
<emphasis bold="true" box="[199,334,1413,1439]" pageId="2" pageNumber="288">Etymology.</emphasis>
