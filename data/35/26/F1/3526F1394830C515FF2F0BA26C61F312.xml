<taxonomicName authority="Tkalcu" authorityName="Tkalcu" box="[330,567,1517,1542]" class="Insecta" family="Hymenoptera" genus="Microhoplitis" higherTaxonomySource="GBIF" kingdom="Animalia" order="Hymenoptera" pageId="7" pageNumber="112" phylum="Arthropoda" rank="genus">
