</taxonomicName>
, from 
<collectingCountry box="[802,869,1329,1355]" name="Japan" pageId="2" pageNumber="463">Japan</collectingCountry>
, 
<collectingCountry box="[881,952,1329,1355]" name="South Korea" pageId="2" pageNumber="463">Korea</collectingCountry>
