<emphasis box="[204,358,1292,1318]" italics="true" pageId="2" pageNumber="463">quadriguttata</emphasis>
</taxonomicName>
, and 
<taxonomicName baseAuthorityName="Fabricius" baseAuthorityYear="1787" box="[422,650,1292,1319]" class="Insecta" family="Largidae" genus="Physopelta" higherTaxonomySource="GBIF" kingdom="Animalia" order="Hemiptera" pageId="2" pageNumber="462" phylum="Arthropoda" rank="species" species="slanbuschii" subGenus="Neophysopelta">
<emphasis box="[422,453,1292,1318]" italics="true" pageId="2" pageNumber="463">Ph</emphasis>
