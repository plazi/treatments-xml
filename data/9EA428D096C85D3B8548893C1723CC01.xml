<taxonomicName id="D7E982B0B6AF576AF070B4D7981DD628" LSID="9EA428D0-96C8-5D3B-8548-893C1723CC01" authority="Pole-Evans" class="Liliopsida" family="Asphodelaceae" genus="Aloe" higherTaxonomySource="CoL" kingdom="Plantae" lsidName="Aloe suprafoliata" order="Asparagales" pageId="0" pageNumber="1" phylum="Tracheophyta" rank="species" species="suprafoliata">Aloe suprafoliata Pole-Evans</taxonomicName>
