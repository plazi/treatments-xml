<taxonomicName id="ABCC4D73455CA55EDECEFAC562C1FA87" authority="Wohlh. &amp; Callm." authorityName="Wohlh. &amp; Callm." box="[389,717,1344,1364]" class="Magnoliopsida" family="Gentianaceae" genus="Exacum" kingdom="Plantae" order="Gentianales" pageId="4" pageNumber="377" phylum="Tracheophyta" rank="species" species="alberti-grimaldii">Exacum alberti-grimaldii Wohlh. &amp; Callm.</taxonomicName>
