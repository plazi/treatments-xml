<paragraph id="E9A2BE1896E4051E02655E64FA892185" pageId="3" pageNumber="4">
<taxonomicName id="C26931994D72AF109D83D8B828EEDEB4" class="Actinopterygii" family="Hypopomidae" genus="Brachyhypopomus" higherTaxonomySource="CoL" kingdom="Animalia" lsidName="Brachyhypopomus (Odontohypopomus) walteri" order="Gymnotiformes" pageId="3" pageNumber="4" phylum="Chordata" rank="species" species="walteri" subGenus="Odontohypopomus">Brachyhypopomus (Odontohypopomus) walteri</taxonomicName>
