<taxonomicName id="FC116A8147E6E32C5A3CB1B7AAA83257" class="Magnoliopsida" family="Ranunculaceae" genus="Staphisagria" higherTaxonomySource="GBIF" kingdom="Plantae" lsidName="" order="Ranunculales" pageId="1" pageNumber="22" phylum="Tracheophyta" rank="species" species="macrosperma">
