<taxonomicName id="4C674D3E0C3CF8116C6E9C92FE417088" authorityName="Skelley" authorityYear="2009" baseAuthorityName="Skelley" baseAuthorityYear="1988" box="[270,426,1669,1693]" class="Insecta" family="Erotylidae" genus="Altisessor" kingdom="Animalia" order="Coleoptera" pageId="44" pageNumber="43" phylum="Arthropoda" rank="species" species="gundlachi">
