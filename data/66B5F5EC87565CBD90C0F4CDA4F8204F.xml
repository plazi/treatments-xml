<taxonomicName id="87B3AA29E120F21822BEF065EB2FD562" class="Magnoliopsida" family="Verbenaceae" genus="Phyla" kingdom="Plantae" lsidName="Phyla nodiflora" order="Lamiales" pageId="0" pageNumber="83" phylum="Tracheophyta" rank="species" species="nodiflora">
