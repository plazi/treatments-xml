<paragraph id="B4FCF85474CEEE86BF56577B940AFDFB" pageId="13" pageNumber="350">
<taxonomicName id="4D8282A973FF97B294CBEDECF8013427" class="Insecta" family="Carabidae" genus="Cerabilia" higherTaxonomySource="CoL" kingdom="Animalia" lsidName="Cerabilia maori" order="Coleoptera" pageId="13" pageNumber="350" phylum="Arthropoda" rank="species" species="maori">Cerabilia maori</taxonomicName>
