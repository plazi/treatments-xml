</taxonomicName>
, 
<taxonomicName id="4C567EEE6275FFC770132C3DFBC7FBC1" authority="Schrottky" authorityName="Schrottky" authorityYear="1913" box="[792,1067,1118,1142]" class="Insecta" family="Megachilidae" genus="Megachile" kingdom="Animalia" order="Hymenoptera" pageId="47" phylum="Arthropoda" rank="species" species="sanctipauli">
<emphasis id="B922D97F6275FFC770132C3DFCDCFBC1" box="[792,816,1119,1142]" italics="true" pageId="47">M</emphasis>
. 
<emphasis id="B922D97F6275FFC7704B2C3CFC5BFBC1" box="[832,951,1118,1142]" italics="true" pageId="47">sanctipauli</emphasis>
