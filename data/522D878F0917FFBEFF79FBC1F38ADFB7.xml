<taxonomicName id="1D844D1A0916FFB8FEF2F822F1B3DA86" box="[284,468,1953,1975]" class="Insecta" family="Carabidae" genus="Balligratus" kingdom="Animalia" order="Coleoptera" pageId="11" pageNumber="112" phylum="Arthropoda" rank="species" species="brevis" status="sp. nov.">
<emphasis id="E8F0EA8B0916FFB8FEF2F822F1B3DA86" box="[284,468,1953,1975]" italics="true" pageId="11" pageNumber="112">
Balligratus 
<taxonomicName id="1D844D1A0916FFB8FE79F822F1B3DA86" box="[407,468,1953,1975]" pageId="11" pageNumber="112" rank="species" species="brevis" status="sp. nov.">brevis</taxonomicName>
