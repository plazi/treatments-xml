<collectingRegion box="[809,862,512,536]" country="Brazil" name="Para" pageId="6" pageNumber="590">Pará</collectingRegion>
, 
<collectingCountry box="[873,941,511,536]" name="Brazil" pageId="6" pageNumber="590">Brazil</collectingCountry>
(
<figureCitation box="[957,1041,511,536]" captionStart="FIGURE 26" captionStartId="8.[151,250,1123,1145]" captionTargetBox="[151,1436,193,1102]" captionTargetId="figure@8.[151,1436,193,1102]" captionTargetPageId="8" captionText="FIGURE 26. Collection records of Mago spp described herein: yellow circle: M. furcatus sp. nov.; red circle: M. mimicus sp. nov.; cyan circles: M. apophysis sp. nov.; purple circle: M. pardo sp. nov." httpUri="https://zenodo.org/record/1008862/files/figure.png" pageId="6" pageNumber="590">Fig. 26</figureCitation>
).
</paragraph>
