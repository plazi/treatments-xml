<subSubSection pageId="77" pageNumber="78" type="diagnosis">
<paragraph blockId="77.[151,1437,1717,2030]" pageId="77" pageNumber="78">
<emphasis bold="true" box="[199,437,1825,1850]" pageId="77" pageNumber="78">Diagnosis (worker).</emphasis>
Although 
<taxonomicName authorityName="Terayama" authorityYear="2009" box="[563,752,1825,1850]" class="Insecta" family="Formicidae" genus="Ponera" kingdom="Animalia" order="Hymenoptera" pageId="77" pageNumber="78" phylum="Arthropoda" rank="species" species="yuhuang">
