presents similarities with 
<taxonomicName authorityName="Terayama" authorityYear="1996" box="[1060,1200,1825,1850]" class="Insecta" family="Formicidae" genus="Ponera" kingdom="Animalia" order="Hymenoptera" pageId="77" pageNumber="78" phylum="Arthropoda" rank="species" species="bishamon">
<emphasis box="[1060,1074,1826,1849]" italics="true" pageId="77" pageNumber="78">P</emphasis>
. 
<emphasis box="[1091,1200,1825,1850]" italics="true" pageId="77" pageNumber="78">bishamon</emphasis>
</taxonomicName>
, 
<taxonomicName authorityName="Wheeler" authorityYear="1906" box="[1217,1347,1826,1849]" class="Insecta" family="Formicidae" genus="Ponera" kingdom="Animalia" order="Hymenoptera" pageId="77" pageNumber="78" phylum="Arthropoda" rank="species" species="japonica">
<emphasis box="[1217,1231,1826,1849]" italics="true" pageId="77" pageNumber="78">P</emphasis>
. 
<emphasis box="[1249,1347,1826,1849]" italics="true" pageId="77" pageNumber="78">japonica</emphasis>
</taxonomicName>
, and 
<taxonomicName class="Insecta" family="Formicidae" genus="Ponera" kingdom="Animalia" order="Hymenoptera" pageId="77" pageNumber="78" phylum="Arthropoda" rank="species" species="taiyanghen">
