<collectingCountry id="2ADBCCDA5251FFEEB446CB1DFA0EE090" box="[1325,1436,618,642]" name="Colombia" pageId="19" pageNumber="20">Colombia</collectingCountry>
and 
<collectingCountry id="2ADBCCDA5251FFEEB1A1CBF9FEB9E0B4" box="[202,299,654,678]" name="Ecuador" pageId="19" pageNumber="20">Ecuador</collectingCountry>
