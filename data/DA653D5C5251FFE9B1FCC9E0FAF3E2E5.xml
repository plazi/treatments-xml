<taxonomicName id="95CCF7C95251FFEEB41FCBF9FA0EE0B4" authority="Janeiro" authorityName="Janeiro" box="[1396,1436,654,678]" class="Reptilia" family="Dactyloidae" genus="Rio" kingdom="Animalia" order="Squamata" pageId="19" pageNumber="69" phylum="Chordata" rank="genus" species="de">Río</taxonomicName>
Atrato, 
<taxonomicName id="95CCF7C95251FFEEB186CBC5FE87E0D8" authority="Janeiro" authorityName="Janeiro" box="[237,277,690,714]" class="Reptilia" family="Dactyloidae" genus="Rio" kingdom="Animalia" order="Squamata" pageId="19" pageNumber="69" phylum="Chordata" rank="genus" species="de">Río</taxonomicName>
<collectingRegion id="900842A85251FFEEB076CBC5FEF4E0D8" box="[285,358,690,714]" country="Colombia" name="Cauca" pageId="19" pageNumber="20">Cauca</collectingRegion>
, and 
<taxonomicName id="95CCF7C95251FFEEB0CBCBC5FE5AE0D8" authority="Janeiro" authorityName="Janeiro" box="[416,456,690,714]" class="Reptilia" family="Dactyloidae" genus="Rio" kingdom="Animalia" order="Squamata" pageId="19" pageNumber="69" phylum="Chordata" rank="genus" species="de">Río</taxonomicName>
<collectingRegion id="900842A85251FFEEB0BBCBC5FDDEE0D8" box="[464,588,690,714]" country="Colombia" name="Magdalena" pageId="19" pageNumber="20">Magdalena</collectingRegion>
and their adjacent slopes, and the Cordillera de la Costa of 
<collectingCountry id="2ADBCCDA5251FFEEB587CBC5FACDE0D8" box="[1260,1375,690,714]" name="Venezuela" pageId="19" pageNumber="20">Venezuela</collectingCountry>
(
<figureCitation id="CAF790CF5251FFEEB405CBC5FF35E0FC" captionStart="FIGURE 8" captionStartId="19.[151,250,1965,1988]" captionTargetBox="[176,1409,827,1918]" captionTargetId="figure-273@19.[151,1436,804,1943]" captionTargetPageId="19" captionText="FIGURE 8. Distribution of the Dactyloa latifrons Species Group." pageId="19" pageNumber="20">Fig. 8</figureCitation>
).
</paragraph>
