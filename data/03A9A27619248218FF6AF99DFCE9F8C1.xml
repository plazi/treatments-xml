<taxonomicName id="4C0068E319248218FD22F92DFCEEF8C2" authorityName="Say" authorityYear="1832" box="[735,800,1771,1797]" class="Insecta" family="Pentatomidae" genus="Ascra" higherTaxonomySource="GBIF" kingdom="Animalia" order="Hemiptera" pageId="11" pageNumber="12" phylum="Arthropoda" rank="genus">
