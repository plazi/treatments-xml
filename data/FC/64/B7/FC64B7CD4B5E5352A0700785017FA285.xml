<taxonomicName class="Insecta" family="Eriococcidae" genus="Gossypariella" higherTaxonomySource="CoL" kingdom="Animalia" lsidName="Gossypariella" order="Hemiptera" pageId="0" pageNumber="339" phylum="Arthropoda" rank="genus">
<emphasis italics="true" pageId="0" pageNumber="339">Gossypariella</emphasis>
