<subSubSection pageId="0" pageNumber="71" type="etymology">
<paragraph pageId="0" pageNumber="71">Etymology.</paragraph>
<paragraph pageId="0" pageNumber="71">
<taxonomicName authority="Martinez, 2020" authorityName="Martinez" authorityYear="2020" class="Insecta" family="Noctuidae" genus="Cicadoforma" higherTaxonomySource="GBIF" kingdom="Animalia" lsidName="Cicadoforma" order="Lepidoptera" pageId="0" pageNumber="71" phylum="Arthropoda" rank="genus">
