and 
<taxonomicName class="Magnoliopsida" family="Dipterocarpaceae" genus="I." higherTaxonomySource="GBIF" kingdom="Animalia" lsidName="I. tomentosa" order="Malvales" pageId="0" pageNumber="97" phylum="Tracheophyta" rank="species" species="tomentosa">
<emphasis italics="true" pageId="0" pageNumber="97">I. tomentosa</emphasis>
</taxonomicName>
