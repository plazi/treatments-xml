<paragraph blockId="10.[298,926,1277,1303]" box="[298,926,1277,1303]" pageId="10" pageNumber="263">
<heading box="[298,926,1277,1303]" centered="true" fontSize="11" level="2" pageId="10" pageNumber="263" reason="2">
<taxonomicName authority="Slater, 1972" authorityName="Slater" authorityYear="1972" box="[298,827,1277,1303]" class="Insecta" family="Rhyparochromidae" genus="Noteolethaeus" kingdom="Animalia" order="Hemiptera" pageId="10" pageNumber="263" phylum="Arthropoda" rank="subGenus" subGenus="Sweetolethaeus">
<emphasis box="[298,464,1277,1303]" italics="true" pageId="10" pageNumber="263">Noteolethaeus</emphasis>
(
<emphasis box="[482,661,1277,1303]" italics="true" pageId="10" pageNumber="263">Sweetolethaeus</emphasis>
) Slater, 1972
</taxonomicName>
, 
<emphasis bold="true" box="[839,926,1277,1303]" pageId="10" pageNumber="263">stat. n.</emphasis>
