<taxonomicName authorityName="Meyen" authorityYear="1834" class="Magnoliopsida" family="Asteraceae" genus="Ophryosporus" higherTaxonomySource="CoL" kingdom="Plantae" lsidName="Ophryosporus triangularis" order="Asterales" pageId="0" pageNumber="57" phylum="Tracheophyta" rank="species" species="triangularis">
