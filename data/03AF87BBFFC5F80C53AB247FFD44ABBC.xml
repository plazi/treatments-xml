<taxonomicName id="4C064D2EFFC6F80D53ED2370FE66ABE6" authority="Zettel, 2021" authorityName="Zettel" authorityYear="2021" box="[229,456,1390,1411]" class="Insecta" family="Aphelocheiridae" genus="Aphelocheirus" kingdom="Animalia" order="Hemiptera" pageId="2" pageNumber="1141" phylum="Arthropoda" rank="species" species="aschalewi" status="nov.sp.">
<emphasis id="B972EABFFFC6F80D53ED2370FE66ABE6" box="[229,456,1390,1411]" italics="true" pageId="2" pageNumber="1141">Aphelocheirus aschalewi</emphasis>
