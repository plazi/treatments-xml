</emphasis>
: 
<taxonomicName id="D19366AAFFADFF93FEB9FA87E31DFA8A" authority="Maskell, 1879" authorityName="Maskell" authorityYear="1879" box="[298,604,1366,1390]" class="Insecta" family="Coccidae" genus="Inglisia" kingdom="Animalia" order="Hemiptera" pageId="6" pageNumber="63" phylum="Arthropoda" rank="species" species="patella">
