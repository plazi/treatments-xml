<subSubSection lastPageId="58" lastPageNumber="59" pageId="57" pageNumber="58" type="materials_examined">
<paragraph blockId="57.[151,516,1860,1884]" box="[151,516,1860,1884]" pageId="57" pageNumber="58">
<typeStatus box="[151,204,1861,1884]" pageId="57" pageNumber="58">Type</typeStatus>
genus: 
<taxonomicName authorityName="Fibiger" authorityYear="2010" box="[286,378,1861,1884]" class="Insecta" family="Erebidae" genus="Obscura" higherTaxonomySource="GBIF" kingdom="Animalia" order="Lepidoptera" pageId="57" pageNumber="58" phylum="Arthropoda" rank="genus" status="new genus">
<emphasis box="[286,378,1861,1884]" italics="true" pageId="57" pageNumber="58">Obscura</emphasis>
</taxonomicName>
, 
<emphasis bold="true" box="[392,509,1860,1884]" pageId="57" pageNumber="58">
<taxonomicNameLabel box="[392,509,1860,1884]" pageId="57" pageNumber="58" rank="genus">new genus</taxonomicNameLabel>
</emphasis>
