<emphasis box="[151,262,1401,1426]" italics="true" pageId="10" pageNumber="11">Conspica</emphasis>
</taxonomicName>
, 
<taxonomicName authorityName="Fibiger" authorityYear="2010" box="[278,366,1401,1426]" class="Insecta" family="Erebidae" genus="Tumula" higherTaxonomySource="GBIF" kingdom="Animalia" order="Lepidoptera" pageId="10" pageNumber="11" phylum="Arthropoda" rank="genus">
<emphasis box="[278,366,1401,1426]" italics="true" pageId="10" pageNumber="11">Tumula</emphasis>
</taxonomicName>
, 
<taxonomicName authorityName="Fibiger" authorityYear="2010" box="[383,468,1401,1426]" class="Insecta" family="Erebidae" genus="Dignus" higherTaxonomySource="GBIF" kingdom="Animalia" order="Lepidoptera" pageId="10" pageNumber="11" phylum="Arthropoda" rank="genus">
<emphasis box="[383,468,1401,1426]" italics="true" pageId="10" pageNumber="11">Dignus</emphasis>
</taxonomicName>
, 
<taxonomicName authority=", Nigerides" authorityName="Nigerides" box="[484,656,1400,1426]" class="Insecta" family="Erebidae" genus="Vas" higherTaxonomySource="GBIF" kingdom="Animalia" order="Lepidoptera" pageId="10" pageNumber="11" phylum="Arthropoda" rank="genus">
<emphasis box="[484,524,1401,1426]" italics="true" pageId="10" pageNumber="11">Vas</emphasis>
, 
<emphasis box="[542,656,1401,1426]" italics="true" pageId="10" pageNumber="11">Nigerides</emphasis>
</taxonomicName>
, 
<taxonomicName authorityName="Fibiger" authorityYear="2010" box="[673,744,1401,1426]" class="Insecta" family="Erebidae" genus="Fustis" higherTaxonomySource="GBIF" kingdom="Animalia" order="Lepidoptera" pageId="10" pageNumber="11" phylum="Arthropoda" rank="genus">
