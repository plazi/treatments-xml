<taxonomicName box="[836,946,1360,1386]" class="Insecta" family="Erebidae" higherTaxonomySource="GBIF" kingdom="Animalia" order="Lepidoptera" pageId="10" pageNumber="11" phylum="Arthropoda" rank="tribe" status="new tribe" tribe="Tactusini">Tactusini</taxonomicName>
