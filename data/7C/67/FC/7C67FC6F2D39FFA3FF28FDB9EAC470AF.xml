<taxonomicName authorityName="Fibiger" authorityYear="2010" box="[1339,1429,1361,1386]" class="Insecta" family="Erebidae" genus="Tactusa" higherTaxonomySource="GBIF" kingdom="Animalia" order="Lepidoptera" pageId="10" pageNumber="11" phylum="Arthropoda" rank="genus">
