<paragraph pageId="1" pageNumber="16">
<taxonomicName authorityName="Roth" authorityYear="1800" class="Dicotyledoneae" family="Onagraceae" genus="Oenothera" higherTaxonomySource="GBIF" kingdom="Plantae" lsidName="" order="Myrtiflorae" pageId="1" pageNumber="16" phylum="Angiospermae" rank="species" species="tetragona">
