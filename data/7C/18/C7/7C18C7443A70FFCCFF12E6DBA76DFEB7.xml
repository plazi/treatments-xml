<paragraph blockId="3.[153,1436,151,356]" pageId="3" pageNumber="46">
<emphasis bold="true" box="[197,313,260,284]" pageId="3" pageNumber="46">Remarks.</emphasis>
<taxonomicName box="[322,585,260,284]" class="Insecta" family="Cerambycidae" genus="Eucharitolus" kingdom="Animalia" order="Coleoptera" pageId="3" pageNumber="46" phylum="Arthropoda" rank="species" species="depressus" status="sp. nov.">
<emphasis box="[322,585,260,284]" italics="true" pageId="3" pageNumber="46">Eucharitolus depressus</emphasis>
</taxonomicName>
<taxonomicNameLabel box="[595,686,260,284]" pageId="3" pageNumber="46" rank="species">
<emphasis bold="true" box="[595,686,260,284]" pageId="3" pageNumber="46">sp. nov.</emphasis>
</taxonomicNameLabel>
