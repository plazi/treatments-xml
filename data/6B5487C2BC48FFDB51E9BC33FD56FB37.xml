<collectingCountry id="9BEA7644BC48FFDA5017BF0EFE0FF98B" box="[361,434,1541,1567]" name="Brazil" pageId="14" pageNumber="37">Brazil</collectingCountry>
: “de 
<location id="E622600FBC48FFDA5094BF0EFDCFF98B" LSID="urn:lsid:plazi:treatment:6B5487C2BC48FFDB51E9BC33FD56FB37:E622600FBC48FFDA5094BF0EFDCFF98B" box="[490,626,1541,1567]" country="Brazil" name="Rio Grande" pageId="14" pageNumber="37" stateProvince="Rio Grande do Sul">Rio Grande</location>
