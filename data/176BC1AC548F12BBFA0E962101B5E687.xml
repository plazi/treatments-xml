<taxonomicName id="8572930FFBE4FBDC19A46DCEA1173E90" LSID-HNS="urn:lsid:biosci.ohio-state.edu:osuc_concepts:181884" class="Insecta" family="Formicidae" genus="Pheidole" higherTaxonomySource="CoL" kingdom="Animalia" lsidName="Pheidole hedlundorum Wilson" lsidName-HNS="Pheidole hedlundorum Wilson" order="Hymenoptera" pageNumber="435" phylum="Arthropoda" rank="species" species="hedlundorum">Pheidole hedlundorum</taxonomicName>
