<quantity id="CF139B1E127DFFC8FF62FAE1FF456F2C" box="[151,232,1339,1363]" metricMagnitude="-3" metricUnit="m" metricValue="1.5" pageId="24" pageNumber="681" unit="mm" value="1.5">1.5 mm</quantity>
(
<typeStatus id="D7508859127DFFC8FF02FAE6FEF46F2B" box="[247,345,1340,1364]" pageId="24" pageNumber="681">paratype</typeStatus>
