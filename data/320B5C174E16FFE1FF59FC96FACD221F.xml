<taxonomicName id="7DA296824E16FFE1FB03F99DFECB233E" authority="Stichel, 1910" authorityName="Stichel" authorityYear="1910" class="Insecta" family="Lycaenidae" genus="Melanis" kingdom="Animalia" order="Lepidoptera" pageId="7" pageNumber="282" phylum="Arthropoda" rank="subSpecies" species="aegates" subSpecies="albugo">
