<taxonomicName id="4C0E00888560145AE7C6F9A8FE060126" authority="Rafinesque, 1818:272" authorityName="Rafinesque" authorityPageNumber="272" authorityYear="1818" box="[151,472,1578,1600]" class="Elasmobranchii" family="Dasyatidae" genus="Hypanus" kingdom="Animalia" order="Myliobatiformes" pageId="10" pageNumber="355" phylum="Chordata" rank="genus">
<emphasis id="B97AA7198560145AE7C6F9A8FF2F0126" box="[151,241,1579,1600]" italics="true" pageId="10" pageNumber="355">Hypanus</emphasis>
