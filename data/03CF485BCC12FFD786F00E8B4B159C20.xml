<quantity id="4C9E54A8CC11FFD787C1097348E59C44" box="[422,486,799,825]" metricMagnitude="-3" metricUnit="m" metricValue="6.0" pageId="18" pageNumber="205" unit="mm" value="6.0">6 mm</quantity>
