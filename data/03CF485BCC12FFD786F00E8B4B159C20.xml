<taxonomicName id="4C6682CECC11FFD7857D09734A809C45" authorityName=": Carvalho" authorityYear="1957" box="[794,899,799,824]" class="Insecta" family="Miridae" genus="Cylapus" kingdom="Animalia" order="Hemiptera" pageId="18" pageNumber="205" phylum="Arthropoda" rank="species" species="stygius">
