<paragraph id="FB23C8BBDAC6FF32E026829E9F244F4B" pageId="4" pageNumber="5">
<taxonomicName id="2B902A7FA8013E3D2C3564B032EC0AD7" family="Stenomicridae" lsidName="" pageId="4" pageNumber="5" rank="family">Stenomicridae</taxonomicName>
<bibRefCitation id="F813BB651F5FB55C8B6E6A96DE68F2E7" pageId="4" pageNumber="5">Papp 1984</bibRefCitation>
