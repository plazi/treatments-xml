<heading id="3F3AEB7E2B106940801117F01564A8EA" box="[819,1080,1426,1448]" centered="true" fontSize="10" level="2" pageId="1" reason="2">
<taxonomicName id="A3CD27912B106940801117F01564A8EA" authority="Thomson, 1857" authorityName="Thomson" authorityYear="1857" box="[819,1080,1426,1448]" class="Insecta" family="Cerambycidae" genus="Amillarus" kingdom="Animalia" order="Coleoptera" pageId="1" phylum="Arthropoda" rank="genus">
<emphasis id="56B980002B106940801117F01564A8EA" bold="true" box="[819,1080,1426,1448]" pageId="1">
<emphasis id="56B980002B106940801117F012C8A8E5" bold="true" box="[819,916,1426,1447]" italics="true" pageId="1">Amillarus</emphasis>
<bibRefCitation id="005C21E32B10694080BE17F11564A8EA" author="Thomson" box="[924,1080,1427,1448]" pageId="1" pagination="291 - 320" refId="ref4551" refString="Thomson, J. 1857. Description de cerambycides nouveaux ou peu connus de ma collection. Archives Entomologiques 1: 291 - 320." type="journal article" year="1857">Thomson, 1857</bibRefCitation>
