<taxonomicName id="95CF7085FFF9FFDE092D0F700282D039" authority="Cope, 1860" authorityName="Cope" authorityYear="1860" baseAuthorityName="Boulenger" baseAuthorityYear="1895" box="[1099,1238,1831,1857]" class="Reptilia" family="Anguidae" genus="Siderolamprus" higherTaxonomySource="GBIF" kingdom="Animalia" order="Squamata" pageId="39" pageNumber="240" phylum="Chordata" rank="species" species="bivittatus">S. bivittatus</taxonomicName>
