<taxonomicName id="95CF7085FFF9FFDE0C150F1C07B2D01D" authority="Cope, 1860" authorityName="Cope" authorityYear="1860" baseAuthorityName="Savage &amp; Lips" baseAuthorityYear="1993" box="[371,486,1867,1893]" class="Reptilia" family="Anguidae" genus="Siderolamprus" higherTaxonomySource="GBIF" kingdom="Animalia" order="Squamata" pageId="39" pageNumber="240" phylum="Chordata" rank="species" species="hylaius">S. hylaius</taxonomicName>
