≡ 
<taxonomicName id="9603C8A058626BC38C636C7D90255AE0" class="Magnoliopsida" family="Caryophyllaceae" genus="Silene" higherTaxonomySource="CoL" kingdom="Plantae" lsidName="Silene kotschyi subsp. var. var. maritima" order="Caryophyllales" pageId="0" pageNumber="1" phylum="Tracheophyta" rank="variety" species="kotschyi" subSpecies="var." variety="maritima">Silene kotschyi Boiss. var. maritima</taxonomicName>
