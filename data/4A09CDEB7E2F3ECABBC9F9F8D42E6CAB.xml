<paragraph id="B66FE6E563AD3D3F609AFB18DFB3E330" pageId="5" pageNumber="72">
Genus 
<taxonomicName id="2A5F3ED6CA6FBE3A135101EC3A9A7787" LSID="urn:lsid:zoobank.org:act:23AFF0D1-4D05-4E15-8B91-79F32AE4A9D0" authority="Snyman &amp; Ohl" class="Insecta" family="Mantispidae" genus="Afromantispa" higherTaxonomySource="CoL" kingdom="Animalia" lsidName="Afromantispa" order="Neuroptera" pageId="5" pageNumber="72" phylum="Arthropoda" rank="genus">Afromantispa Snyman &amp; Ohl</taxonomicName>
<taxonomicNameLabel id="14695255004F1299B28D576A1A53349D" pageId="5" pageNumber="72">gen. n.</taxonomicNameLabel>
