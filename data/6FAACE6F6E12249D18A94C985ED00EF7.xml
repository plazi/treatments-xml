[[ Genus 
<taxonomicName id="FA8A9A2C688398A7342E05A7FFC8E9CE" LSID-ZBK="urn:lsid:zoobank.org:act:0707F8C9-8786-4D4C-8F2F-D9F66C7B96BF" class="Actinopterygii" family="Sebastidae" genus="Trachyscorpia" higherTaxonomySource="CoL" kingdom="Animalia" lsidName-ZBK="Trachyscorpia Ginsburg 1953:23, 57" order="Scorpaeniformes" pageNumber="19" phylum="Chordata" rank="genus">Trachyscorpia Ginsburg</taxonomicName>
