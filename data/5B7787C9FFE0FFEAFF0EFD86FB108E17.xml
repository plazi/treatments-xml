<taxonomicName id="14DE4D5CFFE0FFEAFE77FAB1FD7B8D31" box="[494,747,1333,1356]" class="Insecta" family="Noctuidae" genus="Ponometia" kingdom="Animalia" order="Lepidoptera" pageId="4" pageNumber="5" phylum="Arthropoda" rank="species" species="erastrioides">Ponometia erastrioides</taxonomicName>
