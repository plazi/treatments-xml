<collectingCountry box="[151,249,1693,1717]" name="Pakistan" pageId="50" pageNumber="51">Pakistan</collectingCountry>
, 
<collectingCountry box="[260,371,1693,1717]" name="Indonesia" pageId="50" pageNumber="51">Indonesia</collectingCountry>
, 
<collectingCountry box="[382,485,1693,1717]" name="Australia" pageId="50" pageNumber="51">Australia</collectingCountry>
(
<collectingRegion box="[499,705,1693,1717]" country="Australia" name="Western Australia" pageId="50" pageNumber="51">Western Australia</collectingRegion>
, 
<collectingRegion box="[716,924,1693,1717]" country="Australia" name="Northern Territory" pageId="50" pageNumber="51">Northern Territory</collectingRegion>
, 
<collectingRegion box="[935,1073,1693,1717]" country="Australia" name="Queensland" pageId="50" pageNumber="51">Queensland</collectingRegion>
).
</paragraph>
<paragraph blockId="50.[151,1436,1585,1934]" box="[199,576,1729,1754]" pageId="50" pageNumber="51">
