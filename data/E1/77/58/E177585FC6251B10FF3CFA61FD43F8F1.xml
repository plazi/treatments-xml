<quantity box="[844,941,1596,1620]" metricMagnitude="1" metricUnit="m" metricValue="2.5" metricValueMax="3.0" metricValueMin="2.0" pageId="35" pageNumber="36" unit="m" value="25.0" valueMax="30.0" valueMin="20.0">
