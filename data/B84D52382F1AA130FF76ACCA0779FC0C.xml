<taxonomicName id="F7E498AD2F1AA130FF76ACCA0420FF46" box="[178,371,216,238]" class="Magnoliopsida" family="Amaranthaceae" genus="Amaranthus" kingdom="Plantae" order="Caryophyllales" pageId="2" pageNumber="373" phylum="Tracheophyta" rank="species" species="albus">
