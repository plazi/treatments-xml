<subSubSection id="0AABB717475E2EE423147E550C7E7383" pageId="42" pageNumber="43" type="reference_group">
<paragraph id="47871B890CADCC16B0EB4D4DC6C3168B" pageId="42" pageNumber="43">
<taxonomicName id="D8C5B8D6C6DB83AF481E763826EA43F2" authority="Keiser" authorityName="Keiser" class="Insecta" family="Syrphidae" genus="Megodon" higherTaxonomySource="GBIF" kingdom="Animalia" lsidName="Megodon" order="Diptera" pageId="42" pageNumber="43" phylum="Arthropoda" rank="genus">Megodon</taxonomicName>
