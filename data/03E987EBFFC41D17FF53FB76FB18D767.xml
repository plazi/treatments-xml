/ 
<collectingRegion id="4984F81FFFC31D16FCFCF900FC24D0BB" box="[824,953,1704,1729]" country="India" name="Puducherry" pageId="4" pageNumber="596">
<collectingCountry id="F357766DFFC31D16FCFCF900FC24D0BB" box="[824,953,1704,1729]" name="India" pageId="4" pageNumber="596">Puducherry</collectingCountry>
</collectingRegion>
, southern 
<collectingCountry id="F357766DFFC31D16FBE8F900FBF4D0BB" box="[1068,1129,1704,1729]" name="India" pageId="4" pageNumber="596">India</collectingCountry>
