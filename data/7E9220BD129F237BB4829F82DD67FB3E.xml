<taxonomicName id="1F7C972664547FC59B149AD6B063A4DA" authorityName="Putzeys" authorityYear="1867" class="Hexapoda" family="Carabidae" genus="Ardistomis" higherTaxonomySource="GBIF" kingdom="Animalia" lsidName="" order="Coleoptera" pageId="28" pageNumber="47" phylum="Arthropoda" rank="species" species="striga">
