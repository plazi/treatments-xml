<taxonomicName id="4C2B4D2EFFB9FF896920F9E250F0F9D6" authorityName=": Chikatunov &amp; Pavlicek" authorityYear="1997" box="[829,968,1550,1575]" class="Insecta" family="Scarabaeidae" genus="Aplidia" higherTaxonomySource="GBIF" kingdom="Animalia" order="Coleoptera" pageId="5" pageNumber="541" phylum="Arthropoda" rank="species" species="petrovitzi">
