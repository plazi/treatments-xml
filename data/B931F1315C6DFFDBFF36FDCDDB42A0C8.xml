<taxonomicName id="F6983BA45C6CFFDBFF36FDABD857A02F" authorityName="Assing" authorityYear="2008" box="[178,304,615,637]" class="Insecta" family="Staphylinidae" genus="Leptusa" kingdom="Animalia" order="Coleoptera" pageId="5" pageNumber="256" phylum="Arthropoda" rank="species" species="stimulans">
<emphasis id="03EC9C355C6CFFDBFF36FDABD857A02F" box="[178,304,615,637]" italics="true" pageId="5" pageNumber="256">L. stimulans</emphasis>
