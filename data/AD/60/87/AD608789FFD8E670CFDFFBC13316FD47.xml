</taxonomicName>
<taxonomicNameLabel box="[1284,1344,296,319]" pageId="8" pageNumber="269" sensu="stricto">s. str.</taxonomicNameLabel>
(
<taxonomicName baseAuthorityName="Panzer" baseAuthorityYear="1793" class="Insecta" family="Buprestidae" genus="Anthaxia" higherTaxonomySource="GBIF" kingdom="Animalia" order="Coleoptera" pageId="8" pageNumber="269" phylum="Arthropoda" rank="species" species="candens" subGenus="Anthaxia">
