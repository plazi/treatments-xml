<taxonomicName class="Magnoliopsida" family="Poaceae" genus="G." higherTaxonomySource="GBIF" kingdom="Plantae" lsidName="G. albociliata" order="Poales" pageId="0" pageNumber="37" phylum="Angiospermae" rank="species" species="albociliata">
