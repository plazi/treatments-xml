<location LSID="urn:lsid:plazi:treatment:AD76878EFFFDFFF7E292A52DCC20713E:20006043FFFBFFF7E322A2DCCFE474BE" box="[295,420,186,212]" country="United States of America" county="Teller County" municipality="Florissant" name="Priabonian" pageId="21" pageNumber="322" stateProvince="Colorado">Priabonian</location>
; 
<location LSID="urn:lsid:plazi:treatment:AD76878EFFFDFFF7E292A52DCC20713E:20006043FFFBFFF7E3AAA2DCCCDD74BE" box="[431,669,186,212]" country="United States of America" county="Teller County" municipality="Florissant" name="Florissant Formation" pageId="21" pageNumber="322" stateProvince="Colorado">Florissant Formation</location>
