<subSubSection type="nomenclature">
<paragraph pageNumber="551">
<taxonomicName LSID-HNS="urn:lsid:biosci.ohio-state.edu:osuc_concepts:181966" class="Insecta" family="Formicidae" genus="Pheidole" higherTaxonomySource="CoL" kingdom="Animalia" lsidName="Pheidole gemmula Wilson" lsidName-HNS="Pheidole gemmula Wilson" order="Hymenoptera" pageNumber="551" phylum="Arthropoda" rank="species" species="gemmula">Pheidole gemmula</taxonomicName>
