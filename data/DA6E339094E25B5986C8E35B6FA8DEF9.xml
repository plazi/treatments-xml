</taxonomicName>
Kunth, 
<taxonomicName id="63B3CE12D12E2706E3F879A207895D3F" class="Magnoliopsida" family="Myrtaceae" genus="Psidium" higherTaxonomySource="CoL" kingdom="Plantae" lsidName="" order="Myrtales" pageId="14" pageNumber="19" phylum="Tracheophyta" rank="species" species="guajava">
