<taxonomicName id="4C144D2BFFC1FFD09B60F82AFE35B2DB" authority="Crosnier, 2003" authorityName="Crosnier" authorityYear="2003" box="[324,451,2003,2027]" class="Malacostraca" family="Portunidae" genus="Richerellus" kingdom="Animalia" order="Decapoda" pageId="0" pageNumber="315" phylum="Arthropoda" rank="genus" status="new genus">
<emphasis id="B960EABAFFC1FFD09B60F82AFE35B2DB" bold="true" box="[324,451,2003,2027]" italics="true" pageId="0" pageNumber="315">Richerellus</emphasis>
</taxonomicName>
, 
<taxonomicNameLabel id="A25357C1FFC1FFD09BF7F82BFDBDB2DA" box="[467,587,2002,2026]" pageId="0" pageNumber="315" rank="genus">new genus</taxonomicNameLabel>
