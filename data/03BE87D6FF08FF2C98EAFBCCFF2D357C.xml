<quantity id="4CEF9B25FF08FF2C9B1CFAE5F9CB3534" box="[865,906,1303,1329]" metricMagnitude="0" metricUnit="m" metricValue="1.0" pageId="153" pageNumber="154" unit="m" value="1.0">1 m</quantity>
