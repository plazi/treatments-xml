<paragraph blockId="17.[167,779,988,2091]" pageId="17" pageNumber="198">
<emphasis bold="true" box="[168,411,1027,1051]" pageId="17" pageNumber="198">Materials examined.</emphasis>
<collectingCountry box="[425,538,1027,1051]" name="Canada" pageId="17" pageNumber="198">CANADA</collectingCountry>
– 
<emphasis bold="true" box="[579,678,1027,1051]" pageId="17" pageNumber="198">
<collectingRegion box="[579,678,1027,1051]" country="Canada" name="Nunavut" pageId="17" pageNumber="198">Nunavut</collectingRegion>
