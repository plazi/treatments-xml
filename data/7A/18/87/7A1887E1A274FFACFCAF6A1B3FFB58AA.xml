and 
<taxonomicName authority="subsp. brachyphylla" class="Liliopsida" family="Poaceae" genus="Festuca" kingdom="Plantae" order="Poales" pageId="25" pageNumber="206" phylum="Tracheophyta" rank="subSpecies" species="brachyphylla" subSpecies="brachyphylla">
<emphasis italics="true" pageId="25" pageNumber="206">F. brachyphylla</emphasis>
subsp. 
<emphasis box="[315,457,1216,1240]" italics="true" pageId="25" pageNumber="206">brachyphylla</emphasis>
</taxonomicName>
.
</paragraph>
