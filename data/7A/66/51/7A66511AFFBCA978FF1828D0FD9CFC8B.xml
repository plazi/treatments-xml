<taxonomicName authorityName="Pic" authorityYear="1921" box="[392,540,691,717]" class="Insecta" family="Lycidae" genus="Platerodrilus" higherTaxonomySource="GBIF" kingdom="Animalia" order="Coleoptera" pageId="14" pageNumber="451" phylum="Arthropoda" rank="genus">
