<subSubSection pageId="0" pageNumber="93" type="diagnosis">
<paragraph pageId="0" pageNumber="93">Diagnosis.</paragraph>
<paragraph pageId="0" pageNumber="93">
<taxonomicName class="Magnoliopsida" family="Rosaceae" genus="Lachemilla" higherTaxonomySource="CoL" kingdom="Plantae" lsidName="Lachemilla rothmaleriana" order="Rosales" pageId="0" pageNumber="93" phylum="Tracheophyta" rank="species" species="rothmaleriana">
<emphasis italics="true" pageId="0" pageNumber="93">Lachemilla rothmaleriana</emphasis>
</taxonomicName>
