<taxonomicName class="Dicotyledoneae" family="Rosaceae" genus="L." higherTaxonomySource="GBIF" kingdom="Plantae" lsidName="L. hispidula" order="Rosales" pageId="0" pageNumber="93" phylum="Angiospermae" rank="species" species="hispidula">
<emphasis italics="true" pageId="0" pageNumber="93">L. hispidula</emphasis>
</taxonomicName>
(L.M. Perry) Rothm. and 
<taxonomicName class="Dicotyledoneae" family="Rosaceae" genus="L." higherTaxonomySource="GBIF" kingdom="Plantae" lsidName="L. nivalis" order="Rosales" pageId="0" pageNumber="93" phylum="Angiospermae" rank="species" species="nivalis">
<emphasis italics="true" pageId="0" pageNumber="93">L. nivalis</emphasis>
