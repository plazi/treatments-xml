<paragraph id="0D7D7E76C825FFE7DDCFC9DDFE57F87A" blockId="17.[151,493,1931,1958]" box="[151,493,1931,1958]" pageId="17" pageNumber="18">
<heading id="5635C91AC825FFE7DDCFC9DDFE57F87A" bold="true" box="[151,493,1931,1958]" fontSize="11" level="1" pageId="17" pageNumber="18" reason="1">
<taxonomicName id="CAC205F5C825FFE7DDCFC9DDFE57F87A" authority="Francois, 1969" authorityName="Francois" authorityYear="1969" box="[151,493,1931,1958]" class="Insecta" family="Bombyliidae" genus="Usia" kingdom="Animalia" order="Diptera" pageId="17" pageNumber="18" phylum="Arthropoda" rank="species" species="martini">
<emphasis id="3FB6A264C825FFE7DDCFC9DDFE57F87A" bold="true" box="[151,493,1931,1958]" pageId="17" pageNumber="18">
<emphasis id="3FB6A264C825FFE7DDCFC9DDFE94F879" bold="true" box="[151,302,1932,1958]" italics="true" pageId="17" pageNumber="18">Usia martini</emphasis>
<bibRefCitation id="69530387C825FFE7DC6EC9DAFE57F87A" author="Francois" box="[310,493,1931,1957]" firstAuthor="Francois" pageId="17" pageNumber="18" pagination="107 - 60" refId="ref52797" refString="Francois, F. J. (1969) Bombyliidae (Diptera) from southern Spain, with descriptions of twelve new species. Entomologisk Meddelelser, 37, 107 - 60." type="journal article" year="1969">François, 1969</bibRefCitation>
</emphasis>
</taxonomicName>
