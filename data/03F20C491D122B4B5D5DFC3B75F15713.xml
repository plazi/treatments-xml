<taxonomicName id="4C5BC6DC1D122B4B5C86FB3175BF55EE" authority="(B. C. Stone) Callm. &amp; Buerki" authorityName="Callm. &amp; Buerki" baseAuthorityName="B. C. Stone" box="[444,675,1218,1242]" class="Liliopsida" family="Pandanaceae" genus="Benstonea" kingdom="Plantae" order="Pandanales" pageId="15" pageNumber="338" phylum="Tracheophyta" rank="species" species="poronavila">
