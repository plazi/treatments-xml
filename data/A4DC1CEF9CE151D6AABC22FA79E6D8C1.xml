<subSubSection id="372B03ADBB0F78B710130D557B7120FC" pageId="0" pageNumber="1" type="diagnosis">
<paragraph id="E0163C6770CFE2AC44B4291F5D04ED6C" pageId="0" pageNumber="1">Diagnosis.</paragraph>
<paragraph id="4BD9AEAE2CBD3F872033F3B9281C78A3" pageId="0" pageNumber="1">
Like 
<taxonomicName id="9DDFEAA09EF71AE6CCD83FEADB6F57A8" authorityName="Montr" authorityYear="1860" class="Magnoliopsida" family="Solanaceae" genus="Solanum" higherTaxonomySource="CoL" kingdom="Plantae" lsidName="Solanum artense" order="Solanales" pageId="0" pageNumber="1" phylum="Tracheophyta" rank="species" species="artense">
