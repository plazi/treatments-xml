<paragraph pageId="null" pageNumber="944">
Pungen, 
<taxonomicName class="Magnoliopsida" family="Primulaceae" genus="Samolus" kingdom="Plantae" order="Ericales" pageId="null" pageNumber="944" phylum="Tracheophyta" rank="genus">Samolus</taxonomicName>
</paragraph>
