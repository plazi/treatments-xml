<subSubSection pageId="57" pageNumber="58" type="discussion">
<paragraph blockId="57.[151,1437,150,970]" pageId="57" pageNumber="58">
<emphasis bold="true" box="[199,315,907,933]" pageId="57" pageNumber="58">Remarks.</emphasis>
<taxonomicName authorityName="Zahniser" authorityYear="2021" box="[321,471,907,933]" class="Insecta" family="Cicadellidae" genus="Faltala" kingdom="Animalia" order="Hemiptera" pageId="57" pageNumber="58" phylum="Arthropoda" rank="species" species="catalanoae">
<emphasis box="[321,471,907,933]" italics="true" pageId="57" pageNumber="58">F. catalanoae</emphasis>
