<paragraph blockId="14.[813,1456,950,1662]" pageId="14" pageNumber="97">
<collectionCode box="[813,909,950,974]" pageId="14" pageNumber="97">ORIGINAL</collectionCode>
<collectionCode box="[913,1039,955,972]" pageId="14" pageNumber="97">DESCRIPTION</collectionCode>
FOR 
<taxonomicName authorityName="White" authorityYear="1846" box="[1085,1162,950,974]" class="Malacostraca" family="Pinnotheridae" genus="Pinnixa" kingdom="Animalia" order="Decapoda" pageId="14" pageNumber="97" phylum="Arthropoda" rank="genus">
