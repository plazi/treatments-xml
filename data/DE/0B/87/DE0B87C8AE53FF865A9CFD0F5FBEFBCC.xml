<subSubSection box="[199,1100,873,899]" pageId="2" pageNumber="178" type="etymology">
<paragraph blockId="2.[151,1437,153,1043]" box="[199,1100,873,899]" pageId="2" pageNumber="178">
<emphasis bold="true" box="[199,338,873,899]" pageId="2" pageNumber="178">Etymology:</emphasis>
