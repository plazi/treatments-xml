<subSubSection type="nomenclature">
<paragraph pageNumber="273">
<taxonomicName LSID-HNS="urn:lsid:biosci.ohio-state.edu:osuc_concepts:181722" class="Insecta" family="Formicidae" genus="Pheidole" higherTaxonomySource="CoL" kingdom="Animalia" lsidName-HNS="Pheidole chiapasana Wilson" order="Hymenoptera" pageNumber="273" phylum="Arthropoda" rank="species" species="chiapasana">Pheidole chiapasana</taxonomicName>
