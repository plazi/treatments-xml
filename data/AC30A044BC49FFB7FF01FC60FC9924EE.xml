<quantity id="E361BCB7BC4BFFB7FEF3FED0FEB5278D" box="[320,357,370,391]" metricMagnitude="-2" metricUnit="m" metricValue="7.62" pageId="11" pageNumber="1146" unit="in" value="3.0">3 in</quantity>
