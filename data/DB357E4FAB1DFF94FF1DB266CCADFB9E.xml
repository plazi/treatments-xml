<taxonomicName id="949CB4DAAB1DFF94FF1DB266CE59FD48" authority="Evans, 1937" authorityName="Evans" authorityYear="1937" box="[151,539,617,643]" class="Insecta" family="Hesperiidae" genus="Platylesches" kingdom="Animalia" order="Lepidoptera" pageId="18" pageNumber="489" phylum="Arthropoda" rank="species" species="panga">
