<collectingCountry id="90D7C582FFB6636FF4654FBB96AFFE04" box="[359,479,440,465]" name="Cameroon" pageId="16" pageNumber="73">Cameroon</collectingCountry>
, 
<collectingCountry id="90D7C582FFB6636FF4E84FBB9547FE04" box="[490,567,440,465]" name="Ghana" pageId="16" pageNumber="73">Ghana</collectingCountry>
