<collectionCode id="ED71AE57A27FFFE4F9CBFE24FADBFE13" box="[1242,1305,450,472]" pageId="3" pageNumber="304">WORLD</collectionCode>
(
<taxonomicName id="4C604D11A27FFFE4F832FE24FA5BFE13" box="[1315,1433,450,472]" class="Insecta" kingdom="Animalia" order="Orthoptera" pageId="3" pageNumber="304" phylum="Arthropoda" rank="order">
