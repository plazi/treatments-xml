<collectionCode id="ED71AE57A27FFFE4FC8EFE24FE03FE13" box="[415,449,450,472]" country="China" httpUri="http://biocol.org/urn:lsid:biocol.org:col:14032" name="Shihezi Agricultural College" pageId="3" pageNumber="304">SHI</collectionCode>
