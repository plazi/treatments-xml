<taxonomicName id="00B03685FFB2FF81FE9B21A9FDDF8AEB" authorityName="Peters" authorityYear="1867" box="[361,596,955,976]" class="Mammalia" family="Emballonuridae" genus="Peropteryx" kingdom="Animalia" order="Chiroptera" pageId="33" pageNumber="33" phylum="Chordata" rank="species" species="leucoptera">
