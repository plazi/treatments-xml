<emphasis italics="true" pageId="14" pageNumber="15">
<taxonomicName baseAuthorityName="Lafresnaye" baseAuthorityYear="1843" box="[1368,1436,837,863]" class="Aves" family="Grallariidae" genus="Grallaria" kingdom="Animalia" order="Passeriformes" pageId="14" pageNumber="15" phylum="Chordata" rank="species" species="rufula">rufula</taxonomicName>
5
</emphasis>
