<subSubSection box="[151,793,1177,1203]" pageId="18" pageNumber="19" type="description">
<paragraph blockId="18.[151,1437,1177,1564]" box="[151,793,1177,1203]" pageId="18" pageNumber="19">
Includes population designated 
<emphasis box="[507,618,1177,1203]" italics="true" pageId="18" pageNumber="19">
<taxonomicName authorityName="Berlepsch &amp; Stolzmann" authorityYear="1896" box="[507,597,1177,1203]" class="Aves" family="Grallariidae" genus="Grallaria" kingdom="Animalia" order="Passeriformes" pageId="18" pageNumber="19" phylum="Chordata" rank="species" species="obscura">obscura</taxonomicName>
