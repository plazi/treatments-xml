<quantity id="A6519B25FFDFFFE7F98C24642912F63B" box="[502,552,1632,1657]" metricMagnitude="1" metricUnit="m" metricValue="3.0" pageId="2" pageNumber="73" unit="m" value="30.0">30m</quantity>
