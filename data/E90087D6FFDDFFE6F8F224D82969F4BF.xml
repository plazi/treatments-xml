<taxonomicName id="A6A94D43FFDFFFE7FA7424802994F6DF" authorityName="Hoffmann" authorityYear="1900" box="[526,686,1668,1693]" class="Magnoliopsida" family="Asteraceae" genus="Sphagneticola" kingdom="Plantae" order="Asterales" pageId="2" pageNumber="73" phylum="Tracheophyta" rank="genus">
