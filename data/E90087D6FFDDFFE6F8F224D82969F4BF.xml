<taxonomicName id="A6A94D43FFDFFFE7FA6324382983F617" authorityName="Hoffmann" authorityYear="1900" box="[537,697,1596,1621]" class="Magnoliopsida" family="Asteraceae" genus="Sphagneticola" kingdom="Plantae" order="Asterales" pageId="2" pageNumber="73" phylum="Tracheophyta" rank="genus">
