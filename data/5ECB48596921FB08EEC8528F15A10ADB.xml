<td id="CE5D1BF8EFD478FD690F5D1399F4D476" align="left" pageId="null" pageNumber="498" valign="top">
2. 
<normalizedToken id="E8314EE8E85A0A9964817A1818838601" originalValue="Grundständige" pageId="null" pageNumber="498">Grundstaendige</normalizedToken>
<normalizedToken id="22C4EFA919525F617392DC8CCA3E717A" originalValue="Blätter" pageId="null" pageNumber="498">Blaetter</normalizedToken>
