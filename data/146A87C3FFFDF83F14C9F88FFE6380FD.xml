<collectionCode id="FAD2AE10FFFAF8321175FE86FAB287C9" box="[1323,1382,369,395]" country="Philippines" httpUri="http://grbio.org/cool/apja-k356" name="Gregorio T. Velasquez Phycological Herbarium" pageId="20" pageNumber="321">GTV</collectionCode>
