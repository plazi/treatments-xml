<taxonomicName id="30A64D65FFFE4B5DFE14017CFDD47AFC" box="[434,637,1130,1156]" class="Agaricomycetes" family="Agaricaceae" genus="Micropsalliota" kingdom="Fungi" order="Agaricales" pageId="7" pageNumber="174" phylum="Basidiomycota" rank="species" species="pseudoarginea">
