<emphasis id="C5D2EAF4FFFE4B5DFBA80198FBDF7AD0" box="[1038,1142,1166,1192]" italics="true" pageId="7" pageNumber="174">M. bifida</emphasis>
</taxonomicName>
and 
<taxonomicName id="30A64D65FFFE4B5DFB170198FAD47AD0" box="[1201,1405,1166,1192]" class="Agaricomycetes" family="Agaricaceae" genus="Micropsalliota" kingdom="Fungi" order="Agaricales" pageId="7" pageNumber="174" phylum="Basidiomycota" rank="species" species="pseudoarginea">
<emphasis id="C5D2EAF4FFFE4B5DFB170198FAD47AD0" box="[1201,1405,1166,1192]" italics="true" pageId="7" pageNumber="174">M. pseudoarginea</emphasis>
</taxonomicName>
