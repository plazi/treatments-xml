<taxonomicName id="30A64D65FFFE4B5DFC7E017CFB6F7AFC" authorityName="R. L. Zhao, J. X. Li &amp; M. Q. He" authorityYear="2021" box="[984,1222,1130,1156]" class="Agaricomycetes" family="Agaricaceae" genus="Micropsalliota" kingdom="Fungi" order="Agaricales" pageId="7" pageNumber="174" phylum="Basidiomycota" rank="species" species="dentatomarginata">
