<subSubSection id="00D41B90257A9B50FEDC9B0CC138FA80" box="[312,874,1343,1370]" pageId="9" pageNumber="10" type="materials_examined">
<paragraph id="4871481B257A9B50FEDC9B0CC138FA80" blockId="9.[264,1324,1343,1890]" box="[312,874,1343,1370]" pageId="9" pageNumber="10">
