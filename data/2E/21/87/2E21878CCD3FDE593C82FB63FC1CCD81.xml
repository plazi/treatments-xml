<subSubSection pageId="15" pageNumber="416" type="etymology">
<paragraph blockId="15.[154,792,1566,1615]" pageId="15" pageNumber="416">
<emphasis box="[154,240,1566,1587]" italics="true" pageId="15" pageNumber="416">Etymology</emphasis>
