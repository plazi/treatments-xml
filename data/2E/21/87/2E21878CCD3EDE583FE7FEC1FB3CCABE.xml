<subSubSection pageId="14" pageNumber="415" type="etymology">
<paragraph blockId="14.[841,1479,583,632]" pageId="14" pageNumber="415">
<emphasis box="[841,927,583,604]" italics="true" pageId="14" pageNumber="415">Etymology</emphasis>
