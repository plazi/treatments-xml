<subSubSection pageId="7" pageNumber="508" type="etymology">
<paragraph blockId="7.[151,1437,259,1257]" pageId="7" pageNumber="508">
<emphasis bold="true" box="[199,334,1159,1185]" pageId="7" pageNumber="508">Etymology.</emphasis>
