<subSubSection pageId="144" pageNumber="145" type="names">
<paragraph pageId="144" pageNumber="145">Names.</paragraph>
<paragraph pageId="144" pageNumber="145">
<emphasis bold="true" pageId="144" pageNumber="145">Myanmar</emphasis>
: 
<emphasis italics="true" pageId="144" pageNumber="145">badi-byu</emphasis>
, 
<emphasis italics="true" pageId="144" pageNumber="145">daukyat</emphasis>
, 
<emphasis italics="true" pageId="144" pageNumber="145">mai-mot</emphasis>
, 
<emphasis italics="true" pageId="144" pageNumber="145">mai-motawn</emphasis>
, 
<emphasis italics="true" pageId="144" pageNumber="145">taukyat</emphasis>
, 
<emphasis italics="true" pageId="144" pageNumber="145">ye-padi</emphasis>
. 
<emphasis bold="true" pageId="144" pageNumber="145">English</emphasis>
: officinal drypetes, putranjiv tree.
</paragraph>
</subSubSection>
<subSubSection pageId="144" pageNumber="145" type="range">
<paragraph pageId="144" pageNumber="145">Range.</paragraph>
<paragraph pageId="144" pageNumber="145">India. In Myanmar, found in Mandalay, Mon, and Yangon.</paragraph>
</subSubSection>
<subSubSection pageId="144" pageNumber="145" type="use">
<paragraph pageId="144" pageNumber="145">Use.</paragraph>
<paragraph pageId="144" pageNumber="145">
<emphasis italics="true" pageId="144" pageNumber="145">Leaf</emphasis>
: Used to treat diabetes.
</paragraph>
</subSubSection>
<subSubSection pageId="144" pageNumber="145" type="notes">
<paragraph pageId="144" pageNumber="145">Note.</paragraph>
<paragraph pageId="144" pageNumber="145">
