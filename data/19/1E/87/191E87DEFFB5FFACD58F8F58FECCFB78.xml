<geoCoordinate box="[1239,1358,1050,1077]" degrees="82.73588" direction="west" orientation="longitude" pageId="9" pageNumber="10" precision="1" value="-82.73588">-82.73588</geoCoordinate>
), at 
<specimenCount pageId="9" pageNumber="10" type="generic">
