<collectingRegion box="[1039,1114,1051,1077]" country="Costa Rica" name="Limon" pageId="9" pageNumber="10">Limón</collectingRegion>
(
<geoCoordinate box="[1130,1225,1051,1077]" degrees="9.64221" direction="north" orientation="latitude" pageId="9" pageNumber="10" precision="1" value="9.64221">9.64221</geoCoordinate>
