<taxonomicName baseAuthorityName="Gunther" baseAuthorityYear="1864" box="[639,761,1518,1545]" class="Actinopterygii" family="Cichlidae" genus="Amphilophus" kingdom="Animalia" order="Perciformes" pageId="6" pageNumber="7" phylum="Chordata" rank="species" species="labiatus">
