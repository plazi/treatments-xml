and 
<taxonomicName baseAuthorityName="Jordan &amp; Evermann" baseAuthorityYear="1898" box="[1244,1370,583,609]" class="Actinopterygii" family="Haemulidae" genus="Rhonciscus" higherTaxonomySource="GBIF" kingdom="Animalia" order="Perciformes" pageId="9" pageNumber="10" phylum="Chordata" rank="species" species="bayanus">
