<specimenCount box="[570,637,690,717]" pageId="9" pageNumber="10" type="generic">
<quantity box="[570,633,690,717]" metricMagnitude="1" metricUnit="m" metricValue="1.5" pageId="9" pageNumber="10" unit="m" value="15.0">15 m</quantity>
