<collectingCountry box="[1263,1364,2013,2042]" name="Guinea-Bissau" pageId="28" pageNumber="647">Guinea</collectingCountry>
and 
<collectingCountry box="[834,930,2052,2081]" name="Liberia" pageId="28" pageNumber="647">Liberia</collectingCountry>
E to 
<collectingCountry box="[1004,1082,2052,2081]" name="Niger" pageId="28" pageNumber="647">Niger</collectingCountry>
and 
<collectingCountry box="[1151,1257,2052,2081]" name="Nigeria" pageId="28" pageNumber="647">Nigeria</collectingCountry>
); 
<collectingRegion country="Sudan" name="An Nil al Abyad" pageId="28" pageNumber="647">White Nile</collectingRegion>
valley (
<collectingCountry box="[943,1032,2092,2121]" name="Sudan" pageId="28" pageNumber="647">Sudan</collectingCountry>
, 
<collectingCountry box="[1053,1234,2092,2121]" name="South Sudan" pageId="28" pageNumber="647">South Sudan</collectingCountry>
, and NE 
<collectingCountry box="[772,920,2131,2160]" name="Democratic Republic of the Congo" pageId="28" pageNumber="647">DR Congo</collectingCountry>
); around Lake 
<taxonomicName box="[1120,1229,2131,2160]" class="Insecta" family="Geometridae" genus="Victoria" kingdom="Animalia" order="Lepidoptera" pageId="28" pageNumber="647" phylum="Arthropoda" rank="genus">Victoria</taxonomicName>
