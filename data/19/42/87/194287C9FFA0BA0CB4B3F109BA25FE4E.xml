<subSubSection pageId="28" pageNumber="647" type="distribution">
<caption inLine="true" pageId="28" pageNumber="647" targetBox="[157,749,1823,2238]" targetPageId="28">
<paragraph blockId="28.[772,1366,1811,2239]" lastBlockId="28.[154,1368,2245,3462]" pageId="28" pageNumber="647">
<emphasis bold="true" box="[772,942,1969,2002]" pageId="28" pageNumber="647">Distribution.</emphasis>
