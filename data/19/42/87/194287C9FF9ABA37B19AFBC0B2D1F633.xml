, 
<collectingCountry box="[986,1103,707,740]" name="Djibouti" pageId="39" pageNumber="658">Djibouti</collectingCountry>
, 
<collectingCountry box="[1121,1242,707,740]" name="Ethiopia" pageId="39" pageNumber="658">Ethiopia</collectingCountry>
, 
<collectingCountry box="[1262,1374,707,740]" name="Uganda" pageId="39" pageNumber="658">Uganda</collectingCountry>
, 
<collectingCountry box="[177,289,751,780]" name="Rwanda" pageId="39" pageNumber="658">Rwanda</collectingCountry>
, and 
<collectingCountry box="[368,455,751,780]" name="Kenya" pageId="39" pageNumber="658">Kenya</collectingCountry>
