<taxonomicName class="Gastropoda" family="Facelinidae" genus="Myja" higherTaxonomySource="CoL" kingdom="Animalia" lsidName="Myja longicornis" order="Nudibranchia" pageId="0" pageNumber="89" phylum="Mollusca" rank="species" species="longicornis">Myja longicornis</taxonomicName>
