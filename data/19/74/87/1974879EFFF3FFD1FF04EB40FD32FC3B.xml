<taxonomicName authorityName="Bernhauer" authorityYear="1928" box="[178,295,874,895]" class="Insecta" family="Staphylinidae" genus="Scymbalium" kingdom="Animalia" order="Coleoptera" pageId="8" pageNumber="1487" phylum="Arthropoda" rank="species" species="waageni">
<emphasis box="[178,295,874,895]" italics="true" pageId="8" pageNumber="1487">S. waageni</emphasis>
</taxonomicName>
, from 
<collectingCountry box="[373,428,873,895]" name="India" pageId="8" pageNumber="1487">India</collectingCountry>
, 
<collectingCountry box="[443,519,873,895]" name="Bhutan" pageId="8" pageNumber="1487">Bhutan</collectingCountry>
, and 
