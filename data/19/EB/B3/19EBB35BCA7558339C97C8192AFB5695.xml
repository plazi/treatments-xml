(
<bibRefCitation author="Podlech, D" journalOrPublisher="Mitteilungen aus der Botanischen Staatssammlung Muenchen" pageId="0" pageNumber="1" pagination="457 - 488" refId="B81" refString="Podlech, D, Bader, O, 1974. Chromosomenstudien an afghanischen Pflanzen. 2. Mitteilungen aus der Botanischen Staatssammlung Muenchen 11: 457 - 488" title="Chromosomenstudien an afghanischen Pflanzen. 2." volume="11" year="1974">Podlech and Bader 1974</bibRefCitation>
; 
<bibRefCitation author="Nazarova, EA" journalOrPublisher="Botanicheskii Zhurnal" pageId="0" pageNumber="1" pagination="1755 - 1758" refId="B71" refString="Nazarova, EA, 1981. Tsitosistematicheskoe izuchenie roda Koelpinia (Asteraceae). Botanicheskii Zhurnal 66: 1755 - 1758" title="Tsitosistematicheskoe izuchenie roda Koelpinia (Asteraceae)." volume="66" year="1981">Nazarova 1981</bibRefCitation>
) or 7 (all others species) (
<bibRefCitation author="Stebbins, GL" journalOrPublisher="University of California Publications in Botany" pageId="0" pageNumber="1" pagination="401 - 430" refId="B93" refString="Stebbins, GL, Jenkins, JA, Walters, MS, 1953. Chromosomes and phylogeny in the Compositae, tribe Chichorieae. University of California Publications in Botany 26: 401 - 430" title="Chromosomes and phylogeny in the Compositae, tribe Chichorieae." volume="26" year="1953">Stebbins et al. 1953</bibRefCitation>
; 
<bibRefCitation author="Podlech, D" journalOrPublisher="Mitteilungen aus der Botanischen Staatssammlung Muenchen" pageId="0" pageNumber="1" pagination="457 - 488" refId="B81" refString="Podlech, D, Bader, O, 1974. Chromosomenstudien an afghanischen Pflanzen. 2. Mitteilungen aus der Botanischen Staatssammlung Muenchen 11: 457 - 488" title="Chromosomenstudien an afghanischen Pflanzen. 2." volume="11" year="1974">Podlech and Bader 1974</bibRefCitation>
; 
<bibRefCitation author="Nazarova, EA" journalOrPublisher="Botanicheskii Zhurnal" pageId="0" pageNumber="1" pagination="1755 - 1758" refId="B71" refString="Nazarova, EA, 1981. Tsitosistematicheskoe izuchenie roda Koelpinia (Asteraceae). Botanicheskii Zhurnal 66: 1755 - 1758" title="Tsitosistematicheskoe izuchenie roda Koelpinia (Asteraceae)." volume="66" year="1981">Nazarova 1981</bibRefCitation>
), diploids to octaploids.
</paragraph>
</subSubSection>
