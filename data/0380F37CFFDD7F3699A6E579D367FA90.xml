<geoCoordinate id="EE1D24ADFFDF7F369DF2E2B2D23DFE4D" box="[1219,1327,461,487]" degrees="83" direction="west" minutes="53" orientation="longitude" pageId="26" pageNumber="27" precision="925" value="-83.88333">83°53’W</geoCoordinate>
