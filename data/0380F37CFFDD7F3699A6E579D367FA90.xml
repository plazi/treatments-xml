<quantity id="4CD1EF8FFFDF7F369C0DE2B2D285FE4D" box="[1340,1431,461,487]" metricMagnitude="3" metricUnit="m" metricValue="2.5" pageId="26" pageNumber="27" unit="m" value="2500.0">
