<quantity id="4CD1EF8FFFDD7F349BF1E52BD43AF9C1" box="[704,808,1620,1643]" metricMagnitude="-1" metricUnit="m" metricValue="2.25" metricValueMax="3.0" metricValueMin="1.5" pageId="24" pageNumber="25" unit="cm" value="22.5" valueMax="30.0" valueMin="15.0">15–30 cm</quantity>
