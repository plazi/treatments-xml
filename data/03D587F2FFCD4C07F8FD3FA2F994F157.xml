<subSubSection id="C366656FFFCD4C06F52239FEF6B2F1F4" pageId="2" pageNumber="351" type="distribution">
<caption id="DF03666CFFCD4C06F52239FEF6B2F1F4" ID-DOI="http://doi.org/10.5281/zenodo.3747908" ID-Zenodo-Dep="3747908" httpUri="https://zenodo.org/record/3747908/files/figure.png" inLine="true" pageId="2" pageNumber="351" targetBox="[1875,2665,3003,3555]" targetPageId="2">
<paragraph id="8BC336E4FFCD4C06F52239FEF6B2F1F4" blockId="2.[2692,3495,2992,3562]" lastBlockId="2.[1877,3489,3574,4295]" pageId="2" pageNumber="351">
<emphasis id="B908EAF6FFCD4C06F52239FEF48DF359" bold="true" box="[2695,2933,3209,3248]" pageId="2" pageNumber="351">Distribution.</emphasis>
