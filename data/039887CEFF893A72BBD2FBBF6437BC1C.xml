<quantity id="4CC99B3DFF873A72BA74FEF361D2BE39" box="[305,394,296,320]" metricMagnitude="-3" metricUnit="m" metricValue="2.4" pageId="9" pageNumber="218" unit="mm" value="2.4">2.4 mm</quantity>
