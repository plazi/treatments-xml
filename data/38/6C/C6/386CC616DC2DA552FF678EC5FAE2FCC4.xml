<taxonomicName box="[294,404,1528,1550]" class="Calcarea" family="Grantiidae" genus="Leucandra" higherTaxonomySource="CoL" kingdom="Animalia" order="Leucosolenida" pageId="96" pageNumber="97" phylum="Porifera" rank="genus">
<emphasis box="[294,404,1528,1550]" italics="true" pageId="96" pageNumber="97">Leucandra</emphasis>
</taxonomicName>
<taxonomicName authority="Haeckel, 1872" authorityName="Haeckel" authorityYear="1872" box="[411,497,1528,1550]" pageId="96" pageNumber="97" rank="species" species="pulvinar">
