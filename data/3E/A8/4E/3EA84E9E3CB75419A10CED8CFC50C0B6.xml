<taxonomicName class="Insecta" family="Cynipidae" genus="Periclistus" higherTaxonomySource="CoL" kingdom="Animalia" lsidName="Periclistus" order="Hymenoptera" pageId="0" pageNumber="109" phylum="Arthropoda" rank="genus">
