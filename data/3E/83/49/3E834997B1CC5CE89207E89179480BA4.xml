<taxonomicName authorityName="Bates" authorityYear="1871" class="Insecta" family="Carabidae" genus="Abaris" higherTaxonomySource="GBIF,CoL" kingdom="Animalia" lsidName="" order="Coleoptera" pageId="493" pageNumber="494" phylum="Arthropoda" rank="species" species="tachypoides">
