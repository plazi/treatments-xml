<taxonomicName authorityName="Brack" authorityYear="1854" class="Hexapoda" family="Geometridae" genus="Alsophila" higherTaxonomySource="GBIF" kingdom="Animalia" lsidName="" order="Lepidoptera" pageId="6" pageNumber="11" phylum="Arthropoda" rank="species" species="tahitensis">
