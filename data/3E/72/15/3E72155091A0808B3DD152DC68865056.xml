<taxonomicName class="Dicotyledoneae" family="Hernandiaceae" genus="Hernandia" higherTaxonomySource="GBIF" kingdom="Plantae" lsidName="" order="Magnoliales" pageId="6" pageNumber="11" phylum="Angiospermae" rank="species" species="nukuhivensis">
<emphasis italics="true" pageId="6" pageNumber="11">Hernandia nukuhivensis</emphasis>
</taxonomicName>
F. Br., and 
<taxonomicName class="Pteridopsida" family="Cytheaceae" genus="Sphaeropteris" higherTaxonomySource="GBIF" kingdom="Plantae" lsidName="" order="Filicales" pageId="6" pageNumber="11" phylum="Polypodiophyta" rank="genus">
<emphasis italics="true" pageId="6" pageNumber="11">Sphaeropteris</emphasis>
</taxonomicName>
spp.; in wet forests dominated by 
<taxonomicName authorityName="J. R. Forster &amp; G. Forster" authorityYear="1775" class="Magnoliopsida" family="Rhizophoraceae" genus="Crossostylis" higherTaxonomySource="GBIF,CoL" kingdom="Plantae" lsidName="" order="Malpighiales" pageId="6" pageNumber="11" phylum="Tracheophyta" rank="species" species="biflora">
