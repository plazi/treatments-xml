<paragraph pageId="0" pageNumber="79">
<taxonomicName LSID="3EF7414E-A1FA-5C65-961F-5D765282F57D" authority="(Szilady, 1940) nomen dubium" authorityName="nomen dubium" baseAuthorityName="Szilady" baseAuthorityYear="1940" class="Insecta" family="Syrphidae" genus="Merodon" higherTaxonomySource="CoL" kingdom="Animalia" lsidName="Merodon trizonus" order="Diptera" pageId="0" pageNumber="79" phylum="Arthropoda" rank="species" species="trizonus">
