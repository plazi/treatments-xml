<paragraph blockId="6.[189,342,1726,1752]" box="[189,342,1726,1752]" pageId="6" pageNumber="7">
<heading bold="true" box="[189,342,1726,1752]" fontSize="11" level="3" pageId="6" pageNumber="7" reason="3">
<emphasis bold="true" box="[189,342,1726,1752]" pageId="6" pageNumber="7">Distribution</emphasis>
