<taxonomicName id="4C7B4D5BFFACAF02D03EDCCCFDC01089" authority="Vaz-De-Mello, 2008" authorityName="Vaz-De-Mello" authorityYear="2008" box="[370,614,952,977]" class="Insecta" family="Scarabaeidae" genus="Feeridium" kingdom="Animalia" order="Coleoptera" pageId="24" pageNumber="25" phylum="Arthropoda" rank="species" species="woodruffi" status="new species">
