<date id="FFBE106EFFE7EF3262F6FBCCFDDDFBFA" box="[476,567,1033,1055]" pageId="8" pageNumber="391" value="1987-01-10">10.i.1987</date>
/ on live 
<taxonomicName id="4C004D2DFFE7EF3261B8FBCCFD10FBFA" box="[658,762,1033,1055]" class="Magnoliopsida" family="Casuarinaceae" genus="Casuarina" kingdom="Plantae" order="Fagales" pageId="8" pageNumber="406" phylum="Tracheophyta" rank="genus">Casuarina</taxonomicName>
