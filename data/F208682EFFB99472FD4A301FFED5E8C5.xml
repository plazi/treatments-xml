<quantity id="BD5974DDFFBA9472FDB7374AFD7CE802" box="[567,653,1578,1605]" metricMagnitude="3" metricUnit="m" metricValue="1.9" pageId="14" pageNumber="279" unit="m" value="1900.0">
<elevation id="F18C3E0BFFBA9472FDB7374AFD7CE802" box="[567,653,1578,1605]" metricMagnitude="3" metricUnit="m" metricValue="1.9" pageId="14" pageNumber="279" unit="m" value="1900.0">1900 m</elevation>
