<collectionCode id="1CB041FDFFBA9472FDCC348FFDACE84E" box="[588,605,1518,1544]" country="USA" lsid="urn:lsid:biocol.org:col:15406" name="Harvard University - Arnold Arboretum" pageId="14" pageNumber="279" type="Herbarium">A</collectionCode>
