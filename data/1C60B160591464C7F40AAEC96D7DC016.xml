<paragraph id="FBAB1ACB9CD3C4D7DD74857DBA419A04" pageId="23" pageNumber="24">
<taxonomicName id="B41E86AFF3F8B87973FBD2D55FE61350" class="Insecta" family="Tingidae" genus="Ulmus" higherTaxonomySource="CoL" kingdom="Animalia" lsidName="Ulmus" order="Hemiptera" pageId="23" pageNumber="24" phylum="Arthropoda" rank="genus">Ulmus</taxonomicName>
