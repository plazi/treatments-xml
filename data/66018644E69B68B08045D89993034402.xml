<taxonomicName id="17B2E1AAE4E355825D4039FC5177B6B9" authorityName="Tochihara &amp; Hosoya" authorityYear="2022" class="Ascomycetes" family="Lachnaceae" genus="Lachnum" higherTaxonomySource="CoL" kingdom="Fungi" lsidName="Lachnum mapirianum subsp. var. var. sinense" order="Helotiales" pageId="0" pageNumber="1" phylum="Ascomycota" rank="variety" species="mapirianum" status="stat. nov." subSpecies="var." variety="sinense">Lachnum mapirianum var. sinense</taxonomicName>
