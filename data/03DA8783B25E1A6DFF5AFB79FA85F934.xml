<taxonomicName id="4C734D16B25F1A6DFCDFF9ECFC67F9FD" box="[786,962,1593,1617]" class="Insecta" family="Myrmeleontidae" genus="Megistoleon" kingdom="Animalia" order="Neuroptera" pageId="5" pageNumber="199" phylum="Arthropoda" rank="species" species="thaumatopteryx">
