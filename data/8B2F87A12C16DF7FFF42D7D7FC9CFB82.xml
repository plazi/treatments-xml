<paragraph id="033936B72C16DF7FFF42D642FDA5FEC5" blockId="3.[151,870,258,311]" pageId="3">
<taxonomicName id="C4864D342C16DF7FFF42D642FD84FEEA" authority="Meyrick, 1912" authorityName="Meyrick" authorityYear="1912" box="[151,552,258,280]" class="Insecta" family="Tortricidae" genus="Mictopsichia" kingdom="Animalia" order="Lepidoptera" pageId="3" phylum="Arthropoda" rank="species" species="hexaphala">
