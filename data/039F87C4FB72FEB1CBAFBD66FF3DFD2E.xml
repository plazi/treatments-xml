<quantity id="4CCE9B37FB72FEBFC8C4BF74FBA2F92D" box="[1020,1098,1647,1671]" metricMagnitude="2" metricUnit="m" metricValue="1.83" pageId="279" pageNumber="280" unit="m" value="183.0">183 m</quantity>
