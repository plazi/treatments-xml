<emphasis id="B942EAC0FB72FEBFC97FBF75FD6FF92D" box="[583,647,1646,1671]" italics="true" pageId="279" pageNumber="280">Blake</emphasis>
expedition 
<date id="FF881012FB72FEBFC833BF74FC82F92D" box="[779,874,1647,1671]" pageId="279" pageNumber="280" value="1877" valueMax="1878">
<number id="3DFE24F5FB72FEBFC833BF74FCAEF92D" box="[779,838,1647,1671]" pageId="279" pageNumber="280" value="1877.0">1877</number>
