<taxonomicName id="83D8A1FE2F89B9AB1D999064D532BAD6" authority="Fleutiaux, 1947" authorityName="Fleutiaux" authorityYear="1947" class="Insecta" family="Elateridae" genus="Diocarphus" higherTaxonomySource="GBIF" kingdom="Animalia" lsidName="Diocarphus" order="Coleoptera" pageId="0" pageNumber="47" phylum="Arthropoda" rank="genus">
