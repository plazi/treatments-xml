), tubular (
<taxonomicName class="Magnoliopsida" family="Rubiaceae" genus="S." higherTaxonomySource="CoL" kingdom="Plantae" lsidName="S. malipoensis" order="Gentianales" pageId="0" pageNumber="217" phylum="Tracheophyta" rank="species" species="malipoensis">
<emphasis italics="true" pageId="0" pageNumber="217">S. malipoensis</emphasis>
