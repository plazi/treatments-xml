<taxonomicName authority="Bates, 1863" authorityName="Bates" authorityYear="1863" box="[214,535,981,1007]" class="Insecta" family="Cerambycidae" genus="Lepturges" kingdom="Animalia" order="Coleoptera" pageId="8" pageNumber="449" phylum="Arthropoda" rank="species" species="amabilis" subGenus="Lepturges">
