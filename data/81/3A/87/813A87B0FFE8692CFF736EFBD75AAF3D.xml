<taxonomicName authorityName="Bates" authorityYear="1863" box="[844,1044,1161,1187]" class="Insecta" family="Cerambycidae" genus="Lepturges" kingdom="Animalia" order="Coleoptera" pageId="8" pageNumber="449" phylum="Arthropoda" rank="species" species="perelegans" subGenus="Lepturges">
