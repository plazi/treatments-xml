<taxonomicName authorityName="Bates" authorityYear="1863" box="[462,636,1017,1043]" class="Insecta" family="Cerambycidae" genus="Lepturges" kingdom="Animalia" order="Coleoptera" pageId="8" pageNumber="449" phylum="Arthropoda" rank="species" species="amabilis" subGenus="Lepturges">
