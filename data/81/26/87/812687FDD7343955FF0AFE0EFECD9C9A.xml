<collectingCountry box="[726,774,1010,1033]" name="Iran" pageId="82" pageNumber="83">Iran</collectingCountry>
, 
<collectingCountry box="[791,924,1009,1033]" name="Kazakhstan" pageId="82" pageNumber="83">Kazakhstan</collectingCountry>
, 
<collectingCountry box="[942,1052,1009,1033]" name="Tajikistan" pageId="82" pageNumber="83">Tajikistan</collectingCountry>
and 
<collectingCountry box="[1118,1276,1009,1033]" name="Turkmenistan" pageId="82" pageNumber="83">Turkmenistan</collectingCountry>
