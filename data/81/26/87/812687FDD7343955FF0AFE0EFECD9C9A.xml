<emphasis box="[1374,1429,1009,1033]" italics="true" pageId="82" pageNumber="83">et al</emphasis>
. (
<number box="[159,217,1045,1069]" pageId="82" pageNumber="83" value="1996.0">1996</number>
) listed 
<taxonomicName box="[303,400,1045,1069]" class="Insecta" family="Pseudococcidae" genus="Pseudococcus" kingdom="Animalia" order="Hemiptera" pageId="82" pageNumber="83" phylum="Arthropoda" rank="species" species="flavus">
<emphasis box="[303,317,1046,1069]" italics="true" pageId="82" pageNumber="83">S</emphasis>
. 
<emphasis box="[333,400,1045,1069]" italics="true" pageId="82" pageNumber="83">flavus</emphasis>
</taxonomicName>
