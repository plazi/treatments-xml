<quantity id="3E07F0E31A35F46D3F134EE21E27FDF8" box="[518,609,488,514]" metricMagnitude="3" metricUnit="m" metricValue="1.463" pageId="37" pageNumber="38" unit="m" value="1463.0">1463 m</quantity>
