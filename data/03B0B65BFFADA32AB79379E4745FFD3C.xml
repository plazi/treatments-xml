</specimenCount>
, 
<collectingCountry id="F30E47DDFFAAA32AB52C7B6B7767FD84" box="[552,616,536,559]" name="China" pageId="4" pageNumber="285">China</collectingCountry>
Yunnan, Simao Pr.Jiangchen, Huangjianglin, 
<quantity id="4CE1AAA8FFAAA32AB3597B6B71A8FD84" box="[1117,1191,536,559]" metricMagnitude="3" metricUnit="m" metricValue="1.2" pageId="4" pageNumber="285" unit="m" value="1200.0">1200m</quantity>
<date id="FFA7218DFFAAA32AB3B47B6B7023FD84" box="[1200,1324,536,559]" pageId="4" pageNumber="285" value="1995-03-12">
<number id="3DD1156AFFAAA32AB3B47B6B71E9FD84" box="[1200,1254,536,559]" pageId="4" pageNumber="285" value="1995.0">1995</number>
