. 
<specimenCount id="3BBBFD2CC07D4B1FFE554A1AFDBE3370" box="[404,521,1871,1895]" pageId="28" pageNumber="27" type="generic">1 specimen</specimenCount>
. 
<emphasis id="1FC9EAB7C07D4B1FFDD04A1AFC8E3370" bold="true" box="[529,825,1871,1895]" pageId="28" pageNumber="27">
<collectingCountry id="55AA7635C07D4B1FFDD04A1AFDE43370" box="[529,595,1871,1895]" name="Brazil" pageId="28" pageNumber="27">Brazil</collectingCountry>
