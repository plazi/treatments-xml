<taxonomicName id="4C734D25FF868C39BE64D1DBFD9DF91D" authority="Hubner, [1804]" authorityName="Hubner" authorityYear="1804" box="[278,525,1754,1779]" class="Insecta" family="Pieridae" genus="Euchloe" kingdom="Animalia" order="Lepidoptera" pageId="2" pageNumber="389" phylum="Arthropoda" rank="species" species="ausonia">
