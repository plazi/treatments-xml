<subSubSection id="48EB653FFFC48A22FF14F542FB38D73A" pageId="11" pageNumber="290" type="description">
<paragraph id="004E36B4FFC48A22FF14F542FB38D73A" blockId="11.[213,1832,2524,4624]" pageId="11" pageNumber="290">
<emphasis id="3285EAA6FFC48A22FF14F542FDA2D269" bold="true" box="[216,551,2787,2826]" pageId="11" pageNumber="290">Descriptive notes.</emphasis>
Head-body 
<quantity id="C7099B51FFC48A22FCD4F542FC5AD269" box="[792,991,2787,2826]" metricMagnitude="-2" metricUnit="m" metricValue="7.7" metricValueMax="8.1" metricValueMin="7.3" pageId="11" pageNumber="290" unit="mm" value="77.0" valueMax="81.0" valueMin="73.0">73-81 mm</quantity>
