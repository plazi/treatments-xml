<quantity id="4CF19B61A115FFD0FC76FA86FBBFFA5F" box="[1020,1134,1399,1423]" metricMagnitude="-2" metricUnit="m" metricValue="3.4" metricValueMax="3.9" metricValueMin="2.9" pageId="7" pageNumber="108" unit="cm" value="3.4" valueMax="3.9" valueMin="2.9">2.9-3.9 cm</quantity>
long), erect; epicalyx orange-red; corolla tight around staminal column (apical diameter 
<quantity id="4CF19B61A115FFD0FF60FA41FE8CFA19" box="[234,349,1456,1481]" metricMagnitude="-3" metricUnit="m" metricValue="8.5" metricValueMax="11.0" metricValueMin="6.0" pageId="7" pageNumber="108" unit="cm" value="0.85" valueMax="1.1" valueMin="0.6">0.6-1.1 cm</quantity>
) ........................................................................................ 
