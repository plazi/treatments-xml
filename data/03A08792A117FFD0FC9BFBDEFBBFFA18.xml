× 
<quantity id="4CF19B61A115FFD0FCAFFB19FC48FAD0" box="[805,921,1256,1280]" metricMagnitude="-2" metricUnit="m" metricValue="2.35" metricValueMax="3.4" metricValueMin="1.3" pageId="7" pageNumber="108" unit="cm" value="2.35" valueMax="3.4" valueMin="1.3">1.3-3.4 cm</quantity>
