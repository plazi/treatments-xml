<emphasis id="B95344267E6AFFE6FF3F72D4DE69FDEE" bold="true" box="[192,375,509,534]" pageId="24" pageNumber="23">
<typeStatus id="549C26967E6AFFE6FF3F72D4DE1AFDED" box="[192,260,510,534]" pageId="24" pageNumber="23">Type</typeStatus>
