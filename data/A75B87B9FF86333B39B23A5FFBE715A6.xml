<heading id="740581C3FF86333B39B23A5FFD31174D" bold="true" box="[151,708,1051,1078]" fontSize="11" level="1" pageId="8" pageNumber="49" reason="1">
<emphasis id="1D86EABDFF86333B39B23A5FFD31174D" bold="true" box="[151,708,1051,1078]" pageId="8" pageNumber="49">
<taxonomicName id="E8F24D2CFF86333B39B23A5FFDAC174D" authority="Dai &amp; Zhang" authorityName="Dai &amp; Zhang" box="[151,601,1051,1078]" class="Insecta" family="Cicadellidae" genus="Parallygus" kingdom="Animalia" order="Hemiptera" pageId="8" pageNumber="49" phylum="Arthropoda" rank="species" species="jiuhuaensis" status="sp. nov.">
<emphasis id="1D86EABDFF86333B39B23A5FFE59174E" bold="true" box="[151,428,1052,1078]" italics="true" pageId="8" pageNumber="49">Parallygus jiuhuaensis</emphasis>
Dai &amp; Zhang
</taxonomicName>
, 
<taxonomicNameLabel id="06B557C6FF86333B3B423A58FD31174D" box="[615,708,1051,1077]" pageId="8" pageNumber="49" rank="species">sp. nov.</taxonomicNameLabel>
</emphasis>
