<quantity id="2A326B86FFA1E91CFDACB602FDF8FE57" box="[515,620,1050,1076]" metricMagnitude="-3" metricUnit="m" metricValue="5.7" pageId="4" pageNumber="33" unit="mm" value="5.7">5.70 mm</quantity>
