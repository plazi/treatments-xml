<paragraph id="E2CD7C6261E09F3C95ED55324BECD231" pageId="0" pageNumber="113">Type species.</paragraph>
<paragraph id="AEA982E6CB66D9D6EA34424C316C99AB" pageId="0" pageNumber="113">
<taxonomicName id="5E6D576481286E663FF48930F70F8335" authorityName="He &amp; Ma &amp; Zhang &amp; Miao" authorityYear="2022" baseAuthorityName="He &amp; Ma &amp; Zhang &amp; Miao" baseAuthorityYear="2022" class="Insecta" family="Trigonidiidae" genus="Amusurgus" higherTaxonomySource="CoL" kingdom="Animalia" lsidName="Amusurgus fujianensis" order="Orthoptera" pageId="0" pageNumber="113" phylum="Arthropoda" rank="species" species="fujianensis">
<emphasis id="F6665F8EF9F83EBAC9A3211D3B96F5A1" italics="true" pageId="0" pageNumber="113">Amusurgus fujianensis</emphasis>
</taxonomicName>
(= 
<taxonomicName id="368266B1B306A15A7EDC4FF01A722AD0" authorityName="He &amp; Ma &amp; Zhang &amp; Miao" authorityYear="2022" baseAuthorityName="He &amp; Ma &amp; Zhang &amp; Miao" baseAuthorityYear="2022" family="Trigonidiidae" genus="Flospes" kingdom="Animalia" lsidName="Flospes fujianensis" order="Orthoptera" pageId="0" pageNumber="113" rank="species" species="fujianensis">
