<paragraph id="03421E604C72FF85FEE9FA856C18FA05" blockId="20.[264,1323,1170,1466]" pageId="20" pageNumber="21">
<emphasis id="3189C2724C72FF85FEE9FA856E08FAC3" bold="true" box="[312,376,1383,1407]" pageId="20" pageNumber="21">
<typeStatus id="DC46A0C24C72FF85FEE9FA856E08FAC3" box="[312,376,1383,1407]" pageId="20" pageNumber="21">Types</typeStatus>
</emphasis>
: The 
<typeStatus id="DC46A0C24C72FF85FE6AFA856D68FAC2" box="[443,536,1383,1406]" pageId="20" pageNumber="21">syntypes</typeStatus>
in 
<collectionCode id="65EC86A54C72FF85FDEDFA856DFEFAC2" LSID="urn:lsid:biocol.org:col:34991" box="[572,654,1383,1406]" httpUri="http://biocol.org/urn:lsid:biocol.org:col:34991" name="Hungarian Natural History Museum (Termeszettudomanyi Muzeum)" pageId="20" pageNumber="21">HNHM</collectionCode>
