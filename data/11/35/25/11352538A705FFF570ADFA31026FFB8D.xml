<taxonomicName authority="Gervais, 1859" authorityName="Gervais" authorityYear="1859" box="[204,482,730,747]" class="Mammalia" family="Equidae" genus="Hipparion" higherTaxonomySource="GBIF" kingdom="Animalia" order="Perissodactyla" pageId="19" phylum="Chordata" rank="species" species="crassum">
