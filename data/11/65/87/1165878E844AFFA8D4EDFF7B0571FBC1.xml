<taxonomicName authority="Moore, 1865" authorityName="Moore" authorityYear="1865" box="[950,1288,844,868]" class="Insecta" family="Cossidae" genus="Cossus" higherTaxonomySource="GBIF" kingdom="Animalia" order="Lepidoptera" pageId="3" pageNumber="396" phylum="Arthropoda" rank="species" species="cadambae">
