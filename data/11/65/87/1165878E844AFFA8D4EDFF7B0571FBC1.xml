locality: Calcutta; distribution: 
<collectingCountry box="[559,625,880,903]" name="Nepal" pageId="3" pageNumber="396">Nepal</collectingCountry>
, 
<collectingCountry box="[638,731,880,903]" name="Pakistan" pageId="3" pageNumber="396">Pakistan</collectingCountry>
, 
<collectingCountry box="[743,799,880,903]" name="India" pageId="3" pageNumber="396">India</collectingCountry>
) (
<bibRefCitation author="Yakovlev" box="[822,991,880,903]" pageId="3" pageNumber="396" refString="Yakovlev, R. V. (2006) New Cossidae (Lepidoptera) from Asia, Africa and Macronesia. Tinea, 19 (3), 188 - 213." type="journal article" year="2006">Yakovlev 2006</bibRefCitation>
). Later 
<taxonomicName authority="Yakovlev, 2011" authorityName="Yakovlev" authorityYear="2011" box="[1075,1385,880,903]" class="Insecta" family="Cossidae" genus="Dervishiya" higherTaxonomySource="GBIF" kingdom="Animalia" order="Lepidoptera" pageId="3" pageNumber="396" phylum="Arthropoda" rank="species" species="vartianae">
