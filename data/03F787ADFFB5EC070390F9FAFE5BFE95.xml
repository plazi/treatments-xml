<taxonomicName id="4C5E4D38FFB3EC0702E0FF24FD8DFF71" authorityName="Kuhlmann &amp; Jürgensen &amp; Michez" authorityYear="2020" box="[487,585,226,251]" class="Insecta" family="Melittidae" genus="Rediviva" kingdom="Animalia" order="Hymenoptera" pageId="4" pageNumber="327" phylum="Arthropoda" rank="subGenus" subGenus="Deriviva">
