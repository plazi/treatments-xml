<taxonomicName id="4C744D1949190D26FCD9B86CFB1AF953" authority="(Sw.) Nees" authorityName="Nees" baseAuthorityName="Sw." box="[877,1156,1654,1679]" class="Jungermanniopsida" family="Lejeuneaceae" genus="Lejeunea" kingdom="Plantae" order="Porellales" pageId="5" pageNumber="46" phylum="Marchantiophyta" rank="species" species="flava">
<emphasis id="B900EA8849190D26FCD9B86CFB94F953" bold="true" box="[877,1034,1654,1679]" italics="true" pageId="5" pageNumber="46">Lejeunea flava</emphasis>
