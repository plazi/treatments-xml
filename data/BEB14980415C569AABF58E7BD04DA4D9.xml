<taxonomicName id="30ED719E556FA18C5F27E882BA42A1E6" authorityName="Siti-Munirah &amp; Suhaimi-Miloko" authorityYear="2021" class="Liliopsida" family="Burmanniaceae" genus="Thismia" higherTaxonomySource="CoL" kingdom="Plantae" lsidName="Thismia belumensis" order="Dioscoreales" pageId="0" pageNumber="121" phylum="Tracheophyta" rank="species" species="belumensis">
<emphasis id="4B65FEA658E860BDE520D6D65FB3CF97" italics="true" pageId="0" pageNumber="121">Thismia belumensis</emphasis>
</taxonomicName>
