<taxonomicName id="7B8F79AD91FD67EDB2409DD4916F80D9" LSID="2D8175C7-8DB2-50E7-A84D-E0BAFF94F255" authority="C. - I Peng" authorityName="C. - I Peng" authorityYear="2020" class="Cephalopoda" family="Onagraceae" genus="Ludwigia" higherTaxonomySource="CoL" kingdom="Plantae" lsidName="Ludwigia glandulosa subsp. brachycarpa" order="Myrtales" pageId="0" pageNumber="57" phylum="Mollusca" rank="subSpecies" species="glandulosa" status="subsp. nov." subSpecies="brachycarpa">Ludwigia glandulosa Walter subsp. brachycarpa C.-I Peng</taxonomicName>
<taxonomicNameLabel id="06CE103FB7E4AA6A80B7ED310F8F585A" pageId="0" pageNumber="57">subsp. nov.</taxonomicNameLabel>
