<paragraph id="5426BC45271CEAA5A01420F884979B58" pageId="22" pageNumber="99">
<taxonomicName id="73A101C2B58793A645DEF752063A7859" LSID="http://zoobank.org/12CC806B-39AD-4F2A-B7E8-3535CE594FDD" authority="Katz, Soto-Adames &amp; Taylor" class="Collembola" family="Entomobryidae" genus="Entomobrya" higherTaxonomySource="CoL" kingdom="Animalia" lsidName="Entomobrya darwini" order="Entomobryomorpha" pageId="22" pageNumber="99" phylum="Arthropoda" rank="species" species="darwini">Entomobrya darwini Katz, Soto-Adames &amp; Taylor</taxonomicName>
<taxonomicNameLabel id="CF8CCFF533494D33FBF88BBC2EFA3FB6" pageId="22" pageNumber="99">sp. n.</taxonomicNameLabel>
