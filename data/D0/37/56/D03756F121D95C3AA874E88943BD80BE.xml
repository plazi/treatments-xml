<emphasis italics="true" pageId="0" pageNumber="83">nodulosa</emphasis>
</taxonomicName>
<normalizedToken originalValue="Fåhraeus">Fahraeus</normalizedToken>
, 1870; 
<taxonomicName lsidName="tarskii" pageId="0" pageNumber="83" rank="species" species="tarskii">
<emphasis italics="true" pageId="0" pageNumber="83">tarskii</emphasis>
