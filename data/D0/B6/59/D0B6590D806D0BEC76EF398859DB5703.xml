</taxonName>
</taxonName>
(= 
<taxonomicName class="Magnoliopsida" family="Amaranthaceae" genus="Chenopodium" genus.completionEvidence="missing" genus.completionRound="1" genus.outerRound="1" higherTaxonomySource="CoL" kingdom="Plantae" order="Caryophyllales" pageId="7" pageNumber="11" phylum="Tracheophyta" rank="variety" species="crassifolium" species.completionEvidence="missing" species.completionRound="1" variety="crassifolium">var. crassifolium</taxonomicName>
) and 
<taxonName authority="Aellen" authorityName="Aellen" genus="Chenopodium" genus.completionEvidence="missing" genus.completionRound="1" genus.outerRound="1" pageId="7" pageNumber="11" rank="variety" species="crassifolium" species.completionEvidence="missing" species.completionRound="1" variety="degenianum">
<taxonName authority="Aellen" authorityName="Aellen" genus="Chenopodium" genus.completionEvidence="missing" genus.completionRound="1" genus.outerRound="1" pageId="7" pageNumber="11" rank="variety" species="crassifolium" species.completionEvidence="missing" species.completionRound="1" variety="degenianum">
