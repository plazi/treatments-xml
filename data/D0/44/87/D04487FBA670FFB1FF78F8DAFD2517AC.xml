<taxonomicName authority="Laidlaw, 1932" authorityName="Laidlaw" authorityYear="1932" box="[151,578,1870,1897]" class="Insecta" family="Platycnemididae" genus="Coeliccia" kingdom="Animalia" order="Odonata" pageId="8" pageNumber="265" phylum="Arthropoda" rank="species" species="pyriformis">
