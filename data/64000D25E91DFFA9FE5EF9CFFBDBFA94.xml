<typeStatus id="33120291E903FFA9FF45FC07FEE8FC39" box="[241,350,897,923]" pageId="49" pageNumber="50">Holotype</typeStatus>
(unique specimen), 
<specimenCount id="FAAF77BAE903FFA9FDE5FC07FDDFFC3E" box="[593,617,897,924]" pageId="49" pageNumber="50" type="male">♂</specimenCount>
: “ 
<emphasis id="DEDD6021E903FFA9FD30FC07FC1EFC3E" bold="true" box="[644,936,897,924]" pageId="49" pageNumber="50">
<collectingCountry id="94BEFCA3E903FFA9FD30FC07FC17FC39" box="[644,929,897,923]" name="Dominican Republic" pageId="49" pageNumber="50">DOMINICAN REPUBLIC</collectingCountry>
