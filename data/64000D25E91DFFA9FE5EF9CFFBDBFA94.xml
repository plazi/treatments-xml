<collectingRegion id="2E6D72D1E903FFA9FC04FC04FBF9FC39" box="[944,1103,897,924]" country="Dominican Republic" name="La Altagracia" pageId="49" pageNumber="50">La Altagracia</collectingRegion>
, mouth of 
<collectingCounty id="0577C4BFE903FFA9FFCCFC21FEB1FC63" box="[120,263,935,961]" pageId="49" pageNumber="50">Rio Chavón</collectingCounty>
