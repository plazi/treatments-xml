32. * 
<taxonomicName id="4C4D4D06FFE2FF8DFF7FFA0ABB7DBDFC" authority="Spruce ex Benth" authorityName="Spruce ex Benth" box="[199,619,1492,1519]" class="Magnoliopsida" family="Fabaceae" genus="Mimosa" higherTaxonomySource="IPNI" kingdom="Plantae" order="Fabales" pageId="15" pageNumber="216" phylum="Magnoliophyta" rank="species" species="orthocarpa">
<emphasis id="B939EA97FFE2FF8DFF7FFA0AB8BDBDFC" bold="true" box="[199,427,1492,1519]" italics="true" pageId="15" pageNumber="216">Mimosa orthocarpa</emphasis>
