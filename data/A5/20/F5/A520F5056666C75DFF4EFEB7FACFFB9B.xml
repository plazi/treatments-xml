, 
<collectingRegion box="[1005,1221,1071,1097]" country="China" name="Guangxi" pageId="5" pageNumber="27">Guangxi Province</collectingRegion>
, 
<collectingCountry box="[1233,1303,1071,1097]" name="China" pageId="5" pageNumber="27">China</collectingCountry>
.
</paragraph>
