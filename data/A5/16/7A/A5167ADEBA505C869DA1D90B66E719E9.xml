(
<taxonomicName authorityName="Aublet" authorityYear="1775" class="Magnoliopsida" family="Proteaceae" genus="Roupala" higherTaxonomySource="CoL" kingdom="Plantae" lsidName="" order="Proteales" pageId="0" pageNumber="151" phylum="Tracheophyta" rank="family">Proteaceae</taxonomicName>
