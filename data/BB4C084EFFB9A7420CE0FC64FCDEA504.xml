<paragraph id="335AB958FFB9A74C0CE0FBBDFC7DA220" blockId="118.[151,1436,1075,2030]" box="[151,972,1075,1102]" pageId="118" pageNumber="119">
<emphasis id="0191654AFFB9A74C0CE0FBBDFED5A223" bold="true" box="[151,356,1075,1101]" pageId="118" pageNumber="119">Species included</emphasis>
