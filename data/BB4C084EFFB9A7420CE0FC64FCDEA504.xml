<taxonomicName id="F4E5C2DBFFB9A74C0D04FBBAFE75A223" authority="Buck &amp; Marshall, 2009" authorityName="Buck &amp; Marshall" authorityYear="2009" box="[371,452,1076,1101]" class="Insecta" family="Sphaeroceridae" genus="Leptocera" kingdom="Animalia" order="Diptera" pageId="118" pageNumber="119" phylum="Arthropoda" rank="species" species="plax" status="sp.n.">
