<taxonomicNameLabel id="1AA2D831FFB9A74C0DBBFBBAFDB4A220" box="[460,517,1076,1102]" pageId="118" pageNumber="119" rank="species">sp.n.</taxonomicNameLabel>
, 
<taxonomicName id="F4E5C2DBFFB9A74C0E65FBBAFD7FA223" authority="Buck &amp; Marshall, 2009" authorityName="Buck &amp; Marshall" authorityYear="2009" box="[530,718,1076,1101]" class="Insecta" family="Sphaeroceridae" genus="Leptocera" kingdom="Animalia" order="Diptera" pageId="118" pageNumber="119" phylum="Arthropoda" rank="species" species="posteronitens" status="sp.n.">
<emphasis id="0191654AFFB9A74C0E65FBBAFD7FA223" box="[530,718,1076,1101]" italics="true" pageId="118" pageNumber="119">L. posteronitens</emphasis>
</taxonomicName>
<taxonomicNameLabel id="1AA2D831FFB9A74C0EA2FBBAFCBFA220" box="[725,782,1076,1102]" pageId="118" pageNumber="119" rank="species">sp.n.</taxonomicNameLabel>
, 
<taxonomicName id="F4E5C2DBFFB9A74C0F6CFBBAFC3CA223" authority="Buck &amp; Marshall, 2009" authorityName="Buck &amp; Marshall" authorityYear="2009" box="[795,909,1076,1101]" class="Insecta" family="Sphaeroceridae" genus="Leptocera" kingdom="Animalia" order="Diptera" pageId="118" pageNumber="119" phylum="Arthropoda" rank="species" species="tapanti" status="sp.n.">
<emphasis id="0191654AFFB9A74C0F6CFBBAFC3CA223" box="[795,909,1076,1101]" italics="true" pageId="118" pageNumber="119">L. tapanti</emphasis>
</taxonomicName>
<taxonomicNameLabel id="1AA2D831FFB9A74C0FE3FBBAFC7DA220" box="[916,972,1076,1102]" pageId="118" pageNumber="119" rank="species">sp.n.</taxonomicNameLabel>
