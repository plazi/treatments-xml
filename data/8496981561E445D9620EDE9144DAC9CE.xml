<taxonomicName id="581107A6FE05AABD3E26A1BA23584D45" class="Insecta" family="Melolonthidae" genus="Liogenys" higherTaxonomySource="CoL" kingdom="Animalia" lsidName="Liogenys santaecrucis" order="Coleoptera" pageId="55" pageNumber="56" phylum="Arthropoda" rank="species" species="santaecrucis">Liogenys santaecrucis</taxonomicName>
