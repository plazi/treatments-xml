<taxonomicName id="53D20EBF02F05838D41C2BCA87B5D343" class="Insecta" family="Melolonthidae" genus="Liogenys" higherTaxonomySource="CoL" kingdom="Animalia" lsidName="Liogenys excisus" order="Coleoptera" pageId="55" pageNumber="56" phylum="Arthropoda" rank="species" species="excisus">Liogenys excisus</taxonomicName>
