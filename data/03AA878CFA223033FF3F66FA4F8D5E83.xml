<heading id="D0F481F6FA223034FF3F66FA4C4F5B9A" bold="true" box="[151,823,1681,1710]" fontSize="12" level="1" pageId="3" pageNumber="20" reason="1">
<emphasis id="B977EA88FA223034FF3F66FA4C4F5B9A" bold="true" box="[151,823,1681,1710]" pageId="3" pageNumber="20">
Comparison with 
<taxonomicName id="4C034D19FA223034FE2466F94D2F5B9A" authorityName="Bornmuller" authorityYear="1923" box="[396,599,1682,1710]" class="Liliopsida" family="Liliaceae" genus="Tulipa" kingdom="Plantae" order="Liliales" pageId="3" pageNumber="20" phylum="Tracheophyta" rank="species" species="scardica">
