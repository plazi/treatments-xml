</taxonomicName>
and 
<taxonomicName id="4C034D19FA223034FD3466F94C4F5B9A" authorityName="Regel" authorityYear="1873" box="[668,823,1682,1710]" class="Liliopsida" family="Liliaceae" genus="Tulipa" kingdom="Plantae" order="Liliales" pageId="3" pageNumber="20" phylum="Tracheophyta" rank="species" species="schrenkii">
<emphasis id="B977EA88FA223034FD3466F94C4F5B9A" bold="true" box="[668,823,1682,1710]" italics="true" pageId="3" pageNumber="20">T. schrenkii</emphasis>
</taxonomicName>
