<paragraph id="8B9036D6FF9EFFCEFF0CFF7DFD70BF13" blockId="2.[151,1436,222,275]" pageId="2" pageNumber="478">
<taxonomicName id="4C2F4D55FF9EFFCEFF0CFF7DFD0BBEF4" authority="Hood, 1912: 145" authorityName="Hood" authorityPageNumber="145" authorityYear="1912" box="[151,684,222,244]" class="Insecta" family="Phlaeothripidae" genus="Phloeothrips" higherTaxonomySource="GBIF" kingdom="Animalia" order="Thysanoptera" pageId="2" pageNumber="478" phylum="Arthropoda" rank="subGenus" subGenus="Hoplandrothrips">
