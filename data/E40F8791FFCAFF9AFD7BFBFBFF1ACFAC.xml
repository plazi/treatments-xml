<quantity id="AB5E9B62FFCAFF98FC46FB52FBFFCDD7" box="[996,1042,1223,1247]" metricMagnitude="0" metricUnit="m" metricValue="1.0" pageId="5" pageNumber="506" unit="m" value="1.0">1 m</quantity>
