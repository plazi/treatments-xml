<taxonomicName id="2DDA24A1FFC2FFD5FF14E96D05552D3D" authority="Guerin-Meneville, 1844" authorityName="Guerin-Meneville" authorityYear="1844" box="[151,574,1041,1068]" class="Insecta" family="Haglotettigoniidae" genus="Euscyrtus" kingdom="Animalia" order="Orthoptera" pageId="1" pageNumber="560" phylum="Arthropoda" rank="genus">
