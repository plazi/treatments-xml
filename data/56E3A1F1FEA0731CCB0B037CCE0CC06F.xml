<taxonomicName id="29B324F940E5C214426031E97A1F36F4" class="Agaricomycetes" family="Meruliaceae" genus="Bjerkandera" higherTaxonomySource="CoL" kingdom="Fungi" lsidName="Bjerkandera adusta" order="Polyporales" pageId="17" pageNumber="72" phylum="Basidiomycota" rank="species" species="adusta">Bjerkandera adusta</taxonomicName>
