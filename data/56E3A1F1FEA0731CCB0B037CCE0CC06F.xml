<geoCoordinate id="6F17BD3FE718B75EAB54437B379EC920" direction="north" orientation="latitude" precision="5" value="46.22">46.2200°N</geoCoordinate>
, 
<geoCoordinate id="9265376CA1071758183E0FA52A31DC3F" direction="west" orientation="longitude" precision="5" value="-67.7231">67.7231°W</geoCoordinate>
, 16.IX.2006, R. P. Webster, mature hardwood forest, in 
<taxonomicName id="CE8AD9890BD869AB31CED1A98B801B46" class="Agaricomycetes" family="Meruliaceae" genus="Bjerkandera" higherTaxonomySource="CoL" kingdom="Fungi" lsidName="Bjerkandera adusta" order="Polyporales" pageId="17" pageNumber="72" phylum="Basidiomycota" rank="species" species="adusta">Bjerkandera adusta</taxonomicName>
