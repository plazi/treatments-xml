<taxonomicName id="9EDF6AC1FFE2BD59FEA02C2CFD51F8F5" authority="Linnaeus, 1758: 420" authorityName="Linnaeus" authorityPageNumber="420" authorityYear="1758" box="[297,683,1810,1832]" class="Insecta" family="Meloidae" genus="Meloe" kingdom="Animalia" order="Coleoptera" pageId="9" pageNumber="10" phylum="Arthropoda" rank="species" species="schaefferi">
