<taxonomicName authority="Fabricius, 1775" authorityName="Fabricius" authorityYear="1775" box="[903,1013,285,310]" class="Insecta" family="Meloidae" genus="Mylabris" higherTaxonomySource="GBIF" kingdom="Animalia" order="Coleoptera" pageId="30" pageNumber="31" phylum="Arthropoda" rank="species" species="tahari">
