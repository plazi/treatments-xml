<number id="3DB924D6FFAE5D28C000F9055582B0C6" box="[1108,1181,1698,1724]" pageId="5" pageNumber="20" value="13441.0">13441</number>
-39732, 13441- 
<number id="3DB924D6FFAE5D28C104F9055483B0C6" box="[1360,1436,1698,1724]" pageId="5" pageNumber="20" value="39733.0">39733</number>
and 
<number id="3DB924D6FFAE5D28C49CF96E507AB099" box="[200,357,1737,1763]" pageId="5" pageNumber="20" value="26587.5" valueMax="39734.0" valueMin="13441.0">13441-39734</number>
