<collectionCode id="ED60AE34FFAE5D28C63DF96E53A9B099" box="[617,694,1737,1763]" httpUri="http://grbio.org/cool/5xp9-edpx" name="Universidade Federal do Parana, Colecao de Entomologia Pe. Jesus Santiago Moure" pageId="5" pageNumber="20">DZUP</collectionCode>
