<taxonomicName id="73DC4D07FFFFFFB6DFFBEF08985BF973" authority="THOMAS, 1923" authorityName="Thomas" authorityYear="1923" box="[899,1368,1659,1680]" class="Mammalia" family="Didelphidae" genus="Monodelphis" kingdom="Animalia" order="Didelphimorphia" pageId="20" pageNumber="210" phylum="Chordata" rank="species" species="maraxina">
<emphasis id="86A8EA96FFFFFFB6DFFBEF0899A6F96C" box="[899,1189,1659,1680]" italics="true" pageId="20" pageNumber="210">MONODELPHIS MARAXINA</emphasis>
<bibRefCitation id="D04D4B75FFFFFFB6D8C8EF08985BF973" author="Thomas O" box="[1200,1368,1659,1680]" pageId="20" pageNumber="210" pagination="157" refId="ref24652" refString="Thomas O. 1923. A new short-tailed opossum from Marajo, Amazonia. Annual Magazine of Natural History 9: 157." type="journal article" year="1923">THOMAS, 1923</bibRefCitation>
