<paragraph blockId="1.[151,1436,429,1145]" pageId="1" pageNumber="399">
<emphasis box="[199,338,949,972]" inLineHeading="true" pageId="1" pageNumber="399" reason="1">
<emphasis bold="true" box="[199,331,949,972]" pageId="1" pageNumber="399">Description</emphasis>
.
</emphasis>
<taxonomicName authorityName="Slager &amp; Klicka" authorityYear="2014" baseAuthorityName="Slager &amp; Klicka" baseAuthorityYear="2014" box="[350,575,949,972]" class="Aves" family="Emberizidae" genus="Spizelloides" higherTaxonomySource="GBIF" kingdom="Animalia" order="Passeriformes" pageId="1" pageNumber="399" phylum="Chordata" rank="species" species="arborea">
