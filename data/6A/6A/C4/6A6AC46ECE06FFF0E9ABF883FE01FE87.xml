<taxonomicName authorityName="Bolivar" authorityYear="1890" box="[398,533,224,248]" class="Insecta" family="Gryllidae" genus="Xenogryllus" higherTaxonomySource="GBIF" kingdom="Animalia" order="Orthoptera" pageId="5" pageNumber="306" phylum="Arthropoda" rank="genus">
