<typeStatus id="54B5C5A985791443E5E1FEECFD3C06E2" box="[688,738,367,388]" pageId="19" pageNumber="364">Type</typeStatus>
species 
<taxonomicName id="4C0E008885791443E469FEF3FB8D06E2" authority="Forsskal, 1775" authorityName="Forsskal" authorityYear="1775" box="[824,1107,366,389]" class="Elasmobranchii" family="Rajidae" genus="Raja" kingdom="Animalia" order="Rajiformes" pageId="19" pageNumber="364" phylum="Chordata" rank="species" species="sephen">
