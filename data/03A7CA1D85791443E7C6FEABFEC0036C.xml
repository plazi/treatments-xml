<paragraph id="8BB17B0B85791443E7C6FEEDFAB106E2" blockId="19.[151,1391,366,389]" box="[151,1391,366,389]" pageId="19" pageNumber="364">
<taxonomicName id="4C0E008885791443E7C6FEEDFECD06E2" box="[151,275,366,388]" class="Elasmobranchii" family="Dasyatidae" genus="Pastinachus" kingdom="Animalia" order="Myliobatiformes" pageId="19" pageNumber="364" phylum="Chordata" rank="genus">
<emphasis id="B97AA71985791443E7C6FEEDFECD06E2" box="[151,275,366,388]" italics="true" pageId="19" pageNumber="364">Pastinachus</emphasis>
</taxonomicName>
(subgenus of 
<taxonomicName id="4C0E008885791443E6F0FEF3FE3B06E3" authority="Rüppell, 1829" authorityName="Rüppell" authorityYear="1829" box="[417,485,368,389]" class="Chondrichthyes" family="Dasyatidae" genus="Trigon" higherTaxonomySource="GBIF" kingdom="Animalia" order="Myliobatiformes" pageId="19" pageNumber="364" phylum="Chordata" rank="genus">
