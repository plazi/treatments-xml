<paragraph id="D83D3697B867EB189E50FEFBE7FFC74A" blockId="28.[112,647,215,319]" pageId="28" pageNumber="453">
<taxonomicName id="1F824D14B867EB189E50FEFBE689C751" authority="Hubner, 1827" authorityName="Hubner" authorityYear="1827" box="[113,402,268,292]" class="Insecta" family="Arctiidae" genus="Apistosia" kingdom="Animalia" order="Lepidoptera" pageId="28" pageNumber="453" phylum="Arthropoda" rank="species" species="judas">
