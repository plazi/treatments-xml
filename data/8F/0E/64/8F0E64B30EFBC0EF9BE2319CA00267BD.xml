<taxonomicName LSID-HNS="urn:lsid:biosci.ohio-state.edu:osuc_concepts:230843" class="Insecta" family="Formicidae" genus="Camponotus" kingdom="Animalia" lsidName-HNS="Camponotus (Myrmosaga)" order="Hymenoptera" pageNumber="246" phylum="Arthropoda" rank="subGenus" subGenus="Myrmosaga">Myrmosaga</taxonomicName>
