<paragraph pageId="0" pageNumber="76050">
' 
<taxonomicName authorityName="Ijima" authorityYear="1927" genus="Heterochone" kingdom="Animalia" lsidName="" pageId="0" pageNumber="76050" phylum="Brachiopoda" rank="phylum">Brachiopoda</taxonomicName>
