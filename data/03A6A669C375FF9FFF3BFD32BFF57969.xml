<taxonomicName id="4C0F6CFCC375FF9FFCE9F8B3BFBC76F9" authorityName="van Soest" authorityYear="1966" box="[858,954,1901,1926]" class="Magnoliopsida" family="Asteraceae" genus="Dissecta" higherTaxonomySource="GBIF" kingdom="Plantae" order="Asterales" pageId="2" pageNumber="9" phylum="Tracheophyta" rank="genus">
