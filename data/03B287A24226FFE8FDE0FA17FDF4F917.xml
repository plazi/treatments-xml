<taxonomicName id="4C1B4D374226FFEFFE57F9F5FD13F996" authority="DISNEY, 2003" authorityName="DISNEY" authorityYear="2003" box="[454,693,1543,1564]" class="Insecta" family="Phoridae" genus="Pilosaphiura" kingdom="Animalia" order="Diptera" pageId="114" pageNumber="618" phylum="Arthropoda" rank="species" species="samanthae" status="sp. nov.">Pilosaphiura samanthae</taxonomicName>
