<taxonomicName id="D0408C354559640D72C19014D1D957CE" class="Actinopterygii" family="Amblycipitidae" genus="Amblyceps" higherTaxonomySource="CoL" kingdom="Animalia" order="Siluriformes" pageNumber="65" phylum="Chordata" rank="species" species="mangois">Amblyceps mangois</taxonomicName>
(Amblycipitidae), 
<taxonomicName id="3F92E1B0D3E8B8AA2C51D900B31F0B59" class="Actinopterygii" family="Bagridae" genus="Batasio" higherTaxonomySource="CoL" kingdom="Animalia" order="Siluriformes" pageNumber="65" phylum="Chordata" rank="species" species="tengana">Batasio tengana</taxonomicName>
(Bagridae), 
<taxonomicName id="C6CDAED728A26E267E6A2600AF448FA9" LSID-ZBK="urn:lsid:zoobank.org:act:439BE4CD-38E1-4064-967E-FD6A36F79871" class="Actinopterygii" family="Erethistidae" genus="Erethistoides" higherTaxonomySource="CoL" kingdom="Animalia" lsidName-ZBK="Erethistoides sicula Ng 2005" order="Siluriformes" pageNumber="65" phylum="Chordata" rank="species" species="sicula">Erethistoides sicula</taxonomicName>
(Erethistidae), 
<taxonomicName id="74120608192812186CAED20773F8E784" LSID-ZBK="urn:lsid:zoobank.org:act:43D9CD07-B23E-49B7-A4DD-6CD75DCF5E86" class="Actinopterygii" family="Erethistidae" genus="Pseudolaguvia" higherTaxonomySource="CoL" kingdom="Animalia" lsidName-ZBK="Pseudolaguvia foveolata Ng 2005:174" order="Siluriformes" pageNumber="65" phylum="Chordata" rank="species" species="foveolata">Pseudolaguvia foveolata</taxonomicName>
