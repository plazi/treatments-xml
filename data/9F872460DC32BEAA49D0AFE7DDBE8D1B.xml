<taxonomicName id="4E4A6BDCB4FA9DACA46B22ADBEA80243" class="Actinopterygii" family="Erethistidae" genus="Pseudolaguvia" higherTaxonomySource="CoL" kingdom="Animalia" order="Siluriformes" pageNumber="65" phylum="Chordata" rank="species" species="ribeiroi">P. ribeiroi</taxonomicName>
, 
<taxonomicName id="042F01A6318402D7CD46122F22532DA2" class="Actinopterygii" family="Erethistidae" genus="Pseudolaguvia" higherTaxonomySource="CoL" kingdom="Animalia" order="Siluriformes" pageNumber="65" phylum="Chordata" rank="species" species="shawi">P. shawi</taxonomicName>
