<taxonomicName id="C2A57216E226650CE8C5F133E53F495E" class="Pinopsida" family="Podocarpaceae" genus="Podocarpus" higherTaxonomySource="CoL" kingdom="Plantae" lsidName="Podocarpus" order="Pinales" pageId="0" pageNumber="1" phylum="Tracheophyta" rank="genus">
<emphasis id="2058684A11EF3ADC51D632FEE803E05C" italics="true" pageId="0" pageNumber="1">Podocarpus</emphasis>
</taxonomicName>
, 
<taxonomicName id="37E44177E35E1BD7A29BDCC65BF05E31" class="Magnoliopsida" family="Cunoniaceae" genus="Weinmannia" higherTaxonomySource="CoL" kingdom="Plantae" lsidName="Weinmannia" order="Oxalidales" pageId="0" pageNumber="1" phylum="Tracheophyta" rank="genus">
<emphasis id="67E400F759AD6469C9867810CA60CDCA" italics="true" pageId="0" pageNumber="1">Weinmannia</emphasis>
