<taxonomicName id="C1A18374BE4309B8D971EB1FEA119865" class="Magnoliopsida" family="Aquifoliaceae" genus="Ilex" higherTaxonomySource="CoL" kingdom="Plantae" lsidName="Ilex" order="Aquifoliales" pageId="0" pageNumber="1" phylum="Tracheophyta" rank="genus">
<emphasis id="84BBB4AB363B3A5FEBF6A8400DCAD09F" italics="true" pageId="0" pageNumber="1">Ilex</emphasis>
</taxonomicName>
