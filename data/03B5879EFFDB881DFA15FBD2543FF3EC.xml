<taxonomicName id="4C1C4D0BFFDB881DF783FA0E5479FA2D" authorityName="Zimmermann" authorityYear="1780" box="[2075,2141,1441,1470]" class="Mammalia" family="Canidae" genus="Canis" kingdom="Animalia" order="Carnivora" pageId="32" pageNumber="443" phylum="Chordata" rank="species" species="zerda">zerda</taxonomicName>
