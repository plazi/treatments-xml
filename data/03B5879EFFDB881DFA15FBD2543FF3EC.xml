<taxonomicName id="4C1C4D0BFFDB881DF762FA405569F99F" baseAuthorityName="A Smith" baseAuthorityYear="1833" box="[2298,2381,1519,1548]" class="Mammalia" family="Canidae" genus="Vulpes" kingdom="Animalia" order="Carnivora" pageId="32" pageNumber="443" phylum="Chordata" rank="species" species="chama">chama</taxonomicName>
