<taxonomicName id="4C0B63ED5C48FFC8FB79FCABA926FC75" baseAuthorityName="Collin" baseAuthorityYear="1933" box="[1206,1354,875,898]" class="Insecta" family="Empididae" genus="Hilarempis" kingdom="Animalia" order="Diptera" pageId="2" pageNumber="58" phylum="Arthropoda" rank="species" species="propinqua">
<emphasis id="B97FC47C5C48FFC8FB79FCABA926FC75" box="[1206,1354,875,898]" italics="true" pageId="2" pageNumber="58">H. propinqua</emphasis>
