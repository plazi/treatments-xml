<taxonomicName id="35C74D17FFDDFFED2C588EDDFA31F85D" authority="Ruiz &amp; Pavon (1794: 60)" authorityName="Ruiz &amp; Pavon" authorityYear="1794" box="[1299,1451,1971,1997]" class="Magnoliopsida" family="Melastomataceae" genus="Miconia" kingdom="Plantae" order="Myrtales" pageId="3" phylum="Tracheophyta" rank="genus">
