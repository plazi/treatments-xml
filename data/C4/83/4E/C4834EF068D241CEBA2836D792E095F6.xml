<paragraph pageId="16" pageNumber="127">
<taxonomicName class="Aves" family="Rallidae" genus="Aramides" higherTaxonomySource="CoL" kingdom="Animalia" lsidName="Aramides gutturalis" order="Gruiformes" pageId="16" pageNumber="127" phylum="Chordata" rank="species" species="gutturalis">Aramides gutturalis</taxonomicName>
