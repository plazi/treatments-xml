<paragraph id="E720D38AD3E46D7868BAC5C158EF772C" pageId="0" pageNumber="1">
<taxonomicName id="E6E7D5D92920720434AEA8C13E22D1E2" class="Dothideomycetes" family="Shiraiaceae" genus="Shiraia" higherTaxonomySource="CoL" kingdom="Fungi" lsidName="Shiraia bambusicola" order="Pleosporales" pageId="0" pageNumber="1" phylum="Ascomycota" rank="species" species="bambusicola">
