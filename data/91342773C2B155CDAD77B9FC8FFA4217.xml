<taxonomicName id="1EE9DABDDB98F18DDCC278A19856F768" class="Magnoliopsida" family="Solanaceae" genus="Solanum" higherTaxonomySource="CoL" kingdom="Plantae" lsidName="Solanum physalifolium" order="Solanales" pageId="2" pageNumber="21" phylum="Tracheophyta" rank="species" species="physalifolium">
