<taxonomicName id="1E1A20E58F17CEAC5C21F6138A57277B" class="Magnoliopsida" family="Solanaceae" genus="Solanum" higherTaxonomySource="CoL" kingdom="Plantae" lsidName="Solanum sarrachoides" order="Solanales" pageId="2" pageNumber="21" phylum="Tracheophyta" rank="species" species="sarrachoides">
<emphasis id="23CBAA8B161A5E797CFBCA81732B897D" italics="true" pageId="2" pageNumber="21">Solanum sarrachoides</emphasis>
