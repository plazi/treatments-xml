<taxonomicName id="A9A9D4365DFF8A27545D287468FCB605" class="Magnoliopsida" family="Solanaceae" genus="Solanum" higherTaxonomySource="CoL" kingdom="Plantae" lsidName="Solanum tweedianum" order="Solanales" pageId="2" pageNumber="21" phylum="Tracheophyta" rank="species" species="tweedianum">
