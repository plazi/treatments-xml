<taxonomicName id="822935B9E987EB036BB69FDF405B4985" class="Insecta" family="Histeridae" genus="Baconia" higherTaxonomySource="CoL" kingdom="Animalia" lsidName="Baconia clemens" order="Coleoptera" pageId="262" pageNumber="263" phylum="Arthropoda" rank="species" species="clemens">Baconia clemens</taxonomicName>
