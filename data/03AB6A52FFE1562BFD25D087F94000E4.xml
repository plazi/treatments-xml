.................................................................. 
<taxonomicName id="4C02A0C7FFE6562BFB36D2A2F89905BB" authority="McAlpine, 2015" authorityName="McAlpine" authorityYear="2015" box="[1165,1266,690,714]" class="Insecta" family="Platystomatidae" genus="Bama" kingdom="Animalia" order="Diptera" pageId="4" pageNumber="28" phylum="Arthropoda" rank="species" species="flavifrons" status="n.sp.">
