<taxonomicName id="4C02A0C7FFE6562BFB18D1D3F89906AB" authority="McAlpine, 2015" authorityName="McAlpine" authorityYear="2015" box="[1187,1266,451,474]" class="Insecta" family="Platystomatidae" genus="Bama" kingdom="Animalia" order="Diptera" pageId="4" pageNumber="28" phylum="Arthropoda" rank="species" species="martini" status="n.sp.">
