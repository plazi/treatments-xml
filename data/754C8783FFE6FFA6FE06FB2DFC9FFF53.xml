<taxonomicName id="3AE54D16FFE6FFA7FDCCFA5DFC62F989" authority="Komai and Osawa, 2006" authorityName="Komai and Osawa" authorityYear="2006" box="[514,968,1517,1541]" class="Malacostraca" family="Paguridae" genus="Pagurixus" higherTaxonomySource="GBIF" kingdom="Animalia" order="Decapoda" pageId="2" pageNumber="1270" phylum="Arthropoda" rank="species" species="pseliophorus">
<emphasis id="CF91EA87FFE6FFA7FDCCFA5DFD00F989" box="[514,682,1517,1541]" italics="true" pageId="2" pageNumber="1270">P. pseliophorus</emphasis>
<bibRefCitation id="99744B64FFE6FFA7FD7EFA5DFC62F989" author="Komai T" box="[688,968,1517,1541]" pageId="2" pageNumber="1270" pagination="507 - 516" refId="ref33173" refString="Komai T. 2006. A new species of Pagurixus Melin, 1939 (Crustacea: Decapoda: Anomura: Paguridae) from the Ryukyu Islands, Japan. Zoosystema 28: 507 - 516." type="journal article" year="2006">Komai and Osawa, 2006</bibRefCitation>
</taxonomicName>
; and 
<taxonomicName id="3AE54D16FFE6FFA7FBCDFA5DFE53F9A9" authority="Komai and Osawa, 2009" authorityName="Komai and Osawa" authorityYear="2009" class="Malacostraca" family="Paguridae" genus="Pagurixus" higherTaxonomySource="GBIF" kingdom="Animalia" order="Decapoda" pageId="2" pageNumber="1270" phylum="Arthropoda" rank="species" species="purpureus">
<emphasis id="CF91EA87FFE6FFA7FBCDFA5DFF72F9A9" italics="true" pageId="2" pageNumber="1270">P. purpureus</emphasis>
<bibRefCitation id="99744B64FFE6FFA7FF10F9BDFE53F9A9" author="Komai T" box="[222,505,1549,1573]" pageId="2" pageNumber="1270" pagination="197 - 205" refId="ref33209" refString="Komai T. 2009. A new species of the hermit crab genus Catapaguroides (Crustacea: Decapoda: Anomura: Paguridae) from shallow water in the Ryukyu Islands, Japan. Species Divers. 14: 197 - 205." type="journal article" year="2009">Komai and Osawa, 2009</bibRefCitation>
