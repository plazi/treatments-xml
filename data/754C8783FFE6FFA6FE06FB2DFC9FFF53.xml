</taxonomicName>
; 
<taxonomicName id="3AE54D16FFE6FFA7FEA4FA7DFC96FA69" authority="McLaughlin and Haig, 1984" authorityName="McLaughlin and Haig" authorityYear="1984" box="[362,828,1485,1509]" class="Malacostraca" family="Paguridae" genus="Pagurixus" higherTaxonomySource="GBIF" kingdom="Animalia" order="Decapoda" pageId="2" pageNumber="1270" phylum="Arthropoda" rank="species" species="festinus">
