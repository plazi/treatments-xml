<paragraph blockId="37.[608,979,922,949]" box="[608,979,922,949]" pageId="37" pageNumber="38">
<heading box="[608,979,922,949]" centered="true" fontSize="11" level="3" pageId="37" pageNumber="38" reason="4">
<taxonomicName box="[608,812,922,949]" class="Arachnida" family="Pholcidae" genus="Pholcus" kingdom="Animalia" order="Araneae" pageId="37" pageNumber="38" phylum="Arthropoda" rank="species" species="buatong">
<emphasis bold="true" box="[608,812,922,949]" italics="true" pageId="37" pageNumber="38">Pholcus buatong</emphasis>
</taxonomicName>
species group
</heading>
</paragraph>
