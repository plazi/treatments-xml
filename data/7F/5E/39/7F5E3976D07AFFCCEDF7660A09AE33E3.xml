<heading bold="true" box="[151,512,519,545]" fontSize="11" level="1" pageId="1" pageNumber="42" reason="1">
<emphasis bold="true" box="[151,512,519,545]" pageId="1" pageNumber="42">
Genus 
<taxonomicName authority="Calman, 1896" authorityName="Calman" authorityYear="1896" box="[238,512,519,545]" class="Malacostraca" family="Bresiliidae" genus="Bresilia" higherTaxonomySource="GBIF" kingdom="Animalia" order="Decapoda" pageId="1" pageNumber="42" phylum="Arthropoda" rank="genus">
<emphasis bold="true" box="[238,333,519,545]" italics="true" pageId="1" pageNumber="42">Bresilia</emphasis>
<bibRefCitation author="Calman" box="[340,512,519,545]" pageId="1" pageNumber="52" refString="Calman, W. T. (1896) On deep-sea Crustacea from the SouthWest of Ireland. Transactions of the Royal Irish Academy, 31, 1 - 22." type="journal article" year="1896">
Calman, 
<number box="[453,512,519,545]" pageId="1" pageNumber="42" value="1896.0">1896</number>
</bibRefCitation>
</taxonomicName>
</emphasis>
</heading>
</paragraph>
