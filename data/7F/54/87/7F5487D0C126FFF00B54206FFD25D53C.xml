<paragraph blockId="1.[135,749,1796,1950]" lastBlockId="1.[823,1476,276,1078]" pageId="1" pageNumber="134">
<emphasis italics="true" pageId="1" pageNumber="134">
Species nova ab 
<taxonomicName box="[313,669,1796,1820]" class="Liliopsida" family="Iridaceae" genus="Herbertiae" kingdom="Plantae" order="Asparagales" pageId="1" pageNumber="134" phylum="Tracheophyta" rank="subSpecies" species="lahue" subSpecies="amoenae">Herbertiae lahue subsp. amoenae</taxonomicName>
affinis, sed magna statura (
<quantity box="[349,451,1829,1853]" metricMagnitude="-1" metricUnit="m" metricValue="3.5" metricValueMax="4.0" metricValueMin="3.0" pageId="1" pageNumber="134" unit="cm" value="35.0" valueMax="40.0" valueMin="30.0">30-40 cm</quantity>
alta vs 
<quantity box="[535,622,1829,1853]" metricMagnitude="-1" metricUnit="m" metricValue="1.15" metricValueMax="1.5" metricValueMin="0.8" pageId="1" pageNumber="134" unit="cm" value="11.5" valueMax="15.0" valueMin="8.0">8-15 cm</quantity>
