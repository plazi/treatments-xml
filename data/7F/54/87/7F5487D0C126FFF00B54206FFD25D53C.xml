<quantity box="[461,558,1861,1885]" metricMagnitude="-1" metricUnit="m" metricValue="2.65" metricValueMax="3.5" metricValueMin="1.8" pageId="1" pageNumber="134" unit="cm" value="26.5" valueMax="35.0" valueMin="18.0">18-35 cm</quantity>
longis, 
<quantity box="[639,749,1861,1885]" metricMagnitude="-3" metricUnit="m" metricValue="4.0" metricValueMax="5.0" metricValueMin="3.0" pageId="1" pageNumber="134" unit="cm" value="0.4" valueMax="0.5" valueMin="0.3">0.3-0.5 cm</quantity>
latisvs 
<quantity box="[211,298,1894,1918]" metricMagnitude="-1" metricUnit="m" metricValue="1.15" metricValueMax="1.5" metricValueMin="0.8" pageId="1" pageNumber="134" unit="cm" value="11.5" valueMax="15.0" valueMin="8.0">8-15 cm</quantity>
longis, 
<quantity box="[383,476,1894,1918]" metricMagnitude="-3" metricUnit="m" metricValue="7.0" metricValueMax="10.0" metricValueMin="4.0" pageId="1" pageNumber="134" unit="cm" value="0.7" valueMax="1.0" valueMin="0.4">0.4-1 cm</quantity>
latis),ovarium obovatoclavatum, 
<quantity box="[250,354,1926,1950]" metricMagnitude="-3" metricUnit="m" metricValue="4.25" metricValueMax="5.0" metricValueMin="3.5" pageId="1" pageNumber="134" unit="mm" value="4.25" valueMax="5.0" valueMin="3.5">3.5-5 mm</quantity>
longum (versus obovato-oblongum, 
<quantity box="[862,941,276,300]" metricMagnitude="-3" metricUnit="m" metricValue="7.0" metricValueMax="8.0" metricValueMin="6.0" pageId="1" pageNumber="134" unit="mm" value="7.0" valueMax="8.0" valueMin="6.0">6-8 mm</quantity>
