<taxonomicName id="51CD2ABCFF95DF30FB02C88622FAB28A" authority="Schuh" authorityName="Schuh" authorityYear="1967" box="[1272,1469,446,470]" class="Insecta" family="Saldidae" genus="Saldoida" kingdom="Animalia" order="Hemiptera" pageId="6" pageNumber="335" phylum="Arthropoda" rank="species" species="turbaria">
