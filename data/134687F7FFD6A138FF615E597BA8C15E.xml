<taxonomicName id="5CEF4D62FFD6A138FF615EAC7E47C6E7" box="[151,373,690,712]" class="Actinopterygii" family="Tetraodontidae" genus="Tetraodon" kingdom="Animalia" order="Tetraodontiformes" pageId="7" pageNumber="8" phylum="Chordata" rank="species" species="brevipinnis">
