<taxonomicName id="67814D11FFA59D68778CFA4AFDB1D196" authority="Boheman 1854" authorityName="Boheman" authorityYear="1854" box="[151,534,1508,1531]" class="Insecta" family="Chrysomelidae" genus="Ogdoecosta" kingdom="Animalia" order="Coleoptera" pageId="2" pageNumber="412" phylum="Arthropoda" rank="species" species="juvenca">
