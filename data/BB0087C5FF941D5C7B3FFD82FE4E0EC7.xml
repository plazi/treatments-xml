<collectingRegion id="F16DF831FF941D5C7B33FA15FE610DE2" box="[258,448,1435,1459]" country="Australia" name="New South Wales" pageId="3" pageNumber="312">New South Wales</collectingRegion>
, 
<collectingCountry id="4BBE7643FF941D5C7BFFFA15FD8B0DE2" box="[462,554,1435,1459]" name="Australia" pageId="3" pageNumber="312">Australia</collectingCountry>
