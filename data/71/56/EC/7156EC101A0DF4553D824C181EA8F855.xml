<paragraph blockId="29.[151,1436,895,1444]" pageId="29" pageNumber="30">
<emphasis bold="true" box="[196,468,1343,1369]" pageId="29" pageNumber="30">General distribution:</emphasis>
<materialsCitation country="Canada" location="Nova Scotia" pageId="29" pageNumber="30" specimenCount="1" stateProvince="Nova Scotia">
