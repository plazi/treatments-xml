<collectingRegion country="United States of America" name="New Hampshire" pageId="11" pageNumber="12">New Hampshire</collectingRegion>
</materialsCitation>
south to 
<collectingRegion box="[399,490,1416,1442]" country="United States of America" name="Florida" pageId="11" pageNumber="12">Florida</collectingRegion>
