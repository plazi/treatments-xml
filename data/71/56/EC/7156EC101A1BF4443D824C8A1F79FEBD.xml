<paragraph blockId="11.[151,1436,1005,1480]" pageId="11" pageNumber="12">
<emphasis bold="true" box="[196,464,1379,1405]" pageId="11" pageNumber="12">General distribution:</emphasis>
<materialsCitation collectorName="Manitoba" country="Canada" location="New Hampshire" pageId="11" pageNumber="12" specimenCount="1" stateProvince="New Hampshire">
