(
<quantity box="[591,755,301,327]" metricMagnitude="3" metricUnit="m" metricValue="1.281" metricValueMax="1.501" metricValueMin="1.061" pageId="40" pageNumber="41" unit="m" value="1281.0" valueMax="1501.0" valueMin="1061.0">1061–1501 m</quantity>
