<paragraph blockId="22.[151,1436,151,626]" pageId="22" pageNumber="23">
<emphasis bold="true" box="[196,463,301,327]" pageId="22" pageNumber="23">General distribution:</emphasis>
<materialsCitation country="Canada" location="Great Smoky Mountains National Park" pageId="22" pageNumber="23" specimenCount="1" stateProvince="Nova Scotia">
