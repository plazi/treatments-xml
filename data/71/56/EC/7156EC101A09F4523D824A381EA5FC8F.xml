<taxonomicName box="[769,908,152,178]" class="Polypodiopsida" family="Pteridaceae" kingdom="Plantae" order="Polypodiales" pageId="26" pageNumber="27" phylum="Tracheophyta" rank="family">Pteridaceae</taxonomicName>
