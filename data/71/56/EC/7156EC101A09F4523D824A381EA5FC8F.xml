<taxonomicName box="[1271,1430,2000,2026]" class="Magnoliopsida" family="Asteraceae" genus="Solidago" kingdom="Plantae" order="Asterales" pageId="25" pageNumber="26" phylum="Tracheophyta" rank="species" species="undetermined">
<emphasis box="[1271,1382,2000,2025]" italics="true" pageId="25" pageNumber="26">Solidago</emphasis>
sp.
</taxonomicName>
, 
<taxonomicName box="[151,283,152,178]" class="Magnoliopsida" family="Asteraceae" kingdom="Plantae" order="Asterales" pageId="26" pageNumber="27" phylum="Tracheophyta" rank="family">Asteraceae</taxonomicName>
