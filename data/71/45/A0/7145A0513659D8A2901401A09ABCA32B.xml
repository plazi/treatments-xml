<taxonomicName class="Magnoliopsida" family="Malvaceae" genus="Diptera" higherTaxonomySource="GBIF" kingdom="Plantae" lsidName="" order="Malvales" pageId="38" pageNumber="91" phylum="Tracheophyta" rank="genus">Diptera</taxonomicName>
: 
