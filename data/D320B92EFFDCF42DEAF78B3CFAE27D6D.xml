<emphasis id="69FDD42AFFDCF42EEAF78B3CFA8C78AA" bold="true" box="[977,1288,1131,1156]" pageId="1" pageNumber="664">
<taxonomicName id="9C8973BBFFDCF42EEAF78B3CFB0278AD" authority="Bührnheim &amp; Carvalho &amp; Malabarba &amp; Weitzman, 2008" authorityName="Bührnheim &amp; Carvalho &amp; Malabarba &amp; Weitzman" authorityYear="2008" box="[977,1158,1131,1155]" class="Actinopterygii" family="Characidae" genus="Amazonspinther" kingdom="Animalia" order="Characiformes" pageId="1" pageNumber="664" phylum="Chordata" rank="genus" status="new genus">
<emphasis id="69FDD42AFFDCF42EEAF78B3CFB0278AD" bold="true" box="[977,1158,1131,1155]" italics="true" pageId="1" pageNumber="664">Amazonspinther</emphasis>
