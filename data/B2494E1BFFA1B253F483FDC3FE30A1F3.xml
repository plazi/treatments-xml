</collectionCode>
. — 
<taxonomicName id="FDE0848EFFA1B253F56CFD8FFD62A756" authority="Jenkin, 1908" authorityName="Jenkin" authorityYear="1908" box="[293,646,579,604]" class="Calcarea" family="Sycanthidae" genus="Dermatreton" kingdom="Animalia" order="Leucosolenida" pageId="26" pageNumber="229" phylum="Porifera" rank="species" species="hodgsoni">
