<taxonomicName id="0DC35AD633E5717F660DE2F4EF3F52EC" authorityName="Barr" authorityYear="1982" class="Hexapoda" family="Carabidae" genus="Platynus" higherTaxonomySource="GBIF" kingdom="Animalia" lsidName="" order="Coleoptera" pageId="772" pageNumber="773" phylum="Arthropoda" rank="species" species="pecki">
