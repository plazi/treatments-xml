<taxonomicName id="3C8397CC744C13892862411D9EB0F799" authorityName="Bonelli" authorityYear="1810" class="Hexapoda" family="Carabidae" genus="Platynus" higherTaxonomySource="GBIF" kingdom="Animalia" lsidName="" order="Coleoptera" pageId="772" pageNumber="773" phylum="Arthropoda" rank="genus">
<emphasis id="0A351E5506649C333D0E26A5385C4A2E" italics="true" pageId="772" pageNumber="773">Platynus</emphasis>
