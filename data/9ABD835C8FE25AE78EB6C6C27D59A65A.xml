<taxonomicName id="26054A368D701A7922E176E6B76F856A" authorityName="Bonelli" authorityYear="1810" class="Hexapoda" family="Carabidae" genus="Platynus" higherTaxonomySource="GBIF" kingdom="Animalia" lsidName="" order="Coleoptera" pageId="772" pageNumber="773" phylum="Arthropoda" rank="genus">
