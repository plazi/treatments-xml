<taxonomicName class="Dicotyledoneae" family="Araliaceae" genus="Polyscias" higherTaxonomySource="GBIF" kingdom="Plantae" lsidName="" order="Umbelliflorae" pageId="19" pageNumber="52" phylum="Angiospermae" rank="genus">
