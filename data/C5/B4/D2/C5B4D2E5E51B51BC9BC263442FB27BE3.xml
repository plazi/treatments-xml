<subSubSection pageId="0" pageNumber="25" type="type species">
<paragraph pageId="0" pageNumber="25">Type species.</paragraph>
<paragraph pageId="0" pageNumber="25">
<taxonomicName authorityName="Zhang &amp; Yu &amp; Li" authorityYear="2021" baseAuthorityName="Zhang &amp; Yu &amp; Li" baseAuthorityYear="2021" class="Arachnida" family="Clubionidae" genus="Clubiona" higherTaxonomySource="CoL" kingdom="Animalia" lsidName="Clubiona brachyptera" order="Araneae" pageId="0" pageNumber="25" phylum="Arthropoda" rank="species" species="brachyptera">
