</taxonomicName>
in 
<taxonomicName id="4C194D2DFFB8A22ADE5CFB87D6E51A5E" authorityName="Salvator NTORE &amp; Olivier LACHENAUD" authorityYear="2019" box="[531,677,1081,1107]" class="Magnoliopsida" family="Rubiaceae" genus="Pauridiantha" kingdom="Plantae" order="Gentianales" pageId="5" pageNumber="32" phylum="Tracheophyta" rank="genus">
