<subSubSection id="05EA650DFFC43A32FF6DF9E2EDCDF941" pageId="7" pageNumber="578" type="materials_examined">
<paragraph id="4D4F3686FFC43A32FF6DF9E2EDCDF941" blockId="7.[151,1437,151,1905]" pageId="7" pageNumber="578">
<emphasis id="7F84EA94FFC43A32FF6DF9E2EDA9F9D0" bold="true" box="[199,493,1554,1581]" pageId="7" pageNumber="578">Type material examined.</emphasis>
<materialsCitation id="FD983CDBFFC43A32FE58F9E2EE51F9AD" ID-GBIF-Occurrence="3434635306" collectionCode="MNHM" determinerName="L. A. Almeida" pageId="7" pageNumber="578" specimenCount="1" typeStatus="holotype">
<emphasis id="7F84EA94FFC43A32FE58F9E2EE2CF9D1" bold="true" box="[498,616,1555,1581]" pageId="7" pageNumber="578">
<typeStatus id="924B8824FFC43A32FE58F9E2EE27F9D1" box="[498,611,1555,1581]" pageId="7" pageNumber="578">Holotype</typeStatus>
:
</emphasis>
“Madagascar, Ambositra/ TYPE/ 
