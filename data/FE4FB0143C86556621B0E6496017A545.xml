<paragraph id="2C5027FAAAE7F29C44901956266F8BDA" pageId="0" pageNumber="17">
<taxonomicName id="1AA764C63D07539B4CEFB87F1DAC22A4" class="Insecta" family="Cicadellidae" genus="Dikrella" higherTaxonomySource="CoL" kingdom="Animalia" lsidName="Dikrella (Dikrella) mella" order="Hemiptera" pageId="0" pageNumber="17" phylum="Arthropoda" rank="species" species="mella" subGenus="Dikrella">Dikrella (Dikrella) mella</taxonomicName>
