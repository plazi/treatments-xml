<taxonomicName id="AC77370E046FD079D8185FD9E3B08873" class="Magnoliopsida" family="Rosaceae" form="atropurpurea" genus="Prunus" higherTaxonomySource="CoL" infraspecific-rank="f." kingdom="Plantae" lsidName="Prunus cerasifera" order="Rosales" pageId="0" pageNumber="79" phylum="Tracheophyta" rank="form" species="cerasifera">Prunus cerasifera f. atropurpurea</taxonomicName>
