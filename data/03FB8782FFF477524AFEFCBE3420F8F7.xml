<quantity id="4CAA9B71FFF477524B0FF9B634D2F804" box="[358,435,1563,1590]" metricMagnitude="3" metricUnit="m" metricValue="1.8288" pageId="12" pageNumber="77" unit="ft" value="6000.0">6000ft</quantity>
