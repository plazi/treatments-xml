<subSubSection pageId="6" pageNumber="295" type="etymology">
<paragraph blockId="6.[136,775,1492,1547]" pageId="6" pageNumber="295">
<emphasis bold="true" box="[136,298,1492,1516]" italics="true" pageId="6" pageNumber="295">Etymology. –</emphasis>
