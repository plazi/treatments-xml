), while 
<taxonomicName authority="Griffiths" authorityName="Griffiths" box="[682,908,906,932]" class="Insecta" family="Anthomyiidae" genus="Delia" kingdom="Animalia" order="Diptera" pageId="1" pageNumber="52" phylum="Arthropoda" rank="species" species="polaris">
<emphasis box="[682,801,906,931]" italics="true" pageId="1" pageNumber="52">D. polaris</emphasis>
Griffiths
</taxonomicName>
