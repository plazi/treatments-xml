<taxonomicName class="Magnoliopsida" family="Asteraceae" genus="Mesogramma" higherTaxonomySource="CoL" kingdom="Plantae" lsidName="Mesogramma portia" order="Asterales" pageId="7" pageNumber="8" phylum="Tracheophyta" rank="species" species="portia">Mesogramma portia</taxonomicName>
