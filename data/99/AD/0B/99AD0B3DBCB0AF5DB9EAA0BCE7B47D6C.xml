<taxonomicName class="Insecta" family="Syrphidae" genus="Toxomerus" higherTaxonomySource="CoL" kingdom="Animalia" lsidName="Toxomerus basalis" order="Diptera" pageId="7" pageNumber="8" phylum="Arthropoda" rank="species" species="basalis">Toxomerus basalis</taxonomicName>
