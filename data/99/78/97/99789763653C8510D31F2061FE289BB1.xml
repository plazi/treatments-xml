<taxonomicName authorityName="Muller &amp; Troschel" authorityYear="1842" box="[312,465,1548,1574]" class="Ophiuroidea" family="Ophiacanthidae" genus="Ophiacantha" kingdom="Animalia" order="Ophiurida" pageId="105" pageNumber="106" phylum="Echinodermata" rank="genus">
