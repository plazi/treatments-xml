and 
<taxonomicName authorityName="Verrill" authorityYear="1885" box="[532,664,1051,1077]" class="Ophiuroidea" family="Ophiacanthidae" genus="Ophiacantha" kingdom="Animalia" order="Ophiurida" pageId="107" pageNumber="108" phylum="Echinodermata" rank="species" species="fraterna">
<emphasis box="[532,664,1051,1077]" italics="true" pageId="107" pageNumber="108">O. fraterna</emphasis>
