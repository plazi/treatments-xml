<taxonomicName genus="L." lsidName="L. septentrionalis" pageId="0" pageNumber="109" rank="species" species="septentrionalis">
<emphasis italics="true" pageId="0" pageNumber="109">L. septentrionalis</emphasis>
</taxonomicName>
(Gunther, 1875)), nine supralabials (vs. eight in 
<taxonomicName genus="L." lsidName="L. striatus" pageId="0" pageNumber="109" rank="species" species="striatus">
<emphasis italics="true" pageId="0" pageNumber="109">L. striatus</emphasis>
</taxonomicName>
, 
<taxonomicName genus="L." lsidName="L. mackinnoni" pageId="0" pageNumber="109" rank="species" species="mackinnoni">
<emphasis italics="true" pageId="0" pageNumber="109">L. mackinnoni</emphasis>
</taxonomicName>
Wall, 1906 and 
<taxonomicName genus="L." lsidName="L. fasciatus" pageId="0" pageNumber="109" rank="species" species="fasciatus">
<emphasis italics="true" pageId="0" pageNumber="109">L. fasciatus</emphasis>
</taxonomicName>
, 6 or 7 in 
<taxonomicName genus="L." lsidName="L. nympha" pageId="0" pageNumber="109" rank="species" species="nympha">
<emphasis italics="true" pageId="0" pageNumber="109">L. nympha</emphasis>
</taxonomicName>
and 
<taxonomicName genus="L." lsidName="L. gracilis" pageId="0" pageNumber="109" rank="species" species="gracilis">
