<taxonomicName id="772F45D028BD6EDF1A626FF8196676A3" authorityName="Schellenberg" authorityYear="1926" class="Malacostraca" family="Scopelocheiridae" genus="Scopelocheiropsis" higherTaxonomySource="CoL" kingdom="Animalia" lsidName="Scopelocheiropsis" order="Amphipoda" pageId="18" pageNumber="19" phylum="Arthropoda" rank="genus">
<emphasis id="6DC61E01F89B164C223A1D65BA252B6B" italics="true" pageId="18" pageNumber="19">Scopelocheiropsis</emphasis>
</taxonomicName>
