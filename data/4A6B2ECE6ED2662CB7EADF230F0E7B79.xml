<taxonomicName id="2F17C188329BC4B62FE42DFFAB3B9AAA" baseAuthorityName="Ledoyer" baseAuthorityYear="1986" class="Malacostraca" family="Scopelocheiridae" genus="Scopelocheiropsis" higherTaxonomySource="CoL" kingdom="Animalia" lsidName="Scopelocheiropsis armata" order="Amphipoda" pageId="18" pageNumber="19" phylum="Arthropoda" rank="species" species="armata">
