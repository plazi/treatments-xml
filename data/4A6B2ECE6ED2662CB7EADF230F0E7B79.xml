<taxonomicName id="A3707465B2E7097B4907C74F0188F40C" authorityName="Schellenberg" authorityYear="1926" class="Malacostraca" family="Scopelocheiridae" genus="Scopelocheiropsis" higherTaxonomySource="CoL" kingdom="Animalia" lsidName="Scopelocheiropsis abyssalis" order="Amphipoda" pageId="18" pageNumber="19" phylum="Arthropoda" rank="species" species="abyssalis">
