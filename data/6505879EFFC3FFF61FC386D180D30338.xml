<quantity id="2A549B6DFFC0FFF01BCB82A787D606CA" box="[1183,1258,1977,1999]" metricMagnitude="-2" metricUnit="m" metricValue="1.0" pageId="2" unit="mm" value="10.0">10 mm</quantity>
