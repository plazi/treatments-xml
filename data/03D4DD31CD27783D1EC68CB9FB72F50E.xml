<number id="3DB57E00CD26783D1F448DB9FEE3F6EC" box="[277,342,1500,1522]" pageId="5" pageNumber="123" value="38.5" valueMax="41.0" valueMin="36.0">36–41</number>
.
</emphasis>
<taxonomicName id="4C7D17A4CD26783D1F338DB9FDF7F6EC" box="[354,578,1500,1522]" class="Insecta" family="Cicadellidae" genus="Drabescus" kingdom="Animalia" order="Hemiptera" pageId="5" pageNumber="123" phylum="Arthropoda" rank="species" species="cuspidatus" status="sp. nov.">
<emphasis id="B909B035CD26783D1F338DB9FDF7F6EC" box="[354,578,1500,1522]" italics="true" pageId="5" pageNumber="123">Drabescus cuspidatus</emphasis>
</taxonomicName>
<emphasis id="B909B035CD26783D1C188DB9FD2EF6EC" bold="true" box="[585,667,1500,1522]" pageId="5" pageNumber="123">
<taxonomicNameLabel id="A23A0D4ECD26783D1C188DB9FD2EF6EC" box="[585,667,1500,1522]" pageId="5" pageNumber="123" rank="species">
sp. 
<date id="FFC34AE7CD26783D1C3E8DB9FD2EF6EC" box="[623,667,1500,1522]" pageId="5" pageNumber="123" value="1936-11">nov.</date>
