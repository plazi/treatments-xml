<paragraph id="C66DC57F9E5AC8A290779D9BF302C066" pageId="0" pageNumber="91">
<taxonomicName id="48D4243B1A4BD570B18AF250887ED0AE" class="Magnoliopsida" family="Hydrangeaceae" genus="Hydrangea" higherTaxonomySource="CoL" kingdom="Plantae" lsidName="Hydrangea caucana" order="Cornale" pageId="0" pageNumber="91" phylum="Tracheophyta" rank="species" species="caucana">
