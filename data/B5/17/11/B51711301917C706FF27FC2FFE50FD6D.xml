<taxonomicName authority="Mayr" authorityName="Mayr" box="[288,602,1678,1700]" class="Insecta" family="Belostomatidae" genus="Limnogeton" higherTaxonomySource="GBIF" kingdom="Animalia" order="Hemiptera" pageId="9" pageNumber="582" phylum="Arthropoda" rank="species" species="scutellatum">
