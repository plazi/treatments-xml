. III: 
<number box="[1341,1380,1833,1859]" pageId="11" pageNumber="60" value="3.6">3.6</number>
, 
<number box="[1392,1431,1833,1859]" pageId="11" pageNumber="60" value="3.8">3.8</number>
, 
<number box="[151,190,1870,1896]" pageId="11" pageNumber="60" value="1.1">1.1</number>
, 
