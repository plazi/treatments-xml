<taxonomicName box="[699,984,1734,1759]" class="Oligochaeta" family="Megascolecidae" genus="Polypheretima" higherTaxonomySource="GBIF" kingdom="Animalia" order="Haplotaxida" pageId="74" pageNumber="75" phylum="Annelida" rank="species" species="polytheca">
