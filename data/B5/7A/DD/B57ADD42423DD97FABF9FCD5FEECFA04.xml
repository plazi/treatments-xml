<collectingCountry box="[1197,1312,1292,1317]" name="Nicaragua" pageId="5" pageNumber="194">Nicaragua</collectingCountry>
and 
<collectingCountry name="Costa Rica" pageId="5" pageNumber="194">Costa Rica</collectingCountry>
(
<bibRefCitation box="[217,378,1328,1352]" pageId="5" pageNumber="194" refId="ref15700" refString="Monne, M. A. (2017 a) Catalogue of the Cerambycidae (Coleoptera) of the Neotropical Region. Part I. Subfamily Cerambycinae. Available at http: // cerambyxcat. com / (accessed 28 December 2017)" type="journal article">Monné 2017a</bibRefCitation>
).
