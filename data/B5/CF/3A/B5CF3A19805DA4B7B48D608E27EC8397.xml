<emphasis italics="true" pageId="4" pageNumber="19">Solanum restingae</emphasis>
</taxonomicName>
, 
<taxonomicName authorityName="S. Knapp &amp; Giacomin" authorityYear="2015" class="Magnoliopsida" family="Solanaceae" genus="Solanum" higherTaxonomySource="CoL" kingdom="Plantae" lsidName="Solanum amorimii" order="Solanales" pageId="4" pageNumber="19" phylum="Tracheophyta" rank="species" species="amorimii">
