<taxonomicName id="4C58A0B51E38FF85FD34A5BFFDCFDBA8" authority="Lucas, 1932" authorityName="Lucas" authorityYear="1932" class="Insecta" family="Geometridae" genus="Pseudoboarmia" higherTaxonomySource="GBIF" kingdom="Animalia" order="Lepidoptera" pageId="39" pageNumber="296" phylum="Arthropoda" rank="species" species="desertaria">
