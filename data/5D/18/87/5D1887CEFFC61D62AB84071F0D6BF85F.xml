(as 
<taxonomicName box="[700,830,1485,1508]" class="Insecta" family="Drilidae" genus="Drilus" higherTaxonomySource="GBIF" kingdom="Animalia" order="Coleoptera" pageId="2" pageNumber="459" phylum="Arthropoda" rank="species" species="posticus">
