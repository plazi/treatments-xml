<taxonomicName box="[248,367,1520,1544]" class="Insecta" family="Drilidae" genus="Drilus" higherTaxonomySource="GBIF" kingdom="Animalia" order="Coleoptera" pageId="2" pageNumber="459" phylum="Arthropoda" rank="species" species="adustus">
