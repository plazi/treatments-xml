<subSubSection type="distribution">
<paragraph pageNumber="90">
<taxonomicName class="Pucciniomycetes" family="Pucciniaceae" genus="Puccinia" higherTaxonomySource="CoL" kingdom="Fungi" order="Pucciniales" pageNumber="90" phylum="Basidiomycota" rank="species" species="thaliae">P. thaliae</taxonomicName>
