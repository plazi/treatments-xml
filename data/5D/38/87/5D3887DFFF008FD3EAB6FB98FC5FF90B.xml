<taxonomicName baseAuthorityName="Silvestri" baseAuthorityYear="1927" box="[297,388,1629,1653]" class="Insecta" family="Aphelinidae" genus="Encarsia" kingdom="Animalia" order="Hymenoptera" pageId="138" pageNumber="2235" phylum="Arthropoda" rank="species" species="opulenta">
<emphasis box="[297,388,1629,1653]" italics="true" pageId="138" pageNumber="2235">opulenta</emphasis>
</taxonomicName>
