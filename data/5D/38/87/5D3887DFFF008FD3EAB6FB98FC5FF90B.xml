<taxonomicName baseAuthorityName="Girault" baseAuthorityYear="1913" box="[479,651,1629,1653]" class="Insecta" family="Aphelinidae" genus="Encarsia" kingdom="Animalia" order="Hymenoptera" pageId="138" pageNumber="2235" phylum="Arthropoda" rank="species" species="albiscutellum">
<emphasis box="[479,651,1629,1653]" italics="true" pageId="138" pageNumber="2235">E. albiscutellum</emphasis>
