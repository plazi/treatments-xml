<taxonomicName id="532874EBDB227D7C5DDBE5EED987C0C6" LSID="D6938C52-49F7-5E89-B9B8-C020158AEDF4" authority="Dejean, 1821" authorityName="Dejean" authorityYear="1821" class="Insecta" family="Carabidae" genus="Bembidium" higherTaxonomySource="GBIF" kingdom="Animalia" lsidName="(Notaphus)" order="Coleoptera" pageId="392" pageNumber="393" phylum="Arthropoda" rank="subGenus" subGenus="Notaphus">Notaphus Dejean, 1821</taxonomicName>
