<quantity id="7F0A9B309904FFF9FCC546E91CD6FAA4" box="[826,942,1267,1289]" metricMagnitude="-2" metricUnit="m" metricValue="1.431" pageId="21" pageNumber="316" unit="mm" value="14.31">14.31 mm</quantity>
. Rostrum: length, 
<quantity id="7F0A9B309904FFF9FB3146E91A4BFAA4" box="[1230,1331,1267,1289]" metricMagnitude="-3" metricUnit="m" metricValue="2.56" pageId="21" pageNumber="316" unit="mm" value="2.56">2.56 mm</quantity>
; width, 
<quantity id="7F0A9B309904FFF9FCC547081CE7FA8A" box="[826,927,1298,1319]" metricMagnitude="-3" metricUnit="m" metricValue="1.49" pageId="21" pageNumber="316" unit="mm" value="1.49">1.49 mm</quantity>
; ratio, 1.71. Pronotum: length, 
<quantity id="7F0A9B309904FFF9FAC747081AE4FA8A" box="[1336,1436,1298,1320]" metricMagnitude="-3" metricUnit="m" metricValue="3.68" pageId="21" pageNumber="316" unit="mm" value="3.68">3.68 mm</quantity>
; width, 
<quantity id="7F0A9B309904FFF9FC73472A1C89FAEB" box="[908,1009,1328,1350]" metricMagnitude="-3" metricUnit="m" metricValue="4.5" pageId="21" pageNumber="316" unit="mm" value="4.5">4.50 mm</quantity>
; ratio, 0.82. Elytra: length, 
<quantity id="7F0A9B309904FFF9FAC7472B1AE4FAEB" box="[1336,1436,1329,1350]" metricMagnitude="-3" metricUnit="m" metricValue="9.89" pageId="21" pageNumber="316" unit="mm" value="9.89">9.89 mm</quantity>
; width, 
<quantity id="7F0A9B309904FFF9FC7447551C88FAC9" box="[907,1008,1359,1381]" metricMagnitude="-3" metricUnit="m" metricValue="5.96" pageId="21" pageNumber="316" unit="mm" value="5.96">5.96 mm</quantity>
