<taxonomicName id="4C7A4D63FF97E53CD5F2FF09D1234487" authorityName="Myers" authorityYear="1952" box="[914,1065,216,237]" class="Actinopterygii" family="Rivulidae" genus="Leptolebias" kingdom="Animalia" order="Cyprinodontiformes" pageId="3" pageNumber="150" phylum="Chordata" rank="genus">
<emphasis id="B90EEAF2FF97E53CD5F2FF09D1234487" box="[914,1065,216,237]" italics="true" pageId="3" pageNumber="150">LEPTOLEBIAS</emphasis>
</taxonomicName>
