<quantity id="6020AFE2FFDCFFBC616F156B55F6E4E3" box="[340,425,634,656]" metricMagnitude="-3" metricUnit="m" metricValue="1.83" pageId="1" pageNumber="496" unit="mm" value="1.83">1.83 mm</quantity>
(
