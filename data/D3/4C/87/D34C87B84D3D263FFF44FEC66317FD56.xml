. 
<taxonomicName authority="Claparede, 1868" authorityName="Claparede" authorityYear="1868" box="[280,615,1582,1605]" class="Polychaeta" family="Flabelligeridae" genus="Piromis" kingdom="Animalia" order="Terebellida" pageId="16" pageNumber="17" phylum="Annelida" rank="species" species="eruca">
