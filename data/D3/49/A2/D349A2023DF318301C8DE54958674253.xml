, 
<bibRefCitation author="Printes, RC" pageId="40" pageNumber="145" url="https://doi.org/10.1017/S0030605311000111" year="2011">Printes et al. 2011</bibRefCitation>
and 
<bibRefCitation author="Printes, RC" pageId="40" pageNumber="145" url="https://doi.org/10.1017/CBO9781139034210.050" year="2013">2013</bibRefCitation>
, 
<bibRefCitation author="Marques, EN" pageId="36" pageNumber="141" url="https://doi.org/10.15560/9.1.113" year="2013">Marques et al. 2013</bibRefCitation>
, 
<bibRefCitation author="Corsini, CF" pageId="34" pageNumber="139" url="https://doi.org/10.1896/044.021.0203" year="2014">Corsini and Moura 2014</bibRefCitation>
