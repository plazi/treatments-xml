<quantity id="854F07EA3660226FFBF5FABE84B4FA0A" metricMagnitude="-2" metricUnit="m" metricValue="2.15" metricValueMax="2.4" metricValueMin="1.9" pageId="30" pageNumber="1572" unit="mm" value="21.5" valueMax="24.0" valueMin="19.0">19– 24 mm</quantity>
