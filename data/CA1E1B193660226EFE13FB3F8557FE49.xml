<quantity id="854F07EA3660226FFE4EFABE8676FAEA" box="[403,541,1380,1404]" metricMagnitude="-2" metricUnit="m" metricValue="2.275" metricValueMax="2.5" metricValueMin="2.05" pageId="30" pageNumber="1572" unit="mm" value="22.75" valueMax="25.0" valueMin="20.5">20.5–25 mm</quantity>
(mean (
<emphasis id="70C3761D3660226FFDA4FABE86EDFAEA" box="[633,646,1380,1404]" italics="true" pageId="30" pageNumber="1572">n</emphasis>
= 7) 
<quantity id="854F07EA3660226FFD1EFABE875EFAEA" box="[707,821,1380,1404]" metricMagnitude="-2" metricUnit="m" metricValue="2.256" pageId="30" pageNumber="1572" unit="mm" value="22.56">22.56 mm</quantity>
, 
<collectingRegion id="807364ED3660226FFC9DFABE870FFAEA" box="[832,868,1380,1404]" country="Serbia" name="Sid" pageId="30" pageNumber="1572">SD</collectingRegion>
