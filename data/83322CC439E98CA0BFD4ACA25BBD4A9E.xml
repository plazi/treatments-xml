<taxonomicName id="CA427D1A337B9E3DE74AD199FEE52ACC" LSID-ZBK="urn:lsid:zoobank.org:act:41F6C0CA-F3DF-4C03-99F6-75081ABC36C9" class="Actinopterygii" family="Cobitidae" genus="Cobitis" higherTaxonomySource="CoL" kingdom="Animalia" lsidName-ZBK="Cobitis macracanthus Bleeker 1852:603" order="Cypriniformes" pageNumber="13" phylum="Chordata" rank="species" species="macracanthus">Cobitis macracanthus Bleeker, 1852</taxonomicName>
