<taxonomicName id="4C270793991FFFA0FCD957B161C3EE4D" box="[871,974,1017,1041]" class="Insecta" family="Noctuidae" genus="Micardia" kingdom="Animalia" order="Lepidoptera" pageId="6" pageNumber="51" phylum="Arthropoda" rank="genus">
