<quantity id="3E45129FF27914267285EF8956292DE1" box="[423,524,1485,1511]" metricMagnitude="-4" metricUnit="m" metricValue="8.0" pageId="16" pageNumber="17" unit="mm" value="0.8">0.80 mm</quantity>
, 
<geoCoordinate id="9C89D9BDF27914267135EF89564C2DE1" box="[535,617,1485,1511]" direction="west" orientation="longitude" pageId="16" pageNumber="17" precision="555" value="-0.21">
