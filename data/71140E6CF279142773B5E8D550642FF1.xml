<quantity id="3E45129FF27914267102EFB556A22E0D" box="[544,647,1521,1547]" metricMagnitude="-4" metricUnit="m" metricValue="3.2" pageId="16" pageNumber="17" unit="mm" value="0.32">0.32 mm</quantity>
