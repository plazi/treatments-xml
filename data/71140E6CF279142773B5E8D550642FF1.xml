<quantity id="3E45129FF2791426739AECC5553B2E9D" box="[184,286,1665,1691]" metricMagnitude="-4" metricUnit="m" metricValue="4.3" pageId="16" pageNumber="17" unit="mm" value="0.43">0.43 mm</quantity>
, 
