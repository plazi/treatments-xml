<emphasis box="[400,500,690,715]" italics="true" pageId="9" pageNumber="210">H. dubia</emphasis>
</taxonomicName>
, similar to 
<taxonomicName box="[633,770,690,715]" class="Insecta" family="Melolonthidae" genus="Hoplia" kingdom="Animalia" order="Coleoptera" pageId="9" pageNumber="210" phylum="Arthropoda" rank="species" species="meridian">
<emphasis box="[633,770,690,715]" italics="true" pageId="9" pageNumber="210">H. meridian</emphasis>
</taxonomicName>
a. 
<collectionCode box="[799,855,691,714]" country="India" httpUri="http://biocol.org/urn:lsid:biocol.org:col:12690" name="Botanical Survey of India, Andaman and Nicobar Circle" pageId="9" pageNumber="210">PBL</collectionCode>
: 
<quantity box="[867,1004,690,715]" metricMagnitude="-3" metricUnit="m" metricValue="6.85" metricValueMax="7.6" metricValueMin="6.1" pageId="9" pageNumber="210" unit="mm" value="6.85" valueMax="7.6" valueMin="6.1">6.1–7.6 mm</quantity>
[6.7], average 
<quantity box="[1178,1269,690,715]" metricMagnitude="-3" metricUnit="m" metricValue="6.7" pageId="9" pageNumber="210" unit="mm" value="6.7">6.7 mm</quantity>
; TBL: 
<quantity metricMagnitude="-3" metricUnit="m" metricValue="8.399999999999999" metricValueMax="9.2" metricValueMin="7.6" pageId="9" pageNumber="210" unit="mm" value="8.399999999999999" valueMax="9.2" valueMin="7.6">7.6–9.2 mm</quantity>
[7.7], average: 
<quantity box="[371,460,727,751]" metricMagnitude="-3" metricUnit="m" metricValue="8.3" pageId="9" pageNumber="210" unit="mm" value="8.3">8.3 mm</quantity>
; MBW: 
<quantity box="[555,690,727,751]" metricMagnitude="-3" metricUnit="m" metricValue="4.3" metricValueMax="4.9" metricValueMin="3.7" pageId="9" pageNumber="210" unit="mm" value="4.3" valueMax="4.9" valueMin="3.7">3.7–4.9 mm</quantity>
[4.3], average 
<quantity box="[858,947,727,751]" metricMagnitude="-3" metricUnit="m" metricValue="4.2" pageId="9" pageNumber="210" unit="mm" value="4.2">4.2 mm</quantity>
