<taxonomicName authorityName="Boucek" authorityYear="1974" box="[914,1047,1260,1284]" class="Insecta" family="Leucospidae" genus="Leucospis" higherTaxonomySource="GBIF" kingdom="Animalia" order="Hymenoptera" pageId="30" pageNumber="31" phylum="Arthropoda" rank="species" species="signifera">
