<taxonomicName id="4C1A6BCAA53265450FB8F6F6FD47F839" baseAuthorityName="Pungeler" baseAuthorityYear="1904" box="[656,739,1981,2005]" class="Insecta" family="Noctuidae" genus="Lophoterges" kingdom="Animalia" order="Lepidoptera" pageId="0" pageNumber="288" phylum="Arthropoda" rank="species" species="fatua">
