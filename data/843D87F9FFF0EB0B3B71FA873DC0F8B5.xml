<taxonomicName id="CB944D6CFFCCEB0B3B17FBDA3AF4FBCE" authorityName="Jellinek &amp; Swanson" authorityYear="2003" box="[806,974,1024,1046]" class="Ostracoda" family="Macrocyprididae" genus="Macropyxis" kingdom="Animalia" order="Podocopida" pageId="32" pageNumber="599" phylum="Arthropoda" rank="species" species="andreseni">
