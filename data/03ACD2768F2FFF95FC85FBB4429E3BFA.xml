<typeStatus id="54BEDDC28F2FFF92FD70FBF8430E3B38" box="[734,792,1088,1111]" pageId="123" pageNumber="124">TYPE</typeStatus>
SPECIES: 
<taxonomicName id="4C0518E38F2FFF92FC24FBF8438E3B1A" authority="Gertsch and Mulaik, 1941" authorityName="Gertsch and Mulaik" authorityYear="1941" class="Arachnida" family="Pholcidae" genus="Pholcophora" kingdom="Animalia" order="Araneae" pageId="123" pageNumber="124" phylum="Arthropoda" rank="species" species="diluta">
<emphasis id="B971BF728F2FFF92FC24FBF844783B39" box="[906,1134,1088,1111]" italics="true" pageId="123" pageNumber="124">Pholcophora diluta</emphasis>
Gertsch and Mulaik, 1941
</taxonomicName>
