<taxonomicName class="Magnoliopsida" family="Asteraceae" genus="Chuquiraga" higherTaxonomySource="CoL" kingdom="Plantae" lsidName="" order="Asterales" pageId="0" pageNumber="57" phylum="Tracheophyta" rank="family">Asteraceae</taxonomicName>
), 
<taxonomicName class="Magnoliopsida" family="Asteraceae" genus="Baccharis" higherTaxonomySource="CoL" kingdom="Plantae" lsidName="Baccharis neaei" order="Asterales" pageId="0" pageNumber="57" phylum="Tracheophyta" rank="species" species="neaei">
<emphasis italics="true" pageId="0" pageNumber="57">Baccharis neaei</emphasis>
</taxonomicName>
DC. (
<taxonomicName class="Magnoliopsida" family="Asteraceae" genus="Baccharis" higherTaxonomySource="CoL" kingdom="Plantae" lsidName="" order="Asterales" pageId="0" pageNumber="57" phylum="Tracheophyta" rank="family">Asteraceae</taxonomicName>
