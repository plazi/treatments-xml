<taxonomicName class="Magnoliopsida" family="Asteraceae" genus="Chuquiraga" higherTaxonomySource="CoL" kingdom="Plantae" lsidName="Chuquiraga oppositifolia" order="Asterales" pageId="0" pageNumber="57" phylum="Tracheophyta" rank="species" species="oppositifolia">
<emphasis italics="true" pageId="0" pageNumber="57">Chuquiraga oppositifolia</emphasis>
</taxonomicName>
