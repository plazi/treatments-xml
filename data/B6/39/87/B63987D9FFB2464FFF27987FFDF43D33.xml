<taxonomicName authority="Hampson, 1910" authorityName="Hampson" authorityYear="1910" box="[904,1318,463,488]" class="Insecta" family="Noctuidae" genus="Hyperstrotia" kingdom="Animalia" order="Lepidoptera" pageId="8" pageNumber="67" phylum="Arthropoda" rank="species" species="albida">
<emphasis box="[904,1127,464,488]" italics="true" pageId="8" pageNumber="67">Hyperstrotia albida</emphasis>
<bibRefCitation author="Hampson" box="[1138,1318,463,488]" pageId="8" pageNumber="67" refString="Hampson G. F. (1910) Catalogue of the Lepidoptera Phalaenae in the British Museum. Vol. 10, i - xix, 1 - 829. London, Taylor and Francis." type="journal article" year="1910">
Hampson, 
<number box="[1262,1318,463,487]" pageId="8" pageNumber="67" value="1910.0">1910</number>
</bibRefCitation>
</taxonomicName>
[
<collectingCountry box="[1334,1387,463,487]" name="Iraq" pageId="8" pageNumber="67">Irak</collectingCountry>
]; 
