<taxonomicName id="991C7515B4BA11E749FFD8701D8972C0" class="Magnoliopsida" family="Leguminosae" genus="Caesalpinia" higherTaxonomySource="CoL" kingdom="Plantae" lsidName="Caesalpinia brasiliensis" order="Fabales" pageId="27" pageNumber="28" phylum="Tracheophyta" rank="species" species="brasiliensis">
