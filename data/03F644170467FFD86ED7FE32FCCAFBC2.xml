<taxonomicName id="4C5F8E820467FFD86F5EFE32FE15FE05" authorityName="Brethes" authorityYear="1915" box="[286,438,441,468]" class="Insecta" family="Phlaeothripidae" genus="Austrothrips" higherTaxonomySource="GBIF,CoL" kingdom="Animalia" order="Thysanoptera" pageId="1" pageNumber="588" phylum="Arthropoda" rank="genus">
