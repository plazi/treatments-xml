<emphasis id="B8E5E12DFF98AE3EFF6286E6E178FBB7" italics="true" pageId="49" pageNumber="50">
<taxonomicName id="4D9146BCFF98AE3EFF6286E6E1A6FC6E" box="[225,449,979,1005]" class="Gastropoda" family="Archaeogastropoda (awaiting allocation)" genus="Anceps" higherTaxonomySource="GBIF" kingdom="Animalia" order="Archaeogastropoda" pageId="49" pageNumber="50" phylum="Mollusca" rank="subSpecies" species="uninominal" subSpecies="name">A uninominal name</taxonomicName>
