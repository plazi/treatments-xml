<taxonomicName id="A50F8D11E0A1B45D3A4B8FBE80BBD57F" class="Magnoliopsida" family="Betulaceae" genus="Alnus" higherTaxonomySource="CoL" kingdom="Plantae" lsidName="Alnus rubra" order="Fagales" pageId="0" pageNumber="69" phylum="Tracheophyta" rank="species" species="rubra">
<emphasis id="9EFFE7A24658B12FBE9505A4A0578E8D" italics="true" pageId="0" pageNumber="69">Alnus rubra</emphasis>
