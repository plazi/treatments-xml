<taxonomicName id="598EE01731BE93D28A57E95F3858034B" class="Polychaeta" family="Flabelligeridae" genus="Brada" higherTaxonomySource="CoL" kingdom="Animalia" lsidName="Brada villosa" order="Terebellida" pageId="0" pageNumber="20997" phylum="Annelida" rank="species" species="villosa">Brada villosa</taxonomicName>
