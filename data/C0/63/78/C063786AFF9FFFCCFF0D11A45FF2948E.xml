<paragraph blockId="49.[151,360,151,177]" box="[151,360,151,177]" pageId="49" pageNumber="50">
<heading bold="true" box="[151,360,151,177]" fontSize="11" level="1" pageId="49" pageNumber="50" reason="1">
<emphasis bold="true" box="[151,360,151,177]" pageId="49" pageNumber="50">
<taxonomicName box="[151,241,151,177]" class="Insecta" family="Hydraenidae" genus="Hydraena" kingdom="Animalia" order="Coleoptera" pageId="49" pageNumber="142" phylum="Arthropoda" rank="species" species="delvasi">
