<subSubSection box="[199,920,404,428]" pageId="65" pageNumber="66" type="etymology">
<paragraph blockId="65.[151,1436,151,536]" box="[199,920,404,428]" pageId="65" pageNumber="66">
<emphasis bold="true" box="[199,334,404,428]" pageId="65" pageNumber="66">Etymology.</emphasis>
