<subSubSection pageId="14" pageNumber="51" type="materials_examined">
<paragraph blockId="14.[151,1437,541,1487]" box="[151,453,541,567]" pageId="14" pageNumber="51">
<emphasis box="[151,373,541,566]" italics="true" pageId="14" pageNumber="51">Material examined</emphasis>
