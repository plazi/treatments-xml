<collectionCode LSID="urn:lsid:biocol.org:col:34871" box="[814,893,1852,1875]" httpUri="http://biocol.org/urn:lsid:biocol.org:col:34871" name="Smithsonian Institution, National Museum of Natural History" pageId="27" pageNumber="64">USNM</collectionCode>
<number box="[899,966,1852,1875]" pageId="27" pageNumber="64" value="92606.0">92606</number>
