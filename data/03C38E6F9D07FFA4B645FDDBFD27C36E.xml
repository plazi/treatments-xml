<taxonomicName id="4C6A44FA9D05FFA4B5AFFCFDFCF4C507" baseAuthorityName="Horn" baseAuthorityYear="1878" box="[682,787,831,850]" class="Insecta" family="Nitidulidae" genus="Orthopeplus" kingdom="Animalia" order="Coleoptera" pageId="7" pageNumber="268" phylum="Arthropoda" rank="genus">
