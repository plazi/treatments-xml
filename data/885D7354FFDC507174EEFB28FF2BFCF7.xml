<taxonomicName id="C7F4B9C1FFDC50777556FA6DFC1CFA41" authority="Oliv." box="[796,1018,1412,1435]" class="Magnoliopsida" family="Thymelaeaceae" genus="Octolepis" kingdom="Plantae" order="Malvales" pageId="2" pageNumber="91" phylum="Tracheophyta" rank="species" species="casearia">
