<taxonomicName id="32B5D0200CF600E61A0AE66354B6EAD4" class="Dicotyledoneae" family="Rosaceae" genus="L." higherTaxonomySource="GBIF" kingdom="Plantae" lsidName="L. adscendens" order="Rosales" pageId="0" pageNumber="93" phylum="Angiospermae" rank="species" species="adscendens">
