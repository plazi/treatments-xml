specimen of 
<taxonomicName id="4C104D2BFFBD9A60FDD6F9AC7F55F982" authorityName="Merr. A. Habit" authorityYear="1925" box="[554,781,1565,1591]" class="Magnoliopsida" family="Begoniaceae" genus="Begonia" kingdom="Plantae" order="Cucurbitales" pageId="5" pageNumber="168" phylum="Tracheophyta" rank="species" species="parvilimba">
