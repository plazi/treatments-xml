) and Western 
<collectingCountry id="F3541CC8154DE81301EB8D44B67EFDA4" box="[249,316,534,560]" name="China" pageId="7" pageNumber="383">China</collectingCountry>
(
<collectingRegion id="498792BA154DE81300598D44B6CBFDA5" box="[331,393,534,561]" country="China" name="Xizang" pageId="7" pageNumber="383">Tibet</collectingRegion>
