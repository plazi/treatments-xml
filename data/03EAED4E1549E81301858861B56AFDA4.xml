<collectingCountry id="F3541CC8154DE81302BD8EA0B4B0FD98" box="[943,1010,498,524]" name="Nepal" pageId="7" pageNumber="383">Nepal</collectingCountry>
(
<bibRefCitation id="EFD221A9154DE81302ED8EA0B3DAFD98" author="Kishida, Y." box="[1023,1176,498,524]" pageId="7" pageNumber="383" pagination="36 - 40" refId="ref3934" refString="Kishida, Y. (1993) Arctiidae: Lithosiinae. In: Haruta, T. (Ed.), Moths of Nepal. 2. Tinea, 13 (Supplement 3), 36 - 40." type="journal article" year="1993">Kishida 1993</bibRefCitation>
, as 
<emphasis id="B937804A154DE81305AD8EA0B227FD98" box="[1215,1381,498,524]" italics="true" pageId="7" pageNumber="383">
<taxonomicName id="4C4327DB154DE81305AD8EA0B25DFD98" baseAuthorityName="Rothschild" baseAuthorityYear="1912" box="[1215,1311,498,524]" class="Insecta" family="Erebidae" genus="Cyana" higherTaxonomySource="GBIF" kingdom="Animalia" order="Lepidoptera" pageId="7" pageNumber="383" phylum="Arthropoda" rank="species" species="distincta">distincta</taxonomicName>
babui
