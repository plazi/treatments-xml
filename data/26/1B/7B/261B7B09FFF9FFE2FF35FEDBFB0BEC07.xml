<taxonomicName authorityName="Rozkosny" authorityYear="1991" box="[284,489,1724,1745]" class="Insecta" family="Sciomyzidae" genus="Pherbellia" higherTaxonomySource="GBIF" kingdom="Animalia" order="Diptera" pageId="3" pageNumber="590" phylum="Arthropoda" rank="species" species="shatalkini">
