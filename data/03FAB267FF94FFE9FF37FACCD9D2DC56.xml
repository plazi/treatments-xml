<materialsCitation id="3B3B092CFF94FFE9FF13FA3CDBE6D900" ID-GBIF-Occurrence="3395013302" collectionCode="OTHER" county="Antisana" elevation="4800" location="Cerro Antisana" municipality="Ten" pageId="34" pageNumber="35" specimenCode="AMNH 66659- 66668" specimenCount="3">
