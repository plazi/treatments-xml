<subSubSection id="D89316B7A72CFFAABAF1FACFFE669BE4" pageId="13" pageNumber="14" type="diagnosis">
<paragraph id="9036453CA72CFFAABAF1FACFFE669BE4" blockId="13.[151,1436,474,1507]" pageId="13" pageNumber="14">
<emphasis id="A2FD992EA72CFFAABAF1FACFFEE69B2D" bold="true" box="[201,323,1374,1399]" inLineHeading="true" pageId="13" pageNumber="14" reason="1">Diagnosis.</emphasis>
