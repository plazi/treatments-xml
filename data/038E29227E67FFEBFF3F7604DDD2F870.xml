<taxonomicName id="4C27E3B77E67FFEBFE8176B1DC03FA48" authority="Plotz, 1879" authorityName="Plotz" authorityYear="1879" box="[382,797,1435,1459]" class="Insecta" family="Hesperiidae" genus="Apaustus" kingdom="Animalia" order="Lepidoptera" pageId="21" pageNumber="20" phylum="Arthropoda" rank="species" species="argyrosticta">
