<quantity box="[374,483,813,836]" metricMagnitude="-3" metricUnit="m" metricValue="1.25" metricValueMax="1.5" metricValueMin="1.0" pageId="1" pageNumber="36" unit="mm" value="1.25" valueMax="1.5" valueMin="1.0">1–1.5 mm</quantity>
