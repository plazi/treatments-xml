<quantity box="[844,931,653,676]" metricMagnitude="-3" metricUnit="m" metricValue="4.0" metricValueMax="5.0" metricValueMin="3.0" pageId="1" pageNumber="36" unit="mm" value="4.0" valueMax="5.0" valueMin="3.0">3–5 mm</quantity>
in diam.), humilioribus (
<quantity box="[1204,1311,653,676]" metricMagnitude="-1" metricUnit="m" metricValue="5.0" metricValueMax="6.0" metricValueMin="4.0" pageId="1" pageNumber="36" unit="cm" value="50.0" valueMax="60.0" valueMin="40.0">40–60 cm</quantity>
