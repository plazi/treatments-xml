<quantity box="[1290,1372,813,836]" metricMagnitude="-4" metricUnit="m" metricValue="5.0" pageId="1" pageNumber="36" unit="mm" value="0.5">0.5 mm</quantity>
latis, foliorum caulinorum inferiorum linearibus vel linearifiliformibus, 
<quantity box="[909,994,845,868]" metricMagnitude="-3" metricUnit="m" metricValue="5.0" metricValueMax="6.0" metricValueMin="4.0" pageId="1" pageNumber="36" unit="mm" value="5.0" valueMax="6.0" valueMin="4.0">4–6 mm</quantity>
