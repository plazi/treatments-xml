<subSubSection pageId="1" pageNumber="32" type="reference_group">
<paragraph pageId="1" pageNumber="32">
<taxonomicName class="Insecta" family="Cicadidae" genus="Semia" higherTaxonomySource="CoL" kingdom="Animalia" lsidName="Semia" order="Hemiptera" pageId="1" pageNumber="32" phylum="Arthropoda" rank="genus">Semia</taxonomicName>
