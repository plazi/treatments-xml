<taxonomicName class="Insecta" family="Cicadidae" genus="Leptopsaltria" higherTaxonomySource="CoL" kingdom="Animalia" lsidName="Leptopsaltria watanabei" order="Hemiptera" pageId="1" pageNumber="32" phylum="Arthropoda" rank="species" species="watanabei">Leptopsaltria watanabei</taxonomicName>
