<taxonomicName id="4C2F75B07F081E373DDCFE40B4501C88" authority="LeConte" authorityName="LeConte" class="Insecta" family="Cerambycidae" genus="Pilostenaspis" higherTaxonomySource="GBIF,CoL" kingdom="Animalia" order="Coleoptera" pageId="49" pageNumber="400" phylum="Arthropoda" rank="species" species="lateralis" status="comb. nov.">
<emphasis id="B95BD2217F081E373DDCFE40B5D21C88" italics="true" pageId="49" pageNumber="400">P. lateralis</emphasis>
(LeConte)
</taxonomicName>
<taxonomicNameLabel id="A2686F5A7F081E3739DBFE1DB72A1C88" box="[387,524,448,473]" pageId="49" pageNumber="400">
<emphasis id="B95BD2217F081E3739DBFE1DB72A1C88" bold="true" box="[387,524,448,473]" pageId="49" pageNumber="400">comb. nov.</emphasis>
</taxonomicNameLabel>
