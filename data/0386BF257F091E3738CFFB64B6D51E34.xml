<taxonomicName id="4C2F75B07F081E373C7CFE41B0251CE5" box="[1060,1283,412,437]" class="Insecta" family="Cerambycidae" genus="Pilostenaspis" higherTaxonomySource="GBIF,CoL" kingdom="Animalia" order="Coleoptera" pageId="49" pageNumber="400" phylum="Arthropoda" rank="species" species="copei" status="sp. nov.">
