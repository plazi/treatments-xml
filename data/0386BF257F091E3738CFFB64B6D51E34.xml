<taxonomicName id="4C2F75B07F081E373B56FE39B69A1CAC" box="[782,956,484,509]" class="Insecta" family="Cerambycidae" genus="Callistochroma" higherTaxonomySource="GBIF,CoL" kingdom="Animalia" order="Coleoptera" pageId="49" pageNumber="400" phylum="Arthropoda" rank="genus" status="gen. nov.">
