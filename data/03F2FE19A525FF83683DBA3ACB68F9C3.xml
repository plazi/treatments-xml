<taxonomicName id="4C5B348CA524FF836AE0BCB2CBAFFD55" authorityName="Mengual" authorityYear="2012" box="[414,509,743,764]" class="Insecta" family="Syrphidae" genus="Syrphus" kingdom="Animalia" order="Diptera" pageId="49" pageNumber="148" phylum="Arthropoda" rank="genus">
