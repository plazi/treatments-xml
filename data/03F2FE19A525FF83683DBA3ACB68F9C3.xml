<emphasis id="B92F931DA524FF836952BCB2C8FAFD55" box="[556,680,743,764]" italics="true" pageId="49" pageNumber="148">
/ 
<taxonomicName id="4C5B348CA524FF836944BCB2C8FAFD55" baseAuthorityName="de Meijere" baseAuthorityYear="1908" box="[570,680,743,764]" class="Insecta" family="Syrphidae" genus="Citrogramma" kingdom="Animalia" order="Diptera" pageId="49" pageNumber="148" phylum="Arthropoda" rank="species" species="luteifrons">luteifrons</taxonomicName>
</emphasis>
