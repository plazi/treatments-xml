<taxonomicName id="EEE44D1AFFE3FFE2810EF9ACFA1A82BE" authority="" box="[548,779,1646,1667]" class="Insecta" family="Apidae" genus="Mesoplia" kingdom="Animalia" order="Hymenoptera" pageId="7" phylum="Arthropoda" rank="subGenus" subGenus="Eumelissa">
