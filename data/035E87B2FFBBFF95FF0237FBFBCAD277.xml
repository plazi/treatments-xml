<taxonomicName id="4CF74D27FFBBFF95FF7B37FBFD9FD3E6" authority="Walker, 1848" authorityName="Walker" authorityYear="1848" box="[238,548,650,677]" class="Insecta" family="Hesperinidae" genus="Hesperinus" kingdom="Animalia" order="Diptera" pageId="11" pageNumber="12" phylum="Arthropoda" rank="genus">
<emphasis id="B983EAB6FFBBFF95FF7B37FBFEC2D3E6" bold="true" box="[238,377,650,676]" italics="true" pageId="11" pageNumber="12">Hesperinus</emphasis>
<bibRefCitation id="EF664B55FFBBFF95FE1537FAFD9FD3E6" author="Walker, F." box="[384,548,650,677]" pageId="11" pageNumber="12" pagination="81 - 123" refId="ref51727" refString="Walker, F. (1848) List of the specimens of Dipterous Insects in the collection of the British Museum. British Museum, London, pp. 81 - 123. https: // doi. org / 10.5962 / bhl. title. 57902" type="book chapter" year="1848">Walker, 1848</bibRefCitation>
