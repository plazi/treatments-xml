<number id="3DDE249A1B2CFFCE98789D4E343EFEF5" box="[555,593,260,284]" pageId="7" pageNumber="175" value="7.8">7.8</number>
; head length, 
<number id="3DDE249A1B2CFFCE99539D4E3549FEF5" box="[768,806,260,284]" pageId="7" pageNumber="175" value="2.1">2.1</number>
; head width, 
<number id="3DDE249A1B2CFFCE999D9D4E359BFEF5" box="[974,1012,260,284]" pageId="7" pageNumber="175" value="1.4">1.4</number>
