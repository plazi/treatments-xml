and 
<taxonomicName id="4C05A3B4C32A377AFB284602FA987454" authorityName="Villari" authorityYear="2017" box="[1210,1333,1032,1058]" class="Gastropoda" family="Rissoidae" genus="Alvania" kingdom="Animalia" order="Littorinimorpha" pageId="25" pageNumber="440" phylum="Mollusca" rank="species" species="scuderii">
<emphasis id="B9710425C32A377AFB284602FA987454" box="[1210,1333,1032,1058]" italics="true" pageId="25" pageNumber="440">A. scuderii</emphasis>
