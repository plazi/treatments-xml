<taxonomicName id="4C05A3B4C32A377AFD0A4602FCA97454" baseAuthorityName="Philippi" baseAuthorityYear="1844" box="[664,772,1032,1058]" class="Gastropoda" family="Rissoidae" genus="Alvania" kingdom="Animalia" order="Littorinimorpha" pageId="25" pageNumber="440" phylum="Mollusca" rank="species" species="scabra">
