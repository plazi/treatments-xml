<taxonomicName id="4C05A3B4C32A377AFBAA41EEFB6E7388" baseAuthorityName="Granata-Grillo" baseAuthorityYear="1877" box="[1080,1219,996,1022]" class="Gastropoda" family="Rissoidae" genus="Alvania" kingdom="Animalia" order="Littorinimorpha" pageId="25" pageNumber="440" phylum="Mollusca" rank="species" species="sororcula">A. sororcula</taxonomicName>
