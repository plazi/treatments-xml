, as 
<taxonomicName id="4C05A3B4C32A377AFB1941CAFA9473AC" baseAuthorityName="Philippi" baseAuthorityYear="1844" box="[1163,1337,960,986]" class="Gastropoda" family="Rissoidae" genus="Alvania" kingdom="Animalia" order="Littorinimorpha" pageId="25" pageNumber="440" phylum="Mollusca" rank="species" species="scabra">
