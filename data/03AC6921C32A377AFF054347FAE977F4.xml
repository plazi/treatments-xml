and 
<taxonomicName id="4C05A3B4C32A377AFB6B41EEFADE7388" authorityName="Villari" authorityYear="2017" box="[1273,1395,996,1022]" class="Gastropoda" family="Rissoidae" genus="Alvania" kingdom="Animalia" order="Littorinimorpha" pageId="25" pageNumber="440" phylum="Mollusca" rank="species" species="scuderii">
<emphasis id="B9710425C32A377AFB6B41EEFADE7388" box="[1273,1395,996,1022]" italics="true" pageId="25" pageNumber="440">A. scuderii</emphasis>
