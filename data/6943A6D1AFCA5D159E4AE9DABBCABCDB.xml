<taxonomicName id="A03D7E5D8EA78117EB0F9780C6CE3AAF" class="Magnoliopsida" family="Gesneriaceae" genus="Cyrtandra" higherTaxonomySource="CoL" kingdom="Plantae" lsidName="Cyrtandra" order="Lamiales" pageId="10" pageNumber="95" phylum="Tracheophyta" rank="genus">
<emphasis id="5784EACD901B8510A58C193C77674779" italics="true" pageId="10" pageNumber="95">Cyrtandra</emphasis>
</taxonomicName>
