<taxonomicName id="A6756867ED838C3F31409563411B58A4" genus="C." lsidName="C. waisaliensis" pageId="10" pageNumber="95" rank="species" species="waisaliensis">
<emphasis id="083565A88649B36F003ED276EE77B3B8" italics="true" pageId="10" pageNumber="95">C. waisaliensis</emphasis>
</taxonomicName>
, and 
<taxonomicName id="3BA970B1BD24AFF9E8611413DEF1B613" genus="C." lsidName="C. cephalophora" pageId="10" pageNumber="95" rank="species" species="cephalophora">
<emphasis id="3815454581E2CF3CE5C372756FC2E007" italics="true" pageId="10" pageNumber="95">C. cephalophora</emphasis>
</taxonomicName>
