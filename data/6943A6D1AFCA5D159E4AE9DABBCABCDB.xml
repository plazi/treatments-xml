<taxonomicName id="335B257F4FF8E4A4ADF02C719CC4B985" genus="C." lsidName="C. dolichocarpa" pageId="10" pageNumber="95" rank="species" species="dolichocarpa">
<emphasis id="195B4B0F3CADACD3C6C2F9801B527052" italics="true" pageId="10" pageNumber="95">C. dolichocarpa</emphasis>
</taxonomicName>
