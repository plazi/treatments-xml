<taxonomicName authorityName="Han &amp; Kononenko" authorityYear="2021" box="[807,866,186,212]" class="Insecta" family="Erebidae" genus="Bellulia" higherTaxonomySource="GBIF" kingdom="Animalia" order="Lepidoptera" pageId="5" pageNumber="122" phylum="Arthropoda" rank="species" species="clara">
