<taxonomicName authority="Loew" class="Insecta" family="Bombyliidae" genus="Hemipenthes" higherTaxonomySource="CoL" kingdom="Animalia" lsidName="Hemipenthes" order="Diptera" pageId="14" pageNumber="63" phylum="Arthropoda" rank="genus">Hemipenthes Loew</taxonomicName>
