<taxonomicName id="8DD24D5AFFBDFFC2A479803357F3F8B7" box="[317,468,1816,1839]" class="Lecanoromycetes" family="Lobariaceae" genus="Sticta" kingdom="Fungi" order="Peltigerales" pageId="20" pageNumber="21" phylum="Ascomycota" rank="species" species="dilatata">
