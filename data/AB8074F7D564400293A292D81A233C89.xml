<subSubSection id="39AAEED8A0CDB06BCB04E18BB714F971" pageId="91" pageNumber="92" type="reference_group">
<paragraph id="F767CDBCEFAB0EFF571A197C7BD05F34" pageId="91" pageNumber="92">
<taxonomicName id="824EE842BB80E0CF9F6D765D806001C4" authority="Kriebel, 2016" authorityName="Proctor" authorityYear="1967" class="Magnoliopsida" family="Melastomataceae" genus="Conostegia" higherTaxonomySource="GBIF" kingdom="Plantae" lsidName="Conostegia pyxidata" order="Myrtales" pageId="91" pageNumber="92" phylum="Tracheophyta" rank="species" species="pyxidata">Conostegia pyxidata</taxonomicName>
