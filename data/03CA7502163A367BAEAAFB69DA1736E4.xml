<typeStatus id="54D87AB6163A3678AE09FA09DD5636C4" box="[794,851,1466,1491]" pageId="1" pageNumber="2">Type</typeStatus>
species:
</emphasis>
<taxonomicName id="4C63BF97163A3678AEACFA09DB8336C4" authority="Wittmer, 1952" authorityName="Wittmer" authorityYear="1952" box="[959,1414,1466,1491]" class="Insecta" family="Cantharidae" genus="Silis" higherTaxonomySource="GBIF" kingdom="Animalia" order="Coleoptera" pageId="1" pageNumber="2" phylum="Arthropoda" rank="species" species="scutulata" subGenus="Peltariosilis">
