<taxonomicName LSID-HNS="urn:lsid:biosci.ohio-state.edu:osuc_concepts:228862" class="Insecta" family="Formicidae" genus="Pheidole" higherTaxonomySource="CoL" kingdom="Animalia" lsidName="Pheidole subporcula" lsidName-HNS="Pheidole subporcula Wilson" order="Hymenoptera" pageNumber="152" phylum="Arthropoda" rank="species" species="subporcula">subporcula</taxonomicName>
