<subSubSection lastPageId="4" lastPageNumber="547" pageId="3" pageNumber="546" type="description">
<paragraph blockId="3.[151,1436,1938,2035]" lastBlockId="4.[151,1437,151,1005]" lastPageId="4" lastPageNumber="547" pageId="3" pageNumber="546">
<emphasis bold="true" box="[199,345,1938,1963]" pageId="3" pageNumber="546">Description.</emphasis>
Body length, 
<quantity box="[510,616,1938,1963]" metricMagnitude="-3" metricUnit="m" metricValue="1.25" pageId="3" pageNumber="546" unit="mm" value="1.25">1.25 mm</quantity>
