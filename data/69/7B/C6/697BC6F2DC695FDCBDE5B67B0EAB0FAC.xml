<paragraph pageId="0" pageNumber="47">
<taxonomicName authorityName="Hai X. Ma &amp; X. Y. Pan" authorityYear="2022" class="Ascomycetes" family="Xylariaceae" genus="Xylaria" kingdom="Fungi" lsidName="Xylaria polysporicola" order="Xylariales" pageId="0" pageNumber="47" phylum="Basidiomycota" rank="species" species="polysporicola">
