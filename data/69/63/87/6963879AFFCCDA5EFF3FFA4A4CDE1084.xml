, 
<collectingCountry box="[248,333,351,376]" name="Croatia" pageId="3">Croatia</collectingCountry>
, 
<collectingCountry box="[349,535,351,376]" name="Czech Republic" pageId="3">Czech Republic</collectingCountry>
, 
<collectingCountry box="[551,630,352,375]" name="France" pageId="3">France</collectingCountry>
, 
<collectingCountry box="[647,752,352,376]" name="Germany" pageId="3">Germany</collectingCountry>
, 
<collectingCountry box="[768,914,351,376]" name="Bosnia and Herzegovina" pageId="3">Herzegovina</collectingCountry>
, 
