<taxonomicName authority="David 1958" authorityName="David" authorityYear="1958" box="[718,1140,505,532]" class="Insecta" family="Aphididae" genus="Sitobion" kingdom="Animalia" order="Aphidomorpha" pageId="20" pageNumber="21" phylum="Arthropoda" rank="species" species="leelamaniae">
<emphasis bold="true" box="[718,973,506,532]" italics="true" pageId="20" pageNumber="21">Sitobion leelamaniae</emphasis>
(David 
<number box="[1072,1132,505,531]" pageId="20" pageNumber="21" value="1958.0">1958</number>
)
</taxonomicName>
</emphasis>
<emphasis bold="true" box="[264,1137,549,575]" pageId="20" pageNumber="21">
<taxonomicName authority="Eastop 1959" authorityName="Eastop" authorityYear="1959" box="[264,684,549,575]" class="Insecta" family="Aphididae" genus="Sitobion" kingdom="Animalia" order="Aphidomorpha" pageId="20" pageNumber="21" phylum="Arthropoda" rank="species" species="howlandae">
