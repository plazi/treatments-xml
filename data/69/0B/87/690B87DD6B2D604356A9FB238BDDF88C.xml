Ex 
<taxonomicName authority="(Vieillot, 1805)" authorityName="Vieillot" authorityYear="1805" baseAuthorityName="Vieillot" baseAuthorityYear="1805" box="[443,865,1335,1360]" class="Aves" family="Fringillidae" genus="Spinus" higherTaxonomySource="CoL" kingdom="Animalia" order="Passeriformes" pageId="13" pageNumber="174" phylum="Chordata" rank="species" species="magellanicus">
