, 
<taxonomicName authorityName="Bentham" authorityYear="1846" box="[742,864,1024,1045]" class="Magnoliopsida" family="Scrophulariaceae" genus="Verbascum" kingdom="Plantae" order="Lamiales" pageId="3" pageNumber="38" phylum="Tracheophyta" rank="species" species="erianthum">V. erianthum</taxonomicName>
</emphasis>
, 
