, 
<taxonomicName LSID-HNS="urn:lsid:biosci.ohio-state.edu:osuc_concepts:181877" class="Insecta" family="Formicidae" genus="Pheidole" higherTaxonomySource="CoL" kingdom="Animalia" lsidName="Pheidole gilva Wilson" lsidName-HNS="Pheidole gilva Wilson" order="Hymenoptera" pageNumber="534" phylum="Arthropoda" rank="species" species="gilva">gilva</taxonomicName>
, 
<taxonomicName LSID-HNS="urn:lsid:biosci.ohio-state.edu:osuc_concepts:182066" class="Insecta" family="Formicidae" genus="Pheidole" higherTaxonomySource="CoL" kingdom="Animalia" lsidName="Pheidole polita Emery" lsidName-HNS="Pheidole polita Emery" order="Hymenoptera" pageNumber="534" phylum="Arthropoda" rank="species" species="polita">polita</taxonomicName>
