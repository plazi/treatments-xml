<taxonomicName authorityName="Intermediate" baseAuthorityName="Baranov" baseAuthorityYear="1932" box="[688,844,485,509]" class="Insecta" family="Tachinidae" genus="Exorista" kingdom="Animalia" order="Diptera" pageId="25" pageNumber="1189" phylum="Arthropoda" rank="species" species="hyalipennis">
