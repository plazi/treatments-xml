<taxonomicName authority="(Walker)" baseAuthorityName="Walker" baseAuthorityYear="1849" box="[804,1003,1361,1385]" class="Insecta" family="Tachinidae" genus="Exorista" kingdom="Animalia" order="Diptera" pageId="16" pageNumber="1180" phylum="Arthropoda" rank="species" species="coras">
