<paragraph blockId="19.[213,1169,619,675]" pageId="19" pageNumber="1183">
<taxonomicName authority="(Olivier)" baseAuthorityName="Olivier" box="[213,561,619,643]" class="Insecta" family="Hymenopodidae" genus="Hymenopus" kingdom="Animalia" order="Mantodea" pageId="19" pageNumber="1183" phylum="Arthropoda" rank="species" species="coronatus">
