<taxonomicName class="Arachnida" family="Theraphosidae" genus="Bumba" higherTaxonomySource="CoL" kingdom="Animalia" lsidName="Bumba" order="Araneae" pageId="2" pageNumber="3" phylum="Arthropoda" rank="genus">
