<heading bold="true" box="[151,472,1821,1847]" fontSize="11" level="1" pageId="30" pageNumber="281" reason="1">
<emphasis bold="true" box="[151,472,1821,1847]" pageId="30" pageNumber="281">
<taxonomicName authorityName="Guerin-Meneville" authorityYear="1845" box="[151,296,1821,1847]" class="Insecta" family="Megachilidae" genus="Megachile" higherTaxonomySource="GBIF" kingdom="Animalia" order="Hymenoptera" pageId="30" pageNumber="281" phylum="Arthropoda" rank="species" species="cyanipennis">
<emphasis bold="true" box="[151,296,1821,1847]" italics="true" pageId="30" pageNumber="281">cyanipennis</emphasis>
