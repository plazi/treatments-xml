<taxonomicName id="F6DC641B770B88D865E7625DB1A3BB94" class="Liliopsida" family="Bromeliaceae" genus="Quesnelia" higherTaxonomySource="CoL" kingdom="Plantae" lsidName="Quesnelia arvensis" order="Poales" pageId="3" pageNumber="30" phylum="Tracheophyta" rank="species" species="arvensis">Quesnelia arvensis</taxonomicName>
