<taxonomicName id="2DA344E1ED9564857065AA9992EA3201" authority="" authorityName="" class="Pilidiophora" family="Bromeliaceae" genus="Acari" higherTaxonomySource="GBIF" kingdom="Animalia" lsidName="Acari" order="Heteronemertea" pageId="3" pageNumber="30" phylum="Nemertea" rank="family">Bromeliaceae</taxonomicName>
