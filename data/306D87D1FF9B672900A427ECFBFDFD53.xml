<taxonomicName id="7FC44D44FF85672A011F22B7FCA7F812" authority="(Foldi &amp; Kozar)" baseAuthorityName="Foldi &amp; Kozar" box="[300,778,1932,1955]" class="Insecta" family="Eriococcidae" genus="Hempelicoccus" higherTaxonomySource="GBIF" kingdom="Animalia" order="Hemiptera" pageId="49" pageNumber="50" phylum="Arthropoda" rank="species" species="paranaensis">
