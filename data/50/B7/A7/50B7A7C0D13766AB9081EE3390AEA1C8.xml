<paragraph pageId="30" pageNumber="31">
<taxonomicName authorityName="Shi &amp; Liang" authorityYear="2013" class="Insecta" family="Carabidae" genus="Metallanchista" higherTaxonomySource="GBIF,CoL" kingdom="Animalia" lsidName="" order="Coleoptera" pageId="30" pageNumber="31" phylum="Arthropoda" rank="species" species="laticollis">
