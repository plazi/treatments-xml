<taxonomicName id="492B19818F9F29B5B93B06AC0AC5C789" authority="Kriebel, 2016" authorityName="Kriebel" authorityYear="2016" baseAuthorityName="Kriebel" baseAuthorityYear="2016" class="Magnoliopsida" family="Melastomataceae" genus="Conostegia" higherTaxonomySource="GBIF" kingdom="Plantae" lsidName="Conostegia iteophylla" order="Myrtales" pageId="191" pageNumber="192" phylum="Tracheophyta" rank="species" species="iteophylla" status="comb. nov.">Conostegia iteophylla</taxonomicName>
