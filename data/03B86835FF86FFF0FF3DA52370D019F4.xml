<taxonomicName id="4C11A2A0FF86FFF1FE87A5E973FC1AF2" authority="Staudinger, 1880" authorityName="Staudinger" authorityYear="1880" box="[301,663,687,710]" genus="Butalis" kingdom="Animalia" pageId="2" pageNumber="3" rank="species" species="satyrella">
