<subSubSection id="C30B8AA8FF86FFF1FF3DA5E973FC1AF2" box="[151,663,687,710]" pageId="2" pageNumber="3" type="materials_examined">
<paragraph id="8BAED923FF86FFF1FF3DA5E973FC1AF2" blockId="2.[151,1438,687,2021]" box="[151,663,687,710]" pageId="2" pageNumber="3">
<typeStatus id="54AA6781FF86FFF1FF3DA5E971A71AF2" box="[151,204,687,710]" pageId="2" pageNumber="3">Type</typeStatus>
