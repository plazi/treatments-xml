<geoCoordinate id="ED61490AFEE7AB38F72DD81266608853" degrees="09" direction="south" minutes="47" orientation="latitude" precision="15" seconds="29" value="-9.791389">09°47'29&quot;S</geoCoordinate>
, 
<geoCoordinate id="C02D28C2836402F8AAF01E77295108FF" degrees="139" direction="west" minutes="05" orientation="longitude" precision="15" seconds="41" value="-139.09471">139°05'41&quot;W</geoCoordinate>
