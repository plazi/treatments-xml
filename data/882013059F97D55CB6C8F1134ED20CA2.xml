wet forest, 
<geoCoordinate id="06CCDA28D9F8CE4676F1FB03C08F9813" degrees="09" direction="south" minutes="47" orientation="latitude" precision="15" seconds="50" value="-9.797223">09°47'50&quot;S</geoCoordinate>
, 
<geoCoordinate id="FCE5CE4C6D6CAC99B373A4BE0B29E1F5" degrees="139" direction="west" minutes="05" orientation="longitude" precision="15" seconds="35" value="-139.09305">139°05'35&quot;W</geoCoordinate>
