<taxonomicName id="8F944D100455FFB3FF54FDE1FC9CFDC7" authority="Lafargue and Laubier, 1978" authorityName="Lafargue and Laubier" authorityYear="1978" box="[238,774,575,601]" class="Maxillopoda" family="Notodelphyidae" genus="Anoplodelphys" higherTaxonomySource="GBIF" kingdom="Animalia" order="Cyclopoida" pageId="3" pageNumber="40" phylum="Arthropoda" rank="genus">
<emphasis id="7AE0EA810455FFB3FF54FDE1FE3BFDC7" bold="true" box="[238,417,575,601]" italics="true" pageId="3" pageNumber="40">Anoplodelphys</emphasis>
Lafargue and Laubier, 
<number id="FE5C24B40455FFB3FD71FDE1FC9CFDC7" box="[715,774,575,601]" pageId="3" pageNumber="40" value="1978.0">1978</number>
</taxonomicName>
