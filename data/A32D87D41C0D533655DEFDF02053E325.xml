. 
<materialsCitation id="9BEC3C9F1C0D533754C5FC83203EE3B8" ID-GBIF-Occurrence="3026660391" collectingDate="1923-11" location="Java" pageId="70" pageNumber="71" specimenCount="49" specimenCount-female="32" specimenCount-male="16" specimenCount-pupa="1" stateProvince="Jawa Timur" typeStatus="syntype">
