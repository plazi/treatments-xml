<taxonomicName id="4C264D5FFF8AE16F7DD2FAA411C4FAF1" box="[386,698,1336,1357]" class="Lecanoromycetes" family="Pertusariaceae" genus="Pertusaria" kingdom="Fungi" order="Pertusariales" pageId="3" pageNumber="168" phylum="Ascomycota" rank="variety" species="jurana" variety="confluens">
<emphasis id="B952EACEFF8AE16F7DD2FAA41150FAF1" box="[386,558,1336,1357]" italics="true" pageId="3" pageNumber="168">Pertusaria jurana</emphasis>
