<taxonomicName id="4C03B8A0FFACFF86FF01FB2386CCFB21" authority="Gillies" authorityName="Gillies" box="[168,402,1177,1196]" class="Magnoliopsida" family="Fabaceae" genus="Lathyrus" kingdom="Plantae" order="Fabales" pageId="18" pageNumber="1021" phylum="Tracheophyta" rank="species" species="crassipes">
