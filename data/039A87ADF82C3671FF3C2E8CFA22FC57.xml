<taxonomicName id="4C334D38F82C3671FCD82CCFFC76FD11" baseAuthorityName="E. A. Smith" baseAuthorityYear="1904" box="[794,984,724,743]" class="Bivalvia" family="Pectinidae" genus="Delectopecten" kingdom="Animalia" order="Pectinida" pageId="53" pageNumber="166" phylum="Mollusca" rank="species" species="alcocki">
