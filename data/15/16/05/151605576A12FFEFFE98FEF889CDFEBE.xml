<subSubSection pageId="6" pageNumber="7" type="diagnosis">
<paragraph blockId="6.[264,1325,284,1870]" pageId="6" pageNumber="7">
<emphasis box="[312,431,444,469]" italics="true" pageId="6" pageNumber="7">Diagnosis</emphasis>
