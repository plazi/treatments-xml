<emphasis box="[447,471,872,893]" italics="true" pageId="5" pageNumber="100">pa</emphasis>
, process of aedeagal apodeme (paired); 
<emphasis box="[872,896,872,893]" italics="true" pageId="5" pageNumber="100">pg</emphasis>
, preglans; 
<emphasis box="[1007,1023,872,893]" italics="true" pageId="5" pageNumber="100">st</emphasis>
, stipe; 
<emphasis box="[1098,1111,871,892]" italics="true" pageId="5" pageNumber="100">tf</emphasis>
, terminal filament; 
<emphasis box="[1308,1327,872,893]" italics="true" pageId="5" pageNumber="100">tp</emphasis>
