<quantity box="[947,1018,584,608]" metricMagnitude="0" metricUnit="m" metricValue="1.0" metricValueMax="2.0" metricValueMin="0.0" pageId="285" pageNumber="286" unit="m" value="1.0" valueMax="2.0" valueMin="0.0">0–2 m</quantity>
