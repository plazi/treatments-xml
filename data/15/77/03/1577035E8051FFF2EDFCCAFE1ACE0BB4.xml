<quantity box="[644,743,1456,1480]" metricMagnitude="1" metricUnit="m" metricValue="9.25" metricValueMax="18.3" metricValueMin="0.2" pageId="85" pageNumber="86" unit="m" value="92.5" valueMax="183.0" valueMin="2.0">2–183 m</quantity>
