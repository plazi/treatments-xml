<taxonomicName class="Insecta" family="Acrididae" genus="Brachyphlaeobella" higherTaxonomySource="CoL" kingdom="Animalia" lsidName="Brachyphlaeobella achilles" order="Orthoptera" pageId="6" pageNumber="43" phylum="Arthropoda" rank="species" species="achilles">Brachyphlaeobella achilles</taxonomicName>
