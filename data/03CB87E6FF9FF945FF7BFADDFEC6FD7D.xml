<taxonomicName id="4C624D73FF9FF942FB33F8F8FAFEF8B8" authority="Gray" authorityName="Gray" authorityYear="1867" box="[1247,1386,1832,1858]" class="Demospongiae" family="Geodiidae" genus="Erylus" kingdom="Animalia" order="Astrophorida" pageId="3" pageNumber="4" phylum="Porifera" rank="genus">
<emphasis id="B916EAE2FF9FF942FB33F8F8FABCF8B8" box="[1247,1320,1832,1858]" italics="true" pageId="3" pageNumber="4">Erylus</emphasis>
Gray
</taxonomicName>
and 
<taxonomicName id="4C624D73FF9FF942FF7BF89DFEF6F89C" authority="Schmidt" authorityName="Schmidt" authorityYear="1862" box="[151,354,1868,1895]" class="Demospongiae" family="Geodiidae" genus="Caminus" kingdom="Animalia" order="Astrophorida" pageId="3" pageNumber="4" phylum="Porifera" rank="genus">
<emphasis id="B916EAE2FF9FF942FF7BF89DFF6FF89D" box="[151,251,1869,1895]" italics="true" pageId="3" pageNumber="4">Caminus</emphasis>
Schmidt
</taxonomicName>
