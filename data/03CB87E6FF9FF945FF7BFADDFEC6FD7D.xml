<taxonomicName id="4C624D73FF9FF942FB5EF89CFEF5F870" authority="Bowerbank in Johnson" authorityName="Bowerbank in Johnston" authorityYear="1842" class="Demospongiae" family="Geodiidae" genus="Pachymatisma" kingdom="Animalia" order="Astrophorida" pageId="3" pageNumber="4" phylum="Porifera" rank="genus">
<emphasis id="B916EAE2FF9FF942FB5EF89CFAC3F89C" box="[1202,1367,1868,1894]" italics="true" pageId="3" pageNumber="4">Pachymatisma</emphasis>
Bowerbank in Johnson
</taxonomicName>
and 
<taxonomicName id="4C624D73FF9FF942FE79F8A1FE64F870" authorityName="Gray" authorityYear="1867" box="[405,496,1905,1930]" class="Demospongiae" family="Geodiidae" genus="Penares" kingdom="Animalia" order="Astrophorida" pageId="3" pageNumber="4" phylum="Porifera" rank="genus">
<emphasis id="B916EAE2FF9FF942FE79F8A1FE64F870" box="[405,496,1905,1930]" italics="true" pageId="3" pageNumber="4">Penares</emphasis>
</taxonomicName>
in 
<taxonomicName id="4C624D73FF9FF942FDFDF8A0FDE0F870" authorityName=", Sollas" authorityYear="1888" box="[529,628,1904,1930]" class="Demospongiae" family="Geodiidae" kingdom="Animalia" order="Astrophorida" pageId="3" pageNumber="4" phylum="Porifera" rank="subFamily" subFamily="Erylinae">Erylinae</taxonomicName>
