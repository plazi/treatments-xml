<subSubSection id="E1974BE5FFD5044CE6ED8914DB9C3013" box="[199,918,799,825]" pageId="10" pageNumber="465" type="etymology">
<paragraph id="A932186EFFD5044CE6ED8914DB9C3013" blockId="10.[151,1437,151,1041]" box="[199,918,799,825]" pageId="10" pageNumber="465">
<emphasis id="9BF9C47CFFD5044CE6ED8914D9423013" bold="true" box="[199,328,799,825]" pageId="10" pageNumber="465">Etymology</emphasis>
