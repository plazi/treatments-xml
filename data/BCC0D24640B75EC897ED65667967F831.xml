<paragraph id="261D5D864B9ECAE93CBA35E057B1C44E" pageId="0" pageNumber="49">
<taxonomicName id="B3A84C46CA6F929F3878D7A6CA6971A9" class="Magnoliopsida" family="Hydrangeaceae" genus="Hydrangea" higherTaxonomySource="CoL" kingdom="Plantae" lsidName="Hydrangea macrophylla subsp. var. var. acuminata" order="Cornales" pageId="0" pageNumber="49" phylum="Tracheophyta" rank="variety" species="macrophylla" subSpecies="var." variety="acuminata">Hydrangea macrophylla (Thunb.) Ser. var. acuminata</taxonomicName>
