<paragraph id="1AB72652C3AEF933D6E26A4814789228" pageId="139" pageNumber="140">
<taxonomicName id="B2B6806D43FF8D8DB6B99DE7822D38BD" LSID="B7082187-C640-6261-F48E-EFD9EA02C92A" authority="L." authorityName="L." class="Liliopsida" family="Poaceae" genus="Arundo" higherTaxonomySource="CoL" kingdom="Plantae" lsidName="Arundo donax" order="Poales" pageId="139" pageNumber="140" phylum="Tracheophyta" rank="species" species="donax">Arundo donax L.</taxonomicName>
