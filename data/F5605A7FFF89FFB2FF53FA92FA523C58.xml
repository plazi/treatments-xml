<collectingRegion id="BF0D258BFF8FFFB1FCC6F820FCFA3AF0" box="[770,829,1981,2002]" country="Brazil" name="Goias" pageId="13" pageNumber="142">Goiás</collectingRegion>
, 
<collectingRegion id="BF0D258BFF8FFFB1FC8DF820FC443AF0" box="[841,899,1981,2002]" country="Brazil" name="Ceara" pageId="13" pageNumber="142">Ceará</collectingRegion>
, 
<collectingRegion id="BF0D258BFF8FFFB1FC4BF820FBA73AF0" box="[911,1120,1981,2002]" country="Brazil" name="Rio Grande do Norte" pageId="13" pageNumber="142">Rio Grande do Norte</collectingRegion>
, 
<collectingRegion id="BF0D258BFF8FFFB1FBAFF820FB223AF0" box="[1131,1253,1981,2002]" country="Brazil" name="Pernambuco" pageId="13" pageNumber="142">Pernambuco</collectingRegion>
, 
<collectingRegion id="BF0D258BFF8FFFB1FB34F820FA863AF0" box="[1264,1345,1981,2002]" country="Brazil" name="Alagoas" pageId="13" pageNumber="142">Alagoas</collectingRegion>
