and 
<taxonomicName family="Selaginellaceae" genus="S." infraspecific-rank="var." kingdom="Plantae" lsidName="S. monospora var. ciliolata" order="Selaginellales" pageId="0" pageNumber="1" rank="variety" species="monospora" variety="ciliolata">S. monospora var. ciliolata</taxonomicName>
