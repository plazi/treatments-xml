<taxonomicName authorityName="Feuillet" authorityYear="2016" baseAuthorityName="Feuillet" baseAuthorityYear="2016" class="Magnoliopsida" family="Boraginaceae" genus="Tournefortia" higherTaxonomySource="CoL" kingdom="Plantae" lsidName="Tournefortia humilis" order="Boraginales" pageId="1" pageNumber="102" phylum="Tracheophyta" rank="species" species="humilis">
