<subSubSection box="[199,1261,1788,1813]" pageId="9" pageNumber="244" type="etymology">
<paragraph blockId="9.[151,1436,1428,1993]" box="[199,1261,1788,1813]" pageId="9" pageNumber="244">
<emphasis bold="true" box="[199,334,1788,1813]" inLineHeading="true" pageId="9" pageNumber="244" reason="1">Etymology.</emphasis>
