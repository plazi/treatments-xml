<taxonomicName id="28F0E45DDAAF64F38A34BCCCC4E75676" authority="" authorityName="" class="Malacostraca" family="Caridea" genus="Heterocarpus" higherTaxonomySource="GBIF" kingdom="Animalia" lsidName="Heterocarpus chani" order="Decapoda" pageId="0" pageNumber="151" phylum="Arthropoda" rank="species" species="chani">Heterocarpus chani</taxonomicName>
