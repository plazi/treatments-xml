. 
<taxonomicName id="E8804D45FF870167ED1E6D4CE7D10009" box="[272,428,1820,1841]" class="Magnoliopsida" family="Euphorbiaceae" genus="Euphorbia" kingdom="Plantae" order="Malpighiales" pageId="19" pageNumber="20" phylum="Tracheophyta" rank="species" species="hirta">
