<taxonomicName id="E8804D45FF800160EED16B5BE5F7061C" box="[735,906,266,292]" class="Magnoliopsida" family="Euphorbiaceae" genus="Euphorbia" kingdom="Plantae" order="Malpighiales" pageId="20" pageNumber="21" phylum="Tracheophyta" rank="species" species="ophthalmica">
