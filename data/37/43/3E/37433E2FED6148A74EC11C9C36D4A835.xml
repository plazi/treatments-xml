<taxonomicName baseAuthorityName="Stoliczka" baseAuthorityYear="1873" class="Gastropoda" family="Camaenidae" genus="Chloritis" higherTaxonomySource="CoL" kingdom="Animalia" lsidName="Chloritis penangensis" order="Stylommatophora" pageId="2" pageNumber="3" phylum="Mollusca" rank="species" species="penangensis">
<emphasis italics="true" pageId="2" pageNumber="3">Chloritis penangensis</emphasis>
</taxonomicName>
. Shell flatter than 
<taxonomicName genus="C." lsidName="C. penangensis" pageId="2" pageNumber="3" rank="species" species="penangensis">
<emphasis italics="true" pageId="2" pageNumber="3">C. penangensis</emphasis>
