<taxonomicName LSID-HNS="urn:lsid:biosci.ohio-state.edu:osuc_concepts:25989" class="Insecta" family="Formicidae" genus="Azteca" higherTaxonomySource="CoL" kingdom="Animalia" lsidName="Azteca fasciata Emery" lsidName-HNS="Azteca fasciata Emery" order="Hymenoptera" pageNumber="107" phylum="Arthropoda" rank="species" species="fasciata">fasciata</taxonomicName>
