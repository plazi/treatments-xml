<taxonomicName LSID-HNS="urn:lsid:biosci.ohio-state.edu:osuc_concepts:26030" class="Insecta" family="Formicidae" genus="Azteca" higherTaxonomySource="CoL" kingdom="Animalia" lsidName="Azteca tonduzi Forel" lsidName-HNS="Azteca tonduzi Forel" order="Hymenoptera" pageNumber="107" phylum="Arthropoda" rank="species" species="tonduzi">tonduzi</taxonomicName>
, 
<taxonomicName LSID-HNS="urn:lsid:biosci.ohio-state.edu:osuc_concepts:25997" class="Insecta" family="Formicidae" genus="Azteca" higherTaxonomySource="CoL" kingdom="Animalia" lsidName="Azteca hypophylla Forel" lsidName-HNS="Azteca hypophylla Forel" order="Hymenoptera" pageNumber="107" phylum="Arthropoda" rank="species" species="hypophylla">hypophylla</taxonomicName>
, 
<taxonomicName LSID-HNS="urn:lsid:biosci.ohio-state.edu:osuc_concepts:26036" class="Insecta" family="Formicidae" genus="Azteca" higherTaxonomySource="CoL" kingdom="Animalia" lsidName="Azteca xanthochroa (Roger)" lsidName-HNS="Azteca xanthochroa (Roger)" order="Hymenoptera" pageNumber="107" phylum="Arthropoda" rank="species" species="xanthochroa">xanthochroa</taxonomicName>
.
</paragraph>
