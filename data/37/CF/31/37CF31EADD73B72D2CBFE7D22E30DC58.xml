, 
<taxonomicName LSID-HNS="urn:lsid:biosci.ohio-state.edu:osuc_concepts:33617" class="Insecta" family="Formicidae" genus="Pheidole" higherTaxonomySource="CoL" kingdom="Animalia" lsidName="Pheidole bicarinata Mayr" lsidName-HNS="Pheidole bicarinata Mayr" order="Hymenoptera" pageNumber="570" phylum="Arthropoda" rank="species" species="bicarinata">bicarinata</taxonomicName>
, 
<taxonomicName LSID-HNS="urn:lsid:biosci.ohio-state.edu:osuc_concepts:33656" class="Insecta" family="Formicidae" genus="Pheidole" higherTaxonomySource="CoL" kingdom="Animalia" lsidName="Pheidole centeotl Wheeler" lsidName-HNS="Pheidole centeotl Wheeler" order="Hymenoptera" pageNumber="570" phylum="Arthropoda" rank="species" species="centeotl">centeotl</taxonomicName>
, 
<taxonomicName LSID-HNS="urn:lsid:biosci.ohio-state.edu:osuc_concepts:33658" class="Insecta" family="Formicidae" genus="Pheidole" higherTaxonomySource="CoL" kingdom="Animalia" lsidName="Pheidole cerebrosior Wheeler" lsidName-HNS="Pheidole cerebrosior Wheeler" order="Hymenoptera" pageNumber="570" phylum="Arthropoda" rank="species" species="cerebrosior">cerebrosior</taxonomicName>
