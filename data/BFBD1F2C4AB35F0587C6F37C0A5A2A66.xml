<emphasis id="464BC6021154E8AE42CDE552C68934B6" italics="true" pageId="0" pageNumber="1">Aloe parvibracteata</emphasis>
</taxonomicName>
, 
<taxonomicName id="454EE612C49D41F98F680103858072C5" authorityName="I. Verd. &amp; D. S. Hardy" authorityYear="1965" class="Liliopsida" family="Asphodelaceae" genus="Aloe" higherTaxonomySource="CoL" kingdom="Plantae" lsidName="Aloe prinslooi" order="Asparagales" pageId="0" pageNumber="1" phylum="Tracheophyta" rank="species" species="prinslooi">
