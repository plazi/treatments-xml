</taxonomicName>
, 
<taxonomicName id="2331412B664F2B17F4BA8CA19100EF7D" authorityName="Gideon F. Sm. &amp; N. R. Crouch" authorityYear="2006" class="Liliopsida" family="Asphodelaceae" genus="Aloe" higherTaxonomySource="CoL" kingdom="Plantae" lsidName="Aloe vanrooyenii" order="Asparagales" pageId="0" pageNumber="1" phylum="Tracheophyta" rank="species" species="vanrooyenii">
<emphasis id="98672D4CACD0036E7E80C836F9632EDC" italics="true" pageId="0" pageNumber="1">Aloe vanrooyenii</emphasis>
</taxonomicName>
