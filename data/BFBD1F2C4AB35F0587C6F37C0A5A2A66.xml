<taxonomicName id="0E63FE6E8A40D786A2A2C4A31F9BA299" authorityName="Gideon F. Sm. &amp; Figueiredo" authorityYear="2018" class="Liliopsida" family="Asphodelaceae" genus="Aloe" higherTaxonomySource="CoL" kingdom="Plantae" lsidName="Aloe viridiana" order="Asparagales" pageId="0" pageNumber="1" phylum="Tracheophyta" rank="species" species="viridiana">
