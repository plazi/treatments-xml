, 
<taxonomicName id="5D5953BACC9C617EB63A66AA5B8B2EE9" authorityName="Reynolds" authorityYear="1937" class="Liliopsida" family="Asphodelaceae" genus="Aloe" higherTaxonomySource="CoL" kingdom="Plantae" lsidName="Aloe mudenensis" order="Asparagales" pageId="0" pageNumber="1" phylum="Tracheophyta" rank="species" species="mudenensis">
