, 
<quantity id="B5199B092439BD60FCFFDC031F3AA15A" box="[863,1029,577,603]" metricMagnitude="3" metricUnit="m" metricValue="1.25" metricValueMax="1.3" metricValueMin="1.2" pageId="39" pageNumber="40" unit="m" value="1250.0" valueMax="1300.0" valueMin="1200.0">1200–1300 m</quantity>
