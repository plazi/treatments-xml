. 
<taxonomicName id="4C354D04FFC1F431F33449A2FCE3F7EC" authority="A. Habit. B. Detail" box="[288,805,2011,2035]" class="Liliopsida" family="Bromeliaceae" genus="Tillandsia" kingdom="Plantae" order="Poales" pageId="2" pageNumber="12" phylum="Tracheophyta" rank="species" species="machupicchuensis">
