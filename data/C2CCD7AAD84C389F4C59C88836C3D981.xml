<taxonomicName id="0519616A38FF3B2AE761D02BBF418CAF" LSID-HNS="urn:lsid:biosci.ohio-state.edu:osuc_concepts:183791" authority="(Forel) Emery" class="Insecta" family="Formicidae" genus="Camponotus" kingdom="Animalia" lsidName-HNS="Camponotus (Myrmothrix) Forel" order="Hymenoptera" pageNumber="236" phylum="Arthropoda" subGenus="Myrmothrix">Myrmothrix (Forel) Emery</taxonomicName>
