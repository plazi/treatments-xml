<collectingCountry id="E4817635FFC2FF84F6619D95F68AF96E" name="Central African Republic" pageId="14" pageNumber="319">Central African Republic</collectingCountry>
, 
<collectingCountry id="E4817635FFC2FF84F6BF9DACF620F96E" box="[2342,2492,1712,1737]" name="Democratic Republic of the Congo" pageId="14" pageNumber="319">DR Congo</collectingCountry>
, 
<collectingCountry id="E4817635FFC2FF84F6549DACF713F956" name="Equatorial Guinea" pageId="14" pageNumber="319">
