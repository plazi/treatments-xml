<taxonomicName id="5B964D26FFC2FF84F6D69E89F641FA11" authorityName="Pucheran" authorityYear="1855" box="[2383,2525,1429,1462]" class="Mammalia" family="Herpestidae" genus="Bdeogale" kingdom="Animalia" order="Carnivora" pageId="14" pageNumber="319" phylum="Chordata" rank="species" species="nigripes">B. nigripes</taxonomicName>
