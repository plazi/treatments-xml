<taxonomicName id="4C594D4EFFDCFFB123E58BC8FD85C0DF" authority="(Hagen, 1855)" baseAuthorityName="Hagen" baseAuthorityYear="1855" box="[136,549,973,998]" class="Insecta" family="Cicadidae" genus="Tibicina" kingdom="Animalia" order="Hemiptera" pageId="14" pageNumber="243" phylum="Arthropoda" rank="species" species="quadrisignata">
<emphasis id="B92DEADFFFDCFFB123E58BC8FE23C0DC" bold="true" box="[136,387,974,998]" italics="true" pageId="14" pageNumber="243">Tibicina quadrisignata</emphasis>
(
<bibRefCitation id="EFC84B3CFFDCFFB122FF8BCBFDBEC0DF" author="HAGEN, H." box="[402,542,973,997]" pageId="14" pageNumber="243" pagination="340 - 358" refId="ref16703" refString="HAGEN, H. 1855. Die Sing-Cicaden Europa's. Stettiner entomologische Zeitung 16: 340 - 358." type="journal article" year="1855">Hagen, 1855</bibRefCitation>
