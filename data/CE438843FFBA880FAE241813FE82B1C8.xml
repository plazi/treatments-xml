<taxonomicName id="81EA42D6FFBA880EAE811854FCBFB557" authority="Melander, 1961" authorityName="Melander" authorityYear="1961" box="[429,837,1614,1637]" class="Insecta" family="Bombyliidae" genus="Mythicomyia" kingdom="Animalia" order="Diptera" pageId="2" pageNumber="3" phylum="Arthropoda" rank="species" species="angusta">
