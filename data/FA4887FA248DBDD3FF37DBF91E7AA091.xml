<geoCoordinate id="17D5502B248ABDD3FC3FDCF71F35A1CE" box="[927,1034,693,719]" degrees="79" direction="west" minutes="18" orientation="longitude" pageId="148" pageNumber="149" precision="925" value="-79.3">79°18’W</geoCoordinate>
