<taxonomicName id="4C11BC9EFF8FFF8BFF0CFDAEFD42FD9D" authority="Baker, 1923: 390" authorityName="Baker" authorityPageNumber="390" authorityYear="1923" box="[151,641,546,568]" class="Insecta" family="Cicadellidae" genus="Pseudonirvana" higherTaxonomySource="GBIF" kingdom="Animalia" order="Hemiptera" pageId="4" pageNumber="360" phylum="Arthropoda" rank="species" species="sandakanensis">
