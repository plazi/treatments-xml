<taxonomicName id="4C11BC9EFF8FFF8BFF0CFDCDFE24FDF2" authority="(Baker)" authorityName="Baker" box="[151,487,577,599]" class="Insecta" family="Cicadellidae" genus="Sophonia" kingdom="Animalia" order="Hemiptera" pageId="4" pageNumber="360" phylum="Arthropoda" rank="species" species="sandakanensis">
