<geoCoordinate id="3AE7B9EB910D64068F7F6E2907061354" degrees="22" direction="north" minutes="43" orientation="latitude" precision="925" value="22.716667">22°43'N</geoCoordinate>
, 
<geoCoordinate id="2417C5C0A56E968637911C0A340B0CDA" degrees="103" direction="east" minutes="59" orientation="longitude" precision="925" value="103.98333">103°59'E</geoCoordinate>
