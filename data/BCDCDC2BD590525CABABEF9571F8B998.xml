<taxonomicName id="36C297911338250D56323940F2DBCC15" authority="Robertson, 1902" authorityName="Robertson" authorityYear="1902" class="Insecta" family="Andrenidae" genus="Trachandrena" higherTaxonomySource="GBIF" kingdom="Animalia" lsidName="Trachandrena" order="Hymenoptera" pageId="0" pageNumber="87" phylum="Arthropoda" rank="genus">Trachandrena</taxonomicName>
