<taxonomicName id="7C7E62484C1263EB10C7232AA6CB97B3" authorityName="Simon" authorityYear="1900" class="Arachnida" family="Salticidae" genus="Pachyballus" higherTaxonomySource="CoL" kingdom="Animalia" lsidName="Pachyballus castaneus" order="Araneae" pageId="0" pageNumber="47" phylum="Arthropoda" rank="species" species="castaneus">
<emphasis id="88550C039699AE07A19FDEC831D33E31" italics="true" pageId="0" pageNumber="47">Pachyballus castaneus</emphasis>
</taxonomicName>
<emphasis id="E5FA96CBB8B3EC45983109EF8CF28BF9" bold="true" pageId="0" pageNumber="47">22</emphasis>
