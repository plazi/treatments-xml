<paragraph pageId="2" pageNumber="139">
<taxonomicName class="Gastropoda" family="Camaenidae" genus="Bellatrachia" higherTaxonomySource="CoL" kingdom="Animalia" lsidName="Bellatrachia condoriana" order="Stylommatophora" pageId="2" pageNumber="139" phylum="Mollusca" rank="species" species="condoriana">
