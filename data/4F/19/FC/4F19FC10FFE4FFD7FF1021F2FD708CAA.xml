<taxonomicName baseAuthorityName="Peters" baseAuthorityYear="1866" box="[502,610,1417,1440]" class="Insecta" family="Curculionidae" genus="Platyrrhinus" kingdom="Animalia" order="Coleoptera" pageId="119" pageNumber="119" phylum="Arthropoda" rank="species" species="helleri">
<emphasis box="[502,520,1417,1440]" italics="true" pageId="119" pageNumber="119">P</emphasis>
. 
<emphasis box="[534,610,1417,1440]" italics="true" pageId="119" pageNumber="119">helleri</emphasis>
</taxonomicName>
