<taxonomicName baseAuthorityName="Peters" baseAuthorityYear="1866" class="Insecta" family="Curculionidae" genus="Platyrrhinus" kingdom="Animalia" order="Coleoptera" pageId="119" pageNumber="119" phylum="Arthropoda" rank="species" species="helleri">
<emphasis box="[631,649,1329,1352]" italics="true" pageId="119" pageNumber="119">P</emphasis>
. 
<emphasis box="[128,204,1359,1382]" italics="true" pageId="119" pageNumber="119">helleri</emphasis>
</taxonomicName>
from 
<taxonomicName box="[298,526,1358,1382]" class="Insecta" family="Curculionidae" genus="Platyrrhinus" kingdom="Animalia" order="Coleoptera" pageId="119" pageNumber="119" phylum="Arthropoda" rank="species" species="brachycephalus">
<emphasis box="[298,316,1359,1382]" italics="true" pageId="119" pageNumber="119">P</emphasis>
. 
<emphasis box="[342,526,1359,1382]" italics="true" pageId="119" pageNumber="119">brachycephalus</emphasis>
