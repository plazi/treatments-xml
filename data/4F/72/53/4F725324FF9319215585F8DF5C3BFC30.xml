</taxonomicName>
(
<taxonomicName box="[544,739,674,698]" class="Magnoliopsida" family="Amaranthaceae" kingdom="Plantae" order="Caryophyllales" pageId="19" pageNumber="18" phylum="Tracheophyta" rank="family">Amaranthaceae</taxonomicName>
) and 
<taxonomicName box="[803,916,674,698]" class="Magnoliopsida" family="Apocynaceae" genus="Asclepias" kingdom="Plantae" order="Gentianales" pageId="19" pageNumber="18" phylum="Tracheophyta" rank="genus">
<emphasis box="[803,916,674,698]" italics="true" pageId="19" pageNumber="18">Asclepias</emphasis>
</taxonomicName>
(
<taxonomicName box="[929,1115,674,698]" family="Asclepiadaceae" pageId="19" pageNumber="18" rank="family">Asclepiadaceae</taxonomicName>
) may have been incidental. Published host records include 
<taxonomicName authority="(Jacq.) J. F. Macbr." authorityName="J. F. Macbr." baseAuthorityName="Jacq." box="[579,1096,706,730]" class="Magnoliopsida" family="Lythraceae" genus="Cuphea" kingdom="Plantae" order="Myrtales" pageId="19" pageNumber="18" phylum="Tracheophyta" rank="species" species="carthaginensis">
<emphasis box="[579,859,706,730]" italics="true" pageId="19" pageNumber="18">Cuphea carthaginensis</emphasis>
(Jacq.) J. F. Macbr.
</taxonomicName>
and 
<taxonomicName box="[1156,1262,707,730]" class="Magnoliopsida" family="Onagraceae" genus="Jussiaea" higherTaxonomySource="GBIF" kingdom="Plantae" order="Myrtales" pageId="19" pageNumber="18" phylum="Tracheophyta" rank="genus">
<emphasis box="[1156,1262,707,730]" italics="true" pageId="19" pageNumber="18">Jussiaea</emphasis>
</taxonomicName>
[= 
<taxonomicName box="[1311,1430,706,730]" class="Magnoliopsida" family="Onagraceae" genus="Ludwigia" kingdom="Plantae" order="Myrtales" pageId="19" pageNumber="18" phylum="Tracheophyta" rank="genus">
