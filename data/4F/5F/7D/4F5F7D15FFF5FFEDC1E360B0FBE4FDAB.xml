<paragraph blockId="14.[151,1437,1570,2007]" box="[151,1041,1570,1596]" pageId="14" pageNumber="15">
<emphasis bold="true" box="[151,363,1570,1596]" pageId="14" pageNumber="15">Included genera:</emphasis>
<taxonomicName box="[371,519,1571,1596]" class="Mammalia" family="Brontotheriidae" genus="Palaeosyops" higherTaxonomySource="GBIF" kingdom="Animalia" order="Perissodactyla" pageId="14" pageNumber="15" phylum="Chordata" rank="genus">
<emphasis box="[371,519,1571,1596]" italics="true" pageId="14" pageNumber="15">Palaeosyops</emphasis>
</taxonomicName>
(= 
<taxonomicName box="[559,688,1571,1596]" class="Mammalia" family="Brontotheriidae" genus="Limnohyus" higherTaxonomySource="GBIF" kingdom="Animalia" order="Perissodactyla" pageId="14" pageNumber="15" phylum="Chordata" rank="genus">
<emphasis box="[559,688,1571,1596]" italics="true" pageId="14" pageNumber="15">Limnohyus</emphasis>
