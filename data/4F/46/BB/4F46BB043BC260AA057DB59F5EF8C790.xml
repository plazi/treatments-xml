<subSubSection pageId="13" pageNumber="136" type="distribution">
<paragraph pageId="13" pageNumber="136">Distribution.</paragraph>
<paragraph pageId="13" pageNumber="136">
<taxonomicName authorityName="P. M. Peterson, Caldasia 31 (2): 279, f. 2 A-B" authorityYear="2009" baseAuthorityName="Doell" class="Liliopsida" family="Poaceae" genus="Muhlenbergia" higherTaxonomySource="CoL" kingdom="Plantae" lsidName="Muhlenbergia bryophilus" order="Poales" pageId="13" pageNumber="136" phylum="Tracheophyta" rank="species" species="bryophilus">
<emphasis italics="true" pageId="13" pageNumber="136">Muhlenbergia bryophilus</emphasis>
