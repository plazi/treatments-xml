<paragraph id="8B98B30BFF95FF834FA9FBB1FC76FBAB" blockId="37.[151,1008,977,1091]" box="[151,921,1069,1091]" pageId="37" pageNumber="438">
<taxonomicName id="4C27C888FF95FF834FA9FBB1FE6BFBAB" baseAuthorityName="Gray" baseAuthorityYear="1831" box="[151,388,1069,1091]" class="Reptilia" family="Agamidae" genus="Psammophilus" higherTaxonomySource="GBIF" kingdom="Animalia" order="Squamata" pageId="37" pageNumber="438" phylum="Chordata" rank="species" species="dorsalis">
