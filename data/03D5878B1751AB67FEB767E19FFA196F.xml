REMARKS ON 
<taxonomicName id="4C7C4D1E1751AB67FE5767E19C801CFD" baseAuthorityName="Daams" baseAuthorityYear="1989" box="[451,651,899,920]" class="Mammalia" family="Gliridae" genus="Simplomys" higherTaxonomySource="GBIF" kingdom="Animalia" order="Rodentia" pageId="20" pageNumber="650" phylum="Chordata" rank="species" species="julii">
<emphasis id="B908EA8F1751AB67FE5767E19C801CFD" box="[451,651,899,920]" italics="true" pageId="20" pageNumber="642">
