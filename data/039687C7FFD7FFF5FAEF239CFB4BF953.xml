<taxonomicName id="4C3F4D52FFD7FFF5FB8627A0FCA5FB63" authority="Jullien, 1881" authorityName="Jullien" authorityYear="1881" box="[510,783,1194,1220]" class="Gymnolaemata" family="Chaperiidae" genus="Chaperia" kingdom="Animalia" order="Cheilostomatida" pageId="5" pageNumber="6" phylum="Bryozoa" rank="genus">
<emphasis id="B94BEAC3FFD7FFF5FB8627A0FDC7FB63" box="[510,621,1195,1220]" italics="true" pageId="5" pageNumber="6">Chaperia</emphasis>
