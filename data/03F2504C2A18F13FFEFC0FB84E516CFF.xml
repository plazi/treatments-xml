<taxonomicName id="4C5B9AD92A18F13DFEF20FBF4EE76AE1" authorityName="Halbert" authorityYear="1944" box="[298,443,692,715]" class="Arachnida" family="Torrenticolidae" genus="Megapalpis" higherTaxonomySource="GBIF" kingdom="Animalia" order="Acari" pageId="48" pageNumber="491" phylum="Arthropoda" rank="genus">
