<collectingCountry box="[138,253,875,899]" name="Madagascar" pageId="27" pageNumber="262">Madagascar</collectingCountry>
(
<collectorName box="[266,387,875,899]" pageId="27" pageNumber="262">Andohahela</collectorName>
, 
<collectorName box="[398,592,875,899]" pageId="27" pageNumber="262">Col du Maningotry</collectorName>
, 
<collectorName pageId="27" pageNumber="262">Ifarantsa</collectorName>
) between 
<quantity box="[262,372,902,926]" metricMagnitude="2" metricUnit="m" metricValue="4.5" metricValueMax="6.0" metricValueMin="3.0" pageId="27" pageNumber="262" unit="m" value="450.0" valueMax="600.0" valueMin="300.0">
<elevation box="[262,372,902,926]" metricMagnitude="2" metricUnit="m" metricValue="4.5" metricValueMax="6.0" metricValueMin="3.0" pageId="27" pageNumber="262" unit="m" value="450.0" valueMax="600.0" valueMin="300.0">300-600 m</elevation>
</quantity>
elevation. 
<collectionCode box="[476,492,902,926]" country="USA" lsid="urn:lsid:biocol.org:col:15406" name="Harvard University - Arnold Arboretum" pageId="27" pageNumber="262" type="Herbarium">A</collectionCode>
