<emphasis bold="true" box="[701,715,862,888]" pageId="19" pageNumber="20">–</emphasis>
65, posterior 30 
<emphasis bold="true" box="[890,904,862,888]" pageId="19" pageNumber="20">–</emphasis>
45, distance 45 
<emphasis bold="true" box="[1071,1085,862,888]" pageId="19" pageNumber="20">–</emphasis>
