<taxonomicName id="446451D27CEC4E2F07CE4775CCDE7C8C" LSID-HNS="urn:lsid:biosci.ohio-state.edu:osuc_concepts:183158" class="Insecta" family="Formicidae" genus="Cerapachys" higherTaxonomySource="CoL" kingdom="Animalia" lsidName-HNS="Cerapachys sexspinus (Xu)" order="Hymenoptera" pageNumber="56" phylum="Arthropoda" rank="species" species="sexspinus">Cerapachys sexspinus</taxonomicName>
