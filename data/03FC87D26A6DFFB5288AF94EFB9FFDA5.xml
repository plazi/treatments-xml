<taxonomicName id="4C554D476A6BFFB52B97FE05FBDBFE41" box="[906,1106,481,505]" class="Insecta" family="Hybotidae" genus="Platypalpus" kingdom="Animalia" order="Diptera" pageId="5" pageNumber="40" phylum="Arthropoda" rank="species" species="submicrophona" status="sp. nov.">
