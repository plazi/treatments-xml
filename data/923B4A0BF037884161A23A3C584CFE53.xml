<taxonomicName id="DD92809EF0368846673638AE5CB1FB50" authorityName="Schwertner &amp; Grazia &amp; Fernandes" authorityYear="2002" box="[1340,1475,1175,1194]" class="Insecta" family="Pentatomidae" genus="Mecocephala" higherTaxonomySource="GBIF" kingdom="Animalia" order="Hemiptera" pageId="11" pageNumber="180" phylum="Arthropoda" rank="species" species="bonariensis">
