<taxonomicName id="D92097B0CFE4A888C1275FBD3C3AF6E9" class="Insecta" family="Acrididae" genus="Guichardippus" higherTaxonomySource="CoL" kingdom="Animalia" lsidName="Guichardippus somalicus" order="Orthoptera" pageId="42" pageNumber="79" phylum="Arthropoda" rank="species" species="somalicus">Guichardippus somalicus</taxonomicName>
