<subSubSection id="DD6247C98DF71ECAF398C7ED07297305" pageId="null" pageNumber="493" type="nomenclature">
<paragraph id="6F7AFC6175E12FDC88593550C1BD11FE" pageId="null" pageNumber="493">
<pageBreakToken id="7F163F5FAFAF9BE5EEA122702463172E" pageId="null" pageNumber="493" start="start">Artengruppe</pageBreakToken>
des 
<taxonomicName id="2A5A9BA240296C3C9333F876BF37ED53" authority="(L.) Clairv." class="Magnoliopsida" family="Asteraceae" genus="Senecio" kingdom="Plantae" order="Asterales" pageId="null" pageNumber="493" phylum="Tracheophyta" rank="species" species="integrifolius">
Senecio 
