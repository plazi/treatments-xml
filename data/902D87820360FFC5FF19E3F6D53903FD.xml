<subSubSection id="509E651F0360FFC2FF19E381D7D90588" box="[151,896,1504,1527]" pageId="3" pageNumber="4" type="materials_examined">
<paragraph id="183B36940360FFC2FF19E381D7D90588" blockId="3.[151,896,1504,1527]" box="[151,896,1504,1527]" pageId="3" pageNumber="4">
<typeStatus id="C73F88360360FFC2FF19E381D4950588" box="[151,204,1504,1527]" pageId="3" pageNumber="4">Type</typeStatus>
species: 
<taxonomicName id="DF844D170360FFC2FEA3E381D6240588" authority="Oliveira" authorityName="Oliveira" box="[301,637,1504,1527]" class="Insecta" family="Ephydridae" genus="Paraephydra" kingdom="Animalia" order="Diptera" pageId="3" pageNumber="4" phylum="Arthropoda" rank="species" species="freitasi">
<emphasis id="2AF0EA860360FFC2FEA3E381D6520588" box="[301,523,1504,1527]" italics="true" pageId="3" pageNumber="4">Paraephydra freitasi</emphasis>
(Oliveira)
</taxonomicName>
