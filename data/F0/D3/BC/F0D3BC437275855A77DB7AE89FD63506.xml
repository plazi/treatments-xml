<paragraph pageId="0" pageNumber="1">
<taxonomicName authorityName="Reitter" authorityYear="1913" class="Insecta" family="Curculionidae" genus="Xylosandrus" higherTaxonomySource="CoL" kingdom="Animalia" lsidName="Xylosandrus" order="Coleoptera" pageId="0" pageNumber="1" phylum="Arthropoda" rank="genus">Xylosandrus</taxonomicName>
