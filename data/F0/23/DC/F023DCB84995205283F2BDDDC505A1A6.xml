complex&quot; within the larger 
<taxonomicName LSID-HNS="urn:lsid:biosci.ohio-state.edu:osuc_concepts:33744" class="Insecta" family="Formicidae" genus="Pheidole" higherTaxonomySource="CoL" kingdom="Animalia" lsidName="Pheidole flavens Roger" lsidName-HNS="Pheidole flavens Roger" order="Hymenoptera" pageNumber="374" phylum="Arthropoda" rank="species" species="flavens">flavens</taxonomicName>
group, including 
<taxonomicName LSID-HNS="urn:lsid:biosci.ohio-state.edu:osuc_concepts:181841" class="Insecta" family="Formicidae" genus="Pheidole" higherTaxonomySource="CoL" kingdom="Animalia" lsidName="Pheidole asperithorax Emery" lsidName-HNS="Pheidole asperithorax Emery" order="Hymenoptera" pageNumber="374" phylum="Arthropoda" rank="species" species="asperithorax">asperithorax</taxonomicName>
, 
<taxonomicName LSID-HNS="urn:lsid:biosci.ohio-state.edu:osuc_concepts:181847" class="Insecta" family="Formicidae" genus="Pheidole" higherTaxonomySource="CoL" kingdom="Animalia" lsidName="Pheidole breviscapa Forel" lsidName-HNS="Pheidole breviscapa Forel" order="Hymenoptera" pageNumber="374" phylum="Arthropoda" rank="species" species="breviscapa">breviscapa</taxonomicName>
, 
<taxonomicName LSID-HNS="urn:lsid:biosci.ohio-state.edu:osuc_concepts:142296" class="Insecta" family="Formicidae" genus="Pheidole" higherTaxonomySource="CoL" kingdom="Animalia" lsidName="Pheidole exigua Mayr" lsidName-HNS="Pheidole exigua Mayr" order="Hymenoptera" pageNumber="374" phylum="Arthropoda" rank="species" species="exigua">exigua</taxonomicName>
, 
<taxonomicName LSID-HNS="urn:lsid:biosci.ohio-state.edu:osuc_concepts:33744" class="Insecta" family="Formicidae" genus="Pheidole" higherTaxonomySource="CoL" kingdom="Animalia" lsidName="Pheidole flavens Roger" lsidName-HNS="Pheidole flavens Roger" order="Hymenoptera" pageNumber="374" phylum="Arthropoda" rank="species" species="flavens">flavens</taxonomicName>
, 
<taxonomicName LSID-HNS="urn:lsid:biosci.ohio-state.edu:osuc_concepts:33901" class="Insecta" family="Formicidae" genus="Pheidole" higherTaxonomySource="CoL" kingdom="Animalia" lsidName="Pheidole nuculiceps Wheeler" lsidName-HNS="Pheidole nuculiceps Wheeler" order="Hymenoptera" pageNumber="374" phylum="Arthropoda" rank="species" species="nuculiceps">nuculiceps</taxonomicName>
, 
<taxonomicName LSID-HNS="urn:lsid:biosci.ohio-state.edu:osuc_concepts:33912" class="Insecta" family="Formicidae" genus="Pheidole" higherTaxonomySource="CoL" kingdom="Animalia" lsidName="Pheidole orbica Forel" lsidName-HNS="Pheidole orbica Forel" order="Hymenoptera" pageNumber="374" phylum="Arthropoda" rank="species" species="orbica">orbica</taxonomicName>
, and 
<taxonomicName LSID-HNS="urn:lsid:biosci.ohio-state.edu:osuc_concepts:181941" class="Insecta" family="Formicidae" genus="Pheidole" higherTaxonomySource="CoL" kingdom="Animalia" lsidName="Pheidole sculptior Forel" lsidName-HNS="Pheidole sculptior Forel" order="Hymenoptera" pageNumber="374" phylum="Arthropoda" rank="species" species="sculptior">sculptior</taxonomicName>
, as well as the less similar 
<taxonomicName LSID-HNS="urn:lsid:biosci.ohio-state.edu:osuc_concepts:181913" class="Insecta" family="Formicidae" genus="Pheidole" higherTaxonomySource="CoL" kingdom="Animalia" lsidName="Pheidole nitidicollis Emery" lsidName-HNS="Pheidole nitidicollis Emery" order="Hymenoptera" pageNumber="374" phylum="Arthropoda" rank="species" species="nitidicollis">nitidicollis</taxonomicName>
