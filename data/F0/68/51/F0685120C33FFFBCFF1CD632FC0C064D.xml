<collectingRegion box="[873,1206,482,508]" country="Thailand" name="Nakhon Ratchasima" pageId="5" pageNumber="218">Nakhon Ratchasima Province</collectingRegion>
, 
<collectingCountry box="[1216,1318,482,508]" name="Thailand" pageId="5" pageNumber="218">Thailand</collectingCountry>
, South-East Asia whereas 
