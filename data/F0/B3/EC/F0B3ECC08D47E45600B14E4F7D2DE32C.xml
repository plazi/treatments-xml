<taxonomicName authority="H.A.Schrader, 1831" authorityName="H.A.Schrader" authorityYear="1831" class="Magnoliopsida" family="Amaranthaceae" genus="Monolepis" higherTaxonomySource="GBIF" kingdom="Plantae" lsidName="Monolepis" order="Caryophyllales" pageId="0" pageNumber="103" phylum="Tracheophyta" rank="genus">
<emphasis italics="true" pageId="0" pageNumber="103">Monolepis</emphasis>
</taxonomicName>
.
</paragraph>
