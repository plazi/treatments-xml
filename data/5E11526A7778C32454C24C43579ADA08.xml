</taxonomicName>
, dorsal view. 
<emphasis id="E4CC3F6E7779C32756354912544AD85C" bold="true" box="[548,568,864,883]" pageId="1" pageNumber="222">1)</emphasis>
<taxonomicName id="11B898FF7779C327562F492D54F6D85D" box="[574,644,863,882]" class="Insecta" family="Buprestidae" genus="Brachys" kingdom="Animalia" order="Coleoptera" pageId="1" pageNumber="222" phylum="Arthropoda" rank="species" species="rileyi">
<emphasis id="E4CC3F6E7779C327562F492D54F6D85D" box="[574,644,863,882]" italics="true" pageId="1" pageNumber="222">B. rileyi</emphasis>
</taxonomicName>
; 
<emphasis id="E4CC3F6E7779C3275680491254D6D85C" bold="true" box="[657,676,864,883]" pageId="1" pageNumber="222">2)</emphasis>
<taxonomicName id="11B898FF7779C32756BA492D549DD85D" box="[683,751,863,882]" class="Insecta" family="Buprestidae" genus="Brachys" kingdom="Animalia" order="Coleoptera" pageId="1" pageNumber="222" phylum="Arthropoda" rank="species" species="barri">
<emphasis id="E4CC3F6E7779C32756BA492D549DD85D" box="[683,751,863,882]" italics="true" pageId="1" pageNumber="222">B. barri</emphasis>
</taxonomicName>
