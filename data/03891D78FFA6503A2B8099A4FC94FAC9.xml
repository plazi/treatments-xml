<taxonomicName id="4C20D7EDFFA6503A2A3B9A6BFD2BFDA7" authority="Schellenberg, 1925" authorityName="Schellenberg" authorityYear="1925" box="[300,707,570,593]" class="Malacostraca" family="Melitidae" genus="Melita" kingdom="Animalia" order="Amphipoda" pageId="52" pageNumber="53" phylum="Arthropoda" rank="species" species="subchelata">
