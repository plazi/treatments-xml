<taxonomicName id="4C4EFDCBFFC3FF83FED69E3538549F55" authorityName="Jacoby" authorityYear="1887" box="[342,548,1883,1902]" class="Insecta" family="Chrysomelidae" genus="Tegyrius" higherTaxonomySource="GBIF" kingdom="Animalia" order="Coleoptera" pageId="18" pageNumber="344" phylum="Arthropoda" rank="species" species="metallicus">
