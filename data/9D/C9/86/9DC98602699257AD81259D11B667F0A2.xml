<taxonomicName class="Magnoliopsida" family="Brassicaceae" genus="Draba" kingdom="Plantae" lsidName="Draba amplexicaulis" order="Brassicales" pageId="0" pageNumber="95" phylum="Tracheophyta" rank="species" species="amplexicaulis">
<emphasis italics="true" pageId="0" pageNumber="95">Draba amplexicaulis</emphasis>
