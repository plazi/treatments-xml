<collectingCountry box="[812,860,1370,1396]" name="Iran" pageId="90" pageNumber="91">Iran</collectingCountry>
, 
<collectingRegion box="[872,1014,1369,1395]" country="Iran" name="Kermanshah" pageId="90" pageNumber="91">Kermanshah</collectingRegion>
and 
<collectingRegion box="[1068,1161,1369,1395]" country="Iran" name="Markazi" pageId="90" pageNumber="91">Markazi</collectingRegion>
