<taxonomicName id="BF1AC202B6736862315297D1A9E87A6C" class="Insecta" family="Leptophlebiidae" genus="Hydromastodon" higherTaxonomySource="CoL" kingdom="Animalia" lsidName="Hydromastodon sallesi" order="Ephemeroptera" pageId="9" pageNumber="54" phylum="Arthropoda" rank="species" species="sallesi">Hydromastodon sallesi</taxonomicName>
, female nymph b 
<taxonomicName id="FB1BF6DAD5325AAAA3BA1E1568ED3C68" class="Insecta" family="Leptophlebiidae" genus="Hydromastodon" higherTaxonomySource="CoL" kingdom="Animalia" lsidName="Hydromastodon sallesi" order="Ephemeroptera" pageId="9" pageNumber="54" phylum="Arthropoda" rank="species" species="sallesi">Hydromastodon sallesi</taxonomicName>
