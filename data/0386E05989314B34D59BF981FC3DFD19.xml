<taxonomicName id="4C2F2ACC89304B33D18AFA05FAA8FA3A" authority="Haran &amp; Perrin, 2017" authorityName="Haran &amp; Perrin" authorityYear="2017" box="[1158,1365,1425,1447]" class="Insecta" family="Curculionidae" genus="Afrosmicronyx" higherTaxonomySource="GBIF" kingdom="Animalia" order="Coleoptera" pageId="3" pageNumber="135" phylum="Arthropoda" rank="species" species="mirei" status="sp. n.">
