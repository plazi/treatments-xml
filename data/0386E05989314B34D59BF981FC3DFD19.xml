<taxonomicName id="4C2F2ACC89304B33D1ABFAE6FA8BFA15" authority="Haran &amp; Perrin, 2017" authorityName="Haran &amp; Perrin" authorityYear="2017" box="[1191,1398,1394,1416]" class="Insecta" family="Curculionidae" genus="Afrosmicronyx" higherTaxonomySource="GBIF" kingdom="Animalia" order="Coleoptera" pageId="3" pageNumber="135" phylum="Arthropoda" rank="species" species="mirei" status="sp. n.">
