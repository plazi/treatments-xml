. 
<taxonomicName id="4C2F2ACC89304B33D73DFAE6FC5AFA15" authority="(Hustache)" authorityName="Hustache" baseAuthorityName="Hustache" baseAuthorityYear="1935" box="[561,935,1394,1416]" class="Insecta" family="Curculionidae" genus="Afrosmicronyx" higherTaxonomySource="GBIF" kingdom="Animalia" order="Coleoptera" pageId="3" pageNumber="135" phylum="Arthropoda" rank="species" species="giganteus">
