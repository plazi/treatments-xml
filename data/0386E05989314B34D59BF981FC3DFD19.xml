<taxonomicName id="4C2F2ACC89304B33D484FA06FD53FA3A" authority="Tournier" authorityName="Tournier" authorityYear="1873" box="[392,686,1425,1447]" class="Insecta" family="Curculionidae" genus="Smicronyx" higherTaxonomySource="GBIF" kingdom="Animalia" order="Coleoptera" pageId="3" pageNumber="135" phylum="Arthropoda" rank="species" species="revelieri">
