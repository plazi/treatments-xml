<paragraph blockId="15.[151,1437,871,1366]" pageId="15" pageNumber="16">
<taxonomicName authorityName="Hancock" authorityYear="1909" box="[151,283,871,897]" class="Insecta" family="Tetrigidae" genus="Halmatettix" kingdom="Animalia" order="Orthoptera" pageId="15" pageNumber="16" phylum="Arthropoda" rank="genus">
<emphasis box="[151,283,871,897]" italics="true" pageId="15" pageNumber="16">Halmatettix</emphasis>
