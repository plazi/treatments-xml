<emphasis box="[558,818,907,933]" italics="true" pageId="15" pageNumber="16">Halmatettix cristinotus</emphasis>
Hancock, 1909
</taxonomicName>
(
<figureCitation box="[1020,1106,907,933]" captionStart="FIGURE 14" captionStartId="21.[151,250,1943,1967]" captionTargetBox="[170,1417,181,1920]" captionTargetId="figure-19@21.[170,1417,181,1920]" captionTargetPageId="21" captionText="FIGURE 14. Halmatettix cristinotus Hancock, 1909 allotype (A) left lateral view, (B) right lateral view, (C) dorsal view, (D) frontal view and (E) labels. Scale bar = 5 mm. Photo of type: Academy of Natural Sciences of Drexel University, Philadelphia/ Daniela Silva and Marcelo Pereira." figureDoi="http://doi.org/10.5281/zenodo.4614421" httpUri="https://zenodo.org/record/4614421/files/figure.png" pageId="15" pageNumber="16">Fig. 14</figureCitation>
); 
<taxonomicName authority="Grant, 1955" authorityName="Grant" authorityYear="1955" class="Insecta" family="Tetrigidae" genus="Halmatetix" kingdom="Animalia" order="Orthoptera" pageId="15" pageNumber="16" phylum="Arthropoda" rank="species" species="furcatus">
<emphasis box="[1130,1356,907,933]" italics="true" pageId="15" pageNumber="16">Halmatetix furcatus</emphasis>
Grant, 1955
</taxonomicName>
(
<figureCitation box="[222,305,943,970]" captionStart="FIGURE 15" captionStartId="22.[151,250,1943,1967]" captionTargetBox="[170,1417,181,1920]" captionTargetId="figure-22@22.[170,1417,181,1920]" captionTargetPageId="22" captionText="FIGURE 15. Halmatetix furcatus Grant, 1955 holotype (A) left lateral view, (B) dorsal view, (C) frontal view and (D) labels. Scale bar = 5 mm. Photo of type: Academy of Natural Sciences of Drexel University, Philadelphia/Daniela Silva and Marcelo Pereira." figureDoi="http://doi.org/10.5281/zenodo.4614423" httpUri="https://zenodo.org/record/4614423/files/figure.png" pageId="15" pageNumber="16">Fig. 15</figureCitation>
); 
