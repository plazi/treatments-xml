<collectingRegion box="[882,967,151,176]" country="Mexico" name="Colima" pageId="45" pageNumber="46">Colima</collectingRegion>
, 
<collectingRegion box="[979,1111,151,176]" country="Mexico" name="Guanajuato" pageId="45" pageNumber="46">Guanajuato</collectingRegion>
, 
<collectingRegion box="[1123,1202,151,176]" country="Mexico" name="Jalisco" pageId="45" pageNumber="46">Jalisco</collectingRegion>
