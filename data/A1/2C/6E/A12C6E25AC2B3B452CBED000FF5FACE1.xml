<collectingRegion box="[1213,1341,151,176]" country="Mexico" name="Michoacan de Ocampo" pageId="45" pageNumber="46">Michoacan</collectingRegion>
, 
<collectingRegion box="[1352,1436,151,176]" country="Mexico" name="Nayarit" pageId="45" pageNumber="46">Nayarit</collectingRegion>
and 
<collectingRegion box="[198,311,189,212]" country="Mexico" name="Zacatecas" pageId="45" pageNumber="46">Zacatecas</collectingRegion>
, 
<collectingRegion box="[323,408,188,213]" country="Mexico" name="Mexico" pageId="45" pageNumber="46">
<collectingCountry box="[323,408,188,213]" name="Mexico" pageId="45" pageNumber="46">Mexico</collectingCountry>
