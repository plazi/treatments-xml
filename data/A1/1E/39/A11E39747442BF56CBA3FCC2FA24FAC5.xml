] (
<taxonomicName authorityName="Latreille" authorityYear="1802" box="[1200,1319,937,962]" class="Insecta" family="Sphecidae" kingdom="Animalia" order="Hymenoptera" pageId="10" pageNumber="65" phylum="Arthropoda" rank="family">Sphecidae</taxonomicName>
) and 
<taxonomicName authority="Loew, 1863" authorityName="Loew" authorityYear="1863" class="Insecta" family="Bombyliidae" genus="Phthiria" kingdom="Animalia" order="Diptera" pageId="10" pageNumber="65" phylum="Arthropoda" rank="species" species="sulphurea">
