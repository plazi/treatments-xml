<paragraph blockId="8.[189,1399,731,793]" pageId="8" pageNumber="9">
<taxonomicName box="[189,444,731,758]" class="Magnoliopsida" family="Gesneriaceae" genus="Cyrtandra" kingdom="Plantae" order="Lamiales" pageId="8" pageNumber="9" phylum="Tracheophyta" rank="species" species="ferruginea">
<emphasis box="[189,444,731,758]" italics="true" pageId="8" pageNumber="9">Cyrtandra ferruginea</emphasis>
