<taxonomicName id="A48B4D58A215FF90FEF80AFA6700FBD9" authority="Disney." authorityName="Disney." box="[320,514,1018,1040]" class="Insecta" family="Phoridae" genus="Megaselia" kingdom="Animalia" order="Diptera" pageId="1" pageNumber="98" phylum="Arthropoda" rank="species" species="alius">
