<taxonomicName id="10EFBA2E3E4E52C2DDBAC54C5D32B4E0" class="Insecta" family="Zygaenidae" genus="Zygaena" higherTaxonomySource="CoL" kingdom="Animalia" lsidName="Zygaena rhadamanthus subsp. aragonia" order="Lepidoptera" pageId="5" pageNumber="128" phylum="Arthropoda" rank="subSpecies" species="rhadamanthus" subSpecies="aragonia">Zygaena rhadamanthus aragonia</taxonomicName>
