</bibRefCitation>
). 
<taxonomicName authorityName="Stephensen" authorityYear="1947" box="[189,418,1922,1948]" class="Malacostraca" family="Epimeriidae" genus="Epimeria" higherTaxonomySource="GBIF" kingdom="Animalia" order="Amphipoda" pageId="157" pageNumber="158" phylum="Arthropoda" rank="species" species="monodon">
