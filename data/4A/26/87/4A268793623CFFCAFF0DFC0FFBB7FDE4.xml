<typeStatus box="[151,204,1014,1038]" pageId="1" pageNumber="136">Type</typeStatus>
species
</emphasis>
. 
<taxonomicName authority="Alekseev &amp; Vitali, 2020" authorityName="Alekseev &amp; Vitali" authorityYear="2020" box="[298,542,1014,1038]" class="Insecta" family="Cerambycidae" genus="Acanthoglyptus" kingdom="Animalia" order="Coleoptera" pageId="1" pageNumber="136" phylum="Arthropoda" rank="species" species="picollus" status="sp. nov.">
