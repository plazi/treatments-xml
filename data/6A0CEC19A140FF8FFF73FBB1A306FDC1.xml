<taxonomicName id="25A5268CA14EFF8EFC82F9E4A3D1F9EF" box="[870,1171,1578,1601]" class="Insecta" family="Lycaenidae" genus="Mesene" kingdom="Animalia" order="Lepidoptera" pageId="8" pageNumber="49" phylum="Arthropoda" rank="subSpecies" species="margaretta" subSpecies="anartia">
