SPECIES: 
<taxonomicName id="D6956CACCE78FFC0FEE5C9E3596857C8" authority="Moure and Camargo" authorityName="Moure and Camargo" box="[352,840,1223,1249]" class="Insecta" family="Apidae" genus="Leurotrigona" kingdom="Animalia" order="Hymenoptera" pageId="5" phylum="Arthropoda" rank="species" species="pusilla">
