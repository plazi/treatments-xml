<emphasis id="23E1CB3DCE7BFFC3FE1DCCF1587F52DA" box="[408,607,473,499]" italics="true" pageId="6">Trigonisca pusilla</emphasis>
</taxonomicName>
(
<collectingCountry id="698257BFCE7BFFC3FDE8CCF2589552DA" box="[621,693,473,499]" name="Brazil" pageId="6">Brazil</collectingCountry>
, 
<collectingCountry id="698257BFCE7BFFC3FD3ACCF2594E52DA" box="[703,878,473,499]" name="French Guiana" pageId="6">French Guiana</collectingCountry>
, 
<collectingCountry id="698257BFCE7BFFC3FCFDCCF1599052DD" box="[888,944,474,500]" name="Peru" pageId="6">Peru</collectingCountry>
) and 
<taxonomicName id="D6956CACCE7BFFC3FC74CCF15E4952DA" box="[1009,1129,473,500]" class="Insecta" family="Apidae" genus="Trigonisca" kingdom="Animalia" order="Hymenoptera" pageId="6" phylum="Arthropoda" rank="species" species="crispula">
<emphasis id="23E1CB3DCE7BFFC3FC74CCF15E2352DA" box="[1009,1027,474,499]" italics="true" pageId="6">T</emphasis>
