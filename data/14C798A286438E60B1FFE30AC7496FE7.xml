<taxonomicName id="C375A03AB40C8C8D8172381FB729D3D8" authority="Latreille, 1806" authorityName="Latreille" authorityYear="1806" class="Insecta" family="Chrysididae" genus="Hedychrum" higherTaxonomySource="GBIF" kingdom="Animalia" lsidName="Hedychrum nobile" order="Hymenoptera" pageId="62" pageNumber="63" phylum="Arthropoda" rank="species" species="nobile">Hedychrum nobile</taxonomicName>
