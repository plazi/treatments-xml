<taxonomicName id="7A860D7318E3B4B06752471EB1B964C5" authority="Latreille, 1806" authorityName="Latreille" authorityYear="1806" class="Insecta" family="Chrysididae" genus="Hedychrum" higherTaxonomySource="GBIF" kingdom="Animalia" lsidName="Hedychrum rutilans" order="Hymenoptera" pageId="62" pageNumber="63" phylum="Arthropoda" rank="species" species="rutilans">Hedychrum rutilans</taxonomicName>
