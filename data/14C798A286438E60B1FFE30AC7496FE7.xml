<taxonomicName id="7C8DEEB032A7B27E14D991714FC3591E" authority="Latreille, 1806" authorityName="Latreille" authorityYear="1806" class="Insecta" family="Chrysididae" genus="Hedychrum" higherTaxonomySource="GBIF" kingdom="Animalia" lsidName="Hedychrum alterum" order="Hymenoptera" pageId="62" pageNumber="63" phylum="Arthropoda" rank="species" species="alterum">Hedychrum alterum</taxonomicName>
