<taxonomicName id="4C1228B535629971FDDFFDFB2A07EE67" box="[529,616,592,615]" class="Liliopsida" family="Eriocaulaceae" genus="Eriocaulon" kingdom="Plantae" order="Poales" pageId="2" pageNumber="190" phylum="Tracheophyta" rank="species" species="goaense">
