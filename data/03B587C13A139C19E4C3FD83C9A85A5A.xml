<quantity id="4CE49B323A139C19E02AFD5BC8815D53" box="[1150,1205,767,788]" metricMagnitude="-3" metricUnit="m" metricValue="2.0" pageId="2" pageNumber="509" unit="mm" value="2.0">2 mm</quantity>
in height (
<figureCitation id="13272A523A139C19E149FD5BC9505D52" box="[1309,1380,767,789]" captionStart="FIGURE 4" captionStartId="10.[151,250,1123,1147]" captionTargetBox="[159,1424,219,1068]" captionTargetId="figure-31@10.[151,1436,181,1099]" captionTargetPageId="10" captionText="FIGURE 4. Habitus of Brachycerocoris davidii sp. nov. a, Habitus (dorsal); b, Habitus (lateral); c, Habitus (ventral). Lettering: mt–mandibular plate tubercle. Scale bar equals 1 mm." figureDoi="http://doi.org/10.5281/zenodo.5531714" httpUri="https://zenodo.org/record/5531714/files/figure.png" pageId="2" pageNumber="509">Fig. 4b</figureCitation>
)......................................................... 
<taxonomicName id="4C1C4D543A139C19E728FCB8C97E5D75" authority="Roca-Cusachs &amp; Salini" authorityName="Roca-Cusachs &amp; Salini" authorityYear="2021" box="[892,1354,796,818]" class="Insecta" family="Plataspidae" genus="Brachycerocoris" higherTaxonomySource="GBIF" kingdom="Animalia" order="Hemiptera" pageId="2" pageNumber="509" phylum="Arthropoda" rank="species" species="davidii" status="sp. nov.">
