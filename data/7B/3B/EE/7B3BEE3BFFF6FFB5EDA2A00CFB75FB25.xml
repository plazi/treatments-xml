<taxonomicName authorityName="Baker" authorityYear="1914" box="[805,942,1123,1147]" class="Insecta" family="Cicadellidae" genus="Makilingia" higherTaxonomySource="GBIF" kingdom="Animalia" order="Hemiptera" pageId="8" pageNumber="481" phylum="Arthropoda" rank="species" species="colorata">
