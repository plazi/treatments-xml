<taxonomicName authorityName="Dietrich &amp; Zahniser" authorityYear="2019" box="[1005,1119,1123,1147]" class="Insecta" family="Cicadellidae" genus="Makilingia" higherTaxonomySource="GBIF" kingdom="Animalia" order="Hemiptera" pageId="8" pageNumber="481" phylum="Arthropoda" rank="species" species="lobata">
