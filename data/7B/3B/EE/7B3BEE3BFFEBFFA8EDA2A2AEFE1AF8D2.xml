<taxonomicName authorityName="Baker" authorityYear="1924" box="[634,817,1800,1824]" class="Insecta" family="Cicadellidae" genus="Makilingia" higherTaxonomySource="GBIF" kingdom="Animalia" order="Hemiptera" pageId="21" pageNumber="494" phylum="Arthropoda" rank="species" species="tettigonoides">
