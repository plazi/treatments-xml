<number id="39290805FFBCFFA7FF733EC3FEF5EF8D" box="[245,260,1727,1751]" pageId="9" pageNumber="50" value="5.0">5</number>
.
</emphasis>
Figs. 
<number id="39290805FFBCFFA7FECB3EC3FE62EF8C" box="[333,403,1727,1750]" pageId="9" pageNumber="50" value="53.5" valueMax="55.0" valueMin="52.0">52–55</number>
. 
<taxonomicName id="48E161A1FFBCFFA7FE193EBCFD45EF8D" box="[415,692,1728,1751]" class="Insecta" family="Reduviidae" genus="Brontostoma" higherTaxonomySource="GBIF" kingdom="Animalia" order="Hemiptera" pageId="9" pageNumber="50" phylum="Arthropoda" rank="species" species="doughertyae">
<emphasis id="BD95C630FFBCFFA7FE193EBCFD45EF8D" box="[415,692,1728,1751]" italics="true" pageId="9" pageNumber="50">Brontostoma doughertyae</emphasis>
</taxonomicName>
, female, 
<number id="39290805FFBCFFA7FC9C3EC3FCAEEF8C" box="[794,863,1727,1750]" pageId="9" pageNumber="50" value="53.0" valueMax="54.0" valueMin="52.0">52–54</number>
, legs, lateral view, 
<number id="39290805FFBCFFA7FBA93EC3FBBDEF8C" box="[1071,1100,1727,1750]" pageId="9" pageNumber="50" value="52.0">52</number>
, fore leg, 
<number id="39290805FFBCFFA7FB3C3EC3FB26EF8C" box="[1210,1239,1727,1750]" pageId="9" pageNumber="50" value="53.0">53</number>
