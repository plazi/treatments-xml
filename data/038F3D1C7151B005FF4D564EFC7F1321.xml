<emphasis id="B95250187152B005FF7850A8FE9011DD" bold="true" box="[189,321,158,184]" pageId="3" pageNumber="109">Ecology:—</emphasis>
<materialsCitation id="3B4E86577152B005FE8750A8FB7411DD" ID-GBIF-Occurrence="3329680305" box="[322,1189,158,185]" elevation="250" location="In forest" pageId="3" pageNumber="109" specimenCount="500">
<location id="8EF9DAD17152B005FE8750A8FE7111DD" LSID="urn:lsid:plazi:treatment:038F3D1C7151B005FF4D564EFC7F1321:8EF9DAD17152B005FE8750A8FE7111DD" box="[322,416,158,184]" name="In forest" pageId="3" pageNumber="109">In forest</location>
