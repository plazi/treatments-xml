<quantity box="[530,622,1648,1675]" metricMagnitude="-3" metricUnit="m" metricValue="6.3" pageId="31" pageNumber="78" unit="mm" value="6.3">6.3 mm</quantity>
; antenna length 
<quantity box="[811,904,1648,1675]" metricMagnitude="-3" metricUnit="m" metricValue="1.3" pageId="31" pageNumber="78" unit="mm" value="1.3">1.3 mm</quantity>
; wing length 
<quantity box="[1060,1152,1648,1675]" metricMagnitude="-3" metricUnit="m" metricValue="5.2" pageId="31" pageNumber="78" unit="mm" value="5.2">5.2 mm</quantity>
