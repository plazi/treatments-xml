<quantity box="[530,622,1448,1475]" metricMagnitude="-3" metricUnit="m" metricValue="5.9" pageId="13" pageNumber="60" unit="mm" value="5.9">5.9 mm</quantity>
; antenna length 
<quantity box="[811,904,1449,1475]" metricMagnitude="-3" metricUnit="m" metricValue="3.2" pageId="13" pageNumber="60" unit="mm" value="3.2">3.2 mm</quantity>
; wing length 
<quantity box="[1060,1152,1448,1475]" metricMagnitude="-3" metricUnit="m" metricValue="5.9" pageId="13" pageNumber="60" unit="mm" value="5.9">5.9 mm</quantity>
