<paragraph id="006D369CFF83FFB676D85035FD5CD1BA" blockId="33.[151,1436,882,1428]" pageId="33" pageNumber="34">
<emphasis id="32A6EA8EFF83FFB676D85035FEE5D16A" bold="true" box="[197,277,1322,1348]" pageId="33" pageNumber="34">Notes:</emphasis>
<taxonomicName id="C7D24D1FFF83FFB677015034FE3ED16A" authorityName="Foley &amp; Ivie" authorityYear="2008" baseAuthorityName="Foley &amp; Ivie" baseAuthorityYear="2008" box="[284,462,1323,1348]" class="Insecta" family="Zopheridae" genus="Sesaspis" higherTaxonomySource="GBIF" kingdom="Animalia" order="Coleoptera" pageId="33" pageNumber="34" phylum="Arthropoda" rank="species" species="lutosa">
<emphasis id="32A6EA8EFF83FFB677015034FE3ED16A" box="[284,462,1323,1348]" italics="true" pageId="33" pageNumber="34">Sesaspis lutosa</emphasis>
</taxonomicName>
apparently replaces 
<taxonomicName id="C7D24D1FFF83FFB674DD5034FCB5D16A" authorityName="Foley &amp; Ivie" authorityYear="2008" baseAuthorityName="Garcia-Paris, Coca-Abia, &amp; Parra-Olea" baseAuthorityYear="2008" box="[704,837,1323,1348]" class="Insecta" family="Zopheridae" genus="Sesaspis" higherTaxonomySource="GBIF" kingdom="Animalia" order="Coleoptera" pageId="33" pageNumber="34" phylum="Arthropoda" rank="species" species="sylvatica">
<emphasis id="32A6EA8EFF83FFB674DD5034FCB5D16A" box="[704,837,1323,1348]" italics="true" pageId="33" pageNumber="34">S. sylvatica</emphasis>
</taxonomicName>
