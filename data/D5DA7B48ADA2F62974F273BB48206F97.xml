<paragraph id="534FD31ADC1811ED7924E112ED690EB4" pageId="5" pageNumber="66">
<taxonomicName id="EF2956C8B20647915B0B861630D02A90" class="Insecta" family="Lycaenidae" genus="Apodemia" higherTaxonomySource="CoL" kingdom="Animalia" lsidName="Apodemia walkeri" order="Lepidoptera" pageId="5" pageNumber="66" phylum="Arthropoda" rank="species" species="walkeri">Apodemia walkeri</taxonomicName>
