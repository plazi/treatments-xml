<subSubSection type="reference_group">
<paragraph pageId="23" pageNumber="24">
<taxonomicName class="Arachnida" family="Cosmochthoniidae" genus="Cosmochthonius" kingdom="Animalia" order="Sarcoptiformes" pageId="23" pageNumber="24" phylum="Arthropoda" rank="subGenus" subGenus="Pterochthonius">Pterochthonius</taxonomicName>
