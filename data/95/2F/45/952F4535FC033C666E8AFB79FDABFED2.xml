<collectingRegion box="[720,812,1504,1530]" country="United States of America" name="Arizona" pageId="13" pageNumber="28">Arizona</collectingRegion>
. 
<typeStatus box="[821,928,1504,1530]" pageId="13" pageNumber="28">Holotype</typeStatus>
