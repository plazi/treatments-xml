<paragraph id="05BA60E06CA227D415698692161A8F7E" pageId="33" pageNumber="84">
<taxonomicName id="AA2C9EB26A1530958BF78986CCA96F77" LSID="http://zoobank.org/81764A75-CF49-4AB8-977F-497F56F9A6DA" authority="Roques &amp; Copeland" class="Insecta" family="Torymidae" genus="Megastigmus" higherTaxonomySource="CoL" kingdom="Animalia" lsidName="Megastigmus laventhali" order="Hymenoptera" pageId="33" pageNumber="84" phylum="Arthropoda" rank="species" species="laventhali">Megastigmus laventhali Roques &amp; Copeland</taxonomicName>
<taxonomicNameLabel id="9354E64E06476C724A6A4B4AA3A79468" pageId="33" pageNumber="84">sp. n.</taxonomicNameLabel>
