<emphasis bold="true" pageId="0" pageNumber="183">47</emphasis>
<taxonomicName authorityName="Latreille" authorityYear="1811" class="Insecta" family="Asteraceae" genus="Panurgus" higherTaxonomySource="CoL" kingdom="Animalia" lsidName="Panurgus (Pachycephalopanurgus) canescens" order="Hymenoptera" pageId="0" pageNumber="183" phylum="Arthropoda" rank="species" species="canescens" subGenus="Pachycephalopanurgus">Panurgus (Pachycephalopanurgus) canescens</taxonomicName>
