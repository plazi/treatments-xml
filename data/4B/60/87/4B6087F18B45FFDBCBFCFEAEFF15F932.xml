and 
<location LSID="urn:lsid:plazi:treatment:4B6087F18B45FFDBCBFCFEAEFF15F932:C616603C8B5AFFDBC8DEFB79FCCCFAB3" box="[667,805,1276,1300]" country="France" county="Mediterranean" municipality="Banyuls-sur-Mer" name="Cap Abeille" pageId="16" pageNumber="622">Cap Abeille</location>
near 
