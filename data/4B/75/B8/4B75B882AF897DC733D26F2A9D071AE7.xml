<paragraph pageId="10" pageNumber="11">
<taxonomicName LSID="817921" authority="Miettinen" class="Agaricomycetes" family="Polyporaceae" genus="Hapalopilus" higherTaxonomySource="CoL" kingdom="Fungi" lsidName="Hapalopilus percoctus" order="Polyporales" pageId="10" pageNumber="11" phylum="Basidiomycota" rank="species" species="percoctus">Hapalopilus percoctus Miettinen</taxonomicName>
