<taxonomicName id="CEB415A85BAC303E642C00E09D064A56" LSID-HNS="urn:lsid:biosci.ohio-state.edu:osuc_concepts:182017" class="Insecta" family="Formicidae" genus="Pheidole" higherTaxonomySource="CoL" kingdom="Animalia" lsidName="Pheidole brunnescens Santschi" lsidName-HNS="Pheidole brunnescens Santschi" order="Hymenoptera" pageNumber="769" phylum="Arthropoda" rank="species" species="brunnescens">brunnescens</taxonomicName>
