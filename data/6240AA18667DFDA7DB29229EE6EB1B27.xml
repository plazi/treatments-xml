<taxonomicName id="018CA8E9CEAB1A63594AF289BD6898D2" LSID-HNS="urn:lsid:biosci.ohio-state.edu:osuc_concepts:24837" class="Insecta" family="Formicidae" genus="Hypoponera" kingdom="Animalia" lsidName-HNS="Hypoponera Santschi" order="Hymenoptera" pageNumber="31" phylum="Arthropoda" rank="genus">Hypoponera Santschi</taxonomicName>
