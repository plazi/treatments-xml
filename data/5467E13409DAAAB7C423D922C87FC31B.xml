<paragraph id="CF5BDF3E02DDFE792DBBF9C729231F90" pageId="6" pageNumber="7">
Genus 
<taxonomicName id="B0C6011F13FF568AB6A97C84ED569DF1" LSID="urn:lsid:zoobank.org:act:2DD0A279-EB93-4EAC-81C4-33C8B798E41B" authority="Mathis &amp; Zatwarnicki, 2012" authorityName="Mathis &amp; Zatwarnicki" authorityYear="2012" class="Insecta" family="Ephydridae" genus="Facitrichophora" higherTaxonomySource="GBIF" kingdom="Animalia" lsidName="Facitrichophora" order="Diptera" pageId="6" pageNumber="7" phylum="Arthropoda" rank="genus">Facitrichophora</taxonomicName>
