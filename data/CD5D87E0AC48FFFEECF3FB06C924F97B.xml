<taxonomicName id="82F44D75AC48FFFEE868FB4ECCA2FB73" authority="Diaz, 1986" authorityName="Diaz" authorityYear="1986" box="[1036,1268,1229,1252]" class="Insecta" family="Figitidae" genus="Aegilips" higherTaxonomySource="GBIF" kingdom="Animalia" order="Hymenoptera" pageId="1" pageNumber="17" phylum="Arthropoda" rank="genus">
