<taxonomicName id="F8C9E9026181733DBDE7CD032C59BB4C" authorityName="J. Jaram. &amp; J. E. Guevara" authorityYear="2020" class="Magnoliopsida" family="Elaeocarpaceae" genus="Sloanea" higherTaxonomySource="CoL" kingdom="Plantae" lsidName="Sloanea cayapensis" order="Oxalidales" pageId="0" pageNumber="131" phylum="Tracheophyta" rank="species" species="cayapensis">
<emphasis id="A37D15B3D6C438C7F145B59BA86C9639" italics="true" pageId="0" pageNumber="131">Sloanea cayapensis</emphasis>
</taxonomicName>
J. Jaramillo ex J.E. Guevara, sp. nov. (red squares), 
<taxonomicName id="BA6B0B54E0D1690FF8CE59D9AFFDD9DA" authorityName="Rusby" authorityYear="1927" class="Magnoliopsida" family="Elaeocarpaceae" genus="Sloanea" higherTaxonomySource="CoL" kingdom="Plantae" lsidName="Sloanea fragrans" order="Oxalidales" pageId="0" pageNumber="131" phylum="Tracheophyta" rank="species" species="fragrans">
<emphasis id="D85DB02AFF4342921CE5FB0885B5AF4C" italics="true" pageId="0" pageNumber="131">Sloanea fragrans</emphasis>
</taxonomicName>
Rusby (black circles) and 
<taxonomicName id="07EB6607D58D91F3787BBD9AE6F879DB" class="Magnoliopsida" family="Elaeocarpaceae" genus="Sloanea" higherTaxonomySource="CoL" kingdom="Plantae" lsidName="Sloanea grandiflora" order="Oxalidales" pageId="0" pageNumber="131" phylum="Tracheophyta" rank="species" species="grandiflora">
<emphasis id="13F0D54C93856AED3D18C8FC59B7C2FD" italics="true" pageId="0" pageNumber="131">Sloanea grandiflora</emphasis>
