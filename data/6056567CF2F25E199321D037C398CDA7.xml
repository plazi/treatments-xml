<taxonomicName id="77F955D311BCD38F1D5AF790AA0FE2C4" authorityName="J. Jaram. &amp; J. E. Guevara" authorityYear="2020" class="Magnoliopsida" family="Elaeocarpaceae" genus="Sloanea" higherTaxonomySource="CoL" kingdom="Plantae" lsidName="Sloanea cayapensis" order="Oxalidales" pageId="0" pageNumber="131" phylum="Tracheophyta" rank="species" species="cayapensis">
<emphasis id="26F5927AC99304BFC80F38CDE798ECFE" italics="true" pageId="0" pageNumber="131">Sloanea cayapensis</emphasis>
</taxonomicName>
