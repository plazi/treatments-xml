<paragraph pageId="0" pageNumber="1">Comments.</paragraph>
<paragraph pageId="0" pageNumber="1">
<taxonomicName class="Insecta" family="Gelsemiaceae" genus="Phytomyza" higherTaxonomySource="CoL" kingdom="Animalia" lsidName="Phytomyza ilicicola" order="Diptera" pageId="0" pageNumber="1" phylum="Arthropoda" rank="species" species="ilicicola">
<emphasis italics="true" pageId="0" pageNumber="1">Phytomyza ilicicola</emphasis>
</taxonomicName>
