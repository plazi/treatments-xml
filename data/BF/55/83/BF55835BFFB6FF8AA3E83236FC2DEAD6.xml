, 
<taxonomicName authority="Boulenger 1887" authorityName="Boulenger" authorityYear="1887" box="[936,1431,1576,1600]" class="Actinopterygii" family="Characidae" genus="Bryconamericus" kingdom="Animalia" order="Characiformes" pageId="2" pageNumber="49" phylum="Chordata" rank="species" species="iheringii">
