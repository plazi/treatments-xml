<heading id="D0DC8840FF9B9E56FF4C8B273FC17289" bold="true" box="[151,395,1904,1930]" fontSize="11" level="1" pageId="9" pageNumber="192" reason="1">
<emphasis id="B95FE33EFF9B9E56FF4C8B273FC17289" bold="true" box="[151,395,1904,1930]" pageId="9" pageNumber="192">
<taxonomicName id="4C2B44AFFF9B9E56FF4C8B273F737289" box="[151,313,1904,1930]" class="Insecta" family="Phlaeothripidae" genus="Buffettithrips" kingdom="Animalia" order="Thysanoptera" pageId="9" pageNumber="192" phylum="Arthropoda" rank="genus" status="gen.n.">
<emphasis id="B95FE33EFF9B9E56FF4C8B273F737289" bold="true" box="[151,313,1904,1930]" italics="true" pageId="9" pageNumber="192">Buffettithrips</emphasis>
</taxonomicName>
<taxonomicNameLabel id="A26C5E45FF9B9E56FE9B8B273FC17289" box="[320,395,1904,1930]" pageId="9" pageNumber="192" rank="genus">gen.n.</taxonomicNameLabel>
