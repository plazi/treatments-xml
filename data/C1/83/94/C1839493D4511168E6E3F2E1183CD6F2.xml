<paragraph pageId="39" pageNumber="40">
<taxonomicName class="Demospongiae" family="Thorectidae" genus="Cacospongia" higherTaxonomySource="CoL" kingdom="Animalia" lsidName="Cacospongia scalaris" order="Dictyoceratida" pageId="39" pageNumber="40" phylum="Porifera" rank="species" species="scalaris">Cacospongia scalaris</taxonomicName>
