/ 
<taxonomicName box="[1158,1249,356,382]" class="Mammalia" family="Miniopteridae" genus="Miniopterus" kingdom="Animalia" order="Chiroptera" pageId="26" pageNumber="438" phylum="Chordata" rank="species" species="pusillus">
<emphasis box="[1158,1249,356,382]" italics="true" pageId="26" pageNumber="438">pusillus</emphasis>
</taxonomicName>
, 
<taxonomicName baseAuthorityName="Gould" baseAuthorityYear="1854" class="Mammalia" family="Hipposideridae" genus="Hipposideros" kingdom="Animalia" order="Chiroptera" pageId="26" pageNumber="438" phylum="Chordata" rank="species" species="cervinus">
<emphasis italics="true" pageId="26" pageNumber="438">Hipposideros cervinus</emphasis>
</taxonomicName>
, and 
<taxonomicName baseAuthorityName="Temminck" baseAuthorityYear="1840" box="[987,1199,390,416]" class="Mammalia" family="Vespertilionidae" genus="Myotis" kingdom="Animalia" order="Chiroptera" pageId="26" pageNumber="438" phylum="Chordata" rank="species" species="horsfieldii">
<emphasis box="[987,1199,390,416]" italics="true" pageId="26" pageNumber="438">Myotis horsfieldii</emphasis>
