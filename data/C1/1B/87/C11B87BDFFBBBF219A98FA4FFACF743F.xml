, 
<taxonomicName class="Mammalia" family="Miniopteridae" genus="Miniopterus" kingdom="Animalia" order="Chiroptera" pageId="26" pageNumber="438" phylum="Chordata" rank="species" species="pusillus">
<emphasis italics="true" pageId="26" pageNumber="438">M. pusillus</emphasis>
</taxonomicName>
, 
<taxonomicName baseAuthorityName="van Strien" baseAuthorityYear="1996" box="[901,1150,356,382]" class="Mammalia" family="Rhinolophidae" genus="Rhinolophus" kingdom="Animalia" order="Chiroptera" pageId="26" pageNumber="438" phylum="Chordata" rank="species" species="lepidus">
<emphasis box="[901,1150,356,382]" italics="true" pageId="26" pageNumber="438">Rhinolophus lepidus</emphasis>
