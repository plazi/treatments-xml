<taxonomicName authorityName="Benedek &amp; Volynkin &amp; Babics &amp; Saldaitis" authorityYear="2021" baseAuthorityName="Moore" baseAuthorityYear="1881" box="[248,406,151,177]" class="Insecta" family="Noctuidae" genus="Polymixis" kingdom="Animalia" order="Lepidoptera" pageId="3" pageNumber="25" phylum="Arthropoda" rank="species" species="albosignata">
