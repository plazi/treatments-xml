<taxonomicName class="Magnoliopsida" family="Fabaceae" genus="Delonix" higherTaxonomySource="CoL" kingdom="Plantae" lsidName="Delonix regia" order="Fabales" pageId="0" pageNumber="57" phylum="Tracheophyta" rank="species" species="regia">
