<collectingCountry box="[881,948,1977,2003]" name="Japan" pageId="2" pageNumber="125">Japan</collectingCountry>
, 
<collectingCountry box="[962,1033,1977,2003]" name="South Korea" pageId="2" pageNumber="125">Korea</collectingCountry>
, 
<collectingCountry box="[1047,1105,1976,2002]" name="India" pageId="2" pageNumber="125">India</collectingCountry>
to 
<collectingCountry box="[1146,1276,1976,2002]" name="Philippines" pageId="2" pageNumber="125">Philippines</collectingCountry>
; Middle East, Africa, 
<collectingCountry box="[237,372,2012,2038]" name="Madagascar" pageId="2" pageNumber="125">Madagascar</collectingCountry>
(
<bibRefCitation author="Solovyev, A. V." box="[387,561,2012,2038]" pageId="2" pageNumber="125" pagination="1 - 240" refId="ref6038" refString="Solovyev, A. V. (2014) Parasa Moore auct.: phylogenetic review of the complex from the Palaearctic and Indomalayan regions (Lepidoptera, Limacodidae). Proceedings of the Museum Witt, Munich, 1, 1 - 240." type="journal article" year="2014">Solovyev 2014</bibRefCitation>
