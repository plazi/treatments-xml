<subSubSection box="[199,1112,404,429]" pageId="10" pageNumber="496" type="etymology">
<paragraph blockId="10.[151,1436,151,573]" box="[199,1112,404,429]" pageId="10" pageNumber="496">
<emphasis bold="true" box="[199,334,404,429]" pageId="10" pageNumber="496">Etymology.</emphasis>
