<subSubSection pageId="4" pageNumber="59" type="distribution">
<paragraph blockId="4.[151,1437,151,439]" pageId="4" pageNumber="59">
<emphasis bold="true" box="[199,359,226,252]" pageId="4" pageNumber="59">Distribution.</emphasis>
<collectingCountry box="[366,436,226,252]" name="China" pageId="4" pageNumber="59">China</collectingCountry>
