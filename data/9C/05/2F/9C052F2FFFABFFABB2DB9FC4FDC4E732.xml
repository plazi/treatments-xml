<collectingRegion box="[1254,1390,1303,1329]" country="India" name="Tamil Nadu" pageId="5" pageNumber="61">Tamil Nadu</collectingRegion>
, 
<collectingCountry name="India" pageId="5" pageNumber="61">India</collectingCountry>
.
</paragraph>
</subSubSection>
<subSubSection box="[199,997,1375,1402]" pageId="5" pageNumber="61" type="distribution">
<paragraph blockId="5.[151,1437,259,2014]" box="[199,997,1375,1402]" pageId="5" pageNumber="61">
<emphasis bold="true" box="[199,353,1375,1401]" pageId="5" pageNumber="61">Distribution.</emphasis>
Southern Western Ghats, 
<collectingCountry box="[644,702,1375,1401]" name="India" pageId="5" pageNumber="61">India</collectingCountry>
(
<collectingRegion box="[716,851,1375,1401]" country="India" name="Tamil Nadu" pageId="5" pageNumber="61">Tamil Nadu</collectingRegion>
