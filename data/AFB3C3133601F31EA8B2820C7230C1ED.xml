<geoCoordinate id="587F741BB66494715CA2FB1D986E5B42" degrees="7" direction="south" minutes="21" orientation="latitude" precision="925" value="-7.35">7°21'S</geoCoordinate>
, 
<geoCoordinate id="0C4D8FFE142A3ECE552D0B5BB83DA161" degrees="146" direction="east" minutes="10" orientation="longitude" precision="925" value="146.16667">146°10'E</geoCoordinate>
