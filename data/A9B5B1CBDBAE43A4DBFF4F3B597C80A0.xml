<subSubSection id="EA136072A8D9276D89268356740B5C66" pageId="22" pageNumber="109" type="nomenclature">
<paragraph id="1CFA4A4DF8FBA42D87D04EFC20C896DF" pageId="22" pageNumber="109">
Genus 
<taxonomicName id="08E784EA50F35127C1E45CC5438D22A1" LSID="http://zoobank.org/AAD450AD-FC22-45D8-93D4-B1B6F7C0090D" class="Insecta" family="Carabidae" genus="Nothoderis" higherTaxonomySource="CoL" kingdom="Animalia" lsidName="Nothoderis" order="Coleoptera" pageId="22" pageNumber="109" phylum="Arthropoda" rank="genus">Nothoderis</taxonomicName>
<taxonomicNameLabel id="0A52D14859720A12F376E74FD5A8546B" pageId="22" pageNumber="109">gen. n.</taxonomicNameLabel>
