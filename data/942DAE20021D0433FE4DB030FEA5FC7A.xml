<treatmentCitationGroup id="3C943818021D0433FF64B0A6FE70FCB5" pageId="13" pageNumber="84">
<taxonomicName id="DB8464B5021D0433FF64B0A6FE88FC98" authority="(Forster)" baseAuthorityName="Forster" box="[148,380,756,777]" class="Insecta" family="Brentidae" genus="Exapion" higherTaxonomySource="GBIF" kingdom="Animalia" order="Coleoptera" pageId="13" pageNumber="84" phylum="Arthropoda" rank="species" species="ulicis">
