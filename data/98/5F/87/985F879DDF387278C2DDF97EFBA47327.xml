<taxonomicName authority="Walsingham, 1907" authorityName="Walsingham" authorityYear="1907" box="[472,656,980,1004]" class="Insecta" family="Blastobasidae" genus="Hypatopa" higherTaxonomySource="GBIF" kingdom="Animalia" order="Lepidoptera" pageId="91" pageNumber="92" phylum="Arthropoda" rank="species" species="limae">
