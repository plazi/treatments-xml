<taxonomicName authority="Walsingham, 1907" authorityName="Walsingham" authorityYear="1907" box="[572,607,1888,1911]" class="Insecta" family="Blastobasidae" genus="Hypatopa" higherTaxonomySource="GBIF" kingdom="Animalia" order="Lepidoptera" pageId="140" pageNumber="141" phylum="Arthropoda" rank="species" species="rea">
