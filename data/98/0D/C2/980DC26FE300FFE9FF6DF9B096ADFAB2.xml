<subSubSection pageId="44" pageNumber="43" type="discussion">
<paragraph blockId="44.[192,1441,1218,1306]" pageId="44" pageNumber="43">
<emphasis bold="true" box="[192,311,1218,1242]" pageId="44" pageNumber="43">Remark.</emphasis>
