, 
<collectionCode box="[1045,1127,642,666]" country="New Zealand" httpUri="http://biocol.org/urn:lsid:biocol.org:col:34070" lsid="urn:lsid:biocol.org:col:34070" name="New Zealand Arthropod Collection" pageId="19" pageNumber="18" type="Other institutional type">NZAC</collectionCode>
