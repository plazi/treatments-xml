<taxonomicName id="F4F8A1DDA7B49A3E4E6A7734EF455BC5" class="Insecta" genus="A." kingdom="Animalia" lsidName="A. fasciale" order="Lepidoptera" pageId="0" pageNumber="17" phylum="Arthropoda" rank="species" species="fasciale">
