<taxonomicName id="77210E87B75E5B5C53FA7DB1B7C8D9DB" class="Insecta" genus="A." kingdom="Animalia" lsidName="A. canescens" order="Lepidoptera" pageId="0" pageNumber="17" phylum="Arthropoda" rank="species" species="canescens">
<emphasis id="73FF404583DB0A41405A9FD3DA31541A" italics="true" pageId="0" pageNumber="17">A. canescens</emphasis>
</taxonomicName>
