, 
<taxonomicName id="4C6F1FD6FFA4FFD0FD7AFC50FC8A6DE9" box="[675,789,955,979]" class="Insecta" family="Cerambycidae" genus="Lycidola" kingdom="Animalia" order="Coleoptera" pageId="1" pageNumber="446" phylum="Arthropoda" rank="species" species="retifera">
