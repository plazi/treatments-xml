<taxonomicName id="4C6F1FD6FFA4FFD0FE4FFCA3FD936D5D" box="[406,524,846,871]" class="Insecta" family="Cerambycidae" genus="Lycidola" kingdom="Animalia" order="Coleoptera" pageId="1" pageNumber="446" phylum="Arthropoda" rank="species" species="palliata">
