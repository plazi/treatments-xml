<taxonomicName id="4C6F1FD6FFA4FFD0FCBBFD08FB1B6CC1" authority="Bates, 1866" authorityName="Bates" authorityYear="1866" box="[866,1156,738,763]" class="Insecta" family="Cerambycidae" genus="Lycidola" kingdom="Animalia" order="Coleoptera" pageId="1" pageNumber="446" phylum="Arthropoda" rank="species" species="simulatrix">
<emphasis id="B91BB847FFA4FFD0FCBBFD08FC6C6CC1" box="[866,1011,738,763]" italics="true" pageId="1" pageNumber="446">L. simulatrix</emphasis>
Bates, 1866
</taxonomicName>
, 
<taxonomicName id="4C6F1FD6FFA4FFD0FB49FD08FAE66CC1" authority="Bates, 1872" authorityName="Bates" authorityYear="1872" box="[1168,1401,738,763]" class="Insecta" family="Cerambycidae" genus="Lycidola" kingdom="Animalia" order="Coleoptera" pageId="1" pageNumber="446" phylum="Arthropoda" rank="species" species="beltii">
<emphasis id="B91BB847FFA4FFD0FB49FD08FB776CC1" box="[1168,1256,738,763]" italics="true" pageId="1" pageNumber="446">L. beltii</emphasis>
Bates, 1872
</taxonomicName>
, 
