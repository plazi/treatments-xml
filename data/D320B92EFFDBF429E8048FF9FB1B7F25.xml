<taxonomicName id="9C8973BBFFDBF429E89A8FFAFDF57CEB" authorityName="Bührnheim &amp; Carvalho &amp; Malabarba &amp; Weitzman" authorityYear="2008" box="[444,625,173,197]" class="Actinopterygii" family="Characidae" genus="Amazonspinther" kingdom="Animalia" order="Characiformes" pageId="6" pageNumber="669" phylum="Chordata" rank="genus">
<emphasis id="69FDD42AFFDBF429E89A8FFAFDF57CEB" bold="true" box="[444,625,173,197]" italics="true" pageId="6" pageNumber="669">Amazonspinther</emphasis>
