<taxonomicName id="4C354D76FF89FF94FDAEFF06FC96FF1D" authorityName="Assing" authorityYear="2007" box="[605,796,221,244]" class="Insecta" family="Staphylinidae" genus="Arpedium" higherTaxonomySource="GBIF" kingdom="Animalia" order="Coleoptera" pageId="2" pageNumber="65" phylum="Arthropoda" rank="species" species="ludgeri">
