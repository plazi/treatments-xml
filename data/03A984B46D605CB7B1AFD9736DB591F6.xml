<taxonomicName id="1EAA9C474B361E8614E156CD270514B1" class="Dicotyledoneae" family="Rhamnaceae" genus="Ziziphus" higherTaxonomySource="GBIF" kingdom="Plantae" lsidName="Ziziphus rignonii" order="Rhamnales" pageId="0" pageNumber="17" phylum="Angiospermae" rank="species" species="rignonii">
