<paragraph blockId="11.[136,1452,158,401]" pageId="11" pageNumber="256">
<emphasis bold="true" box="[189,294,158,184]" pageId="11" pageNumber="256">Notes:—</emphasis>
Although 
<taxonomicName box="[408,526,159,184]" class="Dothideomycetes" family="Mycosphaerellaceae" genus="Pseudocercospora" kingdom="Fungi" order="Capnodiales" pageId="11" pageNumber="256" phylum="Ascomycota" rank="species" species="punicae">
