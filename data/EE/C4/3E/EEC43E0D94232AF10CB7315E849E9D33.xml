</subSubSection>
<subSubSection type="reference_group">
<paragraph pageId="41" pageNumber="42">
<taxonomicName authority="C.L.Koch, 1836" authorityName="C.L.Koch" authorityYear="1836" class="Arachnida" family="Phthiracaridae" genus="Hoplophora" higherTaxonomySource="GBIF" kingdom="Animalia" order="Sarcoptiformes" pageId="41" pageNumber="42" phylum="Arthropoda" rank="species" species="anomala">Hoplophora anomala Berlese</taxonomicName>
