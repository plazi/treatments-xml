<paragraph pageId="7" pageNumber="66">Type species.</paragraph>
<paragraph pageId="7" pageNumber="66">
<taxonomicName authority="Schlinger, 2013" authorityName="Schlinger" authorityYear="2013" class="Insecta" family="Acroceridae" genus="Neophilopota" higherTaxonomySource="GBIF" kingdom="Animalia" lsidName="Neophilopota brevirostris" order="Diptera" pageId="7" pageNumber="66" phylum="Arthropoda" rank="species" species="brevirostris">Neophilopota brevirostris</taxonomicName>
