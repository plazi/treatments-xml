<subSubSection id="C37B76BFFF98DD6134C7FAF6FD71FABF" box="[151,707,1301,1327]" pageId="73" pageNumber="74" type="nomenclature">
<paragraph id="8BDE2534FF98DD6134C7FAF6FD71FABF" blockId="73.[151,707,1301,1327]" box="[151,707,1301,1327]" pageId="73" pageNumber="74">
<heading id="D0969258FF98DD6134C7FAF6FD71FABF" bold="true" box="[151,707,1301,1327]" fontSize="11" level="1" pageId="73" pageNumber="74" reason="1">
<emphasis id="B915F926FF98DD6134C7FAF6FD71FABF" bold="true" box="[151,707,1301,1327]" pageId="73" pageNumber="74">
Family 
<taxonomicName id="4C615EB7FF98DD6134A6FAF6FD9FFABF" authority="Zeidler, 2009" authorityName="Zeidler" authorityYear="2009" box="[246,557,1301,1327]" class="Malacostraca" family="Megalanceolidae" kingdom="Animalia" order="Amphipoda" pageId="73" pageNumber="74" phylum="Arthropoda" rank="family" status="new family">MEGALANCEOLIDAE</taxonomicName>
, 
<taxonomicNameLabel id="A226445DFF98DD61366AFAF6FD71FABF" box="[570,707,1301,1327]" pageId="73" pageNumber="74" rank="family">new family</taxonomicNameLabel>
</emphasis>
</heading>
</paragraph>
