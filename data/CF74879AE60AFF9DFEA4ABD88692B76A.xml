</taxonomicName>
<taxonomicNameLabel id="6E9A57E5E604FF9DFF61ADDA85A1B4AB" box="[132,196,694,720]" pageId="24" pageNumber="251" rank="species">n. sp.</taxonomicNameLabel>
with a heigth of 
<quantity id="80259B69E604FF9DFE75ADDA849FB4AB" box="[400,506,694,720]" metricMagnitude="-3" metricUnit="m" metricValue="3.1" pageId="24" pageNumber="251" unit="mm" value="3.1">3.10 mm</quantity>
[
<quantity id="80259B69E604FF9DFDEEADD987D2B4AB" box="[523,695,693,720]" metricMagnitude="-3" metricUnit="m" metricValue="3.175" metricValueMax="3.5" metricValueMin="2.85" pageId="24" pageNumber="251" unit="mm" value="3.175" valueMax="3.5" valueMin="2.85">2.85-3.50 mm</quantity>
] and a diameter of 
<quantity id="80259B69E604FF9DFEEBADBA8410B48B" box="[270,373,726,752]" metricMagnitude="-3" metricUnit="m" metricValue="2.2" pageId="24" pageNumber="251" unit="mm" value="2.2">2.20 mm</quantity>
[
<quantity id="80259B69E604FF9DFE61ADB98748B48B" box="[388,557,725,752]" metricMagnitude="-3" metricUnit="m" metricValue="2.175" metricValueMax="2.3" metricValueMin="2.05" pageId="24" pageNumber="251" unit="mm" value="2.175" valueMax="2.3" valueMin="2.05">2.05-2.30 mm</quantity>
