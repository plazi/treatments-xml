<taxonomicName id="4C7E4BC8F059D87EFC05FB56CD4B7CB5" baseAuthorityName="Weise" baseAuthorityYear="1904" box="[1005,1110,1210,1233]" class="Insecta" family="Chrysomelidae" genus="Blepharidina" higherTaxonomySource="GBIF" kingdom="Animalia" order="Coleoptera" pageId="4" pageNumber="503" phylum="Arthropoda" rank="species" species="scripta">
