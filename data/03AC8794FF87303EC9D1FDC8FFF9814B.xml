<figureCitation id="133E2A07FF87303DCBA7F851FFF08A4E" box="[434,493,2034,2055]" captionStart="Fig" captionStartId="2.[136,171,1395,1416]" captionTargetBox="[136,774,1032,1370]" captionTargetId="figure-241@2.[136,775,1029,1372]" captionTargetPageId="2" captionText="Fig. 3. Mesovelia vittigera Horváth, apterous male, ventral view." pageId="1" pageNumber="54">Fig. 3</figureCitation>
) ..... 
<taxonomicName id="4C054D01FF87303DC830F851FCF28A4E" authority="Horvath Pantai Burung" authorityName="Horvath Pantai Burung" authorityYear="1895" box="[549,751,2034,2055]" class="Insecta" family="Mesoveliidae" genus="Mesovelia" kingdom="Animalia" order="Hemiptera" pageId="1" pageNumber="54" phylum="Arthropoda" rank="species" species="vittigera">
