<collectingRegion id="8654D3B2C1367E4AFB8D1420FAD89A3E" box="[1148,1311,512,538]" country="Argentina" name="Ciudad Autonoma de Buenos Aires" pageId="31" pageNumber="32">Buenos Aires</collectingRegion>
