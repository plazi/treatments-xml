<normalizedToken id="94EEC88709ED6E2873C4BA966C500C8B" originalValue="Plukenet’s">Plukenet's</normalizedToken>
book &quot; 
<taxonomicName id="8A72155B6E40C147DB9DCCFAB819A85E" genus="Amaltheum" lsidName="Amaltheum botanicum" pageId="0" pageNumber="19" rank="species" species="botanicum">Amaltheum botanicum</taxonomicName>
