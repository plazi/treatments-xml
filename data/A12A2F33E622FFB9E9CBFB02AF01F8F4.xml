<taxonomicName id="EE83E5A6E622FFB9EA62FAB2AF75FA93" box="[801,873,1296,1317]" class="Dothideomycetes" family="Capnodiaceae" genus="Scorias" kingdom="Fungi" order="Capnodiales" pageId="5" pageNumber="276" phylum="Ascomycota" rank="genus">
