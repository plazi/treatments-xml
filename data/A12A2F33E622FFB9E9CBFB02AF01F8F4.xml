<taxonomicName id="EE83E5A6E622FFB9E82EF88AAF01F8F4" authority="Haituk &amp; Cheew." authorityName="Haituk &amp; Cheew." box="[365,797,1832,1858]" class="Dothideomycetes" family="Readerielliopsidaceae" genus="Alloscorias" higherTaxonomySource="GBIF" kingdom="Fungi" order="Capnodiales" pageId="5" pageNumber="276" phylum="Ascomycota" rank="species" species="syngonii">
