<taxonomicName id="F85C0655B68F03D0976002041080D8C1" LSID-ZBK="urn:lsid:zoobank.org:act:BCD2FA80-79F3-46AD-856C-5BE9DF05C735" class="Holocephali" family="Chimaeridae" genus="Hydrolagus" higherTaxonomySource="CoL" kingdom="Animalia" lsidName-ZBK="Hydrolagus Gill 1862:331" order="Chimaeriformes" pageNumber="34" phylum="Chordata" rank="genus">Hydrolagus</taxonomicName>
