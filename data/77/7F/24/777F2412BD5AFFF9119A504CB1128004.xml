<taxonomicName authorityName="Luebert &amp; Weigend" authorityYear="2012" box="[506,809,1276,1297]" class="Magnoliopsida" family="Boraginaceae" genus="Heliotropium" kingdom="Plantae" order="Boraginales" pageId="3" pageNumber="38" phylum="Tracheophyta" rank="species" species="pamparomasense">
