(
<quantity box="[159,329,1191,1218]" metricMagnitude="0" metricUnit="m" metricValue="1.8135599999999996" metricValueMax="2.31648" metricValueMin="1.3106399999999998" pageId="46" pageNumber="47" unit="ft" value="5.949999999999999" valueMax="7.6" valueMin="4.3">4,300–7,600 ft</quantity>
