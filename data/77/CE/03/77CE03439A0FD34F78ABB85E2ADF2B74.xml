<taxonomicName class="Hexapoda" family="Carabidae" genus="Platynus" higherTaxonomySource="GBIF" kingdom="Animalia" lsidName="" order="Coleoptera" pageId="781" pageNumber="782" phylum="Arthropoda" rank="species" species="elegans">
