<taxonomicName authority="Reitter, 1889" authorityName="Reitter" authorityYear="1889" box="[372,639,945,971]" class="Insecta" family="Nitidulidae" genus="Meligethes" higherTaxonomySource="GBIF,CoL" kingdom="Animalia" order="Coleoptera" pageId="4" pageNumber="105" phylum="Arthropoda" rank="species" species="auripilis">
