<date id="FFB0104D0306FFC3FE597248C8568D42" box="[489,610,547,569]" pageId="10" pageNumber="11" value="1993-11">Nov. 1993</date>
). 
<typeStatus id="54B5882F0306FFC3FDCC7248C8C68D42" box="[636,754,548,569]" pageId="10" pageNumber="11">Paratypes</typeStatus>
, 
