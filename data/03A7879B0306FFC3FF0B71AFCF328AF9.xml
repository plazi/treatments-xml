<geoCoordinate id="EE3A504A0306FFC3FF4E724FCB568D42" box="[254,354,546,569]" degrees="41" direction="north" minutes="02" orientation="latitude" pageId="10" pageNumber="11" precision="925" value="41.033333">41 °02′N</geoCoordinate>
