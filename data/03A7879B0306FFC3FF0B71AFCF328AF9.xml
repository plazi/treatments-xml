; 
<date id="FFB0104D0306FFC3FE71720CC8028D0D" box="[449,566,608,630]" pageId="10" pageNumber="11" value="1993-08">Aug. 1993</date>
), 
<specimenCount id="9D08FD040306FFC3FDFB720CC8C28D0D" box="[587,758,608,630]" pageId="10" pageNumber="11" type="generic">four specimens</specimenCount>
(NBI6B8, trap 6; 
<geoCoordinate id="EE3A504A0306FFC3FEED7213CBF48DEF" box="[349,448,638,661]" degrees="42" direction="north" minutes="26" orientation="latitude" pageId="10" pageNumber="11" precision="925" value="42.433334">42 °26′N</geoCoordinate>
, 
<geoCoordinate id="EE3A504A0306FFC3FE7F7213C8048DEF" box="[463,560,638,661]" degrees="03" direction="east" minutes="33" orientation="longitude" pageId="10" pageNumber="11" precision="925" value="3.55">03 °33′E</geoCoordinate>
; 
<date id="FFB0104D0306FFC3FD8E7213C8878DEE" box="[574,691,639,661]" pageId="10" pageNumber="11" value="1994-02">Feb. 1994</date>
), 
<specimenCount id="9D08FD040306FFC3FD787213CB318DC8" pageId="10" pageNumber="11" type="generic">four specimens</specimenCount>
(NBI6B11, trap 6; 
<geoCoordinate id="EE3A504A0306FFC3FE5372F2C8728DC8" box="[483,582,668,691]" degrees="42" direction="north" minutes="26" orientation="latitude" pageId="10" pageNumber="11" precision="925" value="42.433334">42 °26′N</geoCoordinate>
, 
<geoCoordinate id="EE3A504A0306FFC3FDE372F2C8818DC8" box="[595,693,668,691]" degrees="03" direction="east" minutes="33" orientation="longitude" pageId="10" pageNumber="11" precision="925" value="3.55">03 °33′E</geoCoordinate>
