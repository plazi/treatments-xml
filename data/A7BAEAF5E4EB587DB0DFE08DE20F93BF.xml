<taxonomicName id="7E90FC9DCCE503D2BF941974CA3986BD" class="Liliopsida" family="Liliaceae" genus="Astelia" higherTaxonomySource="CoL" kingdom="Plantae" lsidName="Astelia argyrocoma" order="Asparagales" pageId="10" pageNumber="115" phylum="Tracheophyta" rank="species" species="argyrocoma">
