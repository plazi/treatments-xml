<taxonomicName id="9F8B6C007945B7D024D7DA412930A0FA" class="Liliopsida" family="Liliaceae" genus="Astelia" higherTaxonomySource="CoL" kingdom="Plantae" lsidName="Astelia menziesiana" order="Asparagales" pageId="10" pageNumber="115" phylum="Tracheophyta" rank="species" species="menziesiana">
