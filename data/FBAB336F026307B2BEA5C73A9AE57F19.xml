<taxonomicName id="5CAC159465D8F7505A9C70C31E15E0D9" authority="L." class="Magnoliopsida" family="Brassicaceae" genus="Alyssum" kingdom="Plantae" order="Brassicales" pageId="null" pageNumber="169" phylum="Tracheophyta" rank="species" species="alpestre">
