<normalizedToken id="D91EEA58BAFFA83BA3A51256498DF59A" originalValue="alpéstre" pageId="null" pageNumber="169">alpestre</normalizedToken>
<authorityName id="0697A7E6674E194AA12BCB2D6F08FC24" pageId="null" pageNumber="169">L.</authorityName>
