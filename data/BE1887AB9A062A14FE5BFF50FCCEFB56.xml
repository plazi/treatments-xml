<collectingRegion id="F475F85F9A062A14FDCEFBBAFD1EFBB6" box="[531,664,1072,1096]" country="Solomon Islands" name="Guadalcanal" pageId="23" pageNumber="752">Guadalcanal</collectingRegion>
