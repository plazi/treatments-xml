<taxonomicName id="F1B14D3E9A062A14FDACFC3BFCCFFC36" authorityName=": BELLAMY" authorityYear="1987" box="[625,841,945,968]" class="Insecta" family="Buprestidae" genus="Nesotrinchus" kingdom="Animalia" order="Coleoptera" pageId="23" pageNumber="752" phylum="Arthropoda" rank="species" species="ignitus">
