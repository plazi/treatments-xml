<taxonomicName id="F1B14D3E9A062A14FEDDFBDBFDA9FB96" authority="Kerr." authorityName="Kerr." box="[256,559,1104,1128]" class="Insecta" family="Buprestidae" genus="Melobasina" kingdom="Animalia" order="Coleoptera" pageId="23" pageNumber="752" phylum="Arthropoda" rank="species" species="fossicollis">
