<quantity id="4C8A39C66F36FFDB0A62F97AFEC9F929" box="[291,377,1722,1749]" metricMagnitude="-2" metricUnit="m" metricValue="1.6" pageId="72" pageNumber="73" unit="mm" value="16.0">16 mm</quantity>
