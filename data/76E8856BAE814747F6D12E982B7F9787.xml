(type species: 
<taxonomicName id="E4AEE8660BB32FC8EC89CD8D97D5C7FA" LSID-ZBK="urn:lsid:zoobank.org:act:E73729B7-A111-4ACE-9ABA-94ADF6BEADB7" class="Actinopterygii" family="Cobitidae" genus="Syncrossus" higherTaxonomySource="CoL" kingdom="Animalia" lsidName-ZBK="Syncrossus berdmorei Blyth 1860:166" order="Cypriniformes" pageNumber="13" phylum="Chordata" rank="species" species="berdmorei">Syncrossus berdmorei Blyth, 1860</taxonomicName>
