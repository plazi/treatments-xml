<taxonomicName authorityName="O.F.Muller" authorityYear="1773" box="[633,721,1541,1566]" class="Trematoda" family="Colepidae" genus="Cercaria" kingdom="Animalia" order="Prostomatida" pageId="25" pageNumber="484" phylum="Platyhelminthes" rank="genus">Cercaria</taxonomicName>
