<collectingCountry box="[448,547,152,176]" name="Hungary" pageId="15" pageNumber="16">Hungary</collectingCountry>
, 
<collectingCountry box="[563,664,151,175]" name="Slovakia" pageId="15" pageNumber="16">Slovakia</collectingCountry>
, 
<collectingCountry box="[679,730,151,175]" name="Italy" pageId="15" pageNumber="16">Italy</collectingCountry>
(Sicilia), 
<collectingCountry box="[851,929,151,175]" name="Russia" pageId="15" pageNumber="16">Russia</collectingCountry>
, North Africa, 
<collectingCountry box="[1111,1192,151,175]" name="Turkey" pageId="15" pageNumber="16">Turkey</collectingCountry>
