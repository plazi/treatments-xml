<taxonomicName class="Insecta" family="Crabronidae" genus="Melinus" higherTaxonomySource="GBIF" kingdom="Animalia" lsidName="Melinus minutiflora" order="Hymenoptera" pageId="56" pageNumber="179" phylum="Arthropoda" rank="species" species="minutiflora">
<emphasis italics="true" pageId="56" pageNumber="179">Melinus minutiflora</emphasis>
