</taxonomicName>
Desv., 
<taxonomicName class="Liliopsida" family="Poaceae" genus="Muhlenbergia" higherTaxonomySource="CoL" kingdom="Plantae" lsidName="Muhlenbergia ciliata" order="Poales" pageId="56" pageNumber="179" phylum="Tracheophyta" rank="species" species="ciliata">
