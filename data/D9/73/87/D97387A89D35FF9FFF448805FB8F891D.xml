<paragraph blockId="7.[151,1436,1980,2034]" pageId="7" pageNumber="262">
<emphasis bold="true" box="[151,340,1980,2003]" pageId="7" pageNumber="262">FIGURES 16–19.</emphasis>
<taxonomicName authority="Ronderos &amp; Spinelli &amp; Grogan, 2017" authorityName="Ronderos &amp; Spinelli &amp; Grogan" authorityYear="2017" box="[347,516,1981,2003]" class="Insecta" family="Ceratopogonidae" genus="Austrohelea" kingdom="Animalia" order="Diptera" pageId="7" pageNumber="262" phylum="Arthropoda" rank="species" species="sirii" status="n. sp.">
<emphasis box="[347,516,1981,2003]" italics="true" pageId="7" pageNumber="262">Austrohelea sirii</emphasis>
</taxonomicName>
<taxonomicNameLabel box="[523,581,1982,2003]" pageId="7" pageNumber="262" rank="species">
<emphasis bold="true" box="[523,581,1982,2003]" pageId="7" pageNumber="262">n. sp.</emphasis>
