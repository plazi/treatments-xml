<taxonomicName id="B1780D402FAFD5A7E0565839A8359318" family="Anacardiaceae" lsidName="" pageId="8" pageNumber="83" rank="family">Anacardiaceae</taxonomicName>
, 
<taxonomicName id="EB6E6E55F4941FF68B6872446D2A18AD" family="Palmae" lsidName="" pageId="8" pageNumber="83" rank="family">Palmae</taxonomicName>
, 
<taxonomicName id="F4ED91062F77AE1FF5186946A2EDEB99" family="Hypericaceae" lsidName="" pageId="8" pageNumber="83" rank="family">Hypericaceae</taxonomicName>
, and 
<taxonomicName id="0AC65BD8B5E9EE0C698760BB8C38BC67" family="Sterculiaceae" lsidName="" pageId="8" pageNumber="83" rank="family">Sterculiaceae</taxonomicName>
.
</paragraph>
</subSubSection>
