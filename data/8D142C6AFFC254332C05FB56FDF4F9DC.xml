and 
<taxonomicName id="C2BDE6FFFFC254332E8AF866FB83F98D" authorityName="Semenov" authorityYear="1890" box="[903,1039,1553,1578]" class="Insecta" family="Buprestidae" genus="Agrilus" kingdom="Animalia" order="Coleoptera" pageId="3" pageNumber="4" phylum="Arthropoda" rank="species" species="laeticeps">
