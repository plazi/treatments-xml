NE 
<taxonomicName id="04E11DB325E5D155A2F0A99087E65BAB" LSID="4FCD9F3C-49AC-5EF9-9FA7-9E4DA97F8A93" authority="Reynolds" authorityName="Reynolds" authorityYear="1937" class="Liliopsida" family="Asphodelaceae" genus="Aloe" higherTaxonomySource="CoL" kingdom="Plantae" lsidName="Aloe dewetii" order="Asparagales" pageId="0" pageNumber="1" phylum="Tracheophyta" rank="species" species="dewetii">Aloe dewetii Reynolds</taxonomicName>
