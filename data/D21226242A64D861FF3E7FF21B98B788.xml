<emphasis id="68CF4B202A64D862FF3E7FF21D5FB132" bold="true" box="[151,604,1789,1815]" pageId="37" pageNumber="38">
8. 
<taxonomicName id="9DBBECB12A64D862FF1D7FF21EAEB132" authorityName="Dejean" authorityYear="1831" box="[180,429,1789,1815]" class="Insecta" family="Carabidae" genus="Calleida" higherTaxonomySource="GBIF" kingdom="Animalia" order="Coleoptera" pageId="37" pageNumber="38" phylum="Arthropoda" rank="species" species="chloroptera">
<emphasis id="68CF4B202A64D862FF1D7FF21EAEB132" bold="true" box="[180,429,1789,1815]" italics="true" pageId="37" pageNumber="38">Calleida chloroptera</emphasis>
</taxonomicName>
