<quantity id="8F59ECC2FFC45777FB3CE577FAA3CA78" box="[1208,1297,1346,1370]" metricMagnitude="3" metricUnit="m" metricValue="1.37922" pageId="3" pageNumber="2" unit="ft" value="4525.0">4525 ft</quantity>
