<paragraph blockId="3.[151,1436,1647,1702]" pageId="3" pageNumber="17">
<emphasis bold="true" box="[151,366,1647,1671]" pageId="3" pageNumber="17">
FIGURE A (
<number box="[296,353,1647,1671]" pageId="3" pageNumber="17" value="9.5" valueMax="10.0" valueMin="9.0">9–10</number>
).
</emphasis>
<taxonomicName box="[373,813,1647,1670]" class="Arachnida" family="Sperchonidae" genus="Sperchon" kingdom="Animalia" order="Trombidiformes" pageId="3" pageNumber="17" phylum="Arthropoda" rank="species" species="beijingensis" status="sp. nov." subGenus="Hispidosperchon">
<emphasis box="[373,473,1647,1670]" italics="true" pageId="3" pageNumber="17">Sperchon</emphasis>
(
<emphasis box="[489,670,1647,1670]" italics="true" pageId="3" pageNumber="17">Hispidosperchon</emphasis>
) 
<emphasis box="[686,813,1647,1670]" italics="true" pageId="3" pageNumber="17">beijingensis</emphasis>
</taxonomicName>
<emphasis bold="true" box="[821,907,1647,1671]" pageId="3" pageNumber="17">
<taxonomicNameLabel box="[821,907,1647,1671]" pageId="3" pageNumber="17" rank="species">sp. nov.</taxonomicNameLabel>
</emphasis>
, Female. 
<number box="[1013,1029,1647,1670]" pageId="3" pageNumber="17" value="9.0">9</number>
. idiosoma, dorsal view; 
<number box="[1291,1320,1647,1670]" pageId="3" pageNumber="17" value="10.0">10</number>
