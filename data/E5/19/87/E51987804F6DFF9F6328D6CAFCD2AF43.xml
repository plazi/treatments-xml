<collectingRegion box="[400,571,1599,1625]" country="Dominican Republic" name="Independencia" pageId="42" pageNumber="43">Independencia</collectingRegion>
and 
<collectingRegion box="[627,724,1599,1625]" country="Dominican Republic" name="La Vega" pageId="42" pageNumber="43">La Vega</collectingRegion>
