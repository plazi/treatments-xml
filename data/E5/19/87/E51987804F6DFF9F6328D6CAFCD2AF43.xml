<quantity box="[1010,1163,1559,1585]" metricMagnitude="3" metricUnit="m" metricValue="1.1" metricValueMax="1.3" metricValueMin="0.9" pageId="42" pageNumber="43" unit="m" value="1100.0" valueMax="1300.0" valueMin="900.0">900–1300 m</quantity>
