<paragraph pageId="0" pageNumber="109">Type species.</paragraph>
<paragraph pageId="0" pageNumber="109">
<taxonomicName authorityName="Brunke" authorityYear="2021" baseAuthorityName="Brunke" baseAuthorityYear="2021" family="Staphylinidae" genus="Fluviphirus" kingdom="Animalia" lsidName="Fluviphirus elevatus" order="Coleoptera" pageId="0" pageNumber="109" rank="species" species="elevatus">
