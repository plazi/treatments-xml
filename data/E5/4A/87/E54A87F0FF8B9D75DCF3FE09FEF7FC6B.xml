<quantity box="[832,970,692,716]" metricMagnitude="-3" metricUnit="m" metricValue="3.8" metricValueMax="3.9" metricValueMin="3.7" pageId="7" pageNumber="42" unit="mm" value="3.8" valueMax="3.9" valueMin="3.7">3.7–3.9 mm</quantity>
