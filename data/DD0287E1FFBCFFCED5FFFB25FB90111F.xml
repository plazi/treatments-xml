</emphasis>
<taxonomicName id="92AB4D74FFBCFFCED5C2FAB0FE391032" authority="(Baker) Parris" authorityName="Parris" baseAuthorityName="Baker" box="[134,486,1286,1310]" class="Polypodiopsida" family="Polypodiaceae" genus="Zygophlebia" higherTaxonomySource="GBIF" kingdom="Plantae" order="Polypodiales" pageId="19" pageNumber="158" phylum="Tracheophyta" rank="species" species="devoluta">
