<paragraph id="551436F7FFBCFFCED5C0FB5AFDB0107F" blockId="19.[130,776,1260,2027]" pageId="19" pageNumber="158">
<taxonomicName id="92AB4D74FFBCFFCED5C0FB5AFDD21028" authority="Rakotondr. &amp; Parris" authorityName="Rakotondr. &amp; Parris" authorityYear="2018" box="[132,525,1260,1284]" class="Polypodiopsida" family="Polypodiaceae" genus="Zygophlebia" higherTaxonomySource="GBIF" kingdom="Plantae" order="Polypodiales" pageId="19" pageNumber="158" phylum="Tracheophyta" rank="species" species="rouxii" status="sp. nov.">
