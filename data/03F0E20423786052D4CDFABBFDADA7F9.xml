<taxonomicName id="4C59289123786053D2A3FABBFB26A01C" baseAuthorityName="Balkwill &amp; Balkwill" baseAuthorityYear="1997" box="[1157,1249,1345,1369]" class="Magnoliopsida" family="Acanthaceae" genus="Barleria" higherTaxonomySource="GBIF" kingdom="Plantae" order="Lamiales" pageId="0" pageNumber="82" phylum="Tracheophyta" rank="genus">
