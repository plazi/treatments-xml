<collectingCountry id="F376C5B9AA321065FF478E8CC382FBA7" box="[150,249,1005,1028]" name="Morocco" pageId="29" pageNumber="124">Morocco</collectingCountry>
, 
<collectingCountry id="F376C5B9AA321065FED58E8CC21AFBA7" box="[260,353,1005,1028]" name="Portugal" pageId="29" pageNumber="124">Portugal</collectingCountry>
