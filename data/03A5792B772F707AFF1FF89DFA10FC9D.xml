<quantity id="4CF465D87729707AFEC0F96EFE2DFCB9" box="[343,407,839,861]" metricMagnitude="-2" metricUnit="m" metricValue="1.3" pageId="4" pageNumber="75" unit="cm" value="1.3">1.3 cm</quantity>
wide; sori distant from the costa, straight or slightly falcate, oblique, 
<quantity id="4CF465D87729707AFBA3F96EFB39FCB9" box="[1076,1155,839,861]" metricMagnitude="-3" metricUnit="m" metricValue="6.0" metricValueMax="7.0" metricValueMin="5.0" pageId="4" pageNumber="75" unit="mm" value="6.0" valueMax="7.0" valueMin="5.0">5–7 mm</quantity>
