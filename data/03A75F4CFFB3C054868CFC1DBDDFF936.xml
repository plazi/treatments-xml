<quantity id="4CF643BFFFB3C05487A5FA07BD26FA09" box="[446,585,1504,1528]" metricMagnitude="-3" metricUnit="m" metricValue="3.3499999999999996" metricValueMax="3.4" metricValueMin="3.3" pageId="2" pageNumber="530" unit="mm" value="3.3499999999999996" valueMax="3.4" valueMin="3.3">3.3–3.4 mm</quantity>
long, 
<number id="3DC6FC7DFFB3C054848DFA07BDD6FA06" box="[662,697,1504,1528]" pageId="2" pageNumber="530" value="0.9">0.9</number>
–1.0 mm wide across eyes. Female 
<quantity id="4CF643BFFFB3C0548247FA38BBDAFA09" box="[1116,1205,1503,1528]" metricMagnitude="-3" metricUnit="m" metricValue="4.5" pageId="2" pageNumber="530" unit="mm" value="4.5">4.5 mm</quantity>
