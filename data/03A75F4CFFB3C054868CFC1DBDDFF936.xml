<taxonomicName id="4C0E95D9FFB3C0548452F98CBD95F97D" authority="Stiller" authorityName="Stiller" box="[585,762,1642,1667]" class="Insecta" family="Cicadellidae" genus="Nicolaus" kingdom="Animalia" order="Hemiptera" pageId="2" pageNumber="530" phylum="Arthropoda" rank="species" species="minor">
<emphasis id="B97A3248FFB3C0548452F98CBDC1F97C" box="[585,686,1643,1666]" italics="true" pageId="2" pageNumber="530">N. minor</emphasis>
Stiller
</taxonomicName>
from 
<collectingCountry id="F319AECAFFB3C0548559F98DBCBCF97D" box="[834,979,1642,1667]" name="South Africa" pageId="2" pageNumber="530">South Africa</collectingCountry>
