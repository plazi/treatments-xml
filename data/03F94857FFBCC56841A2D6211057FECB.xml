<taxonomicName id="4C5082C2FFBAC568407DD0BF12BDFF20" authority="Ramirez-Garcia &amp; Hernandez-Ortiz. The" authorityName="Ramirez-Garcia &amp; Hernandez-Ortiz. The" box="[328,947,223,248]" class="Insecta" family="Ropalomeridae" genus="Ropalomera" kingdom="Animalia" order="Diptera" pageId="5" pageNumber="558" phylum="Arthropoda" rank="species" species="latiforceps">
