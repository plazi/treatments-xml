<taxonomicName id="4C3A4D685B725006FE8FFBE337BB5A44" baseAuthorityName="LeConte" baseAuthorityYear="1848" box="[268,395,1120,1141]" class="Insecta" family="Carabidae" genus="Loxandrus" kingdom="Animalia" order="Coleoptera" pageId="3" pageNumber="148" phylum="Arthropoda" rank="species" species="brevicollis">
