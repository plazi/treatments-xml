<taxonomicName id="98DF4D12FFB20D3D1844FEBB1640FEA0" authorityName="Drake" authorityYear="1957" box="[520,607,295,321]" class="Insecta" family="Gerridae" genus="Brachymetra" kingdom="Animalia" order="Hemiptera" pageId="15" pageNumber="466" phylum="Arthropoda" rank="species" species="furva">
