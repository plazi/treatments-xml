<typeStatus id="54C747F8D433C372FF6DF9F6FEC4F9B9" box="[212,309,1613,1635]" pageId="47" pageNumber="48">holotype</typeStatus>
of 
<taxonomicName id="4C7C82D9D433C372FEDFF9F6FE27F9B8" authority="Klautau &amp; Valentine, 2003" authorityName="Klautau &amp; Valentine" authorityYear="2003" box="[358,470,1613,1634]" class="Calcarea" family="Clathrinidae" genus="Clathrina" kingdom="Animalia" order="Clathrinida" pageId="47" pageNumber="48" phylum="Porifera" rank="species" species="hirsuta" status="sp. nov.">
<emphasis id="B9082548D433C372FEDFF9F6FE27F9B8" box="[358,470,1613,1634]" italics="true" pageId="47" pageNumber="48">C. hirsuta</emphasis>
</taxonomicName>
<taxonomicNameLabel id="A23B9833D433C372FE5DF9F6FDCFF9B8" box="[484,574,1613,1634]" pageId="47" pageNumber="48" rank="species">sp. nov.</taxonomicNameLabel>
