<taxonomicName id="4C72EFA06F2BFFC60FABFBE7FF48FB9F" authority="Marshall, 2019" authorityName="Marshall" authorityYear="2019" class="Insecta" family="Micropezidae" genus="Mesoconius" kingdom="Animalia" order="Diptera" pageId="85" pageNumber="86" phylum="Arthropoda" rank="species" species="nono" status="sp. nov.">
