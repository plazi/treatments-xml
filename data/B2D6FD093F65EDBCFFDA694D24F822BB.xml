<taxonomicName id="D4BFABF0B4135DEE26AB0ADA8A60963F" class="Reptilia" family="Scincidae" genus="Madascincus" higherTaxonomySource="CoL" kingdom="Animalia" lsidName="Madascincus mouroundavae" order="Squamata" pageId="8" pageNumber="265" phylum="Chordata" rank="species" species="mouroundavae">Madascincus mouroundavae</taxonomicName>
