<taxonomicName id="59CEA76CFE0DB6A3523091F8F6F30EA9" class="Reptilia" family="Scincidae" genus="Madascincus" higherTaxonomySource="CoL" kingdom="Animalia" lsidName="Madascincus nanus" order="Squamata" pageId="8" pageNumber="265" phylum="Chordata" rank="species" species="nanus">Madascincus nanus</taxonomicName>
