<taxonomicName id="F4B3E12697A518324781DFDC938B8A98" class="Reptilia" family="Scincidae" genus="Madascincus" higherTaxonomySource="CoL" kingdom="Animalia" lsidName="Madascincus nanus" order="Squamata" pageId="8" pageNumber="265" phylum="Chordata" rank="species" species="nanus">Madascincus nanus</taxonomicName>
