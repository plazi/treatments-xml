<taxonomicName id="99F2926E54DAFA2F2F2E4E74A7F02C57" class="Reptilia" family="Scincidae" genus="Madascincus" higherTaxonomySource="CoL" kingdom="Animalia" lsidName="Madascincus ankodabensis" order="Squamata" pageId="8" pageNumber="265" phylum="Chordata" rank="species" species="ankodabensis">Madascincus ankodabensis</taxonomicName>
