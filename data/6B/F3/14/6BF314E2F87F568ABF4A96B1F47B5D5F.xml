<taxonomicName genus="P." lsidName="P. constricta" pageId="12" pageNumber="101" rank="species" species="constricta">
<emphasis italics="true" pageId="12" pageNumber="101">P. constricta</emphasis>
</taxonomicName>
, 
<taxonomicName genus="P." lsidName="P. eminens" pageId="12" pageNumber="101" rank="species" species="eminens">
<emphasis italics="true" pageId="12" pageNumber="101">P. eminens</emphasis>
