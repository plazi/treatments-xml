<location LSID="urn:lsid:plazi:treatment:6B6087F21B23FF9EFF34FD59FDAB9001:E616603F1B23FF91FF7EFCA8FED592A8" box="[221,274,894,918]" name="Pic's" pageId="71" pageNumber="72" stateProvince="Monaghan">Pic's</location>
