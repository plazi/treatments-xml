<paragraph blockId="24.[151,1436,1906,2002]" pageId="24" pageNumber="25">
<materialsCitation location="Desbrochers des Loges'" pageId="24" pageNumber="25" specimenCount="2" stateProvince="Monaghan" typeStatus="holotype">
