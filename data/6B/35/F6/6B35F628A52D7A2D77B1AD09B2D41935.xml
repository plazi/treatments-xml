<normalizedToken originalValue="Zähnen" pageId="null" pageNumber="107">Zaehnen</normalizedToken>
, am Grunde 
<normalizedToken originalValue="herzförmig" pageId="null" pageNumber="107">herzfoermig</normalizedToken>
