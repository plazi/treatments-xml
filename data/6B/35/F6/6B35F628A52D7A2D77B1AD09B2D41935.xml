<normalizedToken originalValue="Blütenstand" pageId="null" pageNumber="107">Bluetenstand</normalizedToken>
<normalizedToken originalValue="stengelblattähnlich" pageId="null" pageNumber="107">stengelblattaehnlich</normalizedToken>
