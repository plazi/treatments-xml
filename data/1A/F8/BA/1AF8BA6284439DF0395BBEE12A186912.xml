<subSubSection pageId="51" pageNumber="52" type="nomenclature">
<paragraph pageId="51" pageNumber="52">
<taxonomicName LSID="1AF8BA62-8443-9DF0-395B-BEE12A186912" authority="Wight &amp; Arn." authorityName="Wight &amp; Arn." class="Magnoliopsida" family="Combretaceae" genus="Terminalia" higherTaxonomySource="CoL" kingdom="Plantae" lsidName="Terminalia tomentosa" order="Myrtales" pageId="51" pageNumber="52" phylum="Tracheophyta" rank="species" species="tomentosa">
