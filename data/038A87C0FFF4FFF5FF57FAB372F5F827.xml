<quantity id="4CDB9B33FFF4FFF6FB12FA747565FA6F" box="[1234,1307,1447,1468]" metricMagnitude="3" metricUnit="m" metricValue="1.2" pageId="1" pageNumber="24" unit="m" value="1200.0">1200m</quantity>
