<taxonomicName id="4C1FEAC8752FFFDADDA4FC39FB9614FD" authority="E. A. Smith, 1877" authorityName="E. A. Smith" authorityYear="1877" box="[747,1134,942,965]" class="Gastropoda" family="Turridae" genus="Pleurotoma" kingdom="Animalia" order="Neogastropoda" pageId="2" pageNumber="3" phylum="Mollusca" rank="species" species="amicta">
