<collectingRegion id="C405F848543CFFB861BBFE8EFE27FE50" box="[151,397,367,392]" country="Ecuador" name="Chimborazo" pageId="7" pageNumber="8">Chimborazo Province</collectingRegion>
) at altitudes about 
<quantity id="C1399B4F543CFFB8634EFE91FD1DFE5F" box="[610,695,368,392]" metricMagnitude="3" metricUnit="m" metricValue="1.8" pageId="7" pageNumber="8" unit="m" value="1800.0">1800 m</quantity>
