<number id="0E687725FFE6FFAD39B6FD29FF25A0B0" box="[151,180,728,754]" pageId="31" pageNumber="132" value="26.0">26</number>
. 
<taxonomicName id="7FA01E81FFE6FFAD39E2FD26FCA5A0B0" authority="Saylor, 1942" authorityName="Saylor" authorityYear="1942" box="[195,820,727,754]" class="Insecta" family="Melolonthidae" genus="Phyllophaga" kingdom="Animalia" order="Coleoptera" pageId="31" pageNumber="132" phylum="Arthropoda" rank="species" species="apolinaria" subGenus="Phyllophaga">
