<taxonomicName id="1A8CA51CEFCA49EE43B8DAB6D411F350" LSID-ZBK="urn:lsid:zoobank.org:act:58B6D657-3D57-48FA-9133-0C853EBA8BEB" class="Actinopterygii" family="Cobitidae" genus="Botia" higherTaxonomySource="CoL" kingdom="Animalia" lsidName-ZBK="Botia birdi Chaudhuri 1909:339" order="Cypriniformes" pageNumber="5" phylum="Chordata" rank="species" species="birdi">B. birdi</taxonomicName>
