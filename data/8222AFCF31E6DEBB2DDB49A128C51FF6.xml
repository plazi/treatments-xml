, 
<taxonomicName id="ADBE0476C282A5A91D3202ECB3BCE8CB" LSID-ZBK="urn:lsid:zoobank.org:act:E478E722-0D6E-4EA0-B2F5-EBBE735E4B35" class="Actinopterygii" family="Cobitidae" genus="Botia" higherTaxonomySource="CoL" kingdom="Animalia" lsidName-ZBK="Botia dayi Hora 1932:571" order="Cypriniformes" pageNumber="5" phylum="Chordata" rank="species" species="dayi">B. dayi</taxonomicName>
