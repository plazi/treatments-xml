<taxonomicName id="418D4D76FF86FFAAFEA834E3FD6AFB6E" authority="Boulenger, 1906: 441" authorityName="Boulenger" authorityPageNumber="441" authorityYear="1906" box="[305,767,1188,1211]" class="Reptilia" family="Leptotyphlopidae" genus="Glauconia" higherTaxonomySource="GBIF" kingdom="Animalia" order="Squamata" pageId="26" pageNumber="27" phylum="Chordata" rank="species" species="reticulata">
