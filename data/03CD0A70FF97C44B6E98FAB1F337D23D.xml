<collectingCountry id="F373FBF6FF97C44B6F19F9DCF167D330" box="[265,326,1538,1560]" name="Brazil" pageId="8" pageNumber="79">Brazil</collectingCountry>
, 
<collectingRegion id="49A07584FF97C44B6F5FF9DCF1EBD330" box="[335,458,1538,1560]" country="Brazil" name="Pernambuco" pageId="8" pageNumber="79">Pernambuco</collectingRegion>
