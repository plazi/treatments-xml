<specimenCount id="E8EF6ECEFFA6FF8AFD4EFC8F2FCC6702" box="[696,713,793,814]" pageId="28" pageNumber="565" type="female">♀</specimenCount>
<taxonomicName id="39E9DEC4FFA6FF8AFD38FC822EB66705" authority="Rgmt." authorityName="Rougemont" authorityYear="2018" box="[718,947,788,810]" class="Insecta" family="Staphylinidae" genus="Oedichirus" kingdom="Animalia" order="Coleoptera" pageId="28" pageNumber="565" phylum="Arthropoda" rank="species" species="pusillus">Oedichirus pusillus Rgmt.</taxonomicName>
