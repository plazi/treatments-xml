<geoCoordinate id="9BDDC380FFA6FF8AFC7EFD6A2ED9673E" box="[904,988,764,786]" degrees="166" direction="east" minutes="49" orientation="longitude" pageId="28" pageNumber="565" precision="925" value="166.81667">166º49’E</geoCoordinate>
, 
<quantity id="391108A2FFA6FF8AFC13FD6A291C673D" box="[997,1049,764,785]" metricMagnitude="2" metricUnit="m" metricValue="2.8" pageId="28" pageNumber="565" unit="m" value="280.0">280m</quantity>
