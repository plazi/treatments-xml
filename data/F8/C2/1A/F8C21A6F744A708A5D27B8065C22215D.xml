<taxonomicName class="Magnoliopsida" family="Poaceae" genus="P." higherTaxonomySource="GBIF" kingdom="Plantae" lsidName="P. cusickii" order="Poales" pageId="10" pageNumber="111" phylum="Angiospermae" rank="species" species="cusickii">
<emphasis italics="true" pageId="10" pageNumber="111">P. cusickii</emphasis>
</taxonomicName>
