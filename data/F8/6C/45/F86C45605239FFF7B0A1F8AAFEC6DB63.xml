<subSubSection pageId="2" pageNumber="27" type="etymology">
<paragraph blockId="2.[151,1436,152,858]" pageId="2" pageNumber="27">
<emphasis bold="true" box="[197,338,791,817]" pageId="2" pageNumber="27">Etymology.</emphasis>
