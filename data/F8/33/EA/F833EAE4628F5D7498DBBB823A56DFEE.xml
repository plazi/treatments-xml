<taxonomicName genus="C." lsidName="C. qingliangfengicum" pageId="0" pageNumber="111" rank="species" species="qingliangfengicum">
<emphasis italics="true" pageId="0" pageNumber="111">C. qingliangfengicum</emphasis>
</taxonomicName>
