<subSubSection pageId="0" pageNumber="111" type="notes">
<paragraph pageId="0" pageNumber="111">Notes.</paragraph>
<paragraph pageId="0" pageNumber="111">
The genus 
<taxonomicName class="Magnoliopsida" family="Caryophyllaceae" genus="Cerastium" higherTaxonomySource="CoL" kingdom="Plantae" lsidName="Cerastium" order="Caryophyllales" pageId="0" pageNumber="111" phylum="Tracheophyta" rank="genus">
