<paragraph pageId="0" pageNumber="111">
<taxonomicName authorityName="Y. F. Lu, W. Y. Xie &amp; X. F. Jin" authorityYear="2021" class="Magnoliopsida" family="Caryophyllaceae" genus="Cerastium" higherTaxonomySource="CoL" kingdom="Plantae" lsidName="Cerastium huadingense" order="Caryophyllales" pageId="0" pageNumber="111" phylum="Tracheophyta" rank="species" species="huadingense">
