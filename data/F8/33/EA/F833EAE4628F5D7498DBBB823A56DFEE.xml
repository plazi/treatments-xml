<taxonomicName genus="C." lsidName="C. wilsonii" pageId="0" pageNumber="111" rank="species" species="wilsonii">
<emphasis italics="true" pageId="0" pageNumber="111">C. wilsonii</emphasis>
</taxonomicName>
