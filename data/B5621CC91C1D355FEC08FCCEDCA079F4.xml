<taxonomicName id="C69134ECBC1B92FD95B5ECE43E8CF4AF" LSID-ZBK="urn:lsid:zoobank.org:act:4975C897-6F01-44E8-B817-18DE1E17E2E5" class="Actinopterygii" family="Centriscidae" genus="Macroramphosus" higherTaxonomySource="CoL" kingdom="Animalia" lsidName-ZBK="Macroramphosus Lacépède 1803:136" order="Syngnathiformes" pageNumber="60" phylum="Chordata" rank="genus">Macroramphosus</taxonomicName>
