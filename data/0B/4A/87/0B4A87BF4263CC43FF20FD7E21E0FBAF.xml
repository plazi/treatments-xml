<quantity box="[921,1055,753,773]" metricMagnitude="3" metricUnit="m" metricValue="1.1" metricValueMax="1.2" metricValueMin="1.0" pageId="13" pageNumber="178" unit="m" value="1100.0" valueMax="1200.0" valueMin="1000.0">1000-1200 m</quantity>
