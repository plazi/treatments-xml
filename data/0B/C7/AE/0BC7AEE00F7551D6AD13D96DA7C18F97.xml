<paragraph pageId="0" pageNumber="79">
<taxonomicName authorityName="Matsumura" authorityYear="1916" class="Insecta" family="Syrphidae" genus="Merodon" higherTaxonomySource="CoL" kingdom="Animalia" lsidName="Merodon kawamurae" order="Diptera" pageId="0" pageNumber="79" phylum="Arthropoda" rank="species" species="kawamurae">
