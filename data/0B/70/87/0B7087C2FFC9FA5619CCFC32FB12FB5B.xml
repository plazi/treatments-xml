</emphasis>
: 
<taxonomicName authority="Usinger &amp; Matsuda 1959" authorityName="Usinger &amp; Matsuda" authorityYear="1959" box="[306,825,1020,1043]" class="Insecta" family="Aradidae" genus="Barcinus" higherTaxonomySource="GBIF" kingdom="Animalia" order="Hemiptera" pageId="5" pageNumber="6" phylum="Arthropoda" rank="species" species="bhoutanensis">
