<taxonomicName id="98D8EEEA54F1574679281B3D9378BE0B" LSID-ZBK="urn:lsid:zoobank.org:act:A951D80F-6D4D-460E-B509-9E5C2EA0A992" class="Actinopterygii" family="Heptapteridae" genus="Phreatobius" higherTaxonomySource="CoL" kingdom="Animalia" lsidName-ZBK="Phreatobius Goeldi 1905:545" order="Siluriformes" pageNumber="52" phylum="Chordata" rank="genus">Phreatobius Goeldi</taxonomicName>
