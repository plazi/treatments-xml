</taxonomicName>
, 
<taxonomicName id="DBD8D018990B59BD55F0DEAAB3DD5ACC" authorityName="Peckham &amp; Peckham" authorityYear="1894" class="Arachnida" family="Salticidae" genus="Padilla" higherTaxonomySource="CoL" kingdom="Animalia" lsidName="Padilla" order="Araneae" pageId="0" pageNumber="27" phylum="Arthropoda" rank="genus">
