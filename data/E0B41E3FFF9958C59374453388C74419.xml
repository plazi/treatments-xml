<taxonomicName id="49C2EF4B35AF1F0DB8BAED19C4927A2A" authorityName="Thorell" authorityYear="1887" class="Arachnida" family="Salticidae" genus="Epocilla" higherTaxonomySource="GBIF,CoL" kingdom="Animalia" lsidName="Epocilla" order="Araneae" pageId="0" pageNumber="27" phylum="Arthropoda" rank="genus">
