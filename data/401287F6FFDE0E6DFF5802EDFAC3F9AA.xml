<taxonomicName id="0FBB4D63FFDD0E6CFED30626FE74F9CF" authorityName="Baldesi &amp; Vollesen" authorityYear="2022" box="[259,431,1596,1617]" class="Magnoliopsida" family="Acanthaceae" genus="Blepharis" kingdom="Plantae" order="Lamiales" pageId="2" pageNumber="64" phylum="Tracheophyta" rank="species" species="eilensis">
