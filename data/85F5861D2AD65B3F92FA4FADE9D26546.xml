<paragraph id="1ACE7B2D06138FAFB7C7B799E4E21423" pageId="69" pageNumber="70">
<taxonomicName id="E2D49F00375F993E4D8A5672536CF41C" authority="Berlese, 1885" authorityName="Berlese" authorityYear="1885" class="Arachnida" family="Lohmanniidae" genus="Angelia" higherTaxonomySource="GBIF" kingdom="Animalia" order="Oribatida" pageId="69" pageNumber="70" phylum="Arthropoda" rank="species" species="ornatissima">Angelia ornatissima Berlese</taxonomicName>
