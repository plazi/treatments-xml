<taxonomicName id="42854D72FFF3FFB7723A091679DAFB76" authorityName="Siewert &amp; Zacca &amp; Mielke &amp; Casagrande" authorityYear="2016" baseAuthorityName="Evans" baseAuthorityYear="1953" box="[829,1005,1146,1167]" class="Insecta" family="Hesperiidae" genus="Sophista" kingdom="Animalia" order="Lepidoptera" pageId="8" pageNumber="534" phylum="Arthropoda" rank="species" species="matto">
