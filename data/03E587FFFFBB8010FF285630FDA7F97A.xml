<quantity id="4CB49B0CFFBB8010FD9A56E7FDCFFD85" box="[549,639,489,513]" metricMagnitude="-3" metricUnit="m" metricValue="8.5" pageId="13" pageNumber="14" unit="mm" value="8.5">8.5 mm</quantity>
