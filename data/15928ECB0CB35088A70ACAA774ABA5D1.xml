<taxonomicName id="E7DFCC158014574CE023DA00B3A56D45" authority="Kriebel, 2016" authorityName="Kriebel" authorityYear="2016" baseAuthorityName="Gleason" baseAuthorityYear="2016" class="Magnoliopsida" family="Melastomataceae" genus="Conostegia" higherTaxonomySource="GBIF" kingdom="Plantae" lsidName="Conostegia fraterna" order="Myrtales" pageId="171" pageNumber="172" phylum="Tracheophyta" rank="species" species="fraterna" status="comb. nov.">Conostegia fraterna</taxonomicName>
