<emphasis id="5CE5395018E26807D70497D21A73F5FF" bold="true" pageId="0" pageNumber="71">Figure 2.</emphasis>
<taxonomicName id="F5D0B1D11FAAA1091060B80EBBD88837" authorityName="Clavijo &amp; Sanchez-Taborda" authorityYear="2020" class="Magnoliopsida" family="Gesneriaceae" genus="Besleria" higherTaxonomySource="CoL" kingdom="Plantae" lsidName="Besleria santaclarensis" order="Lamiales" pageId="0" pageNumber="71" phylum="Tracheophyta" rank="species" species="santaclarensis">
