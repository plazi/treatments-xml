<taxonomicName id="AEEADB76362811556EA082CC799ABFDF" class="Magnoliopsida" family="Betulaceae" genus="Alnus" higherTaxonomySource="CoL" kingdom="Plantae" lsidName="Alnus alnobetula" order="Fagales" pageId="0" pageNumber="69" phylum="Tracheophyta" rank="species" species="alnobetula">
