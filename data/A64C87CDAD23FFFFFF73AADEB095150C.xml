<typeStatus id="F15E8879AD23FFFFFDB8A921B085131A" box="[604,654,547,568]" pageId="4" pageNumber="229">Type</typeStatus>
species: 
<taxonomicName id="E9E54D58AD23FFFFFD08A920B64A131A" authority="Fletcher, 1958" authorityName="Fletcher" authorityYear="1958" box="[748,1089,546,568]" class="Insecta" family="Nolidae" genus="Nola" higherTaxonomySource="GBIF" kingdom="Animalia" order="Lepidoptera" pageId="4" pageNumber="229" phylum="Arthropoda" rank="species" species="poliophasma">
