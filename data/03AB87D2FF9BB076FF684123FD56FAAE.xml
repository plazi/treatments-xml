<emphasis id="B976EAD6FF98B076FE9446AFFDEFFB71" box="[316,535,1161,1182]" italics="true" pageId="10" pageNumber="9">
<taxonomicName id="4C024D47FF98B076FE9446AFFDEBFB71" box="[316,531,1161,1182]" class="Insecta" family="Ichneumonidae" genus="Phycitiplex" kingdom="Animalia" order="Hymenoptera" pageId="10" pageNumber="9" phylum="Arthropoda" rank="species" species="peralta">Phycitiplex peralta</taxonomicName>
