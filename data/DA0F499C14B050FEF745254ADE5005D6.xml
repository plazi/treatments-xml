<paragraph id="156CCBB5E79058E2BA16887603578149" pageId="7" pageNumber="44">
- 
<taxonomicName id="0F2A673B8A502360E5FFF4181A736C77" class="Insecta" family="Acrididae" genus="Acteana" higherTaxonomySource="CoL" kingdom="Animalia" lsidName="Acteana brachyptera" order="Orthoptera" pageId="7" pageNumber="44" phylum="Arthropoda" rank="species" species="brachyptera">Acteana brachyptera</taxonomicName>
