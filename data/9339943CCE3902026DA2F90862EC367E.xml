<taxonomicName id="DC905EA9CE3902026E67FA27624935A1" authority="Gory, 1841 e" authorityName="Gory" authorityYear="1841" box="[819,1129,1432,1456]" class="Insecta" family="Buprestidae" genus="Agrilus" kingdom="Animalia" order="Coleoptera" pageId="3" pageNumber="84" phylum="Arthropoda" rank="species" species="aurocephalus">
