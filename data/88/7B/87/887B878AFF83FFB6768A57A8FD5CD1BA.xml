<taxonomicName authorityName="Foley &amp; Ivie" authorityYear="2008" baseAuthorityName="Garcia-Paris, Coca-Abia, &amp; Parra-Olea" baseAuthorityYear="2008" box="[704,837,1323,1348]" class="Insecta" family="Zopheridae" genus="Sesaspis" higherTaxonomySource="GBIF" kingdom="Animalia" order="Coleoptera" pageId="33" pageNumber="34" phylum="Arthropoda" rank="species" species="sylvatica">
