<collectionCode box="[1258,1347,1310,1336]" country="Brazil" httpUri="http://biocol.org/urn:lsid:biocol.org:col:15506" lsid="urn:lsid:biocol.org:col:15506" name="Universidade Estadual de Feira de Santana" pageId="4" pageNumber="295" type="Herbarium">HUEFS</collectionCode>
253745, 
<collectionCode box="[136,225,1346,1372]" country="Brazil" httpUri="http://biocol.org/urn:lsid:biocol.org:col:15506" lsid="urn:lsid:biocol.org:col:15506" name="Universidade Estadual de Feira de Santana" pageId="4" pageNumber="295" type="Herbarium">HUEFS</collectionCode>
