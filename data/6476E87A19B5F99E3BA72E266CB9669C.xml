<taxonomicName id="42F5E250627D17B953751FADA6A2E1F5" class="Arachnida" family="Linyphiidae" genus="Gongylidiellum" higherTaxonomySource="CoL" kingdom="Animalia" lsidName="Gongylidiellum uschuaiense" order="Araneae" pageId="0" pageNumber="1" phylum="Arthropoda" rank="species" species="uschuaiense">Gongylidiellum uschuaiense</taxonomicName>
