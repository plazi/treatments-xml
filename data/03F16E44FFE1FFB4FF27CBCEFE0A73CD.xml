<quantity id="4CA072B7FFE1FFB4FE02CC25FE767304" box="[434,504,1628,1652]" metricMagnitude="-3" metricUnit="m" metricValue="8.0" pageId="9" pageNumber="136" unit="mm" value="8.0">8 mm</quantity>
