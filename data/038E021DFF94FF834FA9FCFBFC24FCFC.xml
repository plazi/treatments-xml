<taxonomicName id="4C27C888FF94FF824CFBFB55FBC5FB09" authorityName=", Gray" authorityYear="1853" box="[965,1066,1225,1249]" class="Reptilia" family="Agamidae" genus="Japalura" higherTaxonomySource="GBIF" kingdom="Animalia" order="Squamata" pageId="36" pageNumber="437" phylum="Chordata" rank="genus">
