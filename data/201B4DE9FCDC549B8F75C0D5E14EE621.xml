<taxonomicName id="E1BD497A71720EB508A198462C0610A4" authorityName="Faden &amp; D.R.Hunt" authorityYear="1991" lsidName="" pageId="17" pageNumber="28" rank="subTribe" subTribe="Thyrsantheminae">Thyrsantheminae</taxonomicName>
