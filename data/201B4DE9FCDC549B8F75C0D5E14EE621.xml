<taxonomicName id="00E058DF351A030273DD7A230CEDD68C" class="Liliopsida" family="Commelinaceae" genus="Elasis" higherTaxonomySource="CoL" kingdom="Plantae" lsidName="Elasis" order="Commelinales" pageId="17" pageNumber="28" phylum="Tracheophyta" rank="genus">
