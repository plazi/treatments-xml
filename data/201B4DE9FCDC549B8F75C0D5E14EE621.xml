</taxonomicName>
in 
<taxonomicName id="1AED4EB6151B8BC8D76CA42D8E30959B" authorityName="Rohweder" authorityYear="1956" lsidName="" pageId="17" pageNumber="28" rank="subTribe" subTribe="Tradescantiinae">Tradescantiinae</taxonomicName>
<emphasis id="33AE6513DAE7BB46E70A60AF2379CF96" italics="true" pageId="17" pageNumber="28">s.s.</emphasis>
