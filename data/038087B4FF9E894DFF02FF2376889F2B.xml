<taxonomicName id="4C294D21FF9E8941FF49FE957106985B" authority="Mortensen." authorityName="Mortensen." box="[220,530,289,311]" class="Echinoidea" family="Laganidae" genus="Peronella" higherTaxonomySource="GBIF" kingdom="Animalia" order="Clypeasteroida" pageId="52" pageNumber="53" phylum="Echinodermata" rank="species" species="oblonga">
