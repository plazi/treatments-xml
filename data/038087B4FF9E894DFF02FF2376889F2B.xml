<taxonomicName id="4C294D21FF9E8941FF4EFEB671199874" authority="Mortensen" authorityName="Mortensen" box="[219,525,258,280]" class="Echinoidea" family="Laganidae" genus="Peronella" higherTaxonomySource="GBIF" kingdom="Animalia" order="Clypeasteroida" pageId="52" pageNumber="53" phylum="Echinodermata" rank="species" species="oblonga">
