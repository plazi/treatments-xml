<taxonomicName id="4C383DE79061FFC7FEBB2F754929E736" authority="Sars, 1878" authorityName="Sars" authorityYear="1878" box="[257,619,1546,1573]" class="Malacostraca" family="Bodotriidae" kingdom="Animalia" order="Cumacea" pageId="1" pageNumber="326" phylum="Arthropoda" rank="subFamily" subFamily="Vaunthompsoniinae">VAUNTHOMPSONIINAE Sars, 1878</taxonomicName>
