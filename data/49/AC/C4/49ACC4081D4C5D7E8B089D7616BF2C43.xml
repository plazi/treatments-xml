</taxonomicName>
), 
<geoCoordinate degrees="38" direction="north" minutes="17" orientation="latitude" precision="15" seconds="55" value="38.29861">38°17'55&quot;N</geoCoordinate>
, 
<geoCoordinate degrees="100" direction="east" minutes="45" orientation="longitude" precision="15" seconds="54" value="100.765">100°45'54&quot;E</geoCoordinate>
