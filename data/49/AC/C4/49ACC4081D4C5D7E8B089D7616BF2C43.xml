<taxonomicName class="Pinopsida" family="Pinaceae" genus="Picea" higherTaxonomySource="CoL" kingdom="Plantae" lsidName="Picea crassifolia" order="Pinales" pageId="0" pageNumber="91" phylum="Tracheophyta" rank="species" species="crassifolia">
