<subSubSection pageId="63" pageNumber="592" type="diagnosis">
<paragraph blockId="63.[151,760,1447,2046]" pageId="63" pageNumber="592">
<emphasis bold="true" box="[151,268,1447,1470]" pageId="63" pageNumber="592">Diagnosis.</emphasis>
<emphasis box="[276,406,1447,1470]" italics="true" pageId="63" pageNumber="592">Colouration</emphasis>
