<taxonomicName class="Magnoliopsida" family="Fabaceae" genus="Prosopis" higherTaxonomySource="CoL" kingdom="Plantae" lsidName="" order="Fabales" pageId="4" pageNumber="47" phylum="Tracheophyta" rank="family">Fabaceae</taxonomicName>
: 
<taxonomicName class="Magnoliopsida" family="Fabaceae" genus="Prosopis" higherTaxonomySource="CoL" kingdom="Plantae" lsidName="" order="Fabales" pageId="4" pageNumber="47" phylum="Tracheophyta" rank="subFamily" subFamily="Papilionoideae">Papilionoideae</taxonomicName>
