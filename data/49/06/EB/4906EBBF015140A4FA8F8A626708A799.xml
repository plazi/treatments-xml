; 
<taxonomicName class="Magnoliopsida" family="Asteraceae" genus="Leptadenia" higherTaxonomySource="CoL" kingdom="Plantae" lsidName="" order="Asterales" pageId="4" pageNumber="47" phylum="Tracheophyta" rank="family">Asteraceae</taxonomicName>
