<paragraph id="8BA836B24C7C5257CE97E5767B0AFC21" blockId="47.[151,818,886,912]" box="[151,818,886,912]" pageId="47" pageNumber="48">
<heading id="D0E081DE4C7C5257CE97E5767B0AFC21" bold="true" box="[151,818,886,912]" fontSize="11" level="1" pageId="47" pageNumber="48" reason="1">
<emphasis id="B963EAA04C7C5257CE97E5767B0AFC21" bold="true" box="[151,818,886,912]" pageId="47" pageNumber="48">
<taxonomicName id="4C174D314C7C5257CE97E5767ABAFC21" baseAuthorityName="Fischer" baseAuthorityYear="1854" box="[151,642,886,912]" class="Branchiopoda" genus="Leydigia" kingdom="Animalia" order="Diplostraca" pageId="47" pageNumber="48" phylum="Arthropoda" rank="species" species="acanthocercoides" subGenus="Neoleydigia">
<emphasis id="B963EAA04C7C5257CE97E57678C7FC21" bold="true" box="[151,255,886,912]" italics="true" pageId="47" pageNumber="48">Leydigia</emphasis>
(
<emphasis id="B963EAA04C7C5257CF10E57679A7FC21" bold="true" box="[272,415,886,912]" italics="true" pageId="47" pageNumber="48">Neoleydigia</emphasis>
) 
<emphasis id="B963EAA04C7C5257CFB0E5767ABAFC21" bold="true" box="[432,642,886,912]" italics="true" pageId="47" pageNumber="48">acanthocercoides</emphasis>
</taxonomicName>
