<taxonomicName baseAuthorityName="Fabricius" baseAuthorityYear="1805" box="[587,666,1226,1251]" class="Insecta" family="Syrphidae" genus="Merodon" kingdom="Animalia" order="Diptera" pageId="5" pageNumber="93" phylum="Arthropoda" rank="species" species="aureus">
<emphasis box="[587,666,1226,1251]" italics="true" pageId="5" pageNumber="93">aureus</emphasis>
