<collectingRegion box="[468,553,1772,1797]" country="Mexico" name="Mexico" pageId="16" pageNumber="417">
<collectingCountry box="[468,553,1772,1797]" name="Mexico" pageId="16" pageNumber="417">Mexico</collectingCountry>
</collectingRegion>
in 
<collectingRegion box="[589,679,1772,1797]" country="Mexico" name="Hidalgo" pageId="16" pageNumber="417">Hidalgo</collectingRegion>
and 
<collectingRegion box="[734,837,1773,1796]" country="Mexico" name="Veracruz de Ignacio de la Llave" pageId="16" pageNumber="417">Veracruz</collectingRegion>
