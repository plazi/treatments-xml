<paragraph blockId="27.[151,1437,1797,2039]" pageId="27" pageNumber="428">
<emphasis bold="true" box="[199,322,1941,1968]" pageId="27" pageNumber="428">Diagnosis.</emphasis>
<taxonomicName baseAuthorityName="Rambur" baseAuthorityYear="1832" box="[328,541,1941,1967]" class="Insecta" family="Arctiidae" genus="Lerautia" kingdom="Animalia" order="Lepidoptera" pageId="27" pageNumber="428" phylum="Arthropoda" rank="species" species="bifasciata">
