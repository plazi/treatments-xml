<emphasis box="[183,397,946,971]" italics="true" pageId="23" pageNumber="424">
<taxonomicName authorityName="Sagarra" authorityYear="1924" box="[183,257,946,971]" class="Insecta" family="Arctiidae" genus="Coscinia" kingdom="Animalia" order="Lepidoptera" pageId="23" pageNumber="424" phylum="Arthropoda" rank="species" species="romeii">romeii</taxonomicName>
