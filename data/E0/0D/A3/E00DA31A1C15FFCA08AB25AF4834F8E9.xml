<taxonomicName box="[335,579,1169,1194]" class="Arachnida" family="Sparassidae" genus="Cerbalus" kingdom="Animalia" order="Araneae" pageId="16" pageNumber="17" phylum="Arthropoda" rank="species" species="aravaensis" status="n. sp.">
<emphasis box="[335,579,1169,1194]" italics="true" pageId="16" pageNumber="17">Cerbalus aravaensis</emphasis>
</taxonomicName>
<emphasis bold="true" box="[588,656,1168,1194]" pageId="16" pageNumber="17">
<taxonomicNameLabel box="[588,656,1168,1194]" pageId="16" pageNumber="17" rank="species">n. sp.</taxonomicNameLabel>
</emphasis>
resembles 
<taxonomicName authority="Levy" authorityName="Levy" box="[790,1032,1168,1194]" class="Arachnida" family="Sparassidae" genus="Cerbalus" kingdom="Animalia" order="Araneae" pageId="16" pageNumber="17" phylum="Arthropoda" rank="species" species="psammodes">
<emphasis box="[790,963,1169,1194]" italics="true" pageId="16" pageNumber="17">C. psammodes</emphasis>
