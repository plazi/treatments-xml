<number box="[461,491,454,480]" pageId="21" pageNumber="22" value="10.0">10</number>
ɗɗ): total length 
<number box="[705,797,454,480]" pageId="21" pageNumber="22" value="2.95" valueMax="3.2" valueMin="2.7">2.7–3.2</number>
; carapace length 
<number box="[1001,1091,454,480]" pageId="21" pageNumber="22" value="1.4500000000000002" valueMax="1.6" valueMin="1.3">1.3–1.6</number>
, width 
<number box="[1179,1300,454,480]" pageId="21" pageNumber="22" value="1.325" valueMax="1.4" valueMin="1.25">1.25–1.40</number>
, index 1.0– 
<number box="[151,191,494,520]" pageId="21" pageNumber="22" value="1.2">1.2</number>
