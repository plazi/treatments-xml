<taxonomicName id="889AC5E3A31FFFFAFE7FF8142246F82F" box="[406,515,1982,2006]" class="Arachnida" family="Salticidae" genus="Ecuadattus" higherTaxonomySource="GBIF,CoL" kingdom="Animalia" order="Araneae" pageId="8" pageNumber="9" phylum="Arthropoda" rank="species" species="elongatus">
