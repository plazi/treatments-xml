<taxonomicName authority="Moghbeli &amp; Gharali &amp; Fekrat, 2021" authorityName="Moghbeli &amp; Gharali &amp; Fekrat" authorityYear="2021" box="[286,454,1944,1968]" class="Insecta" family="Bombyliidae" genus="Phthiria" kingdom="Animalia" order="Diptera" pageId="2" pageNumber="380" phylum="Arthropoda" rank="species" species="notiosa" status="sp. nov">
