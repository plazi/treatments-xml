<paragraph pageId="2" pageNumber="3">Diagnosis.</paragraph>
<paragraph pageId="2" pageNumber="3">
<taxonomicName authorityName="Y. I. Kim &amp; Y. D. Kim" authorityYear="2018" class="Magnoliopsida" family="Saxifragaceae" genus="Chrysosplenium" higherTaxonomySource="CoL" kingdom="Plantae" lsidName="Chrysosplenium ramosissimum" order="Saxifragales" pageId="2" pageNumber="3" phylum="Tracheophyta" rank="species" species="ramosissimum">
<emphasis italics="true" pageId="2" pageNumber="3">Chrysosplenium ramosissimum</emphasis>
