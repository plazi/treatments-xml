<taxonomicName genus="C." lsidName="C. valdepilosum" pageId="2" pageNumber="3" rank="species" species="valdepilosum">
<emphasis italics="true" pageId="2" pageNumber="3">C. valdepilosum</emphasis>
</taxonomicName>
