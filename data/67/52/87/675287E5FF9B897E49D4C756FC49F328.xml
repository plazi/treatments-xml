<subSubSection pageId="11" pageNumber="66" type="etymology">
<paragraph blockId="11.[151,1437,448,1901]" pageId="11" pageNumber="66">
<emphasis bold="true" box="[196,346,1837,1863]" pageId="11" pageNumber="66">Etymology.</emphasis>
The specific name 
<taxonomicName box="[597,724,1838,1863]" class="Insecta" family="Blissidae" genus="Macropes" higherTaxonomySource="GBIF" kingdom="Animalia" order="Hemiptera" pageId="11" pageNumber="66" phylum="Arthropoda" rank="species" species="peculiaris">
<emphasis box="[597,724,1838,1863]" italics="true" pageId="11" pageNumber="66">peculiaris</emphasis>
</taxonomicName>
