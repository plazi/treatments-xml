<taxonomicName id="ED920DDBEEC188283078AFCECB28B3BD" authority="Scop." class="Magnoliopsida" family="Plantaginaceae" genus="Callitriche" kingdom="Plantae" order="Lamiales" pageId="null" pageNumber="673" phylum="Tracheophyta" rank="species" species="stagnalis">
