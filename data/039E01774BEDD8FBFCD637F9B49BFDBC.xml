<subSubSection id="C32DE3EA4BEDD8F9FCD637F9B332FB72" box="[865,1148,1190,1214]" pageId="185" pageNumber="186" type="nomenclature">
<taxonomicName id="4C37CBE24BEDD8F9FCD637F9B332FB72" authority="Husson, 1978" authorityName="Husson" authorityYear="1978" box="[865,1148,1190,1214]" class="Mammalia" family="Echimyidae" genus="Makalata" kingdom="Animalia" order="Rodentia" pageId="185" pageNumber="186" phylum="Chordata" rank="genus">
