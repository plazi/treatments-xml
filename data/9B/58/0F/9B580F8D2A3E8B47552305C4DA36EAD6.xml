<taxonomicName LSID-HNS="urn:lsid:biosci.ohio-state.edu:osuc_concepts:24836" class="Insecta" family="Formicidae" genus="Harpegnathos" higherTaxonomySource="CoL" kingdom="Animalia" lsidName="Harpegnathos Jerdon" lsidName-HNS="Harpegnathos Jerdon" order="Hymenoptera" pageNumber="116" phylum="Arthropoda" rank="genus">Harpegnathos</taxonomicName>
