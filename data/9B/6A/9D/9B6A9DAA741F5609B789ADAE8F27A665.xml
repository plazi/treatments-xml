<taxonomicName class="Arachnida" family="Salticidae" genus="Portia" higherTaxonomySource="CoL" kingdom="Animalia" lsidName="Portia" order="Araneae" pageId="0" pageNumber="17" phylum="Arthropoda" rank="genus">
