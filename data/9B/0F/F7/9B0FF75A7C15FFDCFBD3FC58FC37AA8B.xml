<collectingCountry box="[1146,1408,1117,1139]" name="United States of America" pageId="22" pageNumber="209">United States of America</collectingCountry>
to 
<collectingCountry box="[199,300,1148,1170]" name="Argentina" pageId="22" pageNumber="209">Argentina</collectingCountry>
(
<bibRefCitation author="Quate" box="[316,547,1148,1170]" pageId="22" pageNumber="209" refString="Quate, L. W. &amp; Brown, B. V. (2004) Revision of Neotropical Setomimini (Diptera: Psychodidae: Psychodinae). Contributions in Science, Natural History Museum of Los Angeles County, 500, 1 - 117." type="journal article" year="2004">
Quate &amp; Brown 
<number box="[494,547,1148,1170]" pageId="22" pageNumber="209" value="2004.0">2004</number>
</bibRefCitation>
, 
<bibRefCitation author="Bravo" box="[561,697,1148,1170]" pageId="22" pageNumber="209" refString="Bravo, F. (2007 a) A new species of Australopericoma Vaillant (Diptera, Psychodidae) from the Brazilian semi-arid region. Biota Neotropica, 7 (2), 325 - 328. http: // dx. doi. org / 10.1590 / s 1676 - 06032007000200039" type="journal article" year="2007" yearSuffix="a">
Bravo 
<number box="[632,686,1148,1170]" pageId="22" pageNumber="209" value="2007.0">2007</number>
