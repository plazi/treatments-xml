<taxonomicName authority="Cavanilles, 1799" authorityName="Cav" authorityYear="1799" class="Magnoliopsida" family="Goodeniaceae" genus="Selliera" higherTaxonomySource="GBIF" kingdom="Plantae" lsidName="Selliera radicans" order="Asterales" pageId="0" pageNumber="27" phylum="Tracheophyta" rank="species" species="radicans">
