<taxonomicName id="308AAD9A60D210614E02A819D4DB87C9" class="Magnoliopsida" family="Rubiaceae" genus="Pagamea" higherTaxonomySource="CoL" kingdom="Plantae" lsidName="Pagamea" order="Gentianales" pageId="0" pageNumber="11" phylum="Tracheophyta" rank="genus">
<emphasis id="BE61E51A8B8A89BB71E4DA6C41B644F0" italics="true" pageId="0" pageNumber="11">Pagamea</emphasis>
