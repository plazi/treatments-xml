<taxonomicName id="B698D1AFCBD4A15CAA42C61AD880F59D" authorityName="H. Rob. &amp; G. K. Golinski" authorityYear="2020" class="Bryopsida" family="Bryaceae" genus="Brachymenium" higherTaxonomySource="CoL" kingdom="Plantae" lsidName="Brachymenium ayangannensis" order="Bryales" pageId="0" pageNumber="11" phylum="Bryophyta" rank="species" species="ayangannensis">
