<collectionCode id="ED2428F2FFEEFFC97787F8831F3E532C" box="[189,270,1879,1905]" country="Germany" httpUri="http://biocol.org/urn:lsid:biocol.org:col:34613" lsid="urn:lsid:biocol.org:col:34613" name="Zoologisches Forschungsmuseum Alexander Koenig" pageId="20" pageNumber="274" type="Museum">ZFMK</collectionCode>
