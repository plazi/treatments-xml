<subSubSection id="C31F652EFF8D7B2EFF4F1FB9D84AFD48" box="[199,1073,690,715]" pageId="5" pageNumber="209" type="etymology">
<paragraph id="8BBA36A5FF8D7B2EFF4F1FB9D84AFD48" blockId="5.[151,1436,258,715]" box="[199,1073,690,715]" pageId="5" pageNumber="209">
<emphasis id="B971EAB7FF8D7B2EFF4F1FB9DD35FD48" bold="true" box="[199,334,691,715]" pageId="5" pageNumber="209">Etymology.</emphasis>
