<subSubSection pageId="5" pageNumber="308" type="type-species">
<paragraph pageId="5" pageNumber="308">Type-species.</paragraph>
<paragraph pageId="5" pageNumber="308">
<taxonomicName authorityName="Linnavuori" authorityYear="1979" class="Insecta" family="Cicadellidae" genus="Phlogis" higherTaxonomySource="GBIF,CoL" kingdom="Animalia" lsidName="" order="Hemiptera" pageId="5" pageNumber="308" phylum="Arthropoda" rank="species" species="mirabilis">
