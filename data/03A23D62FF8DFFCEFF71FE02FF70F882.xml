<paragraph id="8BB48C74FF8DFFCEFF71FD90FAF4FDB9" blockId="102.[151,1384,520,543]" box="[151,1384,520,543]" pageId="102" pageNumber="103">
<taxonomicName id="4C0BF7F7FF8DFFCEFF71FD90FDBDFDB9" authority="Nagatomi &amp; Saigusa 1982" authorityName="Nagatomi &amp; Saigusa" authorityYear="1982" box="[151,545,520,543]" class="Insecta" family="Rhagionidae" genus="Alloleptis" kingdom="Animalia" order="Diptera" pageId="102" pageNumber="103" phylum="Arthropoda" rank="genus">
