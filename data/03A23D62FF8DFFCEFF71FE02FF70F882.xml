<taxonomicName id="4C0BF7F7FF8DFFCEFD09FD90FB22FDB9" authority="Nagatomi &amp; Saigusa 1982" authorityName="Nagatomi &amp; Saigusa" authorityYear="1982" box="[751,1214,520,543]" class="Insecta" family="Rhagionidae" genus="Alloleptis" kingdom="Animalia" order="Diptera" pageId="102" pageNumber="103" phylum="Arthropoda" rank="species" species="tersus">
