<taxonomicName box="[483,633,1510,1534]" class="Dinocaridida" family="Hurdiidae" genus="Pahvantia" higherTaxonomySource="GBIF" kingdom="Animalia" order="Radiodonta" pageId="10" pageNumber="11" phylum="Arthropoda" rank="genus">
