<taxonomicName id="122711AEE2EE4E64EA0D1CB5CB03C518" LSID="http://zoobank.org/F38109B2-B8B9-436A-A715-E66EFF4EA72B" authority="Motschulsky, 1862" authorityName="Motschulsky" authorityYear="1862" class="Insecta" family="Carabidae" genus="Tachyina" higherTaxonomySource="GBIF" kingdom="Animalia" lsidName="Tachyina (Hylotachys)" order="Coleoptera" pageId="24" pageNumber="111" phylum="Arthropoda" rank="subGenus" subGenus="Hylotachys">Hylotachys</taxonomicName>
