<subSubSection id="B2680BEF66FB0B3F89485DA117006383" pageId="24" pageNumber="111" type="type species">
<paragraph id="6D5BA04C44A4EFD320DFC0725F0C0946" pageId="24" pageNumber="111">Type species.</paragraph>
<paragraph id="53AEADBFC43C9DA07C42878456B4ABAC" pageId="24" pageNumber="111">
<taxonomicName id="EDE0D22247C3A9B46A9FB9D65D4F6FB6" class="Insecta" family="Carabidae" genus="Meotachys" higherTaxonomySource="CoL" kingdom="Animalia" lsidName="Meotachys ballorum" order="Coleoptera" pageId="24" pageNumber="111" phylum="Arthropoda" rank="species" species="ballorum">Meotachys ballorum</taxonomicName>
