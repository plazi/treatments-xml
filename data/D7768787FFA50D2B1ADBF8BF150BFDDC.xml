<taxonomicName id="98DF4D12FFA40D2B1B7EFE9F163EFEFC" authorityName="Montandon" authorityYear="1908" box="[306,545,259,285]" class="Insecta" family="Belostomatidae" genus="Belostoma" kingdom="Animalia" order="Hemiptera" pageId="25" pageNumber="476" phylum="Arthropoda" rank="species" species="elongatum">
