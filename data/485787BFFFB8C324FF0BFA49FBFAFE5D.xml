<heading id="9B0981C5FFB8C327FF0BFA49FDEFFA35" bold="true" box="[151,616,1410,1436]" fontSize="11" level="1" pageId="5" pageNumber="42" reason="1">
<taxonomicName id="07FE4D2AFFB8C327FF0BFA49FDEFFA35" authority="Gleadowi Murray, 1884" authorityName="Gleadowi Murray" authorityYear="1884" box="[151,616,1410,1436]" class="Reptilia" family="Gekkonidae" genus="Hemidactylus" kingdom="Animalia" order="Squamata" pageId="5" pageNumber="42" phylum="Chordata" rank="genus">
<emphasis id="F28AEABBFFB8C327FF0BFA49FDEFFA35" bold="true" box="[151,616,1410,1436]" pageId="5" pageNumber="42">
<emphasis id="F28AEABBFFB8C327FF0BFA49FE31FA35" bold="true" box="[151,438,1410,1436]" italics="true" pageId="5" pageNumber="42">Hemidactylus Gleadowi</emphasis>
Murray, 
<number id="7636248EFFB8C327FDB2FA49FDEFFA35" box="[558,616,1410,1436]" pageId="5" pageNumber="42" value="1884.0">1884</number>
</emphasis>
