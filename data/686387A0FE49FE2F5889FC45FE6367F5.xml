<taxonomicName id="27CA4D35FE49FE2F5CBFFB2DFB4B65C3" box="[1185,1272,1184,1210]" class="Insecta" kingdom="Animalia" order="Diptera" pageId="388" pageNumber="389" phylum="Arthropoda" rank="order">Diptera</taxonomicName>
, but treat it as 
<taxonomicName id="27CA4D35FE49FE2F58D9FB48FED165A7" authority="sedis" authorityName="SEDIS" box="[199,354,1220,1246]" family="Incertae" pageId="388" pageNumber="391" rank="family">
<emphasis id="D2BEEAA4FE49FE2F58D9FB48FED165A7" box="[199,354,1220,1246]" italics="true" pageId="388" pageNumber="389">incertae sedis</emphasis>
