<taxonomicName id="27CA4D35FE49FE2F5B52FB2DFC5B65C3" box="[844,1000,1184,1210]" class="Insecta" higherTaxonomySource="GBIF" kingdom="Animalia" order="Hymenoptera" pageId="388" pageNumber="389" phylum="Arthropoda" rank="order">Hymenoptera</taxonomicName>
