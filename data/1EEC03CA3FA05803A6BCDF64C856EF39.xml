<taxonomicName id="2E225F71E8519DE1C89C720BBDB83960" class="Insecta" family="Myrtaceae" genus="Eugenia" higherTaxonomySource="CoL" kingdom="Plantae" lsidName="Eugenia speciosa" order="Myrtales" pageId="2" pageNumber="75" phylum="Arthropoda" rank="species" species="speciosa">
