<collectionCode id="ED7571F2FFB2C838FCC9FCA3FC902049" box="[774,811,806,832]" country="Spain" lsid="urn:lsid:biocol.org:col:13287" name="Institut Botànic de Barcelona" pageId="8" pageNumber="209" type="Herbarium">BC</collectionCode>
