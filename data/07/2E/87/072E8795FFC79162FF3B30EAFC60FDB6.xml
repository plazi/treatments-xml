<taxonomicName authority="Kuwana" authorityName="Kuwana" authorityYear="1916" class="Insecta" family="Ortheziidae" genus="Nipponorthezia" kingdom="Animalia" order="Hemiptera" pageId="3" pageNumber="58" phylum="Arthropoda" rank="genus">
