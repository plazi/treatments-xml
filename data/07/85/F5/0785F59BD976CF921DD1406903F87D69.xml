<taxonomicName class="Magnoliopsida" family="Myrtaceae" genus="Melaleuca" higherTaxonomySource="CoL" kingdom="Plantae" lsidName="Melaleuca bracteata" order="Myrtales" pageId="10" pageNumber="11" phylum="Tracheophyta" rank="species" species="bracteata">Melaleuca bracteata</taxonomicName>
