<taxonomicName class="Magnoliopsida" family="Myrtaceae" genus="Melaleuca" higherTaxonomySource="CoL" kingdom="Plantae" lsidName="Melaleuca" order="Myrtales" pageId="10" pageNumber="11" phylum="Tracheophyta" rank="genus">Melaleuca</taxonomicName>
