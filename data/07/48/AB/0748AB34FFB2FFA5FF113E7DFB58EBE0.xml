<emphasis box="[414,692,1906,1929]" italics="true" pageId="10" pageNumber="51">Brontostoma doughertyae</emphasis>
</taxonomicName>
, male, 
<number box="[773,802,1906,1929]" pageId="10" pageNumber="51" value="56.0">56</number>
, head, dorsal view, 
<number box="[1016,1045,1906,1929]" pageId="10" pageNumber="51" value="57.0">57</number>
, last abdominal segment with pygophore 
<emphasis box="[220,287,1940,1963]" italics="true" pageId="10" pageNumber="51">in situ</emphasis>
, ventral view, 
<number box="[448,477,1940,1963]" pageId="10" pageNumber="51" value="58.0">58</number>
, pygophore, ventral view, 
<number box="[765,794,1940,1963]" pageId="10" pageNumber="51" value="59.0">59</number>
, process of pygophore, dorsal view, 
<number box="[1191,1260,1940,1963]" pageId="10" pageNumber="51" value="60.5" valueMax="61.0" valueMin="60.0">60–61</number>
, right paramere, 
<number box="[151,180,1975,1998]" pageId="10" pageNumber="51" value="60.0">60</number>
, dorsal view, 
<number box="[325,354,1975,1998]" pageId="10" pageNumber="51" value="61.0">61</number>
, ventral, view, 
<number box="[515,585,1975,1998]" pageId="10" pageNumber="51" value="62.5" valueMax="63.0" valueMin="62.0">62–63</number>
