<subSubSection pageId="20" pageNumber="115" type="reference_group">
<paragraph pageId="20" pageNumber="115">
<taxonomicName class="Hexapoda" family="Chrysomelidae" genus="Pachybrachys" higherTaxonomySource="GBIF" kingdom="Animalia" lsidName="" order="Coleoptera" pageId="20" pageNumber="115" phylum="Arthropoda" rank="species" species="calcaratus">Pachybrachys calcaratus</taxonomicName>
