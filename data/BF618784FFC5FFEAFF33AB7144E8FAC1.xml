<emphasis id="05BCEA80FFC5FFE9FF33ABC94447F946" bold="true" box="[151,284,1734,1757]" pageId="41" pageNumber="42">
<typeStatus id="E8738830FFC5FFE9FF33ABC94595F947" box="[151,206,1735,1756]" pageId="41" pageNumber="42">Type</typeStatus>
species
</emphasis>
: 
<taxonomicName id="F0C84D11FFC5FFE9FE8EABC947DDF947" authority="Grube, 1877" authorityName="Grube" authorityYear="1877" box="[298,646,1734,1757]" class="Polychaeta" family="Flabelligeridae" genus="Stylarioides" kingdom="Animalia" order="Terebellida" pageId="41" pageNumber="42" phylum="Annelida" rank="species" species="parmata">
<emphasis id="05BCEA80FFC5FFE9FE8EABC944A5F947" box="[298,510,1735,1757]" italics="true" pageId="41" pageNumber="42">Stylarioides parmata</emphasis>
<bibRefCitation id="53594B63FFC5FFE9FDA0ABC847DDF947" author="Grube, A. E." box="[516,646,1734,1756]" pageId="41" pageNumber="42" pagination="60 - 73" refId="ref52462" refString="Grube, A. E. (1877) Mittheilungen uber die Familie der Chlorhaeminen. Jahres-Bericht der Schlesischen Gesellschaft fur Vaterlandische Cultur, 45, 60 - 73." type="journal article" year="1877">Grube, 1877</bibRefCitation>
