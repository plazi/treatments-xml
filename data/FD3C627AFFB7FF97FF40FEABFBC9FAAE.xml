, 
<collectingCountry id="0D8293FCFFB7FF97FD93FE40FBA0FDE7" box="[987,1079,503,529]" name="Mexico" pageId="21" pageNumber="22">Mexico</collectingCountry>
, 
<collectingCountry id="0D8293FCFFB7FF97FA0CFE40FB28FDE7" box="[1092,1215,503,529]" name="Nicaragua" pageId="21" pageNumber="22">Nicaragua</collectingCountry>
