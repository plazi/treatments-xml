<materialsCitation id="39A1235DAC303B57FE72DD355F81FA25" box="[419,962,1392,1412]" collectingDate="1991-06-04" collectingDateMax="1991-06-15" collectingDateMin="1991-06-04" collectorName="du Zougue" location="Nimba" pageId="124" pageNumber="517" specimenCount="1" stateProvince="Nimba">
