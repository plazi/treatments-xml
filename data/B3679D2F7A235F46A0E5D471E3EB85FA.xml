<taxonomicName id="61C33355E971B40A75685F3F08F59352" class="Magnoliopsida" family="Campanulaceae" genus="L." higherTaxonomySource="GBIF" kingdom="Plantae" lsidName="L. chinensis" order="Asterales" pageId="7" pageNumber="34" phylum="Magnoliophyta" rank="species" species="chinensis">
<emphasis id="158A2DCB3601C9AD0A19473A0685020D" bold="true" italics="true" pageId="7" pageNumber="34">L. chinensis</emphasis>
