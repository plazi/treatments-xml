<quantity id="4CB59B719245E961D6C1FE888A0FFEA2" box="[733,816,293,313]" metricMagnitude="3" metricUnit="m" metricValue="1.5" pageId="29" pageNumber="362" unit="m" value="1500.0">1500 m</quantity>
