<collectionCode id="65EC86A54C7FFF88FDA9FEC06DBAFE85" LSID="urn:lsid:biocol.org:col:34991" box="[632,714,290,313]" httpUri="http://biocol.org/urn:lsid:biocol.org:col:34991" name="Hungarian Natural History Museum (Termeszettudomanyi Muzeum)" pageId="25" pageNumber="26">HNHM</collectionCode>
