<collectionCode id="65EC86A54C7FFF88FCA6FEBF6CB2FEC8" box="[887,962,349,372]" httpUri="http://grbio.org/cool/94p5-pepz" name="Iziko Museums of Cape Town" pageId="25" pageNumber="26">SAMC</collectionCode>
