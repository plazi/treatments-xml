<taxonomicName id="236E74712403B058DFD56AD6B4E70C75" LSID-HNS="urn:lsid:biosci.ohio-state.edu:osuc_concepts:182088" class="Insecta" family="Formicidae" genus="Pheidole" higherTaxonomySource="CoL" kingdom="Animalia" lsidName="Pheidole triplex Wilson" lsidName-HNS="Pheidole triplex Wilson" order="Hymenoptera" pageNumber="767" phylum="Arthropoda" rank="species" species="triplex">Pheidole triplex</taxonomicName>
