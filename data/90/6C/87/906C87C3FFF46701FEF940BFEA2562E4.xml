<subSubSection box="[189,869,728,752]" pageId="22" pageNumber="289" type="etymology">
<paragraph blockId="22.[189,869,728,752]" box="[189,869,728,752]" pageId="22" pageNumber="289">
<emphasis bold="true" box="[189,311,728,752]" pageId="22" pageNumber="289">Etymology:</emphasis>
