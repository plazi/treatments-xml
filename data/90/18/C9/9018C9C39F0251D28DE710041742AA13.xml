<taxonomicName family="Triblidiaceae" genus="Triblidium" higherTaxonomySource="CoL" kingdom="Fungi" lsidName="Triblidium rostriforme" order="Triblidiales" pageId="0" pageNumber="1" phylum="Ascomycota" rank="species" species="rostriforme">
