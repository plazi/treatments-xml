<subSubSection pageId="17" pageNumber="790" type="distribution">
<paragraph blockId="17.[168,775,579,806]" pageId="17" pageNumber="790">
<emphasis inLineHeading="true" pageId="17" pageNumber="790" reason="1">
<emphasis bold="true" box="[168,317,579,603]" pageId="17" pageNumber="790">Distribution.</emphasis>
<taxonomicName baseAuthorityName="Cope" baseAuthorityYear="1875" box="[323,663,580,604]" class="Reptilia" family="Viperidae" genus="Bothrocophias" kingdom="Animalia" order="Squamata" pageId="17" pageNumber="790" phylum="Chordata" rank="species" species="microphthalmus">
<emphasis box="[323,663,580,604]" italics="true" pageId="17" pageNumber="790">Bothrocophias microphthalmus</emphasis>
</taxonomicName>
is distributed
</emphasis>
in the Andes Amazon foothills in 
<collectingCountry box="[599,681,613,637]" name="Bolivia" pageId="17" pageNumber="790">Bolivia</collectingCountry>
, 
<collectingCountry name="Colombia" pageId="17" pageNumber="790">Colombia</collectingCountry>
, 
<collectingCountry box="[215,307,647,671]" name="Ecuador" pageId="17" pageNumber="790">Ecuador</collectingCountry>
