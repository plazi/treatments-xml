<collectingCountry box="[318,371,647,671]" name="Peru" pageId="17" pageNumber="790">Perú</collectingCountry>
, and 
<collectingCountry box="[428,495,647,671]" name="Brazil" pageId="17" pageNumber="790">Brazil</collectingCountry>
