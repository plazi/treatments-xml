<quantity box="[562,718,647,671]" metricMagnitude="3" metricUnit="m" metricValue="1.625" metricValueMax="2.35" metricValueMin="0.9" pageId="17" pageNumber="790" unit="m" value="1625.0" valueMax="2350.0" valueMin="900.0">900 to 2350 m</quantity>
