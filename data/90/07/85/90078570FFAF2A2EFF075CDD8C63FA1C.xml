<paragraph blockId="10.[151,1437,386,1455]" pageId="10" pageNumber="11">
<materialsCitation ID-GBIF-Occurrence="1457688709" collectionCode="BMNH" country="Peru" county="Oyon" elevation="2920" location="Oyon" municipality="Oyon" pageId="10" pageNumber="11" specimenCount="10" specimenCount-female="3" specimenCount-male="7" stateProvince="Lima" typeStatus="paralectotype">
<emphasis bold="true" box="[199,308,962,987]" pageId="10" pageNumber="11">Remarks</emphasis>
. In the 
<taxonomicName box="[408,547,963,987]" class="Insecta" family="Nepticulidae" genus="Stigmella" kingdom="Animalia" order="Lepidoptera" pageId="10" pageNumber="11" phylum="Arthropoda" rank="species" species="epicosma">
<emphasis box="[408,547,963,987]" italics="true" pageId="10" pageNumber="11">S. epicosma</emphasis>
</taxonomicName>
material, 
<bibRefCitation author="Puplesis" box="[670,1003,962,987]" pageId="10" pageNumber="11" refString="Puplesis, R. &amp; Robinson, G. S. (2000) A review of the Central and South American Nepticulidae (Lepidoptera) with special reference to Belize. Bulletin of the Natural History Museum, London (Entomology), 69 (1), 1 - 114." type="journal article" year="2000">Puplesis &amp; Robinson (2000)</bibRefCitation>
also 
<specimenCount box="[1072,1119,963,987]" pageId="10" pageNumber="11" type="female">1 ♀</specimenCount>
<typeStatus box="[1131,1282,962,987]" pageId="10" pageNumber="11">paralectotype</typeStatus>
(from 
<collectingRegion box="[1370,1432,962,987]" country="Peru" name="Lima" pageId="10" pageNumber="11">Lima</collectingRegion>
, genitalia slide no. 28850, 
<collectionCode box="[450,536,999,1023]" pageId="10" pageNumber="11">BMNH</collectionCode>
) and 
<specimenCount box="[603,648,999,1022]" pageId="10" pageNumber="11" type="male">7 ♂</specimenCount>
and 
<specimenCount box="[708,752,999,1023]" pageId="10" pageNumber="11" type="female">2 ♀</specimenCount>
non-type series specimens (from 
<collectingRegion box="[1144,1248,998,1023]" country="Peru" name="Arequipa" pageId="10" pageNumber="11">Arequipa</collectingRegion>
and 
<location LSID="urn:lsid:plazi:treatment:90078570FFAF2A2EFF075CDD8C63FA1C:1D7162BDFFAF2A2EFA8B5FA28C2DFC4C" box="[1307,1372,999,1023]" country="Peru" county="Oyon" municipality="Oyon" name="Oyon" pageId="10" pageNumber="11" stateProvince="Lima">Oyón</location>
, both 
<collectingCountry box="[151,204,1035,1059]" name="Peru" pageId="10" pageNumber="11">Peru</collectingCountry>
