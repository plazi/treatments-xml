<taxonomicName authority="Cardoso, Bastos-Pereira, Souza &amp; Ferreira, 2021" authorityName="Cardoso 1 &amp; Bastos-Pereira 1 &amp; Souza 2 &amp; Ferreira 1" authorityYear="2021" class="Malacostraca" family="Styloniscidae" genus="Chaimowiczia" higherTaxonomySource="GBIF" kingdom="Animalia" lsidName="Chaimowiczia uai" order="Isopoda" pageId="0" pageNumber="45" phylum="Arthropoda" rank="species" species="uai">
