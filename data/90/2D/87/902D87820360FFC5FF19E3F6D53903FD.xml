<subSubSection box="[151,896,1504,1527]" pageId="3" pageNumber="4" type="materials_examined">
<paragraph blockId="3.[151,896,1504,1527]" box="[151,896,1504,1527]" pageId="3" pageNumber="4">
<typeStatus box="[151,204,1504,1527]" pageId="3" pageNumber="4">Type</typeStatus>
species: 
<taxonomicName authority="Oliveira" authorityName="Oliveira" box="[301,637,1504,1527]" class="Insecta" family="Ephydridae" genus="Paraephydra" kingdom="Animalia" order="Diptera" pageId="3" pageNumber="4" phylum="Arthropoda" rank="species" species="freitasi">
