<taxonomicName id="A9F54D4A132AFF997D3670D965B1FC08" box="[374,486,943,968]" class="Insecta" family="Phalangopsidae" higherTaxonomySource="GBIF,CoL" kingdom="Animalia" order="Orthoptera" pageId="9" pageNumber="407" phylum="Arthropoda" rank="subFamily" subFamily="Luzarinae">Luzarinae</taxonomicName>
