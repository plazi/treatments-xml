<subSubSection id="1A8865107225FFD9FF42609CFBADFE1A" pageId="28" pageNumber="29" type="diagnosis">
<paragraph id="522D369B7225FFD9FF42609CFBADFE1A" blockId="28.[151,1437,359,744]" pageId="28" pageNumber="29">
<emphasis id="60E6EA897225FFD9FF42609CFE92FE3F" bold="true" box="[199,321,431,456]" pageId="28" pageNumber="29">Diagnosis.</emphasis>
