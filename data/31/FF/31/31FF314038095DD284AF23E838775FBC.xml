<taxonomicName class="Monocotyledoneae" family="Pandanaceae" genus="Pandanus" higherTaxonomySource="GBIF" kingdom="Plantae" lsidName="" order="Pandanales" pageId="14" pageNumber="51" phylum="Angiospermae" rank="genus">
