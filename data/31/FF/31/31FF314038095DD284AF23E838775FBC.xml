<taxonomicName class="Magnoliopsida" family="Myrtaceae" genus="Metrosideros" higherTaxonomySource="GBIF" kingdom="Plantae" lsidName="" order="Myrtales" pageId="14" pageNumber="51" phylum="Magnoliophyta" rank="species" species="collina">
<emphasis italics="true" pageId="14" pageNumber="51">Metrosideros collina</emphasis>
</taxonomicName>
, 
<taxonomicName authorityName="B. C. Stone" authorityYear="1968" baseAuthorityName="Hombr. &amp; Jacquinot ex Decne." class="Monocotyledoneae" family="Pandanaceae" genus="Freycinetia" higherTaxonomySource="GBIF" kingdom="Plantae" lsidName="" order="Pandanales" pageId="14" pageNumber="51" phylum="Angiospermae" rank="species" species="impavida">
<emphasis italics="true" pageId="14" pageNumber="51">Freycinetia impavida</emphasis>
</taxonomicName>
, 
<taxonomicName authorityName="J. R. Forster &amp; G. Forster" authorityYear="1775" class="Magnoliopsida" family="Rhizophoraceae" genus="Crossostylis" higherTaxonomySource="GBIF,CoL" kingdom="Plantae" lsidName="" order="Malpighiales" pageId="14" pageNumber="51" phylum="Tracheophyta" rank="species" species="biflora">
<emphasis italics="true" pageId="14" pageNumber="51">Crossostylis biflora</emphasis>
</taxonomicName>
J.R. Forst. &amp; G. Forst., 
<taxonomicName class="Dicotyledoneae" family="Malvaceae" genus="Hibiscus" higherTaxonomySource="GBIF" kingdom="Plantae" lsidName="" order="Malvales" pageId="14" pageNumber="51" phylum="Angiospermae" rank="species" species="tiliaceus">
<emphasis italics="true" pageId="14" pageNumber="51">Hibiscus tiliaceus</emphasis>
</taxonomicName>
