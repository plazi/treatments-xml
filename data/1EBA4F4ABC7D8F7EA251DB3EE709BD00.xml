<taxonomicName id="F0AB3E7EA2DE8F1C00549E20CC9960D1" class="Magnoliopsida" family="Convolvulaceae" genus="Ipomoea" kingdom="Plantae" order="Solanales" phylum="Tracheophyta" rank="species" species="haenkeana">
