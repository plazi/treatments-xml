<taxonomicName id="4C276B96FFABFFFCFC15FC59049FFC48" box="[904,1010,979,1003]" class="Insecta" family="Cicadellidae" genus="Penthimia" higherTaxonomySource="GBIF" kingdom="Animalia" order="Hemiptera" pageId="8" pageNumber="9" phylum="Arthropoda" rank="species" species="noctua">
<emphasis id="B953CC07FFABFFFCFC15FC5904FBFC48" box="[904,918,980,1003]" italics="true" pageId="8" pageNumber="9">P</emphasis>
. 
<emphasis id="B953CC07FFABFFFCFC3BFC59049FFC48" box="[934,1010,980,1003]" italics="true" pageId="8" pageNumber="9">noctua</emphasis>
</taxonomicName>
, 
<taxonomicName id="4C276B96FFABFFFCFB9CFC5903EBFC48" authorityName="Shobharani &amp; Viraktamath &amp; Webb" authorityYear="2018" box="[1025,1158,978,1003]" class="Insecta" family="Cicadellidae" genus="Penthimia" higherTaxonomySource="GBIF" kingdom="Animalia" order="Hemiptera" pageId="8" pageNumber="9" phylum="Arthropoda" rank="species" species="spiculata">
<emphasis id="B953CC07FFABFFFCFB9CFC590362FC48" box="[1025,1039,980,1003]" italics="true" pageId="8" pageNumber="9">P</emphasis>
