<taxonomicName id="4C276B96FFABFFFCFD99FB910519FB90" authorityName="Bakert" authorityYear="1924" box="[516,628,1050,1075]" class="Insecta" family="Cicadellidae" genus="Penthimia" higherTaxonomySource="GBIF" kingdom="Animalia" order="Hemiptera" pageId="8" pageNumber="9" phylum="Arthropoda" rank="species" species="distanti">
<emphasis id="B953CC07FFABFFFCFD99FB91057FFB90" box="[516,530,1052,1075]" italics="true" pageId="8" pageNumber="9">P</emphasis>
. 
<emphasis id="B953CC07FFABFFFCFDBDFB970519FB90" box="[544,628,1050,1075]" italics="true" pageId="8" pageNumber="9">distanti</emphasis>
</taxonomicName>
and 
<taxonomicName id="4C276B96FFABFFFCFD37FB910406FB90" authorityName="Shobharani &amp; Viraktamath &amp; Webb" authorityYear="2018" box="[682,875,1050,1075]" class="Insecta" family="Cicadellidae" genus="Penthimia" higherTaxonomySource="GBIF" kingdom="Animalia" order="Hemiptera" pageId="8" pageNumber="9" phylum="Arthropoda" rank="species" species="meghalayensis">
<emphasis id="B953CC07FFABFFFCFD37FB9105D5FB90" box="[682,696,1052,1075]" italics="true" pageId="8" pageNumber="9">P</emphasis>
. 
<emphasis id="B953CC07FFABFFFCFD5BFB970406FB90" box="[710,875,1050,1075]" italics="true" pageId="8" pageNumber="9">meghalayensis</emphasis>
</taxonomicName>
