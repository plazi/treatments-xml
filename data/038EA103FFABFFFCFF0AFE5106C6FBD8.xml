<taxonomicName id="4C276B96FFABFFFCFB22FC590247FC48" authorityName="Shobharani &amp; Viraktamath &amp; Webb" authorityYear="2018" box="[1215,1322,978,1003]" class="Insecta" family="Cicadellidae" genus="Penthimia" higherTaxonomySource="GBIF" kingdom="Animalia" order="Hemiptera" pageId="8" pageNumber="9" phylum="Arthropoda" rank="species" species="tumida">
<emphasis id="B953CC07FFABFFFCFB22FC5903A0FC48" box="[1215,1229,980,1003]" italics="true" pageId="8" pageNumber="9">P</emphasis>
. 
<emphasis id="B953CC07FFABFFFCFB41FC5F0247FC48" box="[1244,1322,978,1003]" italics="true" pageId="8" pageNumber="9">tumida</emphasis>
</taxonomicName>
