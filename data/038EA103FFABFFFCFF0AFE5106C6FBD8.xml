<taxonomicName id="4C276B96FFABFFFCFD2AFC590414FC48" authorityName="Shobharani &amp; Viraktamath &amp; Webb" authorityYear="2018" box="[695,889,978,1003]" class="Insecta" family="Cicadellidae" genus="Penthimia" higherTaxonomySource="GBIF" kingdom="Animalia" order="Hemiptera" pageId="8" pageNumber="9" phylum="Arthropoda" rank="species" species="meghalayensis">
