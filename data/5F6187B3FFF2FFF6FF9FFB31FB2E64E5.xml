<taxonomicName id="10C84D26FFF2FFF5FF9FFB31FF0C6276" authorityName="STERNBERG" authorityYear="1825" box="[119,252,1803,1827]" class="Pteridospermopsida" family="Pachytestaceae" genus="Alethopteris" higherTaxonomySource="GBIF" kingdom="Plantae" order="Pachytestales" pageId="1" pageNumber="38" phylum="Tracheophyta" rank="genus">
