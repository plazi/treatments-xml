<collectingCountry box="[728,790,1740,1765]" name="Syria" pageId="6" pageNumber="233">Syria</collectingCountry>
, 
<collectingCountry box="[803,851,1741,1764]" name="Iraq" pageId="6" pageNumber="233">Iraq</collectingCountry>
, 
<collectingCountry box="[863,908,1741,1764]" name="Iran" pageId="6" pageNumber="233">Iran</collectingCountry>
