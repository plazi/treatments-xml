<collectingCountry box="[445,526,1740,1765]" name="Turkey" pageId="6" pageNumber="233">Turkey</collectingCountry>
, 
<collectingCountry box="[538,603,1740,1765]" name="Israel" pageId="6" pageNumber="233">Israel</collectingCountry>
, 
<collectingCountry box="[615,716,1740,1765]" name="Lebanon" pageId="6" pageNumber="233">Lebanon</collectingCountry>
