<collectingCountry box="[1325,1432,1704,1729]" name="Denmark" pageId="6" pageNumber="233">Denmark</collectingCountry>
, 
<collectingCountry box="[151,243,1740,1765]" name="Sweden" pageId="6" pageNumber="233">Sweden</collectingCountry>
