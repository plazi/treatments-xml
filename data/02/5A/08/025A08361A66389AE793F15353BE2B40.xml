<taxonomicName class="Pucciniomycetes" genus="Hemileia" higherTaxonomySource="CoL" kingdom="Fungi" lsidName="Hemileia" order="Pucciniales" pageId="4" pageNumber="5" phylum="Basidiomycota" rank="genus">Hemileia</taxonomicName>
