female (body length 650), 
<quantity box="[1106,1178,870,897]" metricMagnitude="0" metricUnit="m" metricValue="7.239" pageId="35" pageNumber="236" unit="in" value="285.0">285 in</quantity>
male (
<taxonomicName authorityName="Ausserer" authorityYear="1871" box="[1254,1359,871,897]" class="Arachnida" family="Idiopidae" genus="Idiosoma" kingdom="Animalia" order="Araneae" pageId="35" pageNumber="240" phylum="Arthropoda" rank="genus">idiosoma</taxonomicName>
length 418). 
<taxonomicName authorityName="Krefft" authorityYear="1871" box="[218,360,907,933]" class="Chromadorea" family="Gnathostomatidae" genus="Gnathosoma" higherTaxonomySource="GBIF" kingdom="Animalia" order="Spirurida" pageId="35" pageNumber="203" phylum="Nematoda" rank="genus">Gnathosoma</taxonomicName>
length 
<quantity box="[447,576,907,933]" metricMagnitude="0" metricUnit="m" metricValue="7.747" metricValueMax="8.382" metricValueMin="7.112" pageId="35" pageNumber="236" unit="in" value="305.0" valueMax="330.0" valueMin="280.0">280–330 in</quantity>
adult. 
<taxonomicName authorityName="Krefft" authorityYear="1871" box="[656,798,907,933]" class="Chromadorea" family="Gnathostomatidae" genus="Gnathosoma" higherTaxonomySource="GBIF" kingdom="Animalia" order="Spirurida" pageId="35" pageNumber="203" phylum="Nematoda" rank="genus">Gnathosoma</taxonomicName>
width 
<quantity box="[879,951,907,933]" metricMagnitude="0" metricUnit="m" metricValue="3.3781999999999996" pageId="35" pageNumber="236" unit="in" value="133.0">133 in</quantity>
female (
<taxonomicName authorityName="Krefft" authorityYear="1871" box="[1052,1189,907,933]" class="Chromadorea" family="Gnathostomatidae" genus="Gnathosoma" higherTaxonomySource="GBIF" kingdom="Animalia" order="Spirurida" pageId="35" pageNumber="203" phylum="Nematoda" rank="genus">gnathosoma</taxonomicName>
length 273). Ratio of 
<taxonomicName authorityName="Krefft" authorityYear="1871" box="[151,286,943,969]" class="Chromadorea" family="Gnathostomatidae" genus="Gnathosoma" higherTaxonomySource="GBIF" kingdom="Animalia" order="Spirurida" pageId="35" pageNumber="203" phylum="Nematoda" rank="genus">gnathosoma</taxonomicName>
