<taxonomicName authority=", Latin" authorityName="Latin" box="[354,532,1289,1314]" class="Insecta" family="Chrysomelidae" genus="Beltia" higherTaxonomySource="GBIF" kingdom="Animalia" order="Coleoptera" pageId="11" pageNumber="10" phylum="Arthropoda" rank="species" species="confusa">
