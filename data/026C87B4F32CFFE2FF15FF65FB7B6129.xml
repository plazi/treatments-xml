<taxonomicName id="4DC54D21F32CFFE2FCB0FB75FC3460DB" authorityName="Jacoby" authorityYear="1881" box="[869,941,1228,1252]" class="Insecta" family="Chrysomelidae" genus="Beltia" higherTaxonomySource="GBIF" kingdom="Animalia" order="Coleoptera" pageId="21" pageNumber="20" phylum="Arthropoda" rank="genus">
