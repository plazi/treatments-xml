<collectingCountry box="[737,852,1669,1694]" name="Venezuela" pageId="26" pageNumber="825">Venezuela</collectingCountry>
and 
<collectingCountry box="[911,1003,1669,1694]" name="Trinidad and Tobago" pageId="26" pageNumber="825">Trinidad</collectingCountry>
