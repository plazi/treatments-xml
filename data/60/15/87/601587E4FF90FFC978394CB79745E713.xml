<paragraph blockId="2.[263,700,442,467]" box="[263,700,442,467]" pageId="2" pageNumber="3">
<heading box="[263,700,442,467]" centered="true" fontSize="10" level="2" pageId="2" pageNumber="3" reason="4">
<taxonomicName authority="(Fabricius, 1804)" authorityName="Bristowe" authorityYear="1925" baseAuthorityName="Fabricius" baseAuthorityYear="1804" box="[263,700,442,467]" class="Insecta" family="Crabronidae" genus="Trachypus" kingdom="Animalia" order="Hymenoptera" pageId="2" pageNumber="3" phylum="Arthropoda" rank="species" species="elongatus">
