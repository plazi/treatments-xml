<taxonomicName id="4C484D53FF99412AFF72FB12FE03B7A6" authority="Becker, 1914: 129" authorityName="Becker" authorityPageNumber="129" authorityYear="1914" box="[151,434,1226,1248]" class="Insecta" family="Chloropidae" genus="Alombus" higherTaxonomySource="GBIF" kingdom="Animalia" order="Diptera" pageId="11" pageNumber="12" phylum="Arthropoda" rank="genus">
