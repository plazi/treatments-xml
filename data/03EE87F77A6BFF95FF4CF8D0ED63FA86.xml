<taxonomicName id="4C474D627A69FF95FD64FA82EF3BFAE3" box="[703,882,1303,1328]" class="Magnoliopsida" family="Zygophyllaceae" higherTaxonomySource="GBIF" kingdom="Plantae" order="Sapindales" pageId="22" pageNumber="223" phylum="Magnoliopsida" rank="family">Zygophyllaceae</taxonomicName>
