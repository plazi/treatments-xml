<collectionCode LSID="urn:lsid:biocol.org:col:34991" box="[632,714,1665,1688]" httpUri="http://biocol.org/urn:lsid:biocol.org:col:34991" name="Hungarian Natural History Museum (Termeszettudomanyi Muzeum)" pageId="19" pageNumber="20">HNHM</collectionCode>
