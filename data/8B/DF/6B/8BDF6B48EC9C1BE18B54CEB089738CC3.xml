<taxonomicName class="Insecta" family="Acrididae" genus="Odontomelus" higherTaxonomySource="CoL" kingdom="Animalia" lsidName="Odontomelus usambaricus" order="Orthoptera" pageId="7" pageNumber="44" phylum="Arthropoda" rank="species" species="usambaricus">Odontomelus usambaricus</taxonomicName>
