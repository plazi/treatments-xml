<subSubSection pageId="0" pageNumber="123" type="reference_group">
<paragraph pageId="0" pageNumber="123">
<taxonomicName authorityName="Alexander" authorityYear="1935" class="Insecta" family="Tipulidae" genus="Nephrotoma" higherTaxonomySource="CoL" kingdom="Animalia" lsidName="Nephrotoma evittata" order="Diptera" pageId="0" pageNumber="123" phylum="Arthropoda" rank="species" species="evittata">Nephrotoma evittata</taxonomicName>
