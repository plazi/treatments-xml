<taxonomicName class="Insecta" family="Formicidae" genus="Tetramorium" higherTaxonomySource="CoL" kingdom="Animalia" lsidName="Tetramorium" order="Hymenoptera" pageId="9" pageNumber="54" phylum="Arthropoda" rank="genus">Tetramorium</taxonomicName>
