<taxonomicName class="Dicotyledoneae" family="Lamiaceae" genus="Salvia" higherTaxonomySource="GBIF" kingdom="Plantae" lsidName="Salvia verticillata" order="Tubiflorae" pageId="5" pageNumber="88" phylum="Angiospermae" rank="species" species="verticillata">
