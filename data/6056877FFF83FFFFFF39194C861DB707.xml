<taxonomicName id="2FFF4DEAFF83FFFFFF39194C8458B150" baseAuthorityName="Klotz" baseAuthorityYear="1932" box="[160,268,833,859]" class="Insecta" kingdom="Animalia" order="Odonata" pageId="20" pageNumber="819" phylum="Arthropoda" rank="order">
