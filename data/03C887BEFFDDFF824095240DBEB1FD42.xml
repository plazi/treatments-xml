<taxonomicName id="4C614D2BFFDBFF8242842779B8E6FEA5" authority="Thomson, 1867" authorityName="Thomson" authorityYear="1867" box="[646,972,295,320]" class="Insecta" family="Cerambycidae" genus="Tropidion" kingdom="Animalia" order="Coleoptera" pageId="13" pageNumber="404" phylum="Arthropoda" rank="species" species="salamis">
