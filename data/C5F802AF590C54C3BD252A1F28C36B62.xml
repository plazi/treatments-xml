<taxonomicName id="B7F18A0E6BF861AC3FFB8DCE33CE6754" LSID="C5F802AF-590C-54C3-BD25-2A1F28C36B62" authority="Baker" authorityName="Baker" authorityYear="1896" class="Liliopsida" family="Asphodelaceae" genus="Aloe" higherTaxonomySource="CoL" kingdom="Plantae" lsidName="Aloe rupestris" order="Asparagales" pageId="0" pageNumber="1" phylum="Tracheophyta" rank="species" species="rupestris">Aloe rupestris Baker</taxonomicName>
