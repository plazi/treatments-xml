<taxonomicName id="4C7B4D12FFD7B327FEEE4FFAFE1DF912" authorityName="C.A.Viraktamath" authorityYear="2011" box="[322,460,1729,1753]" class="Insecta" family="Cicadellidae" genus="Formallia" higherTaxonomySource="GBIF" kingdom="Animalia" order="Hemiptera" pageId="53" pageNumber="54" phylum="Arthropoda" rank="species" species="longistyla">
<emphasis id="B90FEA83FFD7B327FEEE4FFAFE1DF912" box="[322,460,1729,1753]" italics="true" pageId="53" pageNumber="54">F. longistyla</emphasis>
</taxonomicName>
