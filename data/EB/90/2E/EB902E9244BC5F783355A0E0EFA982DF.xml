<subSubSection pageId="35" pageNumber="36" type="nomenclature">
<paragraph pageId="35" pageNumber="36">
<taxonomicName LSID="urn:lsid:zoobank.org:act:56864290-24D2-4BEB-9FB8-5B96BCABAAFD" authority="Reemer" authorityName="Reemer" authorityYear="2013" class="Insecta" family="Syrphidae" genus="Menidon" higherTaxonomySource="GBIF" kingdom="Animalia" lsidName="Menidon" order="Diptera" pageId="35" pageNumber="36" phylum="Arthropoda" rank="genus">Menidon Reemer</taxonomicName>
