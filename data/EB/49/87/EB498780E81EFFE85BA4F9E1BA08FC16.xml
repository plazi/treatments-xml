<collectingRegion box="[151,224,655,681]" country="Turkey" name="Adana" pageId="49" pageNumber="50">Adana</collectingRegion>
and 
<collectingCountry box="[279,346,655,681]" name="Turkey" pageId="49" pageNumber="50">Hatay</collectingCountry>
(
<bibRefCitation author="Spatenka, K. &amp; Gorbunov, O. &amp; Lastuvka, Z. &amp; Tosevski, I. &amp; Arita, Y." box="[360,593,655,683]" pageId="49" pageNumber="50" refId="ref61296" refString="Spatenka, K., Gorbunov, O., Lastuvka, Z., Tosevski, I. &amp; Arita, Y. (1999) s. n. In: Naumann, C. (Ed.), Handbook of Palaearctic Macrolepidoptera. Vol. 1. Sesiidae - Clearwing Moths. Gem Publishing Company, Wallingford, pp. 1 - 569." type="book" year="1999">
