<subSubSection pageId="8" pageNumber="69" type="reference_group">
<paragraph pageId="8" pageNumber="69">
<taxonomicName class="Insecta" family="Heptageniidae" genus="Rhithrogena" higherTaxonomySource="CoL" kingdom="Animalia" lsidName="Rhithrogena (Tumungula) siamensis" order="Ephemeroptera" pageId="8" pageNumber="69" phylum="Arthropoda" rank="species" species="siamensis" subGenus="Tumungula">Rhithrogena (Tumungula) siamensis</taxonomicName>
