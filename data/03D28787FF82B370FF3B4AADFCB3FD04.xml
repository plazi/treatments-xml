<quantity id="4C839B74FF80B370FED1481FFE03FEF4" box="[381,466,295,319]" metricMagnitude="-3" metricUnit="m" metricValue="3.2" pageId="98" pageNumber="99" unit="mm" value="3.2">3.2 mm</quantity>
