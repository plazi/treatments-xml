<taxonomicName id="4C674D3E0C05F8286E7B9914FC6C750E" authorityName="Fabricius" authorityYear="1801" box="[795,903,771,795]" class="Insecta" family="Erotylidae" genus="Aegithus" higherTaxonomySource="GBIF" kingdom="Animalia" order="Coleoptera" pageId="21" pageNumber="20" phylum="Arthropoda" rank="genus">
