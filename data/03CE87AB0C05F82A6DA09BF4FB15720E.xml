<taxonomicName id="4C674D3E0C06F82B69909D38FAB37151" box="[1264,1368,1839,1860]" class="Insecta" family="Erotylidae" genus="Aegithus" higherTaxonomySource="GBIF" kingdom="Animalia" order="Coleoptera" pageId="22" pageNumber="21" phylum="Arthropoda" rank="species" species="lebasii">
