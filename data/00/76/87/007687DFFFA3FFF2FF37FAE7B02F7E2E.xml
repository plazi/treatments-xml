<taxonomicName authority="colchica" authorityName="colchica (Herrich-Schaffer" authorityYear="1851" box="[175,367,2005,2026]" class="Insecta" family="Cossidae" genus="Stygia" higherTaxonomySource="GBIF" kingdom="Animalia" order="Lepidoptera" pageId="1" pageNumber="598" phylum="Arthropoda" rank="subSpecies" species="colchica" subSpecies="colchica">
