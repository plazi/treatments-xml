<subSubSection pageId="9" pageNumber="74" type="basionym">
<paragraph pageId="9" pageNumber="74">Basionym.</paragraph>
<paragraph pageId="9" pageNumber="74">
<taxonomicName class="Agaricomycetes" family="Schizoporaceae" genus="Hyphodontia" higherTaxonomySource="CoL" kingdom="Fungi" lsidName="Hyphodontia magnifica" order="Hymenochaetales" pageId="9" pageNumber="74" phylum="Basidiomycota" rank="species" species="magnifica">Hyphodontia magnifica</taxonomicName>
