<paragraph pageNumber="258">
<taxonomicName LSID-HNS="urn:lsid:biosci.ohio-state.edu:osuc_concepts:145356" authority="Andrei" authorityName="Andrei" class="Hexapoda" family="Formicidae" genus="Sima" higherTaxonomySource="GBIF" kingdom="Animalia" lsidName-HNS="Sima hysterica Forel" order="Hymenoptera" pageNumber="258" phylum="Arthropoda" rank="species" species="hysterica">SIMA HYSTERICA</taxonomicName>
