<taxonomicName class="Polychaeta" family="Orbiniidae" genus="Scoloplos" higherTaxonomySource="CoL" kingdom="Animalia" lsidName="Scoloplos haasi" pageId="0" pageNumber="20997" phylum="Annelida" rank="species" species="haasi">Scoloplos haasi</taxonomicName>
