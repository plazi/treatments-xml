(previous records are 
<taxonomicName authority="Andersen, 1982" authorityName="Andersen" authorityYear="1982" class="Insecta" family="Gerridae" genus="Eotrechus" higherTaxonomySource="GBIF" kingdom="Animalia" order="Hemiptera" pageId="4" pageNumber="43" phylum="Arthropoda" rank="species" species="brevipes">
