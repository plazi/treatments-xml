from Sikkim, and 
<taxonomicName box="[1106,1248,364,389]" class="Insecta" family="Gerridae" genus="Eotrechus" higherTaxonomySource="GBIF" kingdom="Animalia" order="Hemiptera" pageId="4" pageNumber="43" phylum="Arthropoda" rank="species" species="kalidasa">
<emphasis box="[1106,1248,364,389]" italics="true" pageId="4" pageNumber="43">E. kalidasa</emphasis>
