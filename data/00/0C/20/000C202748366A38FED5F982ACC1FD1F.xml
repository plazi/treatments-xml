<taxonomicName box="[442,668,1284,1309]" class="Insecta" family="Gerridae" genus="Eotrechus" higherTaxonomySource="GBIF" kingdom="Animalia" order="Hemiptera" pageId="8" pageNumber="47" phylum="Arthropoda" rank="species" species="kalidasa">
