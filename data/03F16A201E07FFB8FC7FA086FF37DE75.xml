<taxonomicName id="4C58A0B51E07FFBAFCB3A12DFC42DF38" authorityName="Lower" authorityYear="1903" box="[809,943,1300,1321]" class="Insecta" family="Geometridae" genus="Paramelora" kingdom="Animalia" order="Lepidoptera" pageId="24" pageNumber="281" phylum="Arthropoda" rank="genus">
<emphasis id="B92C07241E07FFBAFCB3A12DFC42DF38" box="[809,943,1300,1321]" italics="true" pageId="24" pageNumber="281">Paramelora</emphasis>
</taxonomicName>
<materialsCitation id="3B30D16B1E07FFBAFC27A12CFB2EDF58" country="Australia" location="Lower" pageId="24" pageNumber="281" specimenCount="1">
Lower, 1903. 
<typeStatus id="54E365941E07FFBAFBFBA12CFB75DF3B" box="[1121,1176,1301,1322]" pageId="24" pageNumber="281">Type</typeStatus>
