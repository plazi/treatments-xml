<taxonomicName id="4C58A0B51E07FFBAFA91A12DFC5EDF59" authorityName="Lower" authorityYear="1903" class="Insecta" family="Geometridae" genus="Paramelora" kingdom="Animalia" order="Lepidoptera" pageId="24" pageNumber="281" phylum="Arthropoda" rank="species" species="zophodesma">
<emphasis id="B92C07241E07FFBAFA91A12DFC5EDF59" italics="true" pageId="24" pageNumber="281">Paramelora zophodesma</emphasis>
</taxonomicName>
<location id="8E878DED1E07FFBAFC21A10AFBEEDF59" LSID="urn:lsid:plazi:treatment:03F16A201E07FFB8FC7FA086FF37DE75:8E878DED1E07FFBAFC21A10AFBEEDF59" box="[955,1027,1331,1352]" country="Australia" name="Lower" pageId="24" pageNumber="281">Lower</location>
, 1903. 
<collectingCountry id="F34F9BA61E07FFBAFBCEA10AFB2EDF58" box="[1108,1219,1331,1353]" name="Australia" pageId="24" pageNumber="281">Australia</collectingCountry>
</materialsCitation>
