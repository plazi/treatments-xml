<subSubSection id="B7D238922253758BA177E1C60EA22041" pageId="0" pageNumber="61" type="nomenclature">
<paragraph id="94C11C850B873E4A3A5313F6DB118793" pageId="0" pageNumber="61">
<taxonomicName id="EB0B574FF82F69456D510439DD3722C4" authority="Horstmann, 2012" authorityName="Horstmann" authorityYear="2012" class="Insecta" family="Ichneumonidae" genus="Diaparsis" higherTaxonomySource="CoL" kingdom="Animalia" lsidName="Diaparsis (Diaparsis) splendens" order="Hymenoptera" pageId="0" pageNumber="61" phylum="Arthropoda" rank="species" species="splendens" subGenus="Diaparsis">Diaparsis (Diaparsis) splendens Horstmann, 2012</taxonomicName>
