</emphasis>
<taxonomicName id="4C014D2FFFE2FFC02C7DFE2CC9A56373" authority="Schenkling, 1900: 397" authorityName="Schenkling" authorityPageNumber="397" authorityYear="1900" box="[307,765,506,529]" class="Insecta" family="Cleridae" genus="Epiphlaeus" higherTaxonomySource="GBIF" kingdom="Animalia" order="Coleoptera" pageId="34" pageNumber="35" phylum="Arthropoda" rank="species" species="simplex">
