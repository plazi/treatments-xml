<subSubSection pageId="6" pageNumber="501" type="distribution">
<paragraph blockId="6.[151,1437,327,1000]" pageId="6" pageNumber="501">
<emphasis bold="true" box="[199,352,471,496]" pageId="6" pageNumber="501">Distribution.</emphasis>
