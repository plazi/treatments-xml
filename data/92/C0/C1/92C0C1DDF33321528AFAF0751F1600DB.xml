</paragraph>
<paragraph pageId="379" pageNumber="380">
<taxonomicName authorityName="Casey" authorityYear="1918" class="Hexapoda" family="Carabidae" genus="Bembidion" higherTaxonomySource="GBIF" kingdom="Animalia" lsidName="" order="Coleoptera" pageId="379" pageNumber="380" phylum="Arthropoda" rank="species" species="sedulum">Bembidion sedulum</taxonomicName>
