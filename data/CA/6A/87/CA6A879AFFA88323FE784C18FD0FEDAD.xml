<subSubSection pageId="2" pageNumber="10" type="etymology">
<paragraph blockId="2.[831,1436,414,469]" pageId="2" pageNumber="10">
<emphasis bold="true" box="[831,978,414,437]" pageId="2" pageNumber="10">Etymologie:</emphasis>
