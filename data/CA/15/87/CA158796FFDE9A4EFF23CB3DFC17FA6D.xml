<subSubSection box="[192,1305,1403,1429]" pageId="12" pageNumber="11" type="etymology">
<paragraph blockId="12.[192,1305,1403,1429]" box="[192,1305,1403,1429]" pageId="12" pageNumber="11">
<emphasis bold="true" box="[192,324,1403,1429]" pageId="12" pageNumber="11">Etymology.</emphasis>
