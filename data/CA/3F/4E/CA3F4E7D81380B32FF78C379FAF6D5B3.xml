<taxonomicName authorityName="Lacepede" authorityYear="1802" box="[1285,1435,151,176]" class="Actinopterygii" family="Apogonidae" genus="Ostorhinchus" kingdom="Animalia" order="Perciformes" pageId="33" pageNumber="184" phylum="Chordata" rank="genus">
<emphasis box="[1285,1435,151,176]" italics="true" pageId="33" pageNumber="184">Ostorhinchus</emphasis>
</taxonomicName>
