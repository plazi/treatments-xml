<paragraph pageId="18" pageNumber="87">
<taxonomicName LSID="D6F88A1F-4E79-5B20-B415-8FB0B33612CF" authority="J. R. Edm., Fl. Turkey &amp; E. Aegean Isl. 9: 623. 473. 1985." class="Liliopsida" family="Poaceae" genus="Poa" higherTaxonomySource="CoL" kingdom="Plantae" lsidName="Poa speluncarum" order="Poales" pageId="18" pageNumber="87" phylum="Tracheophyta" rank="species" species="speluncarum">
