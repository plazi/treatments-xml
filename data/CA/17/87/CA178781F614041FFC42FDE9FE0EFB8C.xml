<subSubSection lastPageId="13" lastPageNumber="132" pageId="8" pageNumber="127" type="description">
<paragraph blockId="8.[831,1364,841,866]" box="[831,1364,841,866]" pageId="8" pageNumber="127">
<emphasis bold="true" box="[831,1181,841,864]" pageId="8" pageNumber="127">Additional material (1907 ex.):</emphasis>
