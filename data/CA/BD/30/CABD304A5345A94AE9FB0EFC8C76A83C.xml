<taxonomicName class="Liliopsida" family="Asteliaceae" genus="Astelia" higherTaxonomySource="CoL" kingdom="Plantae" lsidName="Astelia microsperma" order="Asparagales" pageId="7" pageNumber="112" phylum="Tracheophyta" rank="species" species="microsperma">
