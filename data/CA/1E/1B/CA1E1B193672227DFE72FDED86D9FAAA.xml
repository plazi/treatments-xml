= 0.913); female 
<quantity metricMagnitude="-2" metricUnit="m" metricValue="2.4" metricValueMax="2.6" metricValueMin="2.2" pageId="12" pageNumber="1554" unit="mm" value="24.0" valueMax="26.0" valueMin="22.0">22– 26 mm</quantity>
