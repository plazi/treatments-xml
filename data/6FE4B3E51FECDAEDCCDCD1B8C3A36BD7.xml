<taxonomicName id="60A51E7E5A137D6F4B398D4C6E70E7BE" LSID="http://species-id.net/wiki/Ophiolepis_paucispina" authority="Say, 1825" authorityName="Say" authorityYear="1825" class="Ophiuroidea" family="Ophiolepididae" genus="Ophiolepis" higherTaxonomySource="CoL" kingdom="Animalia" lsidName="Ophiolepis paucispina" order="Amphilepidida" pageId="7" pageNumber="52" phylum="Echinodermata" rank="species" species="paucispina">
<pageBreakToken id="0B70553800F469E91CFDECC664255A11" pageId="7" pageNumber="52" start="start">Ophiolepis</pageBreakToken>
paucispina (Say, 1825)
</taxonomicName>
Figure 3
<normalizedToken id="2838847796303E296AC9CACA27342CF7" originalValue="g–l">g-l</normalizedToken>
</paragraph>
