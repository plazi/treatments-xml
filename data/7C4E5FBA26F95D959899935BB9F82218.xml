<paragraph id="349BEF8A2955C5FC9C9BC1D9C469CFF6" pageId="0" pageNumber="35">
<taxonomicName id="01A186DE44CA50238EB82F93FC7B74EC" authority="Song, Yuan &amp; Jiang, 2021" authorityName="Song &amp; Yuan &amp; Jiang" authorityYear="2021" class="Insecta" family="Cicadellidae" genus="Shibinga" higherTaxonomySource="GBIF" kingdom="Animalia" lsidName="Shibinga nigra" order="Hemiptera" pageId="0" pageNumber="35" phylum="Arthropoda" rank="species" species="nigra">
