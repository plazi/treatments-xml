<taxonomicName authorityName="Eichhoff" authorityYear="1878" class="Lecanoromycetes" family="Stereocaulaceae" genus="Xyleborus" higherTaxonomySource="CoL" kingdom="Fungi" lsidName="Xyleborus muriceus" order="Lecanorales" pageId="0" pageNumber="1" phylum="Ascomycota" rank="species" species="muriceus">
