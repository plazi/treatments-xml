<subSubSection pageId="2" pageNumber="3" type="etymology">
<paragraph blockId="2.[869,1494,634,723]" pageId="2" pageNumber="3">
<emphasis bold="true" box="[869,1005,634,659]" pageId="2" pageNumber="3">Etymology:</emphasis>
