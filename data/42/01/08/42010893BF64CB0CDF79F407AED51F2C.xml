and 
<taxonomicName class="Insecta" family="Carabidae" genus="Bembidion" higherTaxonomySource="CoL" kingdom="Animalia" lsidName="Bembidion georgeballi" order="Coleoptera" pageId="4" pageNumber="55" phylum="Arthropoda" rank="species" species="georgeballi">Bembidion georgeballi</taxonomicName>
