<taxonomicName id="52EB4D24FF81FFA5FD38F8DDAFDCF8FF" box="[764,940,1886,1912]" class="Insecta" family="Tortricidae" genus="Olethreutinae" higherTaxonomySource="GBIF" kingdom="Metazoa" order="Lepidoptera" pageId="10" pageNumber="44" phylum="Arthropoda" rank="genus">Olethreutinae</taxonomicName>
