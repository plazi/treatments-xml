<heading id="CE1C81CBFF81FFA5FF53F8DDAFC4F8FF" bold="true" box="[151,948,1886,1912]" fontSize="11" level="1" pageId="10" pageNumber="41" reason="1">
<emphasis id="A79FEAB5FF81FFA5FF53F8DDAFC4F8FF" bold="true" box="[151,948,1886,1912]" pageId="10" pageNumber="41">
<taxonomicName id="52EB4D24FF81FFA5FF53F8DDAE3EF8FF" authority="Meyrick" authorityName="Meyrick" authorityYear="1915" box="[151,590,1886,1912]" class="Insecta" family="Tortricidae" genus="Thaumatotibia" higherTaxonomySource="GBIF" kingdom="Animalia" order="Lepidoptera" pageId="10" pageNumber="41" phylum="Arthropoda" rank="species" species="leucotreta">
<emphasis id="A79FEAB5FF81FFA5FF53F8DDADB9F8FF" bold="true" box="[151,457,1886,1912]" italics="true" pageId="10" pageNumber="41">Thaumatotibia leucotreta</emphasis>
(Meyrick)
</taxonomicName>
(
<taxonomicName id="52EB4D24FF81FFA5FD99F8DDAE80F8FF" box="[605,752,1886,1912]" class="Insecta" family="Tortricidae" kingdom="Animalia" order="Lepidoptera" pageId="10" pageNumber="41" phylum="Arthropoda" rank="family">Tortricidae</taxonomicName>
