E 
<taxonomicName id="82C53C0929820E34735BE72939AA9072" LSID="E85C9979-E4FC-58B2-A6BE-4FE851804E0E" authority="Gideon F. Sm. &amp; Figueiredo" authorityName="Gideon F. Sm. &amp; Figueiredo" authorityYear="2018" class="Liliopsida" family="Asphodelaceae" genus="Aloe" higherTaxonomySource="CoL" kingdom="Plantae" lsidName="Aloe viridiana" order="Asparagales" pageId="0" pageNumber="1" phylum="Tracheophyta" rank="species" species="viridiana">Aloe viridiana Gideon F.Sm. &amp; Figueiredo</taxonomicName>
