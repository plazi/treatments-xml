); from 
<taxonomicName id="C4AEAE08107AFC3ED1979013C97C65BE" class="Insecta" family="Araceae" genus="E." kingdom="Animalia" lsidName="E. afrorepanda" order="Diptera" pageId="0" pageNumber="67134" phylum="Arthropoda" rank="species" species="afrorepanda">
