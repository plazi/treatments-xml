<taxonomicName id="C5CC5CC57FF7322377030EB05C9224E3" class="Insecta" family="Araceae" genus="E." kingdom="Animalia" lsidName="E. parva" order="Diptera" pageId="0" pageNumber="67134" phylum="Arthropoda" rank="species" species="parva">
