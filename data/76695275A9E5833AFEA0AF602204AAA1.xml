<taxonomicName id="AF2FC4D79FF250C0664CA28310362967" class="Magnoliopsida" family="Anacardiaceae" genus="Pistacia" higherTaxonomySource="CoL" kingdom="Plantae" lsidName="Pistacia vera" order="Sapindales" pageId="3" pageNumber="32" phylum="Tracheophyta" rank="species" species="vera">Pistacia vera</taxonomicName>
