<subSubSection id="D10F6807407CC01B19E01CB3CFF54C5D" pageId="3" pageNumber="32" type="materials_examined">
<paragraph id="49C34D22878C124C31190D11BBFCEE5B" pageId="3" pageNumber="32">Type.</paragraph>
<paragraph id="3ED35907482C205349B4B5000BAEC03F" pageId="3" pageNumber="32">
