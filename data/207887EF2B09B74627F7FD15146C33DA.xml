<subSubSection id="E0CB65722B09B74727F7FD4C12813154" box="[151,1189,752,774]" pageId="2" pageNumber="491" type="reference_group">
<paragraph id="A86E36F92B09B74727F7FD4C12813154" blockId="2.[151,1189,752,774]" box="[151,1189,752,774]" pageId="2" pageNumber="491">
<taxonomicName id="6FD14D7A2B09B74727F7FD4C178E3154" authority="Chujo, 1962: 101" authorityName="Chujo" authorityPageNumber="101" authorityYear="1962" box="[151,426,752,774]" class="Insecta" family="Chrysomelidae" genus="Shairella" higherTaxonomySource="GBIF" kingdom="Animalia" order="Coleoptera" pageId="2" pageNumber="491" phylum="Arthropoda" rank="genus">
