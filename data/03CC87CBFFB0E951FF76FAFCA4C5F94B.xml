<taxonomicName id="4C654D5EFFB0E951FECCFA71A7B6FA11" authority="Furukawa, 1970" authorityName="Furukawa" authorityYear="1970" box="[301,643,1422,1445]" class="Insecta" family="Trigonidiidae" genus="Usgmona" higherTaxonomySource="GBIF" kingdom="Animalia" order="Orthoptera" pageId="1" pageNumber="436" phylum="Arthropoda" rank="species" species="genji">
<emphasis id="B911EACFFFB0E951FECCFA71A4FAFA11" box="[301,463,1422,1445]" italics="true" pageId="1" pageNumber="436">Usgmona genji</emphasis>
<bibRefCitation id="EFF44B2CFFB0E951FE37FA71A7B6FA11" author="Furukawa" box="[470,643,1422,1445]" pageId="1" pageNumber="436" refString="Furukawa, H. (1970) Two new interesting genera and species of crickets of Japan (Orthoptera). Kontyu, 38 (1), 59 - 66." type="journal article" year="1970">
Furukawa, 
<number id="3DAD24FAFFB0E951FDAFFA71A7B6FA11" box="[590,643,1422,1445]" pageId="1" pageNumber="436" value="1970.0">1970</number>
