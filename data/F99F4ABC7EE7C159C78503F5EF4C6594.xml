<paragraph id="644D5AD9E8908A39F7194F1E634DD3B4" pageId="47" pageNumber="84">
Note: 
<taxonomicName id="80B4F5E0EB908460DA752A2C0ED2CD64" genus="P." lsidName="P. cyanoptera" pageId="47" pageNumber="84" rank="species" species="cyanoptera">P. cyanoptera</taxonomicName>
