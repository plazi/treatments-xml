<emphasis id="B948CD0F7001EB6F2AC9FD0B645765CF" bold="true" box="[199,262,727,753]" pageId="35" pageNumber="36">Host.</emphasis>
* 
<taxonomicName id="4C3C6A9E7001EB6F2B16FD0B649865CF" box="[280,457,727,753]" class="Magnoliopsida" family="Ranunculaceae" kingdom="Plantae" order="Ranunculales" pageId="35" pageNumber="36" phylum="Tracheophyta" rank="family">Ranunculaceae</taxonomicName>
: 
<taxonomicName id="4C3C6A9E7001EB6F2BDDFD0B67B965CF" authority="L." box="[467,744,727,753]" class="Magnoliopsida" family="Ranunculaceae" genus="Ranunculus" kingdom="Plantae" order="Ranunculales" pageId="35" pageNumber="36" phylum="Tracheophyta" rank="species" species="abortivus">
