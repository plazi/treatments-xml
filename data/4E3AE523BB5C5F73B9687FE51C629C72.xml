<paragraph id="0148BF64DAD5BC3D11F5CB35B592BB54" pageId="24" pageNumber="63">
<taxonomicName id="253014636F2F127F2E577AACD596851C" authorityName="Pilg" authorityYear="1899" class="Liliopsida" family="Poaceae" genus="Gynerium" higherTaxonomySource="CoL" kingdom="Plantae" lsidName="Gynerium columbianum" order="Poales" pageId="24" pageNumber="63" phylum="Tracheophyta" rank="species" species="columbianum">Gynerium columbianum</taxonomicName>
