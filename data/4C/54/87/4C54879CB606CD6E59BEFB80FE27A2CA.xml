, 
<collectingCountry box="[1091,1216,1541,1567]" name="Costa Rica" pageId="91" pageNumber="92">Costa Rica</collectingCountry>
, 
<collectingCountry box="[1227,1289,1541,1567]" name="Cuba" pageId="91" pageNumber="92">Cuba</collectingCountry>
, 
<collectingCountry box="[1299,1432,1541,1567]" name="El Salvador" pageId="91" pageNumber="92">El Salvador</collectingCountry>
, 
<collectingCountry box="[151,275,1577,1603]" name="Guatemala" pageId="91" pageNumber="92">Guatemala</collectingCountry>
, 
<collectingCountry box="[287,399,1577,1603]" name="Honduras" pageId="91" pageNumber="92">Honduras</collectingCountry>
, 
