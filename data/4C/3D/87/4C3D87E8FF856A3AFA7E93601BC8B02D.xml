, 
<collectingRegion box="[1408,1463,1949,1978]" country="Indonesia" name="Bali" pageId="126" pageNumber="885">Bali</collectingRegion>
, Lombok, 
<collectingCountry box="[1614,1701,1949,1978]" name="Indonesia" pageId="126" pageNumber="885">Flores</collectingCountry>
