, hindfoot 
<quantity box="[2014,2163,2657,2682]" metricMagnitude="-2" metricUnit="m" metricValue="1.05" metricValueMax="1.1" metricValueMin="1.0" pageId="152" pageNumber="913" unit="mm" value="10.5" valueMax="11.0" valueMin="10.0">10-11 mm</quantity>
