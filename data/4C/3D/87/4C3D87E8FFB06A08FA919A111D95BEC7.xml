<collectingCountry box="[787,950,470,499]" name="Democratic Republic of the Congo" pageId="76" pageNumber="834">DR Congo</collectingCountry>
, 
<collectingCountry box="[981,1093,470,499]" name="Uganda" pageId="76" pageNumber="834">Uganda</collectingCountry>
, and 
<collectingCountry box="[1200,1328,470,499]" name="Tanzania" pageId="76" pageNumber="834">Tanzania</collectingCountry>
