<taxonomicName box="[2108,2265,1878,1911]" class="Magnoliopsida" family="Fabaceae" genus="Brachystegia" kingdom="Plantae" order="Fabales" pageId="73" pageNumber="831" phylum="Tracheophyta" rank="genus">Brachystegia</taxonomicName>
and 
<taxonomicName authorityName="Pellegrin" authorityYear="1943" box="[2335,2499,1880,1913]" class="Magnoliopsida" family="Fabaceae" genus="Julbernardia" kingdom="Plantae" order="Fabales" pageId="73" pageNumber="831" phylum="Tracheophyta" rank="genus">Julbernardia</taxonomicName>
(both 
<taxonomicName box="[1386,1522,1917,1946]" class="Magnoliopsida" family="Fabaceae" kingdom="Plantae" order="Fabales" pageId="73" pageNumber="831" phylum="Tracheophyta" rank="family">Fabaceae</taxonomicName>
).
</paragraph>
</subSubSection>
