<collectingRegion box="[2155,2245,2848,2873]" country="China" name="Fujian" pageId="214" pageNumber="976">Fujian</collectingRegion>
, 
<collectingCountry box="[2263,2349,2848,2873]" name="China" pageId="214" pageNumber="976">China</collectingCountry>
