<paragraph blockId="1.[151,1437,1740,2017]" pageId="1" pageNumber="90">
<emphasis bold="true" box="[199,334,1848,1873]" pageId="1" pageNumber="90">Etymology.</emphasis>
<taxonomicName box="[342,508,1848,1873]" class="Insecta" family="Coenagrionidae" genus="Mortonagrion" kingdom="Animalia" order="Odonata" pageId="1" pageNumber="93" phylum="Arthropoda" rank="species" species="megabinluyog">Megabinluyog</taxonomicName>
