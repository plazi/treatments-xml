<taxonomicName authorityName="Blas &amp; Navarro" authorityYear="2010" baseAuthorityName="Schaus" baseAuthorityYear="1904" box="[809,965,1421,1446]" class="Insecta" family="Noctuidae" genus="Bergiantina" higherTaxonomySource="GBIF" kingdom="Animalia" order="Lepidoptera" pageId="11" pageNumber="35" phylum="Arthropoda" rank="species" species="magnifica">
