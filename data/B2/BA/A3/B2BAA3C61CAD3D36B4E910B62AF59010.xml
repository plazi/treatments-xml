<taxonomicName family="Poaceae" genus="B." kingdom="Plantae" lsidName="B. rubens" order="Poales" pageId="8" pageNumber="61" rank="species" species="rubens">
<emphasis italics="true" pageId="8" pageNumber="61">B. rubens</emphasis>
</taxonomicName>
