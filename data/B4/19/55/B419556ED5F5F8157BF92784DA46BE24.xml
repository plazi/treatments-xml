</taxonomicName>
, 
<taxonomicName class="Rosopsida" family="Rubiaceae" genus="Coprosma" higherTaxonomySource="GBIF" kingdom="Plantae" lsidName="" order="Gentianales" pageId="8" pageNumber="41" phylum="Magnoliophyta" rank="genus">
<emphasis italics="true" pageId="8" pageNumber="41">Coprosma</emphasis>
</taxonomicName>
, 
<taxonomicName class="Magnoliopsida" family="Rhizophoraceae" genus="Crossostylis" higherTaxonomySource="GBIF,CoL" kingdom="Plantae" lsidName="" order="Malpighiales" pageId="8" pageNumber="41" phylum="Tracheophyta" rank="genus">
