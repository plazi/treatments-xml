<taxonomicName class="Magnoliopsida" family="Aquifoliaceae" genus="Ilex" higherTaxonomySource="CoL" kingdom="Plantae" lsidName="" order="Aquifoliales" pageId="8" pageNumber="41" phylum="Tracheophyta" rank="genus">
<emphasis italics="true" pageId="8" pageNumber="41">Ilex</emphasis>
</taxonomicName>
, 
<taxonomicName class="Dicotyledoneae" family="Rutaceae" genus="Melicope" higherTaxonomySource="GBIF" kingdom="Plantae" lsidName="" order="Rutales" pageId="8" pageNumber="41" phylum="Angiospermae" rank="genus">
