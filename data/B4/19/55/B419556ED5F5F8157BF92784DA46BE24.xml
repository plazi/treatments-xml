<taxonomicName class="Magnoliopsida" family="Rubiaceae" genus="Psychotria" higherTaxonomySource="CoL" kingdom="Plantae" lsidName="" order="Gentianales" pageId="8" pageNumber="41" phylum="Tracheophyta" rank="genus">
