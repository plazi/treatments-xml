<emphasis id="B941EACA0F20FF82FF1F66A1CC13549A" bold="true" box="[151,1059,1472,1498]" pageId="3" pageNumber="502">
Tribe 
<taxonomicName id="4C354D5B0F20FF82FF6A66A1C96C549A" authorityName="Portevin" authorityYear="1929" box="[226,348,1472,1498]" class="Insecta" family="Dytiscidae" kingdom="Animalia" order="Coleoptera" pageId="3" pageNumber="502" phylum="Arthropoda" rank="tribe" tribe="Hygrotini">Hygrotini</taxonomicName>
<treatmentCitation id="0A9410C90F20FF82FEEB66A1CA66549A" author="Portevin" box="[355,598,1472,1498]" page="180" pageId="3" pageNumber="502" year="1929">
