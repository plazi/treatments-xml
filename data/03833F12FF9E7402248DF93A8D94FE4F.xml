<taxonomicName id="4C2AF587FF9E740527EFF93A8C95F94B" box="[1013,1176,1676,1702]" class="Insecta" family="Asilidae" kingdom="Animalia" order="Diptera" pageId="3" pageNumber="12" phylum="Arthropoda" rank="subFamily" subFamily="Laphystiinae">Laphystiinae</taxonomicName>
