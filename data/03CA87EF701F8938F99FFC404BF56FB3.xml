<quantity id="4C9B9B1C701F8938F9E3FB544E7E6DCE" box="[235,292,1248,1272]" metricMagnitude="1" metricUnit="m" metricValue="2.0" pageId="61" pageNumber="62" unit="m" value="20.0">20 m</quantity>
(living 
<quantity id="4C9B9B1C701F8938F874FB544E8F6DCE" box="[380,469,1248,1272]" metricMagnitude="1" metricUnit="m" metricValue="1.3" metricValueMax="1.8" metricValueMin="0.8" pageId="61" pageNumber="62" unit="m" value="13.0" valueMax="18.0" valueMin="8.0">8–18 m</quantity>
