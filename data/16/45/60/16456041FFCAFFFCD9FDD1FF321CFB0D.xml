<taxonomicName authorityName="Linnaeus" authorityYear="1767" box="[1178,1249,266,289]" class="Insecta" family="Codonaceae" genus="Codon" higherTaxonomySource="CoL" kingdom="Plantae" order="Boraginales" pageId="1" pageNumber="27" phylum="Arthropoda" rank="genus">
