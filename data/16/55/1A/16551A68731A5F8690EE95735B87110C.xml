<pageBreakToken pageId="null" pageNumber="739" start="start">Artengruppe</pageBreakToken>
der 
<taxonomicName authority="L." class="Insecta" family="Hesperiidae" genus="Viola" kingdom="Animalia" order="Lepidoptera" pageId="null" pageNumber="739" phylum="Arthropoda" rank="species" species="hirta">
Viola 
<normalizedToken originalValue="hírta" pageId="null" pageNumber="739">hirta</normalizedToken>
<authorityName pageId="null" pageNumber="739">L.</authorityName>
</taxonomicName>
