<number box="[631,646,692,716]" pageId="7" pageNumber="276" value="4.0">4</number>
</figureCitation>
) resembles 
<taxonomicName box="[782,945,692,717]" class="Insecta" family="Coccinellidae" genus="Chnoodes" higherTaxonomySource="GBIF" kingdom="Animalia" order="Coleoptera" pageId="7" pageNumber="276" phylum="Arthropoda" rank="species" species="brasiliensis">
