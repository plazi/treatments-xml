<quantity box="[1183,1255,1697,1722]" metricMagnitude="-2" metricUnit="m" metricValue="6.35" metricValueMax="10.16" metricValueMin="2.54" pageId="110" pageNumber="111" unit="in" value="2.5" valueMax="4.0" valueMin="1.0">1–4 in</quantity>
