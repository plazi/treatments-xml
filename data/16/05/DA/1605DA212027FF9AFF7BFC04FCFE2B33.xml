<taxonomicNameLabel box="[920,1009,1627,1651]" pageId="65" pageNumber="66" rank="species">sp. nov.</taxonomicNameLabel>
</emphasis>
; 
<taxonomicName authority="Tang &amp; Li, 2010" authorityName="Tang &amp; Li" authorityYear="2010" box="[1024,1146,1627,1651]" class="Arachnida" family="Thomisidae" genus="Spilosynema" kingdom="Animalia" order="Araneae" pageId="65" pageNumber="66" phylum="Arthropoda" rank="species" species="mancum" status="sp. nov.">
