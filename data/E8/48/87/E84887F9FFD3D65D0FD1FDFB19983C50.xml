Malay Peninsula, 
<collectingRegion box="[1867,1986,1423,1448]" country="Indonesia" name="Sumatera Utara" pageId="5" pageNumber="696">Sumatra</collectingRegion>
, Borneo, 
<collectingRegion box="[2120,2182,1423,1448]" country="Indonesia" name="Jawa Timur" pageId="5" pageNumber="696">Java</collectingRegion>
