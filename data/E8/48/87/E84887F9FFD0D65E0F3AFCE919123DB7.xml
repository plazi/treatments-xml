<paragraph blockId="6.[2002,2597,1021,1449]" lastBlockId="6.[1389,2598,1456,2990]" pageId="6" pageNumber="697">
<emphasis bold="true" box="[2002,2178,1337,1370]" pageId="6" pageNumber="697">Distribution.</emphasis>
New 
<collectingCountry box="[2283,2386,1337,1370]" name="Guinea-Bissau" pageId="6" pageNumber="697">Guinea</collectingCountry>
, Admiralty Is (
<collectingRegion box="[2016,2117,1381,1410]" country="Papua New Guinea" name="Manus" pageId="6" pageNumber="697">Manus</collectingRegion>
), 
<collectingCountry box="[2161,2490,1381,1410]" name="Papua New Guinea" pageId="6" pageNumber="697">Bismarck Archipelago</collectingCountry>
(
<collectingRegion country="Papua New Guinea" name="West New Britain" pageId="6" pageNumber="697">New Britain</collectingRegion>
