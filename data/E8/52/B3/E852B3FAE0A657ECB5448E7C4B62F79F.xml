<geoCoordinate degrees="35" direction="north" minutes="50" orientation="latitude" precision="925" value="35.833332">35°50'N</geoCoordinate>
, 
<geoCoordinate degrees="51" direction="east" minutes="05" orientation="longitude" precision="925" value="51.083332">51°05'E</geoCoordinate>
