<emphasis italics="true" pageId="27" pageNumber="150">Berberis</emphasis>
</taxonomicName>
, 
<taxonomicName class="Liliopsida" family="Poaceae" genus="Calamagrostis" higherTaxonomySource="GBIF" kingdom="Plantae" lsidName="Calamagrostis" order="Poales" pageId="27" pageNumber="150" phylum="Magnoliophyta" rank="genus">
<emphasis italics="true" pageId="27" pageNumber="150">Calamagrostis</emphasis>
</taxonomicName>
, 
<taxonomicName class="Ginkgoopsida" family="Ephedraceae" genus="Ephedra" higherTaxonomySource="GBIF" kingdom="Plantae" lsidName="Ephedra" order="Ephedrales" pageId="27" pageNumber="150" phylum="Ginkgophyta" rank="genus">
<emphasis italics="true" pageId="27" pageNumber="150">Ephedra</emphasis>
