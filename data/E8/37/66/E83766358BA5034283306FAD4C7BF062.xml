<emphasis italics="true" pageId="27" pageNumber="150">Festuca</emphasis>
</taxonomicName>
, 
<taxonomicName class="Liliopsida" family="Poaceae" genus="Jarava" higherTaxonomySource="GBIF" kingdom="Plantae" lsidName="Jarava" order="Poales" pageId="27" pageNumber="150" phylum="Magnoliophyta" rank="genus">
