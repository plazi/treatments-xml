<taxonomicName id="4C0E4D72FFE6943BB38D9960FD57FACD" authority="de Saussure" authorityName="de Saussure" authorityYear="1853" box="[151,729,1287,1313]" class="Insecta" family="Vespidae" genus="Polistes" higherTaxonomySource="GBIF" kingdom="Animalia" order="Hymenoptera" pageId="12" pageNumber="313" phylum="Arthropoda" rank="species" species="instabilis" subGenus="Aphanilopterus">
